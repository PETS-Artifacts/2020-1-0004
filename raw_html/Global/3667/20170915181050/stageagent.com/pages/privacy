        <script src="/public/assets/js/vendor/jquery-coookie.js"></script>

        <script src="/public/assets/js/stageConfigs.js"></script>

        <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.4.0/moment.min.js"></script>

        <script src="/public/assets/js/vendor/toastr.min.js"></script>

        <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>

        <script src="/public/assets/js/main.js"></script>

        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-rc.0/angular.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-rc.0/angular-cookies.min.js"></script>

    <script src="/bundles/app?v=_5_sry8oXfmkiXBYDhJKyyYlQ6JBTXxKKw4Jw8EYn841"></script>

        <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-moment/0.8.3/angular-moment.min.js"></script>

        <script src="//cdnjs.cloudflare.com/ajax/libs/angular-strap/2.1.5/angular-strap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/angular-strap/2.1.2/angular-strap.tpl.min.js"></script>

        <script src="/public/assets/libs/select2/select2.min.js"></script>
    <script src="/public/assets/libs/select2/select2Sortable.js"></script>

    


    <script type="text/javascript">
        var autocomplete = $(".autocomplete-search").select2({
            allowClear: true,
            minimumInputLength: 3,
            ajax: {
                quietMillis: 300,
                type: "POST",
                url: function() {
                    return "/api/search/guides";
                },
                data: function(term, page) {
                    return {
                        q: term
                    };
                },
                dataType: 'json',
                results: function(data, page) {
                    return {
                        results: [
                            { name: "Shows", children: data.results.shows.items },
                            { name: "Characters", children: data.results.characters.items },
                            { name: "Songs", children: data.results.songs.items },
                            { name: "Monologues", children: data.results.monologues.items },
                            { name: "Writers", children: data.results.authors.items }
                        ],
                        text: 'name'
                    };
                }
            },
            formatResult: formatResult,
            formatSelection: formatResult,
            dropdownCssClass: "bigdrop",
            id: function(obj) {
                return obj.id;
            }
        });

        autocomplete.on("select2-selecting", function (e) {
            var item = e.object;
            var goToUrl = "";

            if (item.id.indexOf('shows') > -1)
                goToUrl = "/" + item.overviewUrl;

            else if (item.id.indexOf('characters') > -1)
                goToUrl = "/" + item.characterOverviewUrl;

            else if (item.id.indexOf('songs') > -1)
                goToUrl = "/" + item.basicsUrl;

            else if (item.id.indexOf('monologues') > -1)
                goToUrl = "/" + item.basicsUrl;

            else if (item.id.indexOf('authors') > -1)
                goToUrl = "/" + item.overviewUrl;

            window.location = goToUrl;
        });

        function formatResult(item) {
            if (item.children)
                return item.name;

            var content = "";
            if (item.id.indexOf('shows') > -1)
                content = formatShow(item);

            else if (item.id.indexOf('characters') > -1)
                content = formatCharacter(item);

            else if (item.id.indexOf('songs') > -1)
                content = formatSong(item);

            else if (item.id.indexOf('monologues') > -1)
                content = formatMonologue(item);

            else if (item.id.indexOf('authors') > -1)
                content = formatWriter(item);

            return '<div class="guide">' + content + '</div>';
        };

        function formatShow(show) {
            var image = '<div class="img"><img src="{img-src}" /></div>'.replace('{img-src}', show.logo);
            var content = '<div class="content"><p>{title} - {category} </p></div>'.replace('{title}', show.title).replace('{category}', show.category);
            return image + content;
        };

        function formatCharacter(character) {
            var image = '<div class="img"><img src="{img-src}" /></div>'.replace('{img-src}', character.showLogo);
            var content = '<div class="content"><p>{name}<br/><small>{showTitle}</small></p></div>'
                .replace('{name}', character.name)
                .replace('{showTitle}', character.showTitle);
            return image + content;
        };

        function formatSong(song) {
            var image = '<div class="img"><img src="{img-src}" /></div>'.replace('{img-src}', song.showLogo);
            var content = '<div class="content"><p>{title}<br/><small>{showTitle}</small></p></div>'
                .replace('{title}', song.title)
                .replace('{showTitle}', song.showTitle);
            return image + content;
        };

        function formatMonologue(m) {
            var image = '<div class="img"><img src="{img-src}" /></div>'.replace('{img-src}', m.showLogo);
            var content = '<div class="content"><p>{contentClean}...<br/><small>{characterName}</small></p></div>'
                .replace('{contentClean}', m.contentClean.substr(0, 30))
                .replace('{characterName}', m.characterName);
            return image + content;
        };

        function formatWriter(w) {
            var image = '<div class="img"><img src="{img-src}" /></div>'.replace('{img-src}', w.imageUrl);
            var content = '<div class="content"><p>{name}</p></div>'
                .replace('{name}', w.name);
            return image + content;
        };

    </script>
    <script>
    $(function () {
        var activeTab = $('[href=' + location.hash + ']');
        activeTab && activeTab.tab('show');
    });
    </script>
