<script language="javascript">

var timeoutID;
var onSlide=1;
var slideCount=2;
var inSlide=false;
var slideWidth = 690;
var onTab=1;
var autoSlideCount=0;



$(document).ready(function() {
	if(e("slideCount")){
		slideCount=e("slideCount").value;
		autoSlide();
	}

	if(e("onform")){
		if(e("onform").value=="sendmedicmail") {
			countryChange(e("country"));
			e("state").value=e("stateHold").value;
		}
	}
	
	if (typeof bgv != "undefined"){
		bgv.dateFormat="dmy";
	}

	$(".bgSelectPlaceholder").each(function(){bgSelectPlaceholder(this)});
	$(".bgSelectPlaceholder").blur(function(){bgSelectPlaceholder(this)});
	$(".bgSelectPlaceholder").focus(function(){this.style.color="#444444";});



	$(function() {
		var input = document.createElement("input");
		if(("placeholder" in input)==false) { 
			$("[placeholder]").focus(function() {
				var i = $(this);
				if(i.val() == i.attr("placeholder")) {
					i.val("").removeClass("placeholder");
					if(i.hasClass("password")) {
						i.removeClass("password");
						this.type="password";
					}			
				}
			}).blur(function() {
				var i = $(this);	
				if(i.val() == "" || i.val() == i.attr("placeholder")) {
					if(this.type=="password") {
						i.addClass("password");
						this.type="text";
					}
					i.addClass("placeholder").val(i.attr("placeholder"));
				}
			}).blur().parents("form").submit(function() {
				$(this).find("[placeholder]").each(function() {
					var i = $(this);
					if(i.val() == i.attr("placeholder"))
						i.val("");
				})
			});
		}
	});


});


function bgSelectPlaceholder(el){
	if (el.selectedIndex==0 && document.activeElement!=el){
		el.style.color="#b7c1d0";}
	else{
		el.style.color="#444444";}
}


function countryChange(el){
	var i;
	var hold=":";
	e("state").innerHTML="";
	try{
		hold=e("state"+ el.value).innerHTML.split("|");
	}

	catch(err){
		hold="";
	}
	if(hold=="") {
		e("stateHold").value="";
		e("state").style.display="none";
		e("stateHold").style.display="inline";		
	}
	else{
		for (i=0; i<hold.length; i++){
			e("state").options[i]=new Option(hold[i].split(":")[1], hold[i].split(":")[0]);
		}
		e("state").style.display="inline";
		e("stateHold").style.display="none";		
	}
}





function changeSlide(tempSlide)
{
	if (inSlide || tempSlide==onSlide) return;
	inSlide=true;
	autoSlideOff();
	var oldSlide =onSlide;
	
	if(tempSlide==0)
		{if(onSlide==slideCount) onSlide=1; else onSlide=onSlide+1;}
	else
		{onSlide=tempSlide;}

	e("slide" + onSlide).style.display="block";
	$("#slide" + oldSlide).fadeOut(1500,function(){
		$("#slide" + onSlide).css("z-index",3).show();
		$("#slide" + oldSlide).css("z-index",1).show();
		e("slide" + oldSlide).style.display="none";	 
	});

	inSlide=false;

}



function changeSlide_SlideLeft(tempSlide)
{
	if (inSlide || tempSlide==onSlide) return;
	inSlide=true;
	autoSlideOff();
	var oldSlide =onSlide;

	
	if(tempSlide==0)
		{if(onSlide==slideCount) onSlide=1; else onSlide=onSlide+1;}
	else
		{onSlide=tempSlide;}

/*
	$("#p" + oldSlide).fadeOut(400, function(){});
	$("#b" + oldSlide).toggleClass("on off");
	e("h"  + oldSlide).style.display="none";
	$("#b" + onSlide).toggleClass("on off");
	e("h"  + onSlide).style.display="block";
*/

	$('#slide' + onSlide + ', #slide' + oldSlide).animate({
	left: '+=' + (-slideWidth)
	}, 1000, function() {
		$('#p' + onSlide).fadeIn(400, function(){});
		e("slide" + (oldSlide)).style.left= (slideWidth*2) + "px";
		 
		inSlide=false;
  });
}



function autoSlide()
{
  timeoutID = window.setTimeout(doAutoSlide, 4500);
}

function doAutoSlide()
{
	changeSlide(0);
	autoSlideCount=autoSlideCount+1;

	if(autoSlideCount==(slideCount-1)) 
		autoSlideOff();
	else
		timeoutID = window.setTimeout(doAutoSlide, 6000);
}

function autoSlideOff()
{
  window.clearTimeout(timeoutID);
}



function checkMedEmail(){

	bgv.error="";

	bgv.check(bgv.text(e("lastName").value), "lastName", "Please enter your surname/family name.")
	bgv.check(bgv.text(e("firstName").value), "firstName", "Please enter your first name.")
	bgv.check(bgv.int(e("mdob").value, 1, 12), "mdob", "Please select a vaid birth month.")
	bgv.check(bgv.int(e("ddob").value, 1, 31), "ddob", "Please select a vaid birth day.")
	bgv.check(bgv.int(e("ydob").value, 1900, 2014), "ydob", "Please select a vaid birth year.")
	bgv.check(bgv.email(e("email").value), "email", "Please enter a valid email address.")
	bgv.check(bgv.text(e("country").value), "country", "Please select a country.")
	bgv.check(bgv.text(e("body").value), "body", "Please enter a question for a DAN medic.")

	if(getSelectedValue("medDisclaimer")==""){
		bgv.error="You must check the box that you agree with the DAN Medical Disclaimer before you submit your question."
		e("medDisclaimerBox").style.border="2px dashed red";
	}
	else{
		e("medDisclaimerBox").style.border="2px dashed transparent";	
	}


	if (bgv.error!=""){
		alert(bgv.error);
		if(e(bgv.focus)) e(bgv.focus).focus();
		return false;
	}
	else
	{
		e("myform").submit();
	}


}




function checkEmail(){

	if(!validateEmail(e("email").value)) {
		alert("Please enter a valid email address.");
		return false;
	}

	if((e("name").value)=="") {
		alert("Please enter your name.");
		return false;
	}

	if((e("subject").value)=="") {
		alert("Please select a category for your email to DAN.");
		return false;
	}

	if((e("body").value)=="") {
		alert("Please enter a message to send to DAN.");
		return false;
	}

	e("myform").submit();
}



function checkLogoRequest(){

	if(!validateEmail(e("email").value)) {
		alert("Please enter a valid email address.");
		return false;
	}

	if((e("contactName").value)=="") {
		alert("Please enter your name.");
		return false;
	}


	if((e("company").value)=="") {
		alert("Please enter your company name.");
		return false;
	}



	if((e("phone").value)=="") {
		alert("Please enter your phone number.");
		return false;
	}



	if((e("website").value).replace("http://","")=="") {
		alert("Please enter your website address.");
		return false;
	}


	if((e("body").value)=="") {
		alert("Please explain how you will be using the DAN logos.");
		return false;
	}

	e("myform").submit();
}



function validateEmail(email) 
{ 
		var re= /[a-zA-Z0-9!#$%&'*+/=?^_`{|}~-]+(?:\.[a-zA-Z0-9!#$%&'*+/=?^_`{|}~-]+)*@(?:[a-zA-Z0-9](?:[a-zA-Z0-9-]*[a-zA-Z0-9])?\.)+(?:[a-zA-Z]{2,3}|info|mobi|name|aero|jobs|museum)\b/

	if (email.search(re)==-1) 
		return false 
	else 
		return true;
}


</script>

