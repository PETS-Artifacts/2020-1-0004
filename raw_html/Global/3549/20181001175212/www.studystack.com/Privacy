  window.fbAsyncInit = function() {
      var fbConnectArea = document.getElementById( 'faceBookConnectArea' );
      if ( fbConnectArea != null ) {
             fbConnectArea.style.display = 'block';
      }

      FB.init({
        appId      : '52462214664',
        channelUrl : 'https://www.studystack.com/fbChannel.html', // Channel File
        status     : true, // check login status
        cookie     : true, // enable cookies to allow the server to access the session
        xfbml      : true, // parse XFBML
        oauth      : true 
      });

      FB.Event.subscribe('auth.login', function(response) {
         top.location = '/fbConnector.jsp';
      });


    FB.getLoginStatus(function(response) {
        if (response.status === 'connected') {
            top.location = '/fbConnector.jsp?originalDestination=' + top.location ;
        }
    }  );


   if ( typeof facebookInitPage == 'function' ) {
      facebookInitPage();
   }


  };

  // Load the SDK Asynchronously
  (function(d){
     var js, id = 'facebook-jssdk'; if (d.getElementById(id)) {return;}
     js = d.createElement('script'); js.id = id; js.async = true;
     js.src = "//connect.facebook.net/en_US/all.js";
     d.getElementsByTagName('head')[0].appendChild(js);
   }(document));
</script>



