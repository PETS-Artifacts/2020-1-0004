        function subscribeMe(list) {
            $.post("/index.php?option=com_jnews&act=urlsubscribe&name=" + $("#subscriber_name").val() + "&receive_html=1&email=" + $("#subscriber_email").val() + "&userid=" + $("#subscriber_id").val() + "&listid=" + list + "&passwordA=66FTrKHl", function(data) {
                $('#email_subscription').hide();
                $('#email_subscription_status').show();
                setTimeout(function() {
                    jQuery("#subscribe-content").hide();
                    jQuery('#subscriber_name').val("");
                    jQuery('#subscriber_email').val("");
                    jQuery('#subscriber_verification').val("");
                    jQuery('#email_subscription').show();
                    jQuery('#email_subscription_status').hide();
                }, 30000);
            });
        }

        function subscribeMealert(list) {
            $.post("/index.php?option=com_jnews&act=urlsubscribe&name=" + $("#alert_subscriber_name").val() + "&receive_html=1&email=" + $("#alert_subscriber_email").val() + "&userid=" + $("#subscriber_id").val() + "&listid=" + list + "&passwordA=66FTrKHl", function(data) {
                $('#getalerts_subscription').hide();
                $('#alert_subscription_status').show();
                jQuery('#getalerts_subscription').hide();
                jQuery('#alert_subscription_status').show();
                setTimeout(function() {
                    jQuery("#getalerts-content").hide();
                    jQuery('#alert_subscriber_name').val("");
                    jQuery('#alert_subscriber_email').val("");
                    jQuery('#alert_verification').val("");
                    jQuery('#getalerts_subscription').show();
                    jQuery('#alert_subscription_status').hide();
                }, 30000);
            });
        }

