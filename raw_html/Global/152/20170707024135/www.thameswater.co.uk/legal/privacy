    <script>
        $(document).ready(function () {

            //Removing formset to fix button position
            $(".pager").parent().each(function () {
                $(this).unwrap();
            });

            //Added day month year
            $(".form-control-veryshort").each(function () {
                var selectType = $(this).attr("name");
                if (selectType.indexOf("Day") > 0) {
                    $(this).find('option').first().val('-1').text('DD');
                }
                if (selectType.indexOf("Month") > 0) {
                    $(this).find('option').first().val('-1').text('MM'); $(this).next().css("padding-right", "0px");
                }
                if (selectType.indexOf("Year") > 0) {
                    $(this).find('option').first().val('-1').text('YYYY');
                }

                //Validation
                $(this).change(function (e) {
                    var fieldId = $(this).attr("id"); //Id of the current control
                    fieldId = fieldId.substring(0, fieldId.lastIndexOf('__')); //filtering field id
                });
            });

            if ($("div.df:visible")) {
                $(".df .form-control").on("focus blur change", function () {

                    //if ($(this).closest('.df').hasClass("required-field") || $(".df").hasClass("is-required")) {
                    var action1 = $(this).closest('.df').find('.form-control:eq(0)').val();
                    var action2 = $(this).closest('.df').find('.form-control:eq(1)').val();
                    var action3 = $(this).closest('.df').find('.form-control:eq(2)').val();
                    if (action1 == "-1" && action2 == "-1" && action3 == "-1") {
                        $(this).closest('.df').removeClass("has-error").removeClass("has-success");
                        $(this).closest('.df').find("span.help-block").text("");
                    }
                    else if (action1 < "0" || action2 < "0" || action3 < "0") {
                        $(this).closest('.df').addClass("has-error").removeClass("has-success");
                    }
                    else {
                        $(this).closest('.df').find("span.help-block").text("");
                        var dateString = action1 + "/" + action2 + "/" + action3;
                        if ($(this).closest('.df').hasClass("move-home")) {
                            if (!GetValidDate(action1, action2, action3)) {
                                $(this).closest('.df').removeClass("has-success").addClass("has-error");
                                $(this).closest('.df').find("span.help-block").text("The field contains an invalid value");
                            }
                            else if (CompareMoveDate(dateString) === "true") {
                                $(this).closest('.df').removeClass("has-success").addClass("has-error");
                                $(this).closest('.df').find("span.help-block").text("The date you provide must not be more than 28 days in the future");
                            }
                            else {
                                $(this).closest('.df').removeClass("has-error").addClass("has-success");
                            }
                        }
                        else {
                            if (!GetValidDate(action1, action2, action3)) {
                                $(this).closest('.df').removeClass("has-success").addClass("has-error");
                                $(this).closest('.df').find("span.help-block").text("The field contains an invalid value");
                            }
                            else if (CompareDate(dateString, 'cd') === "true") {
                                $(this).closest('.df').removeClass("has-success").addClass("has-error");
                                $(this).closest('.df').find("span.help-block").text("Date must not be in future");
                            }
                            else {
                                $(this).closest('.df').removeClass("has-error").addClass("has-success");
                            }
                        }
                    }
                    //}
                });
            }

            $('.form-group-with-checkboxes .checkbox input').on("click", function () {
                if ($(this).prop('checked')) {
                    $(this).closest('.form-group-with-checkboxes').removeClass('has-error').addClass('has-success');
                } else {
                    $(this).closest('.form-group-with-checkboxes').addClass('has-error').removeClass('has-success');
                }
            });

            function GetValidDate(dd, mm, yyyy) {

                var dateString = dd + "/" + mm + "/" + yyyy;

                // Parse the date parts to integers
                var parts = dateString.split("/");
                var day = parseInt(parts[0], 10);
                var month = parseInt(parts[1], 10);
                var year = parseInt(parts[2], 10);

                // Check the ranges of month and year
                if (year < 1000 || year > 3000 || month == 0 || month > 12)
                    return false;

                var monthLength = [31, 28, 31, 30, 31, 30, 31, 31, 30, 31, 30, 31];

                // Adjust for leap years
                if (year % 400 == 0 || (year % 100 != 0 && year % 4 == 0))
                    monthLength[1] = 29;

                // Check the range of the day
                return day > 0 && day <= monthLength[month - 1];
            }

            function CompareDate(startdate, enddate) {//'25/02/1985';
                startdate = process(startdate);
                if (enddate === 'cd') {
                    var today = new Date();
                    var dd = today.getDate();
                    var mm = today.getMonth() + 1; //January is 0!

                    var yyyy = today.getFullYear();
                    if (dd < 10) {
                        dd = '0' + dd
                    }
                    if (mm < 10) {
                        mm = '0' + mm
                    }
                    var today = dd + '/' + mm + '/' + yyyy;
                    enddate = process(today);
                }
                else {
                    enddate = process(enddate);
                }

                if (startdate > enddate) {
                    return "true";
                }
                return "false";
            }
            function process(date) {
                var parts = date.split("/");
                var date = new Date(parts[1] + "/" + parts[0] + "/" + parts[2]);
                return date.getTime();
            }

        });
    </script>

    



