document.getElementById('p_lt_MobileFooterZone_CRC_CTADisplay_rptCTA_ctl00_ctl00_regExEmailAddress').dispose = function() {
    Array.remove(Page_Validators, document.getElementById('p_lt_MobileFooterZone_CRC_CTADisplay_rptCTA_ctl00_ctl00_regExEmailAddress'));
}
//]]>
</script>
</form>
</body>
</html>
