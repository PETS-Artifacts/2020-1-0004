        <input name="p$lt$DonateBarZone$CRC_DonateBar$DonationAmount" type="text" id="p_lt_DonateBarZone_CRC_DonateBar_DonationAmount" class="donate-bar-textbox" min="0" step="5" placeholder="$ Amount" />
        <input value="single" name="p$lt$DonateBarZone$CRC_DonateBar$DonationType" type="radio" id="rbSingleDonation" class="radio-btn" /><label class="radio-btn" for="rbSingleDonation">One Time</label>
        <input value="monthly" name="p$lt$DonateBarZone$CRC_DonateBar$DonationType" type="radio" id="rbMonthlyDonation" class="radio-btn donate-bar-monthlychk" /><label class="radio-btn" for="rbMonthlyDonation">Monthly</label>
