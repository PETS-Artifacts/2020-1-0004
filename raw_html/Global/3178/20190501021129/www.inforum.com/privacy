        <script>

      var once = true;
      $('.search-menu').on('click', function(){
        var search_position = $('.search-menu').position();
        $('#search-popup').css('left', search_position.left - 134);
        $('#search-popup').fadeToggle("fast");
        $('.search-body input').focus();
        if ($('#search-popup').is(":visible")) {
          clickAwayEvent();
        }
      });

      function clickAwayEvent() {
        if (once) {
          once = false;
          $('.container').on('click', function() {
            // event.stopPropagation();
            $('.container').unbind('click');
            if ($('#search-popup').is(":visible")) {
              console.log("test");
              $('#search-popup').fadeToggle("fast");
              once = true;
            }
          });
        }
      }

      function searchFormSubmit(search_input) {
        if (search_input.val().length > 1) {
          let sanitizedSearchTerm = search_input.val().replace(/[^a-zA-Z0-9 ]/g, "")
          window.location.href = "/search/?q=" + encodeURIComponent(sanitizedSearchTerm);
          // console.log("Search term raw:\n", search_input.val());
          // console.log("Search term cleaned:\n", sanitizedSearchTerm);
        } else {
          alert("Please type in something to search");
          search_input.focus();
        }
      }

      // Desktop form
      $( "#search-popup form" ).submit(function( event ) {
        var search_input = $('#search-popup input');
        searchFormSubmit(search_input);
        event.preventDefault();
      });
      // Desktop/mobile form submit when clicking icon
      $( "form > .input-search-icon" ).on("click", function(event) {
        var search_input = $('#search-popup input');
        if (search_input.val().length < 1) { search_input = $('#search-popup-mobile input'); }
        searchFormSubmit(search_input);
        event.preventDefault();
      });
      // Mobile Form
      $( "#search-popup-mobile form" ).submit(function( event ) {
        var search_input = $('#search-popup-mobile input');
        searchFormSubmit(search_input);
        event.preventDefault();
      });
          </script>

    
