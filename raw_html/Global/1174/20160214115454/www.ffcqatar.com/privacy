<script language="javascript">
function closit(){
	document.getElementById("pop").style.display="none";
	}
$(document).ready(function() {
		var date = new Date();
date.setTime(date.getTime() + (6*24*60*60*1000)); //6days *24h*60min*60s*1000ms
		 if ($.cookie('modal_shown1') == null) {
        $.cookie('modal_shown1', 'yes', { expires: date, path: '/' });
        document.getElementById("pop").style.display="block";       
    }
	});
</script>
