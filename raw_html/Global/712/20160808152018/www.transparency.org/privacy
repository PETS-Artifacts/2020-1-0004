<script type="text/javascript">
$(function () {
    // NEWSLETTER SUBMIT
  $('#NewsletterForm').submit(function(e) {
        e.preventDefault();
        var target = "/handlers/subscriptions.php";
        var data  = $(this).serialize();
        // Launch modal
        $.ajax({
            type: 'POST',
            url: target,
            data: data,
            success: function(data) {
                $('#NewsLetterResponse').html(data.message);
                $('#NewsLetterModal').show();
                $('#NewsLetterModal').click(function() {$('#NewsLetterModal').hide()});
            },
            error: function() {
                alert('There was an error when submitting the form. Please try again.');
            },
            dataType: 'json'
        });
    });
});
</script>
<div id="NewsLetterModal" class="modal">
    <a class="jqmClose" href="#" onClick="$('#NewsLetterModal').hide();">close</a>
    <div><div id="NewsLetterResponse"></div></div>
</div>


