<script>
    function getCookie(name) {
        var value = "; " + document.cookie;
        var parts = value.split("; " + name + "=");
        if (parts.length == 2) return parts.pop().split(";").shift();
    }

    function hideLiteFrame() {
        var lite_frame = document.getElementById('lite_subscription_frame_container'),
            plane = document.getElementById('plane');
        if (lite_frame) {
            lite_frame.parentNode.removeChild(lite_frame);
        }
        plane.style.bottom = '3px';

        var main_desktop = document.getElementsByClassName('main_desktop');
        if (main_desktop.length === 1){
            main_desktop[0].className = main_desktop[0].className.replace(new RegExp('(?:^|\\s)'+ 'with-subscription' + '(?:\\s|$)'), '');
        }

        $('#bookingTabsBlock').removeClass('sub-frame-adapt');
        window.dispatchEvent(new Event('resize'));
    }

    function switchLiteFrameDisplay(frame) {
        var hide_lite_frame = getCookie('hide_lite_frame');
        if (hide_lite_frame) {
            hideLiteFrame();
        } else {
            var plane_block = document.getElementById('plane');
            frame.style.visibility = 'visible';
            frame.parentElement.style.display = 'block';
            plane_block.style.bottom = parseInt(frame.style.height) + parseInt(frame.getAttribute('plane-bottom-size')) + 'px';
            $('#bookingTabsBlock').addClass('sub-frame-adapt');
            window.dispatchEvent(new Event('resize'));
        }
    }

    function subs_onMessage(event) {
        try {
            var data = JSON.parse(event.data);
            if (data['action'] === 'set_frame_height') {
                var frame = document.getElementById(data['id']);
                if (frame && frame.tagName === 'IFRAME') {
                    frame.style.height = data['value'] + 'px';
                }
            } else if (data['action'] === 'close_lite_frame') {
                hideLiteFrame();
            }
        } catch(e) {}
    }

    window.addEventListener
        ? addEventListener('message', subs_onMessage)
        : attachEvent('onmessage', subs_onMessage);
</script>


