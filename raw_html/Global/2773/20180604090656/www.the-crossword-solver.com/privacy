<script type="text/javascript">
		function acceptCookies(){
		var expire = new Date();
		expire.setTime(expire.getTime()+(365*24*60*60*1000*10));
		document.cookie = "cookiesconsent=yes;expires=" + expire.toGMTString() +";path=/";
		document.cookie = "adscookies=yes;expires=" + expire.toGMTString() +";path=/";
		document.cookie = "analyticscookies=yes;expires=" + expire.toGMTString() +";path=/";
		document.getElementById("cookies").style.display = "none";
		}
		function manageCookies(){
			// Load Privacy pages
			document.location = "/privacy";
		}
</script>
