<script type="text/javascript">
	function saveCookies(){
		var expire = new Date();
		expire.setTime(expire.getTime()+(365*24*60*60*1000*10));
		var adsCookies = "no";
		var analyticsCookies = "no";

		if (document.getElementById("allowAdsCookies").checked) {adsCookies="yes";}
		if (document.getElementById("allowAnalyticsCookies").checked) {analyticsCookies="yes";}
		
		document.cookie = "cookiesconsent=yes;expires=" + expire.toGMTString() +";path=/";		// Always yes.  Simply states that preferences have been saved
		document.cookie = "adscookies=" + adsCookies + ";expires=" + expire.toGMTString() +";path=/";
		document.cookie = "analyticscookies=" + analyticsCookies + ";expires=" + expire.toGMTString() +";path=/";
		document.location.href = "/";

	}
</script>

