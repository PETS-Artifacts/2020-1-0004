        function getCookie(cname) {
          var results = document.cookie.match(new RegExp('(^|;) ?' + cname + '=([^;]*)(;|$)'));
          if (results) {
            return results[2];
          } else {
            return "";
          }
        }
        if (navigator.userAgent.indexOf("Win") != -1 && navigator.userAgent.indexOf('Safari') != -1 && navigator.userAgent.indexOf('Chrome') == -1) {
          var ieCookie = getCookie("ieRedirection"), currentUrl = window.location.href;
          if (ieCookie == "" || !ieCookie) {
            var domain = "";
            if (window.location.hostname.indexOf("localhost") > -1) {
              domain = "localhost";
            }
            else {
              var hostname = window.location.hostname;
              var domainExtension = hostname.substring(hostname.lastIndexOf("."));
              hostname = hostname.substring(0, hostname.lastIndexOf("."));
              var domainName = hostname.substring(hostname.lastIndexOf("."));
              domain = domainName + domainExtension;
            }

            document.cookie = "ieRedirection=true; domain=" + domain + "; path=/";
            document.cookie = "ieRedirectionUrl=" + currentUrl + "; domain=" + domain + "; path=/";
            window.open("/en/corporate/redirection", "_self");
          }
        }
      </script><!--[if lte IE 9]>
