      var mixpanel = window.mixpanel;
      mixpanel.register({'Source': 'CMS'});
      if (!mixpanel.get_property('Landing Page URL')) {
        mixpanel.register({'Landing Page URL': window.location.pathname});
        mixpanel.track('Landing Page Loaded');
        mixpanel.register({'Country': 'NZ'});
        mixpanel.people.set({'Country': 'NZ'});
      }

      window.loanWidgetReadyQueue = window.loanWidgetReadyQueue || [];
      window.loanWidgetReadyQueue.push(insertMixpanelDistinctIdIntoLoanWidgetForm);
    }
  });
  window.mixpanel.set_config({secure_cookie: true});

  function insertMixpanelDistinctIdIntoLoanWidgetForm() {
    /*jshint camelcase:false*/
    var widgetSignupForm = document.querySelector('form.widget-sign-up-form');
    if (widgetSignupForm) {
      var mixpanelDistinctId = document.createElement('input');
      mixpanelDistinctId.type = 'hidden';
      mixpanelDistinctId.name = 'mixpanel_distinct_id';
      mixpanelDistinctId.value = window.mixpanel.get_distinct_id();
      widgetSignupForm.appendChild(mixpanelDistinctId);
    }
  }
