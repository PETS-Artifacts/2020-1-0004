    var _runHandleLoggedIn = false;
    var _loginDestUrl = null;

    function pageLoad() {
        if (_runHandleLoggedIn) doHandleLoggedIn();
    }
    function handleLoggedIn(destUrl) {
        _runHandleLoggedIn = true;
        _loginDestUrl = destUrl;
    }
    function doHandleLoggedIn() {
        setTimeout("goToLoginPage()", 30);
    }
    function goToLoginPage() {
        parent.location.href = _loginDestUrl;
    }
