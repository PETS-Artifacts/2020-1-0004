            event.preventDefault();                    
            var $parent = $(this).parent();                    
            var $this = $(this);                    
            $parent.clone().addClass('positionAbsolute').appendTo("body");                                          
            var position = $parent.position();                    
            var curElementPosition = $(this).position();                    
            var top = position.top + 65;
          
            $(".positionAbsolute").css("top", top);
          
            $(".positionAbsolute .mobileExpand").hide();
          
            $(".positionAbsolute .mobileClose").show();
            $('body').animate({                        
              scrollTop: $($parent).offset().top - 90                    
            }, 500);                    
            $("body").append("<div class='overlay'></div>");
          
            TweenMax.to($('.positionAbsolute'), .5, {                        
                        height: "60%",                        
                        ease: Power9.easeInOut                                  
                        });                    
            $(".mobileClose, .overlay").click(function () {                        
              $('html, body').animate({                            
                scrollTop: $this.offset().top - 90                        
              }, 50);
              $(".overlay, .positionAbsolute").remove();
            });
         });
        });
