/* Leaving only existing ad units
*/
var adunitsOnPage = []; adunitsOnPage.push('gpt_970x90_728x90'); adunitsOnPage.push('gpt_300x250a'); adunitsOnPage.push('gpt_300x250b'); 
console.log('[GPT DEBUG] Existing ad IDs', adunitsOnPage);
var adUnitsNew = [];
for (var i in adUnits) {
    if (adunitsOnPage.indexOf(adUnits[i].code) >= 0) {
        adUnitsNew.push(adUnits[i]);
    }
}
adUnits = adUnitsNew;
console.log('[GPT DEBUG] Existing ad prebids', adUnits);


function fetchHeaderBids(forceRefresh = false) {

    console.log('[GPT DEBUG] fetchHeaderBids');

    function allBiddersBack() {
        var bidders = ['a9', 'prebid'];
        var allBiddersBack =
            bidders.map(function(bidder) {
                return biddersBack[bidder];
            })

            .filter(function(bool) {
                return bool;
            })

            .length === bidders.length;

        return allBiddersBack;
    }

    function headerBidderBack(bidder) {
        console.log('[GPT DEBUG] headerBidderBack', bidder);
        if (biddersBack.adserverRequestSent === true) {
            return;
        }
        if (bidder === 'a9') {
            apstag.setDisplayBids();
            biddersBack.a9 = true;
        } else if (bidder === 'prebid') {
            biddersBack.prebid = true;
        }
        if (allBiddersBack()) {
            sendAdserverRequest();
        }
    }

    function sendAdserverRequest() {                                        // called when both a9 and prebid bids are back (replacment for prebids initAdServer)
        if (biddersBack.adserverRequestSent === true) {
            return;
        }
        biddersBack.adserverRequestSent = true;

        console.log('[GPT DEBUG] All bids are back, sending Ad server request');

        googletag.cmd.push(function() {
            pbjs.que.push(function() {
                pbjs.setTargetingForGPTAsync();
                if (forceRefresh) {
                    console.log('[GPT DEBUG] Forcing refresh');
                    googletag.pubads().refresh();
                }

                var adsPresent = [];
                console.log('[GPT DEBUG] ready to call googletag.display', $('div.gpt-ad:not(.js-inview)'));
                $(document).ready(function() {
                    console.log('[GPT DEBUG] calling googletag.display', $('div.gpt-ad:not(.js-inview)'));
                    $.each(gptAds, function (key, value) {
                        if ($('div.gpt-ad:not(.js-inview)[data-id="' + key + '"]').length) {
                            adsPresent.push(value);
                            console.log('[GPT DEBUG] googletag.display(' + key + ')');
                            // this line is needed for the refresh method to work correctly
                            googletag.display(key);
                        }
                    });
                    console.log('[GPT DEBUG] googletag.refresh()', adsPresent);
                    googletag.pubads().refresh(adsPresent);
                });
            });
        });
    };


    var biddersBack = {
        a9: false,
        prebid: false,
        adserverRequestSent: false
    };

    // Request bids from Amazon A9
    apstag.fetchBids({
        slots: Object.keys(adUnits)
            .map(function(key) {
                return adUnits[key]
            })
            .map(function(slot) {
                return {
                    slotID: slot.code,
                    sizes: slot.sizes
                }
            }),
        timeout: PREBID_TIMEOUT
    }, function(bids) {
        console.info('[GPT DEBUG] A9 Bids back responses %o', bids);
        headerBidderBack('a9');
    });

    // Request bids from Prebid
    pbjs.requestBids({
        bidsBackHandler: function(bidResponses) {
            var targetingParams = pbjs.getAdserverTargeting();
            console.info('[GPT DEBUG] PBJS Bids back params %o', targetingParams);
            console.info('[GPT DEBUG] PBJS Bids back responses %o', bidResponses);
            console.timeEnd('[GPT DEBUG] pbjs.requestBids');
            headerBidderBack('prebid');                                         // here we had initAdserver();
        }
    });

    // Set timeout function
    console.time('[GPT DEBUG] pbjs.TIMEOUT');
    setTimeout(function() {
        console.info('[GPT DEBUG] TimeOUT!!! >> %s', PREBID_TIMEOUT);
        console.timeEnd('[GPT DEBUG] pbjs.TIMEOUT');
        sendAdserverRequest();
    }, PREBID_TIMEOUT);

}

function refreshBids() {
    fetchHeaderBids(true);
};
</script>
<script type='text/javascript'>
pbjs.que.push(function() {
    console.info('[GPT DEBUG] Set Send all bids!!');
    pbjs.enableSendAllBids();
    pbjs.setBidderSequence('random');
});

if (adUnits.length > 0) {
    console.time('[GPT DEBUG] pbjs.requestBids');

    pbjs.que.push(function() {
        console.info('[GPT DEBUG] PBJS Add units %o', adUnits);
        pbjs.addAdUnits(adUnits);
        pbjs.bidderSettings = {
            standard: {adserverTargeting: [
                {key: 'hb_bidder', val: function(bidResponse) {return bidResponse.bidderCode;}}, 
                {key: 'hb_adid', val: function(bidResponse) {return bidResponse.adId;}}, 
                {key: 'hb_pb', val: function(bidResponse) { var cpm = bidResponse.cpm;if (cpm <= 1.00) {return (Math.floor(cpm * 20) / 20).toFixed(2);} else if (cpm <= 5.00) {return (Math.floor(cpm * 10) / 10).toFixed(2);} else if (cpm <= 20.00) {return (Math.floor(cpm * 2) / 2).toFixed(2);} else {return '20.00';}}}, 
                {key: 'hb_size', val: function(bidResponse) {return bidResponse.size;}}
            ]}, 
            openx: {
                alwaysUseBid: true,
                adserverTargeting: [{
                    key: 'oxb', val: function(bidResponse) {
                        var bid;
                        if (bidResponse.cpm < 1) {
                            bid = ((Math.floor(bidResponse.cpm * 20) / 20) * 100).toFixed(0);
                        } else if (bidResponse.cpm < 5) {
                            bid = ((Math.floor(bidResponse.cpm * 10) / 10) * 100).toFixed(0);
                        } else if (bidResponse.cpm < 20) {
                            bid = ((Math.floor(bidResponse.cpm * 2) / 2) * 100).toFixed(0);
                        } else {
                            bid = '2000';
                        }
                        return bidResponse.width + 'x' + bidResponse.height + '_' + bid;
                    }
                }, {
                key: 'ox_pb_won',
                val: function(bidResponse) {
                    if (bidResponse.bidderCode.indexOf('openx') !== -1) {
                        return 'true';
                    }
                    return 'false';
                }
                }]
            }
        };
    fetchHeaderBids();
    });
} else {
    console.info('[GPT DEBUG] PBJS No ad units');
    fetchHeaderBids();
}
</script>
