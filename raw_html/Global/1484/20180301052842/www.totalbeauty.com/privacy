<script type="text/javascript" type="text/javascript">
  var tbStartTime = new Date().getTime();
  var tbPagedLoaded = 1;

  document.addEventListener("DOMContentLoaded", function(event) {
    var tloaded = new Date().getTime();
    tbPagedLoaded = Math.round((tloaded-tbStartTime)/1000);
  });
  window.addEventListener('unload', function(event) {
    var cTime = new Date().getTime();
    var eValue = Math.round((cTime-tbStartTime)/1000);
    if (eValue >= 30) { eValue = '30+'; } else if (eValue < 10) { eValue = '0' + eValue; }
    if (typeof(ga) != 'undefined') {
      ga('send', 'event', 'Pageview Duration', eValue, "DOMConteedLoaded in " + tbPagedLoaded + " second(s)", {'nonInteraction':1});
    }
  }, false);
</script>

