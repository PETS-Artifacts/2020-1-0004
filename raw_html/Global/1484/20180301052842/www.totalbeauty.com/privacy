    gptAds['gpt_300x250a'] = googletag.defineSlot('/4403/th/totalbeauty/ROS', [[300, 250], [300, 600], [300, 1050]], 'gpt_300x250a').addService(googletag.pubads()).setTargeting('pos', 'a');
    gptAds['gpt_300x250b'] = googletag.defineSlot('/4403/th/totalbeauty/ROS', [[300, 250], [300, 600], [300, 1050]], 'gpt_300x250b').addService(googletag.pubads()).setTargeting('pos', 'b');
