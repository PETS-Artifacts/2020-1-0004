    if (!(typeof(window.I11C) !== 'undefined' && window.I11C.Morph == 1)) {
        gptAds['adoop'] = googletag.defineOutOfPageSlot('/4403/th/totalbeauty/ROS', 'adoop').addService(googletag.pubads());
    } else {
        googletag.pubads().setTargeting('instartLogic', '1');
