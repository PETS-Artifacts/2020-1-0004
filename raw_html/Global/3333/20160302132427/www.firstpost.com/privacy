				FPAdJ = jQuery;
				var alert_html = "";
				var anchor_tag = "";
				if(data_url==''){
					anchor_tag = data_message;
				}else{
					anchor_tag = '<a href="'+data_url+'?utm_source=FP_Flashnews">'+data_message+'</a>';
				}

				alert_html += '<div class="contbox"><a href="javascript:void(0);" onCLick="$(\'#bottom_popup\').animate({right:\'-370px\',bottom:\'-150px\'});" class="close_bottom_popup"></a><p class=bptitle><span class=f_flash_icon></span> F<span class=dot>.</span><span>FLASH</span></p>';
