	function getAlert(){
		$.getJSON('/staticfiles/json/notify.json',
		function(data){
			var data_id, data_message, data_url,todaysdate,ent_time,datediffer,FP_Alert_Story_cookie;
			todaysdate = Math.round(new Date().getTime()/1000.0);
			if(data){
				for(var i=0;i<data.length;i++){
					data_id			= data[i]['id'];
					data_message	= data[i]['message'];
					data_url		= data[i]['url'];
					ent_time		= data[i]['ent_time'];
					datediffer = todaysdate - ent_time;
					FP_Alert_Story_cookie = FPgetcookie('FP_Alert_Story_'+data_id);
					if(data_id!=''){
						if(data_id!='' && datediffer<=900){
							if(FP_Alert_Story_cookie==data_id){
							}else{
								show_story_alert(data_id,data_message,data_url);
								 setTimeout( "$('#bottom_popup').animate({right:'10px',bottom:'10px'});",1000 );
								break;
							}
						}
					}
				}
			}
			setTimeout(function(){ $('#bottom_popup').animate({right:'-370px',bottom:'-150px'}); }, 60000);
		});
	}


	function show_story_alert(data_id,data_message,data_url) {
		if ( navigator.appName.indexOf("Microsoft")==-1 ){
			FP_Alert_Story = "";
			FP_Alert_Story = FPgetcookie('FP_Alert_Story_'+data_id);
