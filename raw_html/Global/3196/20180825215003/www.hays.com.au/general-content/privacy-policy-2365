		else if ((specialism_exists_check!="") && ((document.getElementById("Job_SearchlocationToSearch").value =="" ) || (document.getElementById("Job_SearchlocationToSearch").value =="Enter location" )) && (document.getElementById("Job_SearchisOnlyJobTitle") == null || document.getElementById("Job_SearchisOnlyJobTitle").checked == false )){
			if (document.getElementById("Job_Searchx_search").checked == false ){
			//alert("value of specialism check box is false");
			document.getElementById("Job_Search").removeChild(document.getElementById("Job_Searchpartialfields"));
			
			}
			else{
			//alert("Only Specialism");
			document.getElementById("Job_Searchpartialfields").value="(xSpecialism:" +specialism_exists_check;	
			document.getElementById("Job_Searchpartialfields").value+="|xSubSpecialism:" +specialism_exists_check + ")";
			
			}
		}
		else if ((specialism_exists_check!=null) && ((document.getElementById("Job_SearchlocationToSearch").value =="" ) || (document.getElementById("Job_SearchlocationToSearch").value =="Enter location" )) && (document.getElementById("Job_SearchisOnlyJobTitle") != null && document.getElementById("Job_SearchisOnlyJobTitle").checked == true )){
			//alert("Job Title and Specialism");
			document.getElementById("Job_Searchpartialfields").value="(JobTitle:" +escape(document.getElementById("Job_Searchq").value) + ")";
			if (document.getElementById("Job_Searchx_search").checked == false ){
			//alert("value of specialism check box is false but Job title is checked");
			
			}
			else {
			document.getElementById("Job_Searchpartialfields").value+=".(xSpecialism:" +specialism_exists_check;	
			document.getElementById("Job_Searchpartialfields").value+="|xSubSpecialism:" +specialism_exists_check + ")";
			
			}
		}
		else if ((specialism_exists_check!="") && ((document.getElementById("Job_SearchlocationToSearch").value !="" ) || (document.getElementById("Job_SearchlocationToSearch").value !="Enter location" )) && (document.getElementById("Job_SearchisOnlyJobTitle") == null || document.getElementById("Job_SearchisOnlyJobTitle").checked == false )){
			//alert("Specialism and Location");
			document.getElementById("Job_Searchpartialfields").value="(xHayslocation" + document.getElementById("Job_Searchlevel").value + ":" +document.getElementById("Job_Searchlocation_id").value + ")";
			if (document.getElementById("Job_Searchx_search").checked == false ){
			//alert("value of specialism check box is false but Location is entered");
			}
			else {
			document.getElementById("Job_Searchpartialfields").value+=".(xSpecialism:" +specialism_exists_check;	
			document.getElementById("Job_Searchpartialfields").value+="|xSubSpecialism:" +specialism_exists_check + ")";
			}
		}
		else if ((specialism_exists_check=="") && ((document.getElementById("Job_SearchlocationToSearch").value !="" ) || (document.getElementById("Job_SearchlocationToSearch").value !="Enter location" )) && (document.getElementById("Job_SearchisOnlyJobTitle") != null && document.getElementById("Job_SearchisOnlyJobTitle").checked == true )){
			//alert("Job Title and Location");
			document.getElementById("Job_Searchpartialfields").value+="(xHayslocation" + document.getElementById("Job_Searchlevel").value + ":" +document.getElementById("Job_Searchlocation_id").value + ")";
			document.getElementById("Job_Searchpartialfields").value+=".(JobTitle:" +escape(document.getElementById("Job_Searchq").value) + ")";
		}
		else {
			//alert("All values present");
			document.getElementById("Job_Searchpartialfields").value="(xHayslocation" + document.getElementById("Job_Searchlevel").value + ":" +document.getElementById("Job_Searchlocation_id").value + ")";
			document.getElementById("Job_Searchpartialfields").value+=".(JobTitle:" +escape(document.getElementById("Job_Searchq").value) + ")";
			if (document.getElementById("Job_Searchx_search").checked == false ){
			//alert("value of specialism check box is false but asll values exist");
			}
			else {
			document.getElementById("Job_Searchpartialfields").value+=".(xSpecialism:" +specialism_exists_check;	
			document.getElementById("Job_Searchpartialfields").value+="|xSubSpecialism:" +specialism_exists_check + ")";
			}
		}
	var CrossCheck = 0
		//alert("Cross Country = "+CrossCheck);
		if (CrossCheck == 1){
			//alert("Locale = "+ jLocale);
			document.getElementById("Job_Searchpartialfields").value+=".(CrossCountry:" +escape(jLocale) +")";
			if(document.getElementById("Job_Searchpartialfields").value.charAt(0) == '.')
			{
				document.getElementById("Job_Searchpartialfields").value=document.getElementById("Job_Searchpartialfields").value.substring(1);
			}
		}
		//alert("partialfield value = "+document.getElementById("Job_Searchpartialfields").value);
						
						}
							var qVal = $('#Job_Searchq').val();
							if(qVal == "")
								qVal = "hays";
							var locationHref = "https://m.hays.com.au/search/?q="+qVal;
							var subSpecialismValJS = "&s=%2BxReleaseDate";
							if (specialism_exists_check !=""){
								if (document.getElementById("Job_Searchx_search").checked == true ){
									locationHref = locationHref+"&specialismId="+specialism_exists_check+"&subSpecialismId="+ subSpecialismValJS;
								}
							}
							if($('#Job_SearchisOnlyJobTitle').prop('checked') == true){
								locationHref = locationHref + "&isOnlyJobTitle=Y";
							}
							if (CrossCheck == 1){
								locationHref = locationHref + "&CrossCountry="+jLocale;
							}
							location.href = locationHref+"&location="+$('input[name=locationToSearch]',form).val()+"&locationId="+$('input[name=location_id]',form).val()+"&locationLevel="+$('input[name=level]',form).val();
					}
				},
				rules: {
						q: {
							require_from_group: [1, '.require_group']
						} , 
						locationToSearch: {
							require_from_group: [1, '.require_group']
						}
				},
				messages : {
					q : 'Please fill out at least one of the above fields',					
					locationToSearch : 'Please fill out at least one of the above fields'
				},
				errorPlacement: function(error, element) {
					error.appendTo('#Job_Search_error');
				}
			});
				$("#Job_Searchq").autocomplete({

					/*source: ['london1','london2','london3'],*/
					source: function(request, response) {
						$.ajax({
							url: "/suggest",
							dataType: "jsonp",
							data: {
									outputFormat: "json",
									q: request.term,
									max: 10,
									site: "APAC_SANGAM_JOBS_COLL",
									client: "sangam_frontend_au",
									access: "p",
									format: "rich"
							},
							success: function(data) {
							response($.map(data.results, function(item) {
									item.name=item.name.replace("%20", " ");
									item.name=item.name.replace(/\+/g, ' ');
									return {
										label: item.name,
										value: item.name
									}
								}))
							}
							})
					},
								
						select: function(event, ui) {
						$('#Job_Searchq').attr('value', ui.item.value );
						
					},
					open: function() {
						$(this).removeClass("ui-corner-all").addClass("ui-corner-top");
					},
					close: function() {
						$(this).removeClass("ui-corner-top").addClass("ui-corner-all");
					}
					
				});

	
				$("#Job_SearchlocationToSearch").autocomplete({
					/*source: ['london1','london2','london3'],*/
					source: function(request, response) {
						$.ajax({
							url: "/cs/idcplg",
							dataType: "json",
							data: {
								outputFormat: "json",
								ResultCount: 12,
								IdcService: "SEARCH_LOCATIONS",
								location: request.term,
								domainId: "22",
								locationColumn :"default_description_2"
							},
							success: function(data) {
								Job_SearchlocationMap = data.result.resultsets.LOCATION_RESULT_LIST;
								response($.map(data.result.resultsets.LOCATION_RESULT_LIST, function(item) {
									return {
										label: item.LOCATION_DESC,
										value: item.LOCATION_DESC,
										id: item.LOCATION_ID,
										longitude: item.NE_LONGITUDE,
										latitude: item.NE_LATITUDE,
										level: item.LEVEL_NO
									}
								}))
							}
						})
					},
					minLength: 2,
					select: function(event, ui) {
						$('#Job_Searchlevel').attr('value', ui.item.level );
						$('#Job_Searchne_longitude').attr('value', ui.item.longitude );
						$('#Job_Searchne_latitude').attr('value', ui.item.latitude);
						$('#Job_Searchlocation_id').attr('value', ui.item.id);
					},
					open: function() {
						$(this).removeClass("ui-corner-all").addClass("ui-corner-top");
					},
					close: function() {
						$(this).removeClass("ui-corner-top").addClass("ui-corner-all");
					}
				});
 
			}
			else {
				window.setTimeout(HAYSsearchjobsJob_Search, 100);
			}
		}
	
		var Job_SearchlocationMap = null;
		HAYSsearchjobsJob_Search();

		//--><!]]>
</script>

			<div class="box">
					<section class="job-search">
						<h2 class="underline">Search for jobs</h2>	
						<form id="home_search_candGCS" class="GCSForm hays_form search_widget specialism_search_form" action="/search/">
							<ul class="form">
								<ul class="row">
									<li class="col col-3">
									<label>Enter Keywords / Reference No.</label>
									<div class="input gcs">								
