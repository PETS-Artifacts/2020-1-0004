<script>
	 function HAYSsearchjobshome_search_jobsGCSES(formName, searchURLPartial) {
								  $.watermark.hideAll();
								  var locationCountryAppender = '';
								  var searchForLocation = $('#'+formName+'locationToSearch').val();
								  locationCountryAppender = ', Australia';
								  if(searchForLocation == '')
								  {
									locationCountryAppender = '';
								  }
								  var CrossCheckGCS = 0;
								  var specialism_exists_checkGCS = "";
								  var subSpecialismValJS="";
								  $("#"+formName).validate({
										onkeyup: false,
										submitHandler: function(form) {
										var searchUrl = "https://m.hays.com.au"+searchURLPartial;
											var qVal = $('#'+formName+'q').val();
													var locationHrefGCS = searchUrl+"?q="+qVal;
													if (specialism_exists_checkGCS !=""){
														if (document.getElementById(formName+"x_search").checked == true ){
															locationHrefGCS = locationHrefGCS+"&specialismId="+specialism_exists_checkGCS+"&subSpecialismId="+ subSpecialismValJS;
														}
													}
													if (CrossCheckGCS == 1){
														locationHrefGCS = locationHrefGCS + "&CrossCountry=en-AUS";
													}
													if ($("#ESLat").val() != undefined && $("#ESLat").val() != 'undefined' && $("#ESLat").val() != ''){
														locationHrefGCS = locationHrefGCS + "&lat="+$("#ESLat").val();
													}
													if ($("#ESLong").val() != undefined && $("#ESLong").val() != 'undefined' && $("#ESLong").val() != ''){
														locationHrefGCS = locationHrefGCS + "&long="+$("#ESLong").val();
													}
													location.href = locationHrefGCS+"&location="+searchForLocation + locationCountryAppender;
										}			
									});
								}
			function includeJQueryAutocompleteForLocations() {
								  if (window.jQuery && jQuery.validator && jQuery.watermark && jQuery.isReady) {
				$("#home_search_candGCSlocationToSearch").autocomplete({
					/*source: ['london1','london2','london3'],*/
					source: function(request, response) {
						$.ajax({
							url: "/cs/idcplg",
							dataType: "json",
							data: {
								outputFormat: "json",
								ResultCount: 12,
								IdcService: "SEARCH_LOCATIONS",
								location: request.term,
								domainId: "22",
								locationColumn :"default_description_2"
							},
							success: function(data) {
								Job_SearchlocationMap = data.result.resultsets.LOCATION_RESULT_LIST;
								response($.map(data.result.resultsets.LOCATION_RESULT_LIST, function(item) {
									return {
										label: item.LOCATION_DESC,
										value: item.LOCATION_DESC
									}
								}))
							}
						})
					},
					minLength: 2,
					select: function(event, ui) {
						$('#Job_Searchlevel').attr('value', ui.item.level );
					},
					open: function() {
						$(this).removeClass("ui-corner-all").addClass("ui-corner-top");
					},
					close: function() {
						$(this).removeClass("ui-corner-top").addClass("ui-corner-all");
					}
				});
									}
									else {
										window.setTimeout(includeJQueryAutocompleteForLocations, 100);
									}
								}
								includeJQueryAutocompleteForLocations();
function includeJQueryAutocompleteForKeywords() {
			  if (window.jQuery && jQuery.validator && jQuery.watermark && jQuery.isReady) {
			  var sourceRecentHistory = [];
			  var recentSearchTerm = getRecentSearchCookie("recentSearch");
							if(recentSearchTerm != undefined){
								try {
									recentSearchTerm = decodeURIComponent(recentSearchTerm);
								} catch (ex) {
									console.log("Error in decoding");
								}
								if (recentSearchTerm) {
									var finalRS = [];
									finalRS = recentSearchTerm.split("|");
									sourceRecentHistory = finalRS;
								}
							}
			var sourceBlank = [];
				$("#home_search_candGCSq").autocomplete({
				/*source: ['london1','london2','london3'],*/
					source: function(request, response) {
							if(request.term.length == 0){
								$(".ui-autocomplete").addClass("history").removeClass("suggestion");
								response(sourceRecentHistory)
								}
							else if (request.term.length >0 && request.term.length < 3){
								response(sourceBlank)}
							else{
							//console.log("hit recorder for GCS");
							dataLayer.push({
							'event':'googleAutoSuggest',
							'GCJAutoSuggest':request.term
							});
								$(".ui-autocomplete").addClass("suggestion").removeClass("history");
								$.ajax({
										url: "/rest/getKeywords/"+encodeURI(request.term),
										dataType: "json",
										data: {
											outputFormat: "json",
											limit: 5,
											completionType: 'JOB_TITLE',
											siteLocale: "en-AUS"
										},
										success: function(data) {
											console.log("trace1 : " + data.result.localdata.responseJson)
											console.log("trace2 : " + data.result.resultsets.Suggestions)



											if(data.result.localdata.StatusCode=="UC011")
											response(sourceBlank)

										    else   {
												response($.map(data.result.resultsets.Suggestions, function(item) {
												item.suggestion=item.Suggestion.replace("%20", " ");
												item.suggestion=item.Suggestion.replace(/\+/g, ' ');
												return {
													label: item.Suggestion,
													value: item.Suggestion
												}
												}))
											}
										},
										error: function(jqXHR, textStatus, errorThrown){
                                        $(".ui-autocomplete-loading").removeClass("ui-autocomplete-loading");
                                        console.log("error handler!");
                                        response(sourceBlank)
                                        //response(sourceRecentHistory);
										}

										
										})
								}
					},
					minLength: 0,
						select: function(event, ui) {
						$('#home_search_candGCSq').attr('value', ui.suggestion );
					},
					open: function() {
						$(this).removeClass("ui-corner-all").addClass("ui-corner-top");
					},
					close: function() {
						$(this).removeClass("ui-corner-top").addClass("ui-corner-all");
					}
				}).focus(function() {
    $(".sample1").addClass("test");
	$(this).autocomplete("search", $(this).val());});
									}
									else {
										window.setTimeout(includeJQueryAutocompleteForKeywords, 100);
									}
								}
								includeJQueryAutocompleteForKeywords();

	</script>
					</section>
			</div>
			
