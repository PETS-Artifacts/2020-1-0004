<script>
function OpenTellAFriend(a) {
    var maxheight = 400;
    maxheight = screen.height;
    if (maxheight > 660) {
      maxheight = 660;
    } else {
      maxheight = maxheight - 100;
    }
    OpenWindow('/tell_a_friend/index.cfm?url='+a,'tellafriend','600',maxheight);
  }
</script>

