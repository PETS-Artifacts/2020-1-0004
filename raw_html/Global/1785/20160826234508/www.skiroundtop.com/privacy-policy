$(document).ready(function(){ 

	$('table.mobile_assist').each(function() {
		var th_num = 1;
		var this_table = $(this);
				
		this_table.find('th').each(function() {
			var dtv = $(this).text();
			
			this_table.find('tr').each(function(){
				//$('table tr td:nth-child('+th_num+')').attr('title', dtv);	
				this_table.find('td:nth-child('+th_num+')').attr('title', dtv);	
			});
			
			th_num++;

		});
	
	});


});
</script>



