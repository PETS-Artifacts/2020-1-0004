<script type="text/javascript">

  function toggleArrowGA(element) {

    var span = element.parentElement.firstElementChild;

    if (span.className.toLowerCase().indexOf("span--active") >= 0) {
      //ga('send', 'event', 'global navigation', 'collapse');
    }
    else {
      ga('send', 'event', 'global navigation', span.firstElementChild.innerHTML + ' - open nav', window.location.pathname);
      //ga('send', 'event', 'global navigation', 'expand');
    }
  }
</script>
