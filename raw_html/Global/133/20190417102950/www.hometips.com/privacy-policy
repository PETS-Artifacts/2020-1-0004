           // alert("add class");
    var target = jQuery('img.aligncenter'); 
    
    //target.parent().addClass('aligncenter');
       
    if (target.parent().hasClass("media-credit-container")) {
        target.parent().addClass('aligncenter');
    }
    else  if (target.parent().parent().hasClass("media-credit-container")) {
        target.parent().parent().addClass('aligncenter');
    }
    else  if (target.parent().parent().parent().hasClass("media-credit-container")) {
        target.parent().parent().parent().addClass('aligncenter');
    }
    else{
        //alert('Upto three parents no media-credit-container class found');
    
    }
   }

    add_align_class();

 

    
