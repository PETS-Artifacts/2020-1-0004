<script>
  $( document ).ready(function() {
    var accept_cookies = localStorage.getItem('accept_cookies');
    if (accept_cookies == '1') $('#cookie_message').hide();
    else $('.footer-credits').css('margin-bottom', '120px');
    $('#accept_cookies').on('click', function() {
      $('#cookie_message').hide();
      localStorage.setItem('accept_cookies',1)
    });
  });
</script>
