				,fixed:false
				,top: 'center'
				,onBeforeLoad: function() {

					//First get the wrap
					var wrap = this.getOverlay().find(".contentWrap");
					//Get the URL from the trigger

					var link = this.getTrigger().attr("href");
					// get the dimensions (if they exist)
					var width=link.match(/w=([0-9]+)/);
					var height=link.match(/h=([0-9]+)/);
					width=width?parseInt(width[1],10):640;
					height=height?parseInt(height[1],10):640;
					// resize the overlay
					this.getOverlay().width(width).height(height);
					//Add the link and style attributes to the basic iframe
					$(theframe).attr({ src: link, style: 'height:'+height+'px; width:'+width+'px; border:none;' });
					//Write the iframe into the wrap
					wrap.html(theframe);
				}
			});

			
