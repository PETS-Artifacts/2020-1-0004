        <script type="text/javascript">
            (function(){
                // if visiting user has et_hash get parameter sets ETEmail cookie to that value // CORE-949
                try {
                    if (window.location && window.location.search) {
                        // handles if query string is at beginning or not eg ?et_hash= or &et_hash=
                        var urlParam = /(\?|&)et_hash=/.exec(window.location.search);
                        if( urlParam && urlParam[0] ) {
                            var etHash = window.location.search.split(urlParam[0]).pop().split('&').shift();
                            var expires = new Date();
                            expires.setFullYear(expires.getFullYear() + 50);
                            document.cookie = "ETEmail=" + etHash + "; path=/" + '; expires=' + expires.toGMTString();
                        }
                    }
                } catch( ex ) {
                    console.log(ex);
                }
            })();
        </script>
</head>

