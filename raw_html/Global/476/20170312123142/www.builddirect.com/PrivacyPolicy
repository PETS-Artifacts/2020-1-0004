            //AI - 8 Prepopulate Zopim chat information from profile if exists
            $zopim(function() {
                if(($zopim.livechat.getName() === "" || $zopim.livechat.getName().indexOf('Visitor') == 0) && localStorage.getItem('user_profile') && localStorage.getItem('user_profile').length > 5 ){
                    if($zopim.livechat.getName() === "" || $zopim.livechat.getName().indexOf('Visitor') == 0) { 
                        $zopim.livechat.setName(JSON.parse(localStorage.getItem('user_profile')).firstName);
                    }
                    if( $zopim.livechat.getEmail() ===  "") {
                        $zopim.livechat.setEmail(JSON.parse(localStorage.getItem('user_profile')).accountEmail);
                    }
                    $zopim.livechat.appendNotes('member id:' + JSON.parse(localStorage.getItem('user_profile')).id + '\n user id:' + info.userId);
                } else {
                    $zopim.livechat.appendNotes('user id:' + info.userId);
                }
