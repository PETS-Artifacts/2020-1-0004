<script type="text/javascript">
  $(function() {
    $('.cookie-consent-container').slideDown();

    $('.cookie-consent-btn').on('click', function() {
      $('#accept-cookies-btn-icon').removeClass('fa-check').addClass('fa-spinner').addClass('fa-spin');
      $.ajax({
        url: "/ajax/ajax_consent.php",
        type: "POST",
        cache: false,
        dataType: "json",
        data: {
          action: "accept_all_cookies"
        },
        complete: function(jqXHR, textStatus) {
          $('.cookie-consent-container').slideUp();
        }
      });
    });
  });

</script> <body class="tan" style="padding-top: 50px">   <script src="//rocinante.themediashop.co/library/proz.js" async data-tmsclient="Proz" data-debug="true"></script>  
