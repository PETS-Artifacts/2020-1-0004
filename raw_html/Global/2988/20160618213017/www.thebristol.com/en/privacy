//<![CDATA[
			var isDevice ;
			function mediaQueryWidthidentification(){
				if(jQuery("#layout").css("float")=="left"){
					isDevice = "mobile";
				}
				else if(jQuery("#layout").css("float")=="right"){
					isDevice = "tablet";
				}
				else if(jQuery("#layout").css("float")=="none") {
					isDevice = "destkop";
				}
				return isDevice;
			}
