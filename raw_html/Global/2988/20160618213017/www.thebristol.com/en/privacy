jQuery(document).ready(function($){
	$('.cycle-slideshow1').cycle({
		fx:     'fade',
		speed:  2000,
		timeout:8000,
		swipe: true,
		slideResize: 0,
		slides:"> li",
		prev: ".prev-btn1",
		next: ".next-btn1"
	});


function slidSpecialspecial1(){
	$('.cycle-slideshow1 li.cycle-slide.cycle-sentinel').remove();
	$('.specialOfferContent .cycle-slideshow1 li').each(function(){
			if($(this).hasClass('cycle-slide-active')){
				var image=$(this).children('.hiddenImage.for-destkop').text();
				$(".image-holder1").attr('src',image);


			}
		});
}
function slidSpecialspecial(){

	$('.cycle-slideshow1 li.cycle-slide.cycle-sentinel').remove();
	var lengthlispecial=$('#content_1 .specialOfferContent .cycle-slideshow1 li').length;
	$('.specialOfferContent .cycle-slideshow1 li').each(function(){

 			if($(this).hasClass('cycle-slide-active')){
				var image=$(this).next('li').children('.hiddenImage.for-destkop').text();
				if($(this).index()==lengthlispecial-1){
					 image=$('.specialOfferContent .cycle-slideshow1 li').first().children('.hiddenImage.for-destkop').text();
				}
				$(".image-holder1").attr('src',image);

			}

		});
	}
$("#id_1").click(function(){
	$('.cycle-slideshow1 li:first-child').addClass('temp');
		$('.image-holder1').removeClass('hide').addClass('show');
		slidSpecialspecial1();
		$('.cycle-slideshow1').on('cycle-after',function(optionHash, outgoingSlideEl, incomingSlideEl, forwardFlag){
			slidSpecialspecial();
		});
	});
})
</script>
