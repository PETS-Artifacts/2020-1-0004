/*****************Script for Overlay on button click**************************/
		$('.menuWrap').on('click',function(){
			if($('.holderWrap').hasClass('holderVisible')){
				$('.holderWrap').removeClass('holderVisible').addClass('holderClose');
				$('.menuBar').addClass('holderVisible').removeClass('holderClose');
				$('.closeBar').addClass('holderClose').removeClass('holderVisible');
				$('.language').addClass('holderClose').removeClass('holderVisible');
				$('#footerDesktop').addClass('show').removeClass('hide');
					$('.footerContent').each(function(){
					if($(this).hasClass('footer-show') && $(this).hasClass('footer-hide')){
						$(this).removeClass('footer-hide');
					}
				});
			}
			else{
				$('.holderWrap').addClass('holderVisible').removeClass('holderClose');
				$('.menuBar').removeClass('holderVisible').removeClass("show").addClass('holderClose');
				$('.closeBar').removeClass('holderClose').addClass('holderVisible');
				$('.language').removeClass('holderClose').addClass('holderVisible');
				$('#footerDesktop').removeClass('show').addClass('hide');
				$('.footerContent').each(function(){
					if($(this).hasClass('footer-show')){
						$(this).addClass('footer-hide');
					}
				});
			}
				bookingMaskClose();
		});
/*********************Function for CheckRates***************/
			$('.bookingWrap').on('click',function(){
				//$('.checkratesBox').css('display','block');
			if($('.checkratesBox').hasClass('booking-close')){
				$('.checkratesBox').removeClass('booking-close').addClass('booking-open');
				$('.checkRatesClose').removeClass('booking-close').addClass('booking-open');
				$('.checkRatesCloseBtn').removeClass('booking-close').addClass('booking-open');
				$('.bookingWrap').css('display','none');
				if((mainWidth >= 320) && (mainWidth < 768)){
					$('.bookingWrap').css('display','block');
				}
				}
			else{
				$('.checkratesBox').addClass('booking-close').removeClass('booking-open');
				$('.checkRatesClose').addClass('booking-close').removeClass('booking-open');
				$('.checkRatesCloseBtn').addClass('booking-close').removeClass('booking-open');
				}
		});
			function bookingMaskClose(){
				if($('.checkratesBox').hasClass('booking-open')){
					$('.checkratesBox').addClass('booking-close').removeClass('booking-open');
				}
			}
			$('.checkRatesClose').on('click',function(){
					bookingMaskClose();
					$('.bookingWrap').css('display','block');
			});
/****************************Script for Footer Menu Desktop**********************/
		$('.menu').on('click',function(){

			var item = $(this).attr("id").split("_")[1];
			$('.menu').removeClass("active");
			$('.footerContent ').addClass("footer-hide").removeClass("footer-show");
			$('.image-holder,.image-holder1').addClass("hide").removeClass("show");
			$('#content_'+item).addClass('footer-show').removeClass("footer-hide");
			$(this).addClass("active");
			if($('.fancybox-wrap').hasClass('hide1')){
			   $('.fancybox-wrap').removeClass('hide1').addClass('show1');
			}
			else{
			   $('.fancybox-wrap').removeClass('show1').addClass('hide1');
			}
			bookingMaskClose();
		});
/************************Script for footer Wrapper*******************************/
		$('.btnWrapFooter').on('click',function(event){
			$(this).parent().addClass('footer-hide').removeClass('footer-show');
		});

/************************Main Image height changes according to device*******************************/
		function windowResize(){
			$( window ).resize(function() {
				var mainheight = $(window).height();
				var mainWidth = $(window).width();
				if(mainWidth <= 768){
					$('figure.mainVisual').css({'height':mainheight});
					$('.itemImagePopup').css({'height':mainheight});
				}else{
					$('figure.mainVisual').css({'height':mainheight-40});
				}
				if(mainWidth >= 1024){
					$('#content_3 .image_wrapper').css({'height':mainheight-42});
				}
			});
		}
		windowResize();
		var mainheight = window.innerHeight || document.documentElement.clientHeight || document.body.clientHeight;
		var mainWidth = window.innerWidth || document.documentElement.clientWidth || document.body.clientWidth;
		if(mainWidth <= 768){
			$('figure.mainVisual').css({'height':mainheight});
		}else{
			$('figure.mainVisual').css({'height':mainheight-40});
		}
		if(mainWidth >= 1024){
			$('#content_3 .image_wrapper').css({'height':mainheight-42});
		}

/************************subpages main content hide and show*******************************/
		function subpageContentShow(){
			$('figure.mainVisual').css('position','fixed');
			$('#footerDesktop').css({'position':'relative','bottom':'0'});
			$('#subMainContent').removeClass("footerhidden").addClass("footershow");
			$('.footerMobileTablet').css('display','block');
			$('.transparentPopup').css('opacity','1');
			//$('figure.mainVisual').css('z-index','2');
		}
		function subpageContentHide(){
			$('figure.mainVisual').css('position','fixed');
			$('#footerDesktop').css({'position':'fixed','bottom':'0'});
			$('#subMainContent').removeClass("footershow").addClass("footerhidden");
			$('.footerMobileTablet').css('display','none');
			$('.transparentPopup').css('opacity','0');
			//$('figure.mainVisual').css('z-index','3');
			setTimeout(function(){
				$('figure.mainVisual').css('position','relative');
			}, 800);
		}

/************************Main Arrow click*******************************/
		$("#home_scroll_arrow").on("click",function(){
			$(document).scrollTop(26);
			if((mainWidth >= 320) && (mainWidth < 768)){
			$(this).velocity('scroll', { duration: 2000 ,offset: -180 });
			subpageContentShow();
		}
			else if(mainWidth >= 768){
			$(this).velocity('scroll', { duration: 2000 ,offset: -500 });
			subpageContentShow();
		}
		});

/************************For Connect in subpages*******************************/
					$("#id_6").on("click",function(){
				if($('.footerDesktop').hasClass('connectHide')){
					$('.footerDesktop').removeClass('connectHide').addClass('connectShow');
				}
			});
			$(".btnWrapFooter").on("click",function(){
				$('.footerDesktop').removeClass('connectShow').addClass('connectHide');
			});
				//}

/************************Detect Scroll*******************************/
					$(document).scroll(function() {
				scrollFunction();
			});
			function scrollFunction(){
				var scrollHeight = $(this).scrollTop();
				if(scrollHeight >= 1){
					subpageContentShow();
					//
				}
				else if(scrollHeight < 1){

					subpageContentHide();

				}
			}
				//}
/************************Remove telephone number*******************************/
		$('a[href^="tel:"]').css('text-decoration','none');
		$(".fieldBlock.type_date input, #date-in, #ff_startDate1, .flexInputDate").datepicker({ dateFormat: 'dd/mm/yy', minDate:0 ,firstDay:1 });
			//Added Mac as the Drop Down default was appearing on MAC FF & also -webkit-appearance:none; css property was not working
		if(navigator.userAgent.indexOf('Mac') > 0){
				$('body').addClass('mac-os');
				if(navigator.userAgent.indexOf('Firefox') > 0){
					$('body').addClass('mac-os-ff');
				}
				if(navigator.userAgent.indexOf('Safari') > 0){
					$('body').addClass('mac-os-ss');
					if (navigator.userAgent.indexOf('iPad') > 0) {
						$('body').addClass('mac-os-ipad-ss');
					}
				}
		}
	});
