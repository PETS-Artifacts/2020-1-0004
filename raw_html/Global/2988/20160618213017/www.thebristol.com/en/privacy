		jQuery(document).ready(function($){

			/***Image size calculation***/
			function windowGalleryResize(){
					var mainheight = window.innerHeight || document.documentElement.clientHeight || document.body.clientHeight;
					var mainWidth = window.innerWidth || document.documentElement.clientWidth || document.body.clientWidth;
					var mainheightCont = (mainheight/4);
					var mainheightCont1 = (mainheightCont*3)-40;
					var mainheightCont2 = mainheightCont-6;
					var mainheightCont3 = (mainheightCont1/2);
					var mainheightCont4 = (mainheightCont1/2)-2;
					var mainheightCont5 = mainheightCont1+2;
					var mainheightCont6 = (mainheightCont1/2)-2;
					if(mainWidth <= 768){
						$('div.jw-gallery-3col-lg .accordion-item div:first-child figure, div.jw-gallery-3col-lg .accordion-item div:nth-child(4) figure').css({'height':'305px'});
						$('#content_4 .galleryWrapContent').css({'height':'305px'});
						$('.galleryContainerWrap').css({'height':'190px'});
						$('div.jw-gallery-3col-lg .accordion-item div:nth-child(2) figure,div.jw-gallery-3col-lg .accordion-item div:nth-child(3) figure,div.jw-gallery-3col-lg .accordion-item div:nth-child(5) figure').css({'height':'154px'});
						$('div.jw-gallery-3col-lg .accordion-item div:nth-child(3)').css({'top':'149px'});
						$('div.jw-gallery-3col-lg .accordion-item div:nth-child(6) figure').css({'height':'149px'});
					}else if(mainWidth >= 1024){
						$('div.jw-gallery-3col-lg .accordion-item div:first-child figure, div.jw-gallery-3col-lg .accordion-item div:nth-child(4) figure').css({'height':mainheightCont1});
						$('#content_4 .galleryWrapContent').css({'height':mainheightCont5});
						$('.galleryContainerWrap').css({'height':mainheightCont2});
						$('div.jw-gallery-3col-lg .accordion-item div:nth-child(2) figure,div.jw-gallery-3col-lg .accordion-item div:nth-child(3) figure,div.jw-gallery-3col-lg .accordion-item div:nth-child(5) figure').css({'height':mainheightCont3});
						$('div.jw-gallery-3col-lg .accordion-item div:nth-child(3)').css({'top':mainheightCont4});
						$('div.jw-gallery-3col-lg .accordion-item div:nth-child(6) figure').css({'height':mainheightCont6});
					}
			}
			$( window ).resize(function() {
				windowGalleryResize();
			});
			windowGalleryResize();
		});
	}
</script>



