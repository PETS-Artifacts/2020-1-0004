<script type="text/javascript">
jQuery(document).ready(function($){
    diningResize();
    $( window ).resize(function() {
        diningResize();
    });
    function diningResize(){
        $('.diningWrapContent #slick_wrap_dinning, #content_3 #slick_wrap_dinning').slick({
            infinite: true,
            dots: true,
            arrows: false,
            swipe: true,
            fade: true,
            speed: 400,
            cssEase: 'ease-out',
            autoplay: true,
            autoplaySpeed: 8000,
            pauseOnHover: false,
            pauseOnDotsHover: true
        }); //initialize Slick slider
    }
});
</script>
