	<!-- function used to initiate slick slider once all slide images have loaded via Foundation interchange : this doesn't fire until Foundation is initialized just before the closing </body> tag -->
	<script type="text/javascript">	
		function slideLoaded(img){
			var imgO = jQuery(img), //assign variable from the DOM image argument
				slideWrapper = jQuery('#slick_wrap'), //cache the DOM element for the parent container
				total = slideWrapper.find('img').length, //number of all image slides inside of the #slick_wrap container
				percentLoaded = null; //initialize a percent loaded variable (might use for a percentage loaded indicator)

			imgO.addClass('loaded'); //once the image tag has loaded, give it the loaded class
				// initiate slick slider - TODO: make this specific to Homepage?
				jQuery('#slick_wrap').on('init', function(slick){jQuery('#main_visual').addClass('loaded');}); //set the 'init' for Slick on the #slick_wrap container that removes the loading class from the #main_visual div
				jQuery('#slick_wrap').slick({infinite: true, dots: true, arrows: false, swipe: true, fade: true, speed: 400, cssEase: 'ease-out', autoplay: true, autoplaySpeed: 8000, pauseOnHover: false, pauseOnDotsHover: true}); //initialize Slick slider
		}
		function singleImageLoad(img){
		var imgObject = jQuery(img);//assign the image DOM element
		imgObject.parent().addClass('loaded');//add loaded class to parent container
		}
</script>
