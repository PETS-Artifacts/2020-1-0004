jQuery(document).ready(function($){
	$('.cycle-slideshow').cycle({
		fx:     'fade',
		speed:  2000,
		timeout:8000,
		swipe: true,
		slideResize: 0,
		slides:"> li",
		prev: ".prev-btn",
		next: ".next-btn"
	});
function slidSpecial1(){
	$('.cycle-slideshow li.cycle-slide.cycle-sentinel').remove();
	$('.roomContent .cycle-slideshow li').each(function(){
			if($(this).hasClass('cycle-slide-active')){
				var image=$(this).children('.hiddenImage').text();
				$(".image-holder").attr('src',image);
			}
		});
}
function slidSpecial(){

	$('.cycle-slideshow li.cycle-slide.cycle-sentinel').remove();
// if($('.cycle-slideshow li').hasClass('temp')){
// 	var image=$(this).children('.hiddenImage').text();
// 				$(".image-holder").attr('src',image);
// }
var lengthli=$('.roomContent  .cycle-slideshow li').length;
				//alert(lengthli);
	$('.roomContent .cycle-slideshow li').each(function(){
 			if($(this).hasClass('cycle-slide-active')){
				var image=$(this).next('li').children('.hiddenImage').text();
				//alert($(this).index());

				if($(this).index()==lengthli-1){
					//alert("Hi");
					 image=$('.roomContent .cycle-slideshow li').first().children('.hiddenImage').text();
				}
				$(".image-holder").attr('src',image);

			}

		});
	}
$("#id_2").click(function(){
	$('.cycle-slideshow li:first-child').addClass('temp');
		$('.image-holder').removeClass('hide').addClass('show');
		slidSpecial1();
		$('.cycle-slideshow').on('cycle-after',function(optionHash, outgoingSlideEl, incomingSlideEl, forwardFlag){
			slidSpecial();
		});
	});
})
</script>
