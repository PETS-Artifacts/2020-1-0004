<script type="text/javascript">
	jQuery(document).ready(function($){

		$("#bookingCheckIn").on('click',function(){
			$("#jw-booking-mask-dateIn").datepicker();
			$( "#jw-booking-mask-dateIn" ).datepicker( "show" );
		});
		$("#bookingCheckOut").on('click',function(){
			$("#jw-booking-mask-dateout").datepicker();
			$( "#jw-booking-mask-dateout" ).datepicker( "show" );
		});

		var calIn = $( "#jw-booking-mask-dateIn" ).datepicker({ disabled: false, altField: "#jw-booking-mask-datesendin", altFormat: 'mm/dd/yy',firstDay:0, minDate:0, onSelect: checkCalendarDates, dateFormat: 'M/dd/yy'});
		calIn.datepicker('setDate', new Date());

		var dateTextIn = $("#jw-booking-mask-dateIn").datepicker({dateFormat:'mm/dd/yy'}).val();
		
		var datevalueIn = dateTextIn.split('/');
		$("#jw-booking-mask-dateIn").val(datevalueIn[1]);
		$("#jw-booking-mask-date-in-month").val(datevalueIn[0]);
		$("#jw-booking-mask-date-in-year").val(datevalueIn[2]);

		var calOut = $( "#jw-booking-mask-dateout" ).datepicker({ disabled: false, altField: "#jw-booking-mask-datesendout", altFormat: 'mm/dd/yy',firstDay:0, minDate:1, onSelect: checkCalendarDates, dateFormat: 'M/dd/yy'});
		calOut.datepicker('setDate', new Date());

		var dateTextOut = $("#jw-booking-mask-dateout").datepicker({dateFormat:'mm/dd/yy'}).val();		
		
		var datevalueOut = dateTextOut.split('/');
		$("#jw-booking-mask-dateout").val(datevalueOut[1]);
		$("#jw-booking-mask-date-out-month").val(datevalueOut[0]);
		$("#jw-booking-mask-date-out-year").val(datevalueOut[2]);

		function checkCalendarDates(date, datePickerO){

			var monthNames = [ "Jan", "Feb", "Mar", "Apr", "May", "Jun",
			"Jul", "Aug", "Sep", "Oct", "Nov", "Dec" ];

			var hiddenvalueIn=  $('#jw-booking-mask-datesendin').val();
			var hiddenvalueOut=  $('#jw-booking-mask-datesendout').val();

			var dateIn = calIn.datepicker("getDate");
			var dateOut = calOut.datepicker("getDate");

			var datevalueIn = hiddenvalueIn.split('/');
			var month = datevalueIn[0];

			$("#jw-booking-mask-date-in-month").val(monthNames[month -1]);
			$("#jw-booking-mask-dateIn").val(datevalueIn[1]);
			$("#jw-booking-mask-date-in-year").val(datevalueIn[2]);

			var datevalueOut = hiddenvalueOut.split('/');
			var monthOut = datevalueOut[0];

			$("#jw-booking-mask-date-out-month").val(monthNames[monthOut -1]);
			$("#jw-booking-mask-dateout").val(datevalueOut[1]);
			$("#jw-booking-mask-date-out-year").val(datevalueOut[2]);

			if(Date.parse(hiddenvalueIn) >= Date.parse(hiddenvalueOut) && calIn.attr("id") === datePickerO.id){
				calOut.datepicker('setDate', new Date( dateIn.getTime() + (24 * 60 * 60 * 1000) ));
				var dateTextOut = $("#jw-booking-mask-dateout").datepicker({dateFormat:'mm/dd/yy'}).val();
				var datevalueIn = dateTextOut.split('/');

				var month = datevalueIn[0];

				$("#jw-booking-mask-date-out-month").val(month);
				$("#jw-booking-mask-dateout").val(datevalueIn[1]);
				$("#jw-booking-mask-date-out-year").val(datevalueIn[2]);
			}

			if(Date.parse(hiddenvalueOut) <= Date.parse(hiddenvalueIn) && calOut.attr("id") === datePickerO.id){
				calIn.datepicker('setDate', new Date( dateOut.getTime() - (24 * 60 * 60 * 1000) ));
				var dateTextIn = $("#jw-booking-mask-dateIn").datepicker({dateFormat:'mm/dd/yy'}).val();
				var datevalueIn = dateTextIn.split('/');

				var month = datevalueIn[0];
				$("#jw-booking-mask-dateIn").val(datevalueIn[1]);
				$("#jw-booking-mask-date-out-month").val(month);
				$("#jw-booking-mask-date-out-year").val(datevalueIn[2]);
			}
		}
  });
</script>
				<div class="checkRatesClose booking-close">
					<div class="checkRatesCloseBtn booking-close">
						<div class="border1">
						<div class="border2">
						</div>
						</div>
					</div>
				</div>
				</div>
			</div><!--end of checkratesBox-->
