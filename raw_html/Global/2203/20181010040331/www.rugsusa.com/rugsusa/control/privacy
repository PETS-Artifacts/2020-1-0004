<script>
function prepareBrontoCart(response) {
var emailAddress = brontoCart.emailAddress;
brontoCart = {};
if (response && response.cart && response.cart.length > 0) {
brontoCart.currency = response.currency;
brontoCart.subtotal = response.subtotal;
brontoCart.discountAmount = response.promo.amount;
brontoCart.taxAmount = response.salesTaxTotal;
brontoCart.grandTotal = response.grandTotal;
brontoCart.cartUrl = "http://www.rugsusa.com:80/rugsusa/control/reviewMyCart?id=" + response.cartId;
var lineItems = [];
var cart = response.cart;
for (var c = 0, len = cart.length; c < len; c++) {
var cartLine = cart[c];
var lineItem = {};
lineItem.sku = cartLine.product;
lineItem.name = cartLine.name;
lineItem.description = cartLine.name;
lineItem.category = cartLine.category;
lineItem.unitPrice = cartLine.price;
lineItem.salePrice = (cartLine.price + cartLine.adjustmentTotal);
lineItem.quantity = cartLine.quantity;
lineItem.totalPrice = cartLine.itemSubtotal;
lineItem.imageUrl = "http:" + cartLine.imageUrl + "?purpose=pdpSplashDesk";
lineItem.productUrl = "http://www.rugsusa.com" + cartLine.productUrl;
lineItems.push(lineItem);
}
brontoCart.lineItems = lineItems;
}
}
AjaxCart.cart_events.add.push({
handle: function(my_data, their_data, response) {
prepareBrontoCart(response);
},
data: {}
});
AjaxCart.cart_events.remove.push({
handle: function(my_data, their_data, response) {
prepareBrontoCart(response);
},
data: {}
});
AjaxCart.cart_events.update.push({
handle: function(my_data, their_data, response) {
prepareBrontoCart(response);
},
data: {}
});
EmailSignup.addSaveEmailListener(function(emailAddress) {
brontoCart.emailAddress = emailAddress;
});
CreditCardCheckoutProcess.addSaveEmailListener(function(emailAddress) {
brontoCart.emailAddress = emailAddress;
});
brontoCart = { }; </script>
