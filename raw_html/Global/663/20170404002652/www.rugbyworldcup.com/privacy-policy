            <header class="articleHeader">
            <div class="row">
                <div class="column large-12">
                    <div class="tag"></div>
                    <h2 class="title">Rugby World Cup 2019 Privacy Statement</h2>
                    <p></p>
                        <ul class="socialShare">
                            <li><a href="#" class="fb_link facebook" data-social="http://www.rugbyworldcup.com/news/31167?lang=en"><span class="icon facebook-white-share"></span></a></li>
                            <li><a href="#" class="tw_link twitter" data-social="http://www.rugbyworldcup.com/news/31167?lang=en"><span class="icon twitter-white-share"></span></a></li>
                            <li><a href="#" class="gp_link google" data-social="http://www.rugbyworldcup.com/news/31167?lang=en"><span class="icon google-white-share"></span></a></li>
                            <!-- <li><a href=""><span class="icon print-grey"></span></a></li> -->
                        </ul>
                </div>
                <!-- END column -->
                <div class="column large-12 authorContainerSmall">
                    <div class="author">
                        <span class="newsTimeStamp js-localTime">
                                18/09/2016 17:00
                        </span>
                    </div>
                </div>
                <!-- END column -->
            </div>
            <!-- END row -->
        </header>
