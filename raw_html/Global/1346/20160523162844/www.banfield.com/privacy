                    _gas.push(['_setCustomVar', 4, 'Hospital Locator Widget', 'Consideration: Complete', 3]);
                    _gas.push(['_trackEvent', 'Widget', 'Hospital Locator', 'Locator Search', 2, false]);
                    hospitalLocator.geocodeAddessRedirect(addr, '/our-hospitals/hospital-locations');
                }
                return false;
            });
        });
