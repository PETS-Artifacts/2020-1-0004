    $(function () {
        $('#footer_email_signup').click(function (e) {
            e.preventDefault();
            //need class
            recordEvent(window.location.href, 'link', 'footer-email-club-signup');
            location.href = '/account/register?e=' + encodeURIComponent($('input[name="signup_email_footer"]').val());
        });
        $("#signup_email_footer").keyup(function (event) {
            if (event.keyCode == 13 && ($('#signup_email_footer').val() != "")) {
                event.preventDefault();
                $("#footer_email_signup").click();
            }
        });
    });
</script>
