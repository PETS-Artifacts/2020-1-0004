<script type="text/javascript">
    $(function () {
        function onSiteSearchFormPost() {
            removeValidatorRules();
            $("#form1").validate();
            addValidatorRules(siteSearchRules);
            var valid = $("#form1").validate().form();
            return valid;
        }

        $("#submit-site-search").click(function (e) {
            if (onSiteSearchFormPost()) {
                recordEvent('header_' + window.location.href, 'search', $('#SearchTerm').val());
                //submitFormContext('site-search');
                //$('#form1').submit();
                document.location.href = "/search-results?s=" + encodeURIComponent($('#SearchTerm').val());
            }
        });

        $("#SearchTerm").keyup(function (event) {
            if (event.keyCode == 13 && ($('#SearchTerm').val() != "")) {
                event.preventDefault();
                $("#submit-site-search").click();
            }
        });
    });

</script>

                    
                    
