	<script type="text/javascript">
		$("#newsletterListing input[type='checkbox']").on("click",function()
		{
			$(this).closest(".newsletter-container").toggleClass('clicked');
		});
		$( '.ezn-newsletter_inarticle_banner form' ).on("submit", function()
		{
			submitForm( event );
			$('.form_container form').html( "<div style='font-weight:600; margin-bottom:1rem;' class='text-center'>Thank you for signing up for a free Monitor Newsletter!</div>" );
		});

		function submitForm(event)
		{
			event.preventDefault();
			var newsletter_email = $( ".ezn-newsletter_inarticle_banner input[type='email']" ).val(),
					rootURL = "https://christianscience.secure.force.com/freenewslettermonitor?email=",
					newsletter_sections = getCheckedNewsletters();

			var url = rootURL + newsletter_email + newsletter_sections;

			window.location= url;
		}
		function getCheckedNewsletters()
		{
			var newsletter_sections = '';
			$( "#newsletterListing input[type='checkbox']:checked" ).each( function()
			{
				newsletter_sections = newsletter_sections + "&" + $( this ).attr("id") + "=True";
			});
			return newsletter_sections;
		}
	</script>
</section>
