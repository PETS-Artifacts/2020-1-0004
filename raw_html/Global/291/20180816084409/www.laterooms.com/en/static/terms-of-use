    <script type="text/javascript">
    window.onMoonstickReady = function () {};
    window.subscribeToMoonstickReady = function subscribeToMoonstickReady(eventHandler) {
        if (window.onMoonstickReady) {
            var existingEventHandlers = window.onMoonstickReady;

            window.onMoonstickReady = function() {
                eventHandler();
                existingEventHandlers();
            }
        } else {
            window.onMoonstickReady = eventHandler;
        }
    }
</script>

<script type="text/javascript">
(function (window) {
    var errors = [];

    window.onerror = function (errorMsg, url, lineNumber, column, errorObj) {
        if (typeof (errorMsg) === 'object' && errorMsg.srcElement && errorMsg.target) {
            if (errorMsg.srcElement == '[object HTMLScriptElement]' && errorMsg.target == '[object HTMLScriptElement]') {
                errorMsg = 'Error loading script';
            } else {
                errorMsg = 'Event Error - target:' + errorMsg.target + ' srcElement:' + errorMsg.srcElement;
            }
        }

        var errString = Array.prototype.slice.call(arguments).join('');
        for (var i = errors.length - 1; i >= 0; i--) {
            if (errors[i] === errString) {
                return;
            }
        }
        errors.push(errString);

        var random = Math.random();
        var cacheBuster = (new Date().getTime()) + random;

        var imgSrc = "/beacon/moonstick-clienterrors?errorMsg=" + encodeURIComponent(errorMsg.toString()) +
            "&url=" + encodeURIComponent(url || document.location.toString().replace(/#.*$/, ""));

        if (lineNumber) {
            imgSrc += "&lineNumber=" + parseInt(lineNumber);
        }

        if (column) {
            imgSrc += "&column=" + parseInt(column);
        }

        if (errorObj) {
            imgSrc += "&errorObj=" + errorObj;
        }

        imgSrc += "&timestamp=" + (new Date()) + "&cacheBuster=" + cacheBuster;

        ((new Image()).src = imgSrc);
    }
})(window);
</script>
