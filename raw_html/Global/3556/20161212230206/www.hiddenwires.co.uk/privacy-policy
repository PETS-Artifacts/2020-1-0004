    jQuery("#cphOffPageBase_TABE274C1036_ctl00_ctl00_WhitePaperSignUp").on("click", function () {
        if (Page_ClientValidate("Whitepaper")) {
            var dataWrap = {
                firstName: jQuery("#cphOffPageBase_TABE274C1036_ctl00_ctl00_WhitePaperFormFirstName").val(),
                lastName: jQuery("#cphOffPageBase_TABE274C1036_ctl00_ctl00_WhitePaperFormLastName").val(),
                emailAddress: jQuery("#cphOffPageBase_TABE274C1036_ctl00_ctl00_WhitePaperFormEmail").val(),
                businessActivity: jQuery("#cphOffPageBase_TABE274C1036_ctl00_ctl00_WhitePaperFormBusinessActivity").val(),
                country: jQuery("#cphOffPageBase_TABE274C1036_ctl00_ctl00_WhitePaperFormCountry").val(),
                company: jQuery("#cphOffPageBase_TABE274C1036_ctl00_ctl00_WhitePaperFormCompany").val(),
                thirdparties: jQuery("#cphOffPageBase_TABE274C1036_ctl00_ctl00_ThirdParties").is(':checked'),
                subscriptionId: jQuery("#cphOffPageBase_TABE274C1036_ctl00_ctl00_WhitePaperForm").data("subscriptionid"),
                documentId: jQuery("article:first").data("document-id")
            }

            jQuery.ajax({
                type: "POST",
                url: "/ItinerisIml/Service/Widgets/Personalise.svc/SubscribeToWhitePaper",
                data: JSON.stringify(dataWrap),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (data) {
                    jQuery("#PersonaliseForm h3").text("Thanks for subscribing");
                    jQuery("#PersonaliseForm p").hide();
                    jQuery('#PersonaliseSignUp').hide();

                    setTimeout(function () {
                        jQuery(".overlay").removeClass("on");
                        jQuery("#lightbox-04").removeClass("showMe");
                    }, 1000);

                }
            });
        }
    });

    function ValidateEmail(source, args) {
        var txtEmail = 'cphOffPageBase_TABE274C1036_ctl00_ctl00_WhitePaperFormEmail';
        var txtEmailVal = document.getElementById(txtEmail).value;
        var txtEmailId = document.getElementById(txtEmail);

        var EmailPat = /^([A-Za-z0-9_\-\.])+\@([A-Za-z0-9_\-\.])+\.([A-Za-z]{2,4})$/;

        if (txtEmailVal != "" && txtEmailVal.match(EmailPat)) {

            args.IsValid = true;
            jQuery(txtEmailId).closest('.sfFormBox').removeClass('error');
            jQuery(txtEmailId).next('.sfError').attr('style', 'display:none;');
        }

        else {
            args.IsValid = false;
        }

        return;
    }
</script>

