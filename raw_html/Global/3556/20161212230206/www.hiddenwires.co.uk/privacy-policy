<script>
    jQuery("#NewsletterSignUp").on("click", function () {
        var dataWrap = {
            emailAddress: jQuery("section.newsletter input.sfTxt").val(),
            subscriptionId: jQuery("section.newsletter").data("subscriptionid"),
        }

        jQuery.ajax({
            type: "POST",
            url: "/ItinerisIml/Service/Widgets/Newsletter.svc/SubscribeTo",
            data: JSON.stringify(dataWrap),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (data) {
                jQuery("section.newsletter h3").text("Thanks for subscribing");
                jQuery("section.newsletter p").hide();
                jQuery('#NewsletterSignUp').hide();
            }
        });
    });
</script>


