		<script type="text/javascript">

	$(function(){
		// Select text in input field when someone clicks it 
		$("#q").focus(function(){
			this.select();
		});
		// Prevent the onmouseup event from causing the selection to get unselected in webkit browsers
		$("#q").mouseup(function(e){
			e.preventDefault();
		});

		/* Autocomplete location search */
		$("#q").autocomplete({
			source: "/facade/productSearchData/remote.cfc?method=getproductSearchData&ajaxmode=1&returnformat=json",
			select: function( event, ui ) {
				relocateById(ui.item.objectid); 
			},
			delay: 300,
			minLength: 3
		}).data( "uiAutocomplete" )._renderItem = function( ul, item ) {
			ul.css("z-index", "1001");
			return $( "<li></li>" )
				.data( "item.autocomplete", item )
				.append( "<a>" + item.label.replace(new RegExp($("#q").val(), "gi"), '<strong>' + $('#q').val() + '</strong>') + "</a>" )
				.appendTo( ul );
		};

		/* Now that the user has selected something from the dropdown, we are going to do an exact lookup for the record to get it's object ID and redirect the user to the exact match. If when we do an exact lookup we return more than one record, we present the user with a selection of options */
		function relocateById(productId){
			$.getJSON("/facade/productSearchData/remote.cfc",
				{
					method: "getProductSearchDataUrlById",
					returnformat: "json",
					objectid: productId,
					ajaxmode:"1"
				},
				function(aData) {
					window.location.href = "" +aData[0];
				}
			);
		};

	}); // End - Document.Ready

</script>
	
