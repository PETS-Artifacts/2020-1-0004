if(typeof jQuery == "undefined")
	document.write(unescape('%3Cscript src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"%3E%3C/script%3E'));
