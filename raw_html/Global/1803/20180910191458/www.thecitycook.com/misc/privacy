<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery.form/4.2.2/jquery.form.min.js"></script>
<script type="text/javascript">
$(function() {
	$(document).off("click",".ListAdd");
	$(document).on("click",".ListAdd",function() {
		var Holder = $(this).prev();
		var AddEl = Holder.find("div");
		var NextIndex = $(this).attr("data-index");
		Holder.append("<div>"+AddEl.html().replace(/\[0\]/g,"["+NextIndex+"]").replace(/\-0\-/g,"-"+NextIndex+"-").replace("</label>"," <a href=\"\" class=\"fa fa-remove ListRemove\" title=\"Remove\"></a></label>")+"</div>");
		$(this).attr("data-index",parseInt(NextIndex)+1);
	});
	$(document).off("click",".ListCopy");
	$(document).on("click",".ListCopy",function(e) {
		e.preventDefault();
		ListCopyPaste = new Array;
		$(this).parents(":eq(1)").find("input").each(function() {
			ListCopyPaste.push(this.value);
		});
		$(this).parents(":eq(1)").find("select").each(function() {
			ListCopyPaste.push(this.value);
		});
		$("#ListCopyPaste").val(JSON.stringify(ListCopyPaste));
		$(this).parent().append("<span id=\"ListElCopied\">copied</span>");
		setTimeout("$(\"#ListElCopied\").remove()",500);
	});
	$(document).off("click",".ListPaste");
	$(document).on("click",".ListPaste",function(e) {
		e.preventDefault();
		ListCopyPaste = JSON.parse($("#ListCopyPaste").val());
		var LCP = 0;
		$(this).parents(":eq(1)").find("input").each(function() {
			if( ListCopyPaste[LCP] != undefined )
				this.value = ListCopyPaste[LCP++];
		});
		$(this).parents(":eq(1)").find("select").each(function() {
			if( ListCopyPaste[LCP] != undefined )
				this.value = ListCopyPaste[LCP++];
		});
	});
	$(document).off("click",".ListRemove");
	$(document).on("click",".ListRemove",function(e) {
		e.preventDefault();
		$(this).parents(":eq(1)").remove();
	});
	$(document).off("submit",".signupInterior");
	$(document).on("submit",".signupInterior",function(e) {
		e.preventDefault();
		var FormEl = $(this);
		FormEl.find(".OutputMessage").text("submitting...");
		$(".signupInterior .required").hide();
		$(this).ajaxSubmit({
			dataType: "json",
			success: function(VR) {
				if( VR.IsValid ) {
					FormEl.find(".OutputMessage").text("");
					if( VR.NextGroup ) {
						$(".signupInterior-Groups").hide();
						$("#Group"+VR.NextGroup).show();
					}
					else {
						$(".signupInterior-Groups").hide();
						$("#signupInterior-ConfirmationText").show();
						
					}
				} else {
					for(i in VR.InvalidFields) {
				    	$("#"+VR.InvalidFields[i]+"Required").show();
				    };
					if( VR.Message )
						FormEl.find(".OutputMessage").html(VR.Message);
					else
						FormEl.find(".OutputMessage").html("<span style=\"color:red\">please fill required fields</span>");
					var y = $(window).scrollTop();
					$(window).scrollTop(y+100);
				}
			}
		});
	});
	
});
</script>
