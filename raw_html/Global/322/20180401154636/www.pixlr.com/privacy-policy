<script type="text/javascript">
	$(document).ready(function(){
		$.urlParam = function(name){
		    var results = new RegExp('[\?&]' + name + '=([^&#]*)').exec(window.location.href);
		    if (results==null){
		       return null;
		    }
		    else{
		       return decodeURI(results[1]) || 0;
		    }
		}
		verifyParam = getURLParameter('verify');
		if(verifyParam !== null){
			$(".pixlr_message").show();
			
			if(verifyParam=='success'){
				$("#pixlr_message_success").show();
			}else{
				$("#pixlr_message_error").show();
			}
			var paddingTop = $(".pixlr_message").outerHeight();
			$(".global-header, .wrapper_pixlrengage .header, .content-pixlrengage-landing").css('top',paddingTop + 'px');
		}
		$(document).on('click','.pixlr_message',function(){
			$(".pixlr_message, #pixlr_message_success, #pixlr_message_error").fadeOut(400);
			$(".global-header, .wrapper_pixlrengage .header, .content-pixlrengage-landing").css('top','0');
			$(".pixlr_message, #pixlr_message_success, #pixlr_message_error").css('display', 'none');
		});
	});
	$(window).on('resize', function () {
		if($.urlParam('verify') == 'success' || $.urlParam('verify') == 'fail') {
			if($(".pixlr_message, #pixlr_message_success, #pixlr_message_error").css('display') == 'none') {
				$(".global-header, .wrapper_pixlrengage .header, .content-pixlrengage-landing").css('top','0');
			} else {
			var paddingTop = $(".pixlr_message").outerHeight();
			$(".global-header, .wrapper_pixlrengage .header, .content-pixlrengage-landing").css('top',paddingTop + 'px');
			}
		}
	});
	function getURLParameter(name) {
	  return decodeURIComponent((new RegExp('[?|&]' + name + '=' + '([^&;]+?)(&|#|;|$)').exec(location.search) || [null, ''])[1].replace(/\+/g, '%20')) || null;
	} 
</script>
