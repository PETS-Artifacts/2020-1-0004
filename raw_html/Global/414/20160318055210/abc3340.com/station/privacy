        //-                     //- $('.component-header-default_with_weather-v1 ul.quick-result .row').append(liEl);
        //-                 }
        //-             });
        //-         });
        //-     }, 500);
        //- }

        // Trigger search event if enter key is pressed
        if( e.keyCode == 13 && searchInput.val().length >0 ) {
            searchButton.click();
        }
    });

    // Handle contextual search button behavior
    searchButton.click(function(e){
        // Stop typeahead timer
        window.clearTimeout(searchTimeout);

        // Check window width to determine mobile/tablet or desktop behavior
        if( window.innerWidth >= 1025 ) {
            headerMobileSearch.trigger('retract');
            // If search field is open on desktop, send search query
            if( searchButton.data('search-expanded') == 'true' ) {
                if( searchInput.val().length >0 ) {
                    window.location = "/search?find=" + searchInput.val();
                    return;
                }
            } else {
            // If search field is closed on desktop, open it
                headerSearch.trigger('expand');
                return;
            }
        } else {
            // If search field is open on mobile/tablet, close it
            if( headerMobileSearch.data('mobile-search-expanded') == 'true' ) {
                headerMobileSearch.trigger('retract');
            } else {
            // If search field is closed on mobile/tablet, open it
                headerMobileSearch.trigger('expand');
            }
        }

        // If desktop search field is open and has nothing in it, close it
        if( searchInput.val().length == 0 && searchButton.data('search-expanded') == 'true' ) {
            headerSearch.trigger('retract');
        }
    });


    // MOBILE SEARCH WIDGET

    // Handle mobile/tablet search expand behavior
    headerMobileSearch.on('expand', function() {
        headerMobileSearch.data('mobile-search-expanded', 'true');
        $('body').animate({'padding-top': searchMobilePane.css('height')}, 500);
        searchMobilePane.slideDown(500);
        searchMobileInput.focus();
    });

    // Handle mobile/tablet search retract behavior
    headerMobileSearch.on('retract', function() {
        headerMobileSearch.data('mobile-search-expanded', 'false');
        $('body').animate({'padding-top': '0'}, 500);
        searchMobilePane.slideUp(500);
    });

    // Handle searchMobileInput typing for typeahead results and capturing enter key to trigger search
    searchMobileInput.keyup(function(e){
        // Reset typeahead timer
        window.clearTimeout(searchTimeout);

        // Check minimum length of search for typeahead query
        //- if( e.currentTarget.value.length >3 ) {
        //-     searchTimeout = window.setTimeout(function() {
        //-         $.ajax({
