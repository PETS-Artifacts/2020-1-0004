</style><script>$(function(){

    //- NAV
    var dirName = location.pathname.split('/')[1],
        friendlyName = dirName.replace(/-/g, ' ').toLowerCase(),
        $activeLink;
    //- Activate the currently selected section if there is one
    if (dirName) {
        //- some links have # so you can't use href
        $activeLink = $('#sd-nav >li >a[href]').filter(function () {
            return $(this).data('name').toLowerCase() === friendlyName;
        }).first();
    } else {
        $activeLink = $('#sd-nav >li >a[href]').first();
    }

    $activeLink.closest('li').addClass('active');

    //- set current page class
    $('nav a[href^="/' + dirName + '"]').addClass('sd-nav-current-section');

    //- toggle mobile nav menu
    $('#sd-mobile-nav-toggle').on('click', function() {
        $('.sd-header-nav').toggleClass('mobile-nav-open');
    });

    //- toggle mobile subnav menu
    $('.sd-mobile-subnav-toggle').on('click', function() {
        var $this = $(this),
            $item = $this.parent(),
            isOpen = $item.hasClass('sd-mobile-subnav-open');

        $('.sd-mobile-subnav-open').removeClass('sd-mobile-subnav-open');

        if(!isOpen){
            $item.addClass('sd-mobile-subnav-open');
        }
    });

    $('.sd-nav >li').each(function(){
        var subNav = $(this).children('.sd-subnav'),
            subNavLength = subNav.children('li').length;

        if (subNavLength >= 16) {
            subNav.addClass('sd-subnav-three-column');
        } else if (subNavLength >= 10) {
            subNav.addClass('sd-subnav-two-column');
        }
    });
    //- LIVESTREAM
    //- Get livestream
    var liveStreamTimeout;
    function livestreamTimer(){
        clearTimeout(liveStreamTimeout);
        liveStreamTimeout = setTimeout(function(){
            getLivestream();
        }, 60000);
    }

    //- Custom for WJLA NC8 Only
    function getSecondaryLiveStream(){
        $.ajax({
            url : '//livevideostatus.sinclairstoryline.com/status/NC8' ,
            success : function(data) {
                if (data.isLive) {
                    $(".watch-live").attr('href','/newschannel-8');
                    $("#sd-watch-live-container-header").addClass('stream-is-live').attr('data-station','NC8');
                    $("#sd-watch-live-container-hero").addClass('stream-is-live');
                } else {
                    
                    $("#sd-watch-live-container-header").removeClass('stream-is-live');
                    $("#sd-watch-live-container-hero").removeClass('stream-is-live');
                }
                livestreamTimer();
            }
        });
    }
    function getLivestream() {
        $.ajax({
            url : '//livevideostatus.sinclairstoryline.com/status/WBMA' ,
            success : function(data) {
                if (data.isLive) {
                    $(".watch-live").attr('href','/live');
                    $("#sd-watch-live-container-header").addClass('stream-is-live').attr('data-station','WBMA');
                    $("#sd-watch-live-container-hero").addClass('stream-is-live');
                    livestreamTimer();
                } else if('WBMA' ==='WJLA') {
                    getSecondaryLiveStream();
                } else {
                    $("#sd-watch-live-container-hero").removeClass('stream-is-live');
                    livestreamTimer();
                }
            }
        });
        

    }
    getLivestream();



    //- SEARCH

    // Define search related elements
    var headerSearch = $('.sd-header-search'),
        headerMobileSearch = $('.sd-mobile-search-widget'),
        searchInput = $('.sd-header-search input'),
        searchButton = $('.sd-header-search button'),
        searchMobilePane = $('.sd-mobile-search-pane'),
        searchMobileInput = $('.sd-mobile-search-widget input'),
        searchMobileButton = $('.sd-mobile-search-widget button'),
        searchMobileCloseBtn = $('.sd-mobile-search-close'),
        searchTimeout;


    // DESKTOP SEARCH WIDGET

    // Cause clicks elsewhere on the page to close expanded search field
    $('html').click(function(e) {
        headerSearch.trigger('retract');
        headerMobileSearch.trigger('retract');
    });
    // Stop search field clicks from closing search field
    headerSearch.click(function(e){
        e.stopPropagation();
    });
    headerMobileSearch.parent().parent().click(function(e){
        e.stopPropagation();
    });

    // Handle desktop search expand behavior
    headerSearch.on('expand', function() {
        searchButton.data('search-expanded', 'true');
        searchInput.parent().animate({
            width: '295px'
        });
        searchInput.focus();
    });

    // Handle desktop search retract behavior
    headerSearch.on('retract', function() {
        searchButton.data('search-expanded', 'false');
        searchInput.parent().animate({
            width: '45px'
        });
    });

    // Handle searchInput typing for typeahead results and capturing enter key to trigger search
    searchInput.keyup(function(e){
        // Reset typeahead timer
        window.clearTimeout(searchTimeout);

        // Check minimum length of search for typeahead query
        //- if( e.currentTarget.value.length >= 3 ) {
