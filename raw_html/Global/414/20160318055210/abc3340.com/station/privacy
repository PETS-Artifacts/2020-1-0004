    function fetchWeather(zip) {
        var fetch = $.ajax({
            url: 'http://wjla.com/api/rest/audiencero/weather/zipcode/' + zip
        })
        return fetch;
    }
    function renderWeather(weatherZipCode) {
        fetchWeather(weatherZipCode).done(function(data){
            var obj = {
                weather: data.data[0]
            }
            //source = $('#weather-content-block').html();
            template = sd.templates['src/component/widgets/weather/three_day.handlebars'];
            html = template(obj);
            $('#sd-weather-block').html(html);
            //console.log(html)
        })
    }
    $(function(){
        renderWeather('35244')
    })
