        //-         });
        //-     }, 500);
        //- }

        // Trigger search event if enter key is pressed
        if( e.keyCode == 13 && searchMobileInput.val().length >0 ) {
            searchMobileButton.click();
        }
    });

    // Handle mobile/tablet search button behavior
    searchMobileButton.click(function(e){
        // Stop typeahead timer
        window.clearTimeout(searchTimeout);

        // Send search query
        if( searchMobileInput.val().length >0 ) {
            window.location = "/search?find=" + searchMobileInput.val();
            searchMobileCloseBtn.click();
        }
    });

    searchMobileCloseBtn.click(function() {
        headerMobileSearch.trigger('retract');
    });
});
