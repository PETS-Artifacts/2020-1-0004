<div class="generic-content">
    
    <div id="content_1_right_0_pnlBodyContent" class="body-content">
	
        <div class="inner-body-copy">
            <!--body content -->
            <div id="content_1_right_0_pnlIntroText" class="intro-text">
		
                <style>
