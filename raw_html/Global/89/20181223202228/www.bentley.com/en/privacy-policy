<script type="text/javascript">
    $(document).ready(function () {
        /* Ajax call click for Add to Brochure Button */
        var itemId = $('#hfGUID').val();
        var $BrochureLi = $('.utilities li.brochure-li');

        $(".brochure-li").click(function () {

            if (itemId != null && itemId !== 'undefined') {

                var getQuery = "/Bentley/AjaxData/Brochures/AddBrochurePage.aspx?" + "itemID=" + itemId;

                $.ajax({
                    cache: false,
                    url: getQuery,

                    success: function (data) {
                        try {

                            $(".utilities li.brochure-li").html(data);

                            var brochureObj = $(".utilities li.brochure-li");

                            var $brochureCounts = brochureObj.find('.brochure-label').html();

                            $(".utility-links li.brochure a span").html($brochureCounts);
                        } catch (ex) {
                        }
                    },

                    beforeSend: function () {
                        $BrochureLi.find('div.loader').show();
                    },

                    complete: function () {
                        $BrochureLi.find('div.loader').hide();
                    }
                });
            }
        });
    });
</script>

    
