        $(document).ready(function() {
            $( ".competition .animPromo" )
            .mouseover(function() {

              $( this ).find( "img" ).fadeTo( "fast", 1 );
            })
            .mouseout(function() {
              $( this ).find( "img" ).fadeTo( "fast", 0 );
