<script type="text/javascript">
    $(document).ready(function(){

// local image path set start
       var urlVal = document.location.href;
      var  newUrlval = urlVal.toString().split('/');
      $('img').each(function(){          
          if(newUrlval[3] ==='slt'){
            var imgSrc = $(this).attr('src').toString();
            var newImgSrc =imgSrc.split('/');

            if(newImgSrc[1] ==='sites'){
                var creatSrc = '/slt'+imgSrc;
                $(this).attr('src', creatSrc);
            }          
      }
      });
// local image path set end

// tab content download/faq section


