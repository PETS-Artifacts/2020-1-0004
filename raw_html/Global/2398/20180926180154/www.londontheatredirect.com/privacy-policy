<script>
    (function (LTD)
    {
        'use strict';
        if (!LTD) return;
        var ready = false;

        if (!LTD.lang) LTD.lang = {};
        LTD.lang.bookingMiniBasket = {
            expired: "Your ticket reservation expired.",
            callUs: "Call us on",
            ctaBack: 'Click here to start again',
            help: "if you need any help.",
            empty: "Basket is empty",
            inBasket: "in a basket",
            item: "item",
            items: "items",
            ticket: "ticket",
            tickets: "tickets",
        };

        function run()
        {
            if (ready) return;
            var bmb = window.LTD.BookingMiniBasket;
            if (!bmb) bmb = LTD.get && LTD.get('molecules/booking-mini-basket');
            if (bmb)
            {
                bmb('/Handlers/GetBasketContent.ashx?basketId=265e1bbe-c3c1-4506-a302-132374d8c8d2', '/');
                ready = true;
            }
            else setTimeout(run, 500);
        }

        LTD.push(run);
    }(window.LTD));
</script>

