                    <script>
                        ltd.push(function ()
                        {
                            var CLASS_OPEN = 'pg-foot__col--expanded';
                            var cols = $('.pg-foot__col');

                            cols.each(function ()
                            {
                                var col = $(this);
                                var heading = $('.pg-foot__heading', col);

                                heading.click(function ()
                                {
                                    var items = heading.next();
                                    var children = items.children();
                                    items.css('max-height', children.innerHeight() * (children.length + 1) + (Number(heading.css('margin-bottom').replace('px', '')) || 0));
                                    col.toggleClass(CLASS_OPEN);
                                });
                            });

                            if (ltd && ltd.window && window.util && util.debounce)
                            {
                                ltd.window.on('resize', util.debounce(function ()
                                {
                                    $('.pg-foot__list-items', cols).removeClass(CLASS_OPEN)
                                }));
                            }
                        });
                    </script>

