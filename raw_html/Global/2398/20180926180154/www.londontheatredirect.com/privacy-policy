<script>
    (function (LTD)
    {
        if (!LTD) return;
        if (!LTD.lang) LTD.lang = {};
        LTD.lang.identityProviders = {
            signingIn: "Signing in…",
            signingOut: "Signing out…",
            hello: "Hello",
            setup: "Setting up sign-in methods…",
        };

        var setListener = function (type) { LTD.util.event.setNamedListener(document, type, 'LTD.IdentityProviders.Reload', function () { location.reload(); }); }

        LTD.push(function () {
            try {
                var User = LTD.get('services/user');
                setListener(User.EVENT_LOGIN);
                setListener(User.EVENT_LOGOUT);
            } catch (e) { console.error(e); }
        });
    }(window.LTD));
</script>

