if (allHyperLinksOnPage.length > 0) {
    for (i = 0; i < allHyperLinksOnPage.length; i++) {
        var thisHyperLink = allHyperLinksOnPage[i];
        var thisHyperLinkHref = thisHyperLink.href;
        if (thisHyperLinkHref) {
            thisHyperLinkHref = thisHyperLinkHref.toUpperCase();
            if ((thisHyperLinkHref.indexOf("/MEDIA/FILES/") != -1 || thisHyperLinkHref.indexOf("/OXFAMILIBRARY.OPENREPOSITORY.COM/OXFAM/BITSTREAM/") != -1) &&
