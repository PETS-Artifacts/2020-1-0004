                thisHyperLink.onclick = function () {
                    thisHyperLinkHref = this.href;
                    var fileExtension = thisHyperLinkHref.substring(thisHyperLinkHref.lastIndexOf(".") + 1).toUpperCase();
                    ga('send', 'event', 'download', fileExtension, this.href);
                    return true;
                };
            } else if (thisHyperLinkHref.indexOf("/") != 0 &&
                thisHyperLinkHref.indexOf(dname.toUpperCase()) == -1) {
            thisHyperLink.onclick = function () {
                //alert(this.href);
                if (this.href.indexOf("dx.doi") > 0) {
                    ga('send', 'event', 'journal link', 'Click', this.href);
                }
                else { ga('send', 'event', 'external link', 'Click', this.href); }
                return true;
            };
               };
