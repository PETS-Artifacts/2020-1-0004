  });



   $('.homeslider2').flexslider({
            animation: "banner-slides",
            animationLoop: true,
            itemWidth: 200,
            itemMargin: 5,
            minItems: 2,
            maxItems: 6,
            slideshow: 1,

            move: 1,
            controlNav: false,
            start: function(slider){
                $('body').removeClass('loading');
                if (slider.pagingCount === 1) slider.addClass('flex-centered');
            }
        });



   });



