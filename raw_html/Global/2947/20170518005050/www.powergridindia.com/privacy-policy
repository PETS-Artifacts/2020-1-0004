      $("#owl-demo").owlCarousel({
        items : 6,
        lazyLoad : true,
        navigation : true
      });

    });




    ;(function($){
$(document).ready( function(){
	$('body').removeClass('noJS').addClass("hasJS");
	$('.ticker').each(function(i){
		$(this).addClass('tickerDiv'+i).attr('id', 'ticker'+i);
		$('#ticker'+i).find('.tickerDivBlock').first().addClass('newsTikker'+i).attr('id', 'newsTikker'+i);
		$('#ticker'+i).find('a').first().attr('id', 'stopNews'+i)
		$('#newsTikker'+i).vTicker({ speed: 1E3, pause: 4E3, animation: "fade", mousePause: false, showItems: 3, height: 182, direction: 'up' })
		$("#stopNews"+i).attr("href", "#").toggle(function () {
			$(this).removeClass("stop").addClass("play").text("Play |").attr('title', 'Play');
			}, function () {
			$(this).removeClass("play").addClass("stop").text("Pause ||").attr('title', 'pause');
		});
	});
});
})(jQuery);

$(document).ready( function(){

$( "a.pause" ).live( "click", function() {

 $('.stop').html('Pause <span>||</span>');
});

$( "a.play" ).live( "click", function() {
 $('.stop').html('Play');
});
});
