<script>

    $(function () {
        if ($('body').width() <= 600) {
            scrollToTag();
        }

        $('.filter-search').click(function (e) {

            var pos = $('.eventList').position();

            if ($('body').width() <= 600) {
                var ele = $('.hr');
                if (ele.hasClass('selected')) {
                    $('body').animate({
                        scrollTop: pos.top
                    }, 'fast');
                }
            }


        });
    });

    function scrollToTag() {

        var pos = $('.filter-control').position();

        console.log(pos);
        var ele = $('.hr');
        if (ele.hasClass('selected')) {
            $('body').animate({
                scrollTop: pos.top
            }, 'fast');
        }
    }
</script>
