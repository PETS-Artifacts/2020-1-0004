    <section id="block-views-back-issue-articles-block-2" class="block block-views block-first block-last odd clearfix">

        <h3 class="block-title">Recent Issues</h3>
      <div class="block-inner">
    <div class="view view-back-issue-articles view-id-back_issue_articles view-display-id-block_2 view-dom-id-65313a867fe971bd2315430fe0387aaa">
        
  
  
      <div class="view-content">
      <div class="group-wrapper">
