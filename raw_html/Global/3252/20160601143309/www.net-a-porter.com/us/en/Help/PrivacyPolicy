// Have we requested to view a particular item?
if(window.location.hash) {
var itemName = window.location.hash.substring(1).toLowerCase();
$(accordionID+'>li[name="'+itemName+'"]').addClass("open");
}
// If not, just open the first item.
if ($(accordionID+'>li.open').length == 0) {
var first = $(accordionID+'>li').slice(0,1)
$(first).addClass("open");
}
