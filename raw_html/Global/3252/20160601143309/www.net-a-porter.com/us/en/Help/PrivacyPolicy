function hideDropDown() {
el.style.overflow = '';
}
function showDropDown() {
el.style.overflow = 'visible';
}
anchor.addEventListener('touchend', function (e) {
if (el.style.overflow === '') {
e.preventDefault();
showDropDown();
} else {
hideDropDown();
}
}, false);
});
