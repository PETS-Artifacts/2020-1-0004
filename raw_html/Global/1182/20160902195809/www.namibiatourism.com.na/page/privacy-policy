<script src="/plugins/namibiatourism/js/jquery.bxslider.js"></script>
<script type="text/javascript">
$(document).ready(function(){
	
	$('#searchMainWebsite').keyup(function(e){
		if (e.which == 13) {
			//alert('enger')
			window.location = '/search/'+$('#searchMainWebsite').val();
			//$("#searchClick").click();
			
		}
		$('#searchClick').attr('href', '/search/'+$('#searchMainWebsite').val());	
	});
	
	$('.slider4').bxSlider({
		auto: true,
		slideWidth: 320,
		minSlides: 1,
		maxSlides: 3,
		moveSlides: 1,
		slideMargin: 20
	});
	
	$('.slider10').bxSlider({
		auto: true,
		slideWidth: 'auto',
		minSlides: 1,
		maxSlides: 3,
		moveSlides: 1,
		slideMargin: 20
	});
  
	$('#searchLocation').on('change', function() {
		
		var category = $( "#getSubCategories option:selected" ).val();
		var subCategory = $( "#searchSubCategories option:selected" ).val();
		var location = $( "#searchLocation option:selected" ).val();
		//alert($("#searchSubCategories").val());
		//return;
		if(category == '')
		{
			category = 'all';
		}	
		if(subCategory == '')
		{
			subCategory = 'all';
		}	
		if(location == '')
		{
			location = 'all';
		}	
		
		
		$('#searchString').val('');	
		$('html, body').animate({scrollTop:0}, '2000');
		
		if(xhr)
		{
			xhr.abort();
		}
		$('.hide-this-for-search').hide();
		$('#loadingResults').show();
		$('.website-idea').hide();
		$('.newsContainer').hide();
		var existingString = $("#searchLocation").val();
		if(existingString == '')
		{
			existingString = 'all';
		}	
		
		xhr = $.get('/ajaxbusiness/location/'+existingString, function(data) {
			var bounds = new google.maps.LatLngBounds();
			deleteOverlays();
			window.history.pushState("object or string", "Namibia Tourism Board", '/business/all/all/'+existingString);			
			$('.newsContainer').html('');
			
			/*
			if(data.length > 0)
			{
				$('.newsContainer').append('<p>There is no results</p>');	
			}
			*/
			
			for (var key in data)
			{
				//alert(key);
			
				//alert(data[key].BUSINESS_NAME);
				
				
				var businessListings =  '<div class="businessEntry" style="background:url('+data[key].BUSINESS_COVER_PHOTO+') center no-repeat">'+                    
                       	'<img height="30px" src="'+data[key].BUSINESS_LOGO_IMAGE_NAME+'" />'+
                        '<p class="firstNewsParagraph">'+data[key].BUSINESS_NAME+'<a class="readMoreNews" href="'+data[key].MICROSITE_LINK+'">read more</a><em></em><strong></strong></p>'+
                        '<p class="secondNewsParagraph">'+data[key].BUSINESS_DESCRIPTION_CLEAN+'</p>'+
                    '</div>';
				//alert(businessListings);
				$('.newsContainer').append(businessListings);
				
				//theIcon = eval('ico_small_'+data[key].CATEGORY_ID);
				var position = new google.maps.LatLng(data[key].BUSINESS_MAP_LATITUDE, data[key].BUSINESS_MAP_LONGITUDE);
				bounds.extend(position);
				//alert(theIcon);
				marker = new google.maps.Marker({
					
					//icon: theIcon,
					//shadow: ico_background_services,
					position: position,
					map: map,
					icon: '/img/icons/search-icon.png'
				});
				
				google.maps.event.addListener(marker, 'click', (function(marker, key) {
					return function() {
						micrositeLink = data[key].MICROSITE_LINK;
						//infowindow.setContent(companyheading+picture+companydesc+micrositeheading);
						infowindow.setContent('<ul class="nav nav-tabs"><li><a class="openMicrosite" target="_blank" href="'+data[key].MICROSITE_LINK+'" >Open Microsite</a></li></ul><div class="InfoBoxHeader"><strong>'+data[key].BUSINESS_NAME+'</strong></div><div class="InfoBoxPicture"><img width="200px" align="middle" src="'+data[key].BUSINESS_LOGO_IMAGE_NAME+'"/></div><div class="InfoBoxDescription">'+data[key].BUSINESS_DESCRIPTION_CLEAN+'<strong> Open Microsite to read more.</strong></div>');
						infowindow.open(map, marker);
					}
				})(marker, key));
				
				map.fitBounds(bounds);
				markersArray.push(marker);
								
			}
			
			//$('.checkboxLoader').fadeOut();
			var mcOptions = {gridSize: 50};
			markerCluster = new MarkerClusterer(map, markersArray, mcOptions);
			
			//alert(businessListings);
			$('#loadingResults').hide();
			$('.newsContainer').show();
			
			//$('#results').show();
		});	
		$('#getSubCategories').prop('selectedIndex',0);
		$('#searchSubCategories').prop('selectedIndex',0);
		
		xhr = $.get('/ajaxbusinesscount/searchcategory/'+category+'/'+subCategory+'/'+location, function(data) {
			$('.pagination').html('');
			var pages = data / 50;
			pages = Math.ceil(pages)
			//alert(pages);
			for(x = 0;x < pages; x++)
			{
				 var pagiNation = '<li ><a href="/business/'+category+'/'+subCategory+'/'+location+'/'+ (x * 50) +'">'+(x+1)+'</a></li>';
				 //alert(pagiNation);
				 $('.pagination').append(pagiNation);
			}
		});
	});
	
	$('#searchSubCategories').on('change', function() {
		$('#searchString').val('');	
		$('html, body').animate({scrollTop:0}, '2000');
		
		if(xhr)
		{
			xhr.abort();
		}
		$('.hide-this-for-search').hide();
		$('#loadingResults').show();
		$('.website-idea').hide();
		$('.newsContainer').hide();
		//$('.hide-this-for-search').hide();
		//$('#loadingResults').show();
		//$('.website-idea').hide();
		//$('.newsContainer').hide();
		var category = $( "#getSubCategories option:selected" ).val();
		var subCategory = $( "#searchSubCategories option:selected" ).val();
		var location = $( "#searchLocation option:selected" ).val();
		//alert($("#searchSubCategories").val());
		//return;
		if(category == '')
		{
			category = 'all';
		}	
		if(subCategory == '')
		{
			subCategory = 'all';
		}	
		if(location == '')
		{
			location = 'all';
		}	
		
		xhr = $.get('/ajaxbusinesscount/searchcategory/'+category+'/'+subCategory+'/'+location, function(data) {
			$('.pagination').html('');
			var pages = data / 50;
			pages = Math.ceil(pages)
			//alert(pages);
			for(x = 0;x < pages; x++)
			{
				 var pagiNation = '<li ><a href="/business/'+category+'/'+subCategory+'/'+location+'/'+ (x * 50) +'">'+(x+1)+'</a></li>';
				 //alert(pagiNation);
				 $('.pagination').append(pagiNation);
			}
		});
		
		xhr = $.get('/ajaxbusiness/searchcategory/'+category+'/'+subCategory+'/'+location, function(data) {
			var bounds = new google.maps.LatLngBounds();
			deleteOverlays();
			window.history.pushState("object or string", "Namibia Tourism Board", '/business/'+category+'/'+subCategory+'/'+location);		
			$('.newsContainer').html('');
			
			for (var key in data)
			{
				//alert(key);
			
				//alert(data[key].BUSINESS_NAME);
				
				
				var businessListings =  '<div class="businessEntry" style="background:url('+data[key].BUSINESS_COVER_PHOTO+') center no-repeat">'+                    
                       	'<img height="30px" src="'+data[key].BUSINESS_LOGO_IMAGE_NAME+'" />'+
                        '<p class="firstNewsParagraph">'+data[key].BUSINESS_NAME+'<a class="readMoreNews" href="'+data[key].MICROSITE_LINK+'">read more</a><em></em><strong></strong></p>'+
                        '<p class="secondNewsParagraph">'+data[key].BUSINESS_DESCRIPTION_CLEAN+'</p>'+
                    '</div>';
				//alert(businessListings);
				$('.newsContainer').append(businessListings);
				
				//theIcon = eval('ico_small_'+data[key].CATEGORY_ID);
				var position = new google.maps.LatLng(data[key].BUSINESS_MAP_LATITUDE, data[key].BUSINESS_MAP_LONGITUDE);
				bounds.extend(position);
				//alert(theIcon);
				marker = new google.maps.Marker({
					
					//icon: theIcon,
					//shadow: ico_background_services,
					position: position,
					map: map,
					icon: '/img/icons/search-icon.png'
				});
				
				google.maps.event.addListener(marker, 'click', (function(marker, key) {
					return function() {
						micrositeLink = data[key].MICROSITE_LINK;
						//infowindow.setContent(companyheading+picture+companydesc+micrositeheading);
						infowindow.setContent('<ul class="nav nav-tabs"><li><a class="openMicrosite" target="_blank" href="'+data[key].MICROSITE_LINK+'" >Open Microsite</a></li></ul><div class="InfoBoxHeader"><strong>'+data[key].BUSINESS_NAME+'</strong></div><div class="InfoBoxPicture"><img width="200px" align="middle" src="'+data[key].BUSINESS_LOGO_IMAGE_NAME+'"/></div><div class="InfoBoxDescription">'+data[key].BUSINESS_DESCRIPTION_CLEAN+'<strong> Open Microsite to read more.</strong></div>');
						infowindow.open(map, marker);
					}
				})(marker, key));
				
				
				markersArray.push(marker);
								
			}
			map.fitBounds(bounds);
			//$('.checkboxLoader').fadeOut();
			var mcOptions = {gridSize: 50};
			markerCluster = new MarkerClusterer(map, markersArray, mcOptions);
			var boundsListener = google.maps.event.addListener((map_canvas), 'bounds_changed', function(event) {
				//this.setZoom(6);
				google.maps.event.removeListener(boundsListener);
			});
			$('#loadingResults').hide();
			$('.newsContainer').show();
		});	
		//$('#searchLocation').prop('selectedIndex',0);
		
		
	});
	
	$('#getSubCategories').on('change', function() {
		//alert('test');\
		
		var category = $( "#getSubCategories option:selected" ).val();
		var subCategory = $( "#searchSubCategories option:selected" ).val();
		var location = $( "#searchLocation option:selected" ).val();
		//alert($("#searchSubCategories").val());
		//return;
		if(category == '')
		{
			category = 'all';
		}	
		if(subCategory == '')
		{
			subCategory = 'all';
		}	
		if(location == '')
		{
			location = 'all';
		}	
		
		xhr3 = $.get('/ajaxbusinesscount/searchcategory/'+category+'/'+subCategory+'/'+location, function(data) {
			$('.pagination').html('');
			var pages = data / 50;
			pages = Math.ceil(pages)
			//alert(pages);
			for(x = 0;x < pages; x++)
			{
				 var pagiNation = '<li ><a href="/business/'+category+'/'+subCategory+'/'+location+'/'+ (x * 50) +'">'+(x+1)+'</a></li>';
				 //alert(pagiNation);
				 $('.pagination').append(pagiNation);
			}
		});
		
		
		$('#searchSubCategories').html('<option selected="selected" value=""> - Select sub category -</option>');
		//$('#searchString').val('');	
		$('html, body').animate({scrollTop:0}, '2000');
		$('.hide-this-for-search').hide();
		$('#loadingResults').show();
		$('.website-idea').hide();
		$('.newsContainer').hide();
		
		if(xhr)
		{
			xhr.abort();
		}
		//$('.hide-this-for-search').hide();
		//$('#loadingResults').show();
		//$('.website-idea').hide();
		//$('.newsContainer').hide();
		var location = $( "#searchLocation option:selected" ).val();
		var existingString = $( "#getSubCategories option:selected" ).val();
		//alert($("#searchSubCategories").val());
		//return;
		if(existingString == '')
		{
			existingString = 'all';
		}
		if(location == '')
		{
			location = 'all';
		}		
		
		xhr = $.get('/ajaxbusiness/getsubcategory/'+existingString, function(data) {
			//$('.newsContainer').html(data);
			//$</h4>('#loadingResults').hide();
			//$('.newsContainer').show();
			
			var categorySub = data;
			
			for (var key in categorySub)
			{
				 $('#searchSubCategories').append($("<option />").val(categorySub[key].ID).text(categorySub[key].CATEGORY_NAME));
				//alert(categorySub[key].CATEGORY_NAME);
			}
			//$('#results').show();
		});
		
		xhr = $.get('/ajaxbusiness/searchcategory/'+existingString+'/all/'+location, function(data) {
			
			var bounds = new google.maps.LatLngBounds();
			deleteOverlays();
			$('.newsContainer').html('');
			window.history.pushState("object or string", "Namibia Tourism Board", '/business/'+existingString+'/all/'+location);		
			
			for (var key in data)
			{
				//alert(key);
			
				//alert(data[key].BUSINESS_NAME);
				
				
				var businessListings =  '<div class="businessEntry" style="background:url('+data[key].BUSINESS_COVER_PHOTO+') center no-repeat">'+                    
                       	'<img height="30px" src="'+data[key].BUSINESS_LOGO_IMAGE_NAME+'" />'+
                        '<p class="firstNewsParagraph">'+data[key].BUSINESS_NAME+'<a class="readMoreNews" href="'+data[key].MICROSITE_LINK+'">read more</a><em></em><strong></strong></p>'+
                        '<p class="secondNewsParagraph">'+data[key].BUSINESS_DESCRIPTION_CLEAN+'</p>'+
                    '</div>';
				//alert(businessListings);
				$('.newsContainer').append(businessListings);
				
				//theIcon = eval('ico_small_'+data[key].CATEGORY_ID);
				var position = new google.maps.LatLng(data[key].BUSINESS_MAP_LATITUDE, data[key].BUSINESS_MAP_LONGITUDE);
				bounds.extend(position);
				//alert(theIcon);
				marker = new google.maps.Marker({
					
					//icon: theIcon,
					//shadow: ico_background_services,
					position: position,
					map: map,
					icon: '/img/icons/search-icon.png'
				});
				
				google.maps.event.addListener(marker, 'click', (function(marker, key) {
					return function() {
						micrositeLink = data[key].MICROSITE_LINK;
						//infowindow.setContent(companyheading+picture+companydesc+micrositeheading);
						infowindow.setContent('<ul class="nav nav-tabs"><li><a class="openMicrosite" target="_blank" href="'+data[key].MICROSITE_LINK+'" >Open Microsite</a></li></ul><div class="InfoBoxHeader"><strong>'+data[key].BUSINESS_NAME+'</strong></div><div class="InfoBoxPicture"><img width="200px" align="middle" src="'+data[key].BUSINESS_LOGO_IMAGE_NAME+'"/></div><div class="InfoBoxDescription">'+data[key].BUSINESS_DESCRIPTION_CLEAN+'<strong> Open Microsite to read more.</strong></div>');
						infowindow.open(map, marker);
					}
				})(marker, key));
				
				
				markersArray.push(marker);
								
			}
			map.fitBounds(bounds);
			//$('.checkboxLoader').fadeOut();
			var mcOptions = {gridSize: 50};
			markerCluster = new MarkerClusterer(map, markersArray, mcOptions);
			var boundsListener = google.maps.event.addListener((map_canvas), 'bounds_changed', function(event) {
				//this.setZoom(6);
				google.maps.event.removeListener(boundsListener);
			});
			$('#loadingResults').hide();
			$('.newsContainer').show();
		});	
		
		
		//$('#searchLocation').prop('selectedIndex',0);
	});
  
  
	$(document).on('click', '.backTopMem', function(){
		$('html, body').animate({scrollTop:0}, '2000');
	});	
	
	$('#searchString').keyup(function(e) {
		clearTimeout($.data(this, 'timer'));
		if (e.keyCode == 13)
			search(true);
		else
			$(this).data('timer', setTimeout(search, 500));
	});
	var xhr = false;
	
	function search(force) {
		$('html, body').animate({scrollTop:0}, '2000');
		if(xhr)
		{
			xhr.abort();
		}
		$('.hide-this-for-search').hide();
		$('#loadingResults').show();
		$('.website-idea').hide();
		$('.newsContainer').hide();
		var existingString = $("#searchString").val();
		if(existingString == '')
		{
			existingString = 'all';
		}
		if (!force && existingString.length < 0) return; //wasn't enter, not > 2 char
		xhr = $.get('/ajaxbusiness/'+existingString, function(data) {
			var bounds = new google.maps.LatLngBounds();
			deleteOverlays();
			$('.newsContainer').html('');
			for (var key in data)
			{
				//alert(key);
			
				//alert(data[key].BUSINESS_NAME);
				
				
				var businessListings =  '<div class="businessEntry" style="background:url('+data[key].BUSINESS_COVER_PHOTO+') center no-repeat">'+                    
                       	'<img height="30px" src="'+data[key].BUSINESS_LOGO_IMAGE_NAME+'" />'+
                        '<p class="firstNewsParagraph">'+data[key].BUSINESS_NAME+'<a class="readMoreNews" href="'+data[key].MICROSITE_LINK+'">read more</a><em></em><strong></strong></p>'+
                        '<p class="secondNewsParagraph">'+data[key].BUSINESS_DESCRIPTION_CLEAN+'</p>'+
                    '</div>';
				//alert(businessListings);
				$('.newsContainer').append(businessListings);
				
				//theIcon = eval('ico_small_'+data[key].CATEGORY_ID);
				var position = new google.maps.LatLng(data[key].BUSINESS_MAP_LATITUDE, data[key].BUSINESS_MAP_LONGITUDE);
				bounds.extend(position);
				//alert(theIcon);
				marker = new google.maps.Marker({
					
					//icon: theIcon,
					//shadow: ico_background_services,
					position: position,
					map: map,
					icon: '/img/icons/search-icon.png'
				});
				
				google.maps.event.addListener(marker, 'click', (function(marker, key) {
					return function() {
						micrositeLink = data[key].MICROSITE_LINK;
						//infowindow.setContent(companyheading+picture+companydesc+micrositeheading);
						infowindow.setContent('<ul class="nav nav-tabs"><li><a class="openMicrosite" target="_blank" href="'+data[key].MICROSITE_LINK+'" >Open Microsite</a></li></ul><div class="InfoBoxHeader"><strong>'+data[key].BUSINESS_NAME+'</strong></div><div class="InfoBoxPicture"><img width="200px" align="middle" src="'+data[key].BUSINESS_LOGO_IMAGE_NAME+'"/></div><div class="InfoBoxDescription">'+data[key].BUSINESS_DESCRIPTION_CLEAN+'<strong> Open Microsite to read more.</strong></div>');
						infowindow.open(map, marker);
					}
				})(marker, key));
				
				
				markersArray.push(marker);
								
			}
			map.fitBounds(bounds);
			//$('.checkboxLoader').fadeOut();
			var mcOptions = {gridSize: 50};
			markerCluster = new MarkerClusterer(map, markersArray, mcOptions);
			var boundsListener = google.maps.event.addListener((map_canvas), 'bounds_changed', function(event) {
				//this.setZoom(6);
				google.maps.event.removeListener(boundsListener);
			});
			$('#loadingResults').hide();
			$('.newsContainer').show();
			
			//$('#results').show();
		});
		$('#getSubCategories').prop('selectedIndex',0);
		$('#searchSubCategories').prop('selectedIndex',0);
		$('#searchLocation').prop('selectedIndex',0);
		
	}
	
	
});

// Deletes all markers in the array by removing references to them
function deleteOverlays() {
 
  deleteOverlaysCluster();
  if (markersArray) {
    for (i in markersArray) {
      markersArray[i].setMap(null);
    }
    markersArray.length = 0;
  }
}

function deleteOverlaysCluster() {
 	markerCluster.clearMarkers();
}

$(function() {
    
    var $formLogin = $('#login-form');
    var $formLost = $('#lost-form');
    var $formRegister = $('#register-form');
    var $divForms = $('#div-forms');
    var $modalAnimateTime = 300;
    var $msgAnimateTime = 150;
    var $msgShowTime = 2000;

    
    $('#login_register_btn').click( function () { modalAnimate($formLogin, $formRegister) });
    $('#register_login_btn').click( function () { modalAnimate($formRegister, $formLogin); });
    $('#login_lost_btn').click( function () { modalAnimate($formLogin, $formLost); });
    $('#lost_login_btn').click( function () { modalAnimate($formLost, $formLogin); });
    $('#lost_register_btn').click( function () { modalAnimate($formLost, $formRegister); });
    $('#register_lost_btn').click( function () { modalAnimate($formRegister, $formLost); });
    
    function modalAnimate ($oldForm, $newForm) {
        var $oldH = $oldForm.height();
        var $newH = $newForm.height();
        $divForms.css("height",$oldH);
        $oldForm.fadeToggle($modalAnimateTime, function(){
            $divForms.animate({height: $newH}, $modalAnimateTime, function(){
                $newForm.fadeToggle($modalAnimateTime);
            });
        });
    }
    
   
   
   
   
   
   
   
      
   
   
   
   
   xhr = $.get('/ajaxbusiness/searchcategory///', function(data) {
			var bounds = new google.maps.LatLngBounds();
			deleteOverlays();
			//window.history.pushState("object or string", "Namibia Tourism Board", '/business/'+category+'/'+subCategory+'/'+location);		
			//$('.newsContainer').html('');
			
			for (var key in data)
			{
				//alert(key);
			
				//alert(data[key].BUSINESS_NAME);
				
				/*
