						infowindow.open(map, marker);
					}
				})(marker, key));
				
				
				markersArray.push(marker);
								
			}
			map.fitBounds(bounds);
			//$('.checkboxLoader').fadeOut();
			var mcOptions = {gridSize: 50};
			markerCluster = new MarkerClusterer(map, markersArray, mcOptions);
			var boundsListener = google.maps.event.addListener((map_canvas), 'bounds_changed', function(event) {
				//this.setZoom(6);
				google.maps.event.removeListener(boundsListener);
			});
			$('#loadingResults').hide();
			$('.newsContainer').show();
		});
   
});

