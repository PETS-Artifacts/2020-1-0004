  // ** Product Impressions **

// Cross Sell Carousels (Cart)
$(document).ready(function() {
  let productData = [];
  let crossSellCarouselsImpression = $('h5.cart_cross_sell__product__title').find('a');

    crossSellCarouselsImpression.each(function() {
      let productHandle = $(this).attr('href');
      let url = productHandle + '.js';

      $.ajax({
        url: url,
        dataType: 'json',
        type: 'get',
        success: function(data) {
            dataLayerPush(data);
        }
      });
    });
      function dataLayerPush(data) {
          window.dataLayer = window.dataLayer || [];
          window.dataLayer.push({
            event: 'productImpression',
            ecommerce: {
              currencyCode: 'USD',
              impressions: [
                {
                  name: data.title,
                  price: data.price / 100,
                  category: data.type,
                  list: 'Cart Upsell',
                  dimension4: data.handle,
                  dimension6: data.vendor,
                  dimension7: data.id
                }
              ]
            }
          });
        };
      });

// Cross Sell Carousels (Product)
