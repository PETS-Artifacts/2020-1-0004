// All Products Product Impression// Product Detail// ** Product Clicks **

// Compare Mattresses
$(document).on('click', 'span.button', function() {
  let productHandle = $(this).attr('href');
  let url = productHandle + '.js';

  $.ajax({
    url: url,
    dataType: 'json',
    type: 'get',
    success: function(data) {
      window.dataLayer = window.dataLayer || [];
      window.dataLayer.push({
        event: 'productClick',
        ecommerce: {
          currencyCode: 'USD',
          click: {
            actionField: {
              list: 'Compare Mattresses'
            },
            products: [
              {
                name: data.title,
                price: data.price / 100,
                category: data.type,
                position: 1,
                dimension4: data.handle,
                dimension6: data.vendor,
                dimension7: data.id
              }
            ]
          }
        }
      });
    }
  });
});

// All Products
$(document).on('click', 'a.button__text', function() {
  let productHandle = $(this).attr('href');
  let url = productHandle + '.js';

  $.ajax({
    url: url,
    dataType: 'json',
    type: 'get',
    success: function(data) {
      window.dataLayer = window.dataLayer || [];
      window.dataLayer.push({
        event: 'productClick',
        ecommerce: {
          currencyCode: 'USD',
          click: {
            actionField: {
              list: 'All Products'
            },
            products: [
              {
                name: data.title,
                price: data.price / 100,
                category: data.type,
                position: 1,
                dimension4: data.handle,
                dimension6: data.vendor,
                dimension7: data.id
              }
            ]
          }
        }
      });
    }
  });
});

// Cross Sell Carousels
$(document).on('click', 'a.text__nounderline', function() {
  let productHandle = $(this).attr('href');
  let url = productHandle + '.js';

  $.ajax({
    url: url,
    dataType: 'json',
    type: 'get',
    success: function(data) {
      window.dataLayer = window.dataLayer || [];
      window.dataLayer.push({
        event: 'productClick',
        ecommerce: {
          currencyCode: 'USD',
          click: {
            actionField: {
              list: 'Cross Sell Carousels'
            },
            products: [
              {
                name: data.title,
                price: data.price / 100,
                category: data.type,
                position: 1,
                dimension4: data.handle,
                dimension6: data.vendor,
                dimension7: data.id
              }
            ]
          }
        }
      });
    }
  });
});

// Cart Cross Sell
$(document).on('crossSell:addItem', function(event, data) {
  dataLayerPush(data);
});

function dataLayerPush(data) {
  window.dataLayer = window.dataLayer || [];
  window.dataLayer.push({
    event: 'productClick',
    ecommerce: {
      currencyCode: 'USD',
      click: {
        actionField: {
          list: 'Cart Upsell'
        },
        products: [
          {
            name: data.title,
            price: data.price / 100,
            category: data.type,
            position: 1,
            dimension4: data.handle,
            dimension6: data.vendor,
            dimension7: data.id
          }
        ]
      }
    }
  });
}

  // ** Add to Cart **

  // Product Add to Cart
  $(document).on('cart:addItem', function(event, itemData) {
  dataLayerPush(itemData);
  });
  function dataLayerPush(itemData) {
      window.dataLayer = window.dataLayer || [];
      window.dataLayer.push({
      'event': 'addToCart',
      'ecommerce': {
        'currencyCode': 'USD',
        'add': {
          'actionField': {'list': 'Product Page'},
          'products': [
            {
              'name': '',
              'sku': itemData.sku,
              'price': (itemData.price/100),
              'category': '',
              'variant': itemData.variant_title,
              'position': 1,
              'dimension4': '',
              'dimension5': itemData.variant_id,
              'dimension6': '',
              'dimension7': ''
            }
          ]
        }
      }
    });
  };

// ** Quantity Change Events **
// Add (Quantity) To Cart
$(document).on('click', '.cart_item__quantity--increment', function() {
  let item = $(this).data('item');

  $.ajax({
    url: '/cart.js',
    dataType: 'json',
    type: 'get',
    success: function(data) {
      window.dataLayer = window.dataLayer || [];
      window.dataLayer.push({
        event: 'addToCart',
        ecommerce: {
          currencyCode: 'USD',
          add: {
            actionField: { list: 'Cart' },
            products: [
              {
                name: data.items[item].title,
                sku: data.items[item].sku,
                price: Number(data.items[item].line_price) / 100,
                category: data.items[item].product_type,
                variant: data.items[item].variant_title,
                position: 1,
                dimension4: data.items[item].handle,
                dimension5: data.items[item].variant_id,
                dimension6: data.items[item].vendor,
                dimension7: data.items[item].id
              }
            ]
          }
        }
      });
    }
  });
});

// Remove (Quantity) From Cart
$(document).on('click', '.cart_item__quantity--decrement', function() {
  let item = $(this).data('item');

  $.ajax({
    url: '/cart.js',
    dataType: 'json',
    type: 'get',
    success: function(data) {
      window.dataLayer = window.dataLayer || [];
      window.dataLayer.push({
        event: 'removeFromCart',
        ecommerce: {
          currencyCode: 'USD',
          remove: {
            actionField: { list: 'Cart' },
            products: [
              {
                name: data.items[item].title,
                sku: data.items[item].sku,
                price: Number(data.items[item].line_price) / 100,
                category: data.items[item].product_type,
                variant: data.items[item].variant_title,
                position: 1,
                dimension4: data.items[item].handle,
                dimension5: data.items[item].variant_id,
                dimension6: data.items[item].vendor,
                dimension7: data.items[item].id
              }
            ]
          }
        }
      });
    }
  });
});

// Upsell ATC
$(document).on('click', '.crosssell__card-submit', function() {
  let variant = $(this).data('variant');
  let upsellData = {
    id: variant,
    quantity: 1
  };

  $.ajax({
    url: '/cart/add.js',
    dataType: 'json',
    type: 'post',
    data: upsellData,
    success: function(data) {
      window.dataLayer = window.dataLayer || [];
      window.dataLayer.push({
        event: 'addToCart',
        ecommerce: {
          currencyCode: 'USD',
          add: {
            actionField: { list: 'Upsell' },
            products: [
              {
                name: data.title,
                sku: data.sku,
                price: data.line_price / 100,
                category: data.product_type,
                variant: data.variant_title,
                position: 1,
                dimension4: data.handle,
                dimension5: data.variant_id,
                dimension6: data.vendor,
                dimension7: data.id
              }
            ]
          }
        }
      });
    }
  });
});

// Cart Cross Sell ATC
$(document).on('click', '.ghost_button', function() {
  let variant = $(this).data('variant');
  let crossSellData = {
    id: variant,
    quantity: 1
  };

  $.ajax({
    url: '/cart/add.js',
    dataType: 'json',
    type: 'post',
    data: crossSellData,
    success: function(data) {
      $(document).trigger('crossSell:addItem', data);

      window.dataLayer = window.dataLayer || [];
      window.dataLayer.push({
        event: 'addToCart',
        ecommerce: {
          currencyCode: 'USD',
          add: {
            actionField: { list: 'Cross Sell' },
            products: [
              {
                name: data.title,
                sku: data.sku,
                price: data.line_price / 100,
                category: data.product_type,
                variant: data.variant_title,
                position: 1,
                dimension4: data.handle,
                dimension5: data.variant_id,
                dimension6: data.vendor,
                dimension7: data.id
              }
            ]
          }
        }
      });
      window.location = '/cart';
    }
  });
});

