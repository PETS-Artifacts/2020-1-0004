  <script>
  let checkout_step = Shopify.Checkout.step;
    window.userCurrentState = {
      title: 'Privacy Policy',
      product: {
        name: ''
      },
      checkout: '',
      template: 'page.shogun.default'
    };
  function getPageName() {
    if (userCurrentState.template === 'index')
      return (userCurrentState.title = 'Home');
    if (userCurrentState.template === 'cart') return (userCurrentState.title = "Cart");
    if (userCurrentState.checkout && checkout_step) return (userCurrentState.title = 'Checkout - ' + checkout_step.split('_').slice(0,2).join(" "));
    if (userCurrentState.checkout && !checkout_step) return (userCurrentState.title = "Order Confirmation");
    return userCurrentState.title;
  }

  function getPageBreadcrumb() {
    if (userCurrentState.template === 'index')
      return (userCurrentState.title = 'Home');
    if (userCurrentState.template === 'cart') return (userCurrentState.title = "Cart");
    if (userCurrentState.checkout && !checkout_step) return (userCurrentState.title = "Order Confirmation");
    if (userCurrentState.checkout && checkout_step) return (checkout_step);
    if (userCurrentState.template === 'product'|| userCurrentState.template === 'product.shogun.custom') return (userCurrentState.product.name);
    return (userCurrentState.title);
  }
  </script>
