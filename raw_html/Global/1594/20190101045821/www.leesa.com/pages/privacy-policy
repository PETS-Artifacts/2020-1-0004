  let productData = [];
  let crossSellCarouselsImpression = $('div.cross-sell-carousel').find('a.color__main');

    crossSellCarouselsImpression.each(function() {
      let productHandle = $(this).attr('href');
      let url = productHandle + '.js';

      $.ajax({
        url: url,
        dataType: 'json',
        type: 'get',
        success: function(data) {
            dataLayerPush(data);
          }
      });
    });
      function dataLayerPush(data) {
          window.dataLayer = window.dataLayer || [];
          window.dataLayer.push({
            event: 'productImpression',
            ecommerce: {
              currencyCode: 'USD',
              impressions: [
                {
                  name: data.title,
                  price: data.price / 100,
                  category: data.type,
                  list: 'Product Detail Page',
                  dimension4: data.handle,
