<script>
  (function(){
     var cart = {};

    getProductsInCart().then(ifRecyclingFeeInCartRemoveIt);

    function getProductsInCart(){
      return jQuery.getJSON('/cart.js', populateCartData);

      function populateCartData(data){
        cart.hasRecyclingFee = false;

         for ( var i = 0; i < data.items.length; i++ ) {             
           if ( data.items[i].handle === 'recycling-fee' ) {
             cart.hasRecyclingFee = true;
             cart.recyclingFeeId = data.items[i].variant_id;
             cart.recyclingFeeState = data.items[i].variant_title;
           }
         }
       }
     }

    function ifRecyclingFeeInCartRemoveIt(){
      if ( !cart.hasRecyclingFee ) {
        return;
      } 

      Plus.cart.update(cart.recyclingFeeId, 0, 'reload');
    }

  }());
</script>

