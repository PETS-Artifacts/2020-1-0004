    var checkAlert = function(){
      var container = '#omnilert',
        $container = $(container),
        popup = $('.SmartBoard_Table', container);
      if (popup.length) {
        if (typeof Cookies.get('threatClosed') == 'undefined' || !Cookies.get('threatClosed')) {
          $container.show();
        }
        var closeBtn = $(document.createElement('a')).attr('href', '#close').text('X');
