  <script type="text/javascript">
    $(function(){
      //get youtube subscribers
      $.get('https://www.googleapis.com/youtube/v3/channels?part=statistics&id=UCNYHIPRt3QmzQXv1WPqyoEg&key=AIzaSyA0MsWqUP2U7WfCc2RyMaklSowIo9F2dO4',function(data){
        var youtubecount = 6000;
        if (data.items[0].statistics.subscriberCount) {
          youtubecount = data.items[0].statistics.viewCount;
        }
        youtubecount = youtubecount / 1000000;
        youtubecount = Math.round(youtubecount * 10) / 10;
        youtubecount = youtubecount+ 'M+';
        $('.youtubevalue').empty().append(youtubecount);
      });
    });
  </script>

