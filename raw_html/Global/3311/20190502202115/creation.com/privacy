<script type="text/javascript">

	$(function(){
		// if ($('#nightmodebutton').length >= 1 ){
		// 	$('#nightmodebutton').checkbox();
		// }


			})
	function changeCountry(){
		$('#changeCountry').modal('show');
		// console.log(google);
		if ( typeof google == 'undefined' ||google == null || google.maps == undefined){
			//load the google api for the location
			$.getScript("https://maps.googleapis.com/maps/api/js?key=AIzaSyCdGbnd5cepgzMjLUW42uGUfxQ4Y2Mqty8&libraries=places", function() {

			 	swapCountryValue(false);

			 	//get location cookie


			});
		} else {
			 	swapCountryValue(false);
			console.log('alreadyloaded');

		}

	}
	function swapCountryValue(wipe){
		autoCompleteChangePostcode();
		if ($('#changeCountryVal').val() == 'US'){
			$('#postcodelabel').empty().append('City/Zipcode');
		} else {
			$('#postcodelabel').empty().append('City/Postcode');
		}
		// debugger;

		var eventOffices = ["UK", "GB", "AU", "CA", "NZ", "ZA", "SG", "US","UK_COPY", "GB_COPY", "AU_COPY", "CA_COPY", "NZ_COPY", "ZA_COPY", "SG_COPY", "US_COPY"];
		var oMatch = eventOffices.indexOf($('#changeCountryVal').val());
		if (oMatch >= 0){
			$('#askLocation').show();

		} else {
			if (wipe == true){
				console.log('wiped');
			 	$('#changeLocationPostcode').val('');
			 	$('#changeLocationLat').val('');
			 	$('#changeLocationLng').val('');
			 	$('#changeLocationName').val('');
			 	$('#changeLocationCity').val('');
			 	$('#changePostcode').val('');
			}
			$('#askLocation').hide();
		}

		if (wipe == true){
			console.log('wiped');
		 	$('#changeLocationPostcode').val('');
		 	$('#changeLocationLat').val('');
		 	$('#changeLocationLng').val('');
		 	$('#changeLocationName').val('');
		 	$('#changeLocationCity').val('');
		 	$('#changePostcode').val('');
		}
	}

	function autoCompleteChangePostcode(){
		// var setoffice = getCookie('cmi_office');
		var setoffice = $('#changeCountryVal').val();
			// var input = document.getElementById('user_address');
			// var autocomplete = new google.maps.places.Autocomplete(input);
		// console.log('gere');
	    autocomplete = new google.maps.places.Autocomplete(
            /**
            * @type {!HTMLInputElement}
            */ (
                    document.getElementById('changePostcode')), {
                        types: ['(regions)'],
                        componentRestrictions: {country:setoffice.toUpperCase()}
               }
        );
	    autocomplete.addListener(
	        'place_changed', function(){
	        	console.log(autocomplete);
	            changeAutoCompleteSelected(autocomplete);
	        }
	    );

	}
	function changeAutoCompleteSelected(autocomplete){
	  	var place = autocomplete.getPlace();
	  	console.log(place);
	    if (place.geometry == undefined) {
	        jQuery('#nosearchfound').show();
	        return false;
	    }

	  $('#changeLocationCity').val(place.name);
	  $('#changePostcode').val(place.formatted_address);

	  $('#changeLocationLat').val(place.geometry.location.lat());
	  $('#changeLocationLng').val(place.geometry.location.lng());
	  if (place.vicinity != undefined){
		  $('#changeLocationName').val(place.vicinity);
	   }
	  var namefound = 0;
	   for (var i = 0; i < place.address_components.length; i++) {
	      for (var j = 0; j < place.address_components[i].types.length; j++) {
	        // if (place.address_components[i].types[j] == "postal_code") {
	        // 	 $('#changeLocationPostcode').val(place.address_components[i].long_name);

	        // }
	        if (place.address_components[i].types[j] == "locality") {
	        	 $('#changeLocationName').val(place.address_components[i].long_name);
	        	 namefound = 1;
	        }
	        // if (place.address_components[i].types[j] == "locality") {
	        // 	 $('#changeLocationName').val(place.address_components[i].long_name);

	        // }
	      }
	    }
	    if (namefound == 0 && place.vicinity != undefined){
		  $('#changeLocationName').val(place.vicinity);
	    }
	}

	function getBackupPostcodeForOffice(office){

		switch (office) {
			case 'au':
				return '4078';
				break;
			case 'ca':
				return 'N2M5G8';
				break;
			case 'nz':
				return '2145';
				break;
			case 'sg':
				return '911207';
				break;
			case 'za':
				return '7551';
				break;
			case 'gb':
			case 'uk':
				return 'LE86JS';
				break;
			case 'us':
				return '30127';
				break;
			default:
				return '4078';
				break;
		}

	}

	function changeCountrySubmit(){
		$('#changeCountryChangeLoader').show();
		$('#changecountryform').hide();
		var changeLanguageVal = $("#changeLanguageVal").val();
		var changeCountryVal = $("#changeCountryVal").val().replace('_COPY','');
		var changeCity = $('#changeLocationCity').val();
		var changePostcode = $('#changeLocationPostcode').val();
		if (changePostcode == ''){
			changePostcode = getBackupPostcodeForOffice(changeCountryVal);
		}
		var lat = $('#changeLocationLat').val();
		var lng = $('#changeLocationLng').val();
		var location_name = $('#changeLocationName').val();

		// if ($("#nightmodebutton").checkbox('is checked')){
		// 	var nightmode = 1;
		// } else {
		// 	var nightmode = 0;
		// }
		var nightmode = 0;
		$.post('', {changeCountry: changeCountryVal,changeLanguage: changeLanguageVal,nightmode:nightmode,lat:lat,lng:lng,location_name:location_name}, function(data) {
			/*optional stuff to do after success */
			//reload page
			location.reload();
		});
	}
</script></body>
</html>
