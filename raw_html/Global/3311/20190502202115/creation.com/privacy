	function addContact($this){

		if ($this != undefined){
			// var formId = $this.parents('form');
			var formId = $this.parents('.signupformwrapper');
		} else {
			var formId = $('.signupformwrapper');
		}

		// formId.css('background','black');
		formId.find('#loader').show();
		formId.find('#contact').hide();
		formId.find('#failedmessage').hide();
		formId.find('#signedup').hide();
		formId.find('#privacymessage').hide();
		if (!formValidating(formId)){
			formId.find('#loader').hide();
			formId.find('#contact').show();
			return false;
		}
		if (formId.find('input[name="postcode"]').val() == ''){
			formId.find('input[name="postcode"]').val('0000');
		}

		console.log(formId.find('input[name="email"]'));
		// if (typeof formValidating === 'function') {
		// 	if (!formValidating()){
		// 		return false;
		// 	}
		// } else {
		// 	if (!formValidatingBackup()){
		// 		return false;
		// 	}
		// }
		var contactDetails = {};
		if (formId.find('input[name="email"]').length >= 1){
			contactDetails.email = formId.find('input[name="email"]').val();
		}
		if (formId.find('input[name="postcode"]').length >= 1){
			contactDetails.postcode = formId.find('input[name="postcode"]').val();
		}
		if (formId.find('input[name="firstname"]').length >= 1){
			contactDetails.firstname = formId.find('input[name="firstname"]').val();
		}
		// if (formId.find('input[name="lastname"]').length >= 1){
		// 	contactDetails.lastname = formId.find('input[name="lastname"]').val();
		// }
		if ( formId.find('#contact_country')){
			contactDetails.country = formId.find('#contact_country').val();
		}
		if (formId.find('input[name="office"]').length >= 1){
			contactDetails.office = formId.find('input[name="office"]').val();
		}

		if (formId.find('input[name="test"]').length >= 1){
			contactDetails.test = 1;
		}


		if (formId.find('input[name="campaign"]').length >= 1){
			contactDetails.campaigns = [];
			formId.find('input[name="campaign"]').each(function(){
				console.log($(this).val());
				if ($(this).val() == '1'){
					contactDetails.campaigns.push($(this).attr('data-campaignid'));
				}

			});
		}
		if (formId.find('input[name="custom"]').length >= 1){
			contactDetails.customs = [];
			formId.find('input[name="custom"]').each(function(){

				var custom = {};
				custom.value = $(this).val();
				custom.id = $(this).attr('data-customid')
				contactDetails.customs.push(custom);


			});
		}
		console.log(contactDetails);

		if (formId.find('input[name="daily"]:checked').length >= 1){

			contactDetails.daily = true;
		}
		if (formId.find('input[name="infobytes"]').length >= 1){
			contactDetails.infobytes = true;
		}
		//post
		var addContactUrl = '/custom/getResponse/frontend/update.controller.php';
		$.post(addContactUrl, {'action':'addContact','contactDetails':contactDetails}, function( data ) {
			console.log(data);
			formId.find('#loader').hide();
			var results = JSON.parse(data);
			// if (typeof signUpCallBack === 'function') {
			// 	signUpCallBack(results);
			// } else {
			// 	if (data.status == 'success'){
			// 		$('#signedup').show();
			// 		$('#contact').hide();
			// 		$('#failedmessage').hide();
			// 		// $('.responsemessage').addClass('message positive');
			// 		// $('.responsemessage').empty().append('Signed up');
			// 	} else {
			// 		$('#signedup').hide();
			// 		$('#contact').show();
			// 		$('#failedmessage').show();
			// 	}
			// }

			if (results.status == 'success'){
				formId.find('#signedup').show();
				formId.find('form').hide();
				formId.find('#failedmessage').hide();
				formId.find('#privacymessage').hide();
				// formId.find('.responsemessage').addClass('message positive');
				// formId.find('.responsemessage').empty().append('Signed up');
			} else if (results.status == 'error' && results.message == 'Contact already added'){
				formId.find('#updatemessage').show();
				formId.find('form').hide();
				formId.find('#failedmessage').hide();
				formId.find('#privacymessage').hide();
				// formId.find('.responsemessage').addClass('message positive');
				// formId.find('.responsemessage').empty().append('Signed up');
			} else if (results.status == 'error' && results.message == 'Email address not valid'){
				formId.find('#signedup').hide();
				formId.find('form').show();
				formId.find('#privacymessage').show();
				formId.find('#failedmessage').show();
				formId.find('#failedmessage').empty().append('Email address not valid');

				// formId.find('.responsemessage').addClass('message positive');
				// formId.find('.responsemessage').empty().append('Signed up');
			} else {
				formId.find('#signedup').hide();
				formId.find('form').show();
				formId.find('#privacymessage').show();
				formId.find('#failedmessage').show();
				formId.find('#failedmessage').empty().append('Failed to sign up');
			}

		});
	}


	function formValidating(formId){

		if (bottrap()){
			return false;
		}
		var detectError = 0;
			//check if the postcode is required
		if (showPostcode(formId)){
			if (formId.find('input[name="postcode"]').val() == ''){
				formId.find('input[name="postcode"]').parent('.inline').addClass('missing');
				detectError = 1;
			} else {
				formId.find('input[name="postcode"]').parent('.inline').removeClass('missing');
			}
		} else {
			//set the postcode as a default = 0000
			formId.find('input[name="postcode"]').val('0000');
		}

		formId.find('.requiredinput').each(function(){
			if ($(this).val().trim() == ''){
				detectError = 1;
				$(this).parent('.inline').addClass('missing');
			}
		});
		// $('.error').remove();
		//check email format is correct
		var email = formId.find('input[name="email"]').val();
		if (email == ''){
			console.log('Email is empty '+email);
			detectError = 1;
			formId.find('input[name="email"]').parent('.inline').addClass('missing');
		} else if (!validateEmail(email)){
			console.log('not valid email '+email);
			detectError = 1;
			formId.find('input[name="email"]').parent('.inline').addClass('invalid');
			// $('.gr_signup input[name="email"]').parent().append('<div class="error negative">Email not valid</div>');
		}
		if (formId.find('input[name="firstname"]').val() == ''){
			console.log('firstname is empty '+email);
			detectError = 1;
			alert('Please enter more than 2 characters in firstname');

		}
		// if (formId.find('input[name="lastname"]').val() != '' && formId.find('input[name="lastname"]').val().length < 2){
		// 	detectError = 1;
		// 	alert('Please enter more than 2 characters in lastnane');

		// }




		if (detectError ==0){


			return true;
		} else {
			return false;
		}

	}

	function bottrap(){
		//bot tap if this box is ticked there is a bot just filling in data( send them to the homepage)
		if ($('#bottrap').is(':checked')){
			alert('Error in Form');
			window.location = 'http://creation.com';
			return true;
		} else {
			return false;
		}
	}
	$(function(){
		$('.requiredinput').on('blur',function(){
			var formId = $(this).parents('form');
			if ($(this).attr('name') == 'postcode' && !showPostcode(formId)){

			} else {
			// $('.requiredinput').each(function(){
				if ($(this).val().trim() == ''){
					detectError = 1;
					$(this).parent('.inline').addClass('missing');
				} else {
					$(this).parent('.inline').removeClass('missing');
				}
			}
			if (formId.find('input[name="email"]').hasClass('touched')){
				// });
				if (!validateEmail(formId.find('input[name="email"]').val())){

						if (formId.find('input[name="email"]').val() == ''){
							formId.find('input[name="email"]').parent('.inline').removeClass('invalid');
							formId.find('input[name="email"]').parent('.inline').addClass('missing');
						} else {
							formId.find('input[name="email"]').parent('.inline').removeClass('missing');
							formId.find('input[name="email"]').parent('.inline').addClass('invalid');
						}


					// formId.find('input[name="email"]').parent().append('<div class="error negative">Email not valid</div>');
				} else {
					formId.find('input[name="email"]').parent('.inline').removeClass('invalid');
				}
			}
		});
		getCookieCountry();

		$('#contact_country').on('change',function(){
			if (showPostcode($(this).parents('form'))){
				$('.postcodewrapper').show();
			} else {
				$('.postcodewrapper').hide();
			}
		});
	});

	function validateEmail(email) {
	    var re = /^(([^<>()\[\]\\.,;:\s@"]+(\.[^<>()\[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
	    return re.test(email);
	}
	function getCookieCountry(){
		if ($('.autocountry').length >= 1){
			//read cookie
			var cookiecountry = getCookie('cmi_country');
			if (cookiecountry != ''){
				cookiecountry = cookiecountry.toUpperCase();
				$('.autocountry').val(cookiecountry);
			}
		}
	}

	function getCookie(cname) {
	    var name = cname + "=";
	    var ca = document.cookie.split(';');
	    for(var i = 0; i < ca.length; i++) {
	        var c = ca[i];
	        while (c.charAt(0) == ' ') {
	            c = c.substring(1);
	        }
	        if (c.indexOf(name) == 0) {
	            return c.substring(name.length, c.length);
	        }
	    }
	    return "";
	}

	function dailyClick(){
		console.log('clicked');
		if ($('.css-checkbox').is(':checked')) {
			$('.css-checkbox').prop( "checked", false );
		} else {
			$('.css-checkbox').prop( "checked", true );
		}
	}

	function showPostcode(formId){
		var postcodeRequired = ['AU','CA','NZ','SG','UK','US','ZA'];
		var selectedCountry = formId.find('#contact_country').val();
		if (postcodeRequired.indexOf(selectedCountry) != -1){
			return true;
		}
		return false;
	}

