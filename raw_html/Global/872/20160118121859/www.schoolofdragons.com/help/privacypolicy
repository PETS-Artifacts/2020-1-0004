<script type="text/javascript">
  
      var isMobile = function() {
        //console.log("Navigator: " + navigator.userAgent);
        return /(iphone|blackberry|mobile|windows ce|opera mini|palm|ipod|ipad|symbian|android|nexus|kindle|nook|windows phone|silk|iemobile|wpdesktop)/i.test(navigator.userAgent);
    };

    if (isMobile()) {
	
	var logoLink = document.getElementById("logolink").href; 
	if(logoLink != null)
	{
		if(logoLink.indexOf("?") == -1)
		{
			logoLink = logoLink + "?nrd=1";
		}
		else
		{
			logoLink = logoLink + "&nrd=1";
		}
		document.getElementById("logolink").href = logoLink;		
	}
	document.writeln("\n<style>.play-now-btn{display:none !important;}</style>\n\n"); 		
  } 

   
   function validatelogin() {
    $.ajax({
        type: "POST",
        url: window.location.protocol + "//" + window.location.hostname + '/Service/UserState.asmx/isLoggedIn',
        data: null,
        contentType: "application/json; charset=utf-8",
        dataType: "json",
        success: function(msg) {
            if (!msg.d.Success) {
                $('#logoutdiv').hide();
                $('#logindiv').show();
            } else {
                $('#logoutdiv').show();
                $('#logindiv').hide();
            }
      $('#loginSignup').show();
        },
        error: function(xhr, status, error) {
            var err = eval("(" + xhr.responseText + ")");
            $('#errors').html(err.Message);
        }
    });
}
 $(window).load(function(){
  $('#loginSignup').hide();
 
  $('#logindiv').hide();
   $('#logoutdiv').hide();

     validatelogin(); 
   $("#navigation").sticky({ topSpacing: 0 });
    });

  

      function gotoComingSoon()      {

        window.location = 'http://'+window.location.hostname+'/Comingsoon.aspx';
      }
    </script>
