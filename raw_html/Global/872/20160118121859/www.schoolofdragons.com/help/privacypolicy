<script type="text/javascript"> 
function callRedirect(pageUrl, openInSametab) {
    var buildUrl = window.location.protocol + "//" + window.location.hostname + pageUrl;
  var targetLocale = 'es-ES';         
  if(buildUrl.lastIndexOf("aspx")!= -1 && buildUrl.lastIndexOf("lang=") == -1)      
  {         
    if(buildUrl.lastIndexOf("?") != -1)      
    {      
     buildUrl = buildUrl + "&lang=" + targetLocale.substring(0,2);      
    }      
    else      
    {      
      buildUrl = buildUrl + "?lang=" + targetLocale.substring(0,2);      
    }      
  }
  else
  {
	if(targetLocale.lastIndexOf('en') == -1)
		buildUrl = window.location.protocol + "//" + window.location.hostname + "/lang/"+targetLocale.substring(0,2)+pageUrl;
  }

  buildUrl = buildUrl.toLowerCase();

    if (openInSametab === true) {
        window.location.href = buildUrl;
    } else {
        window.open('', '_blank').location.href = buildUrl;
    }
}
function RedirectToOtherWebsite(pageUrl, openInSametab) {
    var requestedHost = window.location.hostname;
    var buildredirectionUrl = "";
    if (requestedHost.lastIndexOf("dev") != -1) {
        buildredirectionUrl = window.location.protocol + "//dev." + pageUrl;
    } else if (requestedHost.lastIndexOf("qa") != -1) {
        buildredirectionUrl = window.location.protocol + "//qa." + pageUrl;
    } else if (requestedHost.lastIndexOf("staging") != -1) {
        buildredirectionUrl = window.location.protocol + "//staging." + pageUrl;
    } else if (requestedHost.lastIndexOf("www") != -1) {
        buildredirectionUrl = window.location.protocol + "//www." + pageUrl;
    }
    if (openInSametab === true) {
        window.location.href = buildredirectionUrl;
    } else {
        window.open('', '_blank').location.href = buildredirectionUrl;
    }
}
</script>
