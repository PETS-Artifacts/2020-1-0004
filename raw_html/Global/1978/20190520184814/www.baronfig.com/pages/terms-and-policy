<script>

  if(customerLoggedIn && wholesaleCustomer && (shopToView && shopToView === 'wholesale')){
    $('.retail-text-line').css('display', 'none')
    $('.wholesale-text-line').css('display', 'inline-block')
  }

  var regionObject = JSON.parse(sessionStorage.getItem('region'))
  var freeRegionShipping = regionObject ? freeShippingValues[regionObject.regionCode] : 30
  if(regionObject){
    if(regionObject.regionCode != "US"){
      $('.shipping-message.free-shipping-not-met > span > .region').html(regionObject.regionName)
    }
  }

  if(customerLoggedIn && wholesaleCustomer && (shopToView && shopToView !== 'retail')){
    freeRegionShipping = 200.00
  }

  if(initialCartTotal){
    initialCartTotal = 0
    formatedInitialCartTotal = parseFloat(initialCartTotal/100)
  }
  else{
    var initialCartTotal = 0
    var formatedInitialCartTotal = parseFloat(initialCartTotal/100)
  }
  if(formatedInitialCartTotal < freeRegionShipping){
    $('.free-shipping-met').css('display', 'none')
    $('.amount-until-free, .wholesale-minimum-message').html('$' + parseFloat(freeRegionShipping - initialCartTotal).toFixed(2))
    $('.free-shipping-not-met').css('display', 'inline-block')
  }
  else {
    $('.meter-container').css('display', 'none')
    $('.free-shipping-not-met').css('display', 'none')
    $('.free-shipping-met').css('display', 'inline-block')
  }

    function animateStatusBar(cartTotal){
      // console.log(cartTotal)
      widthPercent = '100%'
      if(cartTotal < freeRegionShipping){
        let htmlAmount = !!cartTotal ? '$' + parseFloat(freeRegionShipping - cartTotal).toFixed(2) : '$' + freeRegionShipping
        $('.amount-until-free, .wholesale-minimum-message').html(htmlAmount)
        widthPercent = (cartTotal * 100)/(freeRegionShipping) + '%'
        $('.free-shipping-met').css('display', 'none')
        $('.free-shipping-not-met').css('display', 'inline-block')
        $('.green-status-bar')
          .animate({
             width: widthPercent,
           }, 1000, function() {
             if(cartTotal < freeRegionShipping){
               $('#truck-icon').attr('src', "//cdn.shopify.com/s/files/1/0543/1257/t/30/assets/mini-and-cart_truck_01.svg?803617")
             }
             else{
               $('#truck-icon').attr('src', "//cdn.shopify.com/s/files/1/0543/1257/t/30/assets/mini-and-cart_truck_green_01.svg?803617")
             }
           });
      }
      else {
        $('.meter-container').fadeOut()
        $('.free-shipping-not-met').fadeOut()
        // $.each($('.free-shipping-met'), function(index, element){ $(element).css('display', 'inline-block') })
      }
    }

    


    




</script>


