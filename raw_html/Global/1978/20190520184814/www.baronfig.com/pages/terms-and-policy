<script>
  var current_page = "Terms and Policy";
  $('#' + current_page).addClass("active-nav");
</script>


<script>
  var categoriesOpen2 = false;
  var collectionsOpen2 = false;
  var menuOpened2 = false


  function handleCloseMobileMenuClick2(e){
    $('.hamburger-icon-container').trigger('click')
  }

  function handleHamburgerIconClick(e){
    e.preventDefault()
    // console.log(menuOpened2)
    if(menuOpened2){
      $('.mobile-menu-modal-2').toggleClass('show-mobile-menu', false)
      $('.mobile-menu-modal-2').toggleClass('hide-mobile-menu', true)
      // $('.hamburger-icon').attr('src', "//cdn.shopify.com/s/files/1/0543/1257/t/30/assets/store_navigation_icon-menu_01.svg?803617")
      $('.hamburger-icon').removeClass('x-icon').addClass('menu-icon').attr('src', "//cdn.shopify.com/s/files/1/0543/1257/t/30/assets/store_navigation_icon-menu_01.svg?803617")
      // $('#mobile-menu-close-button').css('display', 'none')
      // setTimeout(function(){ $('.mobile-menu-modal-2').css("display", "none") }, 800);
      menuOpened2 = false
    }
    else{
      $('.mobile-menu-modal-2').toggleClass('hide-mobile-menu', false)
      $('.mobile-menu-modal-2').toggleClass('show-mobile-menu', true)

      // $('.mobile-menu-modal-2').css("display", "block")
      // $('.hamburger-icon').attr('src', "//cdn.shopify.com/s/files/1/0543/1257/t/30/assets/store_navigation_icon-close_01.svg?803617")
      $('.hamburger-icon').removeClass('menu-icon').addClass('x-icon').attr('src', "//cdn.shopify.com/s/files/1/0543/1257/t/30/assets/store_navigation_icon-close_01.svg?803617")
      $('#mobile-menu-close-button').css('display', 'block')
      if($('.smartbar-popup-content').length > 0){
        $('#mobile-menu-close-button').css('top', '89%')
      }
      menuOpened2 = true
      }
  }

  $('.hamburger-icon-container').click(function(e){
    handleHamburgerIconClick(e)
  })


  $('.mobile-menu-expandable-2').click(function(e) {
    e.stopPropagation();

      let selected = $(e.currentTarget).find('p').html().toLowerCase()
      if (selected === "categories" && categoriesOpen2 === true || selected === "collections" && collectionsOpen2 === true) {
          closeMobileMenuExpandable2(e, selected)

      }else {
          closeMobileMenuExpandable2(e, selected)
          let selector = '.expandable-' + $(e.currentTarget).find('p').html().toLowerCase().split(" ").join("-")
          $(e.currentTarget).css("border-bottom", "none")
          $(e.currentTarget).find('img').attr('src', "//cdn.shopify.com/s/files/1/0543/1257/t/30/assets/store_navigation_mobile-nav-collapse_01.svg?803617")
          $(selector).slideDown(500);
          if(selected === "categories"){categoriesOpen2 = true}
          if(selected === "collections"){collectionsOpen2 = true}
      }

      e.preventDefault();

  });

  function closeMobileMenuExpandable2(e, selected) {
      let selector = '.expandable-' + $(e.currentTarget).find('p').html().toLowerCase().split(" ").join("-")
      $(selector).slideUp(500, () => {
        $(e.currentTarget).find('img').attr('src', "//cdn.shopify.com/s/files/1/0543/1257/t/30/assets/store_navigation_mobile-nav-expand_01.svg?803617")
        $(e.currentTarget).css("border-bottom", "2px solid #a27586")
      })
      if(selected === "categories"){categoriesOpen2 = false}
      if(selected === "collections"){collectionsOpen2 = false}
    }

</script>

<script>


  $('.nav-search-bar').on('focusin', function(e){
    openSearchContainer()
  })

  function openSearchContainer(){
    let $element = $('.nav-search-bar')
    if(window.innerWidth > 850){
      $('.give-10-get-10, .custom').fadeOut(300, function(){
        $('.give-10-get-10, .custom').css('display', 'none')
      })
    }
    let backgroundPosition = window.innerWidth > 850 ? '5px' : '10px'
    let paddingLeft = window.innerWidth > 850 ? '35px' : '40px'
    $element.css({
      backgroundPosition: backgroundPosition,
      paddingLeft: paddingLeft,
      borderStyle: 'solid',
      borderWidth: '1px',
      borderRadius: '6px',
      color: 'inherit'
    })
    $element.attr('placeholder', 'Search')
    let width = window.innerWidth > 850 ? "250px" : "100%"
    $element.animate({
      width: width
    }, 400, function(){
      $('.search-exit-icon').fadeIn(200)
    });
    let page = "page"
    if(page != 'search'){
      $('.search-container').css('display', 'block')
      $('.search-container').animate({height: '100vh', paddingBottom: '50px'}, 600, function(){
        if(window.innerWidth <= 850){
          // $('html').css({height: '100%', overflow: 'hidden'})
          $('body').css({height: '100%', overflowY: 'hidden'})
        }
      })
      $('.search-wrap').fadeIn(500)
    }
  }

  function closeSearchContainer(){
    
      if(window.innerWidth <= 850){
        // $('html').css({height: 'auto', overflow: 'initial'})
        $('body').css({height: 'auto', overflowY: 'scroll'})
      }
      if(window.innerWidth > 850){
        $('.give-10-get-10, .custom').fadeIn(400, function(){
            $('.give-10-get-10, .custom').css('display', 'inline-flex')
        })
      }
      $('.search-exit-icon').fadeOut(300)
      $('.search-wrap').fadeOut(400)
      let $element = $('.nav-search-bar')
      $element.attr('placeholder', '')
      let duration = window.innerWidth > 850 ? 400 : 0
      $element.animate({
        width: "30px",
        paddingLeft: '0px',
      }, duration, function(){
          $('.search-container').css('paddingBottom', '0px')
        $element.css({
          border: 'none',
          color: 'transparent'
        })
        $element.blur()
        $('.search-exit-icon').blur()

        if(menuOpened2){
          $('.hamburger-icon-container > .hamburger-icon').attr('src', "//cdn.shopify.com/s/files/1/0543/1257/t/30/assets/store_navigation_icon-close_01.svg?803617")
          $('.hamburger-icon-container').unbind('click')
          $('.hamburger-icon-container').click(function(e){ handleHamburgerIconClick(e) })
          $('.mobile-menu-modal-2').css('zIndex', '5000')
        }
        else{
          $('.hamburger-icon-container > .hamburger-icon').attr('src', "//cdn.shopify.com/s/files/1/0543/1257/t/30/assets/store_navigation_icon-menu_01.svg?803617")
          $('.hamburger-icon-container').unbind('click')
          $('.hamburger-icon-container').click(function(e){ handleHamburgerIconClick(e) })
          $('.mobile-menu-modal-2').css('zIndex', '5000')
        }
      });
      $('.search-container').animate({height: '0%'}, 300, function(){
        $('.search-container').css('display', 'none')
      })


    
  }

  $(document).keyup(function(e){
    if(e.keyCode === 27){
      closeSearchContainer()
    }
  });

  $('.search-exit-icon').on('click', function(e){
    e.preventDefault()
    closeSearchContainer()
  })

  $('.search-icon-container').on('click', function(e){
    e.preventDefault()
    $('.mobile-menu-modal-2').css('zIndex', '0')
    $('.hamburger-icon-container > .hamburger-icon').attr('src', "//cdn.shopify.com/s/files/1/0543/1257/t/30/assets/store_navigation_icon-close_01.svg?803617")
    $('.hamburger-icon-container').unbind('click')
    $('.hamburger-icon-container').click(function(e){
      e.preventDefault()
      closeSearchContainer()
    })
    $('.search-input-form.mobile').css('display', 'block')
    $('.nav-search-bar.mobile').css('display', 'block')
    openSearchContainer()
  })



</script>
</div>


<script>
// Permissions: code will allow/hide wholesale module based on conditions.
// 1. User must be logged in.
// 2. User must have 'wholesale' tag in Shopify customer profile.
// 3. Local storage is used to toggle user between Retail and Wholesale site. Users have the ability
//    to remain logged in and switch between sites.

if(!$('.profile-dropdown-container > .logout')[0]){
  localStorage.setItem('shopToggle', '')
}
let customerLoggedIn = null
let customerTags = ""
let wholesaleCustomer = null
if(customerTags){
  wholesaleCustomer = customerTags.includes('wholesale') ? true : null
}
if(customerLoggedIn && wholesaleCustomer && !localStorage.getItem('shopToggle')){
  localStorage.setItem('shopToggle', 'wholesale')
}
let shopToView = localStorage.getItem('shopToggle')
if(shopToView === 'retail'){
  $('.shop-about-container > .wholesale').css('display', 'inline-flex')
  $('.shop-about-container > .wholesale').on('click', function(e){
    e.preventDefault()
    let confirmation = confirm("Clicking OK will redirect you to the Baron Fig Wholesale shop and your existing cart will be cleared. \n\n Click Cancel to continue shopping retail.");
    if(confirmation){
      localStorage.setItem('shopToggle', 'wholesale');
      jQuery.post('/cart/clear.js')
      window.location.href = "/pages/wholesale-portal?new";
    }
  })
}



// Adjust the look of the Navbar for wholesale customers.

if(customerLoggedIn && wholesaleCustomer && (shopToView && shopToView !== 'retail') && window.innerWidth > 850){
  $('.nav').css('background', '#f7f7f8')
  $('.left > .shop-about-container > .shop, .left > .shop-about-container > .best-sellers, .left > .shop-about-container > .new-releases > .item-container > .underline' ).remove()
  $('.left > .shop-about-container > .new-releases > .item-container > p').css({ color: '#4d4c4d', fontWeight: '500', fontSize: '17px'})
  $('.left > .shop-about-container > .new-releases > .item-container > p').html('Wholesale Portal')
  $('.left > .shop-about-container > .new-releases').attr('href', '/pages/wholesale-portal?new')
  $('.left > .shop-about-container > .new-releases').after("<a class='wholesale-return-to-retail' href='' style='display: inline-flex; align-items: center; font-size: 15px; font-weight: 500; padding-right: 24px; font-size: 12px; color: #707070;'><p>Retail website »</p></a>")
  $('.cart-bag > .icon.bag.fig').attr('src', "//cdn.shopify.com/s/files/1/0543/1257/t/30/assets/store_navigation_icon-cart_nav_wholesale_01.svg?803617")
  $('.cart-bag > .icon.bag.fig').css('display', 'block')
  $('.cart-bag.full > .icon.bag.fig').attr('src', "//cdn.shopify.com/s/files/1/0543/1257/t/30/assets/store_navigation_icon-cart_nav_wholesale_02.svg?803617")
  $('.icon.profile').attr('src', "//cdn.shopify.com/s/files/1/0543/1257/t/30/assets/store_navigation_icon-account_wholesale_nav_01.svg?803617")
  $('.give-10-get-10, .custom, .search-input-form').remove()
  $('.cart-bag.full').addClass('wholesale')
  $('.cart-bag.full.wholesale > .cart-count-line').css('color', 'white')
  $('.main-logo').attr('href', '/pages/wholesale-portal')
  $('.wholesale-return-to-retail').on('click', function(e){
    e.preventDefault()
    let confirmation = confirm("Clicking OK will redirect you to the Baron Fig retail shop and your existing cart will be cleared. \n\n Click Cancel to continue shopping wholesale.");
    if(confirmation){
      localStorage.setItem('shopToggle', 'retail');
      jQuery.post('/cart/clear.js')
      window.location.href = "/pages/shop?new";
    }
  })
  
