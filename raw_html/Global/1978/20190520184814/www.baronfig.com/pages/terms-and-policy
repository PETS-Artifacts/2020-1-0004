<script>

  let regionObjectFetch = JSON.parse(sessionStorage.getItem('region'))
  let freeRegionShippingAmt = regionObjectFetch ? freeShippingValues[regionObjectFetch.regionCode] : 25
  $('.message-bar > p > .dollar-value').html(freeRegionShippingAmt)

  if($('.new-nav').css('display') === 'block'){
    let cartCount = 0
    if(cartCount > 0){$('.cart-bag').addClass('full')}
    else{$('.cart-bag').removeClass('full')}
    if($('.new-nav > .message-bar').css('display') === 'block'){
      $('.mobile-menu-modal-2').css('top', '80px')
    }
  }

  function checkScrollTop(){
    let scroll = $(window).scrollTop()
    if(scroll > 30){
      $('.nav').css('position', 'fixed')
      $('.message-bar').css('position', 'fixed')
      $('.mobile-menu-modal-2').css('top', '50px')
      $('.wrap').css('top', '80px')
    }
    else{
      $('.nav').css('position', 'relative')
      $('.message-bar').css('position', 'relative')
      $('.mobile-menu-modal-2').css('top', '80px')
      $('.wrap').css('top', 'auto')
    }
  }

  $(document).ready(function(){

    let navMenuOpened = false
    let onNavMenu = false
    let onHoverItem = false

    let cartCount = 0
    if(cartCount > 0){$('.cart-bag').addClass('full')}
    else{$('.cart-bag').removeClass('full')}

    // MAKE MESSAGE BAR DISPLAY: BLOCK
    // CHANGE .NAV POSITION TO RELATIVE.
    // UNCOMMENT 4 LINES OF CODE BELOW

    if($('.message-bar').css('display') === 'block'){
      $('.wrap').css('top', 'auto')
      $('.mobile-menu-modal-2').css('top', '80px')
      checkScrollTop()
      $(window).on('scroll', function(){
        checkScrollTop()
      })
    }

    $('.underline-no-menu').on('mouseenter', function(e){
      $(e.currentTarget).find('.underline').animate({width: '100%'}, 200);
    })

    $('.underline-no-menu').on('mouseleave', function(e){
      $(e.currentTarget).find('.underline').animate({width: '0%'}, 200);
    })


    $('.about').on('mouseenter', function(){
      let onHoverItem = true
      if(navMenuOpened){
        $('.desktop-menu-container > .shop-menu').css('display', 'none')
        $('.desktop-menu-container > .about-menu').css('display', 'block')
        $( ".shop" ).find('.underline').animate({width: '0%'}, 200);
        $( ".about" ).find('.underline').animate({width: '100%'}, 200);
      }
      else{
        $('.desktop-menu-container').css('display', 'flex')
        $('.desktop-menu-container > .shop-menu').css('display', 'none')
        $('.desktop-menu-container > .about-menu').css('display', 'block')
        $('.nav-overlay').css('display', 'block')
        $( ".shop" ).find('.underline').animate({width: '0%'}, 200);
        $( ".about" ).find('.underline').animate({width: '100%'}, 200);
        navMenuOpened = true;
      }
    })
    $('.shop').on('mouseenter', function(){
      let onHoverItem = true
      if(navMenuOpened){
        $('.desktop-menu-container > .about-menu').css('display', 'none')
        $('.desktop-menu-container > .shop-menu').css('display', 'block')
        $( ".about" ).find('.underline').animate({width: '0%'}, 200);
        $( ".shop" ).find('.underline').animate({width: '100%'}, 200);
      }
      else{
        $('.desktop-menu-container').css('display', 'flex')
        $('.desktop-menu-container > .about-menu').css('display', 'none')
        $('.desktop-menu-container > .shop-menu').css('display', 'block')
        $('.nav-overlay').css('display', 'block')
        $( ".about" ).find('.underline').animate({width: '0%'}, 200);
        $( ".shop" ).find('.underline').animate({width: '100%'}, 200);
        navMenuOpened = true;
      }
    })
    $('.shop, .about').on('mouseleave', function(){
      if(!$('.desktop-menu-container').is(':hover') && ( !$('.shop').is(':hover') && !$('.about').is(':hover') )){
        $('.desktop-menu-container').css('display', 'none')
        $( ".shop" ).find('.underline').animate({width: '0%'}, 200);
        $( ".about" ).find('.underline').animate({width: '0%'}, 200);
        $('.nav-overlay').css('display', 'none')
        navMenuOpened = false;
      }
    })
    $('.desktop-menu-container').on('mouseleave', function(){
      if(!$('.shop').is(':hover')){
        $( ".shop" ).find('.underline').animate({width: '0%'}, 200);
        $( ".about" ).find('.underline').animate({width: '0%'}, 200);
        $('.desktop-menu-container').css('display', 'none')
        $('.nav-overlay').css('display', 'none')
        navMenuOpened = false;
      }
    })

    $('.profile-icon-container').on('mouseenter', function(){
      $( ".profile-dropdown-container" ).css({
        display: 'block',
        border: '1px solid #ececec'
      })
      let profileHeight = !!("") && !!("") ? '245px' : '215px'
      $( ".profile-dropdown-container" ).animate({height: profileHeight, paddingTop: '0px'}, 300);
    })
    $('.profile-icon-container').on('mouseleave', function(){
      if(!$('.profile-dropdown-container').is(':hover')){
        $( ".profile-dropdown-container" ).animate({height: '0px', paddingTop: '0px'}, 100, function(){
          $( ".profile-dropdown-container" ).css('display', 'none')
        });
      }
    })
    $('.profile-dropdown-container').on('mouseleave', function(){
      if(!$('.right-new > .profile-icon-container').is(':hover')){
        $( ".profile-dropdown-container" ).animate({height: '0px', paddingTop: '0px'}, 100, function(){
          $( ".profile-dropdown-container" ).css('display', 'none')
        });
      }
    })
  })
</script>


