<script>

  $('.email-subscribe-form').on('submit', function(event){
      event.preventDefault();
      register($('.email-subscribe-form'))
  });

function register($form) {
    $.ajax({
        type: $form.attr('method'),
        url: $form.attr('action'),
        data: $form.serialize(),
        cache       : false,
        dataType    : 'json',
        contentType: "application/json; charset=utf-8",
        error       : function(err) {
          $('#error-message').html('Could not connect to the registration server. Please try again later.')
          $('#error-message').css('display', 'block')
        },
        success     : function(data) {
            if (data.result != "success") {
              if(data.msg.includes('already subscribed')){
                $('#error-message').css('display', 'none')
                $('#sign-up-button-container>input').css('background', '#22b183')
                $('#sign-up-button-container>input').val('Success!')
              }
              else{
                $('#error-message').html(data.msg)
                $('#error-message').css('display', 'block')
              }
              // Something went wrong, do something to notify the user. maybe alert(data.msg);
            } else {
              // It worked, carry on...
              $('#error-message').css('display', 'none')
              $('#sign-up-button-container>input').css('background', '#22b183')
              $('#sign-up-button-container>input').val('Success!')
            }
        }
    });
}


  function closeGetNotifiedModal(){
    $("#get-notified-modal").removeClass("slide-down-get-notified-modal")
    $("#get-notified-modal").addClass("slide-up-get-notified-modal")
    setTimeout(function(){
       $("#get-notified-background-overlay").css("display", "none")
       $('#sign-up-button-container>input').css('background', '#845164')
       $('#sign-up-button-container>input').val('Sign Up')
       $('#error-message').css('display', 'none')
     }, 450);
  }
</script>



  <script>

  function callback(data)
  {
    // console.log(data)
    if(!freeShipping.includes(data.country_code)){
      sessionStorage.setItem('region', JSON.stringify({'regionCode': 'US', 'regionName': 'United States'}))
    }
    else{
      let regionName = data.country_name
      if(data.country_code.toLowerCase() === 'uk' || data.country_code.toLowerCase() === 'gb'){
        regionName = 'UK'
      }
      sessionStorage.setItem('region', JSON.stringify({'regionCode': data.country_code, 'regionName': regionName}))
    }
  }
    let freeShipping = ['US', 'CA', 'GB', 'UK']

    var script = document.createElement('script');
    script.type = 'text/javascript';
    script.src = 'https://geoip-db.com/jsonp';
    var h = document.getElementsByTagName('script')[0];
    h.parentNode.insertBefore(script, h);

  </script>



  










