<script>

$(document).on('ready', function () {
	  // First function() => 
	  var clicked = localStorage.getItem('clicked') || false;
	  var seen = localStorage.getItem('seen') || false;
	  var resetDate = localStorage.getItem('clickedDate') || false;
	  var randomNumber = localStorage.getItem('modalNumber') || 0;

	  seen = JSON.parse(seen)
	  clicked = JSON.parse(clicked)

	  if (resetDate) {
	  	var clickedDate = new Date(resetDate);

	  	var d = new Date();
	  	var diffInHours = clickedDate - d;
	  	if (diffInHours <= 0) {
				// show modal
				localStorage.setItem('clicked', 'false');
				localStorage.setItem('seen', 'false');
			}
		}

	  //... this should run once per modal close

	  if (seen == false) {
	  	randomNumber = Math.floor(Math.random() * 4) + 1
	  	localStorage.setItem('modalNumber', randomNumber)
	  }



	// Populate the modal

	var elementId = "kewl" + String(randomNumber)
	var k = document.getElementById(elementId)
	var app = document.getElementById("kickstarter-modal")
	app.innerHTML = k.innerHTML


	// Show the Modal
	if (clicked === true && seen === false) {
		$(".earth-day-modal").css('display', 'none');
		localStorage.setItem('clicked', false);
	} else if (clicked === false) {
		ga('send', 'event', 'kickstarterModalOpen', 'kickstarterModalOpen');
		if (seen === false) $(".earth-day-modal").addClass('slideInUp');
		if (seen === true) $(".earth-day-modal").addClass('fadeIn');
		$(".earth-day-modal").css('visibility', 'visible');
		localStorage.setItem('seen', 'true');
		var modalName = 'kickstarter' + (Number(randomNumber) + 4) + 'ModalOpened';
		ga('send', 'event', modalName, modalName);
	}


});


function xClose() {
	$(".earth-day-modal").removeClass('fadeIn');
	$(".earth-day-modal").removeClass('slideInUp');
	$(".earth-day-modal").addClass('slideOutDown');
	localStorage.setItem('clicked', true);
	var d = new Date()
	d.setHours(d.getHours() + 23);
	localStorage.setItem('clickedDate', d.toString())

};

function buttonClose() {
	$(".earth-day-modal").addClass('slideOutDown');
	$(".earth-day-modal").removeClass('fadeIn');
	$(".earth-day-modal").removeClass('slideInUp');
	$(".earth-day-modal").addClass('slideOutDown');
	localStorage.setItem('clicked', true);
	var d = new Date();
	d.setHours(d.getHours() + 71);
	localStorage.setItem('clickedDate', d.toString())
}


//-- remove contrainer from the bottom --//
</script>




