    var recaptchaVerifyCallback = function(response) {
        if(response){
            jQuery('.error-gRecaptcha').html('');
        }
    };
    var gRecaptchaRegFromId;
    var gRecaptchabuyNowModalId;
    var recaptchaOnloadCallback = function() {
        var gRecaptchaRegFrom = document.getElementById('gRecaptchaRegFrom');
        var gRecaptchabuyNowModal = document.getElementById('gRecaptchabuyNowModal');
        var gRecaptchaNewLogin = document.getElementById('gRecaptchaNewLogin');
        var gRecaptchaFeedback = document.getElementById('gRecaptchaFeedback');
        var gRecaptchaRegTest = document.getElementById('gRecaptchaRegTest');

        if(gRecaptchaFeedback){
            gRecaptchaFeedback = grecaptcha.render(gRecaptchaFeedback, {
                'sitekey' : '6LdQThIUAAAAAD_x4xuyfuqKTu_2n5SSbRJiUymB',
                'callback' : recaptchaVerifyCallback
            });
        }

        if(gRecaptchaRegFrom){
            gRecaptchaRegFromId = grecaptcha.render(gRecaptchaRegFrom, {
                'sitekey' : '6LdQThIUAAAAAD_x4xuyfuqKTu_2n5SSbRJiUymB',
                'callback' : recaptchaVerifyCallback
            });
        }

        if(gRecaptchabuyNowModal){
            gRecaptchabuyNowModalId = grecaptcha.render(gRecaptchabuyNowModal, {
                'sitekey' : '6LdQThIUAAAAAD_x4xuyfuqKTu_2n5SSbRJiUymB',
                'callback' : recaptchaVerifyCallback
            });
        }

        if(gRecaptchaRegTest){
            gRecaptchabuyNowModalId = grecaptcha.render(gRecaptchaRegTest, {
                'sitekey' : '6LdQThIUAAAAAD_x4xuyfuqKTu_2n5SSbRJiUymB',
                'callback' : recaptchaVerifyCallback
            });
        }
    };
