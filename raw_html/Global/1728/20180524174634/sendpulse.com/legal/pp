<script type="text/javascript" defer>
    var without_phone = 0;
    function registerAlreadyLink($el, type) {

        var valEmail = jQuery('#inputEmail').attr('value').trim();
        var valPhone = jQuery('#inputPhone').attr('value').trim();

        var queryParam = '';
        switch (type) {
            case 'forgot_phone':
            case 'forgot_email':
                if (valEmail != '') {
                    queryParam += '&user-email=' + valEmail;
                }
                if (valPhone != '') {
                    queryParam += '&user-phone=' + valPhone;
                }
                break;
            case 'login_email':
                if (valEmail != '') {
                    queryParam = '&login=' + valEmail;
                }
                break;
            default:
                break;

        }

        window.open($el.attr('href') + queryParam, $el.attr('target'));
        return false;
    }
</script>



