    <!-- Smart app banner customization -->
        <script>
            $(function () {
                app.init();

                //SmartApp for Android
                if (!(/(iPad|iPhone|iPod).*OS [6-7].*AppleWebKit.*Mobile.*Safari/.test(navigator.userAgent))) {
                    (function () {
                        var smTexts;

                        (function smBannerTexts(els) {
                            var arr = [];
                            for (i = 0; i < els.length; i++) {
                                if ($(els[i]).length > 0) {
                                    var val = $(els[i]).val().trim();
                                }
                                else {
                                    var val = "";
                                }
                                arr.push(val);
                            }
                            //console.log(arr);
                            smTexts = arr;
                            //console.log(smTexts[0]);
                        })(["#smartAppTextAndroid", "#smartOnAppStore", "#smartInGooglePlay", "#smartAppViewTranslation", "#smartAppPrice"]);

                        $.smartbanner({
                            title: smTexts[0],
                            author: ' ',
                            daysHidden: 364,
                            daysReminder: 0,
                            speedIn: 50,
                            speedOut: 100,
                            inAppStore: smTexts[1],
                            inGooglePlay: smTexts[2],
                            appStoreLanguage: $("html").attr("lang"),
                            button: smTexts[3],
                            price: smTexts[4]
                        });

                    })();
                }
            });

        </script>

    <!-- modals opened urls -->
    <script>
        jQuery(window).load(function () {
            if ((window.location.search.indexOf("modal=getprices") > -1) && ($("#getPrices-modal").length)) {
                $("#getPrices-modal").modal("show");
            }
            else if ((window.location.search.indexOf("modal=email") > -1) && ($("#emailForm").length)) {
                $("#emailForm").modal("show");
            }
            else if ((window.location.search.indexOf("modal=tour") > -1) && ($("#bookATour").length)) {
                $("#bookATour").modal("show");
            }

            //map popup ?map=opened | map=opened
            //if ((window.location.search.indexOf("map=opened") > -1) && ($("#mapModal-popup").length)) {
            //    $("#mapModal-popup").modal("show");
            //}
        });
    </script>

