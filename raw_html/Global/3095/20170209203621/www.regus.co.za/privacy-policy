        window.SetPhoneNumber = phoneCallback;
        var phoneCallback = function (formatted_number, mobile_number) {
            // formatted_number: number to display, in the same format as
            // the number passed to _googWcmGet().
            // (in this case, '1-800-123-4567')
            // mobile_number: number formatted for use in a clickable link
            // with tel:-URI (in this case, '+18001234567')
            var phoneNumbers = document.getElementsByClassName("phone-number");
            for (var i = 0, number; number = phoneNumbers[i]; i++) {
                number.href = "tel:" + mobile_number;
                if (number.innerHTML != "") {
                    number.innerHTML = "";
                    number.appendChild(document.createTextNode(formatted_number));
                }
            }
        };
        //end GWCM phone
