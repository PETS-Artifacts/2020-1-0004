<script type="text/javascript">
    function showDeleteConfirmation(sender) {
        var removeConfirmation = confirm("Are you sure you want to remove the product?");
        if (removeConfirmation && typeof GTMRemoveFromCart === "function") {
            //Google Tag Manager
            GTMRemoveFromCart(sender);
        }
        return removeConfirmation;
    }
</script>
  

