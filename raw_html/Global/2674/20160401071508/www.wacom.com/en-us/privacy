<script>

    function loginEventHandlerLogin(eventObj) {

        if (eventObj.UIDSignature != undefined) {
            window.location = "?uid=" + encodeURIComponent(eventObj.UID) + "&us=" + encodeURIComponent(eventObj.UIDSignature) + "&st=" + encodeURIComponent(eventObj.signatureTimestamp) + "&eu=" + encodeURIComponent(eventObj.user.isSiteUID ? "1" : "0");
        }
    }

    function logoutEventHandler(eventObj) {
        gigya.socialize.logout({ callback: logoutResponse });

    }

    function logoutResponse(response) {
        if (response.errorCode == 0) {
            //alert('User has logged out');
        }
        else {
            //alert('Error :' + response.errorMessage);
        }
    }

    function getAccountInfoResponse(response) {
        if (response.errorCode == 0) {
            var profile = response['profile'];
            var msg = profile['firstName'] + ' is ' + profile['age'] + ' years old';
            alert(msg);
        }
        else {
            alert('Error :' + response.errorMessage);
        }
    }

</script>


<script type="text/javascript">
    var login_params =
    {
        version: 2
        , showTermsLink: 'false'
        , height: 100
        , width: 200
        , containerID: 'componentLoginDiv'
        , buttonsStyle: 'fullLogoColored'
        , autoDetectUserProviders: ''
        , facepilePosition: 'none'
        , hideGigyaLink: true
    }

    gigya.socialize.addEventHandlers({
        onLogin: loginEventHandlerLogin,
        onLogout: logoutEventHandler
    })

</script>


<div id="componentLoginDiv"></div>
<script type="text/javascript">
    gigya.socialize.showLoginUI(login_params);
</script>


