<script type="text/javascript">
    function adjustCartFlyoutHeight(sender, args) {
        if (sender._postBackSettings == null || sender._postBackSettings.panelsToUpdate == null || sender._postBackSettings.panelsToUpdate.length < 1 || sender._postBackSettings.panelsToUpdate[0].indexOf("updCart") == -1) {
            return;
        }
        $('.cart.dropdown .dropdown-menu').css('max-height', $(window).height() - $('#header').height());
        $('.cart.dropdown .dropdown-menu .flyout-scroll-area').css('max-height', $(window).height() - $('#header').height() - $('.cart.dropdown .dropdown-menu .flyout-header').height());
        if ($(window).width() < Wacom.Sizes.SCREEN_MD) {
            $('.cart.dropdown .dropdown-menu').width($(window).width());
        } else {
            $('.cart.dropdown .dropdown-menu').width('');
        }
    }

    if (Sys) {
        Sys.WebForms.PageRequestManager.getInstance().add_endRequest(adjustCartFlyoutHeight);
    }

    function resetQuantity() {
        $('.input-sm').each(function () {
            if (!jQuery.isNumeric(jQuery(this).val())) jQuery(this).val('1');
            for (i = 0; i < Page_Validators.length; i++) {
                if (Page_Validators[i].validationGroup.indexOf("CartFlyoutValidationGroup") == 0) {
                    Page_ClientValidate(Page_Validators[i].validationGroup);
                }
            }

        });

        $('.input-hidden').each(function () {
            if (jQuery(this).text() != jQuery(this).prev().val()) jQuery(this).prev().val(jQuery(this).text());
        });

        CartItemsStyle();
    }

    



    function CartItemsStyle() {
        $('.flyout-item').each(function () {
            if (jQuery(this).attr('type') === 'EWASTE') {
                var col = jQuery(this).css('background-color');
                jQuery(this).prev().css('background-color', col);
            }
        });
    }

</script>


<div class="cart dropdown">
    
    
        <a href="javascript:void(0)" target="_blank" id="cartLink" onclick="resetQuantity();" class="btn-cart btn-success navbar-btn navbar-right" data-toggle="dropdown">
