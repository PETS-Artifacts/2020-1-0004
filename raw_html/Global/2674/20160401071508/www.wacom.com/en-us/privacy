<script type="text/javascript">
    function SetCookie() {
        //"2/26/2015 2:40:54 AM"
        //"1@1/26/2015 10:54:57"
        var d = new Date();
        var datestring = (d.getMonth() + 1) + "/" + d.getDate() + "/" + d.getFullYear() + " " + d.getHours() + ":" + d.getMinutes() + ":" + d.getSeconds();

        var x = document.getElementById("ctl30_CheckoutLogin_GigyaTC_RememberChk").checked;

        if (x) {
            document.cookie = "RememberTC:DT=" + "1@" + datestring;
        }
    }

    function ForceSetCookie() {
        var d = new Date();
        var datestring = (d.getMonth() + 1) + "/" + d.getDate() + "/" + d.getFullYear() + " " + d.getHours() + ":" + d.getMinutes() + ":" + d.getSeconds();
        document.cookie = "RememberTC:DT=" + "1@" + datestring;
    }

    function ForceClearCookie() {
        document.cookie = "RememberTC:DT=''";
    }


    function getCookie(cname) {
        var name = cname + "=";
        var ca = document.cookie.split(';');
        for (var i = 0; i < ca.length; i++) {
            var c = ca[i];
            while (c.charAt(0) == ' ') c = c.substring(1);
            if (c.indexOf(name) == 0) return c.substring(name.length, c.length);
        }
        return "";
    }
</script>

