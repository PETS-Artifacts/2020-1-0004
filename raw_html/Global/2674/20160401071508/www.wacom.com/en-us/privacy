<script type="text/javascript">

    function showLoginModal() {
        $('#loginBoxModal').modal('show');
    }

    function clearErrors() {
        var x = document.getElementById("ctl30_CheckoutLogin_divAlert");
        if (x != null) x.innerHTML = "";

        x = document.getElementById("ctl30_CheckoutLogin_UserNameError");
        if (x != null) {
            x.innerHTML = "";
            ValidatorEnable(x, false);
        }

        x = document.getElementById("ctl30_CheckoutLogin_UserPasswdError");
        if (x != null) {
            x.innerHTML = "";
            ValidatorEnable(x, false);
        }

    }


    function showTermsConditionsBoxModal() {
        var TC = getCookie("RememberTC:DT");
        if (TC != null && TC.indexOf("1@") != -1) {
            showLoginModal();
            return;
        }
        $('#TermsConditionsBoxModal').modal('show');
    }

    function showChangePasswordBoxModal(message) {
        $('#FirstTimePasswordChangeText').text(message);
        $('#FirstTimePasswordResetModal').modal('show');
    }

    function ReloadPage() {
        location.reload(true);
    }

</script>

				

                

