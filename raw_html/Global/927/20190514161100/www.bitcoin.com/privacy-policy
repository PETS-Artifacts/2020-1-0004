    $('.nav-tabs li a').click(function(e) {
	    e.preventDefault();
	    $(this).parents('.nav-tabs').find('li').removeClass('active');
	    $(this).parent().addClass('active');
	    var id = $(this).attr('href');
	    $(this).parents('.nav-tabs').next('.tab-content').find('.tab.active').removeClass('active');
		$(id).addClass('active');
		$(id).find('.nav-tabs li').removeClass('active');
		$(id).find('.nav-tabs li').first().addClass('active');
           $(id).find('.tab').first().addClass('active');
    });
});


