        jQuery(document).ready(function($) {
            var holder = '';
            var searchField = $('#category_search_field');

            updateSearchFields(searchField);

            searchField.change(function(){
                updateSearchFields(searchField);
            });

            $('.site_search_btn').click(function(){
                if($('#search').val() == 'Search entire store here...'){
                    $('#keyword_search_error').show();
                    return false;
                }
            });
            $('#enews_input').focus(function(event) {
                if(!enewsCleared)
                    this.value = '';
                enewsCleared = true;
            }); 
        });

        function updateSearchFields(searchField)
        {
            var holder = searchField.val();
            if (isNaN(holder))
            {
                searchField.attr('name', '');
                jQuery('#search').attr('name', holder);
            }
            else
            {
                searchField.attr('name', 'category');
                jQuery('#search').attr('name', 'q');
            }
        }
        </script>
    </div>
</form>
