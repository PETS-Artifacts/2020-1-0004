            {
                $('#authorbio-ul').each(function(index, element){
                    $(element).remove();
                });
            }

            var theVal = $(this).val();
            if(timer)
            {
                clearTimeout(timer);
            }
            timer = setTimeout(function(){
                $.ajax({
                    url: '/author/search?auth=320axjakdjksweru34348938e9wxuas9ud9sus9afu&q='+theVal,
                    method: 'GET',
                    success: function(res){                        
                        if(res && res!=='' && res!==null && res!==undefined && res!=='no author' && res!='invalid auth'
                            && res!=='invalid params') {
                            if(typeof(res)=='string')
                            {
                                res = JSON.parse(res);
                            }
                            
                            if(res.length == 0) {
                                return false;
                            }
                            if(res.data.length == 0) {
                                return false;
                            }
                            
                            var html = ""; //'<div class="author-container"><h4>Author:</h4>';
                            var bioUrl = res.route_key;
                            var wraperRemoved = false;
                            res.data.forEach(function(item,i){
                                // console.log(i + " === " + v);
                                html += '<a href="'+ BASE_URL + res.route_key  +'/'+ res.data[i].url_key + '">' +
                                    '<div class="author"><span class="author-img"><img src="'+ BASE_URL +'media/'+
                                    res.media_dir + res.data[i].thumbnail+'"/></span><span>' + res.data[i].author_name +
                                    '</span></div></a>';
                                
                                if($('#authorbio-ul').length > 0){
                                    wraperRemoved = false;
                                    
                                }
                                else {
                                    if(mtcount>1)
                                    {
                                         wraperRemoved = true;
                                    }    
                                }
                            });

                            html += '</div>';

                                $('#search_autocomplete #authorbio-ul').empty();
                                if(wraperRemoved === true) {
                                    $('#search_autocomplete').prepend('<ul id ="authorbio-ul"' +
                                        ' style="padding-left:0!important; padding-right:0; padding-top:20px;">' +
                                        '<div class="author-container"><h4>Author:</h4>'+ html +'</ul>');
                                    
                                }
                                else {
                                   $('#search_autocomplete #authorbio-ul').prepend('<div class="author-container">' +
                                       '<h4>Author:</h4> ' + html);
                                }                            
                        }
                        setTimeout(function () {
                            $('#search_autocomplete').show();
                        }, 800);

                    }
                });
                mtcount++;
            }, 400);
        });
    });
