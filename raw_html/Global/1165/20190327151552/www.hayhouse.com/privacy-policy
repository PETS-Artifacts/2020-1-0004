        $(document).delegate('.free-gift-check, .free-course-check', 'click', function(){
            if($(this).is(':checked')){
                $('#signUpModalfromus .newsletter-submit-btn').removeAttr('disabled');
            }
            else {
                $('#signUpModalfromus .newsletter-submit-btn').attr('disabled',true);    
            }
         });

        $(document).delegate('#signUpModalfromus .newsletter-submit-btn', 'click', function(){
            if($('#newsletter-modal-validate-detail').valid()){
                var body = $('body').loader();
                body.loader('show');
                $('.signup-error-msg').remove();
                var datas = {'name':$('#name').val(),'email':$('#signUpModalfromus #modalnewsletter').val() , 'data': $('#signUpModalfromus input[name="data"]').val()};
                $.ajax({
                    type: 'POST',
                    url: $('#newsletter-modal-validate-detail').attr('action'),
                    data: datas,
                    dataType: JSON,
                    complete: function(result) {
                        try {
                            result = eval('(' +  result.responseText + ')');
                            if(result.error == 0) {
                                $('#newsletter-modal-validate-detail').hide();
                                $('.thank-you-content').show();
                                $('<div class="signup-success-msg">'+ result.message +'</div>').insertBefore('.thank-you-content');
                            }
                            else { 
                                $('.signUpModalfromus form .modal-body').prepend('<div class="signup-error-msg"><div>'+ result.message +'</div></div>');                                
                            }
                            body.loader('hide');
                        }
                        catch(err){
                            console.log(err);
                        }
                    },
                    fail: function() {
                        $('#newsletter-modal-validate-detail').show();
                        $('.thank-you-content').hide();
                        body.loader('hide');
                    }
                }); 
            }      
        });



        require(['jquery'],function($){
            var submitBtn = jQuery('.newsletter-submit-btn');
            submitBtn.attr('disabled',true);
