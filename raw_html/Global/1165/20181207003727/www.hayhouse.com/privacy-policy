                    jQuery(document).ready(function($){
                        var mtcount=1;
                        var timer=0;
                        $('#search').keyup(function() {
                            if(mtcount=1 || $('#authorbio-ul').length>0)
                            {
                                $('#authorbio-ul').each(function(index, element){
                                    $(element).remove();
                                });
                            }

                            var theVal = $(this).val();
                            if(timer)
                            {
                                clearTimeout(timer);
                            }
                            timer = setTimeout(function(){
                                $.ajax({
                                    url: '/authorbio/index/retrieve?auth=320axjakdjksweru34348938e9wxuas9ud9sus9afu&authorName='+theVal,
                                    method: 'GET',
                                    success: function(res){
                                        if(res!=='' && res!==null && res!==undefined && res!=='no author' && res!='invalid auth' && res!=='invalid params') {
                                            if(typeof(res)=='string')
                                            {
                                                res = JSON.parse(res);
                                            }
                                            var bioUrl = res[0].url_key;
                                            if($('#authorbio-ul').length>0){
                                                $('#authorbio-ul').html('<li class="selected" style="background-color: white"><div style="padding-left:.3rem; background-color:white; color:#de8d59;"><h5 style="margin: 0; margin-left:.1rem;">Author:</h5></div><a href="/authorbio/'+bioUrl+'" style="background-color: white"><div class="col-md-12 col-xs-12" style="width:100%; padding-bottom: 15px; padding-left:.1rem; padding-right:.1rem; margin-left: 0; margin-right: 0;"><div class="" style="padding:0"><img class="" style="width:60px; height:60px;" src="https://cdn.hayhouse.com/media/'+res[0].image+'"/><h4 class="author-name-search adv-search-margin" style="display: inline-block; margin-left:10px; margin-top:0">' + res[0].name + '</h4></div><div class="col-md-8 col-xs-8" style="width:75%"></div></div></a><div style="background:white; color:#de8d59; padding-left:.3rem"><h5 style="margin-left:.1rem">Results:</h5></div></li>');
                                            }
                                            else
                                            {
                                                if(mtcount>1)
                                                {
                                                    setTimeout(function(){
                                                        $('#authorbio-ul').remove();
                                                        $('.search_autocomplete-redesign').prepend('<ul id ="authorbio-ul" style="padding-left:0!important; padding-right:0; padding-top:20px;"><li class="selected" style="background-color: white"><div style="padding-left:.3rem; background-color:white; color:#de8d59;"><h5 style="margin: 0; margin-left:.1rem;">Author:</h5></div><a href="/authorbio/'+bioUrl+'" style="background-color: white"><div class="col-md-12 col-xs-12" style="width:100%; padding-bottom: 15px; padding-left:.1rem; padding-right:.1rem; margin-left: 0; margin-right: 0;"><div class="" style="padding:0"><img class="" style="width:60px; height:60px;" src="https://cdn.hayhouse.com/media/'+res[0].image+'"/><h4 class="author-name-search adv-search-margin" style="display: inline-block; margin-left:10px; margin-top:0">' + res[0].name + '</h4></div><div class="col-md-8 col-xs-8" style="width:75%"></div></div></a><div style="background:white; color:#de8d59; padding-left:.3rem"><h5 style="margin-left:.1rem">Results:</h5></div></li></ul>');
                                                    }, 600);
                                                }
                                            }
                                        }
                                    }
                                });
                                mtcount++;
                            }, 400);
                        });
                    });
                </script>
