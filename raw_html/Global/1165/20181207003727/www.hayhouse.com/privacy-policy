<script type="text/javascript">

    jQuery(document).ready(function(){
        if (!Cookies.get('newsletterModalShown')) {
            setTimeout(function(){
                var el = jQuery("#newsletter-modal-validate-detail button[type='submit']")[0];
                var widgetId = grecaptcha.render(el, {
                    'sitekey' : '6LdSzyIUAAAAABgw945KlNQ853256iWfL2FN_R6j',
                    'size'    : 'invisible',
                    'badge'   : 'inline',
                    'callback': function(token) {
                        jQuery(el).parent().find(".g-recaptcha-response").val(token);
                        jQuery('#newsletter-modal-validate-detail').submit();
                    }
                });

                jQuery(el).prop('disabled', true);
                jQuery(el).parents('.modal-body').find('input[type=checkbox]').on('change', function() {
                    if (jQuery(this).is(':checked')) {
                        jQuery(el).prop('disabled', false);
                    } else {
                        jQuery(el).prop('disabled', true);
                    }
                });

                jQuery(el).parent().find('.grecaptcha-badge').parent().css('display','none');
                jQuery(el).data('recaptcha-widget', widgetId);

                jQuery('#signUpModal').modal('show');
                Cookies.set('newsletterModalShown',1,{expires:30});
            },15000);
        }
    });
    //<![CDATA[
    var newsletterSubscriberFormDetail = new VarienForm('newsletter-modal-validate-detail');
    //]]>
