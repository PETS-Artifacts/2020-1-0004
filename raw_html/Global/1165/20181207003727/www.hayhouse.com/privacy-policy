<script type="text/javascript">
    setMargin();
    if (!Mage.Cookies.get("sticky-header")) {
        jQuery('#sticky-header').show();
        setMargin();
    }
    jQuery('#sticky-header .close').click(function() {
        jQuery('#sticky-header').hide();
        setMargin();
        var expiryDate = new Date();
        expiryDate.setDate(expiryDate.getDate() + 1);
        Mage.Cookies.set('sticky-header', '1', expiryDate);
    });
    jQuery(window).on('resize', function(){
        setMargin();
    });
    function setMargin() {
        var currentNavHeight = parseInt(jQuery('.navbar-fixed-top').height());
        if (currentNavHeight!=parseInt(jQuery('body').css('padding-top'))) {
            jQuery('body').css('padding-top',currentNavHeight+'px');
        }
    }
</script>
