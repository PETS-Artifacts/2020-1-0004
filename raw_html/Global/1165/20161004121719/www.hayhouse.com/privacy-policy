<script>
    var formKey = 'PmpDz9y2UxyGGI69';
    function addProductToCart(productId, uenc, qty)
    {
        qty = qty ? qty : 1;

        var baseUrl = 'http://www.hayhouse.com/checkout/cart/add';
        setLocation(baseUrl + '/uenc/' + uenc + '/product/' + productId + '/form_key/' + formKey + '?qty='+qty);
    }

    function addProductToWishlist(e, productId, doNotAdd)
    {
        doNotAdd = doNotAdd ? doNotAdd : false;

        var baseUrl = 'https://secure.hayhouse.com/wishlist';
        if(!doNotAdd) {
            baseUrl = baseUrl + '/index/add/product/' + productId + '/form_key/' + formKey + '/';
        }
        setLocation(baseUrl);
        e.preventDefault();
    }
</script>
