jQuery(document).ready(function () {

  function ExtruderSidebar(value) {
    if(value == "enable") {
      jQuery('.extruder-sidebar').attr('id', 'extruderLeft');
      jQuery('.extruder-sidebar').addClass('extruder-enabled');
      jQuery('.extruder-sidebar').attr('style', 'height: 100% !important; position: fixed !important;');
      jQuery('.extruder-sidebar').removeClass('extruder-disabled');
      jQuery('.extruder-content').attr('style', 'border-right: none !important;');
      jQuery('.extruder-sidebar').closeMbExtruder();
      jQuery('.flap').show();
    } else {
      jQuery('.extruder-sidebar').attr('id', '');
      jQuery('.extruder-content').attr('style', 'border-right: none !important;');
      jQuery('.extruder-sidebar').attr('style', 'position: relative !important; left: 0px; z-index: 1105; opacity: 1;');
      jQuery('.ext_wrapper').attr('style', 'border: none; position: relative !important;');
      jQuery('.extruder-sidebar').addClass('extruder-disabled');
      jQuery('.extruder-sidebar').openMbExtruder();
      jQuery('.extruder-sidebar').removeClass('extruder-enabled');
      jQuery('.flap').hide();
    }
  }

  jQuery(window).resize(function() {
    if (window.innerWidth <= 992 && !jQuery('.extruder-sidebar').hasClass('extruder-enabled')) {
      ExtruderSidebar("enable");
    } else if (window.innerWidth > 992 && !jQuery('.extruder-sidebar').hasClass('extruder-disabled')) {
      ExtruderSidebar("disable");
    }
  });
});

