  function social_share_39(action) {
    var url = "https://www.animenewsnetwork.com/privacy-policy";
    var title = "Privacy Policy";
    var ssurl, ssoptions = 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,';
    if (action == "facebook") {
      ssurl = 'https://www.facebook.com/sharer/sharer.php?u=' + encodeURI(url);
      ssoptions += 'height=300px,width=600px';
    }
    if (action == "twitter") {
      ssurl = 'https://twitter.com/share?url=' + encodeURI(url) + '&text=' + encodeURI(title);
      ssoptions += 'height=254px,width=600px';
    }
    window.open(ssurl, '', ssoptions);
  }
  </script>
