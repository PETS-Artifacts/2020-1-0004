					//parseInt
					
					//storing company, year, filing id to hidden fields for subsequent "Load More" clicks
					jQuery('input[name=hid_sec_company_name]').val(jQuery("#edgar-sec-filings-form div div#sec-filings-data2 div.table-responsive table.table-roomy.table-responsive-stacked.table.table-striped.sticky-enabled").attr('comp_name'));
					jQuery('input[name=hid_sec_view_year]').val(jQuery("#edgar-sec-filings-form div div#sec-filings-data2 div.table-responsive table.table-roomy.table-responsive-stacked.table.table-striped.sticky-enabled").attr('view_year'));
					jQuery('input[name=hid_sec_filing_type]').val(jQuery("#edgar-sec-filings-form div div#sec-filings-data2 div.table-responsive table.table-roomy.table-responsive-stacked.table.table-striped.sticky-enabled").attr('fil_type'));
					
					jQuery('input[name=hid_sec_total_records]').val(v_totalrows);
					
					//Filtering and removing duplicate filing ids
					if (jQuery('input[name=hid_sec_company_name]').val() == "7762" && jQuery('input[name=hid_sec_filing_type]').val() == "424|97|7|8|9|13|14|29|30|35|36|45|92|93|95|124|127|135|136|148|152|156|158|159|164|276|282|290|293|300|312|313|1076|318|320|328|329|337|338|345|346|349|351|357|358|1216|1217" && jQuery('input[name=hid_sec_view_year]').val() == "01/01/1994~") {
						var v_BaseIdsToCheck = "";
						jQuery("#edgar-sec-filings-form div div#sec-filings-data div.table-responsive:first table tbody tr.sec-latest-4:visible").each(function( index ) {
							//console.log(jQuery(this).attr("unique_id"));
							v_BaseIdsToCheck += jQuery(this).attr("unique_id") + "|";
						});
						//console.log("v_BaseIdsToCheck::"+v_BaseIdsToCheck);
						var v_checkMax = 0;
						var v_dupCount = 0;
						if (!varBlnFirstLoad) {
							//First load
							//max 4 rows can be added
							v_checkMax = 8;
						} else {
							//second and subsequent loads
							//max 8 rows can be added
							v_checkMax = 12;
						}
						v_checkMax = 1;
						jQuery('#edgar-sec-filings-form div div#sec-filings-data2 div.table-responsive table tbody tr').each(function( index ) {
							if (v_BaseIdsToCheck.indexOf(jQuery(this).attr("unique_id")+"|") != -1) {
								//console.log("Duplicate matched for:::"+jQuery(this).attr("unique_id") + "  .  This row would be skipped.");
								jQuery(this).remove();
								v_dupCount = v_dupCount + 1;
							} else {
								//console.log("varBlnFirstLoad:"+varBlnFirstLoad+"   " + "v_checkMax::"+v_checkMax);
								if (!varBlnFirstLoad) {
									//First load
									//max 4 rows can be added
									//if (parseInt(v_checkMax) <= 4) {
									if (parseInt(v_checkMax) > 4) {
										jQuery(this).remove();
										//console.log("After remove::v_checkMax::"+v_checkMax);
									}
								} else {
									//second and subsequent loads
									//max 8 rows can be added
									//if (v_checkMax <= 8) {
									if (parseInt(v_checkMax) > 8) {
										jQuery(this).remove();
									}
								}
								v_checkMax = parseInt(v_checkMax) + 1;
							}
						});
						//reorganizing start and end rows
						if (!varBlnFirstLoad) {
							//assign first time duplicate count to hidden field, that is used for Reset button
							jQuery('input[name=hid_sec_dup_cnt]').val(parseInt(v_dupCount));
							
							jQuery('input[name=hid_sec_start_row]').val(parseInt(v_startrow) + 4 + parseInt(v_dupCount));
							//revised end row
							v_endrow = parseInt(v_endrow) - 4 + parseInt(v_dupCount);
							jQuery('input[name=hid_sec_end_row]').val((parseInt(v_totalrows) >= (parseInt(v_endrow) + 12)) ? (parseInt(v_endrow) + 12) : parseInt(v_totalrows));
						} else {
							//console.log("v_dupCount="+v_dupCount);
							jQuery('input[name=hid_sec_start_row]').val(parseInt(v_startrow) + 8 + parseInt(v_dupCount));
							//revised end row
							v_endrow = parseInt(v_endrow) - 4 + parseInt(v_dupCount);
							jQuery('input[name=hid_sec_end_row]').val((parseInt(v_totalrows) >= (parseInt(v_endrow) + 12)) ? (parseInt(v_endrow) + 12) : parseInt(v_totalrows));						
						}
					}
					//console.log("v_startrow::"+v_startrow);
					//console.log("v_endrow::"+v_endrow);
					//console.log("hid_sec_start_row::"+jQuery('input[name=hid_sec_start_row]').val());
					//console.log("hid_sec_end_row::"+jQuery('input[name=hid_sec_end_row]').val());
					
					if (!varBlnFirstLoad) {
						//First load
					} else {
						//second and subsequent loads
					}
					
					//clone for first load
					if (!varBlnFirstLoad) {
						//console.log("Clone for first time:::"+varBlnFirstLoad);
						varBlnFirstLoad = true;
						varBlnSecLoad = false;
						secTabClone = jQuery("#edgar-sec-filings-form div div#sec-filings-data2 div.table-responsive table.table-roomy.table-responsive-stacked.table.table-striped.sticky-enabled").clone(true);
