	jQuery('div.view-id-vzc_awards_list div.field-name-field-award-press-release a[target="_blank"]').each(function( index ) {
		jQuery(this).wrap('<span class="CTA_icon_blue">');
	});
	//History and timeline
	jQuery('#block-vzc-timeline-historytimeline div.views-field-timeline-pressrelease a[target="_blank"]').each(function( index ) {
		jQuery(this).wrap('<span class="CTA_icon_red">');
	});
