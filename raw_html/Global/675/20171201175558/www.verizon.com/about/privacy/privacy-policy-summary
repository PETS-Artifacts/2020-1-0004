jQuery(document).ready(function () {
  jQuery('.webform-client-form .total .webform-component--zip input').on('focusout', function () {
    function zlink(){
      if (jQuery('.webform-client-form .total .webform-component--zip input + span').size() > 0) {  
        jQuery('.webform-client-form .total .webform-component--zip input').addClass('zip_form');         
      }
