					//Adding No data row
					jQuery('#edgar-sec-filings-form div div#sec-filings-data div.table-responsive:first table tbody').append('<tr class="even"><td colspan="4">No data is available at this time.');
					//hiding load more
					jQuery('#edit-butsecdatloadmore').css("display", "none");
					//hiding no data divs
					jQuery('#sec-filings-data2 div').css("display", "none");
				}
				//mobile fix
				if (jQuery(window).width() < 767) {
					//if (jQuery('#edgar-sec-filings-form #edit-company').val() != "7762" || jQuery('#edgar-sec-filings-form #edit-type option:selected').text() != "All Filings" || jQuery('#edgar-sec-filings-form #edit-year option:selected').text() != (new Date).getFullYear()) {
