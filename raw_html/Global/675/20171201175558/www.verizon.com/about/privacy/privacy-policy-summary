					//if (jQuery('#edgar-sec-filings-form #edit-company').val() == "7762" && jQuery('#edgar-sec-filings-form #edit-type option:selected').text() == "All Filings" && jQuery('#edgar-sec-filings-form #edit-year').val() == "01/01/2017~12/31/2017") {
					if (jQuery('#edgar-sec-filings-form #edit-company').val() == "7762" && jQuery('#edgar-sec-filings-form #edit-type option:selected').text() == "All Filings" && jQuery('#edgar-sec-filings-form #edit-year').val() == "01/01/1994~") {
