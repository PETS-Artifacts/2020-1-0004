			});
	jQuery(document).ajaxComplete(function( event, xhr, settings ) {
		//if (xhr.responseText.indexOf('sec_data_fetch') != -1 && jQuery("#edit-sec-go").prop("disabled") == true) {
		//console.log("xhr.responseText::"+xhr.responseText);
