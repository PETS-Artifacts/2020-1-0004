		jQuery(".show-layer").on('click', function(e){
			if (jQuery(this).parent().parent().children(".heading").hasClass("moveUp")) {
				jQuery(this).parent().parent().children(".heading").removeClass("moveUp").addClass("moveDown");
				jQuery(this).parent().parent().children(".comp-img-type").removeClass("moveDown").addClass("moveUp");
			}
			else if (jQuery(this).parent().parent().hasClass("active")) {
   					jQuery(this).parent().parent().children(".comp-img-type").removeClass('moveUp').addClass('moveDown'); 
					jQuery(this).parent().parent().children(".heading").removeClass('moveDown').addClass('moveUp');
			}
			else{
				jQuery(this).parent().parent().addClass("active");
				jQuery(this).parent().parent().children(".heading").addClass("moveDown");
				jQuery(this).parent().parent().children(".comp-img-type").addClass("moveUp");
			}
		});
	});

