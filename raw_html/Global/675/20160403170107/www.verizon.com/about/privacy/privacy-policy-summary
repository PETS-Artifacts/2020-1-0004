			if (screen1A <= screen2A) {		jQuery(".comp-box-1").height(screen2A);		}
			else{		jQuery(".comp-box-1").height(screen1A);		}
			
			var screen1B = jQuery(".comp-box-2 .heading").height();
			var screen2B = jQuery(".comp-box-2 .img-box").height();
			
			if (screen1B <= screen2B) {		jQuery(".comp-box-2").height(screen2B);		}
			else{		jQuery(".comp-box-2").height(screen1B);		}
			
