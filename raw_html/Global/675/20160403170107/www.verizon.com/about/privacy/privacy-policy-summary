        function indicative_call(event, properties, count) {
            count = count || 0;
            if (typeof Indicative != 'undefined') {
                Indicative.buildEvent(event, properties);
                //console.log('event built: ', event);
                //console.log('event content: ', properties);
            } else if (count < 10) {
                count++;
                setTimeout(function () {
                    indicative_call(event, properties, count)
                }, 1000);
            } else {
                console.log('cannot find Indicative');
            }
        }

        function indicativePageView(){
            if(pathArray.indexOf('careers') + 1 === pathArray.length){
                indicative_call('Career Page View');
            }
            else{
                var trail = jQuery('ol[class = "breadcrumb"]');
                trail = trail[0];
                trail = trail.children;
                var careerIndex = 'none' ;
                for (var i  = 0; i < trail.length ; i++){
                    if(jQuery(trail[i]).text() === "Careers"){
                        careerIndex = i;
                        break;
                    }
                }
                var currentTrail = jQuery(trail[trail.length - 1]).text();

                if (careerIndex !== 'none') {
                    switch (jQuery(trail[careerIndex + 1]).text()) {
                        case 'Working Here' :
                            indicative_call('Working Here Page View', {'Working Here Page Viewed': currentTrail});
                            break;
                        case 'Career Areas' :
                            indicative_call('Career Areas Page View', {'Career Area Page View': currentTrail});
                            break;
                        case 'College Students' :
                            indicative_call('College Students Page View', {'College Students Page Viewed': currentTrail});
                            break;
                        case 'Military' :
                            indicative_call('Military Page View', {'Military Page Viewed': currentTrail});
                            break;
                        case 'Locations' :
                            indicative_call('Locations Page View', {'Locations Page Viewed': currentTrail});
                            break;
                    }
                }else{
                    indicative_call('Page View', {'Page View': currentTrail});
                }
            }
        }

