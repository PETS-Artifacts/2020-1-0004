ponent-detail']" class="ng-scope  ContentBasicPage m-component-detail">
    <article phx-content-item="item" phx-display-mode="{{phxDisplayMode}}" phx-component-config="phxComponentConfig" ng-class="[htmlClasses, 'l-full-width', 'l-story_full']" class="ng-isolate-scope phx-content-basic-page m-basic-page ng-scope  l-full-width l-story_full" content-item="phxContentItem" phx-primary-image-profile="{{phxPrimaryImageProfile}}">

