<script>
	jQuery('.freeShippingBanner.second .navclose').click(function(event) {
		var today = new Date();
		today.setTime(today.getTime());
		//This time is for One Day Means 24 hour 1=day 1000=1sec 60*60=1hour 24=numbers of hour * day in a month
		var expires = 1 * 1000 * 60 * 60 * 24*31;
		var expires_date = new Date(today.getTime()+(expires))
		jQuery(this).parent().remove();
		Mage.Cookies.set('showmessage','false',expires_date);
	});
</script>
