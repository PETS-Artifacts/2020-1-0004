<script type="text/javascript">
    function onReady() {
        var loginEl = document.getElementById('login'),
            contestEl = document.getElementById('register');

        var el = null,
            elName = '';
        if (loginEl != null) {
            el = loginEl;
            elName = 'login';
        } else if (contestEl != null) {
            el = contestEl;
            elName = 'register';
        } else {
            return;
        }

        if (el != null) {
            el.addEventListener('click', function(evt) {
                if (evt.target.className.match('disabled')) return;
                window.parent.postMessage(elName, '*');
            });
            window.addEventListener('message', function(evt) {
                var btn;
                try {
                    var evtData = JSON.parse(evt.data);
                    if (evtData.actionType === 'APERTURE_USER_SUCCESS') {
                      btn = document.getElementById(elName);
                      btn.innerHTML = 'Registered';
                      if (!btn.className.match('disabled')) btn.className += ' disabled';
                    }
                } catch (e) {
                    console.log(e);
                }
            });
        }
    }
    if (document.readyState != 'loading'){
        onReady();
    } else {
        document.addEventListener('DOMContentLoaded', onReady);
    }
</script>
