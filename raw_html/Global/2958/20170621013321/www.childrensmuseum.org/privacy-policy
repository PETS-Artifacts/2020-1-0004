            <script type="text/javascript">
        var menuPageWidth = 300;
        var numPages = 0;
        (function($){
            $(document).ready(function(){
                $('#bigmac').on('click',function(){
                    var navpos = parseInt($('#navmobile').css('margin-left'));
                    var newNavPos = '-310px';
                    if (navpos < 0) {
                      newNavPos = '0px';
                      $('#navmobile').animate({marginLeft:newNavPos});
                    } else {
                        $('#navmobile').animate({marginLeft:newNavPos},function(){
                            $('.mobilemenu-page:not(:first-child)').remove();
                            $('.mobilemenu-page').css('left','0px');
                        });
                    }
                    $('#navmobile').css('min-height',$(document).height()-98);

                });
                numPages = $('.mobilemenu-page').length;
                menuPos = "-"+(numPages * menuPageWidth - menuPageWidth) + "px";
                $('.mobilemenu-page').css('left',menuPos);
                $('.back-icon').on('click',function(){
                    goBackMenuPage();
                });
                $('.has-children').on('click',function(){
                    console.log('.has-children clicked');
                    var myPath = $(this).attr('data-menu-path');
                    getNewMenuPage(myPath);
                });
                $('#headersearch form').submit(function(e){
                    e.preventDefault();
                    var url = "/search/"+encodeURIComponent($('#headersearchbox').val());
                    window.open(url,'_top');
                });
                $('#mobile-search form').submit(function(e){
                    e.preventDefault();
                    var url = "/search/"+encodeURIComponent($('#mobilesearchbox').val());
                    window.open(url,'_top');
                });
            });
        }(jQuery));
        function getNewMenuPage(myPath) {
            (function($){
                $('.back-icon').off('click');
                $('.has-children').off('click');
                $.post('/php/getMobileNav.php',
                        {
                            path: myPath
                        },
                        function(data){
                            numPages = $('.mobilemenu-page').length;
                            menuPos = "-"+(numPages * menuPageWidth - menuPageWidth) + "px";
                            $('#mobilemenu-wrapper').append(data);
                            $('.mobilemenu-page:last-child').css('left',menuPos);

                            $('.mobilemenu-page').animate({left:"-="+menuPageWidth},function(){
                                $('html, body').animate({scrollTop:"0px"});
                            });

                            $('.back-icon').on('click',function(){
                                goBackMenuPage();
                            });
                            $('.has-children').on('click',function(){
                                var myPath = $(this).attr('data-menu-path');
                                getNewMenuPage(myPath);
                            });
                        },
                        'html');
            }(jQuery));
        }
        function goBackMenuPage() {
            (function($){
                $.when($('.mobilemenu-page').animate({left:"+="+menuPageWidth})).then(function(){$('.mobilemenu-page:last-child').remove()});
            }(jQuery));
        }
    </script>
