<script>
	$(document).ready(function(){
		var cHeight='0';
		var currentHeight='0';
		var newHeight='0';
		$("li").each(function(){
			if($(this).html()=='<a href="/membership/renew">MEMBERSHIP RENEWAL</a>'){
				$(this).html('<a href="/donate">DONATE TO RENEW</a>');
			}
		});

		//collapser shortcode - R
		$('.collapseTrigger').click(function(){

			//lengthen side nav and main div -R
			$('.leftNav').each(function(){
				currentHeight=$(this).css('height');
				console.log(currentHeight);

			});




			$(this).slideUp();
			$('.collapseTrigger').next('.collapser').slideDown();
			setTimeout(function(){
				//adjust div height after collapser has expanded -R
				cHeight=$('.collapser').css('height');
				console.log(cHeight);
				cHeight=cHeight.replace('px','');
				currentHeight=currentHeight.replace('px','');
				cHeight=parseInt(cHeight);
				currentHeight=parseInt(currentHeight);
				newHeight=cHeight+currentHeight;
				newHeight=newHeight.toString();
				newHeight=newHeight.concat('px');
				$('.leftNav').css('height',newHeight);
			},1000);
		});
			

			 
		});



</script>
