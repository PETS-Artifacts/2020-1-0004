	if (adobe_id) {
		marketingCloudID(adobe_id);
	}

	function dtm_tab_changed(type, name) {
		digitalData.tab = {
			type: type,
			name: name,
		};
		_satellite.track('tab click');
	}

	function dtm_social_clicked(name) {
		digitalData.social = {
			name: name,
		};
		_satellite.track('social click');
	}

	function dtm_print_clicked(name) {
		digitalData.link = {
			printName: name,
		};
		_satellite.track('print click');
	}

	function dtm_link_clicked(name) {
		digitalData.link = {
			name: name,
		};
		_satellite.track('link click');
	}

	function dtm_user_interacted(name) {
		digitalData.engagement = {
			name: name,
		};
		_satellite.track('user interacted');
	}
</script>
<script type="text/javascript">_satellite.pageBottom();</script>
</body>
</html>
