<script type="text/javascript">
cgTopTailAds = function () {
  if (window.innerWidth > 767) {
    // On desktop, do not display Top and Tail ads
    return false;
  } else {
    // On mobile, remove header ad for desktop
    var node = window.document.querySelector('.desktopAd');
    while (node.firstChild) {
      node.removeChild(node.firstChild);
    }
  }
  window.onscroll = function() {
    var ttAd = window.document.querySelector('.ttAd');
    var headerAd = window.document.querySelector('.header--ad');
    cgTopTailAds.newScrollPosition = window.scrollY;
    // Only display ads if not been closed and available
    if (!ttAd.className.includes('slideAway') && typeof(headerAd) != 'undefined' && headerAd != null) {
      if (cgTopTailAds.newScrollPosition < cgTopTailAds.lastScrollPosition) {
        // Scrolling up
        cgTopTailAds.upTotal++;
        cgTopTailAds.downTotal = 0;
        if (cgTopTailAds.upTotal > 25 || cgTopTailAds.newScrollPosition + 25 < cgTopTailAds.lastScrollPosition) {
          ttAd.className = 'ttAd tailAd show';
        }
      } else {
        // Scrolling down
        cgTopTailAds.downTotal++;
        cgTopTailAds.upTotal = 0;
        if (cgTopTailAds.downTotal > 25 || cgTopTailAds.newScrollPosition - 25 > cgTopTailAds.lastScrollPosition) {
          ttAd.className = 'ttAd topAd show';
        }
      }
      cgTopTailAds.lastScrollPosition = cgTopTailAds.newScrollPosition;
    }
  }
  return {
    newScrollPosition: 0,
    lastScrollPosition: 0,
    upTotal: 0,
    downTotal: 0,
    hideAds: function(el) {
      el.parentElement.className += ' slideAway';
    }
  };
}();
</script>

<div class="ttAd tailAd show">
  <div class="close" onclick="cgTopTailAds.hideAds(this)">
    <i class="icon icon-cross"></i>
  </div>
