        (function () {
            window.cookieTools = new function () {
                this.setCookie = function (cname, cvalue, exireMinutes, cookiePath) {
                    var d = new Date();
                    d.setTime(d.getTime() + ( exireMinutes * 60 * 1000));
                    var expires = "expires=" + d.toUTCString();
                    document.cookie = cname + "=" + cvalue.toString() + "; " + expires + "; path=" + cookiePath;
                }
                this.getCookie = function (cname) {
                    var name = cname + "=";
                    var ca = document.cookie.split(';');
                    for (var i = 0; i < ca.length; i++) {
                        var c = ca[i];
                        while (c.charAt(0) == ' ')
                            c = c.substring(1);
                        if (c.indexOf(name) == 0)
                            return c.substring(name.length, c.length);
                    }
                    return "";
                }
            }
            window.HTTP_REFERER = window.cookieTools.getCookie('HTTP_REFERER');
            window.cookieTools.setCookie('HTTP_REFERER', window.location.href, 60 * 4, '/');
