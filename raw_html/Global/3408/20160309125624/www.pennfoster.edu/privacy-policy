$(document).ready(function() {

$("a").each(function(){
  var title=this.innerHTML;
     if (title=="For Educators" )
     {
     this.innerHTML ="For Organizations";
     this.title ="For Organizations";	
     $(this).attr("href", "/why-penn-foster/solutions-for-organizations");
        }
     if (title=="For Employers" )
     {
     $(this).remove();			
        }
     });

}); //end document ready
</script>
