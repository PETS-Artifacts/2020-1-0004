			    	}
			    	
			    },
			    
			    _trackPageview: function (name) {
			    	// catalyst
			    	if(typeof Avr.catalyst !== 'undefined' && Avr.catalyst && Avr.catalyst._trackPageview){
			    		Avr.catalyst._trackPageview(name);
			    	}
					
