<script type="text/javascript">
/*<![CDATA[*/
var OExtDataTracking = new ExtDataTracking($('body'));
var OUserCookieLinkReg = new UserCookieLinkReg($('body'),'/site/registerCid');
	var aviraLogo = {

	init : function(){
		// main variables
		obj 					= this;
		obj.logoId				= $('#logo');
		obj.logoText 			= $('#avira-text');
		obj.duration			= 200; // animation duration
		obj.animationDistance	= 81; // show/hide 'Avira' text

		if(!$.cookie('avr_logo')){
			// show expanded logo
			obj.logoId.addClass('active');
			obj.firstAnimate(obj);
		}else{
			obj.logoText.css('margin-left',-obj.animationDistance); // hide the 'Avira' text
			obj.hover(obj);
		}
		
	},

	firstAnimate : function(obj){
		
		// show the 'Avira' text expanded
		setTimeout(function(){
			obj.logoText.animate({ marginLeft : -140 }, obj.duration, function(){
					obj.logoId.removeClass('active');

					// drop the cookie to show the logo expanded once per session
					$.cookie('avr_logo', true, true, { path: '/' });
			});
		}, 3000);

		obj.hover(obj);
	},

	hover : function(obj){

		// expand logo on hover
		obj.logoId.hover(function(){

			// disable logo animation
			if(obj.logoId.hasClass('disabled')){
				return false;
			}
			
			var jQueryObj = $(this);

			// show text when long hover only, not when fast hover
			delayShowLogo = setTimeout(function(){ 
				obj.logoText.stop(true,true).animate({ marginLeft : 0 }, obj.duration);
				jQueryObj.addClass('active');	
			}, 200);

		},
		function(){

			// disable logo animation
			if(obj.logoId.hasClass('disabled')){
				return false;
			}

			clearTimeout(delayShowLogo);
			obj.logoText.animate({ marginLeft : -obj.animationDistance }, obj.duration, function(){
				obj.logoId.removeClass('active');
			});
		});
	}
}
		
var searchBar = {
	init : function(){
		obj					= this;
		obj.searchWrap 		= $('.search-wrap');
		obj.duration		= 200;
		obj.logoId			= $('#logo');
		obj.btnClose 		= $('.js-close-search');
		obj.searchInput 	= $('.js-input-search');
		obj.searchHolder	= $('.search-holder');

		this.show(obj);

		obj.btnClose.live('click', function(e){
			e.preventDefault();
			obj.close(obj);
		});

		$('.js-overlay').live('click', function(e){
			e.preventDefault();
			obj.close(obj);
		});

		// close when hitting the 'ESC' key
		$(document).keyup(function(e) {
			if (e.keyCode == 27) { obj.close(obj); }   // esc
		});
	},

	show : function(obj){
		// disable logo animation
		// obj.logoId.removeClass('active').addClass('disabled');

		obj.searchWrap.stop(true,true).animate({top: 0}, obj.duration, function(){
			var inputVal = obj.searchInput.val();
			
			obj.searchHolder.fadeIn(300, function(){
				obj.searchInput.focus().val(inputVal);
			});
		});
		
		$('<div class="dark-overlay js-overlay" />').height($(document).height()).appendTo('body').fadeIn(300);
	},

	close : function(obj){
		obj.searchWrap.animate({top: -87}, obj.duration, function(){
			obj.searchHolder.hide();
		});
		obj.logoId.removeClass('disabled');
		$('.js-overlay').fadeOut(300, function(){
			$(this).remove();
		});
	}
};

var installsCounter={
	
	init : function(json){
				
		if(typeof json == "string" && json){
			json=$.parseJSON(json);
		}

		//console.debug(json);
		obj					= this;
		//obj.jsonUrl			="http://www.avira.com/installscounter.php?t="+new Date().getTime();
		obj.jsonUrl			=('https:' == document.location.protocol ? 'https:' : 'http:') + "//www.avira.com/installscounter.php?t="+new Date().getTime();
		obj.counterContainer=$("#counter");
		
		if(!json){
			this.fetchNewData(obj);
			return ;
		}
		
		obj.samples			=json.samples;
		obj.currentTimestamp=parseInt(json.current);
		obj.endTimestamp	=parseInt(json.current)+parseInt(json.interval);
		obj.interval		=parseInt(json.interval);

		// identify in time and create intervals
		var samples=[];
		for(timestamp in obj.samples){
			samples.push({'timestamp':parseInt(timestamp),'counter':parseInt(obj.samples[timestamp])});
		}
		
		// get last sample
		lastSample=samples[samples.length-1];
		
		currentTimestamp=((obj.currentTimestamp-lastSample.timestamp)%obj.interval) + (lastSample.timestamp-obj.interval) + (samples[1].timestamp-samples[0].timestamp);
		
		tempLeft=null;tempRight=null;
		$(samples).each(function(idx,value){
			if(value.timestamp<=currentTimestamp){
				tempLeft=value;
			}
			if(value.timestamp>currentTimestamp){
				tempRight=value;
				return false;
			}
			samples.splice(0,1);
		});
		
		currentValue=Math.round((tempRight.counter-tempLeft.counter)/((tempRight.timestamp-tempLeft.timestamp)/(currentTimestamp-tempLeft.timestamp))) + tempLeft.counter;
		
		obj.count(obj,{'timestamp':currentTimestamp,'counter':currentValue},samples);
			
	},
	
	count : function(obj,start,samples){
		
		nextStart=samples.splice(0,1);
		
		// calculate the number of seconds to count
		seconds=nextStart[0].timestamp-start.timestamp;

		// calculate no of items to count during seconds
		items=nextStart[0].counter-start.counter;
		
		timeout=Math.round( (seconds*1000)/items );
		//console.debug(start.counter);
		obj.displayCount(obj,timeout,start.counter,nextStart[0],samples);
		
	},
	
	displayCount : function (obj,timeout,start,nextStart,samples){
		timeoutIdx=setTimeout(function(){
			$(obj.counterContainer).html(obj.formatNumber(obj,++start));
			if(parseInt(nextStart.counter)==start){
				clearTimeout(timeoutIdx);
				samples.splice(0,1);
				if(samples.length){
					obj.count(obj,nextStart,samples);
				}
				else{
					obj.fetchNewData(obj);
				}
				return false;
			}
			else{
				obj.displayCount(obj,timeout,start,nextStart,samples);
			}
		},timeout);
	},
	
	formatNumber: function (obj,number,formated){
		formated = typeof formated=="undefined"?formated="":formated;
		var rest=obj.pad(number%1000,3,0);
		var remaining= number>=1000 ? parseInt(number/1000) : number;
		
		formated=rest+"&nbsp;"+formated;
		
		if(number >= 1000) {
			formated=obj.formatNumber(obj,remaining,formated);
		}
		
		return formated;
	},
	
	pad : function (n, width, z) {
		z = z || '0';
		n = n + '';
		return n.length >= width ? n : new Array(width - n.length + 1).join(z) + n;
	},
	
	fetchNewData : function (obj){
		$.ajax(obj.jsonUrl,{
			dataType : "json",
            success: function (data, textStatus, jqXHR) {
				//console.debug(data);
                obj.init(data);
            }
		});
	}
};


$(document).ready(function(){

	// hide google iframe
	$('iframe[name="google_conversion_frame"]').attr('height','0');
	
	// initialise logo animation
	//aviraLogo.init();
	
	// initialise search bar
	$('.btn-search').live('click', function(){
		if ( !$('body').hasClass('new-search-results-template') ) {
			searchBar.init();
		} else {
			window.scrollTo(0,0);
			$('.results-search-input').focus();
		}
		return false;
	});
	//Autocomplete
	$( "#top-search" ).autocomplete({
		appendTo:".search-wrap .grid-full",
		open: function()
		{
			var position = $(".ui-autocomplete").position(),top = position.top;
			 $(".ui-autocomplete").css({left: 0, top: top + 19 + "px", "position": "absolute", "width":"100%"});
		},
		source: function(req, resp) {
			var lang = $('html')[0].lang;
			var limit = 10;
			var searchUrl = "//www.avira.com/search/frontendSc/autocomplete?json=1&limit=" + limit + "&q=" + encodeURIComponent(req.term) + "&language=" + lang;
				
			$.getJSON( searchUrl, resp);
		},
		select: function(event, ui) {
			$(event.target).val(ui.item.value);
			$('.search-holder form').submit();
			return false;
		}
	});

	installsCounter.init();

	$('.dropdown-toggle').click(function(){
		var languages = $('.dropdown-menu.dark-ui'),
			_this = $(this);
		
		languages.css({
			opacity : 0,
			display: 'block'
		}).css({
			top:  '-'+(languages.height()+10)+'px'
		}).css({
			opacity : 1,
			display: 'none'
		});
		
		if(_this.hasClass('active')){
			_this.removeClass('active');
			languages.hide();
		}else{
			_this.addClass('active');
			languages.show();
		}	
		
		return false;
	});
	
	$('html').click(function(){
		if($('.dropdown-toggle').hasClass('active')){
			$('.dropdown-toggle').removeClass('active');
			$('.dropdown-menu.dark-ui').hide();
		}
	});
	
});
/*]]>*/
</script>
</body>
</html>
