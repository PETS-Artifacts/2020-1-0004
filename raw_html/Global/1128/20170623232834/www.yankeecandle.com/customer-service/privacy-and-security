<script type="text/javascript">
if (self === top || allowDomains('app.optimizely.com')) {
var antiClickjack = document.getElementById("antiClickjack");
antiClickjack.parentNode.removeChild(antiClickjack);
} else {
top.location = self.location;
}
function allowDomains(xFrameAllowDomains){
var url = (window.location != window.parent.location)
? document.referrer : document.location;
var domains = xFrameAllowDomains.split(" ");
for (index in domains) {
if(url.match('/' + domains[index] + '/')){
return true;
}
}
return false;
}
</script>

