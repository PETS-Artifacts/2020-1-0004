document.onreadystatechange = function updateLocale(){
if (document.readyState == "complete"){
var imageArr = document.getElementsByClassName('locale_img');
for (var i = 0; i < imageArr.length; i++) {
var src = imageArr[i].src;
var lang = "";
if(lang.length!=0){
var res =src.replace("default",lang);
imageArr[i].src=res;
}
}
}
}
