    <script type="text/javascript">
    $(document).ready(function () {
        // Send an AJAX request
        var processed_json = new Array();
        $.getJSON('http://localhost:49162/api/visualize/get')
            .done(function (data) {
                // On success, 'data' contains a list of products.
                myval2 = data;
                $.map(myval2, function (key, value) {

                    processed_json.push([key.value1, parseFloat(key.value2)]);

                });
                console.log(processed_json);
                //process the chart here
                $('#chart0').highcharts({
                    chart: {
                        type: 'line'
                    },
                    xAxis: {
                        type: "category"
                    },
                    series: [{
                        data: processed_json
                    }]
                });
            });

    });
    // });
    </script>

