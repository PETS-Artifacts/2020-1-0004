jQuery(document).ready(function( $ ) {
    
    // Variables
    w = $( document ).width();
    page = window.location.pathname;
    
    // MEN Institute Linking
    // $('<li><a href="http://www.motherearthnewsinstitute.com/" target="_blank">Mother Earth News Institute</a></li>').appendTo('.widget-MainMenu ul li:nth-of-type(5) ul');
    
    // GTM Stuff
    if ( page === '/store/' ) {
      $('.widget-ContentAd1 > a').attr('id','SpecialOffer');
      $('.widget-DailyDeal .img-responsive').attr('id','DailyDealPhoto');
      $('.widget-DailyDeal button').attr('id','DailyDealButton');
      $('.widget-CategoryAd1 > a').attr('id','CategoryAd1');
      $('.widget-CategoryAd2 > a').attr('id','CategoryAd2');
    };
        
    // Moving around some elements to make up for ridiculous templating
    $('.shopping-cart-icon-button').each(function(){
      thisPrice = $(this).prev('.add-to-cart .item-price');
      $(this).insertBefore(thisPrice);
    });
    ddATC = $('.widget-DailyDeal .rotating-deal-row .rotating-deal .product-cell .add-to-cart-container .add-to-cart-PopUpMiniCart .product-list-price').prev('.add-to-cart');
    $('.widget-DailyDeal .rotating-deal-row .rotating-deal .product-cell .add-to-cart-container .add-to-cart-PopUpMiniCart .product-list-price').insertBefore(ddATC);
    
    // Daily Deal Linking
    var dailyDealWrapper = $('.widget-DailyDeal .rotating-deal-row .rotating-deal .product-cell .product-thumbnail-link');
    var dailyDealURL = $('.widget-DailyDeal .rotating-deal-row .rotating-deal .product-cell .product-thumbnail-link').attr('data-url');
    var dailyDealOpen = '<a id="DailyDealTitle" href="'+dailyDealURL+'">';
    var dailyDealClose = '</a>';
    var dailyDealTitle = $('.widget-DailyDeal .rotating-deal-row .rotating-deal .product-cell .add-to-cart-container .product-title').html();
    var newDailyDealTitle = dailyDealOpen+dailyDealTitle+dailyDealClose;
    $('.widget-DailyDeal .rotating-deal-row .rotating-deal .product-cell .add-to-cart-container .product-title').html(newDailyDealTitle);
    
    // Purchased With Linking
    $('.widget-purchased-with-widget .product-scroller .item-picker .product-cell .product-title').each(function(index, el) {
      var pwTitle = $(this).html();
      var pwURL = $(this).parents('.add-to-cart-container').prev('.product-thumbnail-link').attr('data-url');
      var pwOpen = '<a href="'+pwURL+'">';
      var pwClose = '</a>';
      var pwNew = pwOpen+pwTitle+pwClose;
      pwLink = $(this).html(pwNew); 
    });
    
    // Recently Viewed Linking
    $('.widget-recent-products-widget .product-scroller .item-picker .product-cell .product-title').each(function(index, el) {
      var rvTitle = $(this).html();
      var rvURL = $(this).parents('.add-to-cart-container').prev('.product-thumbnail-link').attr('data-url');
      var rvOpen = '<a href="'+rvURL+'">';
      var rvClose = '</a>';
      var rvNew = rvOpen+rvTitle+rvClose;
      rvLink = $(this).html(rvNew); 
    });
    
    // Auto open child categories on category landing page sidebar
    $('.widget-AllCategoryMenu .menu > li.active').addClass('open');
    $('.widget-AllCategoryMenu .menu > li.active > .dropdown-bar .expand-arrow i').removeClass('fa fa-angle-right');
    $('.widget-AllCategoryMenu .menu > li.active > .dropdown-bar .expand-arrow i').addClass('fa fa-angle-down');
    $('.widget-AllCategoryMenu .menu > li.active > .dropdown-menu > li.active').addClass('open');
    $('.widget-AllCategoryMenu .menu > li.active > .dropdown-menu > li.active > .dropdown-bar .expand-arrow i').removeClass('fa fa-angle-right');
    $('.widget-AllCategoryMenu .menu > li.active > .dropdown-menu > li.active > .dropdown-bar .expand-arrow i').addClass('fa fa-angle-down');
    $('.widget-AllCategoryMenu .menu > li.active > .dropdown-menu > li.active > .dropdown-menu > li.active').addClass('open');
