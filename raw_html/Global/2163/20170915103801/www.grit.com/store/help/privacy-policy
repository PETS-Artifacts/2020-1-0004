    $('.widget-AllCategoryMenu .menu > li.active > .dropdown-menu > li.active > .dropdown-menu > li.active > .dropdown-bar .expand-arrow i').addClass('fa fa-angle-down');
    
    // Prevent accidental clicks on category page sidebar
    var ua = navigator.userAgent,
        event = (ua.match(/iPad/i)) ? "touchstart" : "click";
    $('.widget-AllCategoryMenu .expand-arrow-companion a').on(event, function(e) {
      e.preventDefault();
      if ( $(this).parentsUntil($('.dropdown-menu'),'.dropdown').hasClass('open') ) {
        $(this).parentsUntil($('.dropdown-menu'),'.dropdown').removeClass('open');
        $(this).parent('.expand-arrow-companion').prev('.expand-arrow').children('.fa').removeClass('fa-angle-down');
        $(this).parent('.expand-arrow-companion').prev('.expand-arrow').children('.fa').addClass('fa-angle-right');        
      } else {
        $(this).parentsUntil($('.dropdown-menu'),'.dropdown').addClass('open');
        $(this).parent('.expand-arrow-companion').prev('.expand-arrow').children('.fa').removeClass('fa-angle-right');
        $(this).parent('.expand-arrow-companion').prev('.expand-arrow').children('.fa').addClass('fa-angle-down');        
      };
    });
    
    // Sticky Cart
    if ( w >= 1000 ) {
      if ( $('.cart-contents > .cart-contents-row').length >= 1 ) {
        $(window).scroll(function(){
          firstItemTop = $('.cart-contents .cart-product-list:first-of-type').offset().top;
          lastItemTop = $('.cart-contents .cart-product-list:last').offset().top;
          lastItemHeight = $('.cart-contents .cart-product-list:last').innerHeight();
          lastItemBottom = lastItemTop + lastItemHeight;
          cartHeight = $('.cart-contents .cart-contents-row').innerHeight();
          stopFix = lastItemBottom - cartHeight - firstItemTop;
          toTop = $(document).scrollTop();
          if ( toTop >= stopFix ) {
            $('.cart-contents .cart-contents-row').addClass('fix-to-bottom');
          } else {
            $('.cart-contents .cart-contents-row').removeClass('fix-to-bottom');
          };
        });
      };
    };
        
    // Menus
    $('.widget-LoginBox .login-widget').attr('id', 'login-widget-box');
    $('.widget-MyAccountLinks ul li').attr('id', 'my-account-link');
    
    if ( w >= 1000 ) {
      // Dynamic Menus
      var timer;
      var delay = 200;
      
      $('.widget-MainMenu .navbar-nav .dropdown').hover(function() {
        // on mouse in, start a timeout
        timer = setTimeout(function() {
          // Manage classes and fade in or out
          $('.widget-MainMenu .navbar-nav .dropdown .dropdown-bar .expand-arrow-companion > a').not($('.widget-MainMenu .navbar-nav .dropdown.open .dropdown-bar.open .expand-arrow-companion > a')).removeClass('active');
          $('.widget-MainMenu .navbar-nav .dropdown .dropdown-menu').not($('.widget-MainMenu .navbar-nav .dropdown.open .dropdown-menu')).fadeOut(200);
          $('.widget-MainMenu .navbar-nav .dropdown.open .dropdown-bar.open .expand-arrow-companion > a').addClass('active');
          $('.widget-MainMenu .navbar-nav .dropdown.open .dropdown-menu').fadeIn(400);
        }, delay);
      }, function() {
        // on mouse out, cancel the timer
        clearTimeout(timer);
        $('.widget-MainMenu .navbar-nav .dropdown .dropdown-bar .expand-arrow-companion > a').removeClass('active');
        $('.widget-MainMenu .navbar-nav .dropdown .dropdown-menu').fadeOut(200);
      });
      
      $('.shopping-cart-button').hover(function() {
        // on mouse in, start a timeout
        timer = setTimeout(function() {
          // Manage classes and fade in or out
          $('.widget-MainMenu .navbar-nav .dropdown .dropdown-bar .expand-arrow-companion > a').removeClass('active');
          $('.widget-MainMenu .navbar-nav .dropdown .dropdown-menu').fadeOut(200);
          $('.shopping-cart-button').addClass('open');
          $('.shopping-cart-button .dropdown-bar').addClass('open');
          $('.shopping-cart-button .mini-cart-area').fadeIn(400);
        }, delay);
      }, function() {
        // on mouse out, cancel the timer
        clearTimeout(timer);
          $('.shopping-cart-button').removeClass('open');
          $('.shopping-cart-button .dropdown-bar').removeClass('open');
          $('.shopping-cart-button .mini-cart-area').fadeOut(200);
      });
    };
    
    // Toggling the category filters on category landing pages
    $('.widget-AllCategoryMenu.widget header').click(function(event) {
      event.preventDefault();
      if ( w <= 999 ) {
        $(this).next('.navbar-nav').slideToggle('slow');
        $(this).children('h3').toggleClass('open-dropdown');
      };
    });
    if ( w <= 999 ) {
      $('button[data-target="#main-menu"]').attr('id','main-menu-toggle');
      $('button[data-target="#main-menu"]').removeAttr('data-toggle');
      $('button[data-target="#main-menu"]').removeAttr('data-target');
    };
    
    // Rearrange navigation elements on small screens
    if ( w <= 999 ) {
      $('.widget-LoginBox').insertBefore('.widget-MainNavigation');
      $('.widget-MyAccountLinks').insertBefore('.widget-MainNavigation');
      $('.widget-ProductSearch').insertAfter('#main-menu');
      $('.widget-MyAccountLinks ul li').removeClass('last first');
      $('.widget-MyAccountLinks ul li').addClass('account-link');
      $('.widget-MyAccountLinks ul li').prependTo('.widget-MainMenu ul');
      $('.widget-MyAccountLinks').css('display', 'none');
      $('.widget-LoginBox .login-widget').prependTo('.widget-MainMenu ul');
      $('.widget-LoginBox').css('display', 'none');
    };
    
    // Rearrange content based on screen size
    if ( w < 560 ) {
      if ( page === '/store/' ) {
        $('.widget-Jumbo1').insertAfter('.widget-EditorsPicks');
        $('.widget-CategoryAd1').insertAfter('.widget-DailyDeal');
      };
    } else if ( (w >= 560) && (w <= 999) ) {
      if ( page === '/store/' ) {
        $('.widget-Jumbo1').insertAfter('.widget-EditorsPicks');
        $('.widget-Jumbo2').insertAfter('.widget-Jumbo1');
      };
    }
    
    // Main Menu Toggle on Mobile
    if ( w <= 999 ) {
      $('#main-menu-toggle').on('click', function(e) {
        $('#main-menu').toggleClass('main-menu-open');
      });
      $('#main-menu .dropdown-menu').css('display', 'none');
    };
    
    $('#q').on({ 'touchstart' : function(){
        $(this).trigger('focus');
      }
    });

