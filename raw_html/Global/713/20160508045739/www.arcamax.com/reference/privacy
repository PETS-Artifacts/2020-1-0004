<script>
$(document).ready(function(){
function toggleSpinner(elem) { $(elem).toggleClass('spinner'); }
function addLoginHandlers () {
$('#login-form form').submit(function(e){
e.preventDefault();
toggleSpinner('#login-form');
$.post('/login', $(this).serialize() + '&ajax=true&submitlogin=1', function(data){
if (data == 'success') {
//$('#login-form').dialog('close');
window.location = window.location;
} else {
$('#login-form').html(data);
addLoginHandlers();
setTimeout("$('#login-form').toggleClass('spinner')", 400);
}
});
});
}
addLoginHandlers();
});
</script>

