<script data-cfasync="false" src="/cdn-cgi/scripts/5c5dd728/cloudflare-static/email-decode.min.js"></script><script language="javascript">
	// newsletter signup form
	function emailSignup() {
		// get & validate email
		var sEmail = $('#connect-form input[name="Email"]').val();
		if (isEmail(sEmail)) {
			 ga('send', 'event', 'Email', 'Footer', 'Signup');
             window.location.href = "/News-Events/Sign-Up-for-Updates?email="+sEmail;			
		} else {
			showMessage("signup-failure", "Please enter a valid email.");
		}
		return(false);
	}

	function isEmail(email) {
		var re = /^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
    	return(re.test(email));
   	}

	function showMessage(messageId, messageText) {
//		console.log("MessageId fail - "+messageId+" "+messageText);
		var $oMessage = $('div.'+messageId);
		if (messageText != null) {
			$oMessage.html(messageText);
		}
		//console.log($oMessage);
		$oMessage.show(1000);
	}
</script>
