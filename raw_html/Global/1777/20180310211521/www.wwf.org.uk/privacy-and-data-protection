    (function(document, window, undefined) {
        if (window.ApplePaySession) {
            // if (ApplePaySession.canMakePayments) {
                var buttons = document.getElementsByClassName('js-ap-change-button');
                for (var i = buttons.length - 1; i >= 0; i--) {
                    buttons[i].addEventListener('click', function(event) {
                        var eT = event.target;
                        if (eT.className.match('js-ap-change-button') ) {
                            eT.href = 'https://www.wwf.org.uk/donate-with-apple-pay/';
                        }
                        else if (eT.parentElement.className.match('js-ap-change-button') ) {
                            eT.parentElement.href = 'https://www.wwf.org.uk/donate-with-apple-pay/';
                        }
                    })
                }
            // }
        }
    })(document, window);
</script>
