				jQuery("a.header-subscribe").click(function() {
					ga('send', 'event', 'Testing', 'Subscribe - Control','Subscribe Desktop - Control Clicked');
				});

			}else {
				ga('send', 'event', 'Testing', 'Subscribe - Test','Subscribe Desktop - Test', 0, {nonInteraction: true});
				jQuery("a.header-subscribe").attr("href","https://subscribe.theweek.com/servlet/Show?WESPAGE=pm/Pages/load_order.jsp&WESACTIVESESSION=TRUE&PAGE_ID=7698DIR001&MAGCODE=WK&MSCCMPLX=606WKSAT1");
