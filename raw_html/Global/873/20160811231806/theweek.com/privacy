<script type="text/javascript">
	var arrDevices = [ 'desktop', 'tablet', 'mobile'];
function adBlockNotDetected() {
	device =  TheWeek.getCurrentDevice();
	if(jQuery.inArray( device, arrDevices ) != -1){
		ga('send', 'event', 'Adblock FAB New ', 'Unblocked','Unblocked-'+device+'-Ads', 0, {nonInteraction: true});
		console.log('Ad Block is not detected');
	}
}
// Function called if AdBlock is detected
function adBlockDetected() {
	device =  TheWeek.getCurrentDevice();
	if(jQuery.inArray( device, arrDevices ) != -1){
		ga('send', 'event', 'Adblock FAB New ', 'Blocked','Blocked-'+device+'-Ads', 0, {nonInteraction: true});
		console.log('Ad Block is detected');
	}
}

if(typeof fAB === 'undefined') {
    adBlockDetected();
} else {
    fAB.onDetected(adBlockDetected);
    fAB.onNotDetected(adBlockNotDetected);
}
</script>
<!--End FAB Adblock Check -->
