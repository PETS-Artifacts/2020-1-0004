<script type="text/javascript">
	function adBlockSetCookie(cname, cvalue, exdays) {
	    var d = new Date();
	    d.setTime(d.getTime() + (exdays*24*60*60*1000));
	    var expires = "expires="+d.toUTCString();
	    document.cookie = cname + "=" + cvalue + ";" + expires + ";path=/";
	}
	
	function adBlockGetCookie(cname) {
	    var name = cname + "=";
	    var ca = document.cookie.split(';');
	    for(var i = 0; i < ca.length; i++) {
	        var c = ca[i];
	        while (c.charAt(0) == ' ') {
	            c = c.substring(1);
	        }
	        if (c.indexOf(name) == 0) {
	            return c.substring(name.length, c.length);
	        }
	    }
	    return "";
	}
	
	if(document.getElementById('sfuHKYblpiew')){
		//console.log('Blocking Ads: No');
	} else {
		if (adBlockGetCookie("adblock_msg_closed") == "") {
			jQuery(document).ready(function() {
				jQuery("#floating_placeholder").html("<div id='ab_message'><div id='ab_inner-message' class='alert alert-info'><button id='ab_close' type='button' class='close'>&times;</button>We noticed you are using an ad blocker. Support quality Christian content with a free trial of <a href='http://www.charismapremium.com/register/?utm_source=charismamag.com&utm_medium=adblock%20toolbar'>Charisma Premium.</a></div></div>");	
				
				jQuery("#ab_close").on('click', function() {
					jQuery("#floating_placeholder").hide();
					adBlockSetCookie("adblock_msg_closed", 1, 30);		// Don't pop up again for 30 days
				});
			});	
		}	
	}
</script>

