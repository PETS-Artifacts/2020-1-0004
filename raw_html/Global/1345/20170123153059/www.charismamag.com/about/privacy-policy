		<script type="text/javascript">
		// Article user comment guidlines popup
		$(document).ready(function(){jQuery("#commentGuidelinesLink").click(function(){jQuery("#commentGuidelines").toggle("slow")});jQuery("#commentGuidelinesCloseLink").click(function(){jQuery("#commentGuidelines").toggle("slow")})})
			
		// Vertical news slider in the top bar.
		$(document).ready(function() {
			lastSlide = $(".VirtNewsSlider_slide").length - 1;
			setTimeout(StartTriggerAnimateSlider, 2000);			
		});
		
		var curSlide = 0;
		var lastSlide = 0;
			
		function StartTriggerAnimateSlider() {
			AnimateSlider();
			setTimeout(StartTriggerAnimateSlider, 5000);
		}
		
		function AnimateSlider() {
			$(".VirtNewsSlider_slide:eq(" + curSlide + ")").fadeOut("fast", function() {
				if(curSlide == lastSlide) {
					curSlide = 0;
				} else {
					curSlide++;
				}
				
				$(".VirtNewsSlider_slide:eq(" + curSlide + ")").fadeIn("fast");
			});
		}
	
	</script>

	
