jQuery('a.trackLink').click(function()
{
	var category = '".trackLink" link clicks';
	if(typeof this.dataset.category == 'string')
	{
		category = this.dataset.category;
	}

	var action = 'clicks';
	if(typeof this.dataset.action == 'string')
	{
		action = this.dataset.action;
	}

	var label = jQuery(this).attr('href');
	if(typeof this.dataset.label == 'string')
	{
		label = this.dataset.label;
	}
	
	ga('send', 'event', category, action, label);

	return true;
});


