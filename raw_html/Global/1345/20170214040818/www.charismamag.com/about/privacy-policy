window.clearTimeout(window.timeoutID);
if((cnt!='new' && cnt>1)|| cnt.slice(-1)=='K') {
	jQuery('.dggsharethiscustom .counter .value').html(cnt);
	jQuery('.dggsharethiscustom .counter').fadeIn();
}
	}

	function ST_finalize_count()
	{
		if (ST_totCnt>10000)
		{
			var totCntStr = ST_totCnt.toString();
			totCntStr = totCntStr.substring(0, totCntStr.length-3) + 'K';
		}
		jQuery('.dggsharethiscustom .counter .value').html(totCntStr);
		jQuery('.dggsharethiscustom .counter').show();
	}
	
