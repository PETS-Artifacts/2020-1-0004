<script type="text/javascript">
jQuery(document).ready(function() {
	lastSlide = jQuery(".VirtNewsSlider_slide").length - 1;
	setTimeout(StartTriggerAnimateSlider, 2000);			
});

var curSlide = 0;
var lastSlide = 0;
	
function StartTriggerAnimateSlider()
{
	AnimateSlider();
	setTimeout(StartTriggerAnimateSlider, 5000);
}

function AnimateSlider()
{
	jQuery(".VirtNewsSlider_slide:eq(" + curSlide + ")").fadeOut("fast", function()
	{
		if(curSlide == lastSlide)
		{
			curSlide = 0;
		}
		else
		{
			curSlide++;
		}
		
		jQuery(".VirtNewsSlider_slide:eq(" + curSlide + ")").fadeIn("fast");
	});
}
</script>
