<section id="nav-items">

<script type="text/javascript">

$(document).ready(function() {
    
    $('#nav-items h3:not(.other-websites h3)').click(function() {
        // ga('send', 'event', 'drawer', 'click', 'nav-items h3', 1);
		//$(this).next('ul').slideToggle(300);
		
		if( $(this).hasClass('openToggle') ) {
			$(this).children('i').removeClass('fa-minus-circle');
			$(this).children('i').addClass('fa-plus-circle');
			$(this).next('ul').slideUp(300);
			$(this).removeClass('openToggle');
		}
		else {
			$(this).next('ul').slideDown(300);
			$(this).children('i').removeClass('fa-plus-circle');
			$(this).children('i').addClass('fa-minus-circle');
			$(this).addClass('openToggle');
		}
	});
	
});

