<script>
	$( document ).ready(function() {
		setTimeout(function(){
		// 1) Each time a user submits a form on the site, record it in GA
			$("form").each(function(){
				$(this).submit(function () {
					var label = $(this).attr('action') || $("title").innerText;
					if (label != "/search/results/") {
						ga('send', 'event', 'Form Submissions', 'submit', label, 1);
					}
					return true;
				});
			});
		// 2) Each time a user downloads / views a PDF
			$('a[href$=".pdf"]').each(function(){
				$(this).click(function(){
					ga('send', 'event', 'PDF Downloads', 'click', $(this).attr('href'), 1);
				});
			});
		// 3) Each time a video is played / paused or ends
			$("video").each(function(){
				$(this).on('play', function(){
					ga('send', 'event', 'Video Interactions', 'play', $(this).attr('src'), 1);
				});
				$(this).on('pause', function(){
					ga('send', 'event', 'Video Interactions', 'pause', $(this).attr('src'), 1);
				});
				$(this).on('ended', function(){
					ga('send', 'event', 'Video Interactions', 'finished', $(this).attr('src'), 1);
				});
				if (!$(this).paused) {
					ga('send', 'event', 'Video Interactions', 'auto-play', $(this).attr('src'), 1);
				}
			});
		// 4) Each time a user clicks a mailto: link
			$('a[href^="mailto:"]').each(function(){
				$(this).click(function(){
					ga('send', 'event', 'Email Interaction', 'click', $(this).attr('href'), 1);
				});
			});
		// 5) Each time a user clicks a share link
			$('a[onclick]').each(function(){
				if ($(this).attr('onclick').indexOf("window.open('https://www.facebook.com/sharer") == 0) {
					$(this).click(function(){
						ga('send', 'event', 'Social (facebook)', 'share', window.location.pathname, 1);
					});
				}
				if ($(this).attr('onclick').indexOf("window.open('https://twitter.com/share") == 0) {
					$(this).click(function(){
						ga('send', 'event', 'Social (twitter)', 'share', window.location.pathname, 1);
					});
				}
				if ($(this).attr('onclick').indexOf("window.open('http://www.linkedin.com/shareArticle") == 0) {
					$(this).click(function(){
						ga('send', 'event', 'Social (linkedIn)', 'share', window.location.pathname, 1);
					});
				}
				if ($(this).attr('onclick').indexOf("javascript:window.open('https://plus.google.com/share") == 0) {
					$(this).click(function(){
						ga('send', 'event', 'Social (Google Plus)', 'share', window.location.pathname, 1);
					});
				}
			});
		// 6) Each time an audio is played / paused or ends
			$("audio").each(function(){
				$(this).on('play', function(){
					ga('send', 'event', 'Audio Interactions', 'play', $(this).attr('src'), 1);
				});
				$(this).on('pause', function(){
					ga('send', 'event', 'Audio Interactions', 'pause', $(this).attr('src'), 1);
				});
				$(this).on('ended', function(){
					ga('send', 'event', 'Audio Interactions', 'finished', $(this).attr('src'), 1);
				});
				if (!$(this).paused) {
					ga('send', 'event', 'Audio Interactions', 'auto-play', $(this).attr('src'), 1);
				}
			});
		}, 1000);
	});
</script>

