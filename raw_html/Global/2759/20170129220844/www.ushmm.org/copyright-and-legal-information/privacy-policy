<script>
	$(document).ready(function(){

		// modify structure HTML output to work with layout, differs for sections with and without children
		$("#footer-context-nav li.level-1").each(function(){
			if ( $(this).find("li.level-2").length ){
				var section = $(this).find(">a").text();
				$(this).prepend("<h3>" + section + "<i class='fa fa-arrow-circle-o-down' aria-hidden='true'></i></h3>");
				$(this).find(">a").remove();
			} else {
				var section = $(this).find(">a");
				$(this).prepend("<h3></h3>");
				$(this).find('h3').prepend(section);
			}
		});

		// expand or collapse nav sections
		$('#footer-context-nav .top-lvl-nav li.level-1 h3').click(function() {
			if ( $(this).parent().find("li.level-2").length ){
				if( $(this).parent().hasClass('enabled') ) {
					$(this).parent().find('> ul').slideUp(300);
					$(this).parent().removeClass('enabled');
				} else {
					$(this).parent().addClass('enabled');
					$(this).parent().find('> ul').slideDown(300);
				}
			}
		});

	});
</script>
	
