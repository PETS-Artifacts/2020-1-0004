<!-- Script that fires the lightbox -->
<script type="text/javascript">
$(document).ready( function(){
    var check_cookie = $.cookie('ushmm_lb'); // saved when hitting first page in target section
    var viewed_modal = $.cookie('has_viewed_modal'); // saved after survey modal fires

    if(window.location.pathname.indexOf("/research/research-in-collections") == 0){
		if(check_cookie){
			if(!viewed_modal) {
				setTimeout( function(){
					$.fancybox({
						href : "#lb_container",
						autoDimensions : false,
						closeClick : true,
						//'afterClose':function () {
						  //_gaq.push(['_trackEvent', 'Clicked on Home Page Lightbox Close Button', 'Click', 'Home Page Close Button Lightbox']);
						//},
						width: 600,
						height: 200,
						padding: 25,
						autoSize : false,
						autoCenter: false,
						fitToView : false
					});

					//Close box on link click
					$('#lb_buttons .btn').click( function(){ $.fancybox.close(); });


				}, 12000);

				$.cookie('has_viewed_modal', 'yes', { expires: 1 });
			}

		} else{
			// Set 1 day cookie before reappearing
			$.cookie('ushmm_lb', 'lightbox_pass', { expires: 1 });
		};
	};

});

</script>
