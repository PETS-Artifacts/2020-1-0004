    <script>
        // global variable to be used in determining whether to use video.js or <video>, pop-up or not
        // safari + pop-up + <track> does not work in iPhone/iPod
        var $_device_is_iphone = false;


        function fetchStatus(address, shouldReturn) {
            var client = new XMLHttpRequest();
            client.onreadystatechange = function() {
                // in case of network errors this might not give reliable results
                if (this.readyState == 4 && shouldReturn) {
                    returnStatus(this, this.status);
                    // We have what we need, break out of any possible loop
                    // (Windows Phone Fix)
                    client.onreadystatechange = null;
                    return;
                }
            };
            client.open("HEAD", address);
            client.send();
        }

        function returnStatus(req, status) {
            if(status == 200) {
                // mobile page exists
                // alert for redirect
                if (confirm('View Mobile Version?')) {
                    // they want to go, so let's set a cookie and go!
                    document.cookie = 'siteVersion=mobile; expires=; path=/';
                    fetchStatus("http://www.ushmm.org/api/switchToMobile", false);
                    window.location = expectedMobileURL;
                } else {
                    // they want to stay so let's remember that and reload!
                    document.cookie = 'siteVersion=full; expires=; path=/';
                    fetchStatus("http://www.ushmm.org/api/switchToFull", false);
                    location.reload();
                }
            } else {
                // stay here, there is no mobile version
            }
        }

        function getCookie(name) {
            var cookie;
            var parts = document.cookie.split(name + "=");
            if (parts.length == 2) {
                cookie = parts.pop().split(";").shift();
            }
            if (cookie !== undefined) {
                return cookie;
            } else {
                return '';
            }
        }

        function goMobile(a) {
            if (/(android|bb\d+|meego).+mobile|avantgo|bada\/|blackberry|blazer|compal|elaine|fennec|hiptop|iemobile|ip(hone|od)|iris|kindle|lge |maemo|midp|mmp|mobile.+firefox|netfront|opera m(ob|in)i|palm( os)?|phone|p(ixi|re)\/|plucker|pocket|psp|series(4|6)0|symbian|treo|up\.(browser|link)|vodafone|wap|windows (ce|phone)|xda|xiino/i.test(a)||/1207|6310|6590|3gso|4thp|50[1-6]i|770s|802s|a wa|abac|ac(er|oo|s\-)|ai(ko|rn)|al(av|ca|co)|amoi|an(ex|ny|yw)|aptu|ar(ch|go)|as(te|us)|attw|au(di|\-m|r |s )|avan|be(ck|ll|nq)|bi(lb|rd)|bl(ac|az)|br(e|v)w|bumb|bw\-(n|u)|c55\/|capi|ccwa|cdm\-|cell|chtm|cldc|cmd\-|co(mp|nd)|craw|da(it|ll|ng)|dbte|dc\-s|devi|dica|dmob|do(c|p)o|ds(12|\-d)|el(49|ai)|em(l2|ul)|er(ic|k0)|esl8|ez([4-7]0|os|wa|ze)|fetc|fly(\-|_)|g1 u|g560|gene|gf\-5|g\-mo|go(\.w|od)|gr(ad|un)|haie|hcit|hd\-(m|p|t)|hei\-|hi(pt|ta)|hp( i|ip)|hs\-c|ht(c(\-| |_|a|g|p|s|t)|tp)|hu(aw|tc)|i\-(20|go|ma)|i230|iac( |\-|\/)|ibro|idea|ig01|ikom|im1k|inno|ipaq|iris|ja(t|v)a|jbro|jemu|jigs|kddi|keji|kgt( |\/)|klon|kpt |kwc\-|kyo(c|k)|le(no|xi)|lg( g|\/(k|l|u)|50|54|\-[a-w])|libw|lynx|m1\-w|m3ga|m50\/|ma(te|ui|xo)|mc(01|21|ca)|m\-cr|me(rc|ri)|mi(o8|oa|ts)|mmef|mo(01|02|bi|de|do|t(\-| |o|v)|zz)|mt(50|p1|v )|mwbp|mywa|n10[0-2]|n20[2-3]|n30(0|2)|n50(0|2|5)|n7(0(0|1)|10)|ne((c|m)\-|on|tf|wf|wg|wt)|nok(6|i)|nzph|o2im|op(ti|wv)|oran|owg1|p800|pan(a|d|t)|pdxg|pg(13|\-([1-8]|c))|phil|pire|pl(ay|uc)|pn\-2|po(ck|rt|se)|prox|psio|pt\-g|qa\-a|qc(07|12|21|32|60|\-[2-7]|i\-)|qtek|r380|r600|raks|rim9|ro(ve|zo)|s55\/|sa(ge|ma|mm|ms|ny|va)|sc(01|h\-|oo|p\-)|sdk\/|se(c(\-|0|1)|47|mc|nd|ri)|sgh\-|shar|sie(\-|m)|sk\-0|sl(45|id)|sm(al|ar|b3|it|t5)|so(ft|ny)|sp(01|h\-|v\-|v )|sy(01|mb)|t2(18|50)|t6(00|10|18)|ta(gt|lk)|tcl\-|tdg\-|tel(i|m)|tim\-|t\-mo|to(pl|sh)|ts(70|m\-|m3|m5)|tx\-9|up(\.b|g1|si)|utst|v400|v750|veri|vi(rg|te)|vk(40|5[0-3]|\-v)|vm40|voda|vulc|vx(52|53|60|61|70|80|81|83|85|98)|w3c(\-| )|webc|whit|wi(g |nc|nw)|wmlb|wonu|x700|yas\-|your|zeto|zte\-/i.test(a.substr(0,4)))
            {
                if( navigator.userAgent.match(/ip(hone|od)/i) ) {
                    $_device_is_iphone = true;
                }

                document.cookie = 'isMobile=true; expires=; path=/';
                if (expectedMobileURL.indexOf('/mobile') !== -1) {
                    if (getCookie('siteVersion') == '') {
                        fetchStatus(expectedMobileURL, true);
                    } else if (getCookie('siteVersion') == 'mobile') {
                        window.location = expectedMobileURL;
                    }
                } else {
                    if (getCookie('siteVersion') == 'mobile' && expectedMobileURL == '' && document.location.indexOf('.ushmm.org/mobile/') === -1) {
                        // We want a mobile page, there is no redirect url and we are not on a mobile page
                        alert('There is no mobile version of this page. The mobile layout will begin at the next matching page.');
                    }
                }
            } else {
                document.cookie = 'isMobile=false; expires=; path=/';
            }
        }

        // THE ONLY THING WE HAVE TO SET
        // this is the destination page for the mobile redirect
        var expectedMobileURL = '/mobile/about-the-museum/privacy-policy';

        // the expectedURL is for the mobile site
        if (window.location.href == "https://www.ushmm.org/information/plan-a-visit") {
            if (window.addEventListener) {
                window.addEventListener("load", goMobile(navigator.userAgent||navigator.vendor||window.opera), true);
            } else {
                window.onload = goMobile(navigator.userAgent||navigator.vendor||window.opera);
            }            
        }

        // if we made it this far we are staying here, please continue
    </script>


