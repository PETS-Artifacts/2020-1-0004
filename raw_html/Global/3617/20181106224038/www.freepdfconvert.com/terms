    <script>
    window.logJsError = function(message) {
        var a = new XMLHttpRequest();
        a.open("POST", '/error/js', true);
        a.setRequestHeader('Content-Type', 'application/json; charset=utf-8');
        var m = JSON.stringify({ message: message });
        a.send(m);
    };

    window.onerror = function(msg, url, lineNo, columnNo, error) {
        window.logJsError(`${msg}\n${url}\n${JSON.stringify(error)}\nLine: ${lineNo}\nCol:${columnNo}`);
        return false;
    };
</script>
