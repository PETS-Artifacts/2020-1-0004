<script>
    (function() {

        function printDiv(e) {
            window.focus();
            window.print();
        }
        $('#printLink').on('click', function(e) {
            e.preventDefault();
            printDiv();
        });
    })($);
</script>


<!-- popup -->
<script>
$(function(){

    var checkVisit = function(){
        if (localStorage) {
            var visited = localStorage.getItem('visited');
            if (visited == null) {
                localStorage.setItem('visited', 1);
                $('.overlay-background').removeClass('popup-hide');
                $('.overlay-main').removeClass('popup-hide');
            }
        } else {
            var visitedFallback = Cookies.get('visitedFallback')
                if (visited == null) {
                    $('.overlay-background').removeClass('popup-hide');
                    $('.overlay-main').removeClass('popup-hide');    
                }
            Cookies.set('visitedFallback', 'yes', { expires: 365, path: '/' });
        }
    };
    checkVisit();

    $(".overlay-close").click(function() {
        $(".overlay-background").fadeOut(200);
        $(".overlay-main").fadeOut(200);
        return false;
    });

    function ValidateEmail(email) {
        var expr = /^([\w-\.]+)@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([\w-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)$/;
        return expr.test(email);
    };
    $('.formButton').click(function(e) {
        if($('#control_EMAIL').val() <1 || $("#control_COLUMN1").val() <1 || $("#control_COLUMN2").val()<1 ){
            e.preventDefault();
            $('.field-required').show();
        }
	if (!ValidateEmail($("#control_EMAIL").val() ) ) {
            e.preventDefault();
            $('.valid-email').show();
	}
    });

    $('.overlay-form form').submit(function(){
        $('.confirmation').show();
        setTimeout( function () { 
                form.submit();
            }, 8000);
    });

    var hideMessages = function(){
        $('.field_wrapper').click(function() {
            $('.field-required').hide();
            $('.valid-email').hide();
        });
    };
    hideMessages();
});

</script>


