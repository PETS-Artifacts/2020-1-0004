<article class="node-2746 node node-page view-mode-full clearfix" about="/privacy-policy-terms-use" typeof="foaf:Document">
  <div class="boxWrap">
    <div class="boxTop"><div class="boxTopRight"></div></div>

    <div class="boxWrapperLeft">
