(function() {
  	var cookieName = 'NominationsToken';
	var cookieValue = '';
	var date = new Date();
	var minutes = 30; 
	date.setTime(date.getTime() + (minutes * 60 * 1000)); 
	jQuery.cookie(cookieName, cookieValue, { expires: date, path:'/', domain: '.sagaftra.org' });

} () );
