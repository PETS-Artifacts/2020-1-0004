    <script type="text/javascript">
        $(document).ready(function () {

            $(".tureng-searchform").submit(function (event) {
                
                var searchFromText = $(".tureng-searchform-textbox").val().toLowerCase();
                window.location.href = "/en/turkish-english" + "/" + searchFromText;

                event.preventDefault();
            });

            $(".hamburger-toggle").click(function () {
                if ($(".tureng-navbar-openmenu").is(":visible"))
                {
                    $(".tureng-navbar-openmenu").slideUp();
                } else {
                    $(".tureng-navbar-openmenu").slideDown();
                }
            });

                
            
                if ($(".tureng-searchresults-col-right").size() > 0 || $(".tureng-content-col-right").size() > 0)
                {
                    if ($(".tureng-searchresults-col-right").is(":visible") || $(".tureng-content-col-right").is(":visible")) {
                        (adsbygoogle = window.adsbygoogle || []).push({});
                    }
                    googleAdCount--;
                }
                
                for (i = 0; i < googleAdCount; i++) {
                    (adsbygoogle = window.adsbygoogle || []).push({});
                }

                var checkIt = function () {
                    if ($("ins iframe").size() < 1) {
                        //$("ins").removeClass("adsbygoogle");
                        $("ins").addClass("tureng-noad");
                    }
                }

                setTimeout(checkIt, 2000);

                

            ga('send', {
                'hitType': 'event',
                'eventCategory': 'turengserver',
                'eventAction': '81.22.101.125',
                'eventValue': 1
            });

            
        });
    </script>

