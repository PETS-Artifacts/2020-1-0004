                $(function(){
                     var shrinkHeader = 1;
                      $(window).scroll(function() {
                        var scroll = getCurrentScroll();
                          if ( scroll >= shrinkHeader ) {
                               $('.the-header').addClass('shrink');
                            }
                            else {
                                $('.the-header').removeClass('shrink');
                            }
                      });
                    function getCurrentScroll() {
                        return window.pageYOffset;
                        }
                    });
            </script>

