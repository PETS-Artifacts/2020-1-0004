<script>

        var removeClass = true;
        $("button.toggle-sidebar").click(function () {
            $("#map-canvas").toggleClass('hasside');
            $("#mainnav").toggleClass('shownav');
            removeClass = false;
        });


        $("#wrapper").click(function() {
            removeClass = false;
        });

        $("").click(function () {
            if (removeClass) {
                $("#map-canvas").removeClass('hasside');
                $("#mainnav").removeClass('shownav');
            }
            removeClass = true;
        });



        (function($) {
          $(function() {
