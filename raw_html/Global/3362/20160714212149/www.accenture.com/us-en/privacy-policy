        <div class="block-title iscrisscrossed">
            <h2>GENERAL</h2>
        </div>


    <div class="ui-content-box  " style="padding: ">
        <section class="container-block">


            


    <div class="col-sm-12"> 
            <div class="col-sm-2"> 
                
            </div>        
            <div class="col-sm-8"> 
                
    <div class="module-article component">
        <!-- Module Article -->

                        <div class="article-content">
