    <script>
    function submitSearchQuery () {
        var value = $("#search-input").val();
        // alert(value);
        if (value) {
            window.location = "/search/t/" + value;
        }
    }
        $(document).ready(function(){
            $("#search-button").click(function(){
                submitSearchQuery();
            })
            $("#search-input").keyup(function(e){
                if(e.keyCode !== 13) {
                    return false;
                }
                submitSearchQuery();
            });
        });
    </script>
