<script>
$("#myform").validate({
      rules: {
        "email[email]": {
          required: true,
          email: true
        },
        "email[email_confirmation]": {
          required: true,
          email: true,
          equalTo: "#email_email"
        },
        "email[name]": {
          required: true
        }
      },
      messages: {
        "email[email]": {
          required: "Please provide a email",
          email: "Please enter a valid email address"
        },
        "email[email_confirmation]": {
          required: "Please provide a email",
          email: "Please enter a valid email address",
          equalTo: "Please enter the same email as above"
        },
        "email[name]": "Please enter name",
      }
    });
</script>


