    <span>
    <script type="text/javascript">

        // all images with class img-lazy-load will show only when within (100) pixels of window
        //
        // to show images on "show more", just trigger scroll 
        // ex: jQuery("img.img-lazy-load:visible").trigger("scroll");
        //
        // for crawlers, they don't use JS, so initially, we need to hide the lazy-load images
        // via CSS or display: none on the image, and then place the real image via <noscript>
        // under the real image (i.e: 
        // <img class="lazy" src="img/grey.gif" data-original="img/example.jpg"  width="640" heigh="480">
        // <noscript><img src="img/example.jpg" width="640" heigh="480"></noscript>)
        // This is so that browsers that don't have js will have the real image show (via noscript) and the main img hidden
        //
        // In document.ready because the images that are lazy-loaded are not within initial view, so after page is done loading, lazy load images.
        jQuery(document).ready(function () {
            // set visited cookie
            var cookieNameVisited = "visited";
            var cookieNameShowHomeCarouselsB = "showhomecarb";

            if (getCookieMain(cookieNameVisited) != "1") {
                setCookieMain(cookieNameVisited, "1", 3650, 0);
                setCookieMain(cookieNameShowHomeCarouselsB, "1", 0, 1);
            }

            // set showemailoptinmodal cookie to not show for 30 days
            if (window.location.search.toLowerCase().indexOf("utm_medium=email") > -1) {
                setShowEmailOptInModalCookie("0", 30);
                setCookieMain(cookieNameShowHomeCarouselsB, "0", 0, -1);
            }

            // all images
            jQuery("img.img-lazy-load").show().lazyload({ 
                threshold: 100,
                effect: "fadeIn"
            });

            // homepage theme section background image
            jQuery("div.carouselwrap > div.home-main.img-lazy-load-background").lazyload({
                event: "reveal"
                //effect: "fadeIn"
            });

            // for carousel images
            // each container for images is set
            jQuery(".page-carousel-inner").each(function () {

                var thisContainer = jQuery(this);

                // Don't need show because carousel is JS
                // so crawlers wont see it anyways
                // event = custom event reveal
                // must be manually triggered
                jQuery(this).find("div.img-lazy-load-carousel").lazyload({
                    effect: "fadeIn",
                    event: "reveal",
                    container: thisContainer
                });

            });

            // for press center detail carousel images
            // each container for images is set
            jQuery(".pc-image-car .carousel-inner").each(function () {

                var thisContainer = jQuery(this);

                // Don't need show because carousel is JS
                // so crawlers wont see it anyways
                // event = custom event reveal
                // must be manually triggered
                jQuery(this).find("img.img-lazy-load-carousel").lazyload({
                    effect: "fadeIn",
                    event: "reveal",
                    container: thisContainer
                });

            });

            // for homepage theme carousel images
            // each container for images is set
            jQuery(".theme-car-inner").each(function () {

                var thisContainer = jQuery(this);

                // Don't need show because carousel is JS
                // so crawlers wont see it anyways
                // event = custom event reveal
                // must be manually triggered
                jQuery(this).find("div.img-lazy-load-carousel").lazyload({
                    event: "reveal",
                    effect: "fadeIn",
                    container: thisContainer
                });

            });

            // for homepage carousel images
            // each container for images is set
            jQuery(".home-big-car-inner").each(function () {

                var thisContainer = jQuery(this);

                // Don't need show because carousel is JS
                // so crawlers wont see it anyways
                // event = custom event reveal
                // must be manually triggered
                jQuery(this).find("div.img-lazy-load-carousel").lazyload({
                    event: "reveal",
                    effect: "fadeIn",
                    container: thisContainer
                });

            });

            // lazy load images in navs -- these are always hidden so new class
            // each container for images is set
            jQuery(".promos").each(function () {

                var thisContainer = jQuery(this);

                jQuery(this).find("img.img-lazy-load-main").show().lazyload({
                    threshold: 100,
                    effect: "fadeIn",
                    container: thisContainer
                });

            });

            // jQuery(".innerlabel label").inFieldLabels() fix
            setTimeout(function () {
                jQuery(".innerlabel label").css({ "position": "absolute", "top": "0px", "left": "0px" });
            }, 500);
        });

        jQuery(".select-basic select").on("focus", function () {
            jQuery(this).parent().addClass("selecthighlight");
        });

        jQuery(".select-basic select").on("blur", function () {
            jQuery(this).parent().removeClass("selecthighlight");
        });

        function showSearchModal() {
            var theViewport = jQuery(window);
            var searchModal = jQuery("div.global-search-modal");
            var winWidth = theViewport.width();
            var globalSearchModalLeft = ((winWidth / 2) - 440);
                    var viewportHeight = Math.max(jQuery(window).height() - searchModal.outerHeight(), 0) / 2;
                    jQuery("div.global-search-modal").css({ 'top': viewportHeight + jQuery(window).scrollTop() });
            jQuery("div.global-search-modal").css("left", globalSearchModalLeft);
            jQuery("div.global-search-modal, .globalsearchoverlay").show();
        }

        function hideSearchModal() {
            jQuery(".global-search-modal, .globalsearchoverlay").hide();
        }

        window.showCNModal = function() {
            jQuery(".cn-modal, .globalsearchoverlay").show();
            setShowHomeCarouselsBCookie("0", -1);
        }

        window.hideCNModal = function(val) {
            jQuery(".cn-modal, .globalsearchoverlay").hide();
            setShowCNModalCookie(val);
        }

        window.setShowCNModalCookie = function(val) {
            var cookieNameShowCNModal = "showcnmodal";
            var numDays = 1;

            setCookieMain(cookieNameShowCNModal, val, numDays, 0);
        }

        window.showEmailOptInModal = function () {
            jQuery(".optin-modal").show("slow");
            setShowEmailOptInModalCookie("1", 1);
        }

        window.hideEmailOptInModal = function (numDays) {
            //if (navigator.platform == 'iPad') {
            //    jQuery("html, body").animate({ scrollTop: 0 }, "fast");
            //}
            jQuery(".optin-modal").hide("slow");
            setShowEmailOptInModalCookie("0", numDays);
        }

        window.setShowEmailOptInModalCookie = function (val, numDays) {
            var cookieNameShowEmailOptInModal = "showemailoptinmodal";
            if (val == "0" && getCookieMain(cookieNameShowEmailOptInModal) == "0")
                return;

            setCookieMain(cookieNameShowEmailOptInModal, val, numDays, 0);
        }

        window.setVisitedCookie = function () {
            var cookieNameVisited = "visited";
            setCookieMain(cookieNameVisited, "1", 3650, 0);
        }

        window.setShowHomeCarouselsBCookie = function (val, numHours) {
            var cookieNameShowHomeCarouselsB = "showhomecarb";
            setCookieMain(cookieNameShowHomeCarouselsB, val, 0, numHours);
        }

        function getCookieMain(cookieName) {
            if (jQuery.cookie(cookieName) == null)
                return "";
            else
                return jQuery.cookie(cookieName);
        }

        function setCookieMain(cookieName, val, days, hours) {
            var expdate = new Date();
            if (hours > 0)
                expdate.setTime(expdate.getTime() + (hours * 60 * 60 * 1000)); //milliseconds
            else
                expdate.setTime(expdate.getTime() + (days * 24 * 60 * 60 * 1000)); //milliseconds

            jQuery.cookie(cookieName, val, { path: '/', domain: cookieDomain, expires: expdate });
        }

        function CheckEmailForNewsletterSignUp() {

            if (typeof (Page_ClientValidate) == 'function') {
                Page_ClientValidate('vgNewsletterForm');
            }

            if (Page_IsValid) {
                // Sign up for newsletter
                var globalSignUpType = "1";
                var email = jQuery('input:text[id$=txtNewsletterEmail]').val();
                var url = "/services/SignUpNewsletterService.asmx/IsValidUser";
                var data = "{email: '" + email + "'}";

                // Uses web method to get definition of term
                jQuery.ajax({
                    type: 'POST',
                    contentType: "application/json; charset=utf-8",
                    url: url,
                    // 2 min timeout
                    timeout: 120000,
                    dataType: "json",
                    data: data,

                    beforeSend: function (xhr, settings) {
                        //Loading Icon
                        jQuery('.fp-loader').show();
                    },

                    success: function (data, status, xhr) {
                        if (data.d == true) {
                            window.location.href = "/login?status=leae";
                        }
                        else {
                            window.location.href = "/email-sign-up?email=" + email;
                        }
                        //Loading Icon
                        jQuery('.fp-loader').hide();
                    },

                    error: function (xhr, options, error) {
                        //Loading Icon
                        jQuery('.fp-loader').hide();
                        //jQuery('#divNewsletterSignUpForm').show();
                        //jQuery('#divNewsletterThankYou').hide();
                        //alert(xhr + " " + options + " " + error);
                    }
                });
            }
        }

        function SignUpForNewsletter() {

            if (typeof (Page_ClientValidate) == 'function') {
                Page_ClientValidate('vgNewsletterForm');
            }

            if (Page_IsValid) {
                // Sign up for newsletter
                var globalSignUpType = "1";
                var url = "/services/SignUpNewsletterService.asmx/SignUpSpecialOffers";
                var data = "{firstName: '" + "', lastName: '" + "', email: '" + jQuery('input:text[id$=txtNewsletterEmail]').val() + "', address: '" + "', city: '" + "', stateProvince: '" + "', zipPostal: '" + "', countryCode: '" + "', country: '" + "', phone: '" + "', signUpType: '" + globalSignUpType + "'}";

                // Uses web method to get definition of term
                jQuery.ajax({
                    type: 'POST',
                    contentType: "application/json; charset=utf-8",
                    url: url,
                    // 2 min timeout
                    timeout: 120000,
                    dataType: "json",
                    data: data,

                    beforeSend: function (xhr, settings) {
                        //Loading Icon
                        jQuery('.fp-loader').show();
                    },

                    success: function (data, status, xhr) {
                        if (data.d == true) {
                            jQuery('#divNewsletterSignUpForm').hide();
                            jQuery('#divNewsletterThankYou').show();
                        }
                        else {
                            //alert('Sign Up Failed. Please Try Again Later');
                        }
                        //Loading Icon
                        jQuery('.fp-loader').hide();
                    },

                    error: function (xhr, options, error) {
                        //Loading Icon
                        jQuery('.fp-loader').hide();
                        jQuery('#divNewsletterSignUpForm').show();
                        jQuery('#divNewsletterThankYou').hide();
                        //alert(xhr + " " + options + " " + error);
                    }
                });
            }
        }

        jQuery('#divNewsletterThankYou').hide();

        var cookieDomain = '.lhw.com';

        jQuery.setupLanguageToggle({
            jp: 'jp.lhw.com',
            de: 'de.lhw.com',
            it: 'it.lhw.com',
            es: 'es.lhw.com',
            en: 'www.lhw.com'
        }, cookieDomain);

        jQuery("#globalSearchKeyword").keypress(function (evt) {
            var keycode = (evt.keyCode ? evt.keyCode : evt.which);
            if (keycode == "13") {
                evt.preventDefault();
                jQuery("#globalSearchButton").trigger("click");
            }
        });

        jQuery("#globalSearchButton").click(function (evt) {
            evt.preventDefault();
            window.location.href = '/site-search?' + jQuery.param({ q: jQuery("#globalSearchKeyword").val() });
        });

        var docHeight = Math.max(
            jQuery(document).height(),
            jQuery(window).height()
        );

        jQuery(".allclickoverlay").css({ "height": docHeight });

        jQuery("a.headerhelplink").click(function () {
            jQuery(this).addClass("helpactive");
            jQuery(".headerhelp").show();
            jQuery(".allclickoverlay").show();
            MoveLPToHeader();
        });

        jQuery("a.findreslink").click(function () {
            jQuery(this).addClass("findresactive");
            jQuery(".headerfindres").show();
            jQuery(".allclickoverlay").show();
        });

        jQuery("a.newsletter-signup-link").click(function () {
            jQuery(this).addClass("newsletteractive");
            if (jQuery(".newsletter-signup #divNewsletterThankYou:visible")) {
                jQuery(".newsletter-signup #divNewsletterThankYou").hide();
                jQuery(".newsletter-signup #divNewsletterSignUpForm").show();
            }
            jQuery(".newsletter-signup").show();
            jQuery(".allclickoverlay").show();
        });

        jQuery(".allclickoverlay, .lpChatTextLinkText").click(function () {
            jQuery(".headerfindres, .headerhelp, .newsletter-signup, .allclickoverlay").hide();
            jQuery(".headerhelplink").removeClass("helpactive");
            jQuery(".newsletter-signup-link").removeClass("newsletteractive");
            jQuery(".findreslink").removeClass("findresactive");
            MoveLPToFooter();
        });



        jQuery(".lhwlinks .lhwlaunch").click(function () {
            jQuery(".lhwlinks").toggleClass("active");
        });

        //set lhw links/dropdown to matching sizes
        var lhwlinkslaunchwidth = jQuery("#nav-bar .navbarinner .lhwlinks a.lhwlaunch").outerWidth();
        var lhwlinksdropwidth = jQuery(".navbarinner .lhwlinks .drop").width();
        if (lhwlinksdropwidth > lhwlinkslaunchwidth) {
            jQuery("#nav-bar .navbarinner .lhwlinks a.lhwlaunch span").css("width", (lhwlinksdropwidth - 50)); // minus the padding
        }
        if (lhwlinkslaunchwidth > lhwlinksdropwidth) {
            jQuery(".navbarinner .lhwlinks .drop").css("width", (lhwlinkslaunchwidth - 18)); //minus the padding
        }

        // TABLETS ONLY
		if ('ontouchstart' in document.documentElement) {
			//get inspired top nav - touch
			jQuery(".inspiredrop .level1 a").live("touchstart", function (e) {
				var linkIndex = jQuery(".inspiredrop .level1 a").index(this);
				if (jQuery(this).parent().data("clicked") == linkIndex) {
					jQuery(this).parent().data("clicked", null);
					return true;
                }
                else {
					e.preventDefault();
					jQuery(".inspiredrop .level1 a").removeClass("active");
					jQuery(this).addClass("active");
					jQuery(".inspiredrop .extenders .flyout").hide();
					jQuery(".inspiredrop .extenders .flyout").eq(linkIndex).css("display", "block");
					jQuery(this).parent().data("clicked", linkIndex);
				}

				// for tablets
				// on hovering of top nav item, the featured images will be shown
				jQuery(".inspiredrop .extenders .flyout").eq(linkIndex).find("img.img-lazy-load-main").lazyload({
					skip_invisible: false,
				});
				jQuery(".inspiredrop .extenders .flyout").eq(linkIndex).find("img.img-lazy-load-main").trigger("scroll");
			});

			jQuery(".navlinks .tn").live("touchstart", function (e) {
				if (jQuery(this).hasClass("tabclick")) {
                }
                else {
					e.preventDefault();
					jQuery(".navlinks .navdrop").hide();
					jQuery(".navlinks .tabclick").removeClass("tabclick");
					jQuery(this).addClass("tabclick").next().show();
                    jQuery(document).bind('click', blurNavDropdown);
				}
			});

                    var blurNavDropdown = function (e) {
				var trgt = e.target;
				var currentListElements = jQuery('.tabclick').parent().find('*').andSelf();
                        if (jQuery.inArray(trgt, currentListElements) < 0) {
					jQuery(".navlinks .navdrop").hide();
					jQuery(".navlinks .tn").removeClass("tabclick");
					jQuery(document).unbind('click', blurNavDropdown);
				}
			}
        }
        else {
			//DESKTOP ONLY
			//get inspired - top nav desktop
                    jQuery(".inspiredrop .level1 a").hover(function () {
				var linkIndex = jQuery(".inspiredrop .level1 a").index(this);
				jQuery(".inspiredrop .level1 a").removeClass("active");
				jQuery(this).addClass("active");
				jQuery(".inspiredrop .extenders .flyout").hide();
				jQuery(".inspiredrop .extenders .flyout").eq(linkIndex).css("display", "block");

				// on hovering of top nav item, the featured images will be shown
				jQuery(".inspiredrop .extenders .flyout").eq(linkIndex).find("img.img-lazy-load-main").lazyload({
					skip_invisible: false, 
				});
				jQuery(".inspiredrop .extenders .flyout").eq(linkIndex).find("img.img-lazy-load-main").trigger("scroll");
			});
		}


        //Basic Selects
        jQuery(".select-basic select").each(function () {
            var currentParent = jQuery(this).parent();
            if (jQuery(this).val()) {
                //Set text to selected value
                jQuery(".current-text", currentParent).html(jQuery("option:selected", this).text());
                jQuery(".current-val", currentParent).html(jQuery("option:selected", this).val());
                jQuery(".current-html", currentParent).html(jQuery("option:selected", this).html());
		    }
		    else {
                //no value... set to first option
                jQuery(".current-text", currentParent).html(jQuery("option:first", this).text());
                jQuery(".current-val", currentParent).html(jQuery("option:first", this).val());
                jQuery(".current-html", currentParent).html(jQuery("option:first", this).html());
            }
		});

        jQuery(".select-basic select").live('change keyup', function () {
            var currentParent = jQuery(this).parent();
            jQuery(".current-text", currentParent).html(jQuery("option:selected", this).text());
            jQuery(".current-val", currentParent).html(jQuery("option:selected", this).val());
            jQuery(".current-html", currentParent).html(jQuery("option:selected", this).html());
            jQuery(".current-label", currentParent).html(jQuery("option:selected", this).text());
		});

        jQuery(window).load(function () {
            MoveLPToFooter();
        });

        function MoveLPToHeader() {
            if (jQuery(".headerhelplink").hasClass("helpactive")) {
                jQuery(".lp-row-header").append(jQuery(".lp-row .lp-chat-wrap"));
                jQuery(".lp-row-header").append(jQuery(".lp-row .lp-call-wrap"));
            }
        }

        function MoveLPToFooter() {
            if (!jQuery(".headerhelplink").hasClass("helpactive")) {
                jQuery(".lp-row").append(jQuery(".lp-row-header .lp-chat-wrap"));
                jQuery(".lp-row").append(jQuery(".lp-row-header .lp-call-wrap"));
            }
        }

    </script>
    </span>

