<style>
.ui-autocomplete-category {
	font-weight: bold;
	padding: .2em .4em;
	margin: .8em 0 .2em;
	line-height: 1.5;
}
</style>

<script type="text/javascript">  

    var ran = false;
    jQuery(function () {
        (function ($) {

            // Check back button usage and clear inputs
            var searchBar = jQuery('#ucPropertySearchBar_divHotelSearchBar');
            var guestDataCheck = jQuery(".guest-data", searchBar).val();
            if (guestDataCheck.indexOf("&") == 0) {
                jQuery('.location-wrap input', searchBar).val('');
                jQuery('.checkin-wrap input', searchBar).val('');
                jQuery('.checkout-wrap input', searchBar).val('');
                jQuery('.room-num', searchBar).val(1);
                jQuery('.adult-num', searchBar).val(2);
                jQuery('.child-num', searchBar).val(0);
            }

            jQuery("#ucPropertySearchBar_txtLocation").data("original-val", jQuery("#ucPropertySearchBar_txtLocation").val());

            jQuery('#ucPropertySearchBar_divHotelSearchBar .req').hide();

            jQuery(".refine-search-btn").unbind("click").click(function () {
                jQuery(this).toggleClass("active");
                jQuery(this).next().toggle();
            }); 

            // autocomplete
            jQuery.widget("custom.catcomplete", jQuery.ui.autocomplete, {
                _renderMenu: function (ul, items) {
                    var self = this,
                    currentCategory = "";
             
                    jQuery.each(items, function (index, item) {
                        if (item.cat != currentCategory) {

                            // Translated Name
                            var categoryName = '';
                            if (item.cat == 'Regions') {
                                categoryName = 'Regions';
                            } else if (item.cat == 'Countries') {
                                categoryName = 'Countries';
                            } else if (item.cat == 'Cities') {
                                categoryName = 'Cities';
                            } else if (item.cat == 'Hotels') {
                                categoryName = 'Hotels';
                            }

                            ul.append("<li class='ui-autocomplete-category'>" + categoryName + "</li>");
                            currentCategory = item.cat;                    
                        }
                        self._renderItem(ul, item);
                    });                        
                }
            });


            $.setGuests = function (settings) {
                var searchBarId = jQuery(settings.propertyBarId);
                var roomNumber = jQuery(settings.roomNumSelect, searchBarId);
                var roomGuests = jQuery(settings.guestDiv, searchBarId);
                var guestContainer = "guest-select-container";
                var guestAdultDropdownClass = ".select-room-num-adults";
                var guestChildDropdownClass = ".select-room-num-children";
                var guestChildAgeListClass = ".children-ages";
                var guestChildAgeDropdownClass = "select-room-child-age";
                jQuery("li:first", roomGuests).hide();
                jQuery(".children-ages", roomGuests).hide();
                //jQuery(".guest-dropdown", searchBarId).customDropdown();
                //jQuery(".guest-dropdown-scroll", searchBarId).scrollbarPaper();

                // Create the guest info for each of our rooms
                function createGuestInfo(guestDiv, roomNum, numAdults, numChildren, childAges) {
                    // Create new room from template and set title
                    var templateDiv = jQuery("li:first", guestDiv);
                    var lastGuestInfo = jQuery("li:last", guestDiv);
                    templateDiv.clone().insertAfter(lastGuestInfo);
                    var curGuestInfoItem = jQuery("li:last", guestDiv);
                    curGuestInfoItem.addClass(guestContainer);
                    jQuery("h4", curGuestInfoItem).html(jQuery("h4", curGuestInfoItem).html() + roomNum);

                    // Create adults dropdown
                    var appendHtml = "";
                    for (var dropdownIndex = 1; dropdownIndex <= 4; dropdownIndex++) {
                        appendHtml += "<option val='" + dropdownIndex + "'>" + dropdownIndex + "</option>";
                    }
                    jQuery(guestAdultDropdownClass, curGuestInfoItem).append(appendHtml).val(numAdults);

                    // Create children dropdown
                    var appendHtml = "";
                    for (var i = 0; i <= 10; i++) {
                        appendHtml += "<option val='" + i + "'>" + i + "</option>";
                    }
                    jQuery(guestChildDropdownClass, curGuestInfoItem).append(appendHtml).val(numChildren);

                    // If we have children, make the child age dropdowns
                    if (numChildren > 0) {
                        for (var i = 0; i < numChildren; i++) {
                            var childAge = childAges[i];
                            var childNum = i + 1;
                            var childAgeDropdown = createChildAgeDropdown(childAge, childNum);
                            jQuery(guestChildAgeListClass, curGuestInfoItem).append(childAgeDropdown).show();
                        }
                    }

                    curGuestInfoItem.show();
                    updateDropdownDisplay();

                    // When user changes the number of children, this will display the correct number of 'children age' drop downs
                    jQuery(guestChildDropdownClass).live('change', function (e) {
                        toggleChildAgeDropdowns(this);
                    });
                }

                // Create child age dropdowns
                function createChildAgeDropdown(childAge, childNumber) {

                    var appendHtml = "";
                    for (var i = 1; i <= 17; i++) {
                        var selectedStatus = (childAge == i) ? 'selected' : '';
                        appendHtml += "<option val='" + i + "' " + selectedStatus + ">" + i + "</option>";
                    }

                    var currentAgeDropdown = "<select class='" + guestChildAgeDropdownClass + "' data-child-num='" + childNumber + "'>" + appendHtml + "</select>";
                    var ageSelectContainer = "<div class='select-basic'><div><span class='current-val'></span></div>" + currentAgeDropdown + "</div>";
                    var ageContainer = "<div class='col'>" + ageSelectContainer + "</div>";

                    return ageContainer;
                }

                // When num of rooms change, dynamically build guest info select section
                roomNumber.live('change', function (e) {
                    var numberOfRoomsSearch = jQuery(this).val();
                    var guestInfoItems = jQuery("." + guestContainer, roomGuests);
                    var numGuestInfoItems = guestInfoItems.length;
                    //update guest class
                    if (numberOfRoomsSearch == 0) {
                        jQuery(".guest-dropdown-content", searchBarId).addClass("disabled");
                    } else {
                        jQuery(".guest-dropdown-content", searchBarId).removeClass("disabled");
                    }

                    //update adult dropdown functionality
                    if (numberOfRoomsSearch < 2) {
                        jQuery('#ucPropertySearchBar_divHotelSearchBar .adultguests-wrap .disabled-input').hide();
                        jQuery('#ucPropertySearchBar_divHotelSearchBar .adultguests-wrap select').show();
                    } else {
                        jQuery('#ucPropertySearchBar_divHotelSearchBar .adultguests-wrap .disabled-input').show();
                        jQuery('#ucPropertySearchBar_divHotelSearchBar .adultguests-wrap select').hide();
                    }

                    //check whether we have enough guest info sections already
                    //if so, then just display them
                    //otherwise dynamically render the rest of the guest info sections
                    if (numberOfRoomsSearch <= numGuestInfoItems) {
                        for (var i = 0; i < numGuestInfoItems; i++) {
                            if (i < numberOfRoomsSearch) {
                                jQuery(guestInfoItems[i]).show().addClass(guestContainer);
                            } else {
                                jQuery(guestInfoItems[i]).hide().removeClass(guestContainer);
                            }
                        }
                    } else {
                        for (var i = 0; i < numberOfRoomsSearch; i++) {
                            if (i < numGuestInfoItems) {
                                jQuery(guestInfoItems[i]).show().addClass(guestContainer);
                            } else {
                                //when adding a new room, default to 2 adult, 0 children
                                createGuestInfo(roomGuests, i + 1, 2, 0, null);
                            }
                        }
                    }
                });

                // Display the correct number of 'children age' dropdown lists based on the number of children
                function toggleChildAgeDropdowns(el) {

                    //Get how many children we should have
                    var numChildren = jQuery(el).val();

                    // Get child age dropdowns, so we can count up the kids
                    var childAgeParent = jQuery(el).parents("li");
                    var childAgeDropdowns = jQuery("." + guestChildAgeDropdownClass, childAgeParent);
                    var numOfCurrentChildAgeDropdowns = childAgeDropdowns.length;

                    // Compare the number of children selected and the number of child-age dropdowns we currently have
                    // If there are less dropdowns than the number of children selected, then we will need to create new ones
                    if (numChildren <= numOfCurrentChildAgeDropdowns) {
                        for (var i = 0; i < numOfCurrentChildAgeDropdowns; i++) {
                            if (i < numChildren) {
                                jQuery(childAgeDropdowns[i]).parent().show();
                                jQuery(guestChildAgeListClass, childAgeParent).show();
                            } else {
                                jQuery(childAgeDropdowns[i]).parent().hide();
                            }
                            if (numChildren == 0) {

                                jQuery(guestChildAgeListClass, childAgeParent).hide();
                            }
                        }
                        // If there are more dropdowns than the number of children selected, then only show up to that amount and hide the rest	
                    } else {
                        for (var i = 0; i < numChildren; i++) {
                            if (i < numOfCurrentChildAgeDropdowns) {
                                jQuery("." + guestChildAgeDropdownClass, childAgeParent).eq(i).show();
                            } else {
                                var childAgeDropdown = createChildAgeDropdown(1, i + 1);
                                jQuery(guestChildAgeListClass, childAgeParent).append(childAgeDropdown);
                                jQuery(guestChildAgeListClass, childAgeParent).show();
                            }
                        }
                    }
                    updateDropdownDisplay();
                }

                // Update intial load of custom dropdowns
                function updateDropdownDisplay() {
                    jQuery(".select-basic select").each(function () {
                        var currentParent = jQuery(this).parent();
                        jQuery(".current-val", currentParent).html(jQuery(this).val());
                    });
                }

                var guestDataVal = jQuery("#ucPropertySearchBar_divHotelSearchBar .guest-data").val();
                if (guestDataVal && guestDataVal.indexOf("&") == -1) { // Check for & - webkit back button fix
                    var newParams = '{"Rooms":' + guestDataVal + '}';
                    var guestParam = jQuery.parseJSON(newParams);
                    for (var roomIndex = 0; roomIndex < roomNumber.val() ; roomIndex++) {
                        var roomNum = roomIndex + 1;
                        createGuestInfo(roomGuests, roomNum, guestParam.Rooms[roomIndex].NumAdults, guestParam.Rooms[roomIndex].NumChildren, guestParam.Rooms[roomIndex].ChildAges);
                    }
                } else {
                    roomNumber.trigger('change');
                }


                // Open/Close Guest view via clicks
                jQuery('#ucPropertySearchBar_divHotelSearchBar .childguests-wrap .disabled-input').click(function(event) {
                    openGuestView();
                });
                jQuery('#ucPropertySearchBar_divHotelSearchBar .adultguests-wrap .disabled-input').live('click', function () {
                    openGuestView();
                });
                jQuery('#ucPropertySearchBar_divHotelSearchBar .close-guests').live('click', function () {
                    closeGuestView();
                });


                // Open/Close Guest View
                function openGuestView() {
                    jQuery('#ucPropertySearchBar_divHotelSearchBar .roomguests-wrap').slideDown();
                }
                function closeGuestView() {
                    jQuery('#ucPropertySearchBar_divHotelSearchBar .roomguests-wrap').slideUp();
                }


                // update values from select changes
                jQuery('#ucPropertySearchBar_divHotelSearchBar .roomcount-wrap select').live('change', function () {
                    updateValues();
                });
                jQuery('#ucPropertySearchBar_divHotelSearchBar .roomguests-wrap select').live('change', function () {
                    updateValues();
                });


                // Update values
                function updateValues(){
                    var numberOfAdults = 0;
                    var numOfChildren = 0;
                    jQuery('#ucPropertySearchBar_divHotelSearchBar .guest-select-container').each(function (index) {
                        numberOfAdults += Number(jQuery(".select-room-num-adults", this).val());
                        numOfChildren += Number(jQuery(".select-room-num-children", this).val());
                    });
                    setTimeout(function () {  
                        jQuery('#ucPropertySearchBar_divHotelSearchBar .adultguests-wrap .select-basic .current-val').html(numberOfAdults);
                        jQuery('#ucPropertySearchBar_divHotelSearchBar .adultguests-wrap select').val(numberOfAdults);
                        jQuery('#ucPropertySearchBar_divHotelSearchBar .childguests-wrap .select-basic .current-val').html(numOfChildren);
                    }, 100);
                }


                // Match selects
                jQuery('#ucPropertySearchBar_divHotelSearchBar .adultguests-wrap select').live('change', function () {
                    var newVal = jQuery(this).val();
                    var adultEl = jQuery('#ucPropertySearchBar_divHotelSearchBar .guest-select-container .select-room-num-adults').parent();
                    jQuery('.select-room-num-adults', adultEl).val(newVal);
                    jQuery('.current-val', adultEl).html(newVal);
                });
        

                // after load
                if (jQuery('#ucPropertySearchBar_divHotelSearchBar .roomcount-wrap select').val() > 1) {
                    jQuery('#ucPropertySearchBar_divHotelSearchBar .adultguests-wrap .disabled-input').show();
                    jQuery('#ucPropertySearchBar_divHotelSearchBar .adultguests-wrap select').hide();
                }
                jQuery('#ucPropertySearchBar_divHotelSearchBar .childguests-wrap select').hide();
                updateValues();

            }

            jQuery.setGuests({ propertyBarId: "#ucPropertySearchBar_divHotelSearchBar", roomNumSelect: ".room-num", guestDiv: ".guest-content" });


            // Datepickers
            jQuery("#ucPropertySearchBar_divHotelSearchBar").lhwDatepicker({ checkInContainer: '#ucPropertySearchBar_divHotelSearchBar .checkincal', checkOutContainer: '#ucPropertySearchBar_divHotelSearchBar .checkoutcal', checkInAltField: '#ucPropertySearchBar_txtCheckInDate', checkOutAltField: '#ucPropertySearchBar_txtCheckOutDate', autoOpenCheckout: true, checkInCopy: 'Check-In', checkOutCopy: 'Check-Out', unavailableMsg: 'You cannot select this date because {0} is unavailable.', minStayMsg: 'Minimum [4] night stay required', maxStayMsg: 'Hotel stays are limited to 30 days.' });
            jQuery(".cal-key").each(function () {
                var par = jQuery(this).parent();
                jQuery(this).appendTo(par);
            });

            jQuery(".select-basic select").unbind("change").change(function () {
                var currentParent = jQuery(this).parent();
                jQuery(".current-selected", currentParent).html(jQuery(this).text());
            });
            jQuery(".select-basic select").each(function () {
                var currentParent = jQuery(this).parent();
                jQuery(".current-selected", currentParent).html(jQuery(this).text());
            });

            jQuery("#ucPropertySearchBar_txtLocation").keypress(function () {
                jQuery(':hidden[id$=hfAutocompleteCategory]').val('');
                if (jQuery(this).data("original-val") != jQuery(this).val())
                    jQuery("#ucPropertySearchBar_hfLocationChanged").val("1");
                else
                    jQuery("#ucPropertySearchBar_hfLocationChanged").val("");
            });

            jQuery("#ucPropertySearchBar_txtLocation").on('input', function(){
                if (jQuery(this).data("original-val") != jQuery(this).val())
                    jQuery("#ucPropertySearchBar_hfLocationChanged").val("1");
                else
                    jQuery("#ucPropertySearchBar_hfLocationChanged").val("");
            });

            // delay the search buttons postback to wait for the autocompletes blur event to finish executing
            jQuery("#ucPropertySearchBar_btnSearch").click(function () {
                setTimeout(jQuery("#ucPropertySearchBar_btnSearch").attr("href"), 2000);        
                return false;
            });




            /* - - - - - - SEARCHBAR - - - - - - */

            // Infield lales
            jQuery("label").inFieldLabels();

            //Autocomplete
            var accentMap = {
                "á": "a",
                "à": "a",
                "â": "a",
                "ã": "a",
                "ä": "a",
                "å": "a",
                "ß": "b", //Großbritannien groß is pronounced gross though, so not sure what to substitute it with
                "ç": "c",
                "è": "e",
                "é": "e",
                "ê": "e",
                "ë": "e",
                "ì": "i",
                "í": "i",
                "î": "i",
                "ï": "i",
                "ð": "g",
                "ğ": "g",
                "ñ": "n",
                "ò": "o",
                "ó": "o",
                "ô": "o",
                "õ": "o",
                "ö": "o",
                "ø": "o",
                "ù": "u",
                "ú": "u",
                "û": "u",
                "ü": "u",
                "ý": "y",
                "ÿ": "y",
                "’" : "'"
            };            

            var normalize = function (term) {
                var ret = "";

                for (var i = 0; i < term.length; i++) {
                    ret += accentMap[term.toLowerCase().charAt(i)] || term.toLowerCase().charAt(i) || accentMap[term.charAt(i)] || term.charAt(i);
                }
                return ret;
            }

            var getLabel = function (item) {
                var label = item.label;
                if (item.cat == "Cities") {
                    label += ", " + item.loc;
                }
                else if (item.cat == "Hotels") {
                    label += " - " + item.loc;
                }
                return label;
            }          

            var matchAliasesJP = function (re, regExMatcher, item, aliasArray, aliasArrayIndex)
            {
                // if no alias match, we return the original regex
                if (aliasArrayIndex < 0)
                {
                    return regExMatcher;
                }        
                else
                {
                    // If we have an alias match, we change the search term to its label and return that regex
                    if (regExMatcher.test(normalize(aliasArray[aliasArrayIndex])) == true || regExMatcher.test(aliasArray[aliasArrayIndex]) == true)
                    {
                        var decodedTerm = "";
                        var term = item.label;

                        term = removeSpecialCharacters(term);
                
                        var parts = term.split("\\u");
                        for (var i = 0; i < parts.length; i++) 
                        {
                            var part = parts[i];
                            if (i == 0) {
                                decodedTerm += part;
                            }
                            else {
                                decodedTerm += String.fromCharCode("0x" + part.substr(0, 4));
                                if (part.length > 4)
                                {
                                    decodedTerm += part.substring(4);
                                }
                            }
                        }
                        // match against the beginning of whole terms
                        var re = jQuery.ui.autocomplete.escapeRegex(decodedTerm);

                        return new RegExp("" + re, "i");   
                    }
                }
                return matchAliasesJP(re, regExMatcher, item, aliasArray, aliasArrayIndex - 1);
            }
     
            // regExMatcher = regex
            // itemArray = string array 
            // returns true of regExMatcher matches any item in itemArray
            var matchAliasesNonJP = function (re, regExMatcher, item, aliasArray, aliasArrayIndex)
            {

                // if no alias match, we return the original regex
                if (aliasArrayIndex < 0)
                {
                    return regExMatcher;
                }        
                else
                {
                    // If we have an alias match, we change the search term to its label and return that regex
                    if (regExMatcher.test(normalize(aliasArray[aliasArrayIndex])) == true || regExMatcher.test(aliasArray[aliasArrayIndex]) == true )
                    {
                        var decodedTerm = "";
                        var term = item.label.toLowerCase();

                        term = removeSpecialCharacters(term);
                
                        var parts = term.split("\\u");
                        for (var i = 0; i < parts.length; i++) 
                        {
                            var part = parts[i];
                            if (i == 0) {
                                decodedTerm += part;
                            }
                            else {
                                decodedTerm += String.fromCharCode("0x" + part.substr(0, 4));
                                if (part.length > 4)
                                {
                                    decodedTerm += part.substring(4);
                                }
                            }
                        }
                        // match against the beginning of whole terms
                        var re = jQuery.ui.autocomplete.escapeRegex(decodedTerm);

                        return new RegExp("\\b" + re.toLowerCase(), "i");
                    }
                }
                return matchAliasesNonJP(re, regExMatcher, item, aliasArray, aliasArrayIndex - 1);
            }

                    

    var split = function (val) {
        return val.split(/,\s*/);
    }

    var extractLast = function (term) {
        return split(term).pop();
    }

    var isAutocompleteLoaded = false;
    if ("btn-global-search-modal" == "") {
        loadAutocomplete();
    }
    else {
        jQuery(".btn-global-search-modal").click(function () {
            if (!isAutocompleteLoaded) {
                loadAutocomplete();                
                isAutocompleteLoaded = true;
            }
        });
    }  

            // Replaces special characters with their regular counter-part
            // javascript doesn't support boundary regex with special characters such as ones with accents, so we replace them to search for the term according to the accent map.
    function removeSpecialCharacters(text) {
        var test = text
            .replace(/â/g, "a").replace(/á/g, "a").replace(/ã/g, "a").replace(/ä/g, "a").replace(/à/g, "a").replace(/å/g, "a")
            .replace(/è/g, "e").replace(/é/g, "e").replace(/ê/g, "e").replace(/ë/g, "e")
            .replace(/í/g, "i").replace(/ï/g, "i").replace(/î/g, "i").replace(/ì/g, "i")
            .replace(/ö/g, "o").replace(/ô/g, "o").replace(/ó/g, "o").replace(/ò/g, "o").replace(/õ/g, "o").replace(/ø/g, "o")
            .replace(/ù/g, "u").replace(/ü/g, "u").replace(/ú/g, "u").replace(/û/g, "u")
            .replace(/ñ/g, "n")
            .replace(/ç/g, "c")
            .replace(/ý/g, "y").replace(/ÿ/g, "y")
            .replace(/ð/g, "g").replace(/ğ/g, "g")
            .replace(/’/g, "'"); // replaces special ' with default '
        return test;
    }

    function loadAutocomplete() {
        jQuery.ajax({
            url: "/services/json/AutoCompleteV2_en.js",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (data)
            {
                jQuery("#ucPropertySearchBar_txtLocation").catcomplete({
                        minLength: 3,
                        source: function (request, response) {
                            // parse out the unicode characters in the term before matching against it
                            var decodedTerm = "";

                            request.term = removeSpecialCharacters(request.term.toLowerCase());

                            var parts = request.term.split("\\u");
                            for (var i = 0; i < parts.length; i++) {
                                var part = parts[i];
                                if (i == 0) {
                                    decodedTerm += part;
                                }
                                else {
                                    decodedTerm += String.fromCharCode("0x" + part.substr(0, 4));
                                    if (part.length > 4)
                                        decodedTerm += part.substring(4);
                                }
                            }
                            // match against the beginning of whole terms
                            var re = jQuery.ui.autocomplete.escapeRegex(decodedTerm);

                            var matcher;
                            var lowerMatcher;
                            if ("en" == "ja") {
                                matcher = new RegExp("" + re, "i");                                
                            }
                            else {
                                matcher = new RegExp("\\b" + re, "i");
                                lowerMatcher = new RegExp("\\b" + re.toLowerCase(), "i");
                            }

                            var a = jQuery.grep(data, function (item, index) {
                                if ("en" == "ja") {

                                    // if regex matches an alias, we change the matcher to become the alias' label
                                    // i.e: if we search for usa, without this check, only Countries' United States would show up and not any cities
                                    if (item.als.length > 0)
                                    {
                                        matcher = matchAliasesJP(re, matcher, item, item.als, item.als.length - 1);
                                    }

                                    return matcher.test(extractLast(item.label)) || matcher.test(extractLast(getLabel(item))) || matcher.test(extractLast(normalize(item.label)));
                                }
                                else {

                                    // if item has id (url alias), we remove dashes, and check if matcher matches it
                                    // ex: item.id = "Ciragan-Palace-Kempinski-Istanbul-Istanbul-Turkey"
                                    // Tries to match the item name, item name without accents, and lowercase matching
                                    if (item.id == null || item.id == "") {

                                        // if regex matches an alias, we change the matcher to become the alias' label
                                        // i.e: if we search for usa, without this check, only Countries' United States would show up and not any cities
                                        if (item.als.length > 0)
                                        {
                                            lowerMatcher = matchAliasesNonJP(re, lowerMatcher, item, item.als, item.als.length - 1);
                                        }

                                        // Also matches regions with/without apostrophes in them
                                        // Don't need to remove special characters in the else statement because it's removed in the item.id by default
                                        return matcher.test(item.label) || matcher.test(getLabel(item)) || matcher.test(normalize(item.label)) 
                                            || matcher.test(removeSpecialCharacters(item.label)) 
                                            || matcher.test(removeSpecialCharacters(item.label).replace(/'/g, ""))
                                            || matcher.test(removeSpecialCharacters(getLabel(item)))
                                            || matcher.test(removeSpecialCharacters(getLabel(item).replace(/'/g, "")))
                                            || lowerMatcher.test(item.label.toLowerCase()) || lowerMatcher.test(getLabel(item).toLowerCase()) 
                                            || lowerMatcher.test(normalize(item.label).toLowerCase()) || lowerMatcher.test(removeSpecialCharacters(item.label)) 
                                            || lowerMatcher.test(removeSpecialCharacters(item.label).replace(/'/g, ""))
                                            || lowerMatcher.test(removeSpecialCharacters(getLabel(item).toLowerCase()))
                                            || lowerMatcher.test(removeSpecialCharacters(getLabel(item).toLowerCase().replace(/'/g, "")));
                                    }
                                    else
                                    {
                                        // if regex matches an alias, we change the matcher to become the alias' label
                                        // i.e: if we search for usa, without this check, only Countries' United States would show up and not any cities
                                        if (item.als.length > 0)
                                        {
                                            lowerMatcher = matchAliasesNonJP(re, lowerMatcher, item, item.als, item.als.length - 1);
                                        }

                                        return matcher.test(item.label) || matcher.test(getLabel(item)) 
                                            || matcher.test(normalize(item.label)) || matcher.test(item.id.replace(/-/g, " ")) 
                                            || matcher.test(removeSpecialCharacters(getLabel(item)))
                                            || lowerMatcher.test(removeSpecialCharacters(getLabel(item).toLowerCase()))
                                            || lowerMatcher.test(item.label.toLowerCase()) || lowerMatcher.test(getLabel(item).toLowerCase()) 
                                            || lowerMatcher.test(normalize(item.label).toLowerCase()) || lowerMatcher.test(item.id.replace(/-/g, " ").toLowerCase());
                                    }
                                    
                                }
                            });
                            response(a);
                        },
                        select: function (event, ui)
                        {
                            jQuery(this).val(ui.item.value);
                            if (ui.item.cat == "Hotels")
                            {
                                jQuery("[id $= 'hfHotelId']").val(ui.item.id);
                                jQuery("[id $= 'hfHotelBookingNumber']").val(ui.item.hid);
                            }
                            else
                            {
                                jQuery("[id $= 'hfHotelId']").val("");
                                jQuery("[id $= 'hfHotelBookingNumber']").val("");
                            }
                            jQuery(':hidden[id$=hfAutocompleteCategory]').val(ui.item.cat);
                            return false;
                        },
                        change: function (event, ui) {
                            var search = jQuery(this).val();
                            var dataIndex = -1;
                            jQuery("[id $= 'hfHotelId']").val("");
                            jQuery("[id $= 'hfHotelBookingNumber']").val("");

                            jQuery.each(data, function (index, value) {
                                if (value.label.toLowerCase() == search.toLowerCase() || getLabel(value).toLowerCase() == search.toLowerCase()) {
                                    dataIndex = index;
                                    if (value.cat == "Hotels") {
                                        jQuery("[id $= 'hfHotelId']").val(value.id);
                                        jQuery("[id $= 'hfHotelBookingNumber']").val(ui.item.hid);
                                    }
                                    return;
                                }
                            });
                        },
                        open: function () {
                            jQuery('.ui-autocomplete').css('z-index', 30);
                            jQuery(':hidden[id$=hfAutocompleteCategory]').val('');
                        }
                    })
                        .data("catcomplete")._renderItem = function (ul, item) {
                            var hotel_count = "</a>";
                            if (item.hct != null) {
                                hotel_count = " : " + item.hct;
                                if (item.hct == 1)
                                    hotel_count += " hotel</a>";
                                else
                                    hotel_count += " hotels</a>";
                            }
                            return jQuery("<li></li>")
                                    .data("item.autocomplete", item)
                                    .append("<a>" + getLabel(item) + hotel_count)
                                    .appendTo(ul);
                        }
                }
        });        
    }


        // SEARCH BAR VALIDATION!
        // So we dont add more things to datepicker check this stuff occasionally 
        var intervalucPropertySearchBar_divHotelSearchBar = setInterval(function () { setSearchBarValidation() }, 1000);
        var submittingLink = false;
        var validationRequired = false;

        function setSearchBarValidation() {
            jQuery('#ucPropertySearchBar_divHotelSearchBar').each(function () {
                if (jQuery('.checkin-wrap input', this).val() && jQuery('.checkout-wrap input', this).val()) {
                    //Things are required now...
                    jQuery('.req', this).show();
                    validationRequired = true;
                    // Remove cause it already served its purpose
                    clearInterval(intervalucPropertySearchBar_divHotelSearchBar);
                }
            });
        }

        // Remove our href since we need to validate now and can't block the js in the href
        jQuery('#ucPropertySearchBar_divHotelSearchBar').each(function () {
            var searchBarSubmit = jQuery('.find-room-btn', this);
            var currentHref = jQuery(searchBarSubmit).attr('href');
            jQuery(searchBarSubmit).attr('data-href', currentHref);
            jQuery(searchBarSubmit).attr('href', '');
            // Setup our new button action
            jQuery('.find-room-btn', this).bind('click', function () {
                jQuery(this).addClass('invisible');
                if (!submittingLink) {
                    searchBarValidation("#ucPropertySearchBar_divHotelSearchBar");
                }
            });
        });

        // Actual Validation
        function searchBarValidation(e) {
            // Setup vars
            var currentSearchBar = jQuery(e);
            var currentRoomNum = jQuery('.room-num', currentSearchBar).val();
            var validationError = false;
            // Start with no errors
            jQuery('.validation-error').removeClass('validation-error');
            // Check we have more then 0 rooms
            if (validationRequired && currentRoomNum < 1) {
                jQuery('.roomcount-wrap .select-basic', currentSearchBar).addClass('validation-error');
                jQuery('.roomguests-wrap .guest-dropdown', currentSearchBar).addClass('validation-error');
                validationError = true;
                jQuery('.find-room-btn', currentSearchBar).removeClass('invisible');
                return false;
            } else {
                // Make sure all adult dropdowns have more then 0 adults
                if (currentRoomNum > 0) {
                    jQuery('.roomguests-wrap .guest-select-container .select-room-num-adults', currentSearchBar).each(function () {
                        if (jQuery(this).val() < 1) {
                            jQuery('.roomguests-wrap .guest-dropdown', currentSearchBar).addClass('validation-error');
                            validationError = true;
                            jQuery('.find-room-btn', currentSearchBar).removeClass('invisible');
                            return false;
                        }
                    });
                }

            }

            // No Validation errors? Back to normal
            if (!validationError) {
                //Prevent infinite loop...
                submittingLink = true;
                //Set our guest data
                if (currentRoomNum > 0) {
                    var guestData = "";
                    jQuery('.guest-select-container', currentSearchBar).each(function (index) {
                        var adultnum = index + 1;
                        var numadults = jQuery(".select-room-num-adults", this).val();
                        var numchild = jQuery(".select-room-num-children", this).val();
                        var childage = "";
                        for (var i = 0; i < numchild; i++) {
                            var childnum = i + 1;
                            var childageparent = jQuery(".children-ages", currentSearchBar).eq(adultnum);
                            var childageval = jQuery(".select-room-child-age", childageparent).eq(i).val();
                            childage += "&childage" + adultnum + "_" + childnum + "=" + childageval;
                        }
                        guestData += "&numadult" + adultnum + "=" + numadults + "&numchild" + adultnum + "=" + numchild + childage;
                    });
                    jQuery('.guest-data', currentSearchBar).val(guestData);
                }
                //Set href and click
                var searchBarSubmit = jQuery('.find-room-btn', currentSearchBar);
                var currentHref = jQuery(searchBarSubmit).attr('data-href');
                jQuery(searchBarSubmit).attr('href', currentHref);
                jQuery(searchBarSubmit).trigger('click');
            }

        }

        // Remove our validated error classes when the inputs are updated.
        jQuery('#ucPropertySearchBar_divHotelSearchBar .roomcount-wrap select').live('change', function () {
            jQuery('#ucPropertySearchBar_divHotelSearchBar .roomcount-wrap .select-basic').removeClass('validation-error');
        });
        jQuery('#ucPropertySearchBar_divHotelSearchBar .roomguests-wrap select').live('change', function () {
            var guestErrors = false;
            jQuery('#ucPropertySearchBar_divHotelSearchBar .guest-select-container .select-room-num-adults').each(function () {
                if (jQuery(this).val() < 1) {
                    guestErrors = true;
                }
            });
            if (!guestErrors) { jQuery('#ucPropertySearchBar_divHotelSearchBar .roomguests-wrap .guest-dropdown').removeClass('validation-error'); }
        });


    })(jQuery);
    });

</script>
        </div>

