    <script type="text/javascript">



    jQuery(function ($) {



        // Right "state module" trigger/expandable lists



        $('.statelaws h4 a.trigger').click(function() {



            if ($(this).parent().next('.sub-items').hasClass('hide')) {



                $(this).parent().next('.sub-items.hide').slideToggle('fast');



                $(this).parent().next('.sub-items.hide').toggleClass('hide');



                $(this).toggleClass('trigger');



                return false;



            }



        });



        $('#state_change').change(function() {



            window.location.href = decodeURIComponent($(this).val());



        });



        $('.norml-networks .cmore').click(function() {



            $(this).toggleClass('hide');



            $(this).siblings('.hide').toggleClass('hide');



            return false;



        });



        $('#mj-slide-wrapper .mj-nav').click(function() {



            $(this).parent().parent().parent().siblings('.hide').toggleClass('hide');



            $(this).parent().parent().parent().siblings('.active').toggleClass('hide');



            $(this).parent().parent().parent().siblings().toggleClass('active');



            return false;



        });



        $('#us-map').maphilight();



    });



    </script>







