    <!-- global JS variables -->
    <script>
        var base_url = "http://www.cisneros.com/";
        var lang     = "en";
    </script>

    <script>
        $(document).ready(function(){
            checkViewport();

            var waitForFinalEvent=function(){var b={};return function(c,d,a){a||(a="I am a banana!");b[a]&&clearTimeout(b[a]);b[a]=setTimeout(c,d)}}();
            var fullDateString = new Date();

            $(window).resize(function () {
                waitForFinalEvent(function(){
                    checkViewport();
                }, 100, fullDateString.getTime())
            });

            $('#language-widget').on('click', 'a', function(){
                var langId = $(this).attr('id');
                if (lang == langId) {
                    $('#lang-button').click();
                    return false;
                } else {
                    window.location.href = base_url + 'language/' + langId;
                }
                $('#lang-button').click();
            });

            var actionController = "main",
                actionFunction = "privacypolicy";

            $('#main-menu .current-menu-item').removeClass('current-menu-item');

            var actionParent = $('#main-menu').find('.' + actionController + '-controller');
            if (actionParent.length > 0) {
                actionParent.parents('li').addClass('current-menu-item');
            } else {
                var actionTarget = $('#main-menu').find('.' + actionController + '-' + actionFunction);
                if (actionTarget.length > 0) {
                    actionTarget.parents('li').addClass('current-menu-item');
                }
            }

            $('#contactForm').validate({
                rules: {
                    name: {
                        required  : true,
                        personName: true
                    },
                    email: {
                        required: true,
                        email   : true
                    },
                    subject:{
                        required : true,
                        plainText: true
                    },
                    message:{
                        required   : true,
                        plainText  : true,
                        rangelength: [10, 5000]
                    }
                },
                messages: {
                    message: {
                        rangelength: (lang == 'sp') ? 'El mensaje debe tener entre {0} y {1} caracteres.' : 'Message should be between {0} and {1} characters.'
                    }
                }
            });

            $('.summernote-image').click(function(ev){
                var link = $(this).data('link');

                if (!isUrl(link)) {
                    return false;
                }

                var newWindow = $(this).data('newwindow');

                if (newWindow) {
                    window.open(link);
                } else {
                    window.location = link;
                }
            });

            $('.xs-menu-li').on('click', function(ev){
                var container = $(this),
                    ul = container.find('.submenu');
                if (ul.is(':visible')) {
                    ul.slideUp(200, function(){
                        container.find('.xs-submenu-toggle').removeClass('fa-angle-up').addClass('fa-angle-down');
                    });
                } else {
                    ul.slideDown(200, function(){
                        container.find('.xs-submenu-toggle').removeClass('fa-angle-down').addClass('fa-angle-up');
                    });
                }
            });

            $('.xs-main-nav-item').click(function(ev){
                ev.stopPropagation();
                window.location.href = $(this).data('ref');
            });

            // Sticky Header
            $(window).scroll(function() {
                if ($(window).scrollTop() > 1) {
                    $('.header-mobile-sticky').addClass('m-sticky');
                } else {
                    $('.header-mobile-sticky').removeClass('m-sticky');
                }
            });

            // Mobile Navigation
            $('.header-mobile-sticky .toggle-menu').click(function() {
                if ($('.header-mobile-sticky').hasClass('open-nav')) {
                    $('.header-mobile-sticky').removeClass('open-nav');
                } else {
                    $('.header-mobile-sticky').addClass('open-nav');
                }
            });

            $('.header-mobile-sticky li a').click(function() {
                if ($('.header-mobile-sticky').hasClass('open-nav')) {
                    $('.navigation').removeClass('open-nav');
                    $('.header-mobile-sticky').removeClass('open-nav');
                }
            });

            // navigation scroll lijepo radi materem
            $('.header-mobile-sticky nav a').click(function(event) {
                var id = $(this).attr('href');
                var offset = 70;
                var target = $(id).offset().top - offset;
                $('html, body').animate({
                    scrollTop: target
                }, 500);
                event.preventDefault();
            });

        });
        function checkViewport()
        {
            $('body').removeClass('xs').removeClass('sm').removeClass('md').removeClass('lg').removeClass('not-xs');
            if( isBreakpoint('xs') ) {
                $('body').addClass('xs');
                $('.show-on-hover').show();
                $('#header-section').addClass('header-mobile-sticky');
            } else {
                $('body').addClass('not-xs');
                if( isBreakpoint('sm') ) {
                    $('body').addClass('sm');
                    $('.show-on-hover').show();

                    $('body.sm .featured-news-container .even').each(function(){
                        $(this).after('<div class="clear-sm-homepage-news-container clearfix"></div>')
                    });
                } else {
                    $('.clear-sm-homepage-news-container').remove();

                    if( isBreakpoint('md') ) {
                        $('body').addClass('md');
                        $('.show-on-hover').hide();
                    } else if( isBreakpoint('lg') ) {
                        $('body').addClass('lg');
                        $('.show-on-hover').hide();
                    }
                }
                $('#header-section').removeClass('header-mobile-sticky');
            }
        }
        function isBreakpoint(alias) {
            return $('.device-' + alias).is(':visible');
        }
        function getBreakpoint() {
            return $('.viewport-item:visible').data('viewport');
        }
    </script>

