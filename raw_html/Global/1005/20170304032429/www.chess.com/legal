  <script type="text/javascript">
    var localStorageWorks = function () {
      if (localStorage == null) {
        return false;
      }
      try {
        localStorage.getItem('testLocalStorage');
      } catch (e) {
        return false;
      }
      return true;
    };

    window.getLocalStorage = function (key) {
      if (localStorageWorks()) {
        var json_settings = JSON.parse(localStorage.getItem('json_settings')) || {};
        if (json_settings[key]) {
          return json_settings[key];
        }
      }
    };
  </script>




