    <script type="text/javascript">
      window.addEventListener('load', function init() {
        window._trackJs = {
          token: 'fe7b5a28a5e643a6ac6a1fae0b111b51',
          application: 'chess-v3',
          version: '20170303162139',
          onError: function (payload) {
            var getCookie = function (name) {
              var value = "; " + document.cookie;
              var parts = value.split("; " + name + "=");
              if (parts.length == 2) {
                return parts.pop().split(";").shift();
              }
            };

            var cookies = [];
            cookies.push({ 'key': 'app', 'value': getCookie('app') });
            cookies.push({ 'key': 'server', 'value': getCookie('server_access') });

            cookies.forEach(function (value) {
              if (value.value != null) {
                payload.metadata.push({
                  key: "cookie_" + value.key,
                  value: value.value
                });
              }
            });

            if (context != null) {
              var keys = ['release', 'branch', 'commit'];
              keys.forEach(function (value) {
                if (context[value] != null) {
                  payload.metadata.push({
                    key: value,
                    value: context[value]
                  });
                }
              });

              if (context.host != null) {
                payload.metadata.push({
                  key: 'server',
                  value: context.host
                });
              }

              if (context.user != null) {
                var userKeys = ['username', 'membershipLevel'];

                userKeys.forEach(function (value) {
                  if (context.user[value] != null) {
                    payload.metadata.push({
                      key: value,
                      value: context.user[value]
                    });
                  }
                });
              } else {
                payload.metadata.push({
                  key: 'username',
                  value: '-1'
                });
              }

              if (context.i18n != null && context.i18n.locale != null) {
                payload.metadata.push({
                  key: 'locale',
                  value: context.i18n.locale
                });
              }
            }

            return true;
          }
                  };

        var script = document.createElement('script');
        script.src = '//d2zah9y47r7bi2.cloudfront.net/releases/2.6.2/tracker.js';
        document.body.appendChild(script);
      }, false);
    </script>
    <!-- END TRACKJS -->
  
      <script type="text/javascript">
    (function () {
      var windowLoadEvent = function () {
        var imgDefer = document.getElementsByClassName('img-defer');
        var gamePopover = document.getElementsByClassName('game-preview-popover-loading');

        window.loadEventFired = true;
        window.removeEventListener('load', windowLoadEvent);

        for (var i = imgDefer.length - 1; i >= 0; i--) {
          var src = imgDefer[i].getAttribute('data-src');
          var srcset = imgDefer[i].getAttribute('data-srcset');
          var className = imgDefer[i].className;

          if (src) {
            imgDefer[i].setAttribute('src', src);
          }

          if (srcset) {
            imgDefer[i].setAttribute('srcset', srcset);
          }

          if (src || srcset) {
            imgDefer[i].className = className.replace(/img-defer\s*/, '');
          }
        }

        for (var j = 0; j < gamePopover.length; j++) {
          gamePopover[j].style['background-image'] = 'url(\'/bundles/web/images/game-preview-loading.png\')';
        }
      };

      window.addEventListener('load', windowLoadEvent, false);
    })();

