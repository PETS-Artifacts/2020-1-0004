  <script>
    if ( ! window.ChesscomFB ) var ChesscomFB = {
        fbAsyncInit:[],
        fbFbmlBatch:[]
      };
    window.fbAsyncInit = function () { for (var x=0, fn; fn=ChesscomFB.fbAsyncInit[x]; x++) { fn(); }};
    ChesscomFB.share = function (object) {
        var params = { method:'feed' },
            url = object.url;

        if (url) {
          if (url.indexOf('/') === 0) url = 'https://www.chess.com'+ url;
        } else {
          url = location.href;
        }
        if (url.indexOf('utm_source') === -1) url = url.replace(/\?|$/, '?utm_source=facebook&utm_medium=sharelink&').replace(/&$/,'');

        params['link'] = url;
        params['source'] = object['video:secure_url'];
        params['picture'] = object['image:secure_url'];

        FB.ui(params);
    };

    ChesscomFB.inviteFriends = function(data) {
      var params = {
        method: 'apprequests',
        message: 'Join Chess.com to play chess with your friends',
        frictionlessRequests: true
      },

      requestCallback = function (response) {
        if (response) {
          // someone was invited!
          if ('redirectUri' in data) {
            if (window.location.hostname == 'apps.facebook.com') {
              self.location.replace(data.redirectUri);
            } else {
              window.location.replace(data.redirectUri);
            }
          }
        }
      };

      if ('excludeIds' in data) {
        params['exclude_ids'] = data.excludeIds;
      }

      if ('message' in data) {
        params['message'] = data.message;
      }

      if ('to' in data) {
        params['to'] = data.to;
      }

      FB.ui(params, requestCallback);
      FB.Canvas.setAutoGrow();
    };

    ChesscomFB.fbAsyncInit.push(function () {
      FB.init({
        appId:'429665630433565',
        channelUrl:'https://www.chess.com/fb/channel.htm',
        status:true,
        cookie:true,
        oauth:true,
        xfbml:(ChesscomFB.fbFbmlBatch.length == 0)      });

      FB.Canvas.scrollTo(0, 0);

      if (ChesscomFB.fbFbmlBatch.length) {
        ChesscomFB.batch_number = 0;
        ChesscomFB.batchParseFbml = function () {
          var that = this;
          setTimeout(function () { FB.XFBML.parse(that); }, Math.floor(ChesscomFB.batch_number / 10) * 1000);
          ChesscomFB.batch_number++;
        }
        $j(function () {
          $j(ChesscomFB.fbFbmlBatch.join(', '))
          .each(ChesscomFB.batchParseFbml);
          $j('body')
          .each(ChesscomFB.batchParseFbml);
        });
      }

      $j('.FB-inviteFriendsLink').click(function () {
        ChesscomFB.inviteFriends($j(this).data());

        return false;
      });

      $j('.FB-requestPermissions').click(function () {
        var url = $j(this).data('redirectUri');
        FB.login(function(response) {
          if (response.authResponse) {
            FB.api('/v2.0/me/permissions', function(response) {
              if (response && response.data && response.data.length) {
                var permissions = response.data;
                permissions.forEach(function (value) {
                  if (value.permission === 'publish_actions' && value.status === 'granted') {
                    window.location.replace(url);
                  }
                });
              }
            });
          }
        }, {scope: 'publish_actions'});

        return false;
      });

      if ($j('#check-fb-login').length) {
        FB.getLoginStatus(function (response) {
          if (response.authResponse) {
            if (response.authResponse.userID != $j('#fb-id').val()) {
              showLoginWarning();
            }
          }
        });
      }
    });

    </script>
