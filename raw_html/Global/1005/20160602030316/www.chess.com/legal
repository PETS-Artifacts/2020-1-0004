<script type="text/javascript">
  $j('#lang_display, #lang_display_btn, #lang_display_toplink').click(function (e) {
    e.preventDefault();

    var jsDeferred = jsDeferred || new $j.Deferred(),
        cssDeferred = cssDeferred || new $j.Deferred(),
        content = false,
        modal = $j('#language-select');
        css = 'https://cssjs.chesscomfiles.com/css/modals.v2014052901.css';

    // Load the JS on-demand if we don't already have it
    if (! $j().modal) {
      $j.getScript('https://cssjs.chesscomfiles.com/js/bootstrap/bootstrap-modal.v2016042701.js').done(function (script) {
        jsDeferred.resolve();
      }).fail(function () {
        jsDeferred.reject();
        return alert('There was an error processing your request. Please try again in a few minutes.');
      });
    } else {
      jsDeferred.resolve();
    }

    // Inject a CSS link into the <head> if we don't already have one
    if (! $j('link[href="' + css + '"]').length) {
      $j('head').append(
        $j('<link rel="stylesheet" type="text/css" />').attr('href', css)
      );

      cssDeferred.resolve();
    } else {
      cssDeferred.resolve();
    }

    // When we have the content, JS, and CSS - modal up!
    $j.when.apply($j, [jsDeferred, cssDeferred]).done(function () {
      modal.modal();

      // Bind the language choices to start the language changing process
      $j('li.lang_choice', modal).bind('click', function (e) {
        e.preventDefault();

        $j.post(
          '/api/change_language',
          { 'locale': this.id.substring('lang_selector_'.length) },
/* */
          (function (href) {
            return function () {
              location.href = href;
            }
          })($j(this).find('a').attr('href'))
/* */
        );
      });

      $j('#my_language', modal).bind('click', function (e) {
        e.preventDefault();

        $j('#my_language_desc', modal).removeClass('hide');
      });
    });

    return false;
  });
</script>
