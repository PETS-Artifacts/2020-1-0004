    <script type="text/javascript">

        var $j = jQuery.noConflict();

        Sys.WebForms.PageRequestManager.getInstance().add_pageLoaded(function (evt, args) {
            $j('.message-box').click(function () {
                if (!$j(this).hasClass('no-close')) {
                    $j(this).hide('fast');
                    event.stopPropagation();
                }
            });
        });

        $j(document).ready(function () {
            if ($j(window).width <= 768) {
                $j('#main-nav').css('top', '0');
            }

            //$j(".connect-cont").parent('.primary-box').css("display", "none"); //hide INDABA Connect

            function supports_video() {
                return !!document.createElement('video').canPlayType;
            }

            if (!supports_video()) {
                $j('.no-video').show();
            }

            $j("#to-content-scroll-up").hide();

            $j(window).scroll(function () {
                if ($j(this).scrollTop() >= $j("#start-reading").position().top) {
                    $j('#to-content-scroll-up').fadeIn();
                } else {
                    $j('#to-content-scroll-up').fadeOut();
                }
                if ($j(this).scrollTop() == 0) {
                    //$j('#to-content-scroll-down').fadeIn();
                } else {
                    //$j('#to-content-scroll-down').fadeOut();
                }
            });
            jQuery('#to-content-scroll-up').click(function () {
                jQuery('html, body').animate({
                    scrollTop: $j(window).scrollTop() > $j("#start-reading").position().top ? $j("#start-reading").position().top : 0
                }, 1000);
            });
            jQuery('#to-content-scroll-down').click(function () {
                jQuery('html, body').animate({
                    scrollTop: $j("#start-reading").position().top
                }, 1000);

            });
            jQuery('#to-content-scroll-down-banner').click(function () {
                jQuery('html, body').animate({
                    scrollTop: $j("#start-reading").position().top
                }, 1000);

            });
            function CalculateMenu() {
                var mwidth = 0;
                $j('.reg-menu').show();
                $j('#main-nav li:visible').each(function () {
                    mwidth = mwidth + $j(this).width();
                });

                if (mwidth < ($j('#menucontainer').outerWidth() - 10)) {
                    $j('.reg-menu').show();
                } else {
                    $j('.reg-menu').hide();
                }

                var headerHeight = $j('.header').outerHeight();
                var headerWidth = $j('#menucontainer').outerWidth();
                var navHeight = $j('#main-nav').outerHeight();
                var s = $j(".sticky");

                //hide the sticky menu when reaching the bottom of the page
                if ($j(window).scrollTop() + $j(window).height() == $j(document).height()) {
                    $j('.sticky').css('display', 'none');
                }
                else {
                    $j('.sticky').css('display', '');
                }

                //size menu width based on header width
                var windowWidth = $j(window).outerWidth();
                if (windowWidth > 768) {
                    //clear possible inline style as a result of menu that was clicked
                    //$j('.headerimg').css('display', '');
                    //nav-width follows header width
                    var headerWidth = $j('#menucontainer').outerWidth();
                    $j('#main-nav').addClass('width').css('width', headerWidth);
                    $j('.header').show();
                }
                else {
                    //$j('#main-nav').css('top', '');
                    $j('#main-nav').removeClass('width').css('width', '');          //nav-width max
                }

                //make menu sticky
                if (($j(window).scrollTop() > headerHeight) & (headerWidth > 768)) {    //passed the menu mark
                    //fix menu at the top
                    $j('#main-nav').addClass('fixed').css('top', '0');
                    //show red logo
                    $j('#menu-logo').addClass('menulogo').css('margin-right', '15px')
                    $j('#menu-logo').removeClass('nomenulogo')

                    //calculate height after showing red logo, and disable red logo if necessary
                    var menuHeight = $j('#main-nav').outerHeight();
                    if (menuHeight > 80) {
                        $j('#menu-logo').removeClass('menulogo')                            //hide red logo
                        $j('#menu-logo').addClass('nomenulogo').css('margin-right', '25px') //extra padding on left
                    }

                    //stick social bar
                    s.addClass("stick").css('top', navHeight);
                } else {
                    //don't fix menu at the top
                    $j('#main-nav').removeClass('fixed').css('top', '');
                    $j('#menu-logo').removeClass('menulogo')                            //hide red logo
                    $j('#menu-logo').addClass('nomenulogo').css('margin-right', '25px') //extra padding on left
                    //unstick social bar
                    s.removeClass("stick");
                }

            }

            CalculateMenu();
            $j(window).scroll(function () {
                CalculateMenu();
            });

            $j(window).resize(function () {
                CalculateMenu();
            });

            $j("#mobile-button").click(function () {
                if ($j("#main-nav").css('display').toLowerCase() == 'block') {
                    $j('#main-nav').css('display', '');         //hide menu
                    $j('#main-nav').css('position', '');        //nav is default
                    $j('.content-wrapper').css('position', 'relative');   //container can scroll
                    //$j('.headerimg').css('display', 'block');   //container  can scroll
                    $j('#ft').css('position', 'relative');      //container  can scroll
                    $j('.header').show();
                }
                else {

                    $j('.header').hide();
                    $j('#main-nav').css('display', 'block');        //show menu
                    $j('#main-nav').css('position', 'relative');    //nav can scroll
                    $j('.content-wrapper').css('position', 'fixed');      //container is fixed
                    //$j('.headerimg').css('display', 'none');        //container is fixed
                    $j('#ft').css('position', 'fixed');             //container is fixed
                }
            });
        });

        $j(function () {
            showProgress();
            var config = {
                sensitivity: 11, // number = sensitivity threshold (must be 1 or higher)    
                interval: 0, // number = milliseconds for onMouseOver polling interval    
                over: megaHoverOver, // function = onMouseOver callback (REQUIRED)    
                timeout: 50, // number = milliseconds delay before onMouseOut    
                out: megaHoverOut // function = onMouseOut callback (REQUIRED)    
            };
            $j("div#main-nav > ul > li").hoverIntent(config);
            $j("div#main-nav a").click(function () {
                $j(this).addClass('active');
            });
            mainNav();

            function mainNav() {
                $j('div#main-nav a.active').each(function () {
                    if (!$j(this).hasClass('.has-flyout')) {
                        $j(this).parents("div.sub").siblings('a.has-flyout').addClass('active');
                        //$j(this).parents("div.sub").stop().fadeTo('fast', 1).show();
                    } else {
                        //$j(this).find("div.sub").stop().fadeTo('fast', 1).show();
                    }
                });
            }
            function megaHoverOver() {
                $j(this).find("a.has-flyout").addClass('hover');
                $j(this).find("div.sub").stop().fadeTo('fast', 1).show();
            }
            function megaHoverOut() {
                $j(this).find("a.has-flyout").removeClass('hover');
                $j(this).find("div.sub").stop().fadeTo('fast', 0, function () {
                    $j(this).hide();
                });
                //mainNav();
            }

            function showProgress() {
                Sys.WebForms.PageRequestManager.getInstance().add_beginRequest(beginRequestHandler);
                function beginRequestHandler(sender, args) {
                    var elem = args.get_postBackElement();
                    //don't block IU if postback element is an export button
                    if (elem.id.indexOf("btnExport") == -1) {
                        $j.blockUI({
                            message: $j('#update-progress'),
                            css: {
                                border: 'none',
                                padding: '15px',
                                backgroundColor: '#000',
                                '-webkit-border-radius': '10px',
                                '-moz-border-radius': '10px',
                                borderRadius: '10px',
                                opacity: .5,
                                color: '#fff',
                                padding: '20px 10px',
                                width: '350px',
                                fontFamily: 'Candara',
                                fontSize: '23px'
                            },
                            fadeIn: 100,
                            fadeOut: 150,
                            baseZ: 40003
                        });
                    }
                }
                Sys.WebForms.PageRequestManager.getInstance().add_endRequest(function () {
                    $j.unblockUI({ fadeIn: 0, fadeOut: 0 });
                });
            }
        });
    </script>
