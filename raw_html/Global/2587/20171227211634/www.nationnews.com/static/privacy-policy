<script type="text/javascript">
	/*Article-page share-icon count*/
	
	var current = $(".article-pagination>ul>li.current").text();
	
	$('.art-social-links>ul>li,.art-social-links>ul>span').on('click',function(){
	
		if(current == 1 || current.length == 0){

			articleShareCount();
 		}
 
	});

	$(window).load(function () {
	articleShareCount();
	});
	
	
	function articleShareCount(){
 	var share_json=[],item = {};
 	$(".art-social-links>ul>li").each(function(){
 
 		var media = $(this).find('span').attr('displaytext');
 		var media_Count = $(this).find('.stBubble_hcount').html();
 		var item = {};
 		item[0]= media;
 		item[1] = media_Count;
 		share_json.push(item);
 	});
 		item[0] = 'article_id';
 		item[1] = $('#top-story-block').val();
 	share_json.push(item);
	
	$.ajax({
            type: 'POST',
             dataType: 'html',
            url: '/socialsharecount',
            data: {share_json: JSON.stringify(share_json)},
            beforeSend: function(xhr){
                xhr.setRequestHeader('X-CSRF-Token', $('meta[name="csrf-token"]').attr('content'));
                $("#export_loader_company").show();
            },
	    	success: function(data){


		}	
	});	
	}
</script>
