				$(document).ready(function() {
					$('#single-gallery1').flexslider({
						animation : "slide",
						slideshow : true,
						pauseOnHover : true,
						autoPlay : false,
						controlNav : false,
						animationLoop : true,
						prevText: "<< Prev",
						nextText: "Next >>",
						start : function(slider) {
							slider.find('.slideIndex').html(slider.currentSlide + 1 + "/" + slider.count);
						},
						after : function(slider) {
							slider.find('.slideIndex').html(slider.currentSlide + 1 + "/" + slider.count);
							if (!slider.playing) {
								slider.play();
							}
						}
					});

				});


