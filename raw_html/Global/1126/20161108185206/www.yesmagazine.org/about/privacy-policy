                              <div class="row">
                                <div class="col-xs-offset-1">
                                  <div class="row">
                                    <h1 id="content-title" class="normal-title article-title">
                    Privacy Policy
                </h1>
                                    <div id="content-description" class="article-description"></div>
                                  </div>
                                </div>
                              </div>
