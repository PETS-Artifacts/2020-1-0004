  $(function() {

    var isEUCookie = $.cookie('frommers-eu-user').toLowerCase() === 'true';
    var euAcceptCookieUndefined = ($.cookie('frommers-eu-accept-viewed') == undefined);

    console.log("isEUCookie:" + isEUCookie);
    console.log("!euAcceptCookieUndefined:" + !euAcceptCookieUndefined);

    if (isEUCookie && euAcceptCookieUndefined) {
      // Show EU pop if user is from EU (isEUCookie==true) AND user has not seen popup (euAcceptCookieUndefined==null)
      $("#euModal, #euModalOverlay").removeClass('hide');
      $("#euModal, #euModalOverlay").removeClass('fade');
    } else {
      console.log("eu popup seen");
    }
    
    $(".eu_accept_button, .modal-body .eu_close").click(function(event) {
      event.stopPropagation();
      event.preventDefault();
      $("#euModal, #euModalOverlay").addClass('hide fade');
      $.cookie('frommers-eu-accept-viewed', 'true', { expires: 90 });
    })

  });

</script>

