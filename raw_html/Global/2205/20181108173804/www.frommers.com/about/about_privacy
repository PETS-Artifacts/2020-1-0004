 <script>
      var onLoaded = function (init)
      {
          var labelChildCount = $('#age-label');
          init({

              inputOrigin: $('#inputcity-origin'),
              inputDestination: $('#inputcity-destination'),
              inputDateSeg0: $('#inputdate-seg0'),
              inputDateSeg1: $('#inputdate-seg1'),
              buttonSearch: $('#search'),
              selectAdultCount: $('#select-adultcount'),
              selectTicketClass: $('#select-tickettype'),
              inputChildAges: $('#input-childages'),
              labelChildCount: $('#age-label'),
              watermarkOrigin: 'I want to go from',
              watermarkDestination: 'I want to go to',
              clearReturnDate: $('#clearReturnDate'),
              searchURL: '/flightresults',
              onChanged: function (data) { }
          });

          /* Custom functionality to toggle child age selector */
          var ageSelector = $('#age-selector');
          var visible = false;
          var clickKey = 'click.toggleChildren';

          function toggleAgeSelector()
          {
              if (!visible)
              {
                  ageSelector.addClass('visible');
                  $('body').on(clickKey, function (ev, ui)
                  {
                      var a = $(ev.target).closest(ageSelector);
                      if(!a[0])
                          toggleAgeSelector();
                  });
              }
              else
              {
                  ageSelector.removeClass('visible');
                  $('body').off(clickKey);
              }
              visible = !visible;
          }

          labelChildCount.click(function (ev)
          {
              toggleAgeSelector();
              ev.stopPropagation();
          });

      }
  </script>

