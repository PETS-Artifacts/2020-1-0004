function gotoItem(){ // Allows "Learn More" button of Specials Rotator to take user to that package on special-offers page
			loc = window.location.hash.substring(1); // Returns Fragment URL from Special Rotators "Learn More" button
			if(loc){ // If Fragment URL is present
				itemLocation = "#item" + loc;
				if($(itemLocation).length!=0){
					 // If page uses accordions for module content
						accordionHeight = 0;
						fixTop = $(itemLocation).offset().top;
						$(itemLocation).prevAll().each(function() {
							accordionHeight += $(this).outerHeight() ;
						});
						$(itemLocation).siblings(".itemPreview").removeClass("selected");
						$(itemLocation).addClass("selected");
						$(window).load(function() { // Once all elements are loaded, scroll page to selected package
							$("html,body").stop().animate({scrollTop: (fixTop - accordionHeight) - $("#header").height() }, 500);
						});
									}
			}
		} // End gotoItem()

		// ACCORDIONS

