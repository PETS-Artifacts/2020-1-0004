<!-- jQuery Scripts for Slide show -->

<script type="text/javascript">
jQuery(document).ready(function() {
	jQuery('.slideshow').cycle({
		fx:     'fade',
		speed:  '2000',
		timeout: 7000,
		pager: '.mainSliderControls',
		slideResize:0,
		easeIn:  'swing',
		easeOut: 'swing',
		swipe: true,
		pagerTemplate: '<div></div>'
	});

		jQuery(window).ready(slideshowResize);
	jQuery(window).resize(slideshowResize);

	//function to resize and center images and slideshow
	function slideshowResize (){
		//get window width and hieght
		var ssWidth = jQuery("#main-visual").width();
		var ssHeight = jQuery("#main-visual").height();

		// creates width and height based on ratio (and round off decimals)
		var nWidth     = (ssHeight*3.1111111111111).toFixed(0);
		var nHeight    = (ssWidth/3.1111111111111).toFixed(0);

		//set img height and width based on screen size and ratio
		if(nWidth < ssWidth){
			var fnWidth  = ssWidth;
			var fnHeight = nHeight;
		}else{
			var fnWidth  = nWidth;
			var fnHeight = ssHeight;
		}
		//set images width and height
		jQuery("#main-visual img.slide").width(fnWidth).height(fnHeight);

		// centers images horizontally and vertically
		jQuery("#main-visual img.slide").css("left",-((fnWidth-ssWidth)/2) ).css("top",-((fnHeight-ssHeight)/2) );
	}

	// IF NUMBER OF SLIDESHOW ITEMS IS 1, HIDE SLIDESHOW NAV
	if (jQuery(".mainSliderControls").children().length <= 1) {
		jQuery(".mainSliderControls").hide();
	}

});
</script>

