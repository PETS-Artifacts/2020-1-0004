<script type="text/javascript">

// This is a global object used by the Omniture Tracking Script below
// The digitalData object is purposely left as a global variable
// Every page on the site needs its own object, so that is why there
// are template TEXT tags inserted, you may alter them on a per-site basis
// the information that was entered for each page through ToolBox was provided
// to the developer in the form of an Excel workbook
digitalData={
    page: {
        pageInfo: { pageName: "" },
        category: {
            brand: "HI",
            siteName: "Elsanjuan",
            siteType: "L",
            primaryCategory: "",
            subSection: ""
        },
        attributes: {
            contentTypes: "images,text",
            siteExperience: "D"
        }
    },
    event:   [
              { eventInfo:  { eventAction: "roomView" } },
              { eventInfo:{ eventAction: "bookNow" } }
             ],
    product: [{ productInfo:{ productID: "SJUEH" } }]
};


// this function is used to format the day and month
// so that DTM tracking information is sent properly
// it is used inside the variable function "updateOmnitureBookingInfo"
var omnitureDateFormat = function(d) {

    var month = (d.getMonth() + 1).toString();
    if(month.length === 1) { month = "0" + month; }

    var day = d.getDate().toString();
    if(day.length === 1) { day = "0" + day; }

  return month + day + d.getFullYear().toString();
}

// every time the user interacts with the booking mask,
// the following function handles the updating of the
// Omniture DTM tracking object properties
// it makes sure that items are in the correct date format
// as well as creates the necessary object properties
// for the booking widget tracking component
var updateOmnitureBookingInfo = function() {

var millisecondsInDay = 24 * 60 * 60 * 1000;
var current = new Date();

// Check if arrival and departure dates are selected, if not passes current date for arrival and next day for departure
var arrivalDate = jQuery("#us-date-in").val();
if( arrivalDate.length == 0 )
	var arrival = current;
else 
	var arrival = new Date(jQuery("#us-date-in").val());

var departureDate = jQuery("#us-date-out").val();
if( departureDate.length == 0 )
	var departure = new Date(current.getTime() + millisecondsInDay);
else 
	var departure = new Date(jQuery("#us-date-out").val());
	
var rooms = jQuery("#rooms").val();

// array which holds the relevant parameters for the DTM tracking
// script.  This will vary depending on the booking mask and
// what the client requires to be tracked
var criteria = [
  rooms,				// Rooms
  "",						// Adults
  "",						// Children
  "",						// Flex
  "",						// Points
  "",						// Special Rate Entered
  "",						// Distance
  "",						// Meeting Capacity
  "",						// Meeting Start Date
  "",						// Meeting End Date
  "",						// FnB
  ""						 // AV
];

// the array that holds the date information, also cleans the
// dates so that they are in the correct format for DTM tracking
var dateInfo = [
  omnitureDateFormat(current),		// Current Date
  omnitureDateFormat(arrival),		// Arrival Date
  omnitureDateFormat(departure),	// Departure Date
  parseInt((departure.getTime() - arrival.getTime()) / millisecondsInDay),	// Number of Days
  parseInt((arrival.getTime() - current.getTime()) / millisecondsInDay),		// Days in Advance
];

// lazy instantiation just in case the event property does not exist
if(!digitalData.page.attributes) { digitalData.page.attributes = {}; }

// colon delimited format that is needed by the DTM tracking
digitalData.page.attributes.propertySearchCriteria = criteria.join(":");
digitalData.page.attributes.propertySearchDateInfo = dateInfo.join(":");

// lazy instantiation just in case the event property does not exist
if(!digitalData.event) { digitalData.event = []; }

  // log the digitalData objects new properties
  // you may turn these off by commenting them out when
  // they are not needed
  console.log( Date() );
  console.log("propertySearchCriteria  ->  " + digitalData.page.attributes.propertySearchCriteria);
  console.log("propertySearchDateInfo  ->  " + digitalData.page.attributes.propertySearchDateInfo);
}
</script>
	

