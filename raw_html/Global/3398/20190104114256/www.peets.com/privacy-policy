<script type="text/javascript">
    (function(w) {
        function showNearbyStoreInfo(position) {
            if (!w.canShowNearByHints) {
                return;
            }

            var windowWidth = document.viewport.getDimensions().width;
            if (windowWidth <= 480 ) {
                $('header-store-locator').show();
                return;
            }

            if (position.latitude && position.longitude) {
                var queryParams = {
                    'lat': position.latitude,
                    'lng': position.longitude,
                    'radius': "10",
                    'filter': [1]
                };

                var url = 'https://www.peets.com/store-locator/ajax/nearestStore/';

                new Ajax.Request(url, {
                    method: 'get',
                    parameters: queryParams,
                    onSuccess: function (transport) {
                        var response = transport.responseText.evalJSON();
                        if (response.html) {
                            $('header-store-locator').update(response.html).show();
                        }
                    }
                });
            } else {
                $('header-store-locator').show();
            }
        };

        document.observe('sl:position_detected', function (e) {
            showNearbyStoreInfo(e.memo.position);
        });
    })(window);
</script>
