    (function (w) {
        function slAutoDetectPosition() {
            var position = Mage.Cookies.get('_sl_position');

            if (!position) {
                var location = navigator.geolocation;
                if (location) {
                    location.getCurrentPosition(
                        function(_position) {
                            var location = _position.coords;
                            var position = location.latitude && location.longitude ?
                                {latitude: location.latitude, longitude: location.longitude} : {};
                            Mage.Cookies.set('_sl_position', JSON.stringify(position));
                            document.fire('sl:position_detected', {position: position});
                        },
                        function() {
                            Mage.Cookies.set('_sl_position', JSON.stringify({}));
                            document.fire('sl:position_detected', {position: {}});
                        }
                    );
                } else {
                    Mage.Cookies.set('_sl_position', JSON.stringify({}));
                    document.fire('sl:position_detected', {position: {}});
                }
            } else {
                try {
                    position = JSON.parse(position);
                } catch(e) {}

                position = position || {};
                document.fire('sl:position_detected', {position: position});
            }
        }

        document.observe('dom:loaded', function (e) {
            slAutoDetectPosition();
        });
    })(window);
</script>
