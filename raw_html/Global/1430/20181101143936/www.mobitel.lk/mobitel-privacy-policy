            (function($){
                $(document).ready(function(){
                    // first text field value change
                    $("#textfield").click(function(){
                        $("ul.first-text").slideToggle();    
                    });
                    $("ul.first-text li").click(function(){
                        var t = $(this).html();
                        $("#textfield").val(t);
                        $("ul.first-text").slideToggle();
                    });
                })    
