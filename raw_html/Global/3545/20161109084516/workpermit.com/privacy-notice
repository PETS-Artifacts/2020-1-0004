<script>
var submitIcon = jQuery('#block-wp-blocks-login-user-menu .icon-search');
var inputBox = jQuery('#block-wp-blocks-login-user-menu  .form-text');
var searchBox = jQuery('#block-wp-blocks-login-user-menu .searchbox');
var isOpen = false;
function clickSearchIcon() {
if (isOpen == false) {
searchBox.addClass('searchbox-open');
inputBox.focus();
isOpen = true;
} else {
searchBox.removeClass('searchbox-open');
inputBox.focusout();
isOpen = false;
}
}
submitIcon.mouseup(function () {
return false;
});
searchBox.mouseup(function () {
return false;
});
jQuery(document).mouseup(function () {
if (isOpen == true) {
jQuery('.searchbox-icon').css('display', 'block');
submitIcon.click();
}
});
function buttonUp() {
var inputVal = inputBox.val();
inputVal = jQuery.trim(inputVal).length;
if (inputVal !== 0) {
submitIcon.css('display', 'none');
} else {
submitIcon.val('');
submitIcon.css('display', 'block');
}
}
inputBox.keyup(buttonUp);
inputBox.change(buttonUp);
</script>
