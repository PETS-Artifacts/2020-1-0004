<script src="//ap.lijit.com/www/delivery/fpi.js?z=597912&width=970&height=90"></script>
</div></div></div></div></div> <header class="l-header" role="banner"><div class="l-branding"></div><div class="region-wrapper region-navigation-wrapper"><div class="region-content region-navigation-content"><div class="l-region l-region--navigation"><div id="block-wp-blocks-login-user-menu" class="block block--wp-blocks block--wp-blocks-login-user-menu"><div class="block__content"> <a href="/user/login" class="user_login">Log in</a><form action="/search" method="get" accept-charset="UTF-8"><div class="container"><div class="searchbox"> <input class="form-text" name='s'></input> <button type="submit" class="submit-button"><span class="icon-search awesome-icon"></span> <span class="text">Search</span></button> <a class="mobile-search" href='/search'><span class="icon-search awesome-icon"></span> <span class="text">Search</span></a> <a class="desktop-search" onclick="clickSearchIcon()"><span class="icon-search awesome-icon"></span> <span class="text">Search</span></a></div></div></form>
<script>
var submitIcon = jQuery('#block-wp-blocks-login-user-menu .desktop-search');
var inputBox = jQuery('#block-wp-blocks-login-user-menu  .form-text');
var searchBox = jQuery('#block-wp-blocks-login-user-menu .searchbox');
var isOpen = false;
function clickSearchIcon() {
if (isOpen == false) {
searchBox.addClass('searchbox-open');
inputBox.focus();
isOpen = true;
} else {
searchBox.removeClass('searchbox-open');
inputBox.focusout();
isOpen = false;
}
}
submitIcon.mouseup(function () {
return false;
});
searchBox.mouseup(function () {
return false;
});
jQuery(document).mouseup(function () {
if (isOpen == true) {
jQuery('.desktop-search').css('display', 'block');
submitIcon.click();
}
});
function buttonUp() {
var inputVal = inputBox.val();
inputVal = jQuery.trim(inputVal).length;
if (inputVal !== 0) {
submitIcon.css('display', 'none');
} else {
submitIcon.val('');
submitIcon.css('display', 'block');
}
}
inputBox.keyup(buttonUp);
inputBox.change(buttonUp);
</script>
