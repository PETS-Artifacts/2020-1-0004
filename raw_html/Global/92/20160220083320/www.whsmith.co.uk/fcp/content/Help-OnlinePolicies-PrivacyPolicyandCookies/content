		<!-- CMS PLACEHOLDER Page:TopNav Field:HeadJSEnd END --><!-- CMS Page:TopNav Field:HeadEnd Author:Kyle --><script type="text/javascript"> 
	function ajaxsearchsubmit(form){
		var input = $('#search').find('#keywords');
		if (input.val() === input.data('initial-value') || (input.val().length === 0)) {
			input.focus();
			event.preventDefault();
		} else {
			var search = encodeURIComponent(form.w.value); 
			var cat = encodeURIComponent(form.af.value); 
			document.activeElement.blur(); 
			window.location="http://www.whsmith.co.uk/search/go"+search+"&af="+cat; 
			return false; 
		}
	} 
</script>

