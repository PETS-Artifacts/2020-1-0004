    <div class="article-header   content-gutter animated-hero--animation-image js-module js-fadein-image-selector " data-module="BackgroundComponent">
        <div class=" ">
            <div class="article-header__picture js-module" data-module="BackgroundComponent" data-only-mobile="true">
