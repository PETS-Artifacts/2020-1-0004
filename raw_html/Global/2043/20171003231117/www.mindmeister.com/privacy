    (function(window, document) {
        var languageSelect = document.getElementById('locale');
        languageSelect.onchange = function() {
            var languageCode = languageSelect.options[languageSelect.selectedIndex].value;

            var currentDomain = 'https://www.mindmeister.com';
            currentDomain += '/ko';

            var newDomain = 'https://www.mindmeister.com/' + languageCode.toLowerCase();

