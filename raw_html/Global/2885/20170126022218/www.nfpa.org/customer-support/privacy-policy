    var rt = document.getElementById("rightColumn");
    var ct = document.getElementById("centerColumn");
    var lt = document.getElementById("leftColumn");
    if (rt != null) {
        var rtHTML = rt.innerHTML;
        rtHTML = (rtHTML.trim) ? rtHTML.trim() : rtHTML.replace(/^\s+/, '');
        if (rtHTML.length == 0 || rtHTML == "") {
            rt.style.display = "none";
        }
        else {
            ct.style.width = "600px";
            ct.className += " withRightColumn";
        }
    }
</script>

