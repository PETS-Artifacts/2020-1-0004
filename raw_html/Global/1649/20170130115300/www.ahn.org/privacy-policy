<script>
    var node_type = 'general_interior_page';
    var path_items = document.location.pathname.split('/');
    var editing_news = (node_type == 'news' && path_items[path_items.length - 1] == 'edit');	// boolean for if we're editing a news item
    var adding_news = (node_type == '' && path_items[path_items.length - 1] == 'news' && path_items[path_items.length - 2] == 'add');	// boolean for if we're adding a news item
    if (editing_news || adding_news) {
        jQuery('label[for=edit-date]').html('Publish on:');
        if (jQuery('#edit-date').val() != '') {
            var date_vals = $('#edit-date').val().split(' ');
            jQuery('#edit-date').val(date_vals[0] + ' ' + date_vals[1]);
        }
        jQuery('#edit-date-wrapper .description').html('Format: <em>2011-04-13 12:46:47</em>. Leave blank to publish immediately.');
    }

    var head_subhead = jQuery('#head_subhead > *');
    if (head_subhead.length == 1) {
        head_subhead.addClass('single');
    }
</script>

