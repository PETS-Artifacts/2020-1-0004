     },400);
       
});


         function forceresize() {
            setTimeout(function(){
                forceresize();
                $('.bsp-carousel-stage').slick('setPosition');
            },200);
        }
if($('[data-bsp-carousel-gallery] .bsp-carousel-stage').length){
    
            setTimeout(function(){
                forceresize();
            },400);
}
</script>


