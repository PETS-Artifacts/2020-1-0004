        <h2 class="block__title block-title">Support Our Work</h2>
    
  <form>
    <fieldset class="form-radios">
    <input type="radio" id="id_amount_35" name="amount" value="35" />
    <label for="id_amount_35">$35</label>

    <input type="radio" id="id_amount_50" name="amount" value="50" />
    <label for="id_amount_50">$50</label>

    <input type="radio" id="id_amount_75" name="amount" value="75" />
    <label for="id_amount_75">$75</label>

    <input type="radio" id="id_amount_100" name="amount" value="100" />
    <label for="id_amount_100">$100</label>

    <input type="radio" id="id_amount_200" name="amount" value="200" />
    <label for="id_amount_200">$200</label>

    <input type="radio" id="id_amount_other" name="amount_other" value="select" />
    <label for="id_amount_other">Other</label>

    <input type="hidden" name="page" value="c3-join-us-global" />
    </fieldset>

    <div class="form-submit">
        <a href="javascript:void(0);" id="donate" target="_parent">Donate</a>
    </div>
</form>

<script>
(function($, Drupal) {

var attaches = 0;

function attach(context, settings) {
    if (attaches > 0) {
        return;
    }
    attaches++;

    var $donate = $('#donate');
    var $amounts = $('input:radio[name=amount]');
    var $other = $('input:radio[name=amount_other]');

    $amounts.click(function() {
        $other.prop('checked', false);
    });

    $other.focus(function() {
        $other.prop('checked', true);
        $amounts.prop('checked', false);
    }).click(function() {
        $amounts.prop('checked', false);
    });

    $donate.click(function() {
        var qs = '?locsrc=nr-glb-ftr-wgt';
        if ($other.is(':checked')) {
            qs += '&amount_other=select';
        } else {
            var val = $('input[name=amount]:checked').val();
            if (!!val) {
                qs += '&amount=' + val;
            }
        }

        var url = 'https://act.nrdc.org/donate/one-time-gift/' + qs;
        window.parent.location = url;
    });
}

Drupal.behaviors.nrdcBlockDonate = {
    attach: attach
};

})(jQuery, Drupal);
</script>

</div>
