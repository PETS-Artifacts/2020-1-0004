<script type="text/javascript">
    $('#searchbutton').click(function () {
        event.preventDefault();
        $.ajax({
            url: '/search/classifying',
            'data': {
                'refinementsPath': '', 'inputpartNumber': $('#searchinput').val()
            },
            dataType: "json",
            type: "POST",
            error: function () {
                location.href = "/search";

            },
            success: function (retdata) {
                if (retdata.partsearch) {
                    location.href = retdata.parturl;
                } else {
                    $('#search-container').submit();
                }

            }
        });
        
    });


    $("#search-container").submit(function (event) {
        event.preventDefault();
        var ispartsearch = false;
        var parturl = "";
        $.ajax({
            url: '/search/classifying',
            'data': {
                'refinementsPath': '', 'inputpartNumber': $('#searchinput').val()
            },
            dataType: "json",
            type: "POST",
            error: function () {
                location.href = "/search";

            },
            success: function (retdata) {
                if (retdata.partsearch) {
                    ispartsearch = true;
                    parturl = retdata.parturl;
                    location.href = parturl;
                    return false;
                } else {
                    location.href = "/search?q=" + $('#searchinput').val();
                    return true;
                } 

            }
        });

    });
    
    
    
</script>
