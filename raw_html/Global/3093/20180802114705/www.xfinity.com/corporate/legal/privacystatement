<script>
 (function () {
     if (!window.gnvIncludes) {
         window.gnvIncludes = true;
         var head = document.getElementsByTagName("head")[0];

         var timer = 0,
            delay = 100; // delay of 100 to prevent consuming all browser resources.

         var loadScript = function () {
             if (!window.jQuery) {
                 // Wait for CUI to be loaded, due to race condition when using defer
                 if (timer > 15000) {
                     throw new Error("Global Nav requires jQuery!");
                 }
                 setTimeout(loadScript, delay);
                 timer += delay;
                 return;
             }
             var script = document.createElement("script");
             script.src = "//cdn.comcast.com/~/Media/Common/GlobalNavigation/scripts/v6/gnavscriptmin.js";
             head.appendChild(script);
         };
         setTimeout(loadScript, 0); // First delay of 0 to try to get this executing after other scripts have been loaded
     }
 })();
</script>

