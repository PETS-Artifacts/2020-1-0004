    <script>
    
    document.dispatchEvent(new CustomEvent("c-tracking-init-end"));
    
         window.addEventListener("load", function () {
            document.dispatchEvent(new CustomEvent("c-tracking-log-page", {
                bubbles: true
            }));
        });
        
    $(document).on('keydown.polaris-nav', 'input[data-link-info="Search"]', function (ev) {
        if (ev.keyCode == 13 || ev.key == "Enter") // Enter
        {
            var event = new CustomEvent('c-tracking-log-dom', {
                detail: {
                    "eventAction": "Submit search form"
                },
                bubbles: true
            });
            ev.target.dispatchEvent(event);
        }
    });    
</script>  
