      //wait for the search object, totalsData to exist.
      if(window['totalsData'] && totalsData.hasOwnProperty("searchTerm")){
      //create local vaiables from the search object and push them onto the dataLayer
      var _term = totalsData.searchTerm;
      var _count = totalsData.searchTotal;
      var hasFilter = _term.indexOf('more:');
      
      //Remove filter params from search term sent to GTM
      _term = _term.substr(0, hasFilter != -1 ? hasFilter - 1 : _term.length);
        
