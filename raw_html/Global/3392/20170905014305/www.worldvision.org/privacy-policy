var get_envr_domain = function(d){ d = d || location.host; re_wv_host = /(.*\.)?worldvision.org/; return re_wv_host.test(d) ? d : 'www.worldvision.org'; };

// Helper Function for re-writing the URL protocol
var protocolurl = function(u){return (location.protocol == "https:") ? u.replace(/^https?:/,"https:") + "ishttps=1" : u;}




var nocacheurl = function(url){
    return url + (url.indexOf("?") < 0 ? "?" : /\?$/.test(url) ? "" : "&") + "uqs=" + (new Date().getTime());
}

// This Function Accurately Extracts The QueryString Parameter Value Based On Name of Parameter, After ran once the parseQS.hasQS can confirm if any QueryString Exist.
var parseQS = function(n){
    if(typeof parseQS.hasQS=="undefined"){
        parseQS.QS = location.search;
        if(parseQS.QS == ""){parseQS.hasQS = false}else{parseQS.hasQS = true}
    }
    //Fail Check
    if(parseQS.QS===false || typeof n=="undefined"){return null}
    // Define QueryString Value
    var qsv = new RegExp("[?&]" + n + "=([^&#$]*)","i").exec(parseQS.QS);
    // Return Value of QS
    return qsv!=null ? qsv[1] : null;
}

// Pass In Parameter To Add To URL String
var addParamToURL = function(u,n,v){
    if(typeof u == 'undefined'){return;}
    return u + (u.indexOf("?") < 0 ? "?" : /\?$/.test(u) ? "" : "&") + n + "=" + v;
}
// Create Unique Session Id Based On Original Cross Domain Cookie Code
var createCookieSessionId = function(){
    var d=new Date();
    var day=d.getDate();
    day=(day < 10) ? '0' + day : day;
    var m=d.getMonth() + 1;
    var month=(m < 10) ? '0' + m : m;
    var yyyy=d.getFullYear();
    var hours=d.getHours();
    hours=(hours<10) ? '0' + hours: hours;
    var minutes=d.getMinutes();
    minutes=(minutes<10) ? '0' + minutes: minutes;
    var ms=d.getMilliseconds()+ 1000;
    var ran_unrounded=Math.random()*100000;
    var ran_number=Math.round(ran_unrounded) + 100000;
    return yyyy + '' + month + '' + day + '' + hours + '' + minutes + '' + ms + '' + ran_number;
}
//Main Wirte Cookie
var _wvusWriteCookie = function(campaign) {
    var date      = new Date();
    var time      = date.getTime();
    expireCampaign    = time + 3600*1000*24*180;
    expireSid       = time + 3600*1000*24*3;
    expirePpi       = time + 3600*1000*24*180;
    date.setTime(expireCampaign);
    document.cookie="gtm_campaign=" + campaign + "; expires=" + date.toUTCString() + " UTC; path=/; domain=worldvision.org";
    document.cookie="campaign=" + campaign + "; expires=" + date.toUTCString() + " UTC; path=/; domain=worldvision.org";
}
// Starting point
var mainInit = function(defaultCampaignId){
    var params = {}
    var defaultCampaignId = (typeof defaultCampaignId != "undefined") ? defaultCampaignId : campaignID /* Check For Gloabl Variable */ ;
    var validCSSCVal = function(cssc){return (/^\d{7,10}$/.test(cssc)) ? cssc : null;}
    // Extract The Parameter Values
    var getParamVal = function(key,cb,fv){
        var tempVal = "";
        if(parseQS.hasQS===true && cb != "function" && !fv){
            //alert(parseQS.hasQS + ' ' + key + ' cond 1')
            tempVal = parseQS(key);
        }else if(typeof cb == "function"){
            //alert('cond 2')
            tempVal = cb();
        }else if(typeof cb == "string"){
            tempVal = cb;
        }
        return tempVal;
    }
    //Get Campaign Parameter or Value From Existing Cookie or From Referrer Site
    params['campaign'] = getParamVal('campaign',function(){
        var cqsv = null;

        // Use or Overwrite the campaign parameter if QueryString "campaign" exist
        if(parseQS.hasQS===true || typeof parseQS.hasQS == "undefined"){
            cqsv = validCSSCVal(parseQS('campaign'));
            // if(cqsv==null) {cqsv = validCSSCVal(parseQS('utm_campaign'));} removed per business unit
            if(cqsv!=null){continueexistingcampaign = false};
        }

        // Determine if QueryString Should Be Used Or If campaign cookie exist
        var cv = (cqsv!=null) ? cqsv : (continueexistingcampaign ? wvusFindCookies('gtm_campaign').get() : null);
        var isSearchFound = false;

        // If No Campaign Cookie Exist and Not an existing campaign, Then Search For Known Referrer Site See searchSourceCodeArray for Site Domains with Campaign Schedule Source Code
        if(cv==null && !continueexistingcampaign){
            for(var i=0;i<searchSourceCodeArray.length;i++){
                isSearchFound = (searchSourceCodeArray[i][0].length == 1) ? (_dr.indexOf(searchSourceCodeArray[i][0][0]) > -1) : (function(){
                    var sitesArry = searchSourceCodeArray[i][0];
                    var rtnvl = false;
                    if(sitesArry.length > 1){
                        for(var j=0;j<sitesArry;j++){
                            if(_dr.indexOf(sitesArry[j]) > -1){
                                rtnvl = true;
                                break;
                            }
                        }
                    }
                    return rtnvl;
                })();
                if(isSearchFound===true){
                    // Set The Campaign Value If Found
                    cv = searchSourceCodeArray[i][1];
                    break;
                }
            }
        }else{isSearchFound = true}

        return (cv!=null) ? cv : defaultCampaignId;
    });
    // Write the cookie
    try{
        _wvusWriteCookie(params['campaign']);
        //add campaing attr to Data layer
        gtm_campaign = params['campaign'];
        //dataLayer.push({"cd10_campaignID" : params['campaign']});
        return 1;
    }catch(e){
        wvusCookieIsWritten = false;
        return -1;
    }
}
// script starts here
var gtm_default_campaign;
//check if it is a Sponsorship page URL
if(_dlp == "/sponsor-a-child" ){
    //Organic
    gtm_default_campaign = 105418329;
}
//check if it is a My page
else if(_dlp == "/my" ){
    //MyWV
    gtm_default_campaign = 2011031;
} else {
    //Base
    gtm_default_campaign = 11840913
}

//Check if CORE3(data_obj exist) and gtm_default_campaign = 11840913 is set
if(typeof data_obj != "undefined" && gtm_default_campaign === 11840913) {
    //Set the campaign to the value coming from the page custom field.
    gtm_default_campaign = data_obj.campaign_code;
}
mainInit(gtm_default_campaign);

</script>

