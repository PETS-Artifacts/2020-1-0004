          <div class="modal-footer clearfix">
            <span id="acceptbtn" class="w3-button " style="text-align: right; padding:5px; float:right; cursor:pointer; background-color: #000; width: 80px; border:1px solid #FFF;">I Accept</span>
          </div>
        </div>
      </div>
    <script>
	var modal = document.getElementById('myModal');
	var ccontainer = document.getElementById('co-container');
	var asbtn = document.getElementById('acceptbtn');
	// Get the button that opens the modal
	var btn = document.getElementById("myBtn");
	var myClsBtn = document.getElementById("myCloseBtn");
	// Get the <span> element that closes the modal
	var span = document.getElementsByClassName("close")[0];
      // Get the modal
		function checkCookieValues(){			
			if (localStorage.getItem('gdprFlag') == '1') {
				ccontainer.style.display = "none";
				modal.style.display = "none";				
			}						
		}
		function setCookieValues(){	
			localStorage.setItem('gdprFlag', '1');
			checkCookieValues();						
		}
		
            
      // When the user clicks the button, open the modal 
      btn.onclick = function() {
		  setCookieValues();
          modal.style.display = "block";
      }
	  asbtn.onclick = function(){
		  setCookieValues();
		  modal.style.display = "none";
	  }
      myClsBtn.onclick = function(){
		  setCookieValues();
		  ccontainer.style.display = "none";
	  }
      // When the user clicks on <span> (x), close the modal
      span.onclick = function() {
		  setCookieValues();
          modal.style.display = "none";
      }
      // When the user clicks anywhere outside of the modal, close it
      window.onclick = function(event) {
          if (event.target == modal) {
			  setCookieValues();
              modal.style.display = "none";
          }
      }
	$(function() {
		$(document).ready(function(){	
			checkCookieValues();
		});
	})
    </script>
	</body>
</html>
