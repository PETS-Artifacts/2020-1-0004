			<script>
				var offerTestLastSearchRegion;
				try {
					offerTestLastSearchRegion = JSON.parse(unescape(document.cookie.split("saved-searches=")[1].split(";")[0]))[JSON.parse(unescape(document.cookie.split("saved-searches=")[1].split(";")[0])).length-1].region
				} catch (ignore) {}
				
				if (!localStorage.getItem("dealsTopNavTest")) {
					var dealsRandom = Math.floor(Math.random()*3);
					if (dealsRandom === 0) {
						localStorage.setItem("dealsTopNavTest","LateDeals");
					} else if (dealsRandom === 1) {
						localStorage.setItem("dealsTopNavTest","OffersSimple");
					} else if (dealsRandom === 2) {
						localStorage.setItem("dealsTopNavTest","OffersTargeted");
					}
				}
				if (localStorage.getItem("dealsTopNavTest") === "OffersSimple") {
					document.getElementById("offers").getElementsByTagName("a")[0].href = "/special-offers";
				} else if (localStorage.getItem("dealsTopNavTest") === "OffersTargeted" && offerTestLastSearchRegion === "Florida" ) {
					document.getElementById("offers").getElementsByTagName("a")[0].href = "/special-offers?destinations=florida";
				} else if (localStorage.getItem("dealsTopNavTest") === "OffersTargeted" && offerTestLastSearchRegion === "Caribbean" ) {
					document.getElementById("offers").getElementsByTagName("a")[0].href = "/special-offers?destinations=caribbean";
				} else if (localStorage.getItem("dealsTopNavTest") === "OffersTargeted" && offerTestLastSearchRegion === "USA" ) {
					document.getElementById("offers").getElementsByTagName("a")[0].href = "/special-offers?destinations=usa";
				} else if (localStorage.getItem("dealsTopNavTest") === "OffersTargeted" && offerTestLastSearchRegion === "Canada" ) {
					document.getElementById("offers").getElementsByTagName("a")[0].href = "/special-offers?destinations=canada";
				} else if (localStorage.getItem("dealsTopNavTest") === "OffersTargeted" && offerTestLastSearchRegion === "hawaii" ) {
					document.getElementById("offers").getElementsByTagName("a")[0].href = "/special-offers?destinations=usa";
				} else if (localStorage.getItem("dealsTopNavTest") === "OffersTargeted" && offerTestLastSearchRegion === "Africa" ) {
					document.getElementById("offers").getElementsByTagName("a")[0].href = "/special-offers?destinations=africa";
				} else if (localStorage.getItem("dealsTopNavTest") === "OffersTargeted" && offerTestLastSearchRegion === "Middle East" ) {
					document.getElementById("offers").getElementsByTagName("a")[0].href = "/special-offers?destinations=middle%20east";
				} else if (localStorage.getItem("dealsTopNavTest") === "OffersTargeted" && offerTestLastSearchRegion === "Asia & Far East" ) {
					document.getElementById("offers").getElementsByTagName("a")[0].href = "/special-offers?destinations=far%20east";
