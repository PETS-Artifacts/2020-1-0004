                                             background: rgba(0, 0, 0, 0) none repeat scroll 0 0 !important;
                                             display: inline-block;
                                             overflow: hidden;
                                             position: relative;
                                             vertical-align: top;
                                             width: 10px;                       
                              }
                              /*
                              * Fancy Countdown - Responsive Layout
                              *
                              */


                              /* Smartphones (portrait and landscape) ----------- */
                              @media only screen
                              and (min-device-width : 320px)
                              and (max-device-width : 480px) {

                                             .fc-panel .fc-width {
                                                            width: 18px; /* The width for the digits */
                                             }
                                             
                                             .fc-panel .fc-height {
                                                            height: 35px; /* The height for the digits and colon */
                                                            line-height: 35px; /* When change height, change also line-height to the same value */
                                             }
                                             
                                             .fc-panel .fc-colon-width {
                                                            width: 14px; /* The width for the colon */
                                             }
                                             
                                             .fc-panel .fc-font {
                                                            font-size: 20px; /* The size for the font */
                                             }
                                             
                                             .fc-panel .fc-digit-offset {
                                                            top: 5px; /* The top offset between the digits, in previous versions it was the topDigitOffset option */
                                                            bottom: 5px; /* The bottom offset between the digits, in previous versions it was the bottomDigitOffset option */
                                             }

                                             .fc-panel .fc-digitUnit, .fc-panel .fc-colon {
                                                            border-width: 2px;
                                                            margin-right: 2px;
                                             }
                                             
                                             .fc-panel .fc-captions {
