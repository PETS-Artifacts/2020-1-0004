<script type="text/javascript">

    $(document).ready(function () {

        $('#divglobloc').click(function () {
            var chkvisibleHide = $("#divGlobalLinkDetails").css('overflow');
            if (chkvisibleHide == "hidden") {
                $("#divGlobalLinkDetails").removeClass("visuallyhidden");
            }
            else {
                $("#divGlobalLinkDetails").addClass("visuallyhidden");
            }
        });

        $('#divgloblocMob').click(function () {
            var chkvisibleHide = $("#divGlobalLinkDetails").css('overflow');
            if (chkvisibleHide == "hidden") {
                $("#divGlobalLinkDetails").removeClass("visuallyhidden");
            }
            else {
                $("#divGlobalLinkDetails").addClass("visuallyhidden");
            }
        });
    });
   

</script>
