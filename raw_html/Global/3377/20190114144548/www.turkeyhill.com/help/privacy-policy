    <script type="text/javascript">
        $(document).on('click', '#submitBut', function () {
            var email = $("#footer-email").val();

            if (email) {
                var data = {
                    emailAddress: email,
                    confirmEmailAddress: email,
                    isFooter: true
                };

                $.post($("#footer-form").attr('href'), data, function (result) {
                    $("#footer-form").replaceWith('<h3 style="margin-bottom: 100px;">Thanks for signing up!</h3>');
                });
            }

            return false;
        });
    </script>
    <!-- /end Page-specific scripts   =======================  -->
            <script src="/assets/scripts/jquery.popupoverlay.js" type="text/javascript"></script>
        <script type="text/javascript">
            var oncloseurl = '/widgets/popoverwidget/close?code=_DECADENT_TRIO_';

            $(document).ready(function () {
                $('#my_popup').popup({
                    autoopen: true,
                    onclose: function () {
                        $.get(oncloseurl);
                    }
                });

                $("#my_popup a").click(function () {
                    var url = $(this).attr('href');
                    var newWindow = ($(this).attr('target') || '').toLowerCase() === '_blank';

                    $.get(oncloseurl, function () {
                        if (!newWindow) {
                            window.location = url;
                        }
                    });

                    if (!newWindow) {
                        return false;
                    }
                });
            });
        </script>
        
            


        
            <script type="text/javascript">
                $(document).on('submit', '#form-location-form', function () {
                    window.location = '/store-location-results?zip=' + $('#change-location').val();

                    return false;
                });
            </script>
        <script type="text/javascript">
            $(document).ready(function () {
                function loadLocationResults(lat, lng) {
                    jQuery.ajax({
                        url: '/api/home/setlocation',
                        type: "POST",
                        contentType: 'application/json; charset=utf-8',
                        dataType: 'json',
                        data: JSON.stringify({ Lat: lat, Lng: lng }),
                        timeout: 100000,
                        success: function (returnVal) {
                            $(".location-area").replaceWith(returnVal.city);
                            $(".list-locations").empty().append(returnVal.results);
                        }
                    });
                }

                try {
                    navigator.geolocation.getCurrentPosition(function (location) {
                        loadLocationResults(location.coords.latitude, location.coords.longitude);
                    }, function () {
                        loadLocationResults(0.0, 0.0);
                    });
                } catch (e) {
                    loadLocationResults(0.0, 0.0);
                }
            });
        </script>


    <script type="text/javascript">
        $(document).ready(function () {
            var pathname = window.location.pathname;

            if (pathname.substr(-1) === '/') {
                pathname = pathname.substr(0, pathname.length - 1);
            }

            pathname = pathname.toLowerCase();

            $('#top-nav a[href]').each(function () {
                var href = $(this).attr('href').toLowerCase();

                if (href.substr(-1) === '/') {
                    href = href.substr(0, href.length - 1);
                }

                if (pathname == href) {
                    $(this).parent().addClass('top-nav-selected');
                }
            });

            //var $anchor = $('#top-nav a[href]').filter(function () {
            //    return $(this).attr('href').toLowerCase() == pathname.toLowerCase();
            //});

            //if ($anchor.size() > 0) {
            //    $anchor.first().parent().addClass('top-nav-selected');
            //}
        });
    </script>
