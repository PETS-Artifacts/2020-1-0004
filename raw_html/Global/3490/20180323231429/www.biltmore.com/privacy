	<script>

//set variables
var r = 100;
var cookieValue = document.cookie.replace(/(?:(?:^|.*;\s*)tbcsg_022016\s*\=\s*([^;]*).*$)|^.*$/, "$1");
var rannum = Math.floor(Math.random() * 100);

$(document).ready(function(){
 
    // function to show our popups
    function showPopup(whichpopup){
        var docHeight = $(document).height(); //grab the height of the page
		var docWidth = $(document).width(); //grab the height of the page
        var scrollTop = $(window).scrollTop(); //grab the px value from the top of the page to where you're scrolling
        $('.sg-overlay-bg').show().css({'height' : docHeight}); //display your popup background and set height to the page height
        $('.popup'+whichpopup).fadeIn().css({'top': scrollTop+500+'px','left': '75%'}); //show the appropriate popup and set the content 20px from the window top
    }
 
    // function to close our popups
    function closePopup(){
        $('.sg-overlay-bg, .sg-overlay-content').hide(); //hide the sg-overlay
    }
 
    // check for a cookie and then eval other variables to display survey
	
	if (cookieValue != "survey") {
		if( rannum < 6 && $(window).height() > 600) {
		//comment out below to remove time contraint for testing
		//if(  $(window).height() > 600) {
			setTimeout(function() {
				// Show popup3 after 2 seconds
				showPopup(1);
			}, 1000);
			document.cookie="tbcsg_022016=survey;max-age=" + 60 * 60 * 24 * 90 +";path=/;";
		} 
	}
 
    // show popup when you click on the link
    $('.show-popup').click(function(event){
        event.preventDefault(); // disable normal link function so that it doesn't refresh the page
        var selectedPopup = $(this).data('showpopup'); //get the corresponding popup to show
         
        showPopup(selectedPopup); //we'll pass in the popup number to our showPopup() function to show which popup we want
    });
   
    // hide popup when user clicks on close button or if user clicks anywhere outside the container
    $('.sg-close-btn, .sg-overlay-bg').click(function(){closePopup();});
	
	// open survey gizmo survey
    $('.sg-yes-btn').click(function(){
        closePopup();
		window.open('http://www.surveygizmo.com/s3/2410133/biltmore-website', '_blank');
    });
	
     
    // hide the popup when user presses the esc key
    $(document).keyup(function(e) {
        if (e.keyCode == 27) { // if user presses esc key
            closePopup();
        }
    });
});
</script>


