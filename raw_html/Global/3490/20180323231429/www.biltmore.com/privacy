											if (baseString.length > 2) {
												window.location.href.split('/');
												$('#nav-secondary a').removeClass('active');
												$('#nav-secondary a[href="/'+baseString[1]+'/'+baseString[2]+'"]').parent().addClass('active');
											}
										});	 
