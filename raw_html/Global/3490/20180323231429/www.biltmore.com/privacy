	function pageName () {
			        var baseString = window.location.pathname.substring(1);
			        if(baseString.substr(-1) == '/') {
			        	baseString = baseString.substr(0, baseString.length - 1);
			        }
			        baseString = baseString.replace(/\//g, ":")
			
			        baseString = baseString.replace(" ", "_");
			        return baseString;
	}
	function pageHier () {
	        var baseString = window.location.pathname.substring(1);
	        if(baseString.substr(-1) == '/') {
	        	baseString = baseString.substr(0, baseString.length - 1);
	        }
	        baseString = baseString.replace(/\//g, "|")
	
	        baseString = baseString.replace(" ", "_");
	        return baseString;
	}
	if (!s.pageName) {
		var pagen = pageName();
		s.pageName = "b:"+pagen;
	}
	if (!s.hier1) {
		var pagen = pageHier();
		s.hier1 = "b:"+pagen;
	}
	s.channel = "privacy";
</script>
