<script type="text/javascript">
	bootstrap.js("jquery-ui-1.10.3.custom.min",function() {
	    /**
         * Adds support for the datepickers that are in the booking form.  When a date is selected in the arrivel picker, this automatically sets the departure date to one day later, and makes that the minimum date.
         */
		$(".booking-form__date-wrapper__input").datepicker({
			minDate: new Date(),
			dateFormat:'m/d/yy',
			onClose: function( selectedDate ) {
			    var $this = $(this);
			    var current_field = $this.attr("name");

			    if ( current_field == 'arrival' ) {
			        if (!selectedDate || selectedDate == '') {
						selectedDate = 	$.datepicker.formatDate('mm/dd/yy', new Date());
					}
					var depart = $.datepicker.parseDate('mm/dd/yy', selectedDate);
					depart.setDate(depart.getDate() + 1);
					$this.closest("form").find("[name=depart]").datepicker( "option", "minDate", depart );
				}

			}
		});

		/**
		 * Update select styling to differentiate between placeholder state and active state
         */
		$("body").on("change",".booking-form__select-wrapper__select",function(){
			var $this = $(this);
			if ( $this.val() == '' ) {$this.addClass("booking-form__select-wrapper__select__placeholder");} else {$this.removeClass("booking-form__select-wrapper__select__placeholder");}
		});

		/**
		 * When the booking-form__update-form-url select input is changed, it should update form's action
         */
		$("body").on("change",".booking-form__update-form-url",function(){
			var $this = $(this);
			var new_url = $this.val();

			$this.closest("form").attr("action",new_url);
		});

		/**
		 * Validate the booking form when the booking button is clicked to make sure the select hotel step is complete.
         */
		$("body").on("click",".booking-form__button",function(){
			var $this = $(this);
			var $wrapper = $this.closest("form");
			var $property_select = $wrapper.find(".booking-form__update-form-url");

			if ( $property_select.length > 0 ) {
			    if ( $property_select.val() == '' ) {
			        alert('Please select a hotel property to continue')
			        return false;
                }
            }

		});

        /**
         * Stop the datepicker from closing the Book Now cta when clicked.
         */
		$(document).on("click","#ui-datepicker-div",function(){
			return false;
		});
		$(document).on("touchend","#ui-datepicker-div",function(event){
			return true;
		});

		/**
         * Stop the datepicker from closing the Book Now cta the next month, or previous month buttons is clicked
         */
		$(document).on('click','.ui-datepicker-next, .ui-datepicker-prev',function(){
             return false;
        });
		$(document).on('touchend','.ui-datepicker-next, .ui-datepicker-prev, .ui-state-default',function(event){
             $(this).trigger("click");
             return false;
        });








	});
</script>
	         
		 <h1>Privacy Policy</h1>
         				<p>
	<span style="font-size: 14px; line-height: 1.2;">Biltmore knows that you care how information about you is used and shared, and we appreciate your trust that we will do so carefully and sensibly. This notice describes our privacy policy. <strong>By visiting Biltmore.com, you are accepting the practices described in this Privacy Notice.</strong></span></p>
<p>
	<a href="#anchor1">What information do we gather?</a><br />
	<a href="#anchor2">How do we use cookies?</a><br />
	<a href="#anchor3">Do we share the information we gather?</a><br />
	<a href="#anchor4">How secure is your information?</a><br />
	<a href="#anchor7">Unauthorized use of our wine website (use under 21 years of age)</a><br />
	<a href="#anchor8">Opting in and out</a><br />
	<a href="#anchor9">Mobile apps</a><br />
	<a href="#anchor10">Text messaging</a><br />
	<a href="#anchor11">Special note to international users</a><br />
