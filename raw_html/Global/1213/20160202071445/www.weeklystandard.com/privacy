queryly.jquery('body').css('overflow-x', 'hidden');
}
queryly.jquery('#queryly_mobile_container').scrollTop();
queryly.render.reposition();
}
var ProcessEnterKey = function (e) {
var keyCode = e.keyCode || e.which;
if (keyCode == 13) {
var searchterm = queryly.util.getFullSuggestion();
if (searchterm == '') { searchterm = queryly.jquery('.queryly').val(); }
window.location = "http://www.weeklystandard.com/qsearch?query=" + encodeURIComponent(searchterm);
}
}
