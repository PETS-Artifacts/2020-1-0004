  window.slnmServer = {}; window.slnmServer.class = "php";
window.slnmServer.mode = false;
window.slnmStart = Date.now();
window.slnmDebug = function (prefix, msg, rest) {
	if ('php' === window.slnmServer.class && !window.slnmServer.mode){
		return;
	}
  	var style = 'font-weight: bold; color: #1a1100; background-color: #ffe6e6; padding: 1px;';

  	console.log("%cslnmDebug :"+prefix+": "+msg+"%c ",
              style, '', rest, ( ( Date.now() ) - window.slnmStart ) );
};
</script>
<script type="text/javascript" data-source-be="Template_Tags">
  // Polyfill for the includes method on Array objects.
if (!Array.prototype.includes) {
  Array.prototype.includes = function(searchElement /*, fromIndex*/) {
    'use strict';
    if (this == null) {
      throw new TypeError('Array.prototype.includes called on null or undefined');
    }

    var O = Object(this);
    var len = parseInt(O.length, 10) || 0;
    if (len === 0) {
      return false;
    }
    var n = parseInt(arguments[1], 10) || 0;
    var k;
    if (n >= 0) {
      k = n;
    } else {
      k = len + n;
      if (k < 0) {k = 0;}
    }
    var currentElement;
    while (k < len) {
      currentElement = O[k];
      if (searchElement === currentElement ||
         (searchElement !== searchElement && currentElement !== currentElement)) { // NaN !== NaN
        return true;
      }
      k++;
    }
    return false;
  };
}
// Maintain singularity.
window.slnmLoadChecker = window.slnmLoadChecker || {};
// Controller for loading javascripts.
window.slnmLoadChecker.controller = {
	init: function(){
		window.slnmDebug('lc', 'slnmLoadChecker in init mode', this);
		window.slnmDebug('lc', 'hooking to ', document.getElementsByTagName("head")[0]);
		if (undefined !== window.slnmLoadChecker.eventListnerObj && false !== window.slnmLoadChecker.eventListnerObj ){
			window.slnmDebug('lc', 'slnmLoadChecker doubled-inited. Protecting singularity.', window.slnmLoadChecker.eventListnerObj);
			return;
		} else {
            // Hook our listener to the HEAD.
			window.slnmLoadChecker.eventListnerObj = document.getElementsByTagName("head")[0];
			window.slnmDebug('lc', 'slnmLoadChecker init is a go', window.slnmLoadChecker.eventListnerObj);
            // Init the registery of loaded scripts by noting that this script is loaded.
			window.slnmLoadChecker.registery = ['slnmLoadChecker'];
            window.slnmLoadChecker.waitingToLoad = [];
            window.slnmLoadChecker.loadedSet = [];
		}
	},
    // Get the registery of scripts.
    getRegistery: function(){
        return window.slnmLoadChecker.registery;
    },
    // Get the registery of listeners.
    getListeners: function(){
        return window.slnmLoadChecker.waitingToLoad;
    },
    // Get the registery of listeners.
    getLoadeds: function(){
        return window.slnmLoadChecker.loadedSet;
    },
    // Check if a script is registered.
    getRegistered: function(slug){
        if ( undefined === window.slnmLoadChecker.registery ){
            window.slnmDebug('lcr','getRegistered: ', slug);
            return false;
        } else {
            window.slnmDebug('lcr','getRegistered: ', slug);
            return window.slnmLoadChecker.registery.includes(slug);
        }
    },
    // Check if a script is listening.
    getListener: function(slug){
        if ( undefined === window.slnmLoadChecker.waitingToLoad ){
            return false;
        } else {
            return window.slnmLoadChecker.waitingToLoad.includes(slug);
        }
    },
    // Check if a script if a listener completed.
    getLoaded: function(slug){
        if ( undefined === window.slnmLoadChecker.loadedSet ){
            return false;
        } else {
            return window.slnmLoadChecker.loadedSet.includes(slug);
        }
    },
    // Register a script
	register: function(scriptSlug){
        if (window.slnmLoadChecker.controller.getRegistered(scriptSlug)){
            if ('php' === window.slnmServer.class && !window.slnmServer.mode){
                console.error('slnmDebug :lc: :lcr: Namespace collision ', scriptSlug);
            } else {
                alert('Load check namespace collision on '+scriptSlug);
            }
        }
		window.slnmLoadChecker.registery.push(scriptSlug);
        window.slnmDebug('lcr','Registering load: ', scriptSlug);
	},
    registerListener: function(scriptSlug){
        window.slnmLoadChecker.waitingToLoad.push(scriptSlug);
        window.slnmDebug('lcr','Registering listen: ', scriptSlug);
    },
    registerLoaded: function(scriptSlug){
        window.slnmLoadChecker.loadedSet.push(scriptSlug);
        window.slnmDebug('lcr','Registering listen complete: ', scriptSlug);
    },
    isListenerComplete: function(slug){
        if ( window.slnmLoadChecker.getListener(slug) && window.slnmLoadChecker.getLoaded(slug) ){
            window.slnmDebug('lcr','isListenerComplete: ', slug);
            return true;
        } else {
            window.slnmDebug('lcr','isListenerComplete: ', slug);
            return false;
        }
    },
    // Emit an event saying scriptSlug has been registered.
	emit: function(scriptSlug){
		var details = {
						detail: scriptSlug
					};
		var eventToSend = new CustomEvent(scriptSlug, details);
		window.slnmDebug('lc', 'sending', eventToSend);
		window.slnmLoadChecker.eventListnerObj.dispatchEvent(eventToSend);
		window.slnmLoadChecker.controller.register(scriptSlug);
	},
    // Wrapper for load management event emits for future mods if needed.
	slnmLoadManaged: function(scriptSlug){
		window.slnmLoadChecker.controller.emit(scriptSlug);
	},
    // Wrap me around functions that need to wait for a thing to be loaded.
	listen: function(scriptSlug, loadedCallbackName, loadedCallback){
		//slnmEventListener = Y.slnmEventsTracker.eventListnerObj; //document.getElementById("footer");
		window.slnmDebug('lc','Listening for: '+scriptSlug+' with ', [loadedCallbackName]);
        window.slnmLoadChecker.controller.registerListener(loadedCallbackName);
		//window.slnmLoadChecker.controller.register(scriptSlug, loadedCallbackName, loadedCallback);
        // Check to be sure the event hasn't already fired.
		if ( false !== window.slnmLoadChecker.controller.getRegistered(scriptSlug) ){
			window.slnmDebug('lc', 'event has fired '+scriptSlug+'. Firing', [loadedCallbackName, loadedCallback]);
			if (undefined !== loadedCallback){
                window.slnmDebug('lc', 'Firing loaded callback', loadedCallbackName);
				loadedCallback(scriptSlug);
                window.slnmLoadChecker.controller.getLoaded(loadedCallbackName);
			} else {
				window.slnmDebug('lc', scriptSlug+' loaded callback not valid', loadedCallback);
			}
		} else {
            window.slnmDebug('lc', scriptSlug+' not yet registered waiting to fire: ', loadedCallbackName);
        }
        // Activate the actual event listener.
		window.slnmLoadChecker.eventListnerObj.addEventListener(scriptSlug,
			function (e){
				window.slnmDebug('lc','Heard '+scriptSlug, [loadedCallbackName, loadedCallback, e]);
				//window.slnmLoadChecker.activeEvent(e.detail);
				if (undefined !== loadedCallback){
					loadedCallback(e.detail);
                    window.slnmLoadChecker.controller.getLoaded(loadedCallbackName);
					//window.slnmLoadChecker.registery[scriptSlug][loadedCallbackName](e.detail);
					//delete Y.slnmEventsTracker.adobeS[e.detail.varName];
				} else {
					window.slnmDebug('lc', scriptSlug+' listener has no callback', loadedCallback);
				}
			}
		);
	},
    // Wrap me around a function that needs to wait for more than one thing to be loaded.
    listenToCascade: function(scriptSlugs, loadedCallbackName, loadedCallback){
        //window.slnmLoadChecker.waitingToLoad[loadedCallbackName].callback = loadedCallback;
        //window.slnmLoadChecker.waitingToLoad[loadedCallbackName].called = false;
        //scriptSlugs.forEach(function(scriptSlug, index, array){
        //    window.slnmLoadChecker.waitingToLoad[loadedCallbackName][scriptSlug] = false;
        //});
        scriptSlugs.forEach(function(element, index, array){
            window.slnmLoadChecker.controller.listen(element, loadedCallbackName, function(e){
                //window.slnmLoadChecker.waitingToLoad[loadedCallbackName][element] = true;
                var areWeReady = true;
                scriptSlugs.forEach(function(scriptSlug, index, array){
                    if (!window.slnmLoadChecker.controller.getRegistered(scriptSlug)){
                        var areWeReady = false;
                        return false;
                    }
                });
                if (areWeReady){
                    loadedCallback(e);
                }
            });
        });
    }

};

window.slnmLoadChecker.controller.init();
</script>
