<script type="text/javascript">
    $(document).ready(function () {
        // begin keep navigation drop down open on click 
        $('#searchdropdown').click(function (e) {
            e.stopPropagation();
        });
        // end keep navigation drop down open on click 

        // begin search on "enter" key pressed
        $("#ctl00_ConcreteSearchBar_txtSearchText").keypress(function (event) {
            var key;
            if (window.event) {
                key = window.event.keyCode;
            } else {
                key = event.which;
            }
            if (key == 13) {
                $("#ctl00_ConcreteSearchBar_cmdSearch").click();
                return false;
            }
        });
        // end search on "enter" key pressed
    });
</script>

