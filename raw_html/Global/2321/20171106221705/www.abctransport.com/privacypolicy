<script>
$(document).ready (function(){
  $('.ir-arriba').click(function(){
    $('body, html').animate({
      scrollTop: '0px'
    }, 400);
  });
  $(window).scroll(function(){
    if ( $(this).scrollTop() > 0 ) {
      $('.header_div').addClass('fijo');
      $('.ir-arriba').slideDown(300);
      $('.ubercolortabs_menu').addClass('ubercolortabs_menu_full_length');
      $('.ts_pub_header').addClass('achicar');
    } else {
      $('.ir-arriba').slideUp(300);
      $('.ubercolortabs_menu').removeClass('ubercolortabs_menu_full_length');
      $('.ts_pub_header').removeClass('achicar');
    }
    })
    $(".ir-arriba").click(function(event){
      $('html,body').animate({scrollTop:0}, 600);
    });
    $(".scroll a").click(function(){
      $('html,body').animate({scrollTop:$(this.hash).offset().top}, 600,'swing');
      $(".scroll li").removeClass('active');
      $(this).parents('li').toggleClass('active');
    });
  });
</script>
