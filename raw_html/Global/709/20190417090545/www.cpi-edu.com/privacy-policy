var lastKnownScrollY = 0;
var currentScrollY = 0;
var ScrollMaxAlcanzado = false;
var ScrollBajaMax = 1000;
var ScrollSubeMax = 100;
var ScrollSube = 0;
var PopUpMostrado = false;

function DetectarMoviles() { 
 if( navigator.userAgent.match(/Android/i)
 || navigator.userAgent.match(/webOS/i)
 || navigator.userAgent.match(/iPhone/i)
 || navigator.userAgent.match(/iPad/i)
 || navigator.userAgent.match(/iPod/i)
 || navigator.userAgent.match(/BlackBerry/i)
 || navigator.userAgent.match(/Windows Phone/i)
 ){
    return true;
  }
 else {
    return false;
  }
}

function onScroll() {
  if (PopUpMostrado == false){
  currentScrollY = window.pageYOffset;

  if (currentScrollY < lastKnownScrollY && ScrollMaxAlcanzado == true) {
    ScrollSube= ScrollSube +(lastKnownScrollY-currentScrollY);
    if (ScrollSube >= 100) {    
       bioEp.showPopup();
       PopUpMostrado = true;
    }
  } else if (currentScrollY > lastKnownScrollY && ScrollMaxAlcanzado == false) {
    if (currentScrollY > ScrollBajaMax) {
       ScrollMaxAlcanzado = true;
    }
  }
  lastKnownScrollY = currentScrollY;
  }
}

window.onload = function() {
  if (DetectarMoviles()==true){
     document.addEventListener('scroll', onScroll, false);
  }
}
</script>
