            "@font-face{font-family:'vag-rounded';src:url('/content/fonts/vag-rounded/bold/vagroundedstd-bold-webfont.eot?#iefix') format('embedded-opentype'), url('/content/fonts/vag-rounded/bold/vagroundedstd-bold-webfont.woff') format('woff'), url('/content/fonts/vag-rounded/bold/vagroundedstd-bold-webfont.ttf') format('truetype'), url('/content/fonts/vag-rounded/bold/vagroundedstd-bold-webfont.svg#vag-rounded') format('svg');font-weight:700;font-style:normal;}"+
            "@font-face{font-family:'Open Sans';src:url('/content/fonts/open-sans-v13/open-sans-v13-latin-regular.eot?#iefix') format('embedded-opentype'), url('/content/fonts/open-sans-v13/open-sans-v13-latin-regular.woff') format('woff'), url('/content/fonts/open-sans-v13/open-sans-v13-latin-regular.ttf') format('truetype'), url('/content/fonts/open-sans-v13/open-sans-v13-latin-regular.svg#Open Sans') format('svg');font-weight:400;font-style:normal;}" +
            "@font-face{font-family:'Open Sans';src:url('/content/fonts/open-sans-v13/open-sans-v13-latin-700.eot?#iefix') format('embedded-opentype'), url('/content/fonts/open-sans-v13/open-sans-v13-latin-700.woff') format('woff'), url('/content/fonts/open-sans-v13/open-sans-v13-latin-700.ttf') format('truetype'), url('/content/fonts/open-sans-v13/open-sans-v13-latin-700.svg#Open Sans') format('svg');font-weight:700;font-style:normal;}" ;
        var ss1 = document.createElement('style');
        ss1.setAttribute("type", "text/css");
        var hh1 = document.getElementsByTagName('head')[0];
        hh1.appendChild(ss1);
        if (ss1.styleSheet) { //IE
            ss1.styleSheet.cssText = fontblock;
        } else {
            var tt1 = document.createTextNode(fontblock);
            ss1.appendChild(tt1);
        }

        WebFont.load({
            custom: {
                families: ['vag-rounded:n4,n7', 'Open Sans:n4,n7']
            },
            timeout: 5000
        });
    })();
</script>


    
    

    

        
        
