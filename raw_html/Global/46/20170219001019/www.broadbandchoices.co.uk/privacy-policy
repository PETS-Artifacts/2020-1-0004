    (function() {
        var storageKey = 'recently_viewed_deals',
            resources = namespace('DTL').RecentlyViewedResources;

        namespace('DTL').RecentlyViewed = function() {
            var textFormatter = namespace('DTL').TextFormatter();
            textFormatter.setResource(resources);
            var $targetElement, $recentlyViewedHeader, $recentlyViewed;

            function buildListItem(deal, position) {
                deal.formattedContractLength = textFormatter.formatFromResource("MonthsFormat", deal.contractLength);
                deal.formattedContractLength = deal.formattedContractLength.replace(/(\d+)/g, '<span class="number">$1</span>');

                deal.formattedSpeed = '';
                deal.formattedSpeedClass = ' hidden';
                if(deal.speed){
                    deal.formattedSpeed = speedFormatter(deal.speed.label);
                    deal.formattedSpeedClass = '';
                }

                var initialMonthlyPrice = deal.prices[0].periods[0].amount;
                deal.formattedMonthlyCost = monthlyPriceFormatter(initialMonthlyPrice);
                
                var dealDataAttributesElement = namespace('DTL').DealDataAttributeHelper.createHomeCommsElement(deal, position, "Nav_recently-viewed");

                var template =
                    '<li class="viewed-item" data-deal-id="{{id}}">' +
                        '<button class="link-button close">X</button>' +
                        '<a class="viewed-item-link track-as-productpage-link-click" href="/product/{{id}}">' +
                        '<img class="provider-logo" alt="{{provider.name}}" src="{{provider.logo}}" />' +
                        '<span class="deal-title">{{title}}</span>' +
                        '<span class="deal-contract">' +
                        '<span class="centered">{{formattedContractLength}}</span>' +
                        '</span>' +
                        '<span class="deal-speed{{formattedSpeedClass}}">' +
                        '<span class="centered">' +
                        '{{formattedSpeed}}</span>' +
                        '</span>' +
                        '<div class="cost-details">' +
                        '<span class="deal-cost">{{formattedMonthlyCost}}</span>' +
                        '</div>' +
                        '</a>' +
                        dealDataAttributesElement +
                    '</li>';

                var itemTemplate = _.template(template);

                return itemTemplate(deal);
            }

            function speedFormatter(input) {

                var isGigabits = false;

                if (input >= 1024) {
                    isGigabits = true;
                    input = input / 1024;
                }

                var speedColumnFormatPattern = textFormatter.formatFromResource('SpeedColumnFormatPattern');
                var roundedSpeed = numeral(input).format(speedColumnFormatPattern);

                input = isGigabits ?
                    textFormatter.formatFromResource('SpeedColumnFormatIfInGigabits', roundedSpeed) :
                    textFormatter.formatFromResource('SpeedColumnFormat', roundedSpeed);

                return input.replace(/(\d+\s*Mbit[/]s)|(\d+\s*Mb)|(\d+\s*Gb)/i, '<span>$1$2$3</span>');
            };

            function getPrice(input) {
                return textFormatter.getPrice(input);
            }

            function monthlyPriceFormatter(input, isShorthand) {
                var priceFormatResource = !isShorthand ? 'PricePerMonthFormat' : 'PricePerMonthShorthandFormat';
                return textFormatter.formatFromResource(priceFormatResource, getPrice(input));
            }

            function getDeals() {
                return store.get(storageKey);
            }

            function removeDeal(id) {
                var deals = store.get(storageKey);
                store.set(storageKey, _.without(deals, id));
            }

            function clearDeals() {
                store.remove(storageKey);
            }

            function addDeal(id) {
                var dealIds = store.get(storageKey) || [];
                dealIds.unshift(id);
                return store.set(storageKey, _.uniq(dealIds));
            }

            function buildWidget() {
                var dealIds = getDeals();
                if (!dealIds || !dealIds.length) {
                    return;
                }

                $targetElement.removeClass('disabled');

                $.getJSON("/deals?ids=" + dealIds.join(','), function(data) {
                    if (data.deals) {
                        renderDeals(data);
                    }
                });

                $recentlyViewedHeader.children('.clear-views').click(function() {
                    clearDeals();
                    $recentlyViewed.empty();
                    _dtlq.push(['_trackEvent', 'Recently Viewed - Deleted Deal', 'All Deals']);
                });

                $recentlyViewedHeader.children('.close-views').click(function() {
                    $('#nav_recently_viewed').removeClass('viewing');
                });

                $recentlyViewed.on('click','.close', function() {
                    var $deal = $(this).closest('.viewed-item');
                    var dealId = $deal.data('deal-id');                   
                    removeDeal(parseInt(dealId));
                    $deal.remove();
                    _dtlq.push(['_trackEvent', 'Recently Viewed - Deleted Deal', dealId]);
                });

                $recentlyViewed.on('click','.viewed-item', function() {
                    _dtlq.push(['_trackEvent', 'Recently Viewed - Opened Deal', $(this).data('deal-id')]);
                });

                $targetElement.one('mouseover', function(event) {
                    _dtlq.push(['_trackEvent', 'Recently Viewed', 'Opened']);
                });
            }

            function renderDeals(data) {
                var $ul = $('<ul id="recently_viewed_items">');
                var deals = data.deals;
                for (var i = 0; i < deals.length; i++) {
                    var deal = deals[i];
                    $ul.append(buildListItem(deal, i+1));
                }

                $recentlyViewed.append($ul);
            }
            
            function initializeBasketContents() {
                var dealIds = namespace('DTL').QueryStringHelper.getParameterByName("basketContents");
                if (dealIds !== undefined)
                {
                    clearDeals();
                    var deals = dealIds.split(",");
                    for (i = 0; i < deals.length; i++) {
                        addDeal(deals[i]);
                    }
                }
            }

            return {
                init: function(targetElem) {
                    $targetElement = $(targetElem);
                    $recentlyViewed = $targetElement.find('#recently_viewed');
                    $recentlyViewedHeader = $targetElement.find('#recently_viewed_header');

                    buildWidget();

                    initializeBasketContents();
                },

                addDeal: addDeal
            };
        }();

        $(function() {
            namespace('DTL').RecentlyViewed.init('#nav_recently_viewed');
        });
    }());
</script>



    
</body>
</html>