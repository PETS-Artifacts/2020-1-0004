<script>
    namespace('DTL').RecentlyViewedResources = {"BroadbandAndPhone":"Broadband & Phone","EnterYourPostcode":"enter your postcode","MonthlyCost":"Monthly cost","ResultsLoadingMessage":"Finding the best packages for you...","RefineYourResultsCaption":"Refine your {0} results to ensure you're getting the right package for you","PriceFirstMonthsFormat":"First {0} months","EndsToday":"Ends today","LessFilterOptions":"Less filter options","PriceFormat":"£{0}","Superfast":"Superfast (Fibre)","RemoveAllFilters":"Click to clear all filters","MonthsAfterFormat":"after {0} months","Filter":"Filter","WhyChooseProviderFormat":"Why {0}?","FeaturedDeal":"Featured deal","WhenDoYouUseYourLandline":"When do you use your landline?","Mobile":"Mobile","WhichProvidersInterestYou":"Which providers interest you?","LineRentalIncludedExplanation":"Line rental is now included in pricing, you can find out more <a target=\"_blank\"  href=\"https://www.broadbandchoices.co.uk/guides/broadband/asa-broadband-pricing-interview\">here</a>.","OfMobileData":"of {0} data","Cancel":"Cancel","FirstYearCost":"First year cost","Change":"change","UsageAverage":"Average","MonthlyHardwareCost":" Hardware","SeeMore":"See more","FilterUsageLabel":"Do you only want to see deals with unlimited usage?","BroadbandPhoneAndTv":"Broadband & Phone & TV","RemoveFilter":"Click to remove filter","SpeedColumnFormatPattern":"0","PricePerMonthFormat":"£{0} p/m","Offers":"Offers","UnlimitedUsage":"Unlimited usage","ForFirstMonthsFormat":"for {0} months","UsageUnlimitedOption":"Yes please","Provider":"Provider","WhatKindOfSpeedDoYouNeed":"What kind of speed do you need?","SelectedCount":"{0} selected","Thereafter":"Thereafter","HideDetails":"Hide details","RecentlyViewedDeals":"Recently viewed deals","SmartphoneDealTitleFormat":"Showing {0} for your postcode: {1}","ShowAll":"Show all","MonthContract":"month contract","InstallationCost":"Installation cost","Refine":"Refine","ChannelFormat":"{0} channels","Hardware":"Hardware","S