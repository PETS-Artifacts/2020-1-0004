<script>
    namespace('DTL').RecentlyViewedResources = {"BroadbandAndPhone":"Broadband & Phone","EnterYourPostcode":"enter your postcode","MonthlyCost":"Monthly cost","ResultsLoadingMessage":"Finding the best packages for you...","RefineYourResultsCaption":"Refine your {0} results to ensure you're getting the right package for you","PriceFirstMonthsFormat":"First {0} months","EndsToday":"Ends today","LessFilterOptions":"Less filter options","PriceFormat":"£{0}","Superfast":"Superfast (Fibre)","RemoveAllFilters":"Click to clear all filters","MonthsAfterFormat":"after {0} months","Filter":"Filter","WhyChooseProviderFormat":"Why {0}?","FeaturedDeal":"Featured deal","WhenDoYouUseYourLandline":"When do you use your landline?","Mobile":"Mobile","WhichProvidersInterestYou":"Which providers interest you?","Cancel":"Cancel","FirstYearCost":"1st year cost","Change":"change","UsageAverage":"Average","MonthlyHardwareCost":" Hardware","SeeMore":"See more","FilterUsageLabel":"Do you only want to see deals with unlimited usage?","BroadbandPhoneAndTv":"Broadband & Phone & TV","RemoveFilter":"Click to remove filter","SpeedColumnFormatPattern":"0","PricePerMonthFormat":"£{0} p/m","Offers":"Offers","UnlimitedUsage":"Unlimited usage","ForFirstMonthsFormat":"for {0} months","UsageUnlimitedOption":"Yes please","Provider":"Provider","WhatKindOfSpeedDoYouNeed":"What kind of speed do you need?","SelectedCount":"{0} selected","Thereafter":"Thereafter","HideDetails":"Hide details","RecentlyViewedDeals":"Recently viewed deals","SmartphoneDealTitleFormat":"Showing {0} for your postcode: {1}","ShowAll":"Show all","InstallationCost":"Installation cost","Refine":"Refine","ChannelFormat":"{0} channels","Hardware":"Hardware","DaysLeft":"{0} days left","NoResultsCaption":"It looks like we can’t find any packages for your postcode","MobileTexts":"Texts","RefreshPostcodeButtonText":"Go","AnyContract":"Any","Contact":"Find out more","WhyCantISeeOrSelectAProvider":"","HelpWithYourResults":"Help with your results","FreeForOneMonth":"free for 1 month","SearchAgain":"Search again","UsageFormat":"{0}GB","TwelveMonths":"12 Months","TrulyUnlimited":"Truly Unlimited","Language":"English","DayLeft":"{0} day left","FibreBroadband":"Fibre Broadband","ContactProviderFormat":"Call {0} on","EndsSoon":"Ends soon","CostContractDisclaimer":"(if taken over 12 months)","QuadBundle":"Broadband, Phone, TV & Mobile","MobileBroadbandTitle":"Compare mobile broadband deals for your iPad/tablet or laptop","GenericBrandedDealTitleFormat":"Compare the latest broadband deals from {2}","FreeForMonths":"free for {0} months","ForFirstMonthFormat":"for 1 month","MoreFilterOptions":"More filter options","EffectivePricePerMonth":"Effective price per month","PriceFirstMonthFormat":"First month","Disclaimer":"Fibre/cable services at your postcode are subject to availability. You can confirm availability on the provider's website","MobileData":"Data","ThenYperMonthThereafter":"then {0} thereafter","ShowLess":"Show less","Any":"Any","For":"For","Apply":"Apply filters","Fibre":"","Deals":"deals","Month":"month","Calls":"Calls","Close":"Close","Clear":"Clear","Usage":"Usage","OneWeekLeft":"One week left","Speed":"Speed","ShowAllProviders":"Show all","UsageLimitedOption":"No thanks","SelectAll":"Select all","FirstYearCostWithLineRental":"NEEDS TRANSLATION","MuchMore":"Much more","NoContractFilter":"No contract","BroadbandAndTv":"Broadband & TV","NextNMonths":"Next {0} months","FilterYourResults":"More Filters","BroadbandAndMobile":"Broadband & Mobile","ThenYforZmonths":"then {0} for {1} months","WhatContractLengthDoYouNeed":"What contract length do you need?","TotalFirstYearCost":"Total 1st year cost","ErrorMessage":"Sorry, we are unable to show you any deals at present due to a technical issue.  Please try and <a href='/'>search again</a>.","MobileMinutes":"Minutes","ClearAll":"Clear all","DeliveryCost":"Delivery cost","Providers":"Providers","Options":"Options","BrandedDealTitleFormat":"{0} available in: {1}","