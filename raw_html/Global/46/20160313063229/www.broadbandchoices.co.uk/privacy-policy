            ss1.styleSheet.cssText = fontblock;
        } else {
            var tt1 = document.createTextNode(fontblock);
            ss1.appendChild(tt1);
        }

        WebFont.load({
            custom: {
                families: ['vag-rounded:n4,n7']
            },
            timeout: 5000
        });
    })();
</script>   


    
    

    

        
        
