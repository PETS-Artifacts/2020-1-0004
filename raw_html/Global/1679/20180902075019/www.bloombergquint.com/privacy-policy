<script>
  var sectionId = window.currentPage.section_id;
  var sections = window.app.apiconfig;
  var currentSection = sections.find(function(item) {
    return item.id === sectionId;
  });

  var parentId =currentSection ? currentSection.parent_id : null;
  if (parentId !== null) {
    window.currentPage.section_id = parentId;
    window.currentPage.subsection_id = sectionId;
  }

  var type = window.currentPage.type;
  var sectionName = window.currentPage.section_name;
  if (type === "futures") {
    window.currentPage.subsection = "futures-contract";
    window.currentPage.pagename = "stockpage";
  } else if (type === "options") {
    window.currentPage.subsection = "option-chain";
    window.currentPage.pagename = "stockpage";
  } else if (type === "stock") {
    window.currentPage.subsection = "stock-internal-pages";
    window.currentPage.pagename = "stockpage";
  } else if (type === "home") {
    window.currentPage.pagename = "homepage";
  } else if (type === "story") {
    window.currentPage.pagename = "storypage"
  }
  if(sectionName === "Markets") {
    window.currentPage.pagename = "stockpage";
  }
  </script>

<script type="text/javascript">
//<![CDATA[
  BloombergQuint.onLoad(function() {
    // Hide Header on on scroll down
    var didScroll;
    var lastScrollTop = 0;
    var delta = 1;
    var navbarHeight = $('[role=banner]').outerHeight();
    // if (window.sketches.previewMode) {
    //   navbarHeight = $('iframe').outerHeight(true);
    // }

    $(window).scroll(function(event){
      didScroll = true;
    });

    setInterval(function() {
      if (didScroll) {
        hasScrolled();
        didScroll = false;
      }
    }, 250);

    function hasScrolled() {
      var st = $(this).scrollTop();

      // Make sure they scroll more than delta
      if(Math.abs(lastScrollTop - st) <= delta)
        return;

      // If they scrolled down and are past the navbar, add class .nav-up.
      // This is necessary so you never see what is "behind" the navbar.
      if (st > navbarHeight){
        // Scroll Down
        $('[role=banner]').removeClass('nav-down').addClass('nav-up');
      } else {
        // Scroll Up
        if(st < navbarHeight) {
          $('[role=banner]').removeClass('nav-up').addClass('nav-down');
        }
      }
      lastScrollTop = st;
    }
  });
//]]>
</script>



