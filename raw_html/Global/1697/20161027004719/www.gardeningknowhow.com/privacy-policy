<script>
var tmoot, adtextwidg, resizeId;
jQuery(document).ready(function(){
	tmoot = setTimeout(changeSource, 2000);	
	document.oncopy = addLink;
	adtextwidg = jQuery("#sibedarjq").parents(".widget_text");	
	respondSidebarAd();	
	jQuery(window).resize(function(){
		clearTimeout(resizeId);
		resizeId = setTimeout(respondSidebarAd, 500);
	});
		
});
function respondSidebarAd(){
	if(!jQuery("#sibedarjq").is(":visible")){
		adtextwidg.appendTo("#widgets");
	}else{adtextwidg.prependTo("#widgets");}
}
function changeSource(){
	clearTimeout(tmoot);
	jQuery("input.gsc-search-button").attr("src", "http://maxpull.gdvuch3veo.netdna-cdn.com/wp-content/themes/yourgarden/imgs/blankicon.png");
}
function addLink() {
    if(window.getSelection().containsNode(document.getElementsByClassName('entry-content')[0], true)){
		var body_element = document.getElementsByTagName('body')[0];
		var selection;
		selection = window.getSelection();
		var oldselection = selection
		
		var pagelink = "<br /><br /> Read more at Gardening Know How: Privacy Policy <a href='http://www.gardeningknowhow.com/privacy-policy/'>http://www.gardeningknowhow.com/privacy-policy/</a>"; 
		
		var copy_text = selection + pagelink;
		var new_div = document.createElement('div');
		new_div.style.left='-99999px';
		new_div.style.position='absolute';
		 body_element.appendChild(new_div );
		new_div.innerHTML = copy_text ;
		selection.selectAllChildren(new_div );
		window.setTimeout(function() {
			body_element.removeChild(new_div );
		},0);
	}
}
</script>
</body>
