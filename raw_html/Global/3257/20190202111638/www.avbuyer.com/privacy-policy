<script language="javascript" type="text/javascript">
//<![CDATA[

  domReadyQueue.push(function($){
   var allFields = $([]);

    $("#divLoginForm").dialog(
    {
      bgiframe: false,
      autoOpen: false,
      width: 480,
      height: 600,
      modal: true,
      buttons: {
      },
      close: function() {
        allFields.val('').removeClass('ui-state-error');
      }
    });
    hideLoginForm();

      $('#frmLoginForm').submit(function()
      {
          doLogin('https://www.avbuyer.com/mlogin');
          return false;
      });

  });

  function hideLoginForm()
  {
    $("#bid_with_login").val('')
    $('#divLoginForm').dialog('close');
    return false;
  }

  function showLoginForm(login)
  {
    $('#divLoginForm').dialog('open');
    //$('#divLoginRequestError').html('');
    if(login == true)
      $('#login_intr').hide();
    else
      $('#login_intr').show();

    $('#id_msg').hide();
  }





  function doLogin(url)
  {
    $('#divLoginRequestError').html('');
    $('#indicator').show();

    var formData = $('#frmLoginForm').serialize();
    $.post(url, formData, function(data) {
      $('#indicator').hide();
      if(data.error)
        $('#divLoginRequestError').html('<div id="notice" class="message"><span>'+data.error+'</span></div>');
      else
      {
        $('#divLoginRequestError').hide();
        $('#divLoginForm').dialog('close');
        if ($("#post_form").length > 0) //ad posting
          $("#post_form").submit();
        else if ($("#frmBidForm").length > 0 && $("#bid_with_login").val() == 1) //auction bid submission
        {
          var action = $("#frmBidForm").attr('action')+'?bid_with_login='+$("#bid_with_login").val();
          $("#frmBidForm").attr('action', action);
          $("#frmBidForm").submit();
        }
        else
          self.location.reload();
      }
    }, 'json');
  }
//]]>
</script>

