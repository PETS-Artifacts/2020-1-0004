        <script type="text/javascript">
            var tealium_extra_utag = {};
            
            if (tealium_extra_utag && Object.keys(tealium_extra_utag).length > 0) {
                if (Array.isArray(tealium_extra_utag.event)) {
                    tealium_extra_utag.event = tealium_extra_utag.event.concat(utag_data.event);
                }
                
                utag_data = jQuery.extend(true, {}, utag_data, tealium_extra_utag);
                if (typeof utag_data.event === 'string') {
                    utag_data.event = utag_data.event.split(',').map(function (val) { return val.trim(); });
                }

            }
        </script>
        

        <script src='//tags.tiqcdn.com/utag/lulu/main/prod/utag.js' type='text/javascript'></script>

        <script type="text/javascript">
        (function ($) {

            var utag_base_data = {
                store_language: utag_data.store_language,
                account_id: utag_data.account_id,
                login_status: utag_data.login_status,
                page_name: utag_data.page_name,
                site_currency: utag_data.site_currency
            };

            $(document).ready(function () {
                

                if ($('#luluWizardTabNavigation .LTabActive .middle')[0]) {
                    utag_base_data.publish_step = $('#author_wizard_index_php .wizard #progress .LTabActive a .middle').text();
                }

                if ($('#author_wizard_index_php #pageBody #messages .error').length > 0) {
                    utag_base_data.print_wizard_error = $('#author_wizard_index_php #pageBody #messages .error').map(function (i, el) {
                        return $(el).text().trim();
                    });
                }

                if (typeof utag === 'object' && typeof utag.link === 'function') {

                    /* ------ Cart and Checkout Events ------- */

                    $('body').on('submit', '.add-to-cart', function () {
                        var data = $.extend({}, utag_base_data, { 
                            event: 'Cart Item Additions',
                            product_id: [$(this).children('input[name$="skuCode"]').val()]
                        });
            
                        utag.link(data);

                    });

                    $('body').on('click', 'ul#accountNavigation > li > a.cart', function () {
                        var data = $.extend({}, utag_base_data, { event: 'Cart Views' });

                        utag.link(data);
                    });

                    $('body').on('click', 'div.remove-cart-item-link > a', function() {
                        var data = $.extend({}, utag_base_data, { event: 'Cart Item Removals' });

                        utag.link(data);
                    });

                    $('body').on('click', 'button[name$="cartCheckout"]', function () {
                        var data = $.extend({}, utag_base_data, { event: 'Cart Checkout' });

                        utag.link(data);
                    });

                    $('body').on('click', 'div#shippingOptions > div.save-button > button', function () {
                        var data = $.extend({}, utag_base_data, { event: 'Cart Ship Method' });
                        utag.link(data);
                    });

                    $('body').on('click', 'form#shippingForm > div#addressDetails > div.save-button > button', function () {
                        var data = $.extend({}, utag_base_data, { event: 'Cart Shipping Address' });

                        utag.link(data);
                    });

                    $('body').on('click', 'form#billingForm > div#billingDetails > div.save-button > button', function () {
                        var data = $.extend({}, utag_base_data, { event: 'Cart Billing Info' });

                        utag.link(data);
                    });

                    /* ------ Publication Events ------- */

                    // start a book project with the 'Make this book' button on /create/books
                    $('#configuratorContainer #startbutton').on('click', function () {
                        var nonPrintBookPackageIDs = ['1010', '1038', '1079', '1080', '1130', '1112', '1113', '1129', '1133', '1134'];
                        var packageID = $('#packageId').val();
                        if ( nonPrintBookPackageIDs.indexOf(packageID) === -1 ) {
                            var data = $.extend({}, utag_base_data, {
                                event: 'Wizard Start - Print Book',
                                page_type: 'Wizard'
                            });

                            utag.link(data);
                        }
                    });

                    // start a casewrap photobook non-studio project (from the 'Continue' button on the popup)
                    $('#configuratorSelectionPopup #popupstart').on('click', function () {
                        if ($('#configuratorSelectionPopup #wizard').is(':checked')) {
                            var data = $.extend({}, utag_base_data, {
                                event: 'Wizard Start - Print Book',
                                page_type: 'Wizard'
                            });

                            utag.link(data);
                        }
                    });

                    if ($('.completeMessage')[0] && tealium_extra_utag.product_type === 'Print Book') {
                        var data = $.extend({}, utag_base_data, {
                            event: 'Wizard Published Complete - Print Book',
                            page_type: 'Wizard'
                        });

                        utag.link(data);
                    }

                    /* ------ Publication Wizard Events ------- */

                    $('body').on('click', '#fMegaUpload', function() {
                        if ($('#uploadField')[0].value && tealium_extra_utag.product_type === 'Print Book') {
                            var data = $.extend({}, utag_base_data, {
                                event: 'Wizard File Upload - Print Book',
                                page_type: 'Wizard'
                            });

                            utag.link(data);
                        }
                    });

                    $('body').on('click', '#fNext', function() {
                        if (tealium_extra_utag.product_type === 'Print Book') {
                            var data = $.extend({}, utag_base_data, {page_type: 'Wizard'});
                            if ( $( "input[class*='next-action-']" ).length ) {
                                var actionClassNameRegex = /next-action-(\w+)/g;
                                var navigationAction = actionClassNameRegex.exec($("input[class*='next-action-']").attr('class'))[1];

                                switch (navigationAction.toLowerCase()) {
                                    case 'processbasicmetadata':
                                        $.extend(data, utag_base_data, {event: 'Wizard Title Step - Print Book'});
                                        break;
                                    case 'senddocumentspage':
                                        $.extend(data, utag_base_data, {event: 'Wizard ISBN Barcode - Print Book'});
                                        break;
                                    case 'entercoverwizard':
                                        $.extend(data, utag_base_data, {event: 'Wizard Cover Start - Print Book'});
                                        break;
                                    case 'senddetailedmetadatapage':
                                        $.extend(data, utag_base_data, {event: 'Wizard Cover Completed - Print Book'});
                                        break;
                                    case 'processdetailedmetadata':
                                        $.extend(data, utag_base_data, {event: 'Wizard Book Description Complete - Print Book'});
                                        break;
                                    case 'processpricingpage':
                                        $.extend(data, utag_base_data, {event: 'Wizard Book Price Complete - Print Book'});
                                        break;
                                    case 'publishproject':
                                        $.extend(data, utag_base_data, {event: 'Wizard Review Complete - Print Book'});
                                        break;
                                    default:
                                        return;
                                }

                            } else if (data.publish_step === 'Cover') {
                                $.extend(data, utag_base_data, {event: 'Wizard Cover Completed - Print Book'});
                            } else {
                                return;
                            }

                            utag.link(data);
                        }
                    });

                    $('body').on('click', '#feedback0 div a, #SCbtn, #DCbtn, #OPCbtn', function() {
                        if (tealium_extra_utag.product_type === 'Print Book') {
                            var data = $.extend({}, utag_base_data, { page_type: 'Wizard' });
                            var coverCreationTool = document.fCoverOptionsForm.fAction.value;

                            switch (coverCreationTool) {
                                case 'switchToStudioCover':
                                    $.extend(data, utag_base_data, {event: 'Print Cover Wizard Start'});
                                    break;
                                case 'switchToCoverDesigner':
                                    $.extend(data, utag_base_data, {event: 'Print Cover Designer Start'});
                                    break;
                                case 'switchToOnePieceCover':
                                    $.extend(data, utag_base_data, {event: 'Print Cover One-piece Start'});
                                    break;
                                default:
                                    return;
                            }

                            utag.link(data);
                        }
                    });


                    /* ------ Product Review Events ------- */

                    window.sendProductReviewEventToTealium = function () {
                        var data = $.extend({}, utag_base_data, { event: 'Product Review' });

                        if (utag_data.product_id) data.product_id = utag_data.product_id;
                        else data.product_id = 'Could not retrieve product id. Was not set by EP';

                        utag.link(data);
                    };

                    /* ------ Registration Events ------- */

                    window.sendRegistrationEventToTealium = function (action) {

                        utag.link({ Category: 'Registration', Action: action });
                    };
                } else {
                    
                    
                    window.sendProductReviewEventToTealium = function () {
                        console.error('Tealium not set and event data was attempted to be sent. Event: Product Review');
                    };

                    window.sendRegistrationEventToTealium = function () {
                        console.error('Tealium not set and event data was attempted to be sent. Event: Registration');
                    };
                }
            });

        }(jQuery));
        </script>

