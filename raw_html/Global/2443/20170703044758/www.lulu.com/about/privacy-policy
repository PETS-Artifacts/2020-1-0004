            var pathRegExp = new RegExp('^(/.{2}(?=/|$))?(/.{2}(?=/|$))?(.*)');
            var pathNameMatch = pathRegExp.exec(document.location.pathname);
            var utag_data = {
	                flash_player_version: flashPlayerVersion,
	                store_language: '/us/es',
	                account_id: 'null',
	                login_status: 'Not Logged in',
	                email: '',
