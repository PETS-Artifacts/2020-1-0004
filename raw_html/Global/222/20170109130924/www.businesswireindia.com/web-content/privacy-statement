    function fn_validQuickSearch() {
        var txt_keywords = document.getElementById("txt_keywords");
        var hid_quickSearchSubmit = document.getElementById("hid_quickSearchSubmit");

        hid_quickSearchSubmit.value = "1";

        if (checkBlankField(txt_keywords.value) == false) {
            return displayError(txt_keywords, "Please enter keywords.", "T", "F");
        }

        if (txt_keywords.value.length < 3) {
            return displayError(txt_keywords, "Please enter at least 3 characters.", "T", "T");
        }

        if (validString(txt_keywords.value) == false) {
            return displayError(txt_keywords, "Please enter valid keywords.", "T", "T");
        }
        hid_quickSearchSubmit.value = "0";
    }
</script>


   
