<script type="text/javascript">
    var url = 'https://www.businesswireindia.com/';

    $('#btn_AddSearch').on('click', function (e) {
        return window.location.href = url + "newssearch/advancedsearch";
    });

    $('#btn_contactus').click(function () {
        var $target = $('html,body');
        $target.animate({ scrollTop: $target.height() - ($("#footerContact").outerHeight() + $(window).height() + 100) }, 1000);
    });

    function fn_searchSubmit() {
        var _txt_search = $('#txt_search');
        if (_txt_search.val() == "") {
            alert('Please enter keywords.');
            $("#sp_search").slideDown();
            _txt_search.focus();
            return false;
        }

        if (_txt_search.val().length < 3) {
            alert('Please enter at least 3 characters.');
            $("#sp_search").slideDown();
            _txt_search.focus();
            return false;
        }
        else {
            window.location.href = url + "newssearch/displaysearchresult?keyword=" + txt_search.value;
        }
    }

    $(document).ready(function () {

        $('#txt_search').on('keyup', function (e) {
            if (e.which == 13) {
                fn_searchSubmit();
            }
        });
        //--start autocomplete
        $("#txt_search").autocomplete({
            minLength: 3,
            source: function (request, response) {
                $.ajax({
                    url: url + "/api/NewsRelease/AutocomplateListOfNews?Prefix=" + request.term + "",
                    type: "GET",
                    dataType: "json",
                    success: function (data) {
                        response($.map(data, function (item) {
                            return { label: item.title, value: item.newsreleaseurl };

                        }))

                    }
                })
            },
            select: function (event, ui) {
                //alert(ui.item.value);
                window.location.href = ui.item.value;
                //Generate Details page URLs
            },

            messages: {
                noResults: "", results: ""
            }
        });
        //--end autocomplete


        $('.classynav a').each(function (i, o) {
            if (window.location.href.toLocaleLowerCase() == $(this).attr('href').toLocaleLowerCase()) {
                $(this).parents('li').addClass('active');
            }

        });
    })

    $('.classy-navbar-toggler').click(function () {
        $('.search_panel_box').hide();
    })
</script>


    




