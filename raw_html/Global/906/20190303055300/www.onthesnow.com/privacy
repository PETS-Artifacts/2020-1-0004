      };
      $('#favorites_head').show();
      var _resLAr = OTS.ResortFavorite.idsFromCookie();
      if (_resLAr.length > 0) {
        if (_resLAr.length >= 20) {
          alert(OTS.ResortFavorite.alertStr);
          return;
        }
        var _inar = $.inArray(resId, _resLAr);
        if (_inar < 0) {
          _resLAr.unshift(resId);
          OTS.ResortFavorite.save(_resLAr, 'add', _myCallback)
        }
      } else {
        OTS.ResortFavorite.save([resId], 'add', _myCallback);
      }
    },

    cacheKey: function(resortId) {
