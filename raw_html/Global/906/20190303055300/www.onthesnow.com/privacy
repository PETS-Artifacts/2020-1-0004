    }
  });

  var wrapper_pos = document.getElementById("wrapper_pos");
  var navbar = document.getElementById("head");
  var sticky = navbar.offsetTop;

  function stickyNav() {
    if (window.pageYOffset >= sticky) {
      wrapper_pos.classList.add("sticky_nav");
    } else {
      wrapper_pos.classList.remove("sticky_nav");
    }
  }

  function hoverLeave(){

  }

  function navClick(e) {
    myParent = $(e).parent();
    $(".nav_sub_item").removeClass("active").removeClass("inactive");

    if (myParent.hasClass("active")){
      $(".nav_item").removeClass("active"). removeClass("inactive");

    } else {
      $(".nav_item").removeClass("active").addClass("inactive");
      myParent.removeClass("inactive").addClass("active");
      
      if(!mobileView) {
        $(".nav_item  > ul" ).on("mouseleave", function(){
          $("#head" ).off( "mouseleave" );
          $(".nav_item > ul" ).off( "mouseleave" );
          $(".nav_item").removeClass("active").addClass("inactive");
        });
        $("#head" ).on("mouseleave", function(){
          $("#head" ).off( "mouseleave" );
          $(".nav_item > ul" ).off( "mouseleave" );
          $(".nav_item").removeClass("active").addClass("inactive");
        });
      } 
    }
  }

  function navSubClick(e) {
    myParent = $(e).parent();
    if (myParent.hasClass("active")){
      $(".nav_sub_item").removeClass("active").removeClass("inactive");
      $(".responsive .nav_item > a").css("display","block");
    } else {
      $(".responsive .nav_item > a").css("display","none");
      $(".nav_sub_item").removeClass("active").addClass("inactive");
      myParent.removeClass("inactive").addClass("active");
    }
    //checkNavheight();
  }
  function checkNavheight() {
    $("#wrapper_pos #head_nav nav>ul").css("bottom","unset").css("overflow-x","unset").css("overflow-y","unset");
    let windowHeight = $(window).height();
    let ulHeight = $("#wrapper_pos #head_nav nav>ul").height();
    if (windowHeight < (ulHeight + 50) ) {
      $("#wrapper_pos #head_nav nav>ul").css("bottom","20px").css("overflow-x","hidden").css("overflow-y","scroll");
    }
  }

  function headBurger(e) {
      /* Close when someone clicks on the "x" symbol inside the overlay */
      var x = document.getElementById("head_nav_ul");
      var s1 = document.getElementById("nav_shadow");
      var s2 = document.getElementById("nav_shadow_inner");
      if (x.className === "topnav") {
          x.className += " responsive";
          e.className = "burger close";
          s1.className = "shadow_res";
          s2.className = "shadow_res";
          x.style.width="0%";
          mobileView = true;
          $(".responsive .nav_item > a").css("display","block");
          //x.style.overflow='scroll';
      } else {
          $(".nav_sub_item").removeClass("active").removeClass("inactive");
          $(".nav_item").removeClass("active").removeClass("inactive");
          $(".nav_item").removeClass("active").removeClass("inactive");
          x.className = "topnav";
          e.className = "burger";
          s1.className = "";
          s2.className = "";
          x.style.width="100%";
          //document.getElementsByName('body').style.overflow='visible';
      }
  }

  function toggleSearch() {
    var s2 = document.getElementById("nav_shadow_inner");
    var hs = document.getElementById("head_search");
    if ($("#nav_shadow_inner").hasClass("shadow_res")){
      s2.className = "";
      hs.className = "";
    } else {
      s2.className = "shadow_res search";
      hs.className = "active";
    }
    $( "#global_search" ).toggle( "slow", function() {
      $("#global_search").focus().val("");
    });
  }
