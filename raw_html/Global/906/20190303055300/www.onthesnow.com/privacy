  $( window ).resize(function() {
    openBurger = $("#head_nav_ul").hasClass('responsive');
    if ( $(window).width() > 1020 && openBurger ) {
      headBurger(document.getElementById("burgerbutton"));
     /* $('.nav_item > a').on('mouseover', function(){
