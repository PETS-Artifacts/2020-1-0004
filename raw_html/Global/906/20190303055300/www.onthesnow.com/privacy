    googletag.cmd.push(function() {
      var d = new Date();
      var dst = d.getMinutes() + ':' + d.getSeconds() + '.' + (d.getMilliseconds() < 100  ? '0'+ d.getMilliseconds() : d.getMilliseconds());
      googletag.pubads().setRequestNonPersonalizedAds(_gpt_personal);
      console.log('allowed gpt_personalized', _gpt_personal, dst);
    });
   
