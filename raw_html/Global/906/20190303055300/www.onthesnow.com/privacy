            var resort = data.data[0];
            OTS.ResortFavorite._addToCache(resort)
            OTS.ResortFavorite.setResortIds();
            OTS.ResortFavorite.add_mrf_item(resort);
            OTS.ResortFavorite.set_resort_add_btn(resId, true);
          }

          if (callback && typeof callback == 'function') {
            callback(resId);
          }
        });
    },




    getFavorites: function(callback) {
