OTS.Nearby = {
  _getUsrPos: function(callback, error) {
    if (navigator.geolocation) {
      navigator.geolocation.getCurrentPosition(callback, function(e) {
      }, {
        timeout: 10000,
        maximumAge: 900000
      });
    } else {
      callback();
    }
  },

  getResortsData: function(callback) {
    this._getUsrPos(function(position) {

      if (position && typeof position == 'object' ) {//&& position.hasOwnProperty('coords')) {
        var _lat = position.coords.latitude;
        var _lon = position.coords.longitude;

        if(typeof _lat == 'number' && typeof _lon == 'number'){
          $.ajax({
              url: '/ajax/my/nearby_resorts',
              dataType: 'json',
              data: {
                lat: _lat,
                lon: _lon,
              }
            })
            .done(callback);
        }
      }else{
        callback([]);
      }
    })
  }
};

</script><script language="javascript">
  (function() {
    function decimalAdjust(type, value, exp) {
      if (typeof exp === 'undefined' || +exp === 0) {
        return Math[type](value);
      }
      value = +value;
      exp = +exp;
      if (isNaN(value) || !(typeof exp === 'number' && exp % 1 === 0)) {
        return NaN;
      }
      value = value.toString().split('e');
      value = Math[type](+(value[0] + 'e' +
        (value[1] ? (+value[1] - exp) : -exp)));
      value = value.toString().split('e');
      return +(value[0] + 'e' + (value[1] ? (+value[1] + exp) : exp));
    }

    if (!Math.round10) {
      Math.round10 = function(value, exp) {
        return decimalAdjust('round', value, exp);
      };
    }
    if (!Math.floor10) {
      Math.floor10 = function(value, exp) {
        return decimalAdjust('floor', value, exp);
      };
    }
    if (!Math.ceil10) {
      Math.ceil10 = function(value, exp) {
        return decimalAdjust('ceil', value, exp);
      };
    }
  })();

  if(!OTS){
    var OTS = {};
  }

  var _naStr = "N/A";

  OTS.OxsMetrics = {
    naString: _naStr,
    getSymbol: function(unit) {
      if (this.METRIC.hasOwnProperty(unit)) {
        return this.METRIC[unit].symbol;
      }
    },
    convert: function(value, unit) {
      if (typeof value !== 'number' ) {
        return undefined;
      }

      if (!unit || !this.METRIC.hasOwnProperty(unit)) {
        return value;
      }
      var v = value;
      try {
        v = this.METRIC[unit].convert(value);
      } catch (e) {
        console.error(e);
      };
      return v;
    },
    toString: function(value, unit, display_rounding, nanString) {
      if (isNaN(value)) {
        return nanString || this.naString;
      }
      var v = this.convert(value, unit);
      if (display_rounding && value > 0 && v == 0) {
        return '&lt;1' + this.getSymbol(unit);
      } else {
        return v + this.getSymbol(unit);
      }
    }
  };
