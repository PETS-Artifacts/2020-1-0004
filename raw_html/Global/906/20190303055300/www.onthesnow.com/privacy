    remove: function(resId, callback) {
      if (!resId) {
        return false;
      }
      $('#favorites_head').show();
      var _resLAr = OTS.ResortFavorite.idsFromCookie();

      var _inar = _resLAr.indexOf(resId);
      if (_inar >= 0) {
        _resLAr.splice(_inar, 1);
        OTS.ResortFavorite._removeFromCache(resId);

      }
      OTS.ResortFavorite.save(_resLAr, 'remove', function() {
        OTS.ResortFavorite.remove_mrf_item(resId);
        OTS.ResortFavorite.afterRemove(resId);
        if (callback && typeof callback == 'function') {
          callback(resId);
