    },

    save: function(rlist, verb, callback) {
      if (OTS.siteUser.isUser) {
        docCookies.setItem(RESFAVCOOKIE, rlist.join('&'), undefined, '/');
        var myCallBack = function(data) {
          if (data.success) {
            OTS.siteUser.resfav = data.resfav_array;
         
            if (data.syncCookie) {
              OTS.ResortFavorite.resortIds = OTS.siteUser.resfav;
              docCookies.setItem('resfavdt', data.resfavdt, undefined, '/');
              docCookies.setItem(RESFAVCOOKIE, OTS.siteUser.resfav.join('&'), undefined, '/');
            }
          } else {
            if (data.syncCookie) {
              OTS.siteUser.resfav = data.resfav_array;
              OTS.ResortFavorite.resortIds = OTS.siteUser.resfav;
              docCookies.setItem('resfavdt', data.resfavdt, undefined, '/');
              docCookies.setItem(RESFAVCOOKIE, OTS.siteUser.resfav.join('&'), undefined, '/');
            } else {

            }
          }
          if (!callback) {
            callback = function(data) {
              return data
            };
          }
          return callback(data);
        };

        $.ajax({
          url: '/auth/my/favorites/' + verb,
          dataType: 'json'
        })
          .done(myCallBack);
      } else {

      }
    },

    toggle: function(resId) {
      if (OTS.siteUser.isUser) {
        if ($('#favorite' + resId).hasClass('selected')) {
          OTS.ResortFavorite.remove(resId);
        } else {
          OTS.ResortFavorite.add(resId);
        }
      } else {
        window.location.href = '/auth/login?rdir=' + window.location.href;
      }
    },


     _addToCache: function(resort){
      OTS.ResortFavorite.cache[OTS.ResortFavorite.cacheKey(resort.id)] = resort;
      OTS.ResortFavorite.setResortIds();
    },

    _getFromCache: function(resortId){
      return OTS.ResortFavorite.cache[OTS.ResortFavorite.cacheKey(resortId)];
    },

    _getData: function(callback) {
      if (OTS.siteUser.isUser) {
        $.getJSON("/auth/my/favorites/resorts")
          .done(function(jsond) {
            if (jsond.data && jsond.data.length > 0) {
              var i = 0;
              OTS.ResortFavorite.resortIds = [];
              jsond.data.forEach(function(resort) {
                OTS.ResortFavorite._addToCache(resort);
              });
              OTS.ResortFavorite.afterLoad(jsond);
              if (typeof callback == 'function') {
                return callback();
              }
            } else {
              if (typeof callback == 'function') {
                return callback();
              }
            }
            return;
          })
          .fail(function(jqxhr, textStatus, error) {
            var err = textStatus + ", " + error;
            console.warn("Request Failed: " + err);
            return [];
          });
      }
    },

    _removeFromCache: function(resId){
      var _inCache = OTS.ResortFavorite.resortIds.indexOf(resId);
      OTS.ResortFavorite.resortIds.splice(_inCache, 1);
      delete this[OTS.ResortFavorite.cacheKey(resId)];
      OTS.ResortFavorite.setResortIds();
    },



    initialize_mrf_remove: function() {},

    add_mrf_item: function(resort) {
      if (resort.links) {
        var mrf_Slider = $("#mrf_slider").data('royalSlider') || {};
        var newslide = OTS.ResortFavorite.get_mrf_item_html(resort);
        if (!mrf_Slider.numSlides) {
          $('#mrf_add_slide').before(newslide);
          OTS.ResortFavorite.init_mrf_slider();
        } else {
          mrf_Slider.appendSlide(newslide, mrf_Slider.numSlides - 1);
          OTS.ResortFavorite.initialize_mrf_remove();
          if (mrf_Slider.numSlides == 2 || (mrf_Slider.currSlideId == mrf_Slider.numSlides - 1)) {
            mrf_Slider.prev();
          }
        //$('#mrf_numSelected').html(mrf_Slider.numSlides);
        }
      }
    },

    get_mrf_item_html: function(resort) {
      var snow = resort.pastSnow && resort.pastSnow.snow0day ? resort.pastSnow.snow0day : 0;
      var depth = resort.snowcone && resort.snowcone.top_depth_cm ? resort.snowcone.top_depth_cm : 0;
      var weather = resort.weather0day ? resort.weather0day : null;
      return ('' +
        '<div class="mrf_slider_item" id="mrf_resort_' + resort.resort_id + '"><a href="' + resort.links.profile + '">' +
        '<div class="mrf_weather">' +
        '<div class="white_weather_icon ' + (weather && weather.weather_symbol ? weather.weather_symbol.toLowerCase() : '') + '"></div>' +
        '<div class="mrf_temp">' + OTS.OxsMetrics.toString(weather.top_temp ,'C') + '</div>' +
        '</div>' +
        '<div class="mrf_resort">' +
        '<div class="mrf_name">' + (resort.resort_name_tr || resort.resort_name) + '</div>' +
        '<div class="mrf_newsnow">' + OTS.OxsMetrics.toString(snow ,'CM') + ' new</div>' +
        '<div class="mrf_snowdepth">' + OTS.OxsMetrics.toString(depth ,'CM')  + ' base</div>' +
        '</div></a>' +
        '</div>' +
        '');
    },

    remove_mrf_item: function(resort_id) {
      var mrf_Slider = $("#mrf_slider").data('royalSlider');
      var removeSlide = -1;
      if (mrf_Slider) {
        mrf_Slider.slides.forEach(function(slide) {
          var myid = slide.content[0].id.replace('mrf_resort_', '');
          if (myid == resort_id) {
            removeSlide = slide.id;
          }
        });
        if (removeSlide > -1) {
          mrf_Slider.removeSlide(removeSlide);
        /*
        if (mrf_Slider.numSlides < 1) {
          mrf_Slider.destroy();
          $('.favorites_slider').html('').css('display','none');
        }
        else {
          //$('#mrf_numSelected').html(mrf_Slider.numSlides);
        }
        */
        }
      }
    },
    set_resort_add_btn: function(resort_id, add) {
      if (add) {
        $('#favorite' + resort_id).addClass('selected').removeClass('unselected');
      } else {
        $('#favorite' + resort_id).addClass('unselected').removeClass('selected');
      }
    },


  }
</script><script>

OTS.ResortCompare = {
  toggleCompare: function(resId){
    if( $('#compare' + resId).hasClass('selected')){
      OTS.ResortCompare.removeFromCompare(resId);
    }else{
      OTS.ResortCompare.addToCompare(resId);
    }
  },
  removeFromCompare: function(resId, callback) {
    var _c = docCookies.getItem('rescompare');

    if (_c ) {
      var _resLAr = _c.split('&');
      var _inar = $.inArray(resId+'',_resLAr);
      if(_inar >= 0){
        _resLAr.splice(_inar,1);
        docCookies.setItem('rescompare',_resLAr.join('&'), 31536e3, '/');
      }
      OTS.ResortCompare.remove_compare_item(resId);
      if(callback && typeof callback == 'function'){
        callback(resId);
      }
    }
    OTS.ResortCompare.set_resort_add_btn(resId, false);
  },
  addToCompare: function (resId, callback) {
    var _c = docCookies.getItem('rescompare');

    if (_c) {
      var _resLAr = _c.split('&');
      if (_resLAr.length > 9) {
        alert("10 resorts maximum");
        return;
      }
      var _inar = $.inArray(resId+'',_resLAr);
      if(_inar < 0){
        _resLAr.unshift(resId);
        docCookies.setItem('rescompare',_resLAr.join('&'), 31536e3, '/');
      }
    } else {
      docCookies.setItem('rescompare', resId, 31536e3, '/');
    }
    $.getJSON( "/ajax/get_simple_resort", {id: resId} )
      .done(function(data) {
         if (data.data && data.data.length > 0) {
           var resort = data.data[0];
           OTS.ResortCompare.add_compare_item(resort);
         }
       });
    OTS.ResortCompare.set_resort_add_btn(resId, true);
    if(callback && typeof callback == 'function'){
        callback(resId);
    }
  },
  getResortIds: function () {
    var _c = docCookies.getItem('rescompare');
    if (_c ) {
      var _resLAr = _c.split('&');
      if(_resLAr.length > 0){
        return _resLAr;
      }
    }
    return [];
  },
  isCompared: function (resId) {
    var _c = docCookies.getItem('rescompare');
    if (_c) {
      var _resLAr = _c.split('&');
      var _inar = $.inArray(resId+'',_resLAr);
      if(_inar > -1){
        return true;
      }
    }
    return false;
  },
  getData: function (resIds,dt,dr,callback) {
    $.ajax({
      url: '/ajax/compare_historical',
      dataType: 'json',
      data: {
        dt: dt,
        dr: dr,
        r: resIds
      }
    })
    .done(callback);
  },
  initialize_compare_remove: function () {
    $('.compare_slider_item_remove').off('click');
    $('.compare_slider_item_remove').click(function() {
      var i = $( this ).attr('rel');
      var compare_Slider = $("#compare_slider").data('royalSlider');
      if ( compare_Slider ) {
        var resId = $( this ).attr('data-resortid');
        compare_Slider.removeSlide( i );
        OTS.ResortCompare.removeFromCompare(resId);
        $('#compare_slider .rsContainer .rsSlide').each(function( index ) {
          var myId = $( this ).children(":first").attr('id');
          $( '#' + myId + ' .compare_slider_item_remove').attr('rel', index);
        });
        $('#compare_numSelected').html(compare_Slider.numSlides);
        if (compare_Slider.numSlides < 1) {
          compare_Slider.destroy();
          $('.my_resorts_footer').html('').css('display','none');
        }
        OTS.ResortCompare.set_resort_add_btn(resId, false);
      }
      return false;
    });
  },
  add_compare_item: function (resort) {
    if (resort.links) {
      var resortPhoto = '';
      if (resort.resortPhoto) {
        resortPhoto = '<img src="' + resort.resortPhoto.mid + '">'
      }
      var compare_Slider = $("#compare_slider").data('royalSlider') || {};
      var newslide = '' +
        '<div class="compare_slider_item" id="compare_resort_' + resort.resort_id + '">' +
          '<a href="' + resort.links.profile + '">' +
            resortPhoto +
          '</a>' +
          '<p><a href="' + resort.links.profile + '">' + resort.resort_name_tr + '</a></p>' +
          '<div class="compare_slider_item_remove" data-resortid="' + resort.resort_id + '" rel="' + (compare_Slider.numSlides || 1) + '"></div>' +
        '</div>' +
      '';
      if (!compare_Slider.numSlides) {
        OTS.ResortCompare.create_myresort_footer(1);
        $('#compare_slider').append(newslide);
        OTS.ResortCompare.init_compare_slider();
      }
      else {
        compare_Slider.appendSlide(newslide);
        OTS.ResortCompare.initialize_compare_remove();
        $('#compare_numSelected').html(compare_Slider.numSlides);
      }
    }
  },
  remove_compare_item: function (resort_id) {
    var compare_Slider = $("#compare_slider").data('royalSlider');
    var removeSlide = -1;
    if (compare_Slider) {
      compare_Slider.slides.forEach(function(slide) {
        var myid = slide.content[0].id.replace('compare_resort_','');
        if (myid == resort_id) {
          removeSlide = slide.id;
        }
      });
      if (removeSlide > -1){
        compare_Slider.removeSlide( removeSlide );
        if (compare_Slider.numSlides < 1) {
          compare_Slider.destroy();
          $('.my_resorts_footer').html('').css('display','none');
        }
        else {
          $('#compare_numSelected').html(compare_Slider.numSlides);
        }
      }
    }
  },
  set_resort_add_btn: function (resort_id, add) {
    if (add) {
      $('#compare'+resort_id).addClass('selected').removeClass('unselected');
    } else {
      $('#compare'+resort_id).addClass('unselected').removeClass('selected');
    }
  },
  create_myresort_footer: function (num_resorts) {
    $("#compareBar").append('' +
      '<div class="my_resorts_footer">' +
        '<div class="compare_head"><p>My selected resorts (<span id="compare_numSelected">' + num_resorts + '</span>)</p></div>' +
        '<div class="compare_content">' +
          '<div class="compare_slider_outer1"><div class="compare_slider_outer2"><div id="compare_slider"></div></div></div>' +
          '<a href="/myresorts/compare" class="btn_default">compare now</a><div class="clear"></div>' +
        '</div>' +
      '</div>' +
    '');
  },
  init_compare_slider: function () {
    $('#compare_slider').royalSlider({
      addActiveClass: true,
      arrowsNav: true,
      arrowsNavAutoHide: false,
      controlsInside: false,
      controlNavigation: 'none',
      autoHeight: true,
      loop: false,
      fadeinLoadedSlide: false,
      globalCaption: true,
      keyboardNavEnabled: true,
      globalCaptionInside: false,
      navigateByClick: false,
      slidesSpacing: 0,
      numImagesToPreload: 6,
    });
    var compareSlider = $("#compare_slider").data('royalSlider');
    setTimeout(function(){
      compareSlider.updateSliderSize(true);
    }, 3000);
    compareSlider.ev.on('rsSlideClick', function(e, slideObject) {
      OTS.ResortCompare.initialize_compare_remove();
    });

    OTS.ResortCompare.initialize_compare_remove();

    $('.compare_head').click(function() {
      $( ".my_resorts_footer" ).toggleClass( "compare_open", 5000, "easeOutSine" );
    });
  }
};

