          var resort = OTS.ResortFavorite._getFromCache(resortId);
          if (resort && resort.links) {
            var newslide = OTS.ResortFavorite.get_mrf_item_html(resort);
            $('#mrf_add_slide').before(newslide);
          }
        });
        OTS.ResortFavorite.init_mrf_slider();
