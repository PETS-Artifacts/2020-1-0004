		 });
	}
	else
	{
		$(".arrowchange").hover(function(){
			$(this).find('img').attr('src','http://bdutyfree.com/gocart/themes/bdfs/assets/img/arrowhover.jpg');							 
		}, function(){
		 	$(this).find('img').attr('src','http://bdutyfree.com/gocart/themes/bdfs/assets/img/arrow.jpg'); 								 
		});
	}
});
</script>

