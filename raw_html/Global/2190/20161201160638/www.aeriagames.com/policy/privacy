<script type="text/javascript">
window.ClickTracking = {
    COOKIE_NAME:     'utm_track',
    SEPARATOR_CLICK: '|-|',
    SEPARATOR_TRACK: '#-#',
    TRACK_LENGTH:     5,

    addHistory: function (record, cExpire)
    {
        var c = window.rCookie(this.COOKIE_NAME);
        if (c === '') {
            c = record;
        } else {
            var arr = c.split(this.SEPARATOR_TRACK);
            if (arr.length >= this.TRACK_LENGTH) {
                var FirstElement = arr.shift();
                arr.shift();
                arr.unshift(FirstElement);
            }
            arr.push(record);
            c = arr.join(this.SEPARATOR_TRACK);
        }
        window.cCookie(this.COOKIE_NAME, c, cExpire);
    },

    createRecord: function (source, campaign, media, target, pid, gclid, ref)
    {
        return [source, campaign, media, target, pid, gclid, ref, this.now()].join(this.SEPARATOR_CLICK);
    },

    extractDomain: function (str)
    {
        var pos = str.indexOf("?");
        if (pos > 0) {
            str = str.substring(0, pos);
        }
        return str;
    },

    now: function ()
    {
        return 1480608398;
    }
};

checkRef();

function gup(name, keepCase)
{
    name = name.replace(/[\[]/, '\\\[').replace(/[\]]/, '\\\]');
    var regexS = '[\\?&]' + name + '=([^&#?]*)';
    var regex = new RegExp(regexS, 'i');
    var loc = window.location.href;
    if ((typeof keepCase === 'undefined') || (!keepCase)) {
        loc = loc.toLowerCase();
    }
    var res = regex.exec(loc);
    if (res == null) {
        return '';
    } else {
        return res[1];
    }
}

function checkRef()
{
    var cExpire = 30 * 24;
    var r = rCookie('utm_ref');
    if (r == '') {
        var p = document.referrer.indexOf('?');
        var u = (p > 0) ? document.referrer.substring(0, p) : document.referrer;
        cCookie('utm_ref', u, cExpire);
    }
    var c_orig = gup('utm_source');
    if (c_orig) {
        var campaign = gup('utm_campaign');
        var media    = gup('utm_medium');
        var target   = window.location.href;
        var pid      = gpid(c_orig);
        var cid      = gcid(c_orig);
        var gclid    = gup('gclid', true);
        var ref      = window.ClickTracking.extractDomain(document.referrer);
        var record   = window.ClickTracking.createRecord(c_orig, campaign, media, window.ClickTracking.extractDomain(target), pid, gclid, ref);
        window.ClickTracking.addHistory(record, cExpire);
        cCookie('utm_source', c_orig, cExpire);
        cCookie('utm_campaign', campaign, cExpire);
        cCookie('utm_medium', media, cExpire);
        cCookie('utm_target', target, cExpire);
        cCookie('utm_pid', pid, cExpire);
        cCookie('utm_cid', cid, cExpire);
        cCookie('p_source', c_orig,cExpire);
        cCookie('p_campaign', gup('utm_campaign'), cExpire);
        click();
    }
}

function click()
{
    var px = new Image(1, 1);
    px.src = "//www.aeriagames.com/index.php?q=track/pixel";
}

function cCookie(name, value, hours)
{
    var expires = '';
    if (hours) {
        var date = new Date();
        date.setTime(date.getTime() + (hours * 60 * 60 * 1000));
        expires = '; expires=' + date.toGMTString();
    }
    document.cookie = name + '=' + value + expires + "; path=/; domain=.aeriagames.com";
}
function rCookie(name)
{
    var nameEQ = name + "=";
    var ca = document.cookie.split(';');
    for (var i = 0; i < ca.length; i++) {
        var c = ca[i];
        while (c.charAt(0)==' ') {
            c = c.substring(1,c.length);
        }
        if (c.indexOf(nameEQ) == 0) {
            return c.substring(nameEQ.length, c.length);
        }
    }
    return '';
}

function dCookie(name)
{
    cCookie(name, '', -1);
}

function gupEscape(str) {
    return str == null ? 'null' : '"' + str.replace(/["\\]/g, function (x) { return "\\" + x; }) + '"';
}

function gpid(org)
{
    /**
     * Don't use javascript JSON object. It is not supported by launchers
     * ITE-1203
     */
    var age_pubid = gupEscape(gup((org.toLowerCase() == 'belboon') ? 'affiliate' : 'age_pubid'));
    var subid2 = gupEscape(gup('subid2'));
    var subid3 = gupEscape(gup('subid3'));

    return '{"age_pubid":' + age_pubid + ',"subid2":' + subid2 + ',"subid3":' + subid3 + '}';
}

function gcid(channel)
{
    channel = channel.toLowerCase();
    var ret = '';
    if (channel == 'netextend') {
        ret = gup('subid');
    } else if (channel == 'adotomicpp') {
        ret = gup('utm_cid', true);
    } else if (channel == 'adsmarketcpp') {
        ret = gup('ce_cid', true);
    } else if (channel == 'foxnet') {
        ret = gup('utm_cid', true);
    }
    if (ret == '') {
        ret = gup('age_cid', true);
    }
    return ret;
}

