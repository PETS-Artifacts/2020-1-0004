<script type="text/javascript">
    var req_perms = "email,user_birthday";
    var str_connecting = "Connecting";
    var str_error = "Unknown error occurred. Please try again later.";

    if (typeof fbConnectDestination == 'undefined') {
        var fbConnectDestination = "";
    }
    if (typeof fbConnectTheme == 'undefined') {
        var fbConnectTheme = "";
    }
    var clientID = "";

    function FBLogin(destination)
    {
        FB.login(function(response) {
            if (response.status === 'connected') {

                var data = {};

                if (destination) {
                    data.destination = destination;
                } else if (fbConnectDestination) {
                    data.destination = fbConnectDestination;
                }

                if (fbConnectTheme) {
                    data.theme = fbConnectTheme;
                }

                var url = '/social_connect/facebook/connect/session/json';
                if (clientID) {
                    url = '/social_connect/facebook/connect/oauth2/json?client_id=' + clientID;
                }

                var req = new Request.JSON({
                    url: url,
                    data: data,
                    onRequest: function () {
                        // for modal agbox
                        if ($$('.agbox')) {
                            $$('.agbox').dispose();
                        }
                        if ($('overlay')) {
                            $('overlay').dispose();
                        }

                        agBox = new AG.Box({'title': str_connecting});
                        agBox.open();
                        agBox.fade();
                    },
                    onComplete: function (agResponse) {
                        if (typeof agResponse != 'undefined') {
                            if (agResponse.errorCode && agResponse.errorCode > 0) {
                                FBloginError(agBox, agResponse.message);
                            } else if (agResponse.destination) {
                                window.top.location = agResponse.destination;
                            } else {
                                FBloginError(agBox);
                            }
                        } else {
                            FBloginError(agBox);
                        }
                    },
                    onFailure: function() {
                        FBloginError(agBox);
                    }
                }).send();

            } else if (response.status === 'not_authorized') {
                console.log('not_authorized');
            } else {
                console.log('canceled');
            }
        }, {scope: req_perms});
    }

    function FBloginError(box, message)
    {
        var error = '';
        switch (typeof message) {
          case "string":
              error = {error: message};
              break;
          case "object":
              error = message;
              break;
          case "undefined":
          default:
              error = {error: str_error};
              break;
        }

        box.setErrors(error);
        box.setContent('');
        box.unfade();
    }
</script>
