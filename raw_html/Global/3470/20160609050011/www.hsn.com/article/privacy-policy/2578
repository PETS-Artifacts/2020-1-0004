<script>
    jQuery(document).ready(function ($) {
        var catId = '';
        var primaryAttribute = '2578';
        $('#stores-nav > ul > li').each(function () {
            if (catId.toLowerCase() == jQuery(this).attr("data-marketing-id").toLowerCase() || primaryAttribute.toLowerCase() == jQuery(this).attr("data-marketing-id").toLowerCase())
                jQuery(this).toggleClass("active");
        });
    });

    jQuery(document).ready(function ($) {
        SetStoresNavFlyoutPos();
        $(window).resize(function () {
            SetStoresNavFlyoutPos();
        });
    });

    function SetStoresNavFlyoutPos() {
        var leftpos = Math.floor(window.innerWidth / 2) - 520;
        jQuery("#stores-nav > ul > li > ul").css("left", leftpos + "px");
    }
</script>

       
