function addslot(slotname, slotdim) {
		// slotnames to server to both desktop and mobile devices
		var comboMobileDestopAd = ["HP_center_native_1" ];
		var mobileAds = ['TEST_mobile_middle1','TEST_mobile_top1','sponsor_article_mobile_1','sponsor_article_mobile_2','sponsor_sf_mobile_1','sponsor_sf_mobile_2','mobile_banner_320x50','Home_mobile_top1','Home_mobile_middle1','Blog_SF_mobile_top1','Blog_SF_mobile_middle1','RTV_SF_mobile_top1','RTV_SF_mobile_middle1','Poll_SF_mobile_top1','Poll_SF_mobile_middle1','Web_Article_mobile_top1','Web_Article_mobile_middle1','Blog_sub_mobile_top1','Blog_sub_mobile_middle1','RTV_articles_mobile_top1','RTV_articles_mobile_middle1','Poll_articles_mobile_top1','Poll_articles_mobile_middle1','Search_mobile_top1','Search_mobile_middle1','Other_mobile_top1','Other_mobile_middle1','Issues_mobile_top1','Issues_mobile_middle1','People_mobile_top1','People_mobile_middle1'];
		// Desktop ads
		if ((width >= 768) && (jQuery.inArray( slotname, comboMobileDestopAd) !== -1 || jQuery.inArray(slotname, mobileAds) === -1)) {
