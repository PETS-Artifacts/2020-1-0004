<script type="text/javascript">

    var _gaq = _gaq || [];

    /*  Track Navigation clicks
    --------------------------------*/
    $('#footer-main a').click(function(){
        analytics.track('Clicked Link', { 'name' : $(this).html(), 'page' : document.URL, 'page region' : 'Footer' });
    });

    analytics.ready(function() {
      window.MixPanelCookieCleaner = {
        experiment_prefix: "Experiment: ",

        run: function() {
          if(!this.is_optimizely_loaded()) {
            return;
          }

          this.remove_properties_for_non_running_experiments();
          this.remove_mps_property();
        },

        is_optimizely_loaded: function() {
          return typeof(window.optimizely) !== "undefined";
        },

        get_running_experiment_names: function() {
          return Object.keys(window.optimizely.allExperiments).map(
            function(experiment_id) {
              return window.optimizely.allExperiments[experiment_id].name;
            }
          );
        },

        remove_properties_for_non_running_experiments: function() {
          var running_experiment_names = this.get_running_experiment_names();
          for(var prop in window.mixpanel.cookie.props) {
            if(prop.indexOf(this.experiment_prefix) === 0) {
              var experiment_name = prop.split(this.experiment_prefix)[1];
              if(running_experiment_names.indexOf(experiment_name) === -1) {
                window.mixpanel.unregister(prop);
              }
            }
          }
        },

        remove_mps_property: function() {
          // __mps contains unexplained duplicate properties
          window.mixpanel.unregister("__mps");
        }
      };

      window.MixPanelCookieCleaner.run();
    });
</script>
