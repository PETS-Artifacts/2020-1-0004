                           var date =  new Date(surveyOptions.endDate)*1000;
                          $.cookie('survey','No', { expires: 180, domain: 'elsevier.com' });
                          $('#surveyPopup').fadeOut();
                        });

                        $('.survey-accept').on('click',function(e) {
