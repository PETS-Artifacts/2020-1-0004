                        //  window.open($(this).attr('href'),"Survey","scrollbars=1, status=1, width=700, height=600");
                          $.cookie('survey','No', { expires: 180, domain: 'elsevier.com'});
                        });
                        $(".lb-close").on('click',function() {
                          $.cookie('survey','No', { expires: 180, domain: 'elsevier.com'});
                          $('#surveyPopup').fadeOut();
                        });
         //   });

         }   
            
