                <div class="section-items nav-sections-items" data-mage-init='{"tabs":{"openedState":"active"}}'>
                                            <div class="section-item-title nav-sections-item-title" data-role="collapsible">
                    <a class="nav-sections-item-switch" data-toggle="switch" href="#store-menu">Menu</a>
                </div>
                <div class="section-item-content nav-sections-item-content" id="store-menu" data-role="content">    <script>

        require([
            'jquery',
            'underscore',
            'ibnabmodernizr',
            'matchMedia',
            'domReady!'
        ], function ($, _) {

            $(".mobile-menu li.parent .arrow-parent").unbind().click(function(){
                $(".mobile-menu li.parent .submenu").removeAttr("style");
                if($(window).width() > 666) {
                    $(this).next().toggleClass('active-content');
                    $(this).toggleClass('active-icon');
                    return false;
                }
            });

            if($(window).width() <= 768 && $(window).width() > 666) {
                $(".mobile-menu li.parent .submenu").removeAttr("style");
            }


            $( window ).resize(function() {
                if($(window).width() <= 768 && $(window).width() > 666) {
                    $(".mobile-menu li.parent .submenu").removeAttr("style");
                }
            });

            var num = 50; //number of pixels before modifying styles

            $(window).bind('scroll', function () {
                if ($(window).scrollTop() > num && $(window).width() <= 768) {
                    $('.nav-sections').addClass('fixed');
                } else {
                    $('.nav-sections').removeClass('fixed');
                }
            });

            if ($(window).width() <= 768) {
                $('.menu .level-top').each(function () {
                    $(this).attr("href", "#");
                    $(this).addClass('mbic-toggle-label');
                });
            }

            $('.menu > ul > li:has( > div)').addClass('menu-dropdown-icon');
            //$('.menu > ul > li > div').addClass('sub-menu');
            //Checks if li has sub (ul) and adds class for toggle icon - just an UI
            if ( $( '.menu > ul > li' ).hasClass( "menu-dropdown-icon" ) ) {
                $(".menu > ul > li.menu-dropdown-icon > a span").before("<i class='tip'>tip</i>");
                $(".menu > ul > li.menu-dropdown-icon").append( "<span class='mbic-toggle'>toggle</span>");
            }


            $('.menu > ul > li > ul:not(:has(div))').addClass('normal-sub');
            //Checks if drodown menu's li elements have anothere level (ul), if not the dropdown is shown as regular dropdown, not a mega menu (thanks Luka Kladaric)

            //$(".menu > ul").before("<a href=\"#\" class=\"menu-mobile\">Navigation</a>");

            //Adds menu-mobile class (for mobile toggle menu) before the normal menu
            //Mobile menu is hidden if width is more then 959px, but normal menu is displayed
            //Normal menu is hidden if width is below 959px, and jquery adds mobile menu
            //Done this way so it can be used with wordpress without any trouble

            $(".menu > ul > li").hover(function (e) {
                if ($(window).width() > 943) {
                    $(this).children("ul").stop(true, false).fadeToggle(150);
                    e.preventDefault();
                }
            });
            //If width is more than 943px dropdowns are displayed on hover

            $(".menu > ul > li").click(function () {
                if ($(window).width() <= 943) {
                    $(this).children("ul").fadeToggle(150);
                }
            });
            //If width is less or equal to 943px dropdowns are displayed on click (thanks Aman Jain from stackoverflow)

            $(".menu-mobile").click(function (e) {
                $(".menu > ul").toggleClass('show-on-mobile');
                e.preventDefault();
            });

            $(".mbic-toggle-label").click(function (e) {
                $(this).parent().children('.sub-menu').toggle();
                e.preventDefault();
            });

            $(".mbic-toggle").click(function (e) {
                $(this).parent().children('.sub-menu').toggle();
                e.preventDefault();
            });

            $.fn.clickToggle = function(func1, func2) {
                var funcs = [func1, func2];
                this.data('toggleclicked', 0);
                this.click(function() {
                    var data = $(this).data();
                    var tc = data.toggleclicked;
                    $.proxy(funcs[tc], this)();
                    data.toggleclicked = (tc + 1) % 2;
                });
                return this;
            };
            $('.nav-toggle').clickToggle(function() {
                setTimeout(function(){
                    $(".nav-sections-items").css('height',$('.main-menu-top').height() + 40);
                },100);
            },
            function() {
                $(".nav-sections-items").css('height','auto');
            });
            mediaCheck({
                media: '(max-width: 768px)',
                // Switch to Mobile Version
                entry: function () {
                    //$(".nav-toggle").click(function(){
                        //setTimeout(function(){
                            //$(".nav-sections-items").css('height',$('.mobile-menu').height());
                        //},500);
                    //});
                },
                // Switch to Desktop Version
                exit: function () {
                    //$(".nav-sections-items").css('height','auto');
                    $(".nav-sections-items").css('height','auto');
                }
            });
        });

    </script>
        <nav class="navigation" role="navigation" >
