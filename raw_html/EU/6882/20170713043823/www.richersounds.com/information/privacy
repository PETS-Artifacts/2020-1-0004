    require(["jquery","owlcarouselOntap"], function($) {

        $(document).ready(function(){
            uspBlockSlider();
        });
        $(window).resize(function() {
            uspBlockSlider();
        });
        function uspBlockSlider() {
            var checkWidth = $(window).width();
            var uspBlock = $(".usp-block dl");
            if (checkWidth > 1024) {
                if(typeof uspBlock.data('owlCarousel') != 'undefined') {
                    uspBlock.data('owlCarousel').destroy(); 
                }
              
            } else {
              uspBlock.owlCarouselCS({
                loop:true,
                margin:0,
                nav:false,
                dots: false,
                autoplay:true,
                autoplayTimeout:2000,
                navText: [
                  "<span class='icon-arrow-left'></span>",
                  "<span class='icon-arrow-right'></span>"
                  ],
                responsive:{
                    0:{
                        items:1,
                        margin: 10
                    },
                    768:{
                        items:2,
                        nav:false,
                        margin: 10
                    },
                    1025:{
                        items:4,
                        nav:false,
                        margin:10
                    }
                }
              });
            }
        }         
    });      

