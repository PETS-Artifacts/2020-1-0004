<script type="text/javascript">
    require(["jquery","highslide"], function($) {    	
    	hs.graphicsDir = 'https://www.richersounds.com/media/highslide/graphics/';
    	hs.outlineType = 'rounded-white';
    	hs.maxWidth = 400;
    	function checkWidth(){

    		var maxWidth = 320;
    		if($(window).width() > 767){
    			maxWidth = 700;
    		}else if($(window).width() > 600) {
    			maxWidth = 500;
    		}else {
    			maxWidth = 320;
    		}
    		hs.maxWidth = maxWidth;
    	}

    	$(window).resize(function() {
		  checkWidth();
		});
    	checkWidth();   	
    });
</script>
