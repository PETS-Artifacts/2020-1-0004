    var showBlockedWindow = function () {

        window.ModalForm.ShowPopup($(SAModalForm.Form));
        var modalBody = $(SAModalForm.Form).find('.sa-modal-body-container');

        $(SAModalForm.Form).find('.sa-modal-header').remove();
        modalBody.find('.sa-modal-form-section').remove();
        modalBody.find('.sa-modal-descr').css('width', '100%').find('.descr').html("Please make sure that you do not have a pop-up blocker active.</br>  After you click the OK button, please click the Join link again. (you will not need to register again).<a class='btn btn-primary block vertical-margin-small' style='width: 80px;' href='javascript:window.ModalForm.ClosePopup()'>OK</a>");

