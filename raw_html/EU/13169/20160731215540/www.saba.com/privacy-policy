                campaign: 'saba.com - on air daily demo',
                rank: 15
            },
            callback: function (data) {
                window.ModalForm.ClosePopup();
                window.WaitForm.ShowWait();
                SendEmailDailyDemo(data);
                RobotClient.SubmitFormHtml(eventData, data, function (html) {
                    window.WaitForm.CloseWait();
                    var url = html;
                    var win = window.open(url, '_blank');
                    window.setTimeout(function () {
                        if (!win) {
                            showBlockedWindow();
                        }
                    }, 2000);
                }, 'directWebinar');
            }
        });
    };
