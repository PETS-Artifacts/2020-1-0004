    <script>
      $(window).resize(function() {
        setTimeout(resetStyleHeight, 100)
      });

      function resetStyleHeight() {
        $('.nav_main, .nav_inner, .nav_dropdown').attr('style', '');

        if ($(window).width() > 991) {
          $(".nav_link-bottom").height('auto');
        }
      }

      $(document).ready(resetStyleHeight);

      function adjustHeights() {
        if ($(window).width() > 991) {
          $(".nav_link-bottom").each(function() {
            var height = $(this).height();

            if (height > 0) {
              $(".nav_link-bottom").height(height);
            } else {
              setTimeout(adjustHeights, 50)
            }
          });
        }
      }

      $('#nav_features').mouseenter(function() {
        setTimeout(adjustHeights, 50);
      });
    </script>
