      // If a person is logged in, show the Dashboard signin link
      var user = document.cookie.match(new RegExp('[; ]' + 'wflogin' + '=([^\\s;]*)'));
      var loginNav = document.getElementsByClassName('nav__log-in');
      var dashNav = document.getElementsByClassName('nav__sign-up');
      if (user && user[1] !== 'null') {
        for (var i = 0; i < loginNav.length; i++) {
          loginNav[i].innerHTML = '#MadeInWebflow';
          loginNav[i].href = '/discover/popular';
        }
        for (var i = 0; i < dashNav.length; i++) {
          dashNav[i].innerHTML = 'Dashboard';
          dashNav[i].href = '/dashboard';
        }
      }
    </script>

