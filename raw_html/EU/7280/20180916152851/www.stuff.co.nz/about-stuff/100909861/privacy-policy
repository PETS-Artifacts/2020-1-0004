        var aamffx = nz.ffx.DartSupport().get_aamffx();
        if (typeof aamffx !== 'undefined') {

            var arrayIndexOf = function(array, key) {
                if (typeof Array.prototype.indexOf !== 'undefined') {
                    return array.indexOf(key);
                }

                for (var i = 0; i < array.length; i++ ) {
                    if (array[i] === key) {
                        return i;
                    }
                }

                return -1;
            };

            var keys = [];
            var vals = [];
            for (var i = 0; i < aamffx.length;i++) {
                if (arrayIndexOf(keys, aamffx[i][0]) === -1){
                    keys.push(aamffx[i][0]);
                    vals.push([aamffx[i][1]]);
                } else {
                    vals[arrayIndexOf(keys, aamffx[i][0])].push(aamffx[i][1]);
                }
            }
            for (var i = 0; i < keys.length;i++) {
                googletag.pubads().setTargeting(keys[i], vals[i]);
            }
        }

        var aamDID = nz.ffx.DartSupport().get_aamDID();
