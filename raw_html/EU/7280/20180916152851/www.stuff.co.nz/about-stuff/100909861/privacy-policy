    var dartLoc = "onl.stuff.aboutstuff/homepage";
    var dartEnv = "prod";
    var dartCtype = "story";
    var dartWeatherLoc = ($.cookie('weatherSelection') || "33").toString();  
    var pageSource = window.digitalData.page.pageInfo.source;
    var dartPid = "";
    var exclusions = [];
    
        dartPid = "100909861";

        

  /* -------------------------------- */
  /* Header Bidding section           */
  /* -------------------------------- */

    var gptRan = false;
    var gptRun = function() {
        
        if (gptRan) {
            return;
        }
        gptRan = true;
        var gads = document.createElement('script');
        gads.async = true;
        gads.type = 'text/javascript';
        var useSSL = 'https:' === document.location.protocol;
        gads.src = (useSSL ? 'https:' : 'http:') + '//www.googletagservices.com/tag/js/gpt.js';
        var node = document.getElementsByTagName('script')[0];
        node.parentNode.insertBefore(gads, node);
    };

    var nz = (window.nz = window.nz || {});
    nz.ffx = nz.ffx || {};

    // if prebid loaded start header bidding
    if (nz.ffx.prebid) {
        var PAGESLOTS = [	// all ad slots on the page
        
            {
                name: 'specialoffer3',
                sizes: [[240,45]]
            },
        
            {
                name: 'pushdownbanner',
                sizes: [[950,120],[950,160]]
            },
        
            {
                name: 'specialoffer1',
                sizes: [[240,45]]
            },
        
            {
                name: 'gutterleft',
                sizes: [[160,1500],[600,1500]]
            },
        
            {
                name: 'gutterright',
                sizes: [[160,1500],[600,1500]]
            },
        
            {
                name: 'topstrip',
                sizes: [[300,25],[275,23]]
            },
        
            {
                name: 'specialoffer2',
                sizes: [[240,45]]
            },
        
            {
                name: 'sectionbottomright',
                sizes: [[300,250]]
            },
        
        ];

        nz.ffx.prebid.setPlatform && nz.ffx.prebid.setPlatform('cq');
        nz.ffx.prebid.init(PAGESLOTS, dartLoc, gptRun);
    } else {
        // otherwise load GPT straight away
        gptRun();
    }
</script>


