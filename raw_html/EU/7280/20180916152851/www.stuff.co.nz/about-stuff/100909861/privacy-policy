<script>
        googletag.cmd.push(function () {
            googletag.pubads().addEventListener('slotRenderEnded', function(event) {
                try {
                    if (!event.isEmpty) {
                        var tkeys = event.slot.getTargetingKeys();
                        for (var i = 0; i < tkeys.length; i ++) {
                            var key = tkeys[i];
                            var tkey = event.slot.getTargeting(key)[0];
                            if (tkey.indexOf("specialoffer") > -1) {
                                $("#0a6d09c3-c0e8-495e-bc61-59305b01fb4c").show();
                            } 
                        }
                    }
                }
                catch (e) {
                    console.log("Special Offers Event Error: " + e);
                }
            });
        });
    </script>
