<script type="text/javascript">

        
        var nz = nz || {};
        nz.ffx = nz.ffx || {};

        populateGigyaBar = function() {

            
            window.nz.ffx.dependencies.domLoaded.promise.then(function() {
                var title = "Privacy Policy";
                var description = "This is the Privacy Policy of Stuff Limited. ";

                nz.ffx.GigyaStuff.initGigyaEmailShare( {
                    title: title.replace('"',"'"),
                    description: description.replace('"',"'"),
                    canonical_url: "http://www.stuff.co.nz/about-stuff/100909861/privacy-policy",
                    image_url: "/etc/designs/ffx/nz/stuff/social-media-logos/stuff-200x200.png",
                    email_url: "http://www.stuff.co.nz/email_a_friend/28/100909861"
                } );

                
                nz.ffx.GigyaStuff.enableGigyaShareToolar("fake-sharebox-gigya", "fake");
                
            });
        };
   </script>
