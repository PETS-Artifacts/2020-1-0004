		<script>
		function ajaxCall(url, callback){
			if (typeof callback == 'undefined'){
				callback = function(data){};
		}
		
		if (window.XDomainRequest) { //IE9-10 implements crossdomain AJAX this way only
			var xhr = new window.XDomainRequest();
			xhr.open('GET', url, true);
			xhr.onload = function() {
				callback(xhr.responseText);
			};
			xhr.send();
			} else {
				$.ajax({
					url: url,
					success: callback,
					cache: true
				});
			}
		}
		
		$(document).ready(function(){
		var cookieName = "hideOnlineSub201702";
		var channelID = 6;
		setTimeout(function () {
			if (are_cookies_enabled()) //if cookies are enabled
			{
				if(readCookie(cookieName) == null || readCookie(cookieName) == "") //if user never clicks on close btn of the subscription widget
				{
					$("#sign-up-widget-overlay").fadeIn("fast");
					$("#sign-up-widget").fadeIn("slow");
				}
			}
		}, 5000);                
		$("#subscription_widget .img_stick_header_close_btn").click(function(){
		$("#sign-up-widget").fadeOut("slow");
		$("#sign-up-widget-overlay").fadeOut("slow");
			createCookie(cookieName,1,7);
		});
		$("#subscription_widget #thank_you_close_btn").click(function(){
		$("#sign-up-widget").fadeOut("slow");
			$("#sign-up-widget-overlay").fadeOut("slow");
		});
		$("#sign-up-widget-overlay").click(function(){
		     $("#subscription_widget .img_stick_header_close_btn").click();
		});
		$("#subscription_widget form").submit(function(e){
			e.preventDefault();
			var EMAIL_REGEXP = /^[_a-z0-9\+]+(\.[_a-z0-9\+]+)*@[a-z0-9-]+(\.[a-z0-9-]+)*(\.[a-z]{2,4})$/i;
			var email = $.trim($("#subscription_widget form input[name=email]").val());
			if(EMAIL_REGEXP.test(email))
			{
				ajaxCall("//connect.kitco.com/subscription/ws/subscribe/?sourceId=8&channels="+channelID+"&email="+email+"&ipAddress="+userip, function(){});
				createCookie(cookieName,1,100000);
				$('#subscription_widget form').hide();
				$('#subscription_widget #thank_you_close_btn').show();
				}else{grecaptcha.reset();alert("Sorry, but the email address is not valid. Please check for typing errors and try again.");}
			});
		});
		</script></td></tr></table>

