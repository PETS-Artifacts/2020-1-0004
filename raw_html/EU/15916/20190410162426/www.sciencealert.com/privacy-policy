  jQuery.noConflict();
  jQuery(document).ready(function($) {
	 // Add the 'hover' event listener to our drop down class
	 $('.nav-text-sections').click(function() {
                        // When the event is triggered, grab the current element 'this' and
                        // find it's children '.sub_navigation' and display/hide them
			$(this).parent().parent().parent().find('.nav-dropdown').hide();
			$(this).parent().parent().next('.nav-text-dropdown').find('.parent-item:first').find('.child-navigation').show();
			$(this).parent().parent().next('.nav-text-dropdown').find('.arrow-button:first').attr({src:"https://www.sciencealert.com/images/sciencealert_system/white_arrow_down.png"});
			$(this).parent().parent().next('.nav-text-dropdown').slideToggle(100);

		});

		$('.toggle-icon').click(function() {
                        // When the event is triggered, grab the current element 'this' and
                        // find it's children '.sub_navigation' and display/hide them
						$(this).parent().next('.nav-text-dropdown').hide();		
			if ($(this).parent().next().next('.nav-dropdown').find('.parent-item-sections').css('display') == 'none') 
			{							
				$(this).parent().next().next('.nav-dropdown').find('.parent-item:first').find('.child-navigation').show();
				$(this).parent().next().next('.nav-dropdown').find('.parent-item:first').find('.arrow-button:first').attr({src:"https://www.sciencealert.com/images/sciencealert_system/white_arrow_down.png"});
			}
			else
			{
				$(this).parent().next().next('.nav-dropdown').find('.parent-item-sections').find('.child-navigation').show();
				$(this).parent().next().next('.nav-dropdown').find('.parent-item-sections').find('.arrow-button:first').attr({src:"https://www.sciencealert.com/images/sciencealert_system/white_arrow_down.png"});
			}
			$(this).parent().next().next('.nav-dropdown').slideToggle(100);

		});
		$('.parent-item-text').click(function() {
                        // When the event is triggered, grab the current element 'this' and
                        // find it's children '.sub_navigation' and display/hide them
			$(this).parent().find('.child-navigation').slideToggle(100);
			var src=$(this).find('img:first').attr('src');
			if (src == "https://www.sciencealert.com/images/sciencealert_system/white_arrow_right.png") {

				$(this).find('img:first').attr({src:"https://www.sciencealert.com/images/sciencealert_system/white_arrow_down.png"});
			}
			else if (src == "https://www.sciencealert.com/images/sciencealert_system/white_arrow_down.png")
				$(this).find('img:first').attr({src:"https://www.sciencealert.com/images/sciencealert_system/white_arrow_right.png"});

		});

		$('.fbbutton').click(function() {


		});
  });
</script>

