    <script type="text/javascript">
        function optimizeEvent(name) {
            window.dataLayer.push({'event': 'optimize.' + name});
        }

    
        function trackGAEvent(cat, action) {
            try {
                ga('send', 'event', cat, action);
                dataLayer.push ({
                    'event':'trackGAEvent',
                    'cat':cat,
                    'action':action,
                    'optLable':"",
                    'optValue':""
                });
            }
            catch(e) {
            }
        }

        function trackGAEventWithOption(cat, action, optLabel, optValue) {
            try {
                ga('send', 'event', cat, action, optLabel, optValue);
                dataLayer.push ({
                    'event':'trackGAEvent',
                    'cat':cat,
                    'action':action,
                    'optLable':optLable,
                    'optValue':optValue
                });
            }
            catch(e) {
            }
        }

        function trackGAIfEnabled(func) {
            try {
                func();
            }
            catch(e) {
            }
        }

        function trackGAReady(func) {
            try {
                ga(func);
            }
            catch(e) {
            }
        }

	    </script>

