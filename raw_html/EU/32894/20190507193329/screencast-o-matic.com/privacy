if (!(window.localStorage && window.localStorage['cookieagree'])) {
    // Show notice.  Define how it closes and when it should close.
    document.getElementById("tosbanner").style.bottom = "0";
    // Define public so the onclick of the X can agree
    window.agreeTos = function() {
        window.localStorage['cookieagree'] = 1;
        $("#tosbanner").remove();
        // To remove agreement, run localStorage.removeItem("cookieagree")
    }
    // Agree on link click
