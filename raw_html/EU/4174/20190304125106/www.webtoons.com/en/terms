<script type="text/javascript">
	window.recentBarPromise = $.Deferred();
	$(function() {
		// 최근본 웹툰 바가 필요 없는경우에만 window.needRecentBar=false 로 설정함
		if(typeof window.needRecentBar == 'undefined' || window.needRecentBar == true) {
			window.recentBarPromise.resolve(new RecentBar({
				imgDomain : 'https://webtoon-phinf.pstatic.net',
				language : 'en',
				title : 'Recently viewed',
				domain : 'www.webtoons.com',
				contentLanguage : 'en'
			}));
		}

		// 언어선택 함수
		var changeLanguageFunction = function(element) {
			var selected = $(element);
			if(selected.data('content-language') == 'zh-hans') {
				window.open('https://www.dongmanmanhua.cn');
				return;
			}
			Cookies.set('contentLanguage', selected.data('content-language'), {expires : 365, domain : 'webtoons.com'});
			Cookies.set('locale', selected.data('locale'), {expires : 365, domain : 'webtoons.com'});

			Util.checkLoginStatus()
					.then(function(isLoggedIn) {
						if(isLoggedIn) {
							return $.ajax('/account/changeEmailNotiSettingLanguage');
						}
					});

			if ((location.pathname.indexOf("/list") > -1 && location.pathname.indexOf("/challenge/list") == -1) || location.pathname.indexOf("/viewer") > -1) {
				location.href = '/' + selected.data('content-language');	// 홈으로 이동
			} else if(location.pathname == '/search') {
				location.reload();
			} else if(location.pathname == '/challenge/titleStat') {
				location.href = '/challenge/dashboard';
			} else {
				var newUrl = location.href.replace('/en', '/' + selected.data('content-language'))
				location.href = newUrl;
			}
		};

		// 언어 선택
		var contentLanguageCode = 'en';
		var languageArea = $('#languageArea');
		if(languageArea != null) {
			languageArea
					.on('click', '._selectedLanguage', function(event) {
						event.preventDefault();
						languageArea.find('._languageList').show();
					})
					.on('click', '._languageList ._language', function(event) {
						event.preventDefault();
						changeLanguageFunction(event.target);
						languageArea.find('._languageList').hide();
					});

			var selectedLanguage = languageArea.find('._languageList ._' + contentLanguageCode);
			languageArea.find('._selectedLanguage span').html(selectedLanguage.text());
		}

		// 언어 선택 팝업
		var proxyName = "";
		if((proxyName == "id" || proxyName == "th") && Cookies.get('contentLanguage') == null && location.href.indexOf('titleNo') < 0) {

			var selectLanguagePopupContent = Handlebars.compile($('#selectLanguagePopup').html())();
			var selectLanguagePopup = $("<div></div>").append(selectLanguagePopupContent);
			$(document.body).append(selectLanguagePopup);

			selectLanguagePopup
					.on("click", "input", function(event) {
						$('#selectLanguageLayer').find('label.ico_lang').removeClass('on');
						$(event.target.nextSibling).addClass('on');
					})
					.on("click", ".lk_ok", function(event) {
						event.preventDefault();
						var selected = $('#selectLanguageLayer').find('.ico_lang.on');
						if(!selected.length) {
							return;
						}

						changeLanguageFunction(selected[0]);
					});

			// 기본 언어 선택
			var defaultLanguageLabel = selectLanguagePopup.find('label._' + proxyName);
			if(defaultLanguageLabel.length) {
				defaultLanguageLabel.addClass('on');
				var defaultLanguageElement = defaultLanguageLabel.parent().parent();
				defaultLanguageElement.parent().first().prepend(defaultLanguageElement);
			}
		}

		// 타임존 쿠키
		var dateVar = new Date();
		var timezoneOffset = dateVar.getTimezoneOffset()/60 * (-1);
		if(timezoneOffset > 0) {
			timezoneOffset = "+" + timezoneOffset;
		}
		Cookies.set('timezoneOffset', timezoneOffset, {expires : 365, domain : 'webtoons.com'});

		$(window).on('pageshow', function() {
			try {
				lcs_do();
			} catch(e) {
				console.error(e);
			}
		});
	});

	$(window).on('load', function() {
		setTimeout(function() {
			window.recentBarPromise.then(function(recentBar) {
				recentBar.loadRecentWebtoon();
			})

			if (true && $('#noticeArea').length) {
				$.ajax('/en/notice')
						.then(function(res) {
							if (res) {
								var noticeTemplate = Handlebars.compile($('#tplNotice').html());
								$('#noticeArea').html(noticeTemplate(res)).show();
							}
						});
			}

		}, 1000);

		nclk_do();

	});

	
	window.defaultErrorMessage = {
		'alert.error.no_internet_connection' : 'No Internet Connection.\nPlease check the network connection.',
		'alert.error.invalid_input' : 'Invalid input value.',
		'alert.error.unknown' : 'Unknown error has occurred. Please try again in a moment.'
	};

	
	var contentLanguageCode = "en";
</script>

<script type="text/x-handlebars-template" id="tplNotice">
	<div class="notice_detail">
		<a href="https://www.webtoons.com/en/notice/list" class="notice_tit NPI=a:notlist,g:en_en">Notice<em class="ico_arr3">></em></a>
		<a href="https://www.webtoons.com/en/notice/detail?noticeNo={{noticeNo}}" class="notice_cont NPI=a:notpage,g:en_en"><span class="subj">{{title}}<em class="date">{{registerYmdt}}</em></span></a>
	</div>
</script>
