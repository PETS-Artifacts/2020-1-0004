<script type="text/javascript">
// iframe 어뷰징 사이트 대응
if (window.top != window) {
	var sHtml = jindo.$Element('abuseBlockLayer').html();
	jindo.$Element(document.body).empty().html(sHtml);
}
</script>






<script type="text/javascript">
jindo.$Fn(function() {
	jindo.$Fn(openFeedbackPopup).attach(jindo.$$('._linkCustomerService'), 'click');
	
	var welTermsButtons = jindo.$Element('termsButtons');
	welTermsButtons.attach({
		'click@ul li a' : onClickTermsButtons
	});
	
	function onClickTermsButtons(oEvent) {
		oEvent.stopDefault();
		
		changeTab(jindo.$Element(oEvent.element));
	}
	
	function openFeedbackPopup(oEvent) {
		oEvent.stopDefault();
		var sUrl = oEvent.element.href;
		var oPopup = window.open(sUrl, 'helpWindow', 'menubar=no,location=no,resizable=no,scrollbars=yes,status=no,width=450,height=600');
		oPopup.focus();
	}
	
	if(window.location.hash == '#privacyPolicy') {
		changeTab(jindo.$Element('termsButtons').query('li a[data-target=privacy]'));
	}
	
	function changeTab(welButton) {
		// 기존 선택 해제
		welTermsButtons.query('ul li.on').removeClass('on');
		// 새로 선택
		welButton.parent().addClass('on');
		jindo.$Element('txtBlind').text(welButton.text());
		// 내용 변경
		jindo.$ElementList('.terms_area').removeClass('on');
		jindo.$Element(welButton.data('target')).addClass('on');
	}
}).attach(document, 'domready');
</script>
</body>
</html>