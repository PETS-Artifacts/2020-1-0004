	(function() {
		var ajax = new XMLHttpRequest();
		ajax.open('GET', '/a/i/icons.ps5Q.svg');
		ajax.send();
		ajax.onload = function() {
			if (ajax.status !== 200) return Rollbar.error('Error fetching SVG sprite sheet (bad response)', { code: ajax.status });
			var div = document.createElement('div');
			div.style.display = 'none';
			div.innerHTML = ajax.responseText;
