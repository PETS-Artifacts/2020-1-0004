<script>

  _seAds["nativeAds"] = [];

  function SENativeAd(id, breakoutData) {
    this.iframe = document.getElementById(id);
    if(!this.iframe) {return;}
    this.breakout_container = $(this.iframe).closest('.ad-wrapper').find('.ad-breakout').filter(':visible')[0] || null;
    if(!this.breakout_container) {return;}

    this.iframe_body= this.iframe.contentDocument || this.iframe.contentWindow.document;
    this.iframe_content= this.iframe_body.getElementsByTagName('body')[0].innerHTML;

    this.breakout_str = "";
    this.breakoutData = breakoutData;

    this.breakOut(this.breakoutData && typeof this.breakoutData === "object");
  }
  SENativeAd.prototype = {
    buildBreakoutString: function() {
      var breakoutData = this.breakoutData;
      var breakout_str = this.breakout_str;

      var nww = window.innerWidth || document.documentElement.clientWidth || document.body.clientWidth;

      // Set shared HTML strings
      var bdLogoWrap = !!breakoutData['logoURL'] ? '<div class="ad-wrapper logo-sponsored"><img src="' + breakoutData['logoURL'] + '" alt="sponsor logo" /></div>' : '';
      var bdTracker = !!breakoutData['trackingURL'] ? '<img src="' + breakoutData['trackingURL'] + '" border="0" width="1" height="1" style="position:absolute;bottom:0;left:0;">' : '';


      if(breakoutData["type"] == "sponsored-post-block") {
        breakout_str = [
          '  <div class="module__wrapper">',
          '    <a class="module__image-container module__link" href="' + breakoutData['clickThroughLink'] + '">',
          '      <img class="module__image" data-ofi-src="' + breakoutData['imageURL'] + '" src="' + breakoutData['imageURL'] + '" data-pin-no-hover="true">',
          '    </a>',
          '    <div class="metadata">',
          '      <span class="category-link"><span>Sponsored</span></span>',
          '      <a class="module__link" href="' + breakoutData['clickThroughLink'] + '">',
          '        <h4 class="title">' + breakoutData['title'] + '</h4>',
          bdLogoWrap,
          '      </a>',
          '    </div>',
          '  </div>',
          bdTracker
        ].join("");
      }

      else if(breakoutData["type"] == "sponsored-post-sidebar") {
        // "sponsored-post-sidebar" type goes on sidebar (desktop) OR below all entries (mobile)
        if(nww && nww > 767) {

          // Set unshared HTML strings
          bdLogoWrap = !!breakoutData['logoURL'] ? '<div class="ad-wrapper logo-sponsored" style="top:10px;right:10px;width:84px;height:70px;"><img src="' + breakoutData['logoURL'] + '" alt="sponsor logo" /></div>' : '';

          breakout_str = [
            '<div class="module module-sponsored">',
            '  <div class="module__wrapper">',
            '    <a class="module__image-container module__link" href="' + breakoutData['clickThroughLink'] + '">',
            '      <img class="module__image" data-ofi-src="' + breakoutData['imageURL'] + '" src="' + breakoutData['imageURL'] + '" data-pin-no-hover="true">',
            '    </a>',
            '    <div class="metadata" style="margin-bottom:0;padding:0;background-color:transparent;">',
            '      <span class="category-link"><span>Sponsored</span></span>',
            '      <a class="module__link" href="' + breakoutData['clickThroughLink'] + '">',
            '        <h4 class="title">' + breakoutData['title'] + '</h4>',
            '      </a>',
            '    </div>',
            bdLogoWrap,
            '  </div>',
            '</div>',
            bdTracker
          ].join("");

        } else {

          // Set unshared HTML strings
          bdLogoWrap = !!breakoutData['logoURL'] ? '<div class="ad-wrapper logo-sponsored" style="float:right;width:60px;height:50px;"><img src="' + breakoutData['logoURL'] + '" alt="sponsor logo" /></div>' : '';

          breakout_str = [
            '<div class="block block-related block-thumbnails-medium" style="margin-bottom:0;">',
            '  <header class="block__header" style="height:50px;border-top:2px solid #EDBF36;padding-top:0.5em;">',
            '    <span style="float:left;line-height:50px;font-weight:bold;color:#EDBF36;text-transform:uppercase;">Sponsored</span>',
            bdLogoWrap,
            '  </header>',
            '  <div class="block-wrapper features" style="border-bottom:2px solid #EDBF36;">',
            '    <div class="module module-sponsored" style="margin-bottom:0.75em;">',
            '      <div class="module-wrapper">',
            '        <figure>',
            '          <a href="' + breakoutData['clickThroughLink'] + '">',
            '            <img data-ofi-src="' + breakoutData['imageURL'] + '" src="' + breakoutData['imageURL'] + '" data-pin-no-hover="true">',
            '          </a>',
            '        </figure>',
            '        <div class="metadata" style="margin-left:45%;width:auto;">',
            '          <a href="' + breakoutData['clickThroughLink'] + '" style="display:block;">',
            '            <h4 class="title">' + breakoutData['title'],
            '              <span style="display:block;font-weight:bold;color:#FF3600;">View Post</span>',
            '            </h4>',
            '          </a>',
            '        </div>',
            '      </div>',
            '    </div>',
            '  </div>',
            '</div>',
            bdTracker
          ].join("");
        }
      }

      else if(breakoutData["type"] == "collection") {

        // Set unshared HTML strings
        var bdLeader = !!breakoutData['leader'] ? '<p class="text__leader">' + breakoutData['leader'] + '</p>' : '';
        var bdFollower = !!breakoutData['follower'] ? '<p class="text__follower">' + breakoutData['follower'] + '</p>' : '';
        bdLogoWrap = !!breakoutData['logoURL'] ? '<div style="line-height:0;padding-bottom:4%;"><img src="' + breakoutData['logoURL'] + '" alt="sponsor logo" /></div>' : '';
        breakoutData['buttonText'] = !!breakoutData['buttonText'] ? breakoutData['buttonText'] : "Visit Page";
        breakoutData['fontSizeTitle'] = !!breakoutData['fontSizeTitle'] ? breakoutData['fontSizeTitle'] : "1.5em";

        breakout_str = [
          '<div class="module promo-footer responsive promo-sidebar" style="background-image: url(\'' + breakoutData['imageURL'] + '\');margin:0 auto 1em;">',
          '  <a class="promo-footer__link" href="' + breakoutData['clickThroughLink'] + '">',
          '    <div class="text-box no-blurb">',
          '      <div class="stripes" style="min-height:0px;height:auto;">',
          '        <div class="centering">',
          bdLeader,
          '          <p class="text__main" style="font-size:' + breakoutData['fontSizeTitle'] + ';font-weight:bold;font-family:\'brandon-grotesque\', \'effra\', \'Avenir\', \'Helvetica Neue\', \'Helvetica\', Arial, sans-serif;text-transform:uppercase;line-height:1.1;">' + breakoutData['title'] + '</p>',
          bdFollower,
          '        </div>',
          '      </div>',
          '      <button class="promo-footer__button btn">' + breakoutData['buttonText'] + '</button>',
          '    </div>',
          '  </a>',
          bdLogoWrap,
          '</div>',
          bdTracker
        ].join("");
      }

      else if(breakoutData["type"] == "sponsored-search") {

        // Set unshared HTML strings
        var bdDescription = !!breakoutData['description'] ? '<p class="excerpt">' + breakoutData['description'] + '</p>' : '';

        breakout_str = [
          '<div class="module module-sponsored">',
          '  <div class="module__wrapper">',
          '    <a class="module__image-container module__link" href="' + breakoutData['clickThroughLink'] + '">',
          '      <img class="module__image" data-ofi-src="' + breakoutData['imageURL'] + '" src="' + breakoutData['imageURL'] + '" data-pin-no-hover="true">',
          '    </a>',
          '    <div class="metadata">',
          '      <a class="module__link" href="' + breakoutData['clickThroughLink'] + '">',
          '        <h4 class="title">' + breakoutData['title'] + '</h4>',
          bdDescription,
          '      </a>',
          bdLogoWrap,
          '    </div>',
          '  </div>',
          bdTracker,
          '</div>'
        ].join("");
      }
      this.breakout_str = breakout_str;
    },
    scrubBreakoutData: function() {
      var breakoutData = this.breakoutData;
      // Variables from DFP
      var bdShouldHave = [
        {name: 'type', reqd: true},
        {name: 'title', reqd: true},
        {name: 'clickThroughLink', reqd: true},
        {name: 'imageURL', reqd: true},
        {name: 'leader', reqd: false},
        {name: 'follower', reqd: false},
        {name: 'description', reqd: false},
        {name: 'buttonText', reqd: false},
        {name: 'fontSizeTitle', reqd: false},
        {name: 'logoURL', reqd: false},
        {name: 'trackingURL', reqd: false}
      ];
      // Check if any don't exist or are falsey
      for(var i=0;i<bdShouldHave.length;i++) {
        if( !breakoutData.hasOwnProperty(bdShouldHave[i]['name']) || 
            !breakoutData[bdShouldHave[i]['name']] || 
            !(breakoutData[bdShouldHave[i]['name']].length > 0) ) {
          // If required, short circuit
          if(bdShouldHave[i]['reqd']) {return;}
          // If not required, set to null for easier checking later
          breakoutData[bdShouldHave[i]['name']] = null;
        }
      }
      this.breakoutData = breakoutData;
    },
    breakOut: function(hasBreakoutData) {
      var sena = this;
      if(hasBreakoutData) {
        sena.scrubBreakoutData();
        sena.buildBreakoutString();
      }
      var breakout_str = sena.breakout_str,
          breakoutData = sena.breakoutData,
          breakout_container = sena.breakout_container,
          iframe_content = sena.iframe_content;
      if(breakout_str != "" && breakoutData["type"] && breakoutData["type"] == "sponsored-search") {
        $(breakout_container).siblings('.auto-ad').hide();
      }

      if(breakout_str != "" && breakoutData["type"] && breakoutData["type"] == "sponsored-post-block") {
        var $breakout_parent_mod = $(breakout_container).closest('.module');
        $('<div>').addClass('module module-sponsored').html(breakout_str + iframe_content).insertAfter($breakout_parent_mod);
        $breakout_parent_mod.find('.ad-wrapper.ad-native.ad-module-pst').remove();
      } else {
        breakout_container.innerHTML = breakout_str + iframe_content;
      }

      if(typeof objectFitImages === "function") {
        var $moduleImages = $('.module-sponsored img.module__image');
        objectFitImages($moduleImages);
      }
    }
  };
  // TODO: Add in second argument here once *ALL* ads running this function are using JS object; take out arguments language below
  function native_breakout(id) {
    var args = Array.prototype.slice.call(arguments);
    while(args.length < 2) {
      args.push(null);
    }
    var newSENativeAd = new SENativeAd(args[0], args[1]);
    _seAds["nativeAds"].push(newSENativeAd);
  }
</script>



