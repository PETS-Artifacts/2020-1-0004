				document.cookie = 'accept_cookies=true; expires='+date.toGMTString()+'; path=/; domain=.anydesk.com';
				location.reload();
			});
			
			$('#cookieSettingsOptOut').click(function() { 
				// clear cookies
				var cookies = document.cookie.split(";");
			    for(var i = 0; i < cookies.length; i++) {
			    	var key = cookies[i].split("=");
			        document.cookie = key[0]+"=;expires=Thu, 01 Jan 1970 00:00:00 UTC;path=/;domain=.anydesk.com";
			    }
				
				// set only cookie
				var date = new Date();
				date.setTime(date.getTime() + (365 * 24 * 60 * 60 * 1000));
				document.cookie = 'accept_cookies=false; expires='+date.toGMTString()+'; path=/; domain=.anydesk.com';
				location.reload();
			});
		});</script>
			</div>
	</body>
</html>
