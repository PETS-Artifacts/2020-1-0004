    <script type='text/javascript'>
      // Only init liveagent if the above script has loaded and liveagent var is defined
      var repeatsCount = 0;
      var maxRepeatsCount = 20;
      var timeoutRef = null;

      function initLiveagent() {
        // console.info('initLiveagent');

        repeatsCount += 1;
        if (repeatsCount > maxRepeatsCount) {
          clearInterval(timeoutRef);
        }

        if (typeof(window.liveagent) !== 'undefined') {
          liveagent.addCustomDetail('CaseOrigin', 'Web Chat - GBR');
          liveagent.addCustomDetail('CaseCurrency', 'GBP');
          liveagent.addCustomDetail('Locale', 'en_GB');


          liveagent.init('https://d.la1-c2-lon.salesforceliveagent.com/chat', '57220000000fxSa', '00D20000000njW3');
          // console.info('initLiveagent DONE!');

          clearInterval(timeoutRef);
        }
      }

      timeoutRef = setInterval(initLiveagent, 1000);
    </script>
