var dimensionValue = 'privacy';
ga('set', 'dimension1', dimensionValue);
ga('send', 'pageview');

/**
* Function that tracks a click on an outbound link in Google Analytics.
* This function takes a valid URL string as an argument, and uses that URL string
* as the event label.
*/
var trackOutboundLink = function(link, url) {

   ga('send', 'event', 'outbound', 'click', link.href, {'hitCallback':
     function () {
	 //console.log( url + link.href + link.target);
     //document.location = url;
	 if (!link.target || link.target.match(/^_(self|parent|top)$/i)){
			return false;
			setTimeout(function() { document.location = link.href }, 100);
		} else {
			return true;
		}
     }
   });
}
var relatedLink = function(link, url) {

   ga('send', 'event', 'related', 'click', link.href, {'hitCallback':
     function () {
	 //console.log( url + link.href + link.target);
     //document.location = url;
	 if (!link.target || link.target.match(/^_(self|parent|top)$/i)){
			return false;
			setTimeout(function() { document.location = link.href }, 100);
		} else {
			return true;
		}
     }
   });
}
