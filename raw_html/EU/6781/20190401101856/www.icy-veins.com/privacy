  if (icy_veins_force_desktop) {
    jQuery(".nav_entry.nav_entry_with_content>a").on("touchstart", function(e) {
      if (jQuery(this).parent().hasClass('nav_entry_active')) {
        jQuery(this).parent().removeClass('nav_entry_active');
        return false;
      } 
      else {
        jQuery(this).parent().addClass('nav_entry_active');
        jQuery(".nav_entry").not(jQuery(this).parent()).removeClass('nav_entry_active');
        return false;
      }
    });
  }

  function set_focus_search_field() {
    if (jQuery("input.gsc-input").length == 0) {
      setTimeout(function() { set_focus_search_field(); }, 200);
    } else {
      jQuery("input.gsc-input").first().focus();
    }
  }

