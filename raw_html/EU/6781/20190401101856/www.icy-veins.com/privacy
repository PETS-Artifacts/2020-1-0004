// Delete legacy data
if (window.localStorage.premium_information) {
  window.localStorage.removeItem('premium_information');
}

function writeToLocalStorage(key, content) {
  try {
    window.localStorage.setItem(key, content);
  } catch(e) {
    for (var i = 0; i < window.localStorage.length; i++) {
      current_key = window.localStorage.key(i);
      if (current_key != 'premium_tracking' && current_key != 'premium_origin') {
        window.localStorage.removeItem(current_key);
      }
    }
    window.localStorage.setItem(key, content);
  }
}
// Only run for non-premium users
if (!getCookie('ips4_member_premium')) {
  // Config for personalized premium message, based on most visited section
  var premium_config = { 
    'banner_suffixes' : {
      'default': 'default', // in case of a problem
      'iv': 'default',
      'wow': 'default',
      'd3': 'default',
      'heroes': 'default',
      'hearthstone': 'default',
      'sc2': 'default',
      'overwatch': 'default',
    }
  }
  // init premium_tracking
  var premium_tracking = null;
  if (window.localStorage.premium_tracking) {
    premium_tracking = JSON.parse(window.localStorage.getItem('premium_tracking'));
  } else {
    premium_tracking = {
      '3_month_views': {
      },
      'views': {
      }
    };
  }
  // adding the page view for the right directory
  var directory = dataLayer[0]['directory'];
  var current_date = new Date();
  premium_tracking['views'][directory] = premium_tracking['views'][directory] || {};
  var current_month = current_date.getMonth();
  var current_year = current_date.getFullYear();
  var current_month_key = current_year.toString() + "-" + current_month.toString();
  premium_tracking['views'][directory][current_month_key] = premium_tracking['views'][directory][current_month_key] || 0;
  premium_tracking['views'][directory][current_month_key] += 1;
  premium_tracking['3_month_views'][directory] = premium_tracking['3_month_views'][directory] || 0;
  premium_tracking['3_month_views'][directory] += 1;
  // deleting data from 3 months ago or more, if it exists
  for (var key_directory in premium_tracking['views']) {
    for (var key_date in premium_tracking['views'][key_directory]) {
      value = premium_tracking['views'][key_directory][key_date];
      month = parseInt(key_date.split("-")[1]);
      year = parseInt(key_date.split("-")[0]);
      if (year * 12 + month < current_year * 12 + current_month - 2) {
        delete premium_tracking['views'][key_directory][key_date];
        premium_tracking['3_month_views'][key_directory] -= value;
      }
    }
  }
  // Select most visited section of the site
  var most_visited_directory = null;
  for (var key_directory in premium_tracking['3_month_views']) {
    if (most_visited_directory === null || premium_tracking['3_month_views'][key_directory] > premium_tracking['3_month_views'][most_visited_directory]) {
      most_visited_directory = key_directory;
    }
  }

  if ((!premium_tracking['next_display'] || new Date(premium_tracking['next_display']) < current_date) && window.innerWidth >= 1070) {
    // Determine which banner to get
    banner_suffix = 'default';
    rand = Math.random();
    if (rand < 0.3333333) {
      banner_suffix = 'default-02';
    } else if (rand < 0.6666666) {
      banner_suffix = 'frosty-chest';
    }
    jQuery.get("/premium-" + banner_suffix, function(data) {
      jQuery("#premium_information").html(data);
      jQuery("#premium_information_close").click(function() {
        jQuery("#premium_information").hide();
      });
      jQuery("#premium_information").show();
      dataLayer.push({
        'event': 'premium_banner',
        'banner': banner_suffix
      });
      premium_tracking['next_display'] = current_date;
      premium_tracking['next_display'].setMonth(premium_tracking['next_display'].getMonth()+1);
      writeToLocalStorage('premium_tracking', JSON.stringify(premium_tracking));
    });
  } else {
      writeToLocalStorage('premium_tracking', JSON.stringify(premium_tracking));
  }
}
      //]]>
