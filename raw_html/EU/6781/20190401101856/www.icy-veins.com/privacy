  });
  jQuery("body").click(function(e) {
    if (jQuery("#elUserSignIn_menu").is(":visible") && e.target.getAttribute("id") != "elSignInLink") {
      element = e.target;
      while (element.getAttribute("id") != "elUserSignIn_menu" && element.nodeName.toLowerCase() != "body") {
        element = element.parentElement;
      }
      if (element.getAttribute("id") != "elUserSignIn_menu") {
        jQuery("#elUserSignIn_menu").hide();
      }
    }
  });
  jQuery("#elUserLink").click(function(e) {
    if (jQuery("#elUserLink_menu").is(":visible")) {
