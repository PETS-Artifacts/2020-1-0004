  if (jQuery("#mobile_menu_button_show").css('display') == 'none' && !navigator.userAgent.match(/Android.*Chrome/)) {
    var minified = false;
    var scroll_distance = 86;
    jQuery(window).scroll(function (event) {
      if (window.icy_veins_disable_minified_menu) {
        jQuery("#header").removeClass("minified");
        jQuery("#nav").removeClass("minified");
        if (window.location.pathname.match(/^\/hearthstone/)) {
          jQuery("#nav_classes").removeClass("minified");
        }
        jQuery("#padding_for_minified_menu").css("height", "auto");
        minified = false;
      } else if (jQuery("#nav").length > 0) {
        if (jQuery(this).scrollTop() > scroll_distance && minified == false) {
        jQuery("#header").addClass("minified");
        jQuery("#nav").addClass("minified");
        if (window.location.pathname.match(/^\/hearthstone/)) {
          jQuery("#nav_classes").addClass("minified");
        }
        jQuery("#padding_for_minified_menu").css("height", "172px");
        minified = true;
        } else if (jQuery(this).scrollTop() <= scroll_distance && minified == true) {
          jQuery("#header").removeClass("minified");
          jQuery("#nav").removeClass("minified");
          if (window.location.pathname.match(/^\/hearthstone/)) {
            jQuery("#nav_classes").removeClass("minified");
          }
          jQuery("#padding_for_minified_menu").css("height", "auto");
          minified = false;
        }
      } else {
        if (jQuery(this).scrollTop() > 80 && minified == false) {
        jQuery("#header").addClass("minified");
        jQuery("#nav").addClass("minified");
        if (window.location.pathname.match(/^\/hearthstone/)) {
          jQuery("#nav_classes").addClass("minified");
        }
        jQuery("#padding_for_minified_menu").css("height", "130px");
        minified = true;
        } else if (jQuery(this).scrollTop() <= 80 && minified == true) {
          jQuery("#header").removeClass("minified");
          jQuery("#nav").removeClass("minified");
          if (window.location.pathname.match(/^\/hearthstone/)) {
            jQuery("#nav_classes").removeClass("minified");
          }
          jQuery("#padding_for_minified_menu").css("height", "auto");
          minified = false;
        }
      }
    });
  }
