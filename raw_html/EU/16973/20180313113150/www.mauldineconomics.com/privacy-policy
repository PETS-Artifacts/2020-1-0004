    	function validateEmail(email) {
          var re = /^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
          return re.test(email);
        }
    }
	var renderGoogleInvisibleRecaptcha = function() {
      for (var i = 0; i < document.forms.length; ++i) {
        var form = document.forms[i];
        var holder = form.querySelector('.recaptcha-holder');
        if (null === holder){
          holder = form.querySelector('.g-recaptcha');
          if(null != holder) {
          	holder.setAttribute('id', 'recaptcha' + i);
            grecaptcha.render('recaptcha' + i, {
              'sitekey' : '6Lc9LA0UAAAAAFl5Da8mz2cW7KdSs4ta_6Tjioqj', 
              'theme' : (holder.getAttribute('data-theme') ? holder.getAttribute('data-theme') : 'light'),
              'size' : (holder.getAttribute('data-size') ? holder.getAttribute('data-size') : 'normal'),
            });
            }

        } else {

          (function(frm){

            var holderId = grecaptcha.render(holder,{
              'sitekey': '6LcxIBsUAAAAAG6g2GjL1QKNwA65fhRdwRFNuqL-',
              'size': 'invisible',
              'badge' : 'bottomright', // possible values: bottomright, bottomleft, inline
              'callback' : function (recaptchaToken) {
              	if(jQuery(frm).hasClass('subscribe_form_ajax') && typeof('submitForm') != 'undefined') {submitForm(frm);} else {HTMLFormElement.prototype.submit.call(frm);}
              }
            });
            
            
            
            var newEl = document.createElement('input');
            newEl.setAttribute('name', 'g-recaptcha-invisible');
            newEl.setAttribute('type', 'hidden');
            newEl.setAttribute('value', '1');

			holder.parentNode.insertBefore(newEl, holder.nextSibling);

            frm.onsubmit = function (evt){
              evt.preventDefault();
              if(typeof(this.email.value) != 'undefined' && this.email.value && validateEmail(this.email.value))
                  grecaptcha.execute(holderId);
            };

          })(form);
        }
      }
    };


