//<![CDATA[

  var triggerSuccess = function(){
    if (document.location.pathname.match(/^\/login|^\/register/))
    {
      window.location.replace('/');
    }
    else
    {
      window.location.reload(true);
    };
  };
  var triggerFailure = function(){
    window.location.reload(true);
  };

  window.idAsyncInit = function(){
    var query = document.location.search.substring(1);
    var obj = {}, vars = query.split('&');
    var pairs, key, val, ln = vars.length, enableTrack = false;

    if (ln > 0) {
      for (var i = 0; i < ln; i++) {
        pairs = vars[i].split('=');
        key = decodeURIComponent(pairs[0]);
        val = decodeURIComponent(pairs[1]);

        if (key === 'utm_source') {
          enableTrack = true;
        }

        obj[key] = val;
      }
      enableTrack && ID.track && ID.track(obj);
    }

    // Use an idnet event to wait until after init
    // CF http://dev.id.net/docs/javascript/the-basics/
    //
    ID.Event.subscribe('id.init', function() {
      // Any other script may listen to that event and wait for IdNet
      // initialization:
      //
      //   $(window).on('id.init', function() {
      //     // some idnet related code
      //   });
      //
      $(window).trigger('id.init');

      $('.idnet-fast-login-link').on('click', function(){
        ID.login();
      });
      $('.idnet-fast-register-link').on('click', function(){
        ID.register();
      });
      $('.idnet-fast-login-link').on('click', function() {
        _gaq.push (['_trackEvent', 'Authentication', 'login']);
      });
      $('.idnet-fast-register-link').on('click', function() {
        _gaq.push (['_trackEvent', 'Authentication', 'register']);
      });
    });

    ID.init({
     appId: '4fbb62b133968d57c10041b0',
     redirectUri: document.location.protocol + '//' + document.location.host + '/auth/idnet/callback',
     responseType: 'code'
    });
  };
  (function () {
    var idnet = document.createElement('script');
    idnet.type = 'text/javascript';
    idnet.async = true;
    idnet.sucess = triggerSuccess;
    idnet.error = triggerFailure;
    idnet.src = 'http://cdn.id.net/api/sdk.js';
    var s = document.getElementsByTagName('script')[3];
    s.parentNode.insertBefore(idnet, s);
  })();

//]]>
</script>
