<script type="text/javascript">
    $(document).ready(function () {        
        var timer = null;

        $('#635951044308730472_searchButton').click(function () {
            if ($('#searchOption').find('option:selected').val() == '5') {
                window.location.href = '/search?tab=General&searchQuery=' + $('#635951044308730472_searchQuery').val();
            } else {
                $('#635951044308730472_searchQuery').keyup();
            }
        });
        
        $.widget("custom.catcomplete", $.ui.autocomplete, {
            _renderMenu: function (ul, items) {
                var self = this,
		        currentCategory = "";
                $.each(items, function (index, item) {
                    if (item.category != currentCategory) {
                        ul.append("<li class='ui-autocomplete-category'>" + item.category + "</li>");
                        currentCategory = item.category;
                    }
                    self._renderItem(ul, item);
                });
            }
        });

        $('#635951044308730472_searchQuery').keyup(function (e) {

            if (e.which < 37 || e.which > 40 || e.which == undefined) {//ignore arrow keys or search is initialized from the search button

                if ($('#searchOption').find('option:selected').val() != '5') {
                    if ($.trim($('#635951044308730472_searchQuery').val()) != "") {
                        $('#635951044308730472_searchQuery').css("background", "white url('/images/ui-anim_basic_16x16.gif') 90% center no-repeat");
                        clearTimeout(timer);
                        timer = setTimeout(LoadSymbols, 500);
                    } else {
                        $('#635951044308730472_searchQuery').css("background", "white");
                    }
                }
                else {
                    $('ul[role="listbox"][aria-activedescendant="ui-active-menuitem"]').html('');
                }
            }
        });

        function LoadSymbols() {

            var searchQuery = $.trim($('#635951044308730472_searchQuery').val());

            if (searchQuery != "") {
                $.getJSON("/admin/search/GetSearchResults?value=" + searchQuery + "&selectedOption=" + $('#searchOption').find('option:selected').val(), function (data) {
                    if ($('#searchOption').find('option:selected').val() != '5')
                    {
                        $('#635951044308730472_searchQuery').css("background", "white");
                        $("#635951044308730472_searchQuery").catcomplete({
                            delay: 0,
                            source: data,
                            minLength : 0,
                            select: function (event, ui) { window.location.href = "http://" + ui.item.url; }
                        });

                        $('#635951044308730472_searchQuery').css("background", "white");

                        $('#635951044308730472_searchQuery').catcomplete("search", "");
                    }
                    else{
                        //window.location.href = '/search?tab=General&searchQuery=' + $('#635951044308730472_searchQuery').val();
                        $('ul[role="listbox"][aria-activedescendant="ui-active-menuitem"]').html('');
                    }
                });
            }

        }

        $('#searchOption').change(function () {
            var placeholder = $(this).find('option:selected').attr('data-placeholder');
            $('.holder').attr('placeHolder', placeholder);
        });

    });

</script>
