function grecaptchaValidationEvol(){  
	var response=grecaptcha.getResponse(getCapt);
	if(response.length == 0) { 
		alert('Please click the reCAPTCHA checkbox');
		return false;
	}
	return true;    
}
function grecaptchaValidationCes2019(){  
    var response=grecaptcha.getResponse(getCapt2);
    if(response.length == 0) { 
        alert('Please click the reCAPTCHA checkbox');
        return false;
    }
    return true;    
}
function grecaptchaValidationMarchMad(){  
    var response=grecaptcha.getResponse(getCapt3);
    if(response.length == 0) { 
        alert('Please click the reCAPTCHA checkbox');
        return false;
    }
    return true;    
}

var onloadCallback = function() { 
    getCapt = grecaptcha.render('recaptcha1', { 'sitekey' : '6Ldv3mwUAAAAACKbjI8-qacDQ_fqG6s7Ne_6fJwT', 'theme' : 'light' });  
    getCapt2 = grecaptcha.render('recaptcha2', { 'sitekey' : '6Ldv3mwUAAAAACKbjI8-qacDQ_fqG6s7Ne_6fJwT', 'theme' : 'light' });  
	getCapt3 = grecaptcha.render('recaptcha3', { 'sitekey' : '6Ldv3mwUAAAAACKbjI8-qacDQ_fqG6s7Ne_6fJwT', 'theme' : 'light' });	
};

</script>		

