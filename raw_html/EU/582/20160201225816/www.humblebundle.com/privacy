  flash.show();

  setTimeout(function() {
    flash.fadeOut();
  },5000);
}

function set_flash(message) {
  $.cookie('hbflash', message, {path: '/'});
}

$(function(){
  function show_flash(message){
    flash.text(message)
    flash.show();

    setTimeout(function() {
      flash.fadeOut();
    },5000);
  }

  var flashmessage = $.cookie('hbflash');
  if (flashmessage == 'None') {
    flashmessage = '';
  }

  if (flashmessage) {
    show_flash(flashmessage);
    $.cookie('hbflash', 'None', {path: '/'});
  }

  flash.click(function(){
    flash.fadeOut();
  });
});
(function() {
  var Dropdown = (function() {
    // Model: Setup
    function Dropdown(options) {
      this.el = {
        toggle: document.querySelector(options.toggleTag),
        container: document.querySelector(options.containerTag)
      };


      ///
      /// Dropdown A/B Test
      ///
      // Whether we should show a notification to the user
      this.show_notification = false;
      // Whether we should record metrics for the user
      this.record_metrics = false;
      // Map from analytics string to the coupon it's relevant for
      var AnalyticsCouponTypes = {
        'notification': 'abtest_coreplatform_notify',
        'nonotification': 'abtest_coreplatform_nonotify'
      }
      this.notification_analytics_status = {
        'served': false,
        'clicked_menu': false,
        'clicked_coupons': false
      };
      var that = this;
      // Only make request if we have a logged-in user...
      if ($('.navbar-item-dropdown.navbar-user-item a.account-login').length === 0) {
        $.ajax({
          url: '/store/coupons?affiliate=humblebundle',
          method: 'GET',
          dataType: 'json',
          success: function(coupons) {
            // Collect machine names of all the coupons we have
            var definitions = [];
            for(var idx in coupons) {
              var coupon = coupons[idx];
              definitions.push(coupon.coupon_definition);
            }
            // Based on the coupon's machine names, determine what we're doing
            if (definitions.indexOf(AnalyticsCouponTypes.notification) !== -1) {
              that.show_notification = true;
              that.record_metrics = true;
            } else if (definitions.indexOf(AnalyticsCouponTypes.nonotification) !== -1) {
              that.record_metrics = true;
            }
            if (that.record_metrics) {

              $(that.el.container).find('a[href="/home/coupons"]').bind('click', function() {
                if (!that.notification_analytics_status['clicked_coupons']) {
                  var metric_type = that.show_notification ?
                    'clicked coupon menu (notification)' : 'clicked coupon menu (no notification)';
                  _gaTrackEvent('coreplatform-notification-ab-test-extended', metric_type);
                  that.notification_analytics_status['clicked_coupons'] = true;
                }
              });

              if (!that.notification_analytics_status['served']) {
                var metric_type = that.show_notification ? 'notification shown' : 'notification hidden';
                _gaTrackEvent(
                  'coreplatform-notification-ab-test-extended',
                  metric_type
                );
                that.notification_analytics_status['served'] = true;
              }
            }

            if (that.show_notification) {
              $(that.el.toggle)
                .find('.js-navbar-coupon-count')
                .text(definitions.length)
                .css({
                  'display': 'inline-block'
                })
                .parent('.navbar-item-dropdown-toggle')
                  .addClass('coupon-count-adjustment');
              $(that.el.container)
                .find('.js-navbar-coupon-count')
                .text(definitions.length)
                .css({
                  'display': 'inline-block'
                })
                .parent('a')
                  .addClass('coupon-count-adjustment');
            }
          }
        });
      }

      this.events = {
        toggleClick: (function(_this) {
          return function(event) {
            event.stopPropagation();
            event.preventDefault();
            _this.toggleState();
            _this.render();
            if (_this.record_metrics && !_this.notification_analytics_status['clicked_menu']) {
              var notificationItem = _this.show_notification ? 'clicked user menu (notification)' : 'clicked user menu (no notification)';
              _gaTrackEvent(
                'coreplatform-notification-ab-test-extended',
                notificationItem
              );
              _this.notification_analytics_status['clicked_menu'] = true;
            }
            if (_this.visible) {
              return _this.bindToDocument();
            } else {
              return _this.unbindToDocument();
            }
          };
        })(this),
        hide: (function(_this) {
          return function(event) {
            _this.visible = false;
            _this.render();
            return _this.unbindToDocument();
          };
        })(this)
      };

      if (_.has(options, 'visible')) {
        this.visible = options.visible;
      } else {
        this.visible = true;
      }
      if (options.hiddenClass) {
        this.hiddenClass = options.hiddenClass;
      } else {
        this.hiddenClass = 'is-hidden';
      }
      this.validateOptions().bind().render();
    }

    Dropdown.prototype.validateOptions = function() {
      var messages;
      messages = {
        toggleNotFound: "Toggle element not found",
        containerNotFound: "Container element not found"
      };
      if (!this.el.toggle) {
        throw new Error(messages.toggleNotFound);
      }
      if (!this.el.container) {
        throw new Error(messages.containerNotFound);
      }
      return this;
    };

    Dropdown.prototype.remove = function() {
      this.unbind();
      delete this.el;
      delete this.events;
      return this;
    };


    // Ctrl: Event handling
    Dropdown.prototype.bind = function() {
      this.el.toggle.addEventListener('click', this.events.toggleClick);
      return this;
    };

    Dropdown.prototype.unbind = function() {
      this.el.toggle.removeEventListener('click', this.events.toggleClick, false);
      return this;
    };

    Dropdown.prototype.bindToDocument = function() {
      document.addEventListener('click', this.events.hide);
      return this;
    };

    Dropdown.prototype.unbindToDocument = function() {
      document.removeEventListener('click', this.events.hide, false);
      return this;
    };

    // Ctrl: State handling
    Dropdown.prototype.toggleState = function() {
      this.visible = !this.visible;
      return this;
    };


    // View: DOM manipulation
    Dropdown.prototype.render = function() {
      if (this.visible) {
        this.$show();
      } else {
        this.$hide();
      }
      return this;
    };

    Dropdown.prototype.$hide = function() {
      if (!_.contains(this.el.container.classList, this.hiddenClass)) {
        this.el.container.classList.add(this.hiddenClass);
      }
      return this;
    };

    Dropdown.prototype.$show = function() {
      if (_.contains(this.el.container.classList, this.hiddenClass)) {
        this.el.container.classList.remove(this.hiddenClass);
      }
      return this;
    };

    return Dropdown;

  })();

  if (document.querySelector(".navbar-item-dropdown-toggle")) {
    var d = new Dropdown({
      toggleTag: ".navbar-item-dropdown-toggle",
      containerTag: ".navbar-item-dropdown-container",
      fadeTime: 200,
      visible: false
    });
    d.render();
  }

}).call(this);
