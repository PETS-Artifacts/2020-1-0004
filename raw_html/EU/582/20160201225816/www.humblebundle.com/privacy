<script>
(function($) {
  // XXX: LEGACY
  $('body').on('click', '.grayout a.cancel, .grayout-inner', function(e){
    // Clicking outside the dialog or clicking the cancel button should hide the dialog (but not clicking within the dialog)
    if ($(this).hasClass('cancel') || $(this).hasClass('grayout-inner')) {
      e.preventDefault();
      if ($(this).data('goto')) {
        window.location = $(this).data('goto');
      }
      $('.grayout, .arrow-error, .generic-popup.outer-shadow, .download-popup').fadeOut();
      $('.generic-popup input[type="text"], .generic-popup input[type="password"]').val('').blur();
      $('.generic-popup .account-infield').fadeIn();
    }
  });


  var Accounts = {},
      Modals = {},
      modals,
      BaseModal, BaseAccountModal,
      AccountMessageModal, AccountLoginModal,
      AccountSignUpModal, AccountPasswordResetModal,
      AccountHumbleGuardModal;

  /**
   * Modals
   */
  BaseModal = Modals.BaseModal = Backbone.Modal.extend({
    prefix: 'generic-bbm',

    submitEl: '.js-submit',
    cancelEl: '.js-cancel',

    initialize: function (options) {
      this.options = options || {};
    },

    onClose: function () {
      var gotoHref = this.$('.js-cancel').data('goto');
      if (gotoHref) {
        window.location = gotoHref;
      }
    },

    triggerSubmit: function(e) {
      if (!e) {
        return;
      }
      if (e != null) {
        e.preventDefault();
      }
      if (this.beforeSubmit) {
        if (this.beforeSubmit() === false) {
          return;
        }
      }

      if (typeof this.asyncSubmit === "function") {
        return this.asyncSubmit(e);
      }

      if (typeof this.submit === "function") {
        this.submit();
      }
      if (this.regionEnabled) {
        return this.trigger('modal:close');
      } else {
        return this.close();
      }
    }
  });

  BaseAccountModal = Modals.BaseAccountModal = BaseModal.extend({
    onRender: function () {
      _.extend(this, {
        $toSlideDown: this.$('.slide-down'),
        $form: this.$("form")
      });
      if (this.options.required){
        this.$(this.cancelEl).hide();
      }

      this.$toSlideDown.css('display','none');

      // Set next url
      var gotoInput = this.$('input[name=goto]');
      if (gotoInput && gotoInput.val() == '') {
        if (this.options.gotoHref) gotoInput.val(this.options.gotoHref);
      }
      var that = this;
      this.$('.js-show-2fa').click(function(e) {
        e.preventDefault();
        that._show_authy();
      });
      this.$form.keypress(function(e) { if (e.which == 13) e.preventDefault(); });
    },
    beforeCancel: function (){
      if (this.options.required){
        return false;
      }
      return true;
    },
    onRendered: function () {
      var isIos = /(iPod|iPhone|iPad)/.test(navigator.userAgent);
      if (isIos) {
        this.$('input').focus(function (e) {
          $(e.target).closest('.generic-bbm-wrapper').css('max-height', document.documentElement.clientHeight);
        });
      }

      // Apply in-field labels
      this.$('.account-infield').inFieldLabels({
        fadeOpacity:0.6,
        fadeDuration:250,
        hideDuration:200
      });

      // Slide down areas
      this.$toSlideDown.slideDown('fast');

      // Focus when needed
      this.$('.js-focus').focus();

      //This works around an iOS bug where every time the DOM is updated,
      //any active paste interactions get cancelled. Timers update the DOM every
      //half second, making it impossible to paste a password in.
      if(window.pause_timers){
        window.pause_timers();
      }
    },

    onClose: function() {
      if(window.resume_timers){
        window.resume_timers();
      }
      BaseModal.prototype.onClose.apply(this, arguments);
    },

    asyncSubmit: function (e) {
      var view = this,
          $form = this.$('form'),
          url = $form.attr('action'),
          data = $form.serialize();

      view._show_loading_spinner();
      view._hide_validation_errors();

      if (e.target.id === 'send-sms') {
        data += '&send_sms=1';
      }

      return $.ajax({
        type: 'POST',
        url: url,
        data: data,
        dataType:'json',

        statusCode: {
          400: function (jqXHR, textStatus, errorThrown) {
            var data = $.parseJSON(jqXHR.responseText);

            // Wrong username/password combinations
            // Wrong authy token

            if (data.captcha_required) {
              view._show_captcha();
            } else {
              view._refresh_captcha();
            }

            if ($form.closest('.generic-popup').length) {
              view._show_validation_errors(data.errors);
            } else if (data.errors) {
              var errorStr = '';

              for (var fieldName in data.errors) {
                errorStr = data.errors[fieldName][0];
              }

              if (!errorStr) return;

              view._show_response_message('Error', errorStr, data.goto);
              view.close();
            }
          },

          401: function (jqXHR, textStatus, errorThrown) {
            var data = $.parseJSON(jqXHR.responseText);

            if (data.captcha_required) {
              view._show_captcha();
            } else {
              view._refresh_captcha();
            }

            if (data.authy_required) {
              view._show_authy();
            }

            view._show_validation_errors(data.errors);
          },

          403: function (jqXHR, textStatus, errorThrown) {
            var errorStr = 'An error occurred. Please try again later.',
                goto;

            if (jqXHR.responseText) {
              var data = $.parseJSON(jqXHR.responseText);
              goto = data.goto;

              for (var fieldName in data.errors) {
                errorStr = data.errors[fieldName][0];
              }
            }

            view._show_response_message('Error', errorStr, goto);
            view.close();
          }
        },

        error: function(jqXHR, textStatus, errorThrown) {
          view._hide_loading_spinner();
        },

        success: function(data, textStatus, jqXHR) {

          if (data.sms_sent) {
            $('#send-sms').text('Sent').addClass('disabled');
            return;
          }

          if (view.onSubmitSuccess) {
            view.onSubmitSuccess(data, textStatus, jqXHR);
            return;
          }

          if (data.message) {
            view._hide_loading_spinner();
            view._hide_validation_errors();
            view._show_response_message(data.message.title, data.message.body, data.goto);
            view.close();
          } else if (data.force_refresh) {
            window.location.reload();
          } else {
            var oldLocation = window.location.pathname + window.location.search;
            window.location = data.goto;
            
            if (data.goto.split('#')[0] === oldLocation || data.goto.indexOf('#') === 0) {
              window.location.reload();
            }
          }
        }
      });
    },

    _show_loading_spinner: function () {
      var $arrow_image = this.$('form').closest('.generic-popup').find('.js-loader'),
          $spinner_image = $arrow_image.next('.js-spinner');
      if ($spinner_image.length == 0) {
        $spinner_image = $('<img></img>');
        $spinner_image.addClass('js-spinner');
        $spinner_image.attr('height', 25);
        $spinner_image.attr('src', Accounts.formSpinnerUrl);
        $spinner_image.insertAfter($arrow_image);
      }
      $arrow_image.hide();
      $spinner_image.show();
    },

    _hide_loading_spinner: function () {
      var $arrow_image = this.$('form').closest('.generic-popup').find('.js-loader'),
          $spinner_image = $arrow_image.next('.js-spinner');
      $spinner_image.hide();
      $arrow_image.show();
    },

    _manipulate_captcha: function (show_if_not_already_visible) {
      var $form = this.$('form'),
          captcha_id = getFieldId($form, 'captcha'),
          $captcha = $('#' + captcha_id);

      if (show_if_not_already_visible || this.captcha) {
        if (this.captcha) {
          this.captcha.reset();
        } else {
          this.captcha = new Recaptcha2(captcha_id);
        }
      }
    },

    _show_captcha: function () {
      this._manipulate_captcha(true);
    },

    _refresh_captcha: function () {
      this._manipulate_captcha(false);
    },

    _show_authy: function () {
      var $authy = $('#account-login-authy-token-holder');
      this.$('.js-show-2fa').hide();
      if($authy.length) {
        $authy.show();
        $authy.find('#account-login-authy-token').focus();
      }
    },

    _resend_humble_guard_code: function(e) {
      e.preventDefault();
      var $text = $('.resend-email');
      $text.html('Resending....');
      $.ajax({
        type: 'POST',
        url: '/user/humbleguard?resend=1'
      }).success(function() {
        $text.html('Email resent');
      }).error(function() {
        $text.html('Too many emails sent. Please wait 24 hours and then try again')
      });
    },

    _show_validation_errors: function (errors) {
      var $form = this.$('form');
      generateErrorList($form, errors);
    },

    _hide_validation_errors: function () {
      $('.arrow-error').hide();
    },

    _show_response_message: function (title, body, gotoHref) {
      Accounts.displayDialog(title, body, gotoHref);
    }
  });

  AccountMessageModal = Modals.AccountMessageModal = BaseModal.extend({
    template: _.template($('#account-message').html())
  });

  AccountLoginModal = Modals.AccountLoginModal = BaseAccountModal.extend({
    template: _.template($('#account-login').html()),

    events: {
      'click .js-send-sms': 'sendSms',
    },

    onRendered: function () {
      var view = this,
          $form = this.$('form');

      $.ajax({
        type: 'POST',
        url: $form.data('captcha-url'),
        statusCode: {
          401: function () {
            view._show_captcha();
          }
        }
      });

      // Call parent onRendered
      BaseAccountModal.prototype.onRendered.call(this);
    },

    sendSms: function(e) {
      e.preventDefault();

      // Call the base-class's asyncSubmit because it currently handles the
      // send SMS feature.
      // This makes no sense at all and would be good to refactor in the future.
      return BaseAccountModal.prototype.asyncSubmit.call(this, e);
    },

    asyncSubmit: function (e) {
      var view = this;

      view._show_loading_spinner();
      view._hide_validation_errors();

      // When the form is submitted, the resultant page will include a script
      // tag that calls this callback. The name of this callback should match
      // the value of the form's script-wrapper hidden field.
      window.login_callback = function(data) {
        view._hide_loading_spinner();

        if (data.success) {
          var old_location = window.location.pathname + window.location.search;
          window.location = data.goto;
          // Force reload if only hash changed.
          if (data.goto.split('#')[0] === old_location || data.goto.indexOf('#') === 0) {
            window.location.reload();
          }
        } else {
          if (data.captcha_required) {
            view._show_captcha();
          } else {
            view._refresh_captcha();
          }

          if (data.authy_required) {
            view._show_authy();
          }

          view._show_validation_errors(data.errors);
        }
      }

      this.$('form').submit();
    }
  });

  AccountSignUpModal = Modals.AccountSignUpModal = BaseAccountModal.extend({
    template: _.template($('#account-signup').html()),

    onRendered: function () {
      // Set up email validation
      window.bindEmailField($('#account-signup-email'), function setEmailMessage($field, message){
        var $form = $field.closest('form');
        var field_name =  $field.attr('name');
        if(!message){
          $('#account-signup-email-msg').fadeOut('fast');
          return $('#account-signup-email-msg');
        } else {
          return setFormMessage($form, field_name, message);
        }
      });

      // Call parent onRendered
      BaseAccountModal.prototype.onRendered.call(this);
    }
  });

  AccountPasswordResetModal = Modals.AccountPasswordResetModal = BaseAccountModal.extend({
    template: _.template($('#account-pw-reset').html())
  });

  AccountHumbleGuardModal = Modals.AccountHumbleGuardModal = BaseAccountModal.extend({
    template: _.template($('#account-humble-guard').html()),

    events: {'click .js-resend': '_resend_humble_guard_code'
    },

    onSubmitSuccess: function(data) {
      //Either call the callback or go to data.goto
      if (this.options.onSuccess) {
        this.options.onSuccess(this);
      } else {
        window.location = data.goto;
      }
    },
    onClose: function () {
      if (this.options.onClose){
        this.options.onClose(this);
      }
      return false;
    }
  });

  modals = {
    '#account-message': AccountMessageModal,
    '#account-login': AccountLoginModal,
    '#account-pw-reset': AccountPasswordResetModal,
    '#account-signup': AccountSignUpModal,
    '#account-humble-guard': AccountHumbleGuardModal
  };

  /**
   * onDomReady
   */
  $(document).ready(function() {

    $(document).on('click', '.forgot-pw, .create-account, .account-login, .humble-guard', function(e) {
      e.preventDefault();
      var $self = $(this),
          target = $self.data('targetPopup'),
          gotoHref = $self.attr('href'),
          modal,
          rendered;

      modal = new modals[target]({gotoHref: gotoHref});
      rendered = modal.render().el;



      if (!$self.data('skipSsl') && (window.location.protocol === 'http:') &&
          ($(rendered).find('form').length > 0) && ($(rendered).find('form').attr('action').substr(0, 6) === 'https:')) {
        var windowLocation = String(window.location);
        windowLocation = windowLocation.replace('http:', 'https:');
        var baseAndQuery = windowLocation.split('#')[0].split('?'),
            base, query;
        base = baseAndQuery[0];
        query = baseAndQuery[1] || '';
        if (query) query = '&' + query;
        if ($self.data('sslHash')) {
          gotoHref = gotoHref + '#' + $self.data('sslHash');
        }
        query = 'secure_target=' + encodeURIComponent(target) + '&secure_goto=' + encodeURIComponent(gotoHref) + query;
        windowLocation = base + '?' + query;
        window.location = windowLocation;
        return;
      }


      $('#site-modal').html(rendered);
    });

    Accounts.formSpinnerUrl = 'https://humblebundle-a.akamaihd.net/static/hashed/26faf55c6e36ba3b1a57f9001942059fe05050f2.gif';

    $('.generic-popup').delegate('.error-holder .error-item', 'click', function(e) {
      e.preventDefault();
      $($(this).attr('href')).focus();
    });

  }); // END jQuery.ready

  /**
   * Functions
   */
  function isValidUsername(username) {
    return /^[a-zA-Z][a-zA-Z0-9-_]*$/.test(username);
  }

  function getFieldId($form, field) {
    return ($form.data('inputPrefix') || $form.attr('id') || 'id_') + field;
  }

  function setFormMessage($form, field, contents) {
    var fieldId = getFieldId($form, field);

    var msgFieldId = fieldId + '-msg';
    var $field = $('#' + fieldId);
    var $msgField = $('#' + msgFieldId);
    if ($msgField.length > 0) {
      $msgField.html(contents + '<div class="arrow-error-right"></div>');
    } else {
      $field.closest('.input-holder').append('<div class="arrow-holder"><div class="arrow-error" id="' + msgFieldId + '">' + contents + '<div class="arrow-error-right"></div></div></div>');
      $msgField = $('#' + msgFieldId);
    }
    var top = $field.position().top;
    $msgField.css({'top': top + 'px'});
    $msgField.fadeIn();
    return $msgField;
  }

  function setFormMessages($form, data) {
    $('.arrow-error').fadeOut('fast');
    if (typeof data === 'string') {
      if(console) console.log('Received string, expected dict for form ' + $form.attr('id') + ' (' + $form.attr('action') + '), data: ' + data);
      if(console) console.log($form);
    }
    for (var fieldName in data) {
      setFormMessage($form, fieldName, data[fieldName][0]);
    }
  }

  function generateErrorList($form, data) {
    if (!data) return null;
    setFormMessages($form, data);
  }

  Accounts.displayDialog = function (title, message, gotoHref) {
    var model = new Backbone.Model({title: title, message: message, gotoHref: (gotoHref || '')}),
        dialog = new AccountMessageModal({model: model});

    $('#site-modal').html(dialog.render().el);
  };

  /**
   * Exports
   */
  window.Accounts = Accounts;
  window.generateErrorList = generateErrorList;
  window.app.Modals = Modals;

})(jQuery);



(function () {
  
  
  if (window.location.search.indexOf('?secure_target=') < 0) {
    return;
  }

  if (window.location.protocol.indexOf('https:') < 0) {
    return;
  }

  if ($('#topright .account-login').length === 0) {
    return;
  }
  var secureTarget = window.location.search.split('&')[0],
      secureGoto, subSecureGoto, query;
  subSecureGoto = secureTarget.length;
  secureTarget = secureTarget.substr(secureTarget.indexOf('=') + 1);
  secureTarget = decodeURIComponent(secureTarget);
  try {
    var $target = $(secureTarget);
  } catch (e) {
    return;
  }
  
  if (!$target.length) {
    return;
  }
  query = window.location.search.substr(subSecureGoto);
  if (query.indexOf('&secure_goto=') >= 0) {
    secureGoto = query.substr(1).split('&')[0];
    secureGoto = secureGoto.substr(secureGoto.indexOf('=') + 1);
    secureGoto = decodeURIComponent(secureGoto);
  }

  var modal = new modals[secureTarget]({gotoHref: secureGoto});
  $('#site-modal').html(modal.render().el);
})();
</script>
<div ssl='on' id='pubnub'></div>
<script>
// log all calls and be able to play them back on another object
// sort of like a more generic version of the _gaq object
function Replayer(methods) {
  this._log = [];
  var self = this;

  methods.forEach(function(method) {
    self[method] = function() {
      self._log.push([method, Array.prototype.slice.call(arguments)]);
    };
  });

  this._playback = function (obj) {
    self._log.forEach(function(entry) {
      methodname = entry[0];
      args = entry[1];
      method = obj[methodname];
      method.apply(obj, args);
    });
  };
}

window.pubnub_client = new Replayer(['subscribe', 'history']);

async_js('//pubnub.a.ssl.fastly.net/pubnub-3.5.4.min.js', function () {

  var pubnub_callbacks = {};
  /* {
   'stats': [callback1, callback2]
   'thanks': [thankscallback]
   }
   */

  var register_pubnub_handler = function (channel, callback) {
    var channel_callbacks = pubnub_callbacks[channel];
    if (channel_callbacks == undefined) {
      channel_callbacks = [];
    }
    channel_callbacks.push(callback);
    pubnub_callbacks[channel] = channel_callbacks;
  }

  var pubnub_delegator = function (message, envelope, channel) {
    var callbacks = pubnub_callbacks[channel];
    for (var i = 0; i < callbacks.length; i++) {
      callbacks[i](message);
    }
  }

  var original_pubnub_client = PUBNUB.init({
    noleave: true,
    ssl: true,
    origin: 'humble.pubnub.com',
    subscribe_key: '6b5eeae3-796b-11df-8b2d-ef048cc31d2e'
  });

  var multiplexed_pubnub_client = {}
  $.extend(multiplexed_pubnub_client, original_pubnub_client);
  multiplexed_pubnub_client.subscribe = function(options) {
    var callback = options['callback'];
    var channel = options['channel'];
    delete options['callback'];
    register_pubnub_handler(channel, callback);
    options['callback'] = pubnub_delegator;
    return original_pubnub_client.subscribe(options);
  }
  multiplexed_pubnub_client.ready();  // since we fire after the ready event, trigger it on the pubnub object
  window.pubnub_client._playback(multiplexed_pubnub_client);
  window.pubnub_client = multiplexed_pubnub_client;
});
</script>


