//jQuery(window).load(function() {
$(document).ready(function() {
	var stickyNavTop = jQuery('.waves-header').offset().top;  
	function stickyNav() {  
		var scrollTop = jQuery(window).scrollTop();  
		if (scrollTop > stickyNavTop) {   
		jQuery('.waves-header').addClass('sticky');  
		} else {  
		jQuery('.waves-header').removeClass('sticky');   
		}  
	};
	jQuery(window).scroll(function() {  
	    stickyNav();  
	}).scroll();
});
</script>


