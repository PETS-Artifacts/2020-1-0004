        <script> 
            //Script to use to open and close the rollover cart tab
            $(document).ready(function(){
              var _counter = 0;
              var _counter_out = 0;
              var _seconds = 0;
              $("#cart_container_tab").hover(
                function () {
                  if (typeof _counter_addTo != 'undefined'){
                    console.log(_counter_addTo)
                    if (_counter_addTo == 0) {
                      clearTimeout(_counter_out);
                      _counter = setTimeout(openDialogNow, 800);
                    } else {
                      clearTimeout(_counter_addTo);
                      _counter_addTo = 0;
                    }
                  } else {
                    clearTimeout(_counter_out);
                    _counter = setTimeout(openDialogNow, 800);
                  }
                },
                function () {
                  clearTimeout(_counter);
                  _counter_out = setTimeout(closeDialogNow, 800);
                });
                function openDialogNow() {
                  // this function will run every second while the user does not mouseout the image
                  $("#cart_pop").show();
                  $("#all_cart_items").show();
                  $("#cart_pop_title").show();
                  $("#cart_pop_title_add").hide();
                  $("#purchased_item").hide();
                  $("#cart_pop_show").slideDown(300, function() {});
                }
                function closeDialogNow() {
                  $("#cart_pop").hide();
                  $("#cart_pop_show").hide();
                }
             });
         
        </script>
