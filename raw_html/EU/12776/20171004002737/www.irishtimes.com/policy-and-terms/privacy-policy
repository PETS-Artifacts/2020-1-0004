        var kvusertype = '0';
    }
    if ("undefined" === typeof kvarticlecount) {
        var kvarticlecount = '';
    }
    var kvreferral = document.referrer;
    (function (getCookie) {
        var cookie = getCookie('IT_PW_AUTH');
        if (null != cookie && "" != cookie) {
            kvusertype = '1';
        }
        var pw_meter_news = getCookie('apw_aac_news');
        var it_pw_auth = getCookie('IT_PW_AUTH');
        if (pw_meter_news && pw_meter_news != ""
                && (!(it_pw_auth || it_pw_auth == ""))
        ) {
            var parts = pw_meter_news.split(".");
            kvarticlecount = parseInt( parts[2], 10 );
        }
    } (function (name) {
        var nameEQ = name + "=";
        var ca = document.cookie.split(';');
        for (var i = 0; i < ca.length; i++) {
            var c = ca[i];
            while (c.charAt(0) == ' ') c = c.substring(1, c.length);
            if (c.indexOf(nameEQ) == 0) return c.substring(nameEQ.length, c.length);
        }
        return null;
    }));


