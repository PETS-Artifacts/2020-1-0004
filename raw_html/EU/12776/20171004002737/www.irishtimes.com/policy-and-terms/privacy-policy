        <script>
jq(document).ready(function() {
  function showTab(){
  
    var minWidth = 1100;
    var shouldShow = jq('body.isArticle.anonymous')[0] != undefined;
    var hasTakeover = jq('body').css('background-image');
  	var tab = '<div class="floating_tab slideFromLeft"><a class="gtm-event" data-evt-category="/digital-subscriptions" data-evt-action="Go to StoreFront" data-evt-label="Subscribe Now: Floating Tab" href="/digital-subscriptions"><b>Subscribe Now</b></a></div>';
    
    if( (windowWidth >= minWidth) && (shouldShow == true) && (hasTakeover == 'none')  ){ 
		jq( "body" ).append( tab );
    }
  }
  setTimeout(showTab, 3000);
});
</script>

<style type="text/css">
.floating_tab{position:fixed; left:0; top:auto;  bottom:30%; -webkit-backface-visibility: hidden;
 -webkit-animation-fill-mode: both; -moz-animation-fill-mode: both; -ms-animation-fill-mode: both; -o-animation-fill-mode: both; animation-fill-mode: both; 
 -webkit-animation-duration: 1s; -moz-animation-duration: 1s; -ms-animation-duration: 1s; -o-animation-duration: 1s; animation-duration: 1s;
 -webkit-box-shadow: 5px 0px 20px 0px rgba(81, 81, 81, 0.7); -moz-box-shadow:    5px 0px 20px 0px rgba(81, 81, 81, 0.7); box-shadow: 5px 0px 20px 0px rgba(81, 81, 81, 0.7);}

.floating_tab a{display:block; height:144px; width:40px; box-sizing:border-box; padding:10px;     letter-spacing: -0.04em; /* background-color:#066; color:#FFF;*/  background-color:#fad165; color:#333;  
 font-family:"DINWeb-Bold",Arial,Helvetica,sans-serif; text-transform:uppercase; font-weight:bold; white-space: nowrap;}

.floating_tab a b{
  display: inline-block; margin:auto;  position:absolute; top: 0; bottom: 0;
 -webkit-transform: rotate(-90deg)  translate(-50%, 50%); -moz-transform: rotate(-90deg)  translate(-50%, 50%); -ms-transform: rotate(-90deg)  translate(-50%, 50%); -o-transform: rotate(-90deg)  translate(-50%, 50%); 
 -webkit-transform-origin: 0 50%; -moz-transform-origin: 0 50%; -ms-transform-origin: 0 50%; -o-transform-origin: 0 50%;  transform-origin: 0 50%;   height: 30px;}


