	<h2 class="section-title">Most Discussed</h2>
<div class="viafoura" id="vf-md" >
  <div class="vf-articles vf-widget" data-widget="community-articles" data-limit="5" data-days="1"></div>
</div>

<script>
var run_it;

function checkLoaded() {
  if( jq('.vf-community-widget .vf-list .vf-article-heading').length == 5 ){    
  clearInterval(run_it);
  removeSplitterGaps(); 
  }
}

(function (v, s) {
  v.type = 'text/javascript';
  v.async = !0;
  v.src = location.protocol !== 'https:' ? '//cdn.viafoura.net/vf.js' : '//api.viafoura.com/app/js/vf.js';

  var scripts = document.getElementsByTagName('script');
  var foundscript = 0;
  for (var i = scripts.length; i--;) {
    if (scripts[i].src.indexOf( v.src ) != -1) {
      foundscript = 1;
      break;
    }
  }

  if (!foundscript) {
    s.parentNode.insertBefore(v, s);
  }
    
  window.vfAsyncInit = function() {  
    window.viafoura.ready(function () {
      run_it = setInterval('checkLoaded()', 1000);
    });
  }
  
}(document.createElement('script'), document.getElementsByTagName('script')[0]));


jq( document ).on( "click", "#vf-md .vf-articles .vf-article-body > a", function(e) { 
  var paths = location.pathname.split('/');
  var topLevelCategory = paths[1];
  topLevelCategory = topLevelCategory.replace(/-/g, ' ');
  topLevelCategory = topLevelCategory.replace(/\w\S*/g, function(txt){return txt.charAt(0).toUpperCase() + txt.substr(1).toLowerCase();});
  dataLayer.push({
	'event': 'data-layer-event',
    'category': 'Trending Articles Element',
    'action' : 'Most Discussed in ' + topLevelCategory,
    'label' : ' Clicked: '+(jq(this).attr('href'))+' from ' + window.location.pathname + ' From: '+whichPosition( jq(this) )
  });
});

</script>
  </div>
