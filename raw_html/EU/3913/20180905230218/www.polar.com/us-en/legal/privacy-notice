function disableCookies() {
window['ga-disable-'+ga_tracking_code] = true;  
}
function enableCookies() {
}
window.addEventListener("load", function(){
window.cookieconsent.initialise({

	"type": "opt-in",

  "cookie": {
    "name": "polar_cookie_consent",
    "domain": "polar.com",
  },
  "palette": {
    "popup": {
      "background": "#d10027",
      "text": "#ffffff"
    },
    "button": {
      "background": "transparent",
      "border": "#ffffff",
      "text": "#ffffff"
    }
  },
  "content": {
    "message": "We use cookies to give you the best experience and serve the most relevant ads. By using this site, you accept the use of cookies.",
    "dismiss": "Decline",
		"deny": "Decline",
		"allow": "Got it!",
    "link": "Learn more",
    "href": "https://www.polar.com/us-en/cookies"
  },
	onPopupOpen: function() {
		var status = this.getStatus();
		if (typeof status === 'undefined') {
			disableCookies();
		}
	},
	onInitialise: function (status) {
		var type = this.options.type;
		var status = this.getStatus();
		if (status == 'allow') {
			enableCookies();
		}
		else {
			disableCookies();
		}
	},
	onStatusChange: function(status, chosenBefore) {
		var type = this.options.type;
		var status = this.getStatus();
		if (status == 'allow') {
      window['ga-disable-'+ga_tracking_code] = false;
      ga('create', ga_tracking_code, 'auto');
      ga('send', 'pageview');
      ga('set', 'anonymizeIp', true);
      
      if(typeof dataLayer !== "undefined") {
        window.dataLayer.push({'event': 'cookiesAllowed'});
      }
		}
		else {
			disableCookies();
		}
	},
	onRevokeChoice: function() {
		var type = this.options.type;
		var status = this.getStatus();
		if (status == 'allow') {
			enableCookies();
		}
		else {
			disableCookies();
		}
	}
})});
