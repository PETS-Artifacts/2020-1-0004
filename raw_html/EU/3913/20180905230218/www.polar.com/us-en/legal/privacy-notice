<!-- algolia dev start -->
<script src="https://cdn.jsdelivr.net/algoliasearch/3/algoliasearch.min.js"></script>
<script src="https://cdn.jsdelivr.net/autocomplete.js/0/autocomplete.jquery.min.js"></script>
<script>
$( window ).on( "load", function() {
  var client = algoliasearch('GPQVO9QZGH', '1574fc912ddca01e20dfb5f4d813bf53')
  var products_index = client.initIndex('polar_com_products');
  var news_index = client.initIndex('polar_com_news');
  var support_index = client.initIndex('support_polar_com');
  var other_index = client.initIndex('polar_com_other');
  
  var image_code = '';
  
  var resultcontainer = $(".algolia-search-results");
  
  $('#search-input').autocomplete({ hint: false, debug: true }, [
    {
      source: $.fn.autocomplete.sources.hits(products_index, { hitsPerPage: 3, filters: 'language:us-en' }),
      displayKey: 'title',
      templates: {
        header: '<div><h4>Products</h4></div>',
        suggestion: function(suggestion) {
		  if(suggestion.image) {
			image_code = '<img width="50" height="50" src="' + suggestion.image + '" />';
		  }
		  else {
		    image_code = '';
		  }
          return '<a href="'+suggestion.url+'">' + image_code + '<span>' + suggestion._highlightResult.title.value  + '</span></a>';
        }
      }
    },
    {
      source: $.fn.autocomplete.sources.hits(news_index, { hitsPerPage: 3, filters: 'language:us-en' }),
      displayKey: 'title',
      templates: {
        header: '<br /><div><h4>In the News</h4></div>',
        suggestion: function(suggestion) {
          return '<a href="'+suggestion.url+'"><span>' + suggestion._highlightResult.title.value + '</span></a>';
        }
      }
    },
    {
      source: $.fn.autocomplete.sources.hits(support_index, { hitsPerPage: 3, filters: 'language:us-en' }),
      displayKey: 'title',
      templates: {
        header: '<br /><div><h4>Support</h4></div>',
        suggestion: function(suggestion) {
          return '<a href="'+suggestion.url+'"><span>' + suggestion._highlightResult.title.value + '</span></a>';
        }
      }
    },
    {
      source: $.fn.autocomplete.sources.hits(other_index, { hitsPerPage: 3, filters: 'language:us-en' }),
      displayKey: 'title',
      templates: {
        header: '<br /><div><h4>Other</h4></div>',
        suggestion: function(suggestion) {
          return '<a href="'+suggestion.url+'"><span>' + suggestion._highlightResult.title.value + '</span></a>';
        }
      }
    }
  ]).on('autocomplete:selected', function(event, suggestion, dataset) {
    console.log(suggestion, dataset);
  });
});
</script>
