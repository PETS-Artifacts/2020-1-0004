function vE(email) {
    var re = /^(([^<>()\[\]\\.,;:\s@"]+(\.[^<>()\[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
    return re.test(email);
}

function validate_form_footer(form_object){

        var Email = document.getElementById("edit-email-footer").value;
				
				var valid_email = vE(Email);
				
				if(valid_email) {

					if (Email.length > 0){
								document.newsletter_5b904cadb151c.action = "https://register.polar.com/scripts/handler.php";
								form_object.submit();
					}
					else{
								 document.newsletter_5b904cadb151c.action = "https://www.polar.com/us-en/newsletter?error=1";
								 form_object.submit();
					}
				
				}
				else {
					return false;
				}
}
</script>


