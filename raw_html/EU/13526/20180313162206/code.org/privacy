px;height:38px;user-select:none}#pageheader-wrapper .user_menu .user_name{font-family:'Gotham 4r', sans-serif;max-width:120px;display:inline-block;text-overflow:ellipsis;overflow:hidden;white-space:nowrap;float:left}#pageheader-wrapper .user_menu .user_options{position:absolute;top:55px;right:55px}#pageheader-wrapper .user_menu .user_menu_arrow_down,#pageheader-wrapper .user_menu .user_menu_arrow_up{font-size:25px}#pageheader-wrapper .user_menu .user_menu_arrow_up{margin-top:-3px}#pageheader-wrapper .user_menu .user_menu_arrow_down{margin-top:-2px}#pageheader-wrapper #hamburger{padding-top:4px;padding-left:20px}#pageheader-wrapper #hamburger .hide-responsive-menu{top:55px}
