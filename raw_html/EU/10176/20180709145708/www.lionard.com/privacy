	function contactFormOptions() {
	contactformoptions={showOneMessage: true, scroll: false, 
	onFieldFailure: function(field) {
	
	if(field)
	field.addClass('onerror');
	}, onFieldSuccess: function(field) {if(field) field.removeClass('onerror');}};
	
	
	}
