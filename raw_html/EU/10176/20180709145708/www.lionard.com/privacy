<script type="text/javascript">

jQuery().ready(function() {
		if (jQuery("#free-search-input-desktop").length) {
		jQuery("#free-search-input-desktop").autocomplete("http://www.lionard.com/includes/search-free-autocomplete.ajax.inc.php", {
			/*width: 260,
			matchContains: true,
			selectFirst: false,
			max:100,*/
			minChars: 3 
		});
	}
	if (jQuery("#free-search-input-tablet").length) {
		jQuery("#free-search-input-tablet").autocomplete("http://www.lionard.com/includes/search-free-autocomplete.ajax.inc.php", {
			minChars: 3 
		});
	}
	if (jQuery("#free-search-input-mobile").length) {
		jQuery("#free-search-input-mobile").autocomplete("http://www.lionard.com/includes/search-free-autocomplete.ajax.inc.php", {
			minChars: 3 
		});
	}
	});
</script>

