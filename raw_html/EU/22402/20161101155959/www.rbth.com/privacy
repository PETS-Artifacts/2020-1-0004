             $(document).ready(function () {
                 var overlay = $('.overlay');
                 var popupApp = $('.popup-app');
                 var close = popupApp.find('.close');
                 if (!$('html').hasClass('ios')) {
                     overlay.show();
                     popupApp.show();
                 }
                 var popupHidden = popupApp.is(':hidden');
                 $(document).on('click keyup', function (e) {
                     if (popupHidden) {
                         return false
                     }
                     if (
                             (e.type == 'keyup' && e.keyCode == 27) ||
                             (e.type == 'click' && ($(e.target).hasClass('overlay') || $(e.target).hasClass('close')))
                     ) {
                         overlay.stop().fadeOut(200);
                         popupApp.stop().fadeOut(200);
                         cookies.set('popupClosed', '1', '365');
                         popupHidden = true;
                     }
                 });
             });
