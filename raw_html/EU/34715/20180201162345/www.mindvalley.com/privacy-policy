<script type="text/javascript">
	$(function() {
		var pull 		= $('.pull');
			menu 		= $('nav ul.nav');
			menuHeight	= menu.height();

		$(pull).on('click', function(e) {
			e.preventDefault();
			menu.slideToggle();
		});

		$(window).resize(function(){
			var w = $(window).width();
			if(w > 320 && menu.is(':hidden')) {
				menu.removeAttr('style');
			}
		});
	});
</script>
<!-- END my new js script -->


