<script>
	$('menunav li a').click(
	function(e) {
	   e.preventDefault(); // prevent the default action
	   e.stopPropagation(); // stop the click from bubbling
	   $(this).closest('ul').find('._a').removeClass('_a');
	   $(this).parent().addClass('_a');
	});
</script>

