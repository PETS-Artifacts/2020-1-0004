        function loadSocialLinks() {
            var req = $request('/main/socialLinks');
            req.addCallback(function(html) {
                $setHTML($('social_share'), html);
                $evalScript(html);
            });
            req.sendReq({page_url: "https:\/\/todoist.com\/privacy"});
        }

        var TO_MOVE = window.setInterval(function() {
            if($scrollTop() > 2000) {
                loadSocialLinks();
                window.clearInterval(TO_MOVE);
            }
        }, 500);
    </script>


