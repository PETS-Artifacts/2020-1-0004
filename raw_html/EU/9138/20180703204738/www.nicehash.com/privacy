				$(function(){
					var utcoffset = (new Date().getTimezoneOffset()) * 60 * 1000; 
					$("time").each(function(index){
						var oldTime = Date.parse($(this).html());
						if(oldTime>0 && $(this).html().indexOf(" ") >= 0){
							var newdate = new Date(oldTime - utcoffset);
							newdate = newdate.getFullYear() + "-" + ("0" + (newdate.getMonth() + 1)).slice(-2) + "-" + ("0" + newdate.getDate()).slice(-2) + " " +  ("0" + newdate.getHours()).slice(-2) + ":" + ("0" + newdate.getMinutes()).slice(-2) + ":" + ("0" + newdate.getSeconds()).slice(-2);
							$(this).html(newdate);
						}
					});
				});
