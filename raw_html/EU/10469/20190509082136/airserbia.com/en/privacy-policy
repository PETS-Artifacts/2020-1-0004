    <script>
        (function (arr) {
            arr.forEach(function (item) {
                if (item.hasOwnProperty('prepend')) {
                    return;
                }
                Object.defineProperty(item, 'prepend', {
                    configurable: true,
                    enumerable: true,
                    writable: true,
                    value: function prepend() {
                        var argArr = Array.prototype.slice.call(arguments),
                            docFrag = document.createDocumentFragment();

                        argArr.forEach(function (argItem) {
                            var isNode = argItem instanceof Node;
                            docFrag.appendChild(isNode ? argItem : document.createTextNode(String(argItem)));
                        });

                        this.insertBefore(docFrag, this.firstChild);
                    }
                });
            });
        })([Element.prototype, Document.prototype, DocumentFragment.prototype]);

        $(document).ready(function() {
            if (window.location.host !== 'checkin.airserbia.com'){
                var navBarToggleButtonMobile = document.getElementById('navbar-toggle-btn');
                var navBarHeader = document.getElementsByClassName('navbar-header')[0];


                navBarHeader.prepend(navBarToggleButtonMobile);

                moveContactLinkToMobileMenu();
                window.onresize = function(event) {
                    moveContactLinkToMobileMenu();
                };

                $('#navbar-toggle-btn').click(function () {
                    $('#main_submenu').toggleClass('active');

                    $('.lang_menu_list').removeClass('active');
                    $('#login_panel').removeClass('active');
                    $('#etihad_submenu').removeClass('active');
                    $('#dd-etihad-guest').removeClass('active');
                });

                $('#dd-prepare a').click(function() {
                    $('#dd-prepare').toggleClass('active');
                    $('#information_submenu').toggleClass('active');

                    $('.lang_menu_list').removeClass('active');
                    $('#login_panel').removeClass('active');
                    $('#etihad_submenu').removeClass('active');
                    $('#dd-etihad-guest').removeClass('active');
                });

                $('#dd-prepare_thin a').click(function() {
                    $('#dd-prepare').toggleClass('active');
                    $('#information_submenu').toggleClass('active');

                    $('.lang_menu_list').removeClass('active');
                    $('#login_panel').removeClass('active');
                    $('#etihad_submenu').removeClass('active');
                    $('#dd-etihad-guest').removeClass('active');
                    $('#main_submenu').removeClass('active');
                });

                $('#information_submenu_close').click(function() {
                    $('#dd-prepare').toggleClass('active');
                    $('#information_submenu').toggleClass('active');
                });

                // Etihad Guest

                $('#dd-etihad-guest a').click(function() {
                    $('#dd-etihad-guest').toggleClass('active');
                    $('#etihad_submenu').toggleClass('active');

                    $('.lang_menu_list').removeClass('active');
                    $('#slogin_panel').removeClass('active');
                    $('#information_submenu').removeClass('active');
                    $('#dd-prepare').removeClass('active');

                });

                $('#dd-etihad-guest_thin a').click(function() {
                    $('#dd-etihad-guest').toggleClass('active');
                    $('#etihad_submenu').toggleClass('active');

                    $('.lang_menu_list').removeClass('active');
                    $('.login_panel').removeClass('active');
                    $('#information_submenu').removeClass('active');
                    $('#dd-prepare').removeClass('active');
                    $('#main_submenu').removeClass('active');
                });


                $('#etihad_submenu_close').click(function() {
                    $('#dd-etihad-guest').toggleClass('active');
                    $('#etihad_submenu').toggleClass('active');
                });

                // Login
                $('#dd-login a').click(function() {
                    $('#dd-login').toggleClass('active');
                    $('#login_panel').toggleClass('active');

                    $('.lang_menu_list').removeClass('active');
                    $('#information_submenu').removeClass('active');
                    $('#etihad_submenu').removeClass('active');
                    $('#dd-etihad-guest').removeClass('active');
                });

                $('#login_close').click(function() {
                    $('#dd-login').toggleClass('active');
                    $('#login_panel').toggleClass('active');
                });

                // Login Mobile
                $('#dd-login_thin a').click(function() {
                    $('#login-popup').css('display', 'contents');
                });


                // Login Mobile Close
                $('#login_close_mobile').click(function() {
                    $('#login-popup').css('display', 'none');
                });

                $('#closebut').click(function () {
                    $('#dd-login').removeClass('open');
                });

                var ddMenuTitle = document.getElementsByClassName('dd-menu-title')[0];

                if (!!ddMenuTitle) {
                    ddMenuTitle.parentElement.style.padding = 0;
                }
            }

            $('.submenuGroup.sub159911 , .submenuGroup.sub190202').wrapAll('<div class="subMenuGroupWrap"></div>');
            $('.submenuGroup.sub555').wrapAll('<div class="subMenuGroupWrap"></div>');
            $('.submenuGroup.sub71325 ').wrapAll('<div class="subMenuGroupWrap"></div>');
            $('.submenuGroup.sub129732 , .submenuGroup.sub567').wrapAll('<div class="subMenuGroupWrap"></div>');
            $('.submenuGroup.sub85263').wrapAll('<div class="subMenuGroupWrap"></div>');
            $('.submenuGroup.sub84974').wrapAll('<div class="subMenuGroupWrap"></div>');
            $('.submenuGroup.sub84978').wrapAll('<div class="subMenuGroupWrap"></div>');

            //remove popup when clicking around
            if ($(window).width() > 1200) {
                $(document).click(function() {
                    popups_close();
                })

                $('#information_submenu').click(function(e) {
                    e.stopPropagation();
                })
                $('#etihad_submenu').click(function(f) {
                    f.stopPropagation();
                })
                $('#dd-login a').click(function(g) {
                    g.stopPropagation();
                })
                $('.menu_languages').click(function(h) {
                    h.stopPropagation();
                })
                function popups_close() {
                    //$("#information_submenu").remove();
                    $('#dd-prepare').removeClass('active');
                    $('#information_submenu').removeClass('active');
                    $('#dd-etihad-guest').removeClass('active');
                    $('#etihad_submenu').removeClass('active');
                    $('#dd-login').removeClass('active');
                    $('#login_panel').removeClass('active');
                    $('.lang_menu_list').removeClass('active');
                }
            }


        });
    </script>
