                selectedlang: "en", // trenutno selektovan jezik
                languages: [ // lista objekata raspolozivih jezika
                    { "langCode": "En", "link": "/en/privacy-policy", "lang": "English" },{ "langCode": "Sr", "link": "/sr/politika-zastite-privatnosti", "lang": "Srpski" },{ "langCode": "Ср", "link": "/sr-Cyrl/politika-zastite-privatnosti", "lang": "Српски" },{ "langCode": "De", "link": "/de/schutzerklaerung", "lang": "Deutsch" },{ "langCode": "Fr", "link": "/fr/politique-de-confidentialite", "lang": "Français" },{ "langCode": "Ру", "link": "/ru/politika-konfidyentsialnosti", "lang": "Русский" },{ "langCode": "ελ", "link": "/el/politiki-prostasias-tis-idiotikotitas", "lang": "ελληνικά" },{ "langCode": "Se", "link": "/sv/privacy-policy", "lang": "svenska" }
                ]
            };
            var countriesTemplate = Airserbia.Templates.lang_popup;
            var html = countriesTemplate(langContext);
            $('#languages-popup').html(html);
            $('#languages-popup').modal('show');
        });

        
        $(document).on('#languages-popup', 'hidden.bs.modal', function (e) {
            console.log(e);
            $('body').removeclass('sel_selector');
        });
        
        var LANG_Sitespec_Choose_your_language = 'Choose your language';
        var LANG_Sitespec_Choose_your_country = 'Choose your country';
        var LANG_Sitespecific_CLOSE = 'Close';
    $(document).ready(function(){
        $(document).on('click', 'a#loginTrigger', function(){
            if(!$('body').hasClass('sel_selector')){
                $('body').addClass('sel_selector');
            }
            $('#login-popup').modal('show');
        }); 
    });
    </script>
