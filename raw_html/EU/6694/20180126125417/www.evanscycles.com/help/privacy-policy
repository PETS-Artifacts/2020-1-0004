$(document).on('click','a, button, *[ng-click]', function() {
	var linkUrl = typeof $(this).attr('href') !== 'undefined' ? $(this).attr('href') : '';
	var htmlId = typeof $(this).attr('id') !== 'undefined' ? $(this).attr('id') : '';
	EC.tagCommander.tcEventTrigger($(this), 'button', {'click_name': 'call_to_action', 'html_id': htmlId, 'link_url': encodeURI(EC.tagCommander.tcAbsoluteUrl(linkUrl))});
});

