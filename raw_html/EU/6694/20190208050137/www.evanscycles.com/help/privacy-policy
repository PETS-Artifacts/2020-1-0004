$('.section-header').on('click', function () {
	var tcAccordionIsOpen;

	if($(this).parents('.tc-accordion-trigger').length > 0){
		// triggered from javascript
		return;
	} else if($(this).attr('aria-selected') != undefined) {
		tcAccordionIsOpen = $(this).attr('aria-selected') == 'false';
	} else {
		return;
	}
	var tcAction = tcAccordionIsOpen ? 'close' : 'open';
	var tcAccordionHtmlID = EC.tagCommander.tcGetHtmlId($(this));
	EC.tagCommander.tcEventTrigger($(this), 'button', {'click_name': 'accordion-component', 'html_id': tcAccordionHtmlID, 'action': tcAction});
});

$('.tc-show-toggle-button').on('click', function(e) {
	var toggleClass = '.' + $(this).attr('data-toggle');
	var campaignId = $(this).attr('data-campaignid');
	var tcIsShowedMore = $(toggleClass).hasClass('active');
	var tcAction = tcIsShowedMore ? 'paragraph-less' : 'paragraph-more';
	EC.tagCommander.tcEventTrigger($(this), 'button', {'click_name': tcAction, 'campaign_id': campaignId});
});

