<script type="text/javascript">
	$(function () {
	    if (typeof tC != 'undefined')
	    {
	        if(EC.tagCommander === undefined){	
// extracted from bottomJsComponents.js
	EC.tagCommander = {
		isFunnelPage: TagCommander.config.isFunnelPage,
		eventContainerId: TagCommander.config.eventContainerId,
		tcEventElements: [],
		debugMode: false,
		tagCommanderAccountCreated: TagCommander.config.tagCommanderAccountCreated,

        tcElement: function (eventName, $jQueryObject, elementType, variableParameters) {
            this.eventName = eventName;
            this.$jQueryObject = $jQueryObject;
            this.elementType = elementType;
            this.variableParameters = variableParameters;
        },
		
		tcEventTrigger: function ($jQueryObject, elementType, variablePrameters) {
            if (typeof tC === 'undefined')
            {
                return;
            }
            if (EC.tagCommander.debugMode) {
                console.log('EC log: tcEventTrigger jQuery object:');
                console.log($jQueryObject);
                console.log('EC log: element type: ' + elementType + ", variableParameters:");
            }

            if (variablePrameters.length > 0) {
                variablePrameters.forEach(function (param) {
                    if (EC.tagCommander.debugMode) {
                        console.log(param);
                    }
                });
            } else if (variablePrameters != null) {
                if (EC.tagCommander.debugMode) {
                    console.log(variablePrameters);
                }
            }
            var tc_events_function = window['tc_events_'+TagCommander.config.eventContainerId];
            return tc_events_function($jQueryObject.get(), elementType, variablePrameters);
        }
    }
}

