});

$('.tc-simple-banner-component').on('click', function () {
  imageDivHtmlID = $(this).attr('data-htmlid');
  imgHref = $(this).find('a').attr('href');
  EC.tagCommander.tcEventTrigger($(this), 'button', {'click_name': 'banner-component', 'html_id': imageDivHtmlID, 'link_url': imgHref, 'campaign_id': ''});
});

// VIDEO COMPONENT FOR PDP
    $(document).on('click', '.open-popup-link-zoom-video', function () {
        EC.tagCommander.updateYoutubeEvents();
    });

$(document).on('click','.tc-jscountdown-component',function() {
	var htmlID = $(this).attr('data-html-id');
	var linkUrl = $(this).attr('data-link-url');
	var endTime =  $(this).find('.countdown-timer').attr('data-end-date');
	var currentTime = new Date().getTime();
	var timeDiff = endTime - currentTime;
	var timeAmount = 0;
	if(timeDiff >0){
		x = timeDiff / 1000;
		var seconds = x % 60;
		x /= 60;
		var minutes = x % 60;
		var hours = x/60;
		timeAmount = Math.floor(hours) + ':'+ Math.floor(minutes) + ':' + Math.floor(seconds);
	}
    EC.tagCommander.tcEventTrigger($(this), 'button', {'click_name': 'countdown-component', 'html_id': htmlID, 'link_url': linkUrl, 'time_amount': timeAmount});
});

$(document).on('click','.tc-category-link-component-item',function() {
	var htmlID = $(this).attr('data-html-id');
	var linkUrl = $(this).attr('data-link-url');
    EC.tagCommander.tcEventTrigger($(this), 'button', {'click_name': 'category-link-component', 'html_id': htmlID, 'link_url': linkUrl});
});

$(document).on('click','.tc-main-image-slot',function() {
	var position = $(this).attr('data-position');
    EC.tagCommander.tcEventTrigger($(this), 'button', {'click_name': 'image_slot_main', 'position': position});
});

$(document).on('click','.tc-image-slot-container .tc-image-slot',function() {
	var position = $(this).attr('data-image-slot-position');
    EC.tagCommander.tcEventTrigger($(this), 'button', {'click_name': 'image_slot', 'position': position});
});

