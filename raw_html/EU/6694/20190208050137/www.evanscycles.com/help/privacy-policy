<script type="text/javascript">
	var TagCommander = {
			config: {
				isFunnelPage: 'false',
				eventContainerId: '3',
				tagCommanderAccountCreated: 'false',
				src: '//cdn.tagcommander.com/1705/tc_catalog.js',
