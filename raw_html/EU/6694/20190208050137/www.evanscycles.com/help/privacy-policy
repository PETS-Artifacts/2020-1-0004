  event.stopPropagation();
  imageDivHtmlID = $('.tc-fredhopper-banner-component').attr('data-htmlid');
  imageDivCampaignID = $('.tc-fredhopper-banner-component').attr('data-campaignid');
  areaHref = this.href;
  EC.tagCommander.tcEventTrigger($(this), 'button', {'click_name': 'banner-component', 'html_id': imageDivHtmlID, 'link_url': areaHref, 'campaign_id': imageDivCampaignID});
});

