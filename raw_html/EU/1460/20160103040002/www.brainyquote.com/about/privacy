<script type="text/javascript">
    var OX_cmds = window.OX_cmds || [];
    OX_cmds.push(function() {
        try {
            var oAR_aV, oAR; // oAR_aV - original AdRequest class and oAR - original AdRequest function
            if (oAR = (OX && OX.AdRequest)) { // safe old OX.AdRequest reference
                OX.AdRequest = function() { // redefine OX.AdRequest
                    oAR.apply(this, arguments); // run existing init code
                    oAR_aV = this.addVariable; // safe old addVariable reference
                    this.addVariable = function() {
                        var args = arguments,
                                key = args[0], // key we need to check
                                cvWhitelist = ["topics"]; // white list of key values we allow
                        if (cvWhitelist.indexOf(key) !== -1)
                        { oAR_aV.apply(this, arguments); // only run previous "AddVariable" function for whitelisted variables
                        }
                    }
                };
                OX.prototype = oAR.prototype; // set prototype correctly
            }
        }
        catch (err) {
            BQErrorLog.logError("openx error  ", err);
        }
    });

    var openXDone = function () { };

    OX_dfp_options = {
        'callback': function() {
            konsole.log('openx callback');
            OX.dfp_bidder.setOxTargeting();
            openXDone();
            konsole.log('openx done called');

            
        }
    };
    OX_dfp_ads = []

    function szAryToStrAry(szAry) {
        var szStrAry = [];
        for (var i = 0; i < szAry.length; i++) {
            try {
                szStrAry.push(szAry[i][0]+'x'+szAry[i][1]);
            }
            catch (err) {
                BQErrorLog.logError("openx sz err  ", err);
            }
        }
        return szStrAry;
    }
    
    var szAryStr = szAryToStrAry([[728, 90],[970, 250]]);
    OX_dfp_ads.push(['/1008298/BQ_ros_top_728x90',szAryStr,'div-gpt-ad-1418667263920-5']);
    
    var szAryStr = szAryToStrAry([[300, 250],[1, 1]]);
    OX_dfp_ads.push(['/1008298/BQ_ros_square_300x250',szAryStr,'div-gpt-ad-1418667263920-4']);
    
