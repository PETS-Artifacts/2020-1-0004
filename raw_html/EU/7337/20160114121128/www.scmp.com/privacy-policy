<div id="block-scmp-content-colorbox-promo-2" class="block block-scmp-content last odd">

      
  <div class="content">
    
        <script type='text/javascript'>
          (function ($) {
            $(document).ready(function () {
              setTimeout(function () {
                if((($.isAndroidTablet() || $.isTablet())) && (!$('#colorbox').is(':visible')) && ($.cookie('Drupal.visitor.cbox_1') == undefined)){
                    $('body').addClass('colorbox_promo');
                    var options = {
                    innerWidth: 553,
                    innerHeight: 450,
                    href: '/promo/content/colorbox_promo_2',
                    onClosed: function(){
                      
                      $('body').removeClass('colorbox_promo');
                    },
                    onComplete: function() {
                      $('#colorbox').find('a.button, .wrapper .left a').click(function() {
                        $.cookie('visitDesktopFirst', null, { path: '/', domain: '.scmp.com' });
                        return true;
                      });
                    }
                  }
                  $.colorbox(options);
                  $('#colorbox').addClass('colorbox_promo colorbox_promo_2');
                }
              }, $('body').hasClass('mt') ? 5000 : 0);
            });
            Drupal.behaviors.colorbox_hide = {
              attach: function (context, settings) {
                $('#colorbox_msg_hide').click(function(){
                  if($(this).is(':checked')){
                    $.cookie('Drupal.visitor.cbox_1', 1, { path: '/', expires: 30 });
                    $.colorbox.close();
                  }
                });
                $('#colorbox .close').click(function(){
                  $.colorbox.close();
                });
              }
            };
          }(jQuery));
        </script>  </div>

</div><!-- /.block -->
  </div><!-- /.region -->

