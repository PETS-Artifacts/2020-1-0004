<script>
  function loadPopup(){
    $.ajax({
      url: "/geolocator/load_news.php",
      async: true,
      dataType: "html",
      method:"POST",
      cache:false
    }).done(function(content) {
      if (content.length) {
        var cont = $(content.match(/<body[^>]*>((.|[\n\r])*)<\/body>/im)[1]);
        $('#dialog').html(cont);
        $('#dialog').dialog({
          autoOpen:false,
          resizable: false,
          modal: true,
          zIndex: 1000
        });
        $('#dialog').dialog("open");
      }
    });
  }

  $(document).ready(function(){
    setTimeout(loadPopup, 15000);
  });
</script>
