    function googleTranslateElementInit() {
        new google.translate.TranslateElement({
            pageLanguage: 'en',
            layout: google.translate.TranslateElement.InlineLayout.HORIZONTAL,
            gaId: 'UA-51679231-1'
        }, 'google_translate_element');
    }

    function gtmTranslate(e) {
        dataLayer.push({
            "event": "moEvent",
            "eventCategory" : "Google Website Translator",
            "eventAction": "Google Website Translator - Language Changed",
            "eventLabel": e.target.value
        });
    }

    document.getElementById("google_translate_element").addEventListener("change", gtmTranslate, true);
</script>
