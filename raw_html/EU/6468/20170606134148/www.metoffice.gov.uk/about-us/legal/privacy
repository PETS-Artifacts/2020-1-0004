                googletag.defineSlot(unitName, [160, 600], "skyscraper")
                        .addService(googletag.pubads());

                var barometerContentAds = document.getElementsByClassName("content-advert");
                if (barometerContentAds !== null) {
                    for (var i = 0; i < barometerContentAds.length; i++) {
                        googletag.defineSlot(unitName, [[730, 90], [730, 250], [728, 90]],
                                barometerContentAds[i].id)
                                .defineSizeMapping(barometerMapping)
                                .addService(googletag.pubads())
                                .setTargeting("slotNo", barometerContentAds[i].id);
                    }
                }

                googletag.pubads().collapseEmptyDivs();


                googletag.pubads().setTargeting("env", "www");

                <!-- Weather advert targeting -->
            };

            
        
