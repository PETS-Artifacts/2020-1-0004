            var unitFn = function () {
                var pathName;

                if (window.location.pathname === "/" || window.location.pathname === "/homepage") {
                    pathName = "/metoffice/";
                } else if (window.location.pathname.indexOf("forecast") !== -1) {
                    pathName = "/metoffice.weather/forecast";
                } else if (window.location.pathname.indexOf("observation") !== -1) {
                    pathName = "/metoffice.weather/observations";
                } else {
                    pathName = window.location.pathname;
                }
                var unitName = "/6002" + pathName;

                var mappingTop = googletag.sizeMapping()
                        .addSize([320, 240], [320, 50]) // mobile banner
                        .addSize([728, 240], [728, 90]) // Landscape tablet
                        .addSize([970, 240], [[970, 90], [728, 90]]) // Desktop extra wide
                        .build();

                var mappingBtm = googletag.sizeMapping()
                        .addSize([320, 240], [320, 50]) // mobile banner
                        .addSize([728, 240], [728, 90]) // Landscape tablet
                        .addSize([970, 240], [[970, 250], [970, 90], [728, 90]]) // Desktop extra wide
                        .build();

                var mobileMapping = googletag.sizeMapping()
                        .addSize([320, 240], [320, 50])  // mobile banner
                        .addSize([728, 240], [728, 90]) // Landscape tablet
                        .addSize([970, 240], [970, 90]) // Desktop extra wide
                        .build();

                var barometerMapping = googletag.sizeMapping()
                        .addSize([320, 240], [320, 50]) // mobile banner
                        .addSize([728, 240], [728, 90]) // Landscape tablet
                        .build();

                googletag.defineSlot(unitName, [[970, 90], [728, 90]], "ad-super-leader")
                        .defineSizeMapping(mappingTop)
                        .addService(googletag.pubads())
                        .setTargeting("pos", "top");

                googletag.defineSlot(unitName, [[970, 90], [970, 250], [728, 90]], "ad-bottom")
                        .defineSizeMapping(mappingBtm)
                        .addService(googletag.pubads())
                        .setTargeting("pos", "btm");

                googletag.defineSlot(unitName, [320, 50], "mobileAd")
                        .defineSizeMapping(mobileMapping)
                        .addService(googletag.pubads());

                googletag.defineSlot(unitName, [306, 31], "mapAd")
                        .addService(googletag.pubads())
                        .setTargeting("kw", "map");

                googletag.defineSlot(unitName, [306, 31], "featuresAd")
                        .addService(googletag.pubads())
                        .setTargeting("kw", "features");

                googletag.defineSlot(unitName, [306, 31], "weatherAd")
                        .addService(googletag.pubads())
                        .setTargeting("kw", "weather");

                googletag.defineSlot(unitName, [306, 31], "eventAd")
                        .addService(googletag.pubads())
                        .setTargeting("kw", "events");

                googletag.defineSlot(unitName, [306, 31], "textForecastAd")
                        .addService(googletag.pubads())
