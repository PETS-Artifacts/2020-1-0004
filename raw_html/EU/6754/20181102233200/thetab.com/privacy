						id: 'sectionmpu2',
						adUnit: '/' +networkID +'/' +dfpSiteID +'/' +sectionID,
						headerBiddingEnabled: true,

						isVisible: function(){ return isMobile() && TPD_cont_type === 'sec' },
						sizeMap: sizeMap.MPU,
						targeting: {
							pos: 'mpu2',
						},
					},
					{
						id: 'pixel',
						adUnit: '/' +networkID +'/' +dfpSiteID +'/' +sectionID,
						headerBiddingEnabled: false,

						isVisible: true,
						sizeMap: sizeMap.PIXEL,
						targeting: {
							pos: 'pixel',
						},
					},
					{
						id: 'pixelskin',
						adUnit: '/' +networkID +'/' +dfpSiteID +'/' +sectionID,
						headerBiddingEnabled: false,

						isVisible: function(){return window.innerWidth >= 1290},
						sizeMap: sizeMap.PIXEL,
						targeting: {
							pos: 'pixelskin',
						},
					},
					{
						id: 'pixelteads',
