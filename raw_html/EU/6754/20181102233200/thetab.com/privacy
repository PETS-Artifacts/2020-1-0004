		function isMobile() {
			return window.innerWidth <= 675
		}

		function adSetup() {
			console.log('adSetup start')
			var t1=new Image(); t1.src="https://track.hello.menu/track1.png";
			var networkID = '3048';
			var dfpSiteID = 'd.thetab';
			var sectionID = ''

			var sizeMap = {
				BILLBOARD: [
					{ breakpoint: [981, 100], sizes: [[970, 250], [970, 90], [728, 90]] },
					{ breakpoint: [810, 100], sizes: [[728, 90]] },
					{ breakpoint: [320, 100], sizes: [[320, 50], [300, 50]] },
					{ breakpoint: [300, 100], sizes: [[300, 50]] },
				],

				ARTICLEHEADER: [
					{ breakpoint: [300, 100], sizes: [[320, 50]] },
				],

				OUTSTREAM: [
					{ breakpoint: [300, 300], sizes: [[3, 1], [1, 1]] },
				],

				DOUBLEMPU: [
					{ breakpoint: [981, 600], sizes: [[300, 600], [300, 250]] },
					{ breakpoint: [300, 100], sizes: [[300, 250]] },
				],

				MPU: [
					{ breakpoint: [300, 100], sizes: [[300, 250]] },
				],

				PIXEL: [
					{ breakpoint: [0, 0], sizes: [[1, 1]] },
				],
			}

			function tpd_querySt(ji) {
				hu = window.parent.location.search.substring(1);
				gy = hu.split("&");
				for (i=0;i<gy.length;i++) {
					ft = gy[i].split("=");
					if (ft[0] == ji) {
						return ft[1];
					}
				}
			}
			var tpd_href = window.location.pathname;
			var tpd_dir = tpd_href.substring(0, tpd_href.lastIndexOf('/')) + "/";
			var TPD_Domain = location.host.replace('www.','')
			var TPD_Path = tpd_dir;
			var TPD_URL = tpd_href;
			var TPD_Title = parent.document.getElementsByTagName('title');
			var TPD_TitleKW = TPD_Title[0].text.split (" ");
			var TPD_Testmode = tpd_querySt("testmode");
			var TPD_cont_type = "sec";

			var targeting = {
				"aid": 54986,
				"cont_type": "sec",
				"h": (new Date()).getHours(),
				"page-type": "archive",
				"post-type": "page",
				"section": sectionID,
				"domain": TPD_Domain,
				"path": TPD_Path,
				"url": TPD_URL,
				"testmode": TPD_Testmode,
				"kw": TPD_TitleKW,
				"mob": isMobile,
			};

			var config = {
			  ads: {
				gpt: {
					sectionID: sectionID
				},
				autorefreshInterval: 15000,
				enable: true,
				//enable: true,
				slots: [
					{
						id: 'ad-header',
						adUnit: '/' +networkID +'/' +dfpSiteID +'/' +sectionID,
						headerBiddingEnabled: true,
						isVisible: function(){ return !isMobile() || TPD_cont_type === 'art' },
						sizeMap: sizeMap.BILLBOARD,
						targeting: {
							pos: 'leaderboard',
						},
					},
					{
						id: 'ad-sidebar-1',
						adUnit: '/' +networkID +'/' +dfpSiteID +'/' +sectionID,
						headerBiddingEnabled: true,
						autorefresh: true,
						isVisible: function(){ return !isMobile() },
						sizeMap: sizeMap.DOUBLEMPU,
						targeting: {
							pos: 'mpu1',
						},
					},
					{
						id: 'ad-sidebar-2',
						adUnit: '/' +networkID +'/' +dfpSiteID +'/' +sectionID,
						headerBiddingEnabled: true,
						autorefresh: true,
						isVisible: function(){ return !isMobile() },
						sizeMap: sizeMap.MPU,
						targeting: {
							pos: 'mpu2',
						},
					},
					{
						id: 'ad-interstitial',
						adUnit: '/' +networkID +'/' +dfpSiteID +'/' +sectionID,
						headerBiddingEnabled: true,
						isVisible: function(){ return !isMobile() && TPD_cont_type === 'sec' },
						sizeMap: sizeMap.BILLBOARD,
						targeting: {
							pos: 'leaderboard2',
						},
					},
					{
						id: 'ad-sticky',
						adUnit: '/' +networkID +'/' +dfpSiteID +'/' +sectionID,
						headerBiddingEnabled: true,
						autorefresh: true,
						isVisible: function(){return isMobile()},
						sizeMap: sizeMap.BILLBOARD,
						targeting: {
							pos: 'sticky',
						},
					},
					{
						id: 'sectionmpu1',
						adUnit: '/' +networkID +'/' +dfpSiteID +'/' +sectionID,
						headerBiddingEnabled: true,

