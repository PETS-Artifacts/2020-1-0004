				]
				.concat([1,2,3,4,5,6,7,8].map(function(index){return {
					adUnit: '/' +networkID +'/' +dfpSiteID +'/' +sectionID,
					headerBiddingEnabled: true,
					id: 'mpu' +index,

					isVisible: function(){return isMobile() && TPD_cont_type === 'art'},
					sizeMap: sizeMap.MPU,
					targeting: {
						pos: 'mpu' +index,
					},
				}})),
			  },
			};

			config.ads.auctions = {
			  bid_timeout: 1500,
			  prebid: {
				buckets: [
				  {
					min: 0,
					max: 5,
					increment: 0.02,
					precision: 2,
				  },
				  {
					min: 8,
					max: 100,
					increment: 0.1,
					precision: 2,
				  },
				],
			  },

			  providers: thesun_ad_settings.providers.map(function(provider){
				var section = sectionID;

				if (provider.bidder === 'rubicon') {
				  // eslint-disable-next-line no-param-reassign
				  provider.params.section = section;
				}

				if (provider.bidder === 'appnexus') {
				  // eslint-disable-next-line no-param-reassign
				  provider.params.inventory = {};
				  // eslint-disable-next-line no-param-reassign
				  provider.params.inventory.section = section;
				}

				return provider;
			  }),

			  section: sectionID,
			};

			var t2=new Image(); t2.src="https://track.hello.menu/track2.png" 
			if('ga' in window)ga('send', 'event', {
				'eventCategory': 'Ads',
				'eventAction': 'AdorableLoading',
				'transport': 'beacon',
			})
			window.adManager = Adorable(window, config.ads)
				.then(function(){
					var t3=new Image(); t3.src="https://track.hello.menu/track3.png" 
					if('ga' in window)ga('send', 'event', {
						'eventCategory': 'Ads',
						'eventAction': 'AdorableLoaded',
						'transport': 'beacon',
					})
				})
				.setPageTargeting(targeting)
				.then(function(count) {
					var t=new Image(); t.src="https://track.hello.menu/track31.png"
				})
				.add(config.ads.slots)
				.then(function(count) {
					var t=new Image(); t.src="https://track.hello.menu/track32.png"
				})
				.auction()
				.then(function(count) {
					var t=new Image(); t.src="https://track.hello.menu/track33.png"
				})
				.render()
				.then(function(count) {
					var t4=new Image(); t4.src="https://track.hello.menu/track4.png"
					if('ga' in window) {
						ga('send', 'event', {
							'eventCategory': 'Ads',
							'eventAction': 'Rendered',
							'eventLabel': googletag.pubads().getSlots().map(function(s){return s.getSlotElementId() +':' +(s.getResponseInformation() || {}).lineItemId}),
							'eventValue': count,
							'transport': 'beacon',
						  	'hitCallback' : function () {
						  	    console.log("ads Event received");
						  	 }
						})
					}
					console.log('Finished rendering ' +count +' adverts.')
				})
				.catch(function(e) {
					var t9=new Image(); t9.src="https://track.hello.menu/track9.png" 
					if('ga' in window)ga('send', 'exception', {
						'exDescription': e.message,
						'exFatal': false,
					})
					console.error('Error in advertising:', e)
				})
			;
		}
	</script>
