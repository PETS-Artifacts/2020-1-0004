                    },
                    LOGOUT_CONFIG: {
                        sessionCheckUrl : '//shop.tescomobile.com/session?format=json',
                        logoutUrl       : 'https://shop.tescomobile.com/upgrade/logout',
                        callback        : 'tesco-mobile'
                    },
                    COMPETITION_CONFIG: {
                        endpoint: '//shop.tescomobile.com/network/competition',
                        success: 'http://www.tescomobile.com/'
                    }

                };
        </script>
        <!--
        INCLUDE SCRIPT DEPENDENCIES
        -->
        <script src="/scripts/vendors/vendors.min.js"></script>

        
        
                    <script src="/scripts/global.min.js?v=0e4b493b4fb6fa2f28f84eb23988af304cc847ab"></script>
        
        <script>
            var tesco_cookie_widget = $('#tesco_cookie_widget');
            var results = document.cookie.match('(^|;) ?tesco_cookie_accepted_v1=([^;]*)(;|$)');
            if (!results ||  (results && unescape(results[2]) !== "1")) {
                $('#tesco_cookie_widget').removeClass('is-hidden');
                $(function () {
                    $(document)
                        .one('click', 'a:not(.js-cookie-noset)', function() {
                            tesco_cookie_accept(".tescomobile.com");
                        })
                        .one('submit', 'form', function() {
                            tesco_cookie_accept(".tescomobile.com");
                        });
                });
            }
            function tesco_cookie_accept(cookieDomain) {
                document.cookie = 'tesco_cookie_accepted_v1=1; path=/; ;domain=' + cookieDomain + '; expires=Mon, 18 Jan 2038 01:23:45 GMT';
                $('#tesco_cookie_widget').addClass('is-hidden');
            }
        </script>

        <!-- INCLUDE THE UNDERSCORE TEMPLATES -->
