        <script id="basket-template" type="text/template">
            <ul class="search__results">
                <% _.each(phones, function(item, i){ %>
                    <li class="result__item grid-module <% if(0 === i) {%>is-first<%} %> <% if((phones.length - 1) === i) {%>is-last<%} %>">
                        <div class="grid__container">
                            <% if(item.title) { %>
                                <div class="grid__column grid--column-12">
                                    <a href="#" data-id="<%= item.basket_id %>" class="item__remove icon alert-close--icon">Remove item</a>
                                    <h1 class="item__title"><a href="<%= item.url %>"><%= item.title %></a></h1>
                                </div>
                            <% } %>
                            <div class="grid__column grid--column-6">
                                <div class="grid__container">
                                    <% if(item.img !== false) { %>
                                        <div class="grid__column grid--column-6">
                                            <img src="<%= item.img %>" alt="">
                                            <% if(item.isPackage && !item.isAnytimeUpgrade) { %>
                                                <img src="<%= item.peripheral_img %>" alt="">
                                            <% } %>
                                        </div>
                                    <% } %>
                                    <% if(item.allowances !== false) { %>
                                        <p class="item__allowances grid__column grid--column-6"><% _.each(item.allowances, function(allowance){ %>
                                            <strong><%= allowance %></strong><br>
                                        <% }); %></p>
                                    <% } %>
                                </div>
                                <% if(item.contract !== false) { %>
                                    <p class="item__term align-right">
                                        <span class="tag tag--alpha"><%= item.contract %> <% if(item.contract === 1) {%>month<%} else { %>months <% } %></span>
                                    </p>
                                <% } %>
                            </div>
                            <div class="grid__column grid--column-6">
                                <% if(item.price !== false) { %>
                                    <p class="item__price"><% _.each(item.price, function(price){ %>
                                        <%= price.name %>: <strong><%= price.value %></strong><br>
                                    <% }); %></p>
                                <% } %>
                                <% if(item.upfrontCost) { %>
                                    <p class="item__extras">
                                        <%= item.upfrontCost.name %>: 
                                        <strong>
                                            <% if(item.upfrontCost.value === 0) { %>
                                                No upfront cost
                                            <% } else { %>
                                                <%= item.upfrontCost.value %>
                                            <% } %>
                                        </strong>
                                    </p>
                                <% } %>
                                <% if(item.extras !== false) { %>
                                    <p class="item__extras"><% _.each(item.extras, function(extra){ %>
                                        <%= extra.name %><% if(extra.value.length) { %>: <% } %><strong><%= extra.value %></strong><br>
                                    <% }); %></p>
                                <% } %>
                            </div>
                            <% if(item.isPackage && item.isAnytimeUpgrade) { %>
                                <div class="table-row--package-spacer clearfix">
                                    <div class="package-separator"></div>
                                </div>
                                <div class="grid__column grid--column-12">
                                    <h1 class="item__title">
                                        <a href="<%= item.url %>">
                                            <%= item.peripheral_name %>
                                        </a>
                                    </h1>
                                </div>
                                <div class="grid__column grid--column-6">
                                    <div class="grid__container">
                                        <% if(item.peripheral_img !== false) { %>
                                            <div class="grid__column grid--column-6">
                                                <img src="<%= item.peripheral_img %>" alt="">
                                            </div>
                                        <% } %>
                                    </div>
                                    <% if(item.contract !== false) { %>
                                        <p class="item__term align-right">
                                            <span class="tag tag--alpha">
                                                <%= item.contract %>
                                                <% if(item.contract === 1) {%>month<%} else { %>months <% } %>
                                            </span>
                                        </p>
                                    <% } %>
                                </div>
                                <div class="grid__column grid--column-6">
                                <% if(item.price !== false) { %>
                                    <p class="item__price">
                                        <% _.each(item.peripheral_price, function(price){ %>
                                            <%= price.name %>: <strong><%= price.value %></strong>
                                            <br>
                                        <% }); %>
                                    </p>
                                <% } %>    
                            <% } %>
                        </div>
                    </li>
                <% }); %>
                <li class="search__link bottom--link">
                    <a href="<%= url %>" class="button">View shopping basket</a>
                </li>
