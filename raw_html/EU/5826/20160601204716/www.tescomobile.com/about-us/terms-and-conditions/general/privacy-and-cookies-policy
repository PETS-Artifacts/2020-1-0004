        <script>
            var tesco_cookie_widget = $('#tesco_cookie_widget');
            var results = document.cookie.match('(^|;) ?tesco_cookie_accepted=([^;]*)(;|$)');
            if (!results ||  (results && unescape(results[2]) !== "1")) {
                $('#tesco_cookie_widget').removeClass('is-hidden');
                $(function () {
                    $(document)
                        .one('click', 'a:not(.js-cookie-noset)', function() {
                            tesco_cookie_accept(".tescomobile.com");
                        })
                        .one('submit', 'form', function() {
                            tesco_cookie_accept(".tescomobile.com");
                        });
                });
            }
            function tesco_cookie_accept(cookieDomain) {
                document.cookie = 'tesco_cookie_accepted=1; path=/; ;domain=' + cookieDomain + '; expires=Mon, 18 Jan 2038 01:23:45 GMT';
                $('#tesco_cookie_widget').addClass('is-hidden');
            }
        </script>

