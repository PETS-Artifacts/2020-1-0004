    <script type="text/javascript">
        $(document).ready(function() {
            $('#colorbox').attr({
                "aria-hidden": "true",
                "aria-labelledby": "cboxTitle",
                "aria-describedby": "cboxLoadedContent",
                "aria-live": "polite",
                "aria-busy": "false"
            });
        });

        function addControls() {
            $('#cboxLoadedContent').insertAfter('#cboxTitle');

            $('#colorbox').attr({
                "aria-busy": "false"
            });
        }

        $.extend($.colorbox.settings, {
            close: 'Close',
            previous: 'Previous',
            next: 'Next',
            slideshowStart: 'Start slide show',
            slideshowStop: 'Stop slide show',
            onOpen: function() {
                $('#colorbox').attr({
                    "tabindex": "0",
                    "aria-hidden": "false",
                    "aria-busy": "true"
                });
            },
            onLoad: function(){
                if ( $('#cboxError').length ) {
                    addControls();
                }
            },
            onComplete: function(){
                addControls();

                $('#colorbox').focus();
            },
            onClosed: function() {
                $('#colorbox').attr({
                    "aria-hidden": "true",
                    "tabindex": "-1"
                });
                
                $('#cboxTitle').text('');
            }
        });
    </script>

    <script type="text/javascript">
        $(document).ready(function() {
            $('.slider__header, .slider__header_pre, .dot_expanded').each(function() {
                $(this).attr('aria-expanded', 'false').attr('aria-controls', $(this).attr('rel'));
            }).on('click', function() {
                var rel = $(this).attr('rel');
                var href = $(this).attr('href');
                var $target = $("#" + rel);

                if ( $target.length )
                    if ( $target.is(':visible') ) {
                        if ( !($(this).hasClass('nochange') || $(this).hasClass('slider__header_pre')) ) {
                            $(this).removeClass("uparrow");
                        }

                        $(this).removeClass("uparrow").attr('aria-expanded', 'false');
                        $target.slideUp();
                    } else {
                        if ( !($(this).hasClass('nochange') || $(this).hasClass('slider__header_pre')) ) {
                            $(this).addClass("uparrow");
                        }

                        $(this).addClass("uparrow").attr('aria-expanded', 'true');
                        $target.slideDown();
                    }

                return false;
            });
        });
    </script>
    
