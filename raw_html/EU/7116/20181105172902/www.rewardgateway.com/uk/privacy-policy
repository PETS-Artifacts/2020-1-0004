    $(window).scroll(function(){
    if($(document).scrollTop()>=$(document).height()/2)
        $("#spopup").show("slow");
        else 
        $("#spopup").hide("slow");
    });
    function closeSPopup(){
           $('#spopup').css("display", "none"); 
           $('#spopup').css("opacity", 0);
                 $('#spopup').css("pointer-events", "none");
        $('#spopup').hide('slow');
    }
</script>
