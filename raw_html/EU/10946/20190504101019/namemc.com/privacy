  new ClipboardJS('.copy-button').on('success', function (e) {
    var element = $(e.trigger);
    element.tooltip('show');
    clearTimeout(element.attr('data-timeout'));
    element.attr('data-timeout', setTimeout(function () { element.attr('data-timeout', null); element.tooltip('hide'); }, 500));
