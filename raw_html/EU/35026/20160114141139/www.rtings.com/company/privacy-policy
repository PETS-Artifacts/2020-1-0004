<script type='text/javascript'>
function setCookie(b,j,m){if(typeof j!="undefined"){m=m||{};if(j===null){j="";m.expires=-1}var e="";if(m.expires&&(typeof m.expires=="number"||m.expires.toUTCString)){var f;if(typeof m.expires=="number"){f=new Date();f.setTime(f.getTime()+(m.expires*24*60*60*1000))}else{f=m.expires}e="; expires="+f.toUTCString()}var l=m.path?"; path="+(m.path):"";var g=m.domain?"; domain="+(m.domain):"";var a=m.secure?"; secure":"";document.cookie=[b,"=",encodeURIComponent(j),e,l,g,a].join("");return j}else{var d=null;if(document.cookie&&document.cookie!=""){var k=document.cookie.split(";");for(var h=0;h<k.length;h++){var c=(k[h].trim());if(c.substring(0,b.length+1)==(b+"=")){d=decodeURIComponent(c.substring(b.length+1));break}}}return d}};
function upvote(id)
{
   var value = document.getElementById('up' + id).innerHTML;
   document.getElementById('up' + id).innerHTML = (parseInt(value) + 1);
   ga('send', 'event', 'upvote', 'upvote');
   var x = new XMLHttpRequest();
   x.open("POST", "/upvote?id=" + id, true);
   x.send();
}

function toggleElement(id) {
   var e = document.getElementById(id);
   if (e == null) { return; }
   if (e.style.display == 'block')
      e.style.display = 'none';
   else
      e.style.display = 'block';
}

function expandMenu(menu) {
   var e = document.getElementById('outfloat');
   if (e.style.zIndex == "-1") {
      e.style.zIndex = "4";
      menu.style.backgroundColor = "#FFF";
      window.scrollTo(0,0);
      document.getElementById('overlay').style.display = 'block';
      document.getElementById('header-more-img-hover').style.display = 'inline';
      document.getElementById('header-more-img').style.display = 'none';
   }
   else if (e.style.display == 'block') {
      e.style.zIndex = "-1";
      menu.style.backgroundColor = "#E70000";
      document.getElementById('overlay').style.display = 'none';
      document.getElementById('header-more-img-hover').style.display = 'none';
      document.getElementById('header-more-img').style.display = 'inline';
   }
   else {
      e.style.display = 'block';
      menu.style.backgroundColor = "#FFF";
      window.scrollTo(0,0);
      document.getElementById('overlay').style.display = 'block';
      document.getElementById('header-more-img-hover').style.display = 'inline';
      document.getElementById('header-more-img').style.display = 'none';
   }
}

function hasClass(element, cls) {
    return (' ' + element.className + ' ').indexOf(' ' + cls + ' ') > -1;
}

function expandSideMenu(e) {
   var list = e.nextElementSibling;
   if (list.style.display == 'block')
      list.style.display = 'none';
   else
      list.style.display = 'block';
   var icon = e.firstElementChild;
   if (icon.className == "topmenutreeclose") {
      icon.className = "topmenutreeopen";
   }
   else if (icon.className == "topmenutreeopen") {
      icon.className = "topmenutreeclose";
   }

}

function searchClick()
{
  toggleElement('searchbox-text');
  var i = document.getElementById('searchbox');
  i.focus();
  if (i.value != '') {
    document.getElementById('cse-search-box').submit();
  }
}

function clickTab()
{
   var inputs = document.querySelectorAll('.mega-menu-tab-input');
   for (var i = 0; i < inputs.length; ++i) {
      var tab = document.getElementById(inputs[i].getAttribute('data-tab'));
      if (inputs[i].checked) {
         tab.style.display = 'block';
      }
      else {
         tab.style.display = 'none';
      }
   }
}

var force_desktop = setCookie('rtings-mobile');
document.getElementById('mobile-footer-return').style.display = 'none';
document.getElementById('mobile-footer-exit').style.display = 'none';
if (force_desktop == null || force_desktop != 'true') {
   if (windowWidth <= 900) {
      document.getElementById('mobile-footer-exit').style.display = 'block';
   }
}
else {
   var media_element = document.getElementById('media-css');
   media_element.parentNode.removeChild(media_element);
   document.getElementById('mobile-footer-return').style.display = 'block';
   document.getElementById('header').style.position = 'static';
   ga('send', 'event', 'mobile', 'force-desktop');
}

function handleMenuTouch(ev) {
  ev.target.click();
}

function installEventHandlers() {
  menus = document.getElementsByClassName('header-button');
  for(var i=0; i < menus.length; i++) {
    menus[i].addEventListener("touchstart", handleMenuTouch);
  }
  menus = document.getElementsByClassName('header-sub-button');
  for(var i=0; i < menus.length; i++) {
    menus[i].addEventListener("touchstart", handleMenuTouch);
  }
};

function getElementsByData(dataId) {
    // TODO use api compatible with more browsers?
    return document.querySelectorAll('[data-'+dataId+']');
};

var GeoRtings = (function () {
    var geo_data = {};
    var tracking_tag = null;
    var preferred_ecommerce = null;
    var post_load_hooks = [];
    var qa_field_ids = ['question_blurb', 'ask_button', 'notification_email', 'question_question_type'];
    var qa_state = null;

    function load(info) {
        for (var key in info) {
            geo_data[key] = info[key];
        }
        postLoad();
    };

    function postLoad() {
        if (geo_data.outside != undefined) {
            loadOutside(geo_data);
        }
        for (i=0; i < post_load_hooks.length; ++i) {
          post_load_hooks[i]();
        }
    };

    function loadSkuMap(sku_data, ecommerce, outside) {
        if (ecommerce) {
            preferred_ecommerce = ecommerce;
        }

        sku_links = getElementsByData('sku-id');
        for (i=0; i < sku_links.length; ++i) {
            a = sku_links[i];
            sku_id = a.dataset.skuId;
            stores = sku_data[sku_id];
            url = null;
            if (stores[ecommerce]) {
                url = stores[ecommerce].url;
            } else if (stores.fallback) {
                url = stores.fallback.url;
            }
            if (url) {
              a.href = url.replace("rtings-20", getTrackingTag());
            }
        }

        /*
        store_images = getElementsByData('ecom-id');
        if (current_store = getStore()) {
            for (i=0; i < store_images.length; ++i) {
                img = store_images[i];
                img.src = current_store.img;
                img.alt = current_store.name;
                img.title = current_store.name;
            }
        }*/
    };

    function loadQAState() {
        for (i=0; i < qa_field_ids.length; ++i) {
            elem = document.getElementById(qa_field_ids[i]);
            if (elem != null) {
                qa_state = elem.disabled;
                break;
            }
        }
    };

    function loadOutside(geo) {
        if (geo.country != null) {
            setCookie('rtings-country', geo.country, {expires: 7, path: '/'});
        }
        setCookie('rtings-outside', geo.outside, {expires: 7, path: '/'});

        if (geo.outside) {
            disabled = true;
        } else {
            disabled = qa_state;
        }
        for (i=0; i < qa_field_ids.length; ++i) {
            elem = document.getElementById(qa_field_ids[i]);
            if (elem != null) {
                elem.disabled = disabled;
            }
        }
    };

    function loadCookies() {
        outside = setCookie('rtings-outside');
        if (outside != null) {
          geo_data.outside = (outside == "true");
        }
        country = setCookie('rtings-country');
        if (country != null) {
          geo_data.country = country;
        }
    };

    function loadJS(id, uri) {
        if (document.getElementById(id) == null) {
            var js, fjs = document.getElementsByTagName('script')[0];
            js = document.createElement('script');
            js.id = id;
            js.src = uri;
            fjs.parentNode.insertBefore(js, fjs);
        }
    };

    function getSkuStore(skuId) {
        var sku_data = geo_data.sku_data;
        var store_data = geo_data.stores;
        if (!sku_data || !sku_data[skuId]) {
            return [];
        }

        sku = sku_data[skuId];

        if (preferred_ecommerce && sku[preferred_ecommerce]) {
            return sku[preferred_ecommerce];
        }
        return sku.fallback;
    };

    function getTrackingTag() {
        if (geo_data.outside) {
            if (geo_data.country == 'CA') {
                return 'rtings5-20';
            } else if (geo_data.country == 'GB') { // UK
                return 'rtings4-20';
            } else {
                return 'rtings3-20';
            }
        }  else {
            return tracking_tag;
        }
    };

    function getStore(storeId) {
        if (storeId == null) {
            store = geo_data.stores && (geo_data.stores[storeId] || geo_data.stores.fallback);
        } else {
            store = geo_data.stores.fallback;
        }
        return store;
    }

    function init(pageTrackingId) {
        if (pageTrackingId) {
            tracking_tag = pageTrackingId;
        }
        loadQAState();
        loadCookies();
        if (geo_data.outside == null || geo_data.country == null) {
            loadJS('geoinfo_js', '/geo.js');
        }
        if (geo_data.stores == null) {
            geo_data.stores = {
                fallback: {name: 'Amazon', img: 'http://i.rtings.com/images/amazon.gif', tag: 'rtings-20'},
                     1: {name: 'Best Buy', img: 'http://i.rtings.com/images/bestbuy.png', tag: 'rtings-20'}
            };
        }
        postLoad();
    };

    return {
      init: init,
      load: load,
      getSkuStore: getSkuStore,
      getStore: getStore,
      postLoad: post_load_hooks,
      getTracking: getTrackingTag,
      data: geo_data // XXX: Remove me
    };
})();

</script>


<script type="text/javascript">installEventHandlers()</script>
