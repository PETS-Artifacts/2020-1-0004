      document.addEventListener('es_session_loaded', function esSessionLoaded() {
        try {
                                                                      _paq.push(['setCustomVariable', 4, 'PageType', "Info", 'page']);
          if (es_session.isLoggedIn()) {
            var userId = es_session.user_id;

            if (!userId && es_session.es_sessid) {
              userId = es_session.es_sessid.slice(5, -2);
            }

            _paq.push(['setCustomVariable', 1, 'User', userId, 'visit']);
            _paq.push(['setCustomVariable', 1, 'User', userId, 'page']);
          }

          _paq.push(['trackPageView']);
        } catch (err) {}
      });

