                jQuery("#" + blockTag).load(esiUrl, function(){
                    jQuery("#" + blockTag).show();
                    
                });
            } else  if (typeof Ajax === 'object' && typeof Ajax.Updater === 'function') {
                new Ajax.Updater(
                    blockTag,
                    esiUrl,
                    {
                        method: "get",
                        evalScripts: true,
                        onSuccess: function() {
//                            $(blockTag).appear({
//                                duration: 0.3
//                            });
                            
                        }
                    }
                );
           }
        })();
        });
    </script>
</div>                </div>
                                <div class="clr"></div>
            </div>
        </div>
