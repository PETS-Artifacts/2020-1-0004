	function hideMessage() {
		$('.messaging-container').hide();
		$('#small-header-nav').removeClass('msg');
		document.cookie = "seen_msg_=1; path=/;domain=adafruit.com;";
	}

	$(document).ready(function(){

		// Turn on all the carousels!
		if($('.carousel').length > 0) $('.carousel').carousel();

		$('#navigation nav > ul > li').hover_menu();
		$('#small-header-content').mobile_menu();

		
		function videoautoheight(){
			$("iframe.youtube").each(function() {
				var orig = $(this);
				var container = orig.parents().find("div:last");
				container.fitVids();
			});
		}

		videoautoheight();

		$('#header-cart').shoppingCartTag({
		  cartUpdated : function(cart_data){
			cartCount = 0;
			this.html(cart_data['cart_totals']['items'] + ' Items <i class="fa fa-shopping-cart"></i>');
		  }
		});
		$('.small-cart-count').shoppingCartTag({
		  cartUpdated : function(cart_data){
			cartCount = 0;
			this.html(cart_data['cart_totals']['items'] );
		  }
		});
	});
</script>
