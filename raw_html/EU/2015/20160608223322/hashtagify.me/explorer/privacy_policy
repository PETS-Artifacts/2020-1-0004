  $(function(){
    $('.hashtagify_logo_beta').click(function(event){
      event.preventDefault();
      event.stopPropagation();

      var container = $('#hashtagify_beta_2_0_popup');
      $.fancybox(container, {
        modal: false,
        maxWidth: 600,
        padding: 0,
        minHeight: 50,
        fitToView: false,
        autoSize: false,
        autoHeight: true,
        closeBtn: false,
        topRatio: .3,
        scrolling: 'no',
        helpers: {
          title: {
            type: 'inside',
            position: 'top'
          },
          overlay: {
            locked: false
          }
        },
        beforeShow: function() {
          container.find('.ui_popup_close').click(function(){$.fancybox.close()});
          container.find('.see_plans_link').click(function(event){
            event.preventDefault();
            Hashtagify.log('goal', 'hashtagify_beta_2_0_popup_see_plans_clicked');
            location.href = '/pricing';
          });
        },
        afterShow: function() {
          Hashtagify.log('goal', 'hashtagify_beta_2_0_header_logo_clicked');
        },
        beforeClose: function() {},
        afterClose: function() {
          container.find('.ui_popup_close, .see_plans_link').unbind();
        }
      });

    });
  });
</script>

