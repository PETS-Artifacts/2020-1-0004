  <script language="javascript">
  $(document).ready(function() {
    var alert = null;
    var notice = null;

    if (notice) {
      var type = 'alert';
      if (notice.match(/success/i)) type = 'success';
      if (notice.match(/^(logged|signed)/i)) type = 'information';

      noty ({
        type: type
        , timeout: notice.match(/Check your email/i) ? null : 4000
        , text: notice
      });
    }

    if (alert) {
      var error = alert.match(/invalid/i)

      noty ({
        type: error ? 'error' : 'warning'
        , timeout: error ? 20000 : 10000
        , text: alert
      });
    }
  });
</script>

