<script type="text/javascript" charset="utf-8">

  var g_header_menu_pro_link_style = {"anchor_class":"","remove_element":""};

  $(function(){
    // apply header menu pro link style test
    if (g_header_menu_pro_link_style.anchor_class.length > 0 && g_header_menu_pro_link_style.remove_element.length > 0) {
      $('#header ' + g_header_menu_pro_link_style.remove_element).parent().addClass(g_header_menu_pro_link_style.anchor_class);
    }
    if (g_header_menu_pro_link_style.remove_element.length > 0) {
      $('#header ' + g_header_menu_pro_link_style.remove_element).hide();
    }

    var delay;
    var menu_wrapper = $('.menu_wrapper');
    menu_wrapper.on('mouseenter', '.nav > a', function(event){
      window.clearTimeout(delay);
      delay = window.setTimeout(function(){
        if ($(event.currentTarget).parent().hasClass('hovered')) {
          Hashtagify.log('goal', $(event.currentTarget).data('menu')+'_menu_shown');
        }
      },750);
    });
    menu_wrapper.on('click', '.nav > a', function(event){
      window.clearTimeout(delay);
      delay = window.setTimeout(function(){
        if ($(event.currentTarget).parent().hasClass('hovered')) {
          Hashtagify.log('goal', $(event.currentTarget).data('menu')+'_menu_shown');
        }
      },750);
    });
    menu_wrapper.on('click', '.menu a', function(event){
      //event.preventDefault();
      var action;

      if ($(event.currentTarget).hasClass('lab_analyses')) {
        action = 'lab_analyses_menu_item_clicked';
        Hashtagify.log('goal', action);
      } else if (/\@/.test($(event.currentTarget).text())) {
        action = 'account_menu_item_clicked';
        Hashtagify.log('goal', action);
      } else {
        action = $(event.currentTarget).text().trim().toLowerCase().replace(/\s/g, '_').replace(/&/g, 'and').replace(/@/g, 'account_') + '_menu_item_clicked';
        Hashtagify.log('goal', action);
      }

      // ab-test (remove these when test finished..)
      if ([
          'get_the_pro_free_trial_menu_item_clicked',

          'my_daily_suggestions_pro_menu_item_clicked',
          'hashtags_lab_pro_menu_item_clicked',
          'my_influencers_pro_menu_item_clicked',
          'find_influencers_pro_menu_item_clicked',
          'users_lab_pro_menu_item_clicked',
          'manage_pro_menu_item_clicked'
        ].indexOf(action) != -1) {

        Hashtagify.log('goal', 'generic_abtest_goal_for_merged_pro_link');
      }
    });

  });
</script>


