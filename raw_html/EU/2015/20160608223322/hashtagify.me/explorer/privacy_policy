  <script type="text/javascript" charset="utf-8">
    $("input[name=what_do_you_do]:radio").change(function(){
      if ($(this).attr('data-custom') == 1) {
        // show custom textarea
        $('textarea[name=what_do_you_do_something_else]').closest('li').show();
      } else {
        $('textarea[name=what_do_you_do_something_else]').closest('li').hide();
      }
    });

    $("input[name=my_main_goal_is_to]:radio").change(function(){
      if ($(this).attr('data-custom') == 1) {
        // show custom textarea
        $('textarea[name=my_main_goal_with_hashtagify_is_to_something_else]').closest('li').show();
      } else {
        $('textarea[name=my_main_goal_with_hashtagify_is_to_something_else]').closest('li').hide();
      }
    });
  </script>


