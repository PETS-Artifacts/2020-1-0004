	function HeaderBars(barsInfo)  {
  		// Don't need header dropdown on mobile

  		this.barsInfo = barsInfo[0];

		//console.log(current_menu);

		this.generate_item = function(item_data) {
			// main div for item
			var header_item = document.createElement("div");
			header_item.classList.add("header-dropdown-item");
			var header_item_img_wrap = document.createElement('div');
			// image + title
			header_item_img_wrap.classList.add("header-dropdown-item-img")
			var header_item_img_a = document.createElement('a');
			header_item_img_a.classList.add('dd_img_wrap');
			header_item_img_a.href = item_data.link;
			var header_item_img = document.createElement('img');
			header_item_img.src = item_data.img;
			header_item_img.alt = item_data.title;
			header_item_img.title = item_data.title;
			header_item_img_a.appendChild(header_item_img);
			header_item_img_wrap.appendChild(header_item_img_a);
			var header_item_title = document.createElement('a');
			header_item_title.classList.add('dropdown-head');
			header_item_title.href = item_data.link;
			var header_item_text = document.createTextNode(item_data.title);
			header_item_title.appendChild(header_item_text);
			header_item_img_wrap.appendChild(header_item_title);
			header_item.appendChild(header_item_img_wrap);
			// author information
			var header_auth_wrap = document.createElement('div');
			header_auth_wrap.classList.add('header-dropdown-author');
			var header_auth_img = document.createElement('img');
			header_auth_img.src = item_data.author_img_url;
			header_auth_img.alt = item_data.author;
			header_auth_img.title = item_data.author;
			header_auth_img.width = "40";
			header_auth_img.height = "40";
			header_auth_wrap.appendChild(header_auth_img);
			var header_auth_a = document.createElement('a');
			header_auth_a.href = item_data.author_url;
			var header_auth_name = document.createTextNode(item_data.author);
			header_auth_a.appendChild(header_auth_name);
			var header_item_date = document.createElement('p');
			var header_item_date_text = document.createTextNode(item_data.date);
			header_item_date.appendChild(header_item_date_text);

			header_auth_wrap.appendChild(header_auth_img);
			header_auth_wrap.appendChild(header_auth_a);
			header_auth_wrap.appendChild(header_item_date);
			header_item.appendChild(header_auth_wrap);
			return header_item;
		}

		this.generate_more_item = function(text, link) {
			var header_item = document.createElement("div");
			header_item.classList.add("header-dropdown-item");
			var header_more = document.createElement("div");
			header_more.classList.add("header-dropdown-item-more");
			//var header_item_img_a = document.createElement('a');
			//header_item_img_a.href = link;
			//header_more.appendChild(header_item_img_a);

			var header_item_img_ad = document.createElement('a');
			header_item_img_ad.classList.add('dropdown-head');
			if(link === '%cookie%') {
				header_item_img_ad.onclick = function(e){window.__cmp('showConsentModal');return false;};
				header_item_img_ad.href = '';
			} else {
				header_item_img_ad.href = link;


			}
			var header_name = document.createTextNode(text);
			header_item_img_ad.appendChild(header_name);
			header_more.appendChild(header_item_img_ad);
			header_item.appendChild(header_more)

			var author_item = document.createElement("div");
			author_item.classList.add("header-dropdown-author");

			var header_auth_img = document.createElement('img');
			header_auth_img.src = 'https://www.pcgamesn.com/wp-content/uploads/avatars/user-218.png';
			header_auth_img.alt = 'Network N';
			header_auth_img.title = 'Network N';
			header_auth_img.width = "40";
			header_auth_img.height = "40";

			author_item.appendChild(header_auth_img);

			var header_item_img_a = document.createElement('a');
			var author_name = document.createTextNode('Network N');
			header_item_img_a.appendChild(author_name);
			author_item.appendChild(header_item_img_a);
			var header_item_p = document.createElement('p');
			author_item.appendChild(header_item_p);
			header_item.appendChild(author_item);
			return header_item;

		}

		this.generate_menu_nav = function(key, size) {
			var header_dropdown_nav = document.createElement('nav');
			header_dropdown_nav.classList.add("header-dropdown-nav");
			header_dropdown_nav.id = "header-dropdown-nav-" + key;
			var header_dropdown_ul = document.createElement('ul');
			header_dropdown_ul.dataset.index = 0;
			header_dropdown_ul.dataset.count = size;
			var header_dropdown_nav_prev = document.createElement('li');
			header_dropdown_nav_prev.classList.add('dropdown-nav');
			header_dropdown_nav_prev.classList.add('dropdown-nav-prev');
			var header_dropdown_nav_prev_txt = document.createTextNode("&gt;");
			header_dropdown_nav_prev.appendChild(header_dropdown_nav_prev_txt);

			var header_dropdown_nav_next = document.createElement('li');
			header_dropdown_nav_next.classList.add('dropdown-nav');
			header_dropdown_nav_next.classList.add('dropdown-nav-next');
			var header_dropdown_nav_next_txt = document.createTextNode("&lt;");
			header_dropdown_nav_next.appendChild(header_dropdown_nav_next_txt);
			if(size > 3) {
				header_dropdown_nav_next.classList.add('active');
			}
			header_dropdown_ul.appendChild(header_dropdown_nav_next);
			header_dropdown_ul.appendChild(header_dropdown_nav_prev);
			header_dropdown_nav.appendChild(header_dropdown_ul);
			return header_dropdown_nav;
		}

		this.generate_menu_bar = function(key, size) {
			var menu_wrapper = document.createElement("div");
			menu_wrapper.classList.add('header-dropdown');
			menu_wrapper.id = "header-"+key;
			var menu_slider = document.createElement("div");
			menu_slider.classList.add('header-dropdown-slider');
			if(key !== 'more') {
				for(var j = 0 ; j < size ; j ++) {
					var item = this.generate_item(this.barsInfo[key][j]);
					menu_slider.appendChild(item);
				}
			} else if(key === 'more') {
				menu_slider.appendChild(this.generate_more_item('About Us', '/about-us'));
				menu_slider.appendChild(this.generate_more_item('Terms & Conditions', '/terms-and-conditions'));
				menu_slider.appendChild(this.generate_more_item('Careers', '/careers'));
				menu_slider.appendChild(this.generate_more_item('Manage Cookies ', '%cookie%'));
				menu_slider.appendChild(this.generate_more_item('Promoted Content', '/promoted-content'));
			}

			menu_wrapper.appendChild(menu_slider);
			header_dropdown_nav = this.generate_menu_nav(key, size);
			menu_wrapper.appendChild(header_dropdown_nav);
			return menu_wrapper;

		}


		//var menu_target = document.body;
		var possible_menu_targets = document.body.getElementsByClassName('container');
		var menu_target = null;
		// now make sure this is our header
		for (var i=0 ; i < possible_menu_targets.length; i++) {
			
			if( possible_menu_targets[i].parentNode.classList.contains('banner') ) {
				menu_target = possible_menu_targets[i];
				break;
			}
		}
		
		console.log("adding menu");
		// go through and create all the dropdowns
    	for (var key in this.barsInfo) {
			menu_target.appendChild(this.generate_menu_bar(key, this.barsInfo[key].length));
		}
		menu_target.appendChild(this.generate_menu_bar('more', 5));
	}

	window.menu_items = new HeaderBars(menu_items);


	</script><script type='text/javascript'>
