            $('body').on('click', '.ad_report_button', function() {
                var target = 'mod/contactform/index.php';
                var userMsg = prompt("Please tell us what the ad is doing (popping out, autoplaying sound, etc)");
                if (!userMsg) {
                    return false;
                }

                var msg = "Bad ad report with following explanation of what the ad was doing:\r\n\r\n" + userMsg + "\r\n\r\nFor ad with the following HTML:\r\n\r\n" + $(this).parent().html();

                $.ajaxSetup({
                     crossDomain: true,
                     xhrFields: {
                         withCredentials: true
                     },
                });
                $.post(target, {
                        'Form Type': 'Bad Ad',
                        'submitted': '1',
                        'idf9f1018ed0814fda564c': '284aba0f377b9e478a1da5519b642cf0',
                        'message': msg,
                        'auto': 'true',
                }, function(data, textStatus, jqXHR){
                    alert('Thank you! The Erfworld team appreciates you taking the time to help us improve the quality of our adverts.');
                });

                return false;
            });
</script>
