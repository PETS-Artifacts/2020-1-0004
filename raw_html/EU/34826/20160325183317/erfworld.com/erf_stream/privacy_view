<script type="text/javascript">
    //logic to determine the active tab
    var uri = window.location.pathname;

    if (uri.indexOf('erf_stream') > -1 || document.getElementById("erf"))
        var x = document.getElementById("erfListItem").className = "active";
    else if (uri.indexOf('gaming_stream') > -1 || document.getElementById("gaming"))
        var x = document.getElementById("gamingListItem").className = "active";
    else if (uri.indexOf('community_stream') > -1 || document.getElementById("community"))
        var x = document.getElementById("communityListItem").className = "active";
    else if (uri.indexOf('fiction_stream') > -1 || document.getElementById("fiction"))
        var x = document.getElementById("fictionListItem").className = "active";
    else if (uri.indexOf('toolbox_stream') > -1 || document.getElementById("toolbox"))
        var x = document.getElementById("toolboxListItem").className = "active";
    else if (uri.indexOf('artblog_stream') > -1 || document.getElementById("artblog"))
        var x = document.getElementById("artblogListItem").className = "active";
    else
        //do nothing - actually do something
        var x = document.getElementById("erfListItem").className = "active";
</script>
