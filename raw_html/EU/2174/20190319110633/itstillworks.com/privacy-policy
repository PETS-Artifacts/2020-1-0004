            var popups = document.querySelectorAll('.popup.share')
            popups.forEach(function(popup) {
                popup.addEventListener('click', function(e) {
                var width  = parseInt(this.getAttribute('data-popup-width')),
                    height = parseInt(this.getAttribute('data-popup-height')),
                    left   = (window.innerWidth - width) / 2,
                    top    = (window.innerHeight - height) / 2,
                    url    = this.getAttribute('data-href'),
                    opts   = 'status=1' +
                                    ',width=' + width +
                                    ',height=' + height +
                                    ',top=' + top +
                                    ',left=' + left;
                    window.open(url,'_blank',opts);
                    e.preventDefault();
                })
            })
        })()
