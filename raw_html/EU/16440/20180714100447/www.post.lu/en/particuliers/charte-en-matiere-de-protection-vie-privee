<script>
function GoContact() {
	if(window.location.pathname.indexOf('independants-et-pme')>-1 ||
	window.location.pathname.indexOf('grandes-entreprises')>-1) {
		window.location = "https://www.post.lu/grandes-entreprises/contact";
	}else{
		window.location = "https://www.post.lu/particuliers/contactez-nous";
	}
}
</script>
