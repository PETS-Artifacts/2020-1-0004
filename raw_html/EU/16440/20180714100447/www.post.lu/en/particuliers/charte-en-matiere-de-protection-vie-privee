				<div class="journal-content-article">
					<script type="text/javascript">
jQuery(document).ready(function(){
                function selectTabCategory(){
                                $.urlParam = function(name){
                                                var results = new RegExp('[\?&]' + name + '=([^&#]*)').exec(window.location.href);
                                                if (results==null){
                                                                return null;
                                                } else {
                                                                return results[1] || 0;
                                                }
                                }
                                var type = $.urlParam('type');

                                $.deselectTab = function(){
                                                $('li[class="category-item"]').each(function(){
                                                                                var elemLI = $(this);
                                                                                if(elemLI.hasClass('is-selected')) {
                                                                                                elemLI.removeClass('is-selected');
                                                                                }
                                                                });
                                                $('li[class="category-item is-selected"]').each(function(){
                                                                var elemLI = $(this);
                                                                elemLI.removeClass('is-selected');
                                                });
                                }
                                $.openFirstConditions = function() {
                                                $('ul[class="accordion"]').each(function(){
                                                                                var elemUL = $(this);
                                                                                if(elemUL.hasClass('is-active')) {
                                                                                                elemUL.removeClass('is-active');
                                                                                }
                                                });
                                                $('ul[class="accordion is-active"]').each(function(){
                                                                var elemUL = $(this);
                                                                elemUL.removeClass('is-active');
                                                });
                                                switch(type){
                                                                case 'courrier':
                                                                                $('#cg-courrier').addClass('is-active');
                                                                                break;
                                                                case 'finance':
                                                                                $('#cg-ccp').addClass('is-active');
                                                                                break;
                                                                case 'telecom':
                                                                                $('#cg-telecoms').addClass('is-active');
                                                                                break;
                                                }
                                                $('ul[class="accordion is-active"]>li:first-child').addClass('is-open');
                                }

                                switch(type){
                                                case 'courrier':
                                                                //console.log("Courrier");
                                                                $.deselectTab();
                                                                $('#courrier').addClass('is-selected');
                                                                $.openFirstConditions();
                                                                break;
                                                case 'finance':
                                                                //console.log("Finances");
                                                                $.deselectTab();
                                                                $('#ccp').addClass('is-selected');
                                                                $.openFirstConditions();
                                                                break;
                                                case 'telecom':
                                                                //console.log("Telecom");
                                                                $.deselectTab();
                                                                $('#telecom').addClass('is-selected');
                                                                $.openFirstConditions();
                                                                break;
                                                default:
                                                                //console.log("Nada");
                                }
                };
                selectTabCategory();
});
</script>
<style type="text/css">
@import url('/documents/10181/4413791/cgv-cpv.css/1ee31f89-0d04-4ac6-87aa-19c2248e04a1');
