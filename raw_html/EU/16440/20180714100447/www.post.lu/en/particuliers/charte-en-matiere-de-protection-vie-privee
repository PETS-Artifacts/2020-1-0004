<script>
function changeContainerContent() {
	var searchLocation = getCheckedValue("searchEngine")
	if (searchLocation != 'post') {
		$('#otherInputs').show();
		$('#postInput').hide();
		$('#keyword').val($('#q').val());
	} else {
		$('#otherInputs').hide();
		$('#postInput').show();
		$('#q').val($('#keyword').val());		
	}
}
