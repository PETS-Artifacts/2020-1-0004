</div><script>

    

        var googleTagManagerHelper = {
            currentSflPageName: null,
            currencyCode: ACC.gtm.currency,
            customerId: '',
            currentProduct: null,
            impressions: null,
            gtmImpressionPageName: null,

            setCustomerId: function(customerId) {
                googleTagManagerHelper.customerId = customerId;
            },
            setCurrentSflPageName: function(currentSflPageName) {
                googleTagManagerHelper.currentSflPageName = currentSflPageName;
            },
            setCurrentProduct: function(product) {
                googleTagManagerHelper.currentProduct = product;
            },
            getCurrentProduct: function() {
                return this._createProduct(googleTagManagerHelper.currentProduct);
            },
            setGtmImpressionPageName: function(gtmImpressionPageName) {
                googleTagManagerHelper.gtmImpressionPageName = gtmImpressionPageName;
            },
            getGtmImpressionPageName: function() {
               return googleTagManagerHelper.gtmImpressionPageName;
            },
            setImpressions: function(impressions) {
                googleTagManagerHelper.impressions = impressions;
            },
            createGtmImpressionsMap: function() {
                var impressionsMap = {};
                var impressions = googleTagManagerHelper.impressions;
                for(var i = 0; i < impressions.length; i++) {
                    var product = impressions[i];
                    impressionsMap[product.productCode] = googleTagManagerHelper._createProduct(product);
                }
                return impressionsMap;
            },
            getImpressionsList: function() {
                var impressionsList = [];
                var impressions = googleTagManagerHelper.impressions;
                for(var i = 0; i < impressions.length; i++) {
                    impressionsList.push(googleTagManagerHelper._createProduct(impressions[i]));
                }
                return impressionsList;
            },
            _createProduct: function(product) {
                if (!product) {
                    return null;
                }
                var newProduct ={
                    id: product.id,
                    name: product.name,
                    price: product.price,
                    brand: product.brand,
                    category: product.category,
                    position: product.position
                };
                // 'list' is used on PLP (category page) and for impressions
                if (product.list) {
                    newProduct.list = product.list;
                }
                return newProduct;
            },

            /* fires */
            fireSaveForLater: function(productCode, variant, dimension1, quantity) {
                var product;
                var curPage;
                if (variant == null && dimension1 == null) {
                    curPage = 'category page';
                    product = window.document.gtmImpressions[productCode];
                } else {
                    curPage = 'quick view page';
                    product = googleTagManagerHelper.getCurrentProduct();
                }
                if (product && googleTagManagerHelper.customerId) {
                    var data = {
                        event: "addSFL",
                        page: curPage,
                        customerId: googleTagManagerHelper.customerId,
                        id: product.id,
                        name: product.name,
                        price: product.price,
                        brand: product.brand,
                        category: product.category,
                        position: product.position,
                        quantity: quantity
                    };
                    if (variant) {
                        data.variant = variant;
                    }
                    if (dimension1) {
                        data.dimension1 = dimension1;
                    }
                    dataLayer.push(data);
                }
            }
        };


        if(typeof dataLayer == 'undefined'){ dataLayer = []; }

        

        dataLayer.push({
            'userAgent': 'Mozilla/5.0 (compatible; NLI_IAHarvester/3.3.0 +https://www.nli.ie/en/irish-domain-web-archive.aspx)'
            ,'deviceType': 'desktop'
            
        });

        


        // 'addToCart' events on cartPage/services/cartGtm.js
        // 'removeFromCart', 'updateCartEntry' and 'cartPageLoad' events on cartPage/services/cartGtm.js
        // 'userSubscription' event on Footer/index.js

        


    var getGtmImpressionForBanner = function (className){
        var gtmId = "gtm-id-";
        var gtmName = "gtm-name-";
        var gtmCreative = "gtm-creative-";
        var gtmPosition = "gtm-position-";

        var classList = className.split(/\s+/);
        var impression = {};
        classList.forEach(function (item) {
            if(item.indexOf(gtmId) === 0){ impression.id = item.substr(gtmId.length); }
            if(item.indexOf(gtmName) === 0){ impression.name = item.substr(gtmName.length); }
            if(item.indexOf(gtmCreative) === 0){ impression.creative = item.substr(gtmCreative.length); }
            if(item.indexOf(gtmPosition) === 0){ impression.position = item.substr(gtmPosition.length); }
        });

        return impression.id ? impression : null;
    };

    window.sendBannerImpressions = function(){
        if(window.gtmBannerImpressoins){
            var allBannerImpressions = [];

            var arrayLength = window.gtmBannerImpressoins.length;
            for (var i = 0; i < arrayLength; i++) {
                var banner = getGtmImpressionForBanner(window.gtmBannerImpressoins[i]);
                if (banner) { allBannerImpressions.push(banner); }
            }

            if (allBannerImpressions.length > 0) {
                for (var i = 0; i < dataLayer.length; i++) {
                    if (dataLayer[i].ecommerce) {
                        dataLayer[i].ecommerce.promoView = {"promotions": allBannerImpressions};
                        return;
                    }
                }
            }
        }
    };

</script>
