<script type='text/javascript'>


    function digistore_initialize() {

        if (this.is_running) {
            return;
        }

        this.is_running = true;

        language = 'de';
        ajax_key = '156f4c7a15f89911f139';


        this.is_running = false;

    } // end digistore_initialize

    function digistore_onload() {

        if (this.is_running) {
            return;
        }

        this.is_running = true;

        xss_password  = '';

        

        this.is_running = false;

    } // end digistore_onload
</script>

