<script>

	if (typeof PeeriusCallbacks == "undefined") PeeriusCallbacks = {};

	if (!PeeriusCallbacks.track) {
		PeeriusCallbacks.track = {
			type:"other",
			lang:"en-gb",
			channel: "web",
		}
	}

	if (typeof PeeriusUser != "undefined") {
		PeeriusCallbacks.track.user = PeeriusUser;
	}

</script>

	<script type="text/JavaScript" src="//skatehut.peerius.com/tracker/peerius.page" charset="UTF-8"></script>

<script>
window.addEvent('domready', function() {
	// For add to cart button open up quick view
	$$('.peerius-wrapper').each(function(wrapper) {
		productItems = new ProductItems(wrapper);
	});

	window.fireEvent('peeriusInit', window);

	dummyProducts = null;
	});

	if (typeof PeeriusCallbacks === 'undefined') {
		PeeriusCallbacks = {};
	}

		if ($$('.peerius-wrapper').length > 0) {

		$$('.peerius-wrapper').addEvent('click:relay(a)', function(e) { PeeriusCallbacks.productClicked(e); });

		window.addEvent('quickViewFired', function(e) { PeeriusCallbacks.productClicked(e); });


		PeeriusCallbacks.smartRecs = function(peeriusRecs) {
			var productsToGet = {};

			Array.each(peeriusRecs, function(recsDetails, cnt) {
				productsToGet = {}
				productsToGet.includeProductIds = [];
				productsToGet.peerius = {};

				if (recsDetails.hasOwnProperty('recs')) {
					Array.each(recsDetails.recs, function(recUnit) {

						// identifiers to fetch product data by
						productsToGet.includeProductIds.push(recUnit.refCode);

						// peerius needs ids send back on product click storing reference
						productsToGet.peerius[recUnit.refCode] = recUnit.id;

					});

					// call getProducts for this recommendation
					if (productsToGet.includeProductIds.length) {
						PeeriusCallbacks.getProducts(recsDetails.position, productsToGet);
					}
				}
			});

		};

		// Get Product Details
		PeeriusCallbacks.getProducts = function(position, searchDetails) {
			// Save this positions products with the positions
			$$('.peerius-wrapper[data-position='+position+']')[0].searchDetails = searchDetails;

			$$('.peerius-wrapper[data-position='+position+']').each(function(wrapper) {
				template = wrapper.getProperty('data-template');
				noOfProducts = wrapper.getProperty('data-no-of-products');

				params = {"recommendationsTemplate":"recommended","recommendedProducts":4};

				if (template) {
					params['recommendationsTemplate'] = template;
				}
				if (noOfProducts) {
					params['recommendedProducts'] = noOfProducts;
				}

				new Request.JSON({
					url: '/products/formatRecommendations',
					method: 'get',
					format: 'json',
					onComplete: function(response) {
						if (!response) {
							return;
						}

						if (!response.items) {
							return;
						}

						content = {};

						content.html = response.items.stripScripts(function(script) {
							content.javascript = script;
						});

						wrapper.empty();
						wrapper.set('html', response.items);

						eval(content.javascript);

					}.bind(this),
					evalScripts: false,
					link: 'cancel'
				}).send({
					data:{
						includeProducts: searchDetails.includeProductIds.slice(0, params['recommendedProducts']),
						featuremode: 'externalId',
						params: params,
					}
				});

			});
		};

		PeeriusCallbacks.productClicked = function(event) {
			var $idElement = $$(event.target).getParents('[data-peeriusid]')[0];
			if ($idElement.length > 0) {
				peeriusId = $idElement[0].getProperty('data-peeriusid');
			} else {
				return;
			}

			/* Get the position that this product is in */
			position = $idElement.getParents('.peerius-wrapper')[0].getProperty('data-position');
			var id = null;
			if (position) {
				searchDetails = $$('.peerius-wrapper[data-position='+position+']')[0].searchDetails;
				id = searchDetails.peerius[peeriusId];
			}

			if (!id) {
				return;
			}

							Peerius.smartRecsClick(id);
					};
	} // if $$('.peerius-wrapper')
</script>

	
		<script charset="UTF-8" src="//skatehut.peerius.com/tracker/peerius.page" type="text/javascript"></script>
	
</body>
</html>
