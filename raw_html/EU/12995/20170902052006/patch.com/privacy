    function sanitizeURL() {
        var pattern = /@/;
        var loc = decodeURIComponent(window.location.href);
        if (pattern.test(loc)) {
            //console.log("URLDirty!");
            window.location.hash = "#clean";
        }
    }
    sanitizeURL();
</script>

