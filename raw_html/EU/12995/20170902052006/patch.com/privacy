        <script>
            var OneSignal = window.OneSignal || [];
            var appId = Drupal.settings.fe_onesignal.appid;
            var safariId = Drupal.settings.fe_onesignal.safariId;
            var subdomain = Drupal.settings.fe_onesignal.subdomain;
            var patchName = '';
            var stateCode = '';
            if (typeof Drupal.settings.fe_onesignal.state_code !== 'undefined') {
                stateCode = Drupal.settings.fe_onesignal.state_code;
            }
            if (typeof Drupal.settings.fe_onesignal.patch_name !== 'undefined') {
                patchName = Drupal.settings.fe_onesignal.patch_name;
            }

            OneSignal.push(["init", {
                appId: appId,
                safari_web_id: safariId,
                autoRegister: false,
                welcomeNotification: {
                    title: "Welcome to " + patchName + ", "+ stateCode + "!",
                    message: "Receive notifications for new articles on " + patchName + " Patch.  Stop notifications at any time."
                },
                notifyButton: {
                    enable: true,
                    displayPredicate: function() {
                        return OneSignal.isPushNotificationsEnabled()
                            .then(function(isEnabled) {
                                var showBell = false;
                                if (mobile_detect.is_mobile) {
                                    showBell = false;
                                } else if (Drupal.settings.fe_onesignal.hide_from_page) {
                                  showBell = false;
                                } else if (isEnabled) {
                                    showBell = true;
                                } else if (Drupal.settings.fe_onesignal && typeof Drupal.settings.fe_onesignal.patch_id !== 'undefined') {
                                    showBell = true;
                                }
                                return showBell;
                            });
                    },
                    size: 'large',
                    showCredit: false, /* Hide the OneSignal logo */
                    text: {
                        'tip.state.unsubscribed': 'Click to receive desktop notifications for the ' + patchName + ', ' + stateCode + ' Patch!',
                        'tip.state.subscribed': "You're currently subscribed to notifications",
                        'tip.state.blocked': "You've blocked notifications",
                        'message.prenotify': 'Click to subscribe to notifications',
                        'message.action.subscribed': "Thanks for subscribing!",
                        'message.action.resubscribed': "You will now receive desktop notifications",
                        'message.action.unsubscribed': "You won't receive notifications again",
                        'dialog.main.title': 'Manage Site Notifications',
                        'dialog.main.button.subscribe': 'SUBSCRIBE',
