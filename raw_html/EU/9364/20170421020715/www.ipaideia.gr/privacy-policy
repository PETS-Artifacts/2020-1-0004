<script>
		  document.oncopy = function()
		  {
			var saveSelection = [];
			var selection = getSelection();
			var i, htmlDiv = document.createElement('div');
			for(i = 0; i < selection.rangeCount; ++i)
			{
			  saveSelection[i] = selection.getRangeAt(i);
			  htmlDiv.appendChild(selection.getRangeAt(i).cloneContents());
			}
			var selectionHTML = htmlDiv.innerHTML;
			
			var pagelink = '<p>Διαβάστε περισσότερα: <a href="'+ document.location.href +'">'+ document.title +' - iPaideia.gr</a></p>';
			var copytext = selectionHTML + pagelink;
			
			var newdiv = document.createElement('div');
			
			document.body.appendChild(newdiv);
			newdiv.innerHTML = copytext;
			selection.selectAllChildren(newdiv);
			setTimeout(function()
			{
			  document.body.removeChild(newdiv);
			  getSelection().removeAllRanges();
			  for(i = 0; i < saveSelection.length; i++)
			  {
				getSelection().addRange(saveSelection[i]);
			  }
			}, 0);
		  };
		</script>
