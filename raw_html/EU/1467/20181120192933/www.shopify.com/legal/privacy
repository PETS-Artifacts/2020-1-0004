window.bugsnagClient = bugsnag({
  apiKey: '60139b6e163bd4168eaeb409f6e80e98',
  beforeSend: function(report) {
    var nonShopifyDomain = /:\/\/(?![^/]*shopify)/;
    var stacktrace = report.stacktrace.map(function(frame) {
      return frame.file + " " + frame.method;
    }).join(' ');

    if (nonShopifyDomain.test(report.request.url) || nonShopifyDomain.test(stacktrace)) {
      report.ignore();
    }
  },
  notifyReleaseStages: ['production', 'staging'],
  releaseStage: 'production',
});
</script>


