<script src="http://www.kontentino.com/build/frontend/script.js?v=1525461424"></script>
    <script>

        $(function () {
            var path = document.location.pathname.split("/");
            path = path.filter(function (item) {
                return !!item;
            });

            if(!path[1]) {
                return false;
            }

            var $section = $("section,article").filter(function () {
                return this.id === path[1];
            });

            if(!$section.length) {
                return false;
            }

            $("html, body").animate({
                scrollTop: $section.offset().top - $("header.header").height() - 20
            }, {
                duration: 100
            });

        });

    </script>

