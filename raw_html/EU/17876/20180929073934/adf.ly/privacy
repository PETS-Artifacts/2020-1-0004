var set_opt_out = '<input onclick="setCookie(\'optout_ADFLY\', 1, 999999)" type="Submit" name="OptOut" value="SET OPT-OUT COOKIE" style="display:block;">';
var set_opt_in = '<input onclick="setCookie(\'optout_ADFLY\', 0, 999999)" type="Submit" name="OptOut" value="REMOVE OPT-OUT COOKIE" style="display:block;">';

function setCookie(cname, cvalue, exdays) {
    var d = new Date();
    d.setTime(d.getTime() + (exdays*24*60*60*1000));
    var expires = "expires="+d.toUTCString();
    document.cookie = cname + "=" + cvalue + "; " + expires + "; path=/; domain=.adf.ly";
    document.cookie = cname + "=" + cvalue + "; " + expires + "; path=/; domain=.adf.ly";
    alert("Your interest-based advertising preference has been updated");
    updateForm();
}

function getCookie(name) {
    var re = new RegExp(name + "=([^;]+)");
    var value = re.exec(document.cookie);
    return (value != null) ? unescape(value[1]) : null;
}

function updateForm() {
    if (getCookie('optout_ADFLY') == 1) {
        $('#optout_form').html(set_opt_in);
    } else {
        $('#optout_form').html(set_opt_out);
    }
}

</script>

