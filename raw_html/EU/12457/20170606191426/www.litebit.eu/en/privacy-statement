<script type="text/javascript">
    $zopim(function() {
        $zopim.livechat.setLanguage('en');
	            $zopim.livechat.setOnStatus(function (status) {
            var statusContainer = $('.chat-status');
            var actionContainer = $('.chat-status-action');

            if(status == 'online') {
                statusContainer.html('<i class="fa fa-circle"></i> Online').css('color', '#4caf50');
                actionContainer.text('Chat with us');
			}
			else {
                statusContainer.html('<i class="fa fa-circle"></i> Offline').css('color', '#bdbdbd');
                actionContainer.text('Not available');
			}
        });
    });

	$(document).ready(function () {
        $('a').each(function(){if($(this).attr('href') == window.location.pathname)$(this).parent().addClass('active');});
        $('.open-chat').click(function (event) {$zopim.livechat.window.show();event.preventDefault();});
        $('#live-trend-expand').click(function() {$(this).children('i').toggleClass('rotate');$('#coin-live-rates').toggleClass('full-size');});
		$.liveUpdate({source: '/system/live-updates', interval: 60000, selector: 'data-updated-by', typeSelector: 'data-update-type'});
	});
</script>

