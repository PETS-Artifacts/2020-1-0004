<script type="text/javascript">
  $(document).scroll(function(){

    $('#header').toggleClass('scrolled', $(this).scrollTop() > 1);

    if ($(window).scrollTop() > 500 ) {
      $('.new-navbar-buttons').fadeIn(500, function() {
        $('.existing-navbar-buttons').hide();
      });

    }

  });
  // menu closed by default always
  var menuOpenOrClosed = 'closed';


  // toggles the class if the menu is open or closed
  function openCloseMenu() {

    if (menuOpenOrClosed === 'closed') {
      $('html').addClass('mobile-menu-active');
      menuOpenOrClosed = 'open';
    } else {
      $('html').removeClass('mobile-menu-active');
      menuOpenOrClosed = 'closed';
    }

  };

  document.addEventListener('DOMContentLoaded', function () {

    // saving the elements we'll use to tab / swipe on
    var pageContainer = document.getElementsByClassName('page-wrap')[0];
    var wholePage = document.getElementsByTagName('html')[0];

    // open on swipe left
    Hammer(pageContainer).on('swipeleft', function(e) {
      menuOpenOrClosed = 'closed';
      openCloseMenu();
    });
    // close on swipe right, even on menu itself
    Hammer(wholePage).on('swiperight', function(e) {
      menuOpenOrClosed = 'open';
      openCloseMenu();
    });
    // close on tap, if open
    Hammer(pageContainer).on('tap', function(e) {
      if (menuOpenOrClosed === 'open') {
        openCloseMenu();
      }
    });

    $('.signup-dialog-button').click(function(){
      // making email input focused by default
      setTimeout(function(){$('#signup-email-signup-modal').focus();}, 300);
    });

  });
</script>
