<script type="text/javascript">
$(function(){
  $("#signup-submit-signup-modal").keyup(function(event){
    if (event.keyCode == 13){
      $("#signup-submit-signup-modal").click();
    }
  });
  $("#signup-email-signup-modal").on("keydown", function() {
    var $this = $(this);
    $this.addClass("active");
    $("#signup-email-signup-modal-not-valid").fadeOut(500);
 });
 $("#signup-email-signup-modal").on("keyup", function() {
    var $this = $(this);
    if (!$this.val().length) {
      $this.removeClass("active");
    }
  });
  // check for get params, in order to process get started
  // http://stackoverflow.com/questions/5448545/how-to-retrieve-get-parameters-from-javascript
  var prmarr = window.location.search.substr(1).split('&');
  var params = {};
  for ( var i = 0; i < prmarr.length; i++) {
    var tmparr = prmarr[i].split("=");
    params[tmparr[0]] = unescape(tmparr[1]);
  }
  if (params.email && params.action == 'start') {
    $("#signup-email-signup-modal").val(params.email).parent("form").submit();
  }
});
</script>

