    $(document).ready(function(){

        $("#myTab li a").click(function(e) {
          $(".is-active").removeClass("is-active");
          $(e.target.parentElement).addClass("is-active");
        })

        if(!location.hash) {
          window.location.hash = "terms-of-service";
        }
    });

</script>

