    var isMenuLoaded = false
    var isMenuLoading = false

    function loadExploreIfNeeded() {
        if (!isMenuLoaded && !isMenuLoading) {
            loadExplore()
        }
        $('#explore').toggleClass('explore-active explore-fadedout')
        $('body').toggleClass('no-scroll');
    }

    function loadExplore() {
        isMenuLoading = true

        $.getJSON("home/ajax", { a: 'get_channels_menu' }, function(data){
            isMenuLoaded = true
            isMenuLoading = false

            var countryGroups = data.reduce(function(grouped, item){
                var country = item.country || 'Other'
                grouped[country] = grouped[country] || []
                grouped[country].push(item)

                return grouped
            }, {})

            var html = Object.keys(countryGroups).map(function(country){
                var htmlItems = countryGroups[country].map(function(item){
                    var imgUrl = item.cover ? '//mycujoo-static.imgix.net/' + item.cover + '?w=30&h=30' : 'assets/img/tv_avatar_default.svg'
                    return  '<li><a href="ch/' + item.id + '"><img class="country-flag" src="' + imgUrl + '"><span class="country-name">' + item.name + '</span></a></li>';
                }).join('')

                var flag = (country === 'Other') ? '' :
                        (country === 'Chinese Taipei') ? '<img class="country-flag" src="/assets/img/chineseTaipeiFlag.svg"/>' :
                        '<img class="country-flag" src="//lipis.github.io/flag-icon-css/flags/4x3/' + countryGroups[country][0].country_code.toLowerCase() + '.svg">'

                return '<li class="collapsible-country"><span>' + flag + country + '<i class="fa fa-angle-down"></i></span><ul class="explore-menu sub-menu">' + htmlItems + '</ul></li>'
            }).join('')

            $('#explore ul').append(html).css({
                '-webkit-columns' :  '250px auto',
                '-moz-columns' : '250px auto',
                'columns' : '250px auto'
            })
        });
    };

    $(document).on("click", '.collapsible-country', function() {
        var isMobile = /Android|webOS|iPhone|iPad|iPod|BlackBerry|Windows Phone/i.test(navigator.userAgent)

        if (isMobile) {
            $(this).children('ul').toggle()
            $(this).children('span').children('i').toggleClass('fa-angle-down fa-angle-up')
        }
    })

    $(document).on("click", '#close-explore', function() {
        $('#explore').toggleClass('explore-active explore-fadedout')
        $('body').toggleClass('no-scroll');
    })

