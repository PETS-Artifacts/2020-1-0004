                $("#video_categories_list input[type='checkbox']").on("click", function(){
                    var $self = $(this);
                    var id = window.location.href.split("/");
                    id = id[id.length-1];

                    if ($(this).prop("checked")) {
                        $.getJSON("channels/ajax", {a:"insert_video_category", id:id, idc:$(this).val()}, function(data){
                            $('#channel_video_categories').append('<li role="presentation" class="vod_category" data-id="'+$self.val()+'">\
                            <a href="#">'+$self.parent().text()+'<span class="badge">FREE</span></a></li>');
                        });
                    } else {
                        $.getJSON("channels/ajax", {a:"delete_video_category", id:id, idc:$(this).val()}, function(data){
                            $('#channel_video_categories').find("li[data-id='"+$self.val()+"']").remove();
                        });
                    }
                });

                $('#channel_video_categories').on("click", ".vod_category", function(e){
                    e.preventDefault();
                });


                $('body').on("click", ".pl_video_add", function(e){
                    e.preventDefault();

                    var self = $(this);
                    $.getJSON("video/ajax", {a:"pl_video_add", id:$(this).data("id")}, function(data){
                        if ((typeof(data) == "object") && ("RESULT" in data)) {
                            self.removeClass("pl_video_add").find("button").text("Added");
                        } else {
                            ch_error(data);
                        }
                    });
                });

                multi_ellipsis();

                $('.navbar-menu-icon').on("click", function(e){
                    e.preventDefault();
                    e.stopPropagation();

                    if ($('#side_menu').is(":visible")) {
                        $('#side_menu').hide();
                        $('.main_wrapper').removeClass("menu_opened");
                        $('.icon-menu').removeClass("active");
                    } else {
                        $('#side_menu').show();
                        $('.main_wrapper').addClass("menu_opened");
                        $('.icon-menu').addClass("active");
                    }
                });

                $('.navbar-account').on("click", function(e){
                    if ($(window).width() < 768) {
                        $('#side_menu').hide();
                        $('.main_wrapper').removeClass("menu_opened");
                    }
                });

                //$('<style type="text/css"> @media (min-width: 768px) { .row.home_carousel .col { width:'+($('.row.home_carousel').width()-20)/4+'px; } } @media (min-width: 1367px) { .row.home_carousel .col { width:'+($('.row.home_carousel').width()+230)/6+'px; } } </style>').appendTo("head");
            });

            function multi_ellipsis() {
                $('.multi-ellipsis').dotdotdot().on("click", function(e){
                    e.preventDefault();

                    var self = $(this);

                    var isTruncated = self.triggerHandler("isTruncated");
                    if (isTruncated) {
                        self.data("me_size",self.css("max-height")).trigger("destroy").css("max-height","none");
                    } else {
                        self.css("max-height",self.data("me_size")).dotdotdot();
                    }
                });
            }
