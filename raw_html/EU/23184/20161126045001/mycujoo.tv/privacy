                $(document).on("click", '.btn_follow_channel', function(e){
                    e.preventDefault();

                    var self = $(this);
                    $.getJSON("channels/ajax", {a:"follow", id:$(this).data("id")}, function(data){
                        if ((typeof(data) == "object") && ("RESULT" in data)) {
                            if(self.hasClass('btn-double')){
                                //self.removeClass("btn-success btn_follow_channel").addClass("btn-default btn_unfollow_channel").text("UNFOLLOW");
                                $('.followers_count').text(data.followers);
                                self.parent().after($(followed_btn).find(".btn-double").attr("data-id", self.data("id")).end().get(0).outerHTML).remove();
                            }else{
                                self.removeClass("btn_follow_channel").addClass("btn_unfollow_channel");
                            }

                        } else {
                            ch_error(data);
                        }
                    });
                });
                $(document).on("click", '.btn_unfollow_channel', function(e){
                    e.preventDefault();

                    var self = $(this);
                    if(self.parent().hasClass('btn-double')){
                        id = $(this).parent('.btn-double').data("id");
                    }else{

                        id = $(this).data("id");
                    }
                    $.getJSON("channels/ajax", {a:"unfollow", id:$(this).data("id")}, function(data){
                        if ((typeof(data) == "object") && ("RESULT" in data)) {
                            if(self.hasClass('btn-double')){
                                //self.removeClass("btn-default btn_unfollow_channel").addClass("btn-success btn_follow_channel").text("FOLLOW");
                                $('.followers_count').text(data.followers);
                                self.parent().after($(follow_btn).find(".btn-double").attr("data-id", self.data("id")).end().get(0).outerHTML).remove();
                            }else{
                                self.removeClass("btn_unfollow_channel").addClass("btn_follow_channel");
                            }

                        } else {
                            ch_error(data);
                        }
                    });
                });


                $(document).on("click", '.input-group.btn-double.btn_follow_channel2', function(){
                    var self = $(this);
                    $.getJSON("channels/ajax", {a:"follow", id:$(this).data("id")}, function(data){
                        if ((typeof(data) == "object") && ("RESULT" in data)) {
                            $('.followers_count').text(data.followers);
                            self.removeClass("btn_follow_channel2").addClass("btn_unfollow_channel2")
                            .find('button').text("Following");
                        } else {
                            ch_error(data);
                        }
                    });
                });
                $(document).on("click", '.input-group.btn-double.btn_unfollow_channel2', function(){
                    var self = $(this);
                    $.getJSON("channels/ajax", {a:"unfollow", id:$(this).data("id")}, function(data){
                        if ((typeof(data) == "object") && ("RESULT" in data)) {
                            $('.followers_count').text(data.followers);
                            self.removeClass("btn_unfollow_channel2").addClass("btn_follow_channel2")
                            .find('button').text("Follow");
                        } else {
                            ch_error(data);
                        }
