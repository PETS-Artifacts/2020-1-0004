            $(function(){
                $('input[type="search"]').on("focus", function(){
                    $(this).parent(".input-group").addClass("focus");
                }).on("blur", function(){
                    $(this).parent(".input-group").removeClass("focus");
                });

                $('.color-picker').colorpicker();

                if ($('.input-group.date').length > 0) {
                    $('.input-group.date').datetimepicker({
                        format: 'YYYY-MM-DD',
                        maxDate: moment(),
                        viewMode: 'years'
                    });
                }

                $('.dropdown-multiselect').multiselect();

                $('.input-number').bootstrapNumber();



                $('#btn_create_channel').on("click", function(){
                    $('#form_create_channel').submit();
                });

                if ($('#continent').length > 0) {
                    $('#continent').on("change", function(){
                        load_countries();
                    });
                }

                // if ($('#country').length > 0) {
                //     $('#country').on("change", function(){
                //         load_cities();
                //     });
                // }

                function load_countries() {
                    $('#country').empty();
                    if($('#continent').val() !== '0' && $('#continent').val() !== '')
                    {
                        $.getJSON("channels/ajax", {a:"load_countries", id:$('#continent').val()}, function(data){
                            if(data.length !== 0)
                            {
                                $('#country').append('<option selected value="">'+ translation['not_selected'] +'</option>');
                                $.each(data, function(k,v){
                                    $('#country').append('<option value="'+v['country_id']+'">'+v['name']+'</option>');
                                });
                                //load_cities();
                            }
                        });
                    }
                    else
                    {
                        $('#city').empty();
                        $('#country').append('<option value="">'+ translation['no_data'] +'</option>');
                        $('#city').append('<option value="">'+ translation['no_data'] +'</option>');

                    }
                }

                // function load_cities() {
                //     $('#city').empty();
                //     if($('#country').val() !== '' && $('#country').val() !== '0')
                //     {
                //         $.getJSON("channels/ajax", {a:"load_cities", id:$('#country').val()}, function(data){
