<script type="text/javascript">
    var notifications = [];

    $(function() {
        
                if (testCookie('steam_optin_notification') === false && !steamOptin && user_is_logged_in && steamId > 0) {
            $('#modal-steam').modal('show');
        }

        $('#btn-steam-optin').on('click', function (e) {
            e.preventDefault();
            var optin = true;
            $.ajax({
                url: '/account/me/settings/update-steam-optin',
                type: 'post',
                data: JSON.stringify({optin: optin}),
                success: function (e) {}
            });
            $('#modal-steam').modal('hide');
        });

        $('#modal-steam').on('hide.bs.modal', function (e) {
            $.cookie('steam_optin_notification', '1', { expires: 7, path: '/', domain: '.alienwarearena.com' });
        });
        
        
        
        
                if (testCookie('facebook_notification') === false && !user_has_fb && user_is_logged_in) {
            notifications.unshift({
                "url": "/account/me/settings#settings-social",
                "message": "Connect to Facebook and Twitter to share Alienware Arena with your friends.",
                "backgroundColor": null,
                "textColor": null,
                "cookieName": "facebook_notification",
                "expires": 30
            });
        }
        
        if (notifications.length > 0) {
            primaryNotification = notifications[0];

            expires = ((typeof primaryNotification.expires === 'number' || typeof primaryNotification.expires === 'object') ? primaryNotification.expires : new Date(primaryNotification.expires));

            $('#notification-close').click(function () {
                $.cookie(primaryNotification.cookieName, '1', { expires: expires, path: '/', domain: '.alienwarearena.com' });
                $('#notification').slideUp();
            });

            $('#notification-link').click(function() {
                $.cookie(primaryNotification.cookieName, '1', { expires: expires, path: '/', domain: '.alienwarearena.com' });
                $('#notification').slideUp();
            });

            if (testCookie(primaryNotification.cookieName) === false) {
                if (primaryNotification.url) {
                    $('#notification-link').attr('href', primaryNotification.url);
                    $('#notification-link').html(primaryNotification.message);
                } else {
                    $('#notification-text').html(primaryNotification.message);
                }
                $('#notification').css('backgroundColor', primaryNotification.backgroundColor);
                $('#notification-link').css('color', primaryNotification.textColor);

                $('#notification').slideDown();
            }
        }
    });

</script>


