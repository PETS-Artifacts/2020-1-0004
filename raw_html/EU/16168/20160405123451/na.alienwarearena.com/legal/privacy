    var sites = [{"id":8,"fullDomain":"my.alienwarearena.com","subDomain":"my","label":"Southeast Asia"},{"id":6,"fullDomain":"latam.alienwarearena.com","subDomain":"latam","label":"Am\u00e9rica Latina"},{"id":9,"fullDomain":"anz.alienwarearena.com","subDomain":"anz","label":"Australia\/New Zealand"},{"id":5,"fullDomain":"eu.alienwarearena.com","subDomain":"eu","label":"Europe"},{"id":4,"fullDomain":"na.alienwarearena.com","subDomain":"na","label":"USA\/Canada"},{"id":1,"fullDomain":"www.alienwarearena.com","subDomain":"www","label":"Global"}];
    var current = 4;

    for (var i = sites.length - 1; i >= 0; i--) {
        var opt = $('<option>', {value: sites[i].subDomain})
            .text(sites[i].label)
            .attr('data-site', sites[i].subDomain);

        if (sites[i].id == current) {
            opt.attr('selected', 'selected');
        }

        $('.region-select').append(opt);
    }

    $('.region-select').change(function() {
        var s = $("option:selected", this).attr('data-site');
        var l = document.createElement('a');
        l.href = window.location.href;

        var result = $.grep(sites, function (e) { return e.subDomain == s; });
        if (result.length == 1) {
            l.hostname = result[0].fullDomain;
        }

        window.location.href = l.href;
    });
</script>

