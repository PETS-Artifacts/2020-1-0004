            $(function(){
                $('#navigation #more-toggle').hover(function() {
                    $('#more-dropdown').addClass('open');
                    if ($('#media-dropdown').hasClass('open')) {
                        $('#media-dropdown').removeClass('open');
                    }
                }, function() {});

                $('#navigation #rewards-toggle').hover(function() {
                    $('#rewards-dropdown').addClass('open');
                }, function() {});

                $('#navigation #media-toggle').hover(function() {
                    $('#media-dropdown').addClass('open');
                    if ($('#more-dropdown').hasClass('open')) {
                        $('#more-dropdown').removeClass('open');
                    }
                }, function() {});

                $('#navigation #games-toggle').hover(function() {
                    $('#games-dropdown').addClass('open');
                    if ($('#more-dropdown').hasClass('open')) {
                        $('#more-dropdown').removeClass('open');
                    }
                }, function() {});

                $('#navigation #rewards-toggle > #rewards-dropdown > .dropdown-menu').hover(function () {

                }, function () {
                    $('#rewards-dropdown').removeClass('open');
                });

                $('#navigation #more-toggle > #more-dropdown > .dropdown-menu').hover(function () {

                }, function () {
                    $('#more-dropdown').removeClass('open');
                });

                $('#navigation #media-toggle > #media-dropdown > .dropdown-menu').hover(function () {

                }, function () {
                    $('#media-dropdown').removeClass('open');
                });

                $('#navigation #games-toggle > #games-dropdown > .dropdown-menu').hover(function () {

                }, function () {
                    $('#games-dropdown').removeClass('open');
                });

                $(window).on('scroll', function (e) {
                    if ($('.post-title').length > 0) {
                        var fromTop = $(window).scrollTop();
                        var elTop = $('.post-title:visible').offset().top;
                        $('.scroll-title').toggleClass('down', (fromTop > elTop));
                    }

                })
            });
