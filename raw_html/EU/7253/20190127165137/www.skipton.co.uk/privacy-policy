<script type="text/javascript">

    $j(document).ready(function () {

        $j(".mega-nav").accessibleDropDown();
    });


    function branchMobileClick() {
        elem = document.getElementById('header-collapse-mobile-search');
        var attr = elem.getAttribute('Class');
        //if the class already has a 'Collapse' attribute then we're ok, if it's set to 'Collapse in' then we need to remove it
        if (attr.toString().indexOf("in") > 0) {
            $j('#header-collapse-mobile-search').collapse('hide');
        }
        //We need to add the collapsed styling to the search button
        elem = document.getElementById('searchMobileLink');
        elem.className += " collapsed";
    }
    function searchMobileClick() {
        elem = document.getElementById('header-collapse-mobile-branch');
        var attr = elem.getAttribute('Class');
        if (attr.toString().indexOf("in") > 0) {
            $j('#header-collapse-mobile-branch').collapse('hide');
        }
        //We need to add the collapsed styling to the branch button
        elem = document.getElementById('branchMobileLink');
        elem.className += " collapsed";
    }

    $j.fn.accessibleDropDown = function () {

        //var isIos = Modernizr.appleios;
        var isIpad = Modernizr.ipad;
        //var isIpod = Modernizr.ipod;
        //var iphone = Modernizr.iphone;

        var state;

        setMenuType();
        $j(window).resize(function () {

            setMenuType();
        });

        function setMenuType() {

            var width = $j(window).width();
            var $nav = $j(".mega-nav");

            $nav.attr('class', 'mega-nav');

            $nav.each(function () {
                $j(this).unbind('mouseenter mouseleave');
            });

            if (width <= 767 && state != 'phone') {
                state = 'phone';

                $j("#header-mobile-collapse").hide();
                $j(".dropdown").hide();

                $j(".mtoggle").unbind('click');
                $j(".mtoggle").click(function () {
                    $j("#header-mobile-collapse").slideToggle(500);
                    return false;
                });

                $j(".dtoggle").unbind('click');
                $j(".dtoggle").click(function () {

                    $j(this).toggleClass("active");
                    $j(this).siblings(".dropdown").slideToggle(500);
                    return false;
                });
            }

            if ((width > 767) && (width <= 979) && state != 'tablet') {
                state = 'tablet';

                $j(".dropdown").hide();
                $j("#header-mobile-collapse").show();
                $j(".dtoggle").unbind('click');

                $j(".dtoggle").click(function () {

                    $j(this).toggleClass("active");
                    $j(".dtoggle").not(this).removeClass("active");

                    // end of DP's bit 
                    var $dropdown = $j(this).siblings(".dropdown");
                    $j(".dropdown").not($dropdown).css('display', 'none');
                    $dropdown.slideToggle(100);
                    return false;
                });
            }

            else if (width > 979 && isIpad && state != 'ipad') {

                state = 'ipad';

                $j(".dropdown").hide();
                $j("#header-mobile-collapse").show();
                $j(".dtoggle").unbind('click');

                $j(".dtoggle").click(function () {

                    $j(this).toggleClass("active");
                    $j(".dtoggle").not(this).removeClass("active");

                    // end of DP's bit 
                    var $dropdown = $j(this).siblings(".dropdown");
                    $j(".dropdown").not($dropdown).css('display', 'none');
                    $dropdown.slideToggle(100);
                    return false;
                });
            }

            else if (width > 979 && state != 'desktop') {
                state = 'desktop';

                // set a timout on the mega menu dropdown
                $nav.each(function () {

                    var nav = $j(this);
                    nav.hover(function (e) {
                        var $dropdown = $j(this).siblings(".dropdown");
                        $j(".dropdown").not($dropdown).css('display', 'none');

                        setTimeout(function () {
                            $j(".dropdown").not($dropdown).css('display', 'block');
                        }, 500);
                    });
                });

                $j(".dtoggle").unbind('click');
                $j(".mtoggle").unbind('click');
                $j("#header-mobile-collapse").show();
                $j(".dropdown").css('display', 'block');
            }

            $j(".mega-nav").addClass(state);
        }
    };

</script>
