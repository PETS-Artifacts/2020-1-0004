<script type="text/javascript">
    $j(document).ready(initcookie);

    function initcookie() {
        var alreadyPlaced = $j.cookie("verWarn");
        if (alreadyPlaced == undefined) {
            $j.cookie("verWarn", "seen", { path: '/' });
        }
    }
</script>



<script type="text/javascript">

    $j("#AlertCookieBanner").alert('close');
    $j(document).ready(init_cookie);

    function init_cookie() {
        $j("#AlertCookieBanner").bind("closed", handle_ok);
        var alreadyPlaced = $j.cookie("cookie_sbs");

        if (alreadyPlaced != undefined) {
            $j("#AlertCookieBanner").alert('close');
        }

        else {
            $j("#AlertCookieBanner").alert();
            var cookieBanner = document.getElementById('fullwidthheaderregion_1_pnlCookieBanner');
            cookieBanner.style.display = '';
        }
    }
    function handle_ok() {
        $j.cookie("cookie_sbs", "1", { expires: 1, path: '/' });

        return false; //stop processing the link
    }

</script>

