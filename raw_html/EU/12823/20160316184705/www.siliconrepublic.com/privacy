<script>
    if (isIE () == 8) {


    } else {
        document.querySelector("#nav-toggle").addEventListener("click", function () {
            this.classList.toggle("active");
        });
    }

    // Load DFP ads once infinite scroll is complete
    $(document).ready(function() {
        $.fn.almComplete = function(alm){
            ajaxLoadAds();
        }

        ajaxLoadAds();
    });

    /**
     * Load ad slots over ajax based on data attributes
     * This allows us to load ads with only one impression triggered per call
     */
    function ajaxLoadAds()
    {
        // Loop over all units to be loaded
        $('.load-ad').each(function() {
            // Remove class so we don't re-call the ad each time
            $(this).removeClass('load-ad');
            //if ($(this).is(':visible')) {
                var divId = 'div-ad-'+Math.random();
                $(this).attr('id', divId)
                var slotName = $(this).data('slot').replace('/72697299/', '');
                var slot = googletag.defineSlot('/72697299/'+slotName, [300, 250], divId).addService(googletag.pubads());
                googletag.display(divId);
                googletag.pubads().refresh([slot]);
            //}
        });
    }

    // Sending events to analytics for tags clicked on a post
    $('#tagsarea .posttags a').click(function(e) {
        ga(
            'send',
            'event',
            '[Article] Tag',
            $(this).text(),
            $(this).attr('href')
        );
    });
</script>


