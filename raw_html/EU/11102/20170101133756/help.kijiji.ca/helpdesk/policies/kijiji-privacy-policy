    <script src="/helpdesk/resource/1474091897000/Bootstrap/js/bootstrap.min.js"></script>
    


	

	<script src="/helpdesk/resource/1482333923000/HelpDeskMinified/js/minified.js"></script>
	
<script>
    //HCS 19-07-2016 Article Platform Switcher task #9599
    $(document).ready(function(){
    
     processCookie();
        //check if current article is enable switcher
         if( $("[id$=isArticleSwitcher]").val() == 'true'){
            var url = document.URL;
            if(url.indexOf('#') != -1){//check if valid anchor
                checkCurrentPlatForm(url);
            }else{
                var isIOS = $("[id$=isIOS]").val();
                var isAndroid = $("[id$=isAndroid]").val();
                var platformVal = isIOS == 'true' ? 'iOS' : (isAndroid == 'true' ? 'Android' : 'Web');
                var indexPlatform = isIOS == 'true' ? 1 : (isAndroid == 'true' ? 2 : 0);
                
                sendDataToGA(platformVal); //fire on every article that’s loaded where platform selection is available
                
                $('.platforms-list > li > a').eq(indexPlatform).addClass('active');
                $('.platform-elements.' + $('.platforms-list > li > a').eq(indexPlatform).attr('title')).show();
                $('#title' + $('.platforms-list > li > a').eq(indexPlatform).attr('title')).show();
                $("#platform-switcher").attr('class', 'panel-pane pane-kijij-platform-switcher '+ $('#curArticleTitleClass' + platformVal).val());
                $("[id$=currentPlatform]").val( platformVal );
                window.location =  "/helpdesk/policies/kijiji-privacy-policy#" + platformVal;
            }
            
           setPlatformAction();
         }
         
         //every time a user changes their platform, send data back to GA.
         $("[id*=webView]").click(function() {
          sendDataToGA($(this).attr('title'));
         });
         
         $("[id*=iOSView]").click(function() {
          sendDataToGA($(this).attr('title'));
         });
         
         $("[id*=androidView]").click(function() {
          sendDataToGA($(this).attr('title'));
         });
         
         
    });
    
    function sendDataToGA(platform) {
     ga('create', 'UA-11681763-186', 'auto');
     ga('send', {
              hitType: 'event',
              eventCategory: 'ArticlePlatformSwitcher',
              eventAction: 'AnchorPlatform',
              eventLabel: platform
        });
    }
    
    function setPlatformAction(){
     //console.log('setPlatformAction');
         $('.platforms-list > li > a').off('click').on('click',function(){
           var currentPlatform = $(this).attr('title');
                $("#platform-switcher").removeAttr('class');
                $('.platforms-list > li > a').removeClass('active');
                $('.titlePane').hide();
                $(this).addClass('active');
                $('.platform-elements').hide();
                $('.platform-elements.' + currentPlatform).show();
                $('#title' + currentPlatform).show();
                $("#platform-switcher").attr('class', 'panel-pane pane-kijij-platform-switcher '+ $('#curArticleTitleClass'+ currentPlatform).val());
       $("[id$=currentPlatform]").val( currentPlatform );
         });
         
           $('[id$=languageSwitch]').off('click').on('click',function(){
             
             var currentPlatform =  $("[id$=currentPlatform]").val();
              if( $("[id$=isArticleSwitcher]").val() == 'true' && currentPlatform != ''){
               var oldhref = $("[id$=languageSwitch]").attr("href");
                window.location =  oldhref  + "#" + currentPlatform;
              }
              return false;
           });
    
    }
    
    function doProcessPlatForm(){
     //console.log('doProcessPlatForm');
        var currentPlatform =  $("[id$=currentPlatform]").val();
        if( currentPlatform != '' ){
            $("#platform-switcher").removeAttr('class');
            $('.platforms-list > li > a.' + currentPlatform).addClass('active');
            $('.platform-elements.' + $('.platforms-list > li > a.' + currentPlatform).attr('title')).show();
            $('#title' + $('.platforms-list > li > a.' + currentPlatform).attr('title')).show();
            $("#platform-switcher").attr('class', 'panel-pane pane-kijij-platform-switcher '+ $('#curArticleTitleClass'+ $('.platforms-list > li > a.' + currentPlatform).attr('title')).val());
            
            sendDataToGA(currentPlatform); //fire on every article that’s loaded with'#' sign and where platform selection is available
       }  
      
    }
    
    function processCookie() {
     try {
      // clear cookies
      setCookie(COOKIE_APPTYPE, '', -1);
      setCookie(COOKIE_APPVERSION, '', -1);
      // Auto Encoding do not occur within a <style> or <script> tag or an apex tag with the escape='false' attribute
      var appType = '';
      var appVersion = ''; 
      if(appType || appVersion ) {
       setCookie(COOKIE_APPTYPE, appType, 1);
       setCookie(COOKIE_APPVERSION, appVersion, 1);
      }
      // console.log('---------apptype: ' + getCookie(COOKIE_APPTYPE) + '---------appversion: ' +  getCookie(COOKIE_APPVERSION) );
     } catch(err) { }
    }
    
</script>   
</body>
