     <script>
        ga('create', 'UA-11681763-186', 'auto');
        
        function gaEventChatOnline(){
         
            console.log('Online click');
            ga('send', {
              hitType: 'event',
              eventCategory: 'Policies',
              eventAction: 'LiveChatBegin',
              eventLabel: null
            });
        }
        
        function gaEventChatOffline(){
            console.log('offline click');
            ga('send', {
              hitType: 'event',
              eventCategory: 'HelpContact',
              eventAction: 'LiveChatFail',
              eventLabel: 'err=offline'
            });
        }
        
        function getMobileOperatingSystem() {
       var userAgent = navigator.userAgent || navigator.vendor || window.opera;
       if( userAgent.match( /iPad/i ) || userAgent.match( /iPhone/i ) || userAgent.match( /iPod/i ) )
       {return 'iOS';}
       else if( userAgent.match( /Android/i ) )
       {return 'Android';}
       else{return 'unknown';}
  }
  
   function isMobileSystem(){
    return (getMobileOperatingSystem()=="iOS" || getMobileOperatingSystem()=="Android");
  }
  
  function findChildInner(buttonId) {
   if(isMobileSystem()){
    liveagent.startChatWithWindow(buttonId, '_self');
   }else{
    findChild(buttonId);
   }
  }
  
  
    </script>

        
