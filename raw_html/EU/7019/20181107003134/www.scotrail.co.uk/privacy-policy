  function getSSOLoggedInCookie() {
    var name = "sso-logged-in-flag=";
    var decodedCookie = decodeURIComponent(document.cookie);
    var ca = decodedCookie.split(';');
    for(var i = 0; i <ca.length; i++) {
        var c = ca[i];
        while (c.charAt(0) == ' ') {
          c = c.substring(1);
        }
        if (c.indexOf(name) == 0) {
          return c.substring(name.length, c.length);
        }
    }
    return "";
  } 
  
  var loggedOutEl = document.getElementById("my-scotrail-logged-out");
  var loggedInEl = document.getElementById("my-scotrail-logged-in");
  if (loggedOutEl && loggedInEl) {
    var ssocookie = getSSOLoggedInCookie();
    if (ssocookie != "") {
      loggedOutEl.style.display='none';
      loggedInEl.style.display='block';
    } else {
      loggedOutEl.style.display='block';
      loggedInEl.style.display='none';
    } 
  }
</script>
