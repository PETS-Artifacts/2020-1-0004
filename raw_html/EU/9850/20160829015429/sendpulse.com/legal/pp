<script type="text/javascript">
  
  	function menuUpdate() {
      if (jQuery(window).width() <= 768) {
        jQuery('#topmenu .dropdown').addClass('dropdown-disable').removeClass('dropdown');
        jQuery('#topmenu .dropdown-menu ').attr('data-style', jQuery('#topmenu .dropdown-menu ').attr('style')).removeAttr('style');
      } else {
        jQuery('#topmenu .dropdown-disable').addClass('dropdown').removeClass('dropdown-disable');
        jQuery('#topmenu .dropdown-menu ').attr('style', jQuery('#topmenu .dropdown-menu ').attr('data-style')).removeAttr('data-style');
      }
    }
  
    jQuery(document).ready(function(){

      	menuUpdate();
      	jQuery(window).resize(function() {
          menuUpdate();
        });
      
        jQuery(window).scroll(function(){
            var z = jQuery(document.getElementById("main-nav")), c = 'navbar-fixed-top';
			var scrollHeight =(
			  document.documentElement.scrollHeight - document.documentElement.offsetHeight
			);

            if ( (jQuery(window).scrollTop()  > 50) && (scrollHeight > 120 ) && (jQuery(window).width() > 768) ) {
                z.addClass(c);
                z.removeClass('mainnav');
                jQuery('#hspace').removeClass('hidden');
            }
            else {
                z.removeClass(c);
                z.addClass('mainnav');
                jQuery('#hspace').addClass('hidden');
            }

        });
    });
	jQuery(function () {
	  jQuery('[data-toggle="tooltip"]').tooltip()
	})
	jQuery(document).ready(function(){
	  jQuery('[data-toggle="popover"]').popover();   
	});

    var placeholder = document.getElementById('papPlaceholder');
        placeholder.parentNode.insertBefore(script, placeholder);
        placeholder.parentNode.insertBefore(input, placeholder);
        placeholder.parentNode.removeChild(placeholder);
    })(document, 'script');
    

</script>
