<script type="text/javascript">
    jQuery(document).ready(function(){
        $regFormTag = jQuery('#registrForm').closest('form');
        if ($regFormTag.size() > 0) {
            $regFormTag.submit(function(e){
                e.preventDefault();

                jQuery('#inputName').trigger('blur');
                jQuery('#inputName').focus();
                jQuery('#inputEmail').trigger('blur');
                jQuery('#inputPhone').trigger('blur');
                jQuery('#inputPassword').trigger('blur');

                registrationRemote('emailservice', 1, 'en');
            });
        }
    });
</script>
