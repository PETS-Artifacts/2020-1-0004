        <script type="text/javascript">
            setTimeout('$("#Password").val("");', 200);
            function DisplayBlock(id) {
                $("#" + id).css("display", "block");
            }

            function DisplayNone(id) {
                $("#" + id).css("display", "none");
            }

            function SetLink(lnk) {
                lnk.href = lnk.href + $('#RemeberStaffGroup').is(':checked');
            }

            $(document).ready(function () {
                if (readCookie('OrielCookieStatus') == null) {
                    $('div.cookiePolicy').show();
                }

                $('#UserName').focus();
            });

            setTimeout('$("#Password").val("");', 200);

            $(".input-validation-error").each(function () {
                $(this).removeClass().addClass('input-validation-error1');
            });

            if (($("span[class='field-validation-error']").text().indexOf('assistance')) >= 0) { $('#Password').removeClass('input-validation-error1'); }

            if ($("span[class='field-validation-error']").eq(0).text().indexOf("Remove this") >= 0)
            { $("span[class='field-validation-error']").eq(0).text(""); }
            $('#StaffGroupAlert').attr('title', $('.tooltipinfo').text());
            $('#RemeberStaffGroupS').attr('title', $('.tooltipinfoS').text());
        </script>
