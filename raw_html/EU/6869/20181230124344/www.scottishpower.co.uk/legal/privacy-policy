<script>(function () {
'use strict';

var _createClass = function () { function defineProperties(target, props) { for (var i = 0; i < props.length; i++) { var descriptor = props[i]; descriptor.enumerable = descriptor.enumerable || false; descriptor.configurable = true; if ("value" in descriptor) descriptor.writable = true; Object.defineProperty(target, descriptor.key, descriptor); } } return function (Constructor, protoProps, staticProps) { if (protoProps) defineProperties(Constructor.prototype, protoProps); if (staticProps) defineProperties(Constructor, staticProps); return Constructor; }; }();

function _classCallCheck(instance, Constructor) { if (!(instance instanceof Constructor)) { throw new TypeError("Cannot call a class as a function"); } }

(function () {
  var NavigationControl = function () {
    function NavigationControl(headerElement, navControllerElement, dropdownControllerElements, startingState) {
      _classCallCheck(this, NavigationControl);

      this.header = headerElement;
      this.navController = navControllerElement;
      this.dropdownControllerElements = dropdownControllerElements;
      this.state = startingState;
    }

    _createClass(NavigationControl, [{
      key: "onNavControllerClick",
      value: function onNavControllerClick() {
        if (this.state) {
          this.navController.classList.remove("open");
          document.getElementById("headerNav").classList.remove("headerNav--open");
          document.getElementsByTagName("html")[0].style.overflow = "initial";
          this.state = !this.state;
        } else {
          this.navController.classList.add("open");
          document.getElementById("headerNav").classList.add("headerNav--open");
          document.getElementsByTagName("html")[0].style.overflow = "hidden";
          this.state = !this.state;
        }
      }
    }, {
      key: "onNavDropdownClick",
      value: function onNavDropdownClick(el) {

        if (el.parentElement.classList.contains("active")) {
          [].forEach.call(dropdownController, function (control) {
            control.parentElement.classList.remove("active");
          });
        } else {
          [].forEach.call(dropdownController, function (control) {
            control.parentElement.classList.remove("active");
          });
          el.parentElement.classList.add("active");
        }
      }
    }, {
      key: "isDropdownOpen",
      value: function isDropdownOpen() {
        var items = document.getElementsByClassName("navList__item");

        var activeEl = Array.prototype.filter.call(items, function (item) {
          return item.classList.contains("active");
        });

        if (activeEl.length > 0) {
          this.onNavDropdownClick(activeEl[0]);
        }
      }
    }]);

    return NavigationControl;
  }();

  var header = document.getElementById("spHeader");
  var navToggle = document.getElementsByClassName("headerNavToggle")[0];
  var dropdownController = document.getElementsByClassName("dropdown__controller");
  var navControl = new NavigationControl(header, navToggle, dropdownController, false);

  navToggle.addEventListener("click", navControl.onNavControllerClick.bind(navControl));

  [].forEach.call(dropdownController, function (control) {
    control.addEventListener("click", function () {
      navControl.onNavDropdownClick(this);
    });
  });
})();

window.addEventListener('DOMContentLoaded', function () {
  (function ($) {
    if (!$) {
      console.error("[SP] Could not initialise header search lookahead. No jQuery found - is the library included on the page?");
      return;
    }

    var ENDPOINT = "https://community.scottishpower.co.uk/plugins/custom/scottishpower/scottishpower/search-suggestions";
    var DEBOUNCE_DELAY = 300;
    var HIDE_DELAY = 250;
    var debounce = function debounce(delay, originalFn) {
      var timeout = void 0;

      var fn = function fn() {
        var context = this;
        var args = arguments;

        clearTimeout(timeout);
        timeout = setTimeout(function () {
          timeout = null;
          originalFn.apply(context, args);
        }, delay);
      };

      fn.cancel = function () {
        clearTimeout(timeout);
        timeout = null;
      };

      return fn;
    };

    $('.spSearchBar').each(function () {
      var _this = this;

      var scope = $(this).attr('data-scope');
      var search = $(this).find('.spSearchBar__input');
      var results = $(this).find('#spSearchBar__results');
      var query = null;
      var searchSuggestionsXhr = null;
      var getSearchSuggestions = debounce(DEBOUNCE_DELAY, function () {
        // Only if search input has changed
        if (query !== search.val()) {
          query = search.val().trim();

          // If a previous search request is in flight, kill it off
          if (searchSuggestionsXhr) {
            searchSuggestionsXhr.abort();
          }

          if (query === "") {
            results.hide();
            results.empty();
          } else {
            searchSuggestionsXhr = $.ajax({
              type: 'POST',
              url: ENDPOINT + "?scope=" + scope + "&q=" + encodeURIComponent(query),
              // xhrFields: {
              //   withCredentials: true
              // },
              error: function error() {
                results.hide();
                results.empty();
                query = null;
              },
              success: function success(data) {
                results.show();
                results.empty();

                if (data.length > 0) {
                  data.forEach(function (message) {
                    var subject = message.subject.replace(new RegExp(query, 'gi'), function (match) {
                      return "<span class=\"spSearchBar__resultMatch\">" + match + "</span>";
                    });

                    var type = void 0;
                    switch (message.type) {
                      case 'tkb':
                        type = {
                          cssClass: 'spSearchBar__resultIcon--tkb',
                          text: 'Support Centre'
                        };
                        break;

                      case 'blog':
                        type = {
                          cssClass: 'spSearchBar__resultIcon--blog',
                          text: 'Blogs'
                        };
                        break;

                      case 'forum':
                      default:
                        type = {
                          cssClass: message.solved ? 'spSearchBar__resultIcon--solution' : 'spSearchBar__resultIcon--post',
                          text: 'Discussion Forum'
                        };
                    }

                    results.append("\n                      <li class=\"spSearchBar__result\">\n                        <a href=\"" + message.url + "\"><span class=\"spSearchBar__resultIcon " + type.cssClass + "\" title=\"" + type.text + "\" alt=\"" + type.text + "\"></span></a>\n                        <a class=\"spSearchBar__resultLink\" href=\"" + message.url + "\">" + subject + "</a>\n                      </li>");
                  });
                }
              }
            });
          }
        }
      });

      search.keyup(function () {
        if (search.val() !== "") {
          $(_this).find('.spSearchBar__clearInput').show();
        } else {
          $(_this).find('.spSearchBar__clearInput').hide();
        }

        getSearchSuggestions();
      });

      search.focus(function () {
        // Only show if there were previous results
        if (results.find('.spSearchBar__result').size() > 0) {
          results.show();
        }
      });

      search.blur(function () {
        window.setTimeout(function () {
          results.hide();
        }, HIDE_DELAY);
      });

      $(this).find('.spSearchBar__clearInput').click(function () {
        $(_this).find('.spSearchBar__clearInput').hide();
        getSearchSuggestions.cancel();

        if (searchSuggestionsXhr) {
          searchSuggestionsXhr.abort();
          searchSuggestionsXhr = null;
        }

        search.val("");
        results.hide();
        results.empty();
        query = null;
      });

      $(this).find('.spSearchBar__search').click(function () {
        if (search.val() !== "") {
          $(_this).find("form").submit();
        }
      });

      if (search.val() !== "") {
        $(this).find('.spSearchBar__clearInput').show();
      }
    });
  })(window && window.jQuery || window.LITHIUM && window.LITHIUM.jQuery);
});

}());
</script>



 

