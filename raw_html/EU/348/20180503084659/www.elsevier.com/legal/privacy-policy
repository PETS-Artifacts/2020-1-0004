<script>
//var _menuEvents = ['menu-home', 'menu-about', 'menu-careers', 'menu-connect', 'menu-authors', 'menu-editors', 'menu-librarians', 'menu-reviewers', 'menu-books-journals', 'menu-author-webshop', 'menu-rnd-solutions', 'menu-research-intelligence', 'menu-clinical-solution', 'menu-educational-solutions', 'menu-research-platform', 'menu-all-solutions'];

var menuEvents = ['menu-rnd-solutions', 'menu-clinical-solution', 'menu-research-platform', 'menu-research-intelligence', 'menu-education-solutions', 'menu-authors', 'menu-editors', 'menu-reviewers', 'menu-librarians', 'menu-books-journals', 'menu-author-webshop', 'menu-about', 'menu-connect', 'menu-careers', 'menu-support-center'];

window['optimizely'] = window['optimizely'] || [];

$(function(){
    $("body").addClass("new-menu");
  $.each(menuEvents, function(i,val){
    $(".menu-category-item:eq("+i+") a").on("click", function(e){
      window.optimizely.push(["trackEvent", menuEvents[i]]);
    });
  })

  $(".js-header-menu-toggle-open, .js-close-primary-menu").on("click", function(){
    window.optimizely.push(["trackEvent", "menu-clicked" ]);
  });
  
  setTimeout(function(){
      if(Foundation.utils.is_small_only()) {
        $("#search").attr("placeholder","Search");
        $("body").removeClass("vertical-menu");
    }
  }, 100)
});

function createSchemaTag(str) {
    var script_tag = document.createElement('script');
    script_tag.type = 'application/ld+json';
    script_tag.text = JSON.stringify(str, null, '\t');
    document.body.appendChild(script_tag);    
}
</script>

