		window.wmCyclePassbacks = function() {

			googletag.cmd.push(function() {

				if(++window.wmPBCount > window.wmNumPB) {

					$('.wm-in-feed-wrapper').hide();
					return;
				}

				$('#gpt-TheDailyMash_ROS_InFeed').hide();

				if(window.wmPBCount > 1) {

					$('#gpt-TheDailyMash_ManualPassback' + (window.wmPBCount - 1)).hide();
				}

				console.log('wmCyclePassbacks has been called ' + window.wmPBCount + ' times.');

				googletag.display('gpt-TheDailyMash_ManualPassback' + window.wmPBCount);
				googletag.pubads().refresh([window.pbSlots[window.wmPBCount - 1]]);
			});
