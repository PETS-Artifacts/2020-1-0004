          if ($("#bigthink-video").length) {
            videojs("bigthink-video").on('loadstart', function() {
              this.ga({'eventsToTrack': ['percent_played', 'start', 'end']});
            });
          } else {
            $(".bigthink-video").each(function(index, videoItem) {
              videojs(videoItem.id).on('loadstart', function() {
                this.ga({'eventsToTrack': ['percent_played', 'start', 'end']});
              });
            });
          }
        </script>

