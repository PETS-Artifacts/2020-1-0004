<script type="text/javascript">
  $(function() {
    var cookieName = 'roll20tempauth';
    var cookieValue = Math.floor(Math.random()*100);
    var myDate = new Date();
    myDate.setMonth(myDate.getMonth() + 1);
    var cookieinfo = cookieName +"=" + cookieValue + ";expires=" + myDate 
                      + ";domain=.roll20.net;path=/";
    document.cookie = cookieinfo;
    var s = document.createElement('script');
    s.type = 'text/javascript';
    s.src = 'https://app.roll20.net/sessions/topbar/'+cookieValue;
    var x = document.getElementsByTagName('script')[0];
    x.parentNode.insertBefore(s, x);

    var s2 = document.createElement('script');
    s2.type = 'text/javascript';
    s2.src = 'https://app.roll20.net/sessions/topbar_extras/'+cookieValue;
    var x2 = document.getElementsByTagName('script')[0];
    x2.parentNode.insertBefore(s2, x2);
  });

  $(".mw-collapsible").makeCollapsible();

</script>

