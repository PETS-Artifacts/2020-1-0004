    mediaWiki.loader.load(["mediawiki.util", "mediawiki.legacy.ajax", "ext.smw.sorttable", "ext.wikiEditor", "ext.wikiEditor.dialogs", "ext.wikiEditor.publish", "ext.wikiEditor.toolbar", "jquery.makeCollapsible"]);
        //mediaWiki.loader.load(["mediawiki.util", "mediawiki.legacy.ajax", "ext.smw.sorttable", "ext.wikiEditor", "ext.wikiEditor.dialogs", "ext.wikiEditor.publish", "jquery.makeCollapsible"]);
