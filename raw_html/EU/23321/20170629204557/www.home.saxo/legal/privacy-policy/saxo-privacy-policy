    <script type="text/javascript">
        var crumbs = window.location.pathname.toLowerCase().replace(/\//g, ':'),
            prevCookie,
            value,
            array,
            dataLayer = {},
            cookieType = { CAMPAIGN : 1, PAGE : 2, WEBSITE : 3 };

        var myRe = new RegExp("^/[a-z]{2}-[a-z]{2}", "");
        var myArray = myRe.exec(window.location.pathname);
        if (myArray == null) {
            crumbs = crumbs.replace(/^:/, "en:").replace(/:$/, '');
        } else {
            crumbs = crumbs.replace(/^:/, "").replace(/:$/, '');
        }

        var myRe = new RegExp("^/[a-z]{2}-[a-z]{2}", "");
        var myArray = myRe.exec(window.location.pathname);
        if(myArray==null){
            crumbs = crumbs.replace(/^:/, "en:").replace(/:$/, '');
        }else {
            crumbs = crumbs.replace(/^:/, "").replace(/:$/, '');
        }

        function stackCookie(cType, arrayLength) {
            array = [];
            if (cType==cookieType.PAGE) {
                prevCookie = "".replace(/&gt;/g, '>');
                value = crumbs;
            } else if(cType==cookieType.CAMPAIGN) {
                prevCookie = "".replace(/&gt;/g, '>');
                value = "";
            } else if(cType==cookieType.WEBSITE) {
                prevCookie = "".replace(/&gt;/g, '>');
                value = "home.saxo";
            }
            if (!value ||value=="") {
                return prevCookie;
            }
            if (prevCookie && prevCookie != "") {
                array = prevCookie.split('>');
            }
            if (value != '' && value != array[array.length - 1]) {
                if(array.length==arrayLength){
                    array.shift();
                    array.push(value);
                }else{
                    array.push(value);
                }
                if (cType == cookieType.PAGE) {
                    document.cookie = "sb_prevpages" + "=" + array.join(">") + "; path=/";
                } else if (cType == cookieType.CAMPAIGN) {
                    document.cookie = "sb_prevextcampaigns" + "=" + array.join(">") + "; path=/";
                } else if (cType == cookieType.WEBSITE) {
                    document.cookie = "sb_prevwebsites" + "=" + array.join(">") + "; path=/";
                }
            }
            return array.join(">");
        }

        function getSiteSection(level) {
            array = crumbs.split(':');
            if (array.length > level - 1) {
                return array[level - 1];
            }
            return "";
        }

        function getTimeParting(t) {
            var d, K, L, M, N, O, R, T;
            d = new Date();
            K = ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'];
            L = d.getHours();
            M = d.getMinutes();
            N = d.getDay();
            O = K[N];
            R = '00';
            if (M > 30) { R = '30' }
            if (L == 0) { L = 12 };
            T = L + ':' + R;
            if (t == 'h') { return T }
            if (t == 'd') { return O }
        }

            if (200 == 404) {
                dataLayer.error = 200;
        } else {
            dataLayer.page = {
                siteSection1:     getSiteSection(1),
                siteSection2:     getSiteSection(2),
                siteSection3:     getSiteSection(3),
                siteSection4:     getSiteSection(4),
                siteSection5:     getSiteSection(5),
                timeOfDay:        getTimeParting('h'),
                dayOfWeek:        getTimeParting('d'),
                pageName:         crumbs,
                website:          "home.saxo",
                language:         "en",
                campaignStacking: stackCookie(cookieType.CAMPAIGN, 5),
                websiteStacking:  stackCookie(cookieType.WEBSITE, 3),
            };
        }
    </script>


