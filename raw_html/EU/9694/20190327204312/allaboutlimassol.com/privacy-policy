<script type='text/javascript'>
$(".uiButtonnear").click(function() {
    $(".uiButtonnear").removeClass("uiButtonnearActive");
    $(this).toggleClass("uiButtonnearActive");
    var id = $(this).attr("id");
    if (id == "1") {
           $(".eatdringdiv").hide();
           $(".eatdringdiv8").hide();
           $(".nearbydiv8").hide();
           $(".nearbydiv").css("display", "block");
    }
    if (id == "2") {
           $(".nearbydiv").hide();
           $(".eatdringdiv8").hide();
           $(".nearbydiv8").hide();
           $(".eatdringdiv").css("display", "block");
    }
    if (id == "3") {
           $(".eatdringdiv").hide();
           $(".eatdringdiv8").hide();
           $(".nearbydiv").hide();
           $(".nearbydiv8").css("display", "block");
    }
    if (id == "4") {
           $(".nearbydiv").hide();
           $(".eatdringdiv").hide();
           $(".nearbydiv8").hide();
           $(".eatdringdiv8").css("display", "block");
    }
});
</script>
