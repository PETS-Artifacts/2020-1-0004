      $('.dropdown-link').click(function(e) {
        if (getWidth() < 768) {
          e.preventDefault();
          $(this).toggleClass('expanded');
          $(this).next('ul.dropdown-menu').slideToggle();
        }
      });
    });
  </script>

  </body>
</html>
