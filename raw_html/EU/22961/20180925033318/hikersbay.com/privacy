   var update_hotel_fix_box2 = function() { 
     var update = function() {
     var max_box_size = 0;
     _.each($('.hotel-fix-box2'), function(el) {
       var size = $(el).height();
         if (size > max_box_size) max_box_size = size;
       })
       if (max_box_size > 0) {
         $('.hotel-fix-box2').height(max_box_size)
       }
       }
   
