<script type="text/javascript">
    (function () {
        // Mobile menu
        var mobileNavClass = 'is-mobile-nav';
        var menuTitleClassSubMenuOpen = 'menu-title--submenu-open';
        var toggle = document.getElementById('js-toggle-mobile-menu');
        var dropdowns = document.querySelectorAll('.menu-item-has-children > a');
        var mainMenuTitleContainer = document.getElementById('js-menu-title-container');
        var closeMainMenuButton = document.getElementById('js-close-main-menu');
        var backToMainMenuButton = document.getElementById('js-back-to-main-menu');
        var menuContainer = document.getElementById('js-header-nav');
        var headerContainer = document.getElementById('js-site-header');

        function disableLink(event) {
            event.preventDefault();
        }

        function openSubMenu() {

            // var element = this.parentNode;
            var element = this;
            var subMenuItem;

            // Add class to menu title
            mainMenuTitleContainer.classList.add(menuTitleClassSubMenuOpen);

            var subMenuItems = element.parentNode.parentNode.children;

            // Hide all sub menu items
            for (var i = 0; i < subMenuItems.length; i++) {
                subMenuItems[i].classList.add('is-hidden'); // .menu-item-has-children
            }

            // Show only the one clicked
            element.parentNode.classList.remove('is-hidden'); // .menu-item-has-children
            element.parentNode.classList.add('is-selected'); // .menu-item-has-children

            // Selected item
            subMenuItem = element.nextElementSibling;
            subMenuItem.classList.add('is-visible');

            // Hide top menu when a submenu item of the main menu is clicked
            if (document.body.classList.contains(mobileNavClass))
            {
                var topMenuContainer = document.getElementsByClassName('top-nav')[0];
                topMenuContainer.style.display = "none";
            }
        }

        function closeSubMenu() {

            var element = this;
            var subMenuItem;

            // Remove class from menu title
            mainMenuTitleContainer.classList.remove(menuTitleClassSubMenuOpen);

            var subMenuItems = element.parentNode.parentNode.children;

            // Show all sub menu items
            for (var i = 0; i < subMenuItems.length; i++) {
                subMenuItems[i].classList.remove('is-hidden'); // .menu-item-has-children
            }

            // Hide only the one clicked
            element.parentNode.classList.add('is-hidden'); // .menu-item-has-children
            element.parentNode.classList.remove('is-selected'); // .menu-item-has-children

            // Selected item
            subMenuItem = element.nextElementSibling;
            subMenuItem.classList.remove('is-visible');

            // Show top menu
            var topMenuContainer = document.getElementsByClassName('top-nav')[0];
            topMenuContainer.style.display = "block";
        }

        // Function to return to menu's initial state
        function initializeMainMenu() {

            var selectedMenuItem = document.querySelector('li.is-selected');
            var subMenu = document.querySelector('ul.is-visible');
            var mainMenuHiddenItems = document.querySelectorAll('li.is-hidden');
            var topMenuContainer = document.getElementsByClassName('top-nav')[0];

            mainMenuTitleContainer.classList.remove(menuTitleClassSubMenuOpen);

            if (subMenu)
            {
                subMenu.classList.remove('is-visible');
                selectedMenuItem.classList.remove('is-selected');
            }

            for (var i = 0; i < mainMenuHiddenItems.length; i++) {
                mainMenuHiddenItems[i].classList.remove('is-hidden'); // .menu-item-has-children
            }

            topMenuContainer.style.display = "block";
        }

        toggle.addEventListener('click', function() {

            if (document.body.classList.contains(mobileNavClass))
            {
                document.body.classList.remove(mobileNavClass);
                mainMenuTitleContainer.classList.remove('is-mobile-menu');
                menuContainer.classList.add('is-hidden');

                Array.prototype.forEach.call(dropdowns, function(element) {
                    element.removeEventListener('click', disableLink, false);
                    element.removeEventListener('click', closeSubMenu, false);
                });
            }
            else
            {
                document.body.classList.add(mobileNavClass);
                mainMenuTitleContainer.classList.add('is-mobile-menu');
                menuContainer.classList.remove('is-hidden');

                Array.prototype.forEach.call(dropdowns, function(element) {
                    element.addEventListener('click', disableLink, false);
                    element.addEventListener('click', openSubMenu, false);
                });
            }
        });

        // Back to main menu on mobile
        backToMainMenuButton.addEventListener('click', function () {
            initializeMainMenu();
        });

        // Close main menu on mobile
        closeMainMenuButton.addEventListener('click', function () {

            document.body.classList.remove(mobileNavClass);

            menuContainer.classList.add('is-hidden');

            Array.prototype.forEach.call(dropdowns, function(element) {
                element.removeEventListener('click', disableLink, false)
            });

            initializeMainMenu();
        });

        // Sticky header.
        var headerPosition = headerContainer.getBoundingClientRect();
        var placeholder = document.createElement('div');
        placeholder.style.height = headerPosition.height + 'px';
        var isAdded = false;

        window.addEventListener('scroll', function() {

            var stickyClass = 'is-stuck';

            if (window.pageYOffset >= headerPosition.top && !isAdded)
            {
                headerContainer.parentNode.insertBefore(placeholder, headerContainer);
                headerContainer.classList.add(stickyClass);
                isAdded = true;
            }
            else if (window.pageYOffset < headerPosition.top && isAdded)
            {
                headerContainer.classList.remove(stickyClass);
                headerContainer.parentNode.removeChild(placeholder);
                isAdded = false;
            }
        });
    })();

    (function () {
        // Mobile search box
        var searchBox = document.getElementById('js-mobile-search-box');

        if (! searchBox)
        {
            return;
        }

        var isVisibleClassName = 'is-visible';
        var isActiveClassName = 'is-active';
        var toggle = document.getElementById('js-toggle-mobile-search');
        var textField = document.querySelector('input.site-search__input');
        var headerContainer = document.getElementById('js-site-header');
        var isVisible = false;

        toggle.addEventListener('click', function() {

            if (isVisible)
            {
                headerContainer.classList.remove('show-outpouring-elements');
                textField.blur();
                searchBox.classList.remove(isVisibleClassName);
                this.classList.remove(isActiveClassName);
            }
            else
            {
                headerContainer.classList.add('show-outpouring-elements');
                searchBox.classList.add(isVisibleClassName);
                this.classList.add(isActiveClassName);

                window.setTimeout(function () {
                    textField.focus();
                }, 100);
            }

            isVisible = searchBox.classList.contains(isVisibleClassName);
        });
    })();

    (function () {
        // User menu
        var mobileNavClass = 'is-mobile-nav';
        var visibleClassName = 'is-visible';
        var hiddenClassName = 'is-hidden';
        var toggle = document.getElementById('js-toggle-mobile-user-menu');
        var mainNav = document.querySelector('nav.main-nav');
        var topMenu = document.querySelector('ul.top-menu');
        var userMenu = document.querySelector('ul.user-menu');
        var headerContainer = document.getElementById('js-site-header');
        var headerNavContainer = document.getElementById('js-header-nav');
        var userNotLoggedInContainer = document.getElementById('js-user-not-logged-in');
        var closeUserMenu = document.getElementById('js-close-user-menu');
        var isVisible = false;

        toggle.addEventListener('click', function() {

            if (isVisible)
            {
                document.body.classList.remove(mobileNavClass);
                headerContainer.classList.remove('show-outpouring-elements');
                userMenu.classList.remove(visibleClassName);
                mainNav.classList.remove(hiddenClassName);
                topMenu.classList.remove(hiddenClassName);
                closeUserMenu.classList.add(hiddenClassName);

                if (! headerNavContainer.classList.contains(hiddenClassName))
                {
                    headerNavContainer.classList.add(hiddenClassName);
                }

                if (userNotLoggedInContainer)
                {
                    userNotLoggedInContainer.classList.remove(visibleClassName);
                }
            }
            else
            {
                document.body.classList.add(mobileNavClass);
                headerContainer.classList.add('show-outpouring-elements');
                userMenu.classList.add(visibleClassName);
                mainNav.classList.add(hiddenClassName);
                topMenu.classList.add(hiddenClassName);
                closeUserMenu.classList.remove(hiddenClassName);

                if (headerNavContainer.classList.contains(hiddenClassName))
                {
                    headerNavContainer.classList.remove(hiddenClassName);
                }

                if (userNotLoggedInContainer)
                {
                    userNotLoggedInContainer.classList.add(visibleClassName);
                }
            }

            isVisible = userMenu.classList.contains(visibleClassName);

            // Close main menu on mobile
            closeUserMenu.addEventListener('click', function () {

                document.body.classList.remove(mobileNavClass);
                headerContainer.classList.remove('show-outpouring-elements');
                userMenu.classList.remove(visibleClassName);
                mainNav.classList.remove(hiddenClassName);
                topMenu.classList.remove(hiddenClassName);
                headerNavContainer.classList.add(hiddenClassName);
                this.classList.add(hiddenClassName);

                if (userNotLoggedInContainer)
                {
                    userNotLoggedInContainer.classList.remove(visibleClassName);
                }

                isVisible = false;
            });
        });
    })();
</script>

