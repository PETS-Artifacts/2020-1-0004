  <script type="text/javascript">
  $(document).ready(function() {

      var stickyAd = $(".sidebar-ad");
      var offset = stickyAd.offset();
      var scrollSnapshot = 0;
      var locked = 0;

      $(document).on("scroll", function(e) {
         var page = $(document);

         if (page.scrollTop() >= (offset.top - 120) && $(window).width() >= 1200) {

             if (locked == 0 && stickyAd.hasClass('sticky') && stickyAd.position().top+stickyAd.offset().top+stickyAd.outerHeight(true) > $('.content-area').position().top+$('.content-area').outerHeight(true)) {
                 stickyAd.css({"top": stickyAd.offset().top - 550});
                 stickyAd.removeClass("sticky").addClass("locked");
                 scrollSnapshot = page.scrollTop();
                 locked = 1;
             } else if (locked == 0 || page.scrollTop() <= scrollSnapshot) {
                 stickyAd.css({"top": "120px"});
                 stickyAd.removeClass("locked").addClass("sticky");
                 locked = 0;
             }
         } else {
             stickyAd.removeClass("sticky");
         }
      });

      $(window).resize(function() {
         if ($(window).width() < 1200) {
             stickyAd.removeClass("sticky").removeClass("locked");
             locked = 0;
         }
      });

      $(".legends-teaser").click(function() {
         window.location = "http://www.technicpack.net/legends";
      });

  });
  </script>
