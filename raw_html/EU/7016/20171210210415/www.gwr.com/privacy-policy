        //logger wrapper for Rollbar - swap out to a more robust solution if necessary
        var gwrDEBUG = false;
        if (window.environment === "local") {
            gwrDEBUG = true;
            Rollbar.configure({enabled: false});
        }

        var mdLogger = function(level, msg, optionalData) {
            var optionalData = optionalData || null;
            var levels = ["critical", "error", "warning", "info", "debug"];

            if (levels.indexOf(level) !== -1) {

                //filter out unimportant logs
                if (level !== "critical" && level !== "error") {
                    if (gwrDEBUG) {
                        console.info(prettyPrintLog());
                    }
                    return;
                }

                //in debugging mode output to console, in production send to Rollbar
                if (gwrDEBUG) {
                    console.error(prettyPrintLog());
                } else {
                    Rollbar[level](msg, customData);
                }

            } else {
                //alert typos in log levels
                console.error("Unrecognised log level passed to Rollbar: " + level);
            }

            function prettyPrintLog() {
                var s = level + ": " + msg;
                if (optionalData) {
                    s += ", " + optionalData;
                }
                return s;
            }

        }
        mdLogger("info", "Logger initialised successfully");

