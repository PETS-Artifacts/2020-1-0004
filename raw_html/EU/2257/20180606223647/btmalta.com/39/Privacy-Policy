( function( $ ) {
$( document ).ready(function() {
$('#cssmenu3').prepend('<div id="menu-button"></div>');
	$('#cssmenu3 #menu-button').on('click', function(){
		var menu = $(this).next('ul');
		if (menu.hasClass('open')) {
			menu.removeClass('open');
		}
		else {
			menu.addClass('open');
		}
	});
});
} )( jQuery );
   
   </script>
   
   
