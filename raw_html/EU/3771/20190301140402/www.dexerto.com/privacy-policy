	<script type="text/javascript">
		$("a[href='#top']").click(function() {
		  $("html, body").animate({ scrollTop: 0 }, 750);
		  return false;
		});

		$(document).ready(function(){
		  $('.sh').each(function() {
		    var $dropdown = $(this);
		    $(".sh-toggle", $dropdown).click(function(e) {
		      e.preventDefault();
		      $div = $(".sh-content", $dropdown);
		      $div.toggle();
		      $(".sh-content").not($div).hide();
		      return false;
		    });
			});

		  $('html').click(function(){
		    $(".sh-content").hide();
		  });
		});

		$("#mobileMenu").hiraku({
			btn: "#mobileMenuToggle",
			direction: "right"
		});

		$("#searchToggle").click(function() {
			$('#searchBar').animate({width:'toggle'},100);
			event.preventDefault();
		});

		// ABOVE CONTENT STICKY
		$(function(){
		  $(window).scroll(function(){
		    if($(this).scrollTop() >= 700 && $('#stickAboveContent').is('.is_stuck')){
					$("#stickAboveContent").trigger('sticky_kit:detach');
					$(this).scrollTop(701);
				}

				if($(this).scrollTop() <= 699 && !$('#stickAboveContent').is('is_stuck')){
					$("#stickAboveContent").stick_in_parent({
						parent: '#stickAboveContentContainer',
						spacer: '#stickAboveContentSpacer'
					});
				}
		  });
		});
	</script>

