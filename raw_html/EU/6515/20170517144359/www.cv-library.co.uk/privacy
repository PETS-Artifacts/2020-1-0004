<script>
    $(function(){
        if ( $('.cvsearchResultModule')[0] ){
            //we have results, dont focus keywords otherwise the page scrolls to top
        }else if ( document.search && document.search.q && document.search.q.attributes.nofocus === undefined )
        {
            document.search.q.focus();
            if (document.search.q.setSelectionRange)
                document.search.q.setSelectionRange(0,0);
        }
        else if ( document.search && document.search.keywords && document.search.keywords.attributes.nofocus === undefined )
        {
            document.search.keywords.focus();
            if (document.search.keywords.setSelectionRange)
                document.search.keywords.setSelectionRange(0,0);
        }
    });
</script>
    </body>
</html>
