<script type="text/javascript">
(() => {
	if(AngularEj.Services.Common.ErrorService)
	{	
		AngularEj.Services.Common.ErrorService.prototype.Exit = function (exitReason) {
			if (IsOnFunnel() && !IsOnConfirmation() && !HasFunnelJourneyCookie())
			{
				gaTracker.TrackEvent("da-fun", "Error - no funnel journey cookie present", GetUserCookieLabel());
			}
			
			this.LogError(exitReason);
						AngularEj.Services.Common.ErrorService.IsExiting = true;
						this._tracker.TrackEventAndNavigateToUrl(Tracking.EventConstants.Categories.Alert, Tracking.EventConstants.Actions.FunnelExitReason, exitReason, "/");
				};
	}
	
	function IsOnFunnel()
	{
		return window.location.pathname.indexOf("buy") !== -1;
	}
	
	function IsOnConfirmation()
	{
		return window.location.pathname.indexOf("confirmation") !== -1;
	}
	
	function HasFunnelJourneyCookie()
	{
		return document.cookie.indexOf("FunnelJourney") !== -1;
	}
	
	function GetUserCookieLabel()
	{
		let cookies = document.cookie.split("; ")
		
		let cmsPod = getCookie(cookies, "CMSPOD");
		let avlPod = getCookie(cookies, "AVLPOD");
		let rbkPod = getCookie(cookies, "RBKPOD");
		let ga = getCookie(cookies, "_ga");
		
		return "User Cookies: " + cmsPod + " " + avlPod + " " + rbkPod + " " + ga;
	}
	
	function getCookie(cookies, name) 
	{
		for (let i=0; i<cookies.length; ++i)
		{
			if (cookies[i].indexOf(name + "=") !== -1)
			{
				return cookies[i];
			}
		}
		
		return null
	} 
})();
</script>
<!--END HOTFIX-->


