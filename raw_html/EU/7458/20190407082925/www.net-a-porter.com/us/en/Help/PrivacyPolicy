<script type="text/javascript">
$(document).ready(function () {
var accordionID = "#help-details-accordion";
// Have we requested to view a particular item?
if(window.location.hash) {
var itemName = window.location.hash.substring(1).toLowerCase();
$(accordionID).find('#'+itemName).addClass('open');
}
// If not, just open the first item.
if ($(accordionID+'>li.open').length == 0) {
var first = $(accordionID+'>li').slice(0,1)
$(first).addClass("open");
}
$(accordionID).accordionMenu({
afterEnd: function () {
$('.open').find('ul').slideDown();
}
});
});
if (navigator.userAgent.toLowerCase().indexOf('ipad') != -1) {
$(document).ready(function () {
var el = document.getElementById('help-country-selector');
var anchor = $('#help-country-selector a').get(0);
var helpContainer = document.getElementById('main-help');
function hideDropDown() {
el.style.overflow = '';
}
function showDropDown() {
el.style.overflow = 'visible';
}
anchor.addEventListener('touchend', function (e) {
if (el.style.overflow === '') {
e.preventDefault();
showDropDown();
} else {
hideDropDown();
}
}, false);
});
}
