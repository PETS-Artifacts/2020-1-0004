		<script>
		
		//empty search validation (needs to be exported to dfs lib)
		dfs.searchValidate = new(function(){
			this.init = function(){
			    addEvents();		    
			}
			/*Private functions*/
			function addEvents(){
				$("input.searchValidate").click(function(e){
					var inputId = $(this).attr("data-inputid");
					var termPresent = $("#"+inputId).val().length;			
					if(!termPresent) {
						return false;
					}			
				});		
			}
		});
		jQuery( document ).ready(function( $ ) {
			dfs.searchValidate.init();
		});
		
		</script> 
