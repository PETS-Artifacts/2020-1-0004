        <script>
            function trackEvidonEvent(eventAction, properties) {
                var props = properties || {};

                props.pageType = "wdg_static_pages";
                props.testGroup = "";
                props.testVariant = "";
                props.deviceType = "desktop";

                SpilGames('tracker.event.express', {
                    data: {
                        eventCategory: 'page',
                        eventAction: eventAction,
                        properties: props
                    }
                });
            }

            function addEvidonBackTrack(){
                setTimeout(function(){
                    document.getElementById("_evidon-l3").children[0].addEventListener("click", function( event ) {
                        trackEvidonEvent('evidonConsentBack', {});
                        document.getElementById("_evidon-l3").children[0].removeEventListener("click");
                    });
                }, 3000);
            }

            function setupEvidonTracking() {
                if(typeof window.evidon === 'object') {
                    // send initial event representing that block is running
                    trackEvidonEvent('evidonConsentImpr', {
                        enabled: true
                    });

                    document.getElementById("_evidon-accept-button").addEventListener("click", function( event ) {
                        trackEvidonEvent('evidonConsentSave', {
                            accepted: true
                        });
                    });

                    document.getElementById("_evidon-option-button").addEventListener("click", function( event ) {
                        addEvidonBackTrack();
                    });
                }
            }

            setTimeout(setupEvidonTracking, 3000);
        </script>
        
    </body>
</html>
