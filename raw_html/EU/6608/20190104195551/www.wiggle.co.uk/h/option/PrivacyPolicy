    <script>
        (function () {
            var eGainChatImageRoot = 'https://www.wigglestatic.com/images/livechat/buttons/';
            function setLiveChatAvailable() {
                $('#eGainChatImage').attr('src', eGainChatImageRoot + 'onlinebuttons/online_' + egainDockChat.WiggleLanguage + '.png');
                $('#egain-live-chat').show();
            }

            function setLiveChatBusy() {
                $('#eGainChatImage').attr('src', eGainChatImageRoot + 'BusyButtons/busy_' + egainDockChat.WiggleLanguage + '.png');
                $('#egain-live-chat').show();
            }

            function setLiveChatUnavailable() {
                $('#eGainChatImage').attr('src', eGainChatImageRoot + 'OfflineButtons/offline_' + egainDockChat.WiggleLanguage + '.png');
                $('#egain-live-chat').show();
            }

            function checkEGainChatAvailablity() {
                try {
                    var agent_domain = egainDockChat.serverURL;
                    var agent_availability_uri = "/egain/chat/entrypoint/agentAvailability";
                    var agent_capacity_uri = "/egain/chat/entrypoint/capacity";
                    var eligibility_uri = "/egain/chat/entrypoint/checkEligibility";
                    var entryPointId = egainDockChat.EntryPointId;
                    var eglvchathandle = null;
                    var availability_url = agent_domain + '/' + agent_availability_uri + '/' + entryPointId;
                    var capacity_url = agent_domain + '/' + agent_capacity_uri + '/' + entryPointId;
                    var eligibility_url = agent_domain + '/' + eligibility_uri + '/' + entryPointId;

                    $.ajax({
                        type: 'GET',
                        url: eligibility_url,
                        dataType: 'xml',
                        success: function (xml) {
                            var responseType = $(xml).find('checkEligibility').attr('responseType');

                            if (responseType === "0") {
                                setLiveChatAvailable();
                            } else if (responseType === "1") {
                                setLiveChatUnavailable();
                            } else if (responseType === "2") {
                                setLiveChatBusy();
                            }
                        }
                    });

                } catch (err) {
                    console.log('Live Chat API error');
                    ga('send', 'exception', {
                        'exDescription': err.message,
                        'exFatal': false
                    });
                }
            }

            $(document).ready(function () {
                checkEGainChatAvailablity();
            });
        })();

    </script>


