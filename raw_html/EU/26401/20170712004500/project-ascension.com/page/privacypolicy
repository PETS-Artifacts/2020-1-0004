				language: "english",

				UseFusionTooltip: 1,

				Slider: {
					interval: 5000,
					effect: "",
					id: "slider_bg"
				},
				
				voteReminder: 0,

				Theme: {
					next: "Next",
					previous: "Prev"
				}
			};

