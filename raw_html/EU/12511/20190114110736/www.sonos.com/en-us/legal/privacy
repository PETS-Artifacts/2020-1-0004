<script>
function waitForJQuery(method, attempts = 200) {
if (window.jQuery) {
method();
} else if(attempts > 0) {
setTimeout(function() { waitForJQuery(method, --attempts) }, 5);
} else {
console.log('waitForJQuery() - jQuery not found.');
}
}
</script>



<script>
function safeDispatchEvent(eventName, params) {
if (typeof(Event) === 'function') {
// If the new Event function exists just use that for non IE 11 modern browsers
var event = new Event(eventName);
window.dispatchEvent(event);
} else {
// Else use the initCustomEvent function for IE 11
params = params || { bubbles: false, cancelable: false, detail: undefined };
var event = document.createEvent('CustomEvent');
event.initCustomEvent(eventName, params.bubbles, params.cancelable, params.detail);
window.dispatchEvent(event);
}
}
waitForJQuery(function(){
$('#headerBanner').load('https://www.sonos.com/on/demandware.store/Sites-Sonos_US-Site/en_US/DynamicContent-LoadHeaderBanner', function() {
safeDispatchEvent('resize');
});
});
</script>

