			<script type="text/javascript">
			var videoSlider = new MasterSlider();
			videoSlider.setup('video-masterslider' , {
					width:960,    // slider standard width
					height:540,
					space: 5,
					view: 'fade',
					speed:10,
					loop: true,
					layout: 'fullwidth',
					autoplay: true,
					autofill:true,
					overPause:false,
					preload: 4,
					start: 1
			});
			videoSlider.control('thumblist' , {
				autohide:false,
				dir:'h',
				align:'bottom',
				width:180,
				height:101,
				overVideo:true,
				type:'thumbs' ,
				inset: true
			});
			var wrapper = $('#slider-video-wrapper');
			$(window).resize(function(event) {
				setMasterslidersViews();
			});
			function setMasterslidersViews() {
				if(wrapper.width() >= 1050) {
					wrapper.height(window.innerHeight - 62);
				}
				if(wrapper.width() < 1050 && wrapper.is(":visible") ) {
					$('#slider-video-wrapper').hide();
					if (typeof videoSlider.api.view !== 'undefined') {
						videoSlider.api.pause();
						videoSlider.api.view.currentSlide.bgvideo.pause();
					}
					$('#slider-pic-wrapper').show();
				} else if(wrapper.width() >= 1050 && ( !(wrapper.is(":visible")) || $('#slider-pic-wrapper').is(":visible")) ){
					$('#slider-pic-wrapper').hide();
					$('#slider-video-wrapper').show();
					if (typeof videoSlider.api.view !== 'undefined') {
						videoSlider.api.resume();
						videoSlider.api.view.currentSlide.bgvideo.play();
					}
				}
			}
			setMasterslidersViews();
		</script>
