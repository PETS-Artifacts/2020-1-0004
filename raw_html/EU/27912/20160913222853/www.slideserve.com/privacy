  $(function () {
	if ($(window).width() < 750)
	{
  $('#logo').attr("src", "http://www.slideserve.com/new/img/logo_min.png");
	}
  });

  function formatSearch()
  {
	var strSearch = document.getElementById('field').value;
	strSearch = strSearch.replace("/", "-");
	strSearch = strSearch.replace(/ /g, "-");
	window.location = 'http://www.slideserve.com/search/' + encodeURIComponent(strSearch);
  }

  $(document).ready(function () {
	$('#field').keydown(function (event) {
  if (event.keyCode == 13) {
	formatSearch();
  }
	});
  });
  $(window).resize(function () {
	if ($(window).width() < 750)
	{
    $('#logo').attr("src", "http://www.slideserve.com/new/img/logo_min.png");
	}
	else
	{
    $('#logo').attr("src", "http://www.slideserve.com/new/img/logo.png");
	}
  });</script>
 
