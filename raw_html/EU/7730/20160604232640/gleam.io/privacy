<script>
window.facebookAppId = "152351391599356";
angular.element(document).ready(function () {
  window.fbAsyncInit = function() {
    FB.init({
      appId      : window.facebookAppId,
      status     : true,
      xfbml      : true
    });

    FB.Event.subscribe('edge.create', function(url) {
      $('[ng-controller=EnterController]').scope().handleLike(url);
    });

    FB.getLoginStatus(function (data) {
      var entryScope = $('[ng-controller=EnterController]').scope();
      if(entryScope) {
          entryScope.facebookContestantLoginStatus(data);
      }

      var loginScope = $('[ng-controller=LoginController]');
    });

    var app = window.Gleam;

    if(app && app.resizeContent) {
      angular.element(document).ready(function () {
        app.resizeContent();
      });
    }

    if(window.FB && window.FB.Canvas && window.FB.Canvas.setAutoGrow) {
      FB.Canvas.setAutoGrow(91);
    }
  };

  if (window.FB) { // FB script already loaded
    window.fbAsyncInit();
  }
});
(function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.async = true;
    // https because of weird bug http://stackoverflow.com/a/13281719/600638
    js.src = "https://connect.facebook.net/en_US/all.js#xfbml=1&appId="+encodeURIComponent(window.facebookAppId);
    fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));
</script>
