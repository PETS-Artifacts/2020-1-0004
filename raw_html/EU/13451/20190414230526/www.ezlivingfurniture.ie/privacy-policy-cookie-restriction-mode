    require([
        'jquery'
    ], function ($) {
        'use strict';

        var searchIcon = $("em.porto-icon-search"),
            headerBlock = $(".page-header.type11"),
            headerBottom = $(".header-bottom");

        $(document).ready(function () {
            searchIcon.on('click', function () {
                headerBlock.toggleClass("search-is-open");
                headerBottom.toggleClass("search-is-open");
            });

            $("main").on('click', function () {
                if(headerBlock.hasClass("search-is-open")) {
                    headerBlock.removeClass("search-is-open");
                    headerBottom.removeClass("search-is-open");
                }
            });
        })
    });
