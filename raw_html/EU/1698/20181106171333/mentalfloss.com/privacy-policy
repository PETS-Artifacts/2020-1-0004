<script>
	var playerAdSize;
	var onlyDesktopDevice = true; //initiate as false
	var isDesktop = MentalFloss.getCurrentDevice() == "desktop";
	var isTablet = MentalFloss.getCurrentDevice() == "tablet";
	var isMobile = MentalFloss.getCurrentDevice() == "mobile";
	if( /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent) ) {
		onlyDesktopDevice = false;
	}
	if(isDesktop && onlyDesktopDevice){
		playerAdSize = "640x360";
	}else if(isTablet){
		playerAdSize = "400x225";
	}else if(isMobile){
		playerAdSize = "300x150";
	}
</script>



