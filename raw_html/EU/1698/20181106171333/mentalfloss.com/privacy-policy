        jQuery(document).ready(function() {
            function smooothScroll(link) {
                var href = jQuery(link).attr("href");
                var headerHeight = jQuery('#header-main-navbar').height();
                var target = jQuery(href).offset().top - headerHeight;

                jQuery('html, body').animate({
                  scrollTop: target
                }, 1000);
            }

            jQuery(".contents-link").click(function(event) {
                event.preventDefault()
                smooothScroll(this);
            });
        });
    </script>
