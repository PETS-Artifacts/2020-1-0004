	<!--NEW FAB Adblock Check-->
	<script type="text/javascript">
		function adBlockNotDetected() {
			//_gaq.push(['_trackEvent', 'FAB New Adblock', 'Unblocked','Unblocked-Ads', 0, true]);
			dataLayer.push({
				'eventAdBlock.category': 'FAB New Adblock',
				'eventAdBlock.action': 'Unblocked',
				'eventAdBlock.label': 'Unblocked-Ads',
				'eventAdBlock.value': 0,
				'event': 'eventAdBlock'
			});
//			console.log('Ad Block is not detected');
		}
		// Function called if AdBlock is detected
		function adBlockDetected() {
			//_gaq.push(['_trackEvent', 'FAB New Adblock', 'Blocked','Blocked-Ads', 0, true]);
			dataLayer.push({
				'eventAdBlock.category': 'FAB New Adblock',
				'eventAdBlock.action': 'Blocked',
				'eventAdBlock.label': 'Blocked-Ads',
				'eventAdBlock.value': 0,
				'event': 'eventAdBlock'
			});
//			console.log('Ad Block is detected');
		}

		if(typeof fAB === 'undefined') {
			adBlockDetected();
		} else {
			fAB.onDetected(adBlockDetected);
			fAB.onNotDetected(adBlockNotDetected);
		}
	</script>
	<!--End NEW FAB Adblock Check-->

