			<script>
				jQuery(document).ready(function() {
					jQuery('#su-footer #newsletter-form').validate({
						rules: {
							email: {
								required: true
								,email: true
							}
						},
						errorPlacement: function(error, element) {
							error.appendTo( '.error' );
						},
						submitHandler: function(form) {
							jQuery.ajax({
								url: '/subscribe/v3/newsletter',
								dataType: 'json',
								type: "GET",
								data:{email: jQuery('#su-footer #footer-email').val()},

								success: function(data) {
									jQuery('#su-footer #email-store').val(jQuery('#su-footer #footer-email').val());
									jQuery('#su-footer #su-button').hide();
									jQuery('#su-footer #newsletter-store-form').show();
									jQuery('#su-footer #newsletter-form #footer-email').hide();
									jQuery('#su-footer #su-text').html('<span>Congratulations</span>, you\'re subscribed!<br><br>WOULD YOU ALSO LIKE TO RECEIVE EXCLUSIVE DEALS FROM THE<br> mental_floss store AND SAVE 15% ON YOUR FIRST ORDER?');
								},
								error: function(data) {
									jQuery('#su-footer #su-text').html('Let\'s try your <span>email address</span> again!');
									jQuery('#su-footer #footer-email').val('OOOPS!').css('color','#f16566');
								}
							});
						}
					});
				});

			</script>

			<script>
				jQuery(document).ready(function() {     // second form for store newsletter
					jQuery('#su-footer #newsletter-store-form').validate({
						rules: {
							email: {
								required: true
								,email: true
							}
						},
						errorPlacement: function(error, element) {
							error.appendTo( '.error' );
						},
						submitHandler: function(form) {
							jQuery('#su-store-button').attr('disabled', 'disabled').css('opacity','.4');
							jQuery.ajax({
								url: '/subscribe/v3/store',
								dataType: 'json',
								type: "GET",
								data:{email: jQuery('#su-footer #email-store').val()},
								success: function(data) {
									jQuery('#su-footer #su-store-button, #su-footer #email-store').hide();
									jQuery('#su-footer #su-text').html('<span>THANK YOU! BRACE YOURSELF</span><span style=\'font-weight:200\'> - SAVINGS ARE ON THEIR WAY TO YOUR INBOX.</span>');
								},
								error: function(data) {
									jQuery('#su-store-text').html('Let\'s try your <span>email address</span> again!');
									jQuery('#email-store').val('OOOPS!').css('color','#f16566');
								}
							});
						}
					});

				});

			</script>

