	function checkAds() {
		setTimeout(function(){
    		if ( (jQuery(".dfp-tag-wrapper div").height() > 0) || (jQuery(".dfp-tag-wrapper").height() > 0) ){
    			_gaq.push(['_trackEvent', 'Adblock', 'Unblocked','Unblocked-Ads', 0, true]);
    		} else {
    			_gaq.push(['_trackEvent', 'Adblock', 'Blocked', 'Blocked-Ads', 1, true]);
    		}
		}, 4000);
	}
</script>
