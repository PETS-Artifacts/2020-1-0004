$(document).ready(function() {

			// HD
		var header = jQuery(".header-desktop");
		var h = header.height();

		function headerCheck() {
			var s = jQuery(window).scrollTop();

			if(s > h) {
				header.addClass("fixed");
			} else {
				header.removeClass("fixed");
			}
		}

		jQuery(window).on("scroll", headerCheck);
		headerCheck();

	});
</script>
