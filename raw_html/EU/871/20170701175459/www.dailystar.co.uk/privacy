        var updateViewport = function () {
            setTimeout(function () {
                if ($(window).width() < 700) {
                    var initialscale = $(window).width() / 768;
                    $('meta[name=viewport]').attr('content','width=768, initial-scale=' + initialscale.toString().match(/^-?\d+(?:\.\d{0,1})?/)[0]);
                } else {
                    $('meta[name=viewport]').attr('content','width=device-width, initial-scale=1.0');
                }
            }, 0);
        };

        updateViewport();
        $(window).on('orientationchange', updateViewport);

            });

