    		        	    <script>
    var InskinControls = {
        InskinControl : {
            BurgerFunction : {},
            inskin_delay : 4500,
            timeSinceWindowLoad : 0,
            actualTimeSinceWindowLoad : 0,
            shouldDelayScroll : true,
            userHasScrolled : false,
            advertDelayCounter : null,
            CssFunction : null,
            SecondayCssFunction : null,
            advertType : null,
            divId : null,
            SecondaryDivId : null,
            backgroundJob : null,
            originalBackground : null,
            hasInskinJoinedUs : false,
            hasTemplateAndSuperbanner : 0,
            inskinTop : 0,
            startTime : 0,
            deltaTime : 0,
            deltaDiff : 0,
            adslotChanges : 0,
            DelayScroll : function (divId, type) {

             App.InskinControl.inskinTop =  0;
             if (App.InskinControl.shouldDelayScroll == true) {
                    $('#superbanner').css({margin: '0 auto 10px', height: 'auto'});
                    App.InskinControl.advertType = type;
                    if (!App.InskinControl.divId) {
                        App.InskinControl.divId = divId;
                    } else {
                        App.InskinControl.SecondaryDivId = divId;
                    }
                    switch (type) {
                        case 'superbanner':
                            $(window).resize(function(){
                                App.InskinControl.Resize();
                            });
                            document.addEventListener('megabanner', function (e) {
                                if($('#' + App.InskinControl.divId + ' > div > iframe').length !== 0) {
                                  $('#' + App.InskinControl.divId + ' > div > iframe').contents().bind('DOMSubtreeModified', function(el) {
                                    if (el.target.innerHTML.length > 0) {
                                        $iframe = $('#' + App.InskinControl.divId + ' > div > iframe');
                                        App.InskinControl.adslotChanges++;
                                        if((($iframe.width() === 970 && $iframe.height() === 250) ||
                                            $iframe.width() === 728 && $iframe.height() === 90) && this.actualTimeSinceWindowLoad < 4500) {
                                               console.log('iframe contents have changed');
                                               App.InskinControl.StartTheClock();
                                               App.InskinControl.shouldDelayScroll = true;
                                               App.InskinControl.RefreshTheClock();
                                        }
                                    }
                                  });
                                }
                            }, false);
                            var megaevent = document.createEvent('Event');
                            megaevent.initEvent('megabanner', true, true);
                            document.dispatchEvent(megaevent);

                            $('body').css({backgroundColor: '#f4f4f4'});
                            $('#maincontainer').css({paddingTop: '3px'});
                            $('#maincontainer header').css({borderTop: 'none'});
                            $('#superbanner').css({marginBottom: '0'});
                            $('.trendingTopics li:first-child').css({marginLeft: '10px'});
                            $('div#maincontainer.container').css({paddingTop:0});
                            $('#' + divId).css({padding: '10px 5px'});
                            $('nav.row.sections.main-navi').css({overflowX: 'hidden'});
                            App.InskinControl.Resize();
                            App.InskinControl.hasTemplateAndSuperbanner++;
                            console.log('superbanner');
                            App.InskinControl.addShadow();
                            if (!App.InskinControl.hasInskinJoinedUs) {
                                App.InskinControl.DoTheSticky();
                            }
                            App.InskinControl.hasInskinJoinedUs = true;
                            console.log(App.InskinControl.hasTemplateAndSuperbanner);
                        break;
                    }
                }
            },
            DoTheSticky : function(){
                
               if (App.InskinControl.shouldDelayScroll == true ) {
                   var tmpfunc = setInterval(function(){
                       App.InskinControl.checkForTwoAdverts('superbanner');
                       if (App.InskinControl.hasTemplateAndSuperbanner > 1) {
                       }
                       if ($(window).scrollTop() > App.InskinControl.inskinTop) {
                          
                          if (!App.InskinControl.userHasScrolled) {
                               App.InskinControl.startTime =  Date.now();
                          }
                          App.InskinControl.userHasScrolled = true;
                          
                          var thediv = App.InskinControl.divId;

                          bannerContainerWidth = $('.page-content').width() + 40;
                          leftpos = (($(window).width() - Math.max($('#' + thediv + ' div iframe').width(), bannerContainerWidth))/2) - 5;
                          if ($(window).width() < 800) leftpos = 0;
                          if ($(window).width() < 980) leftpos = Math.max(leftpos, 0);
                          heightval = $('#' + thediv).height() + 20;
                          $('#superbanner').css({marginBottom: '0'});
                          $('#' + thediv).css({minWidth: bannerContainerWidth + 'px', left: leftpos +'px', top:0, position: 'fixed', zIndex: 9998500, marginBottom: 0, padding: '10px 5px', background: '#f4f4f4'}).parent().css({height : heightval + 1});
                                                         if ($.fn.stickyPlayer) {
                                   // send message to the sticky player to set height as heightval + 20;
                                   window.ns_video_player_topPosition = heightval + 20;
                               }
                                                  }
                   }, 100);
                   if (App.InskinControl.hasTemplateAndSuperbanner > 1) {
                       App.InskinControl.SecondayCssFunction = tmpfunc;
                       $('#superbanner').css({position: 'relative',zIndex:6000 }); // height:0, margin:0,
                       $('.bodywrapper').css({marginTop:  '-' + ($('#superbanner').first('iframe').height() - 10) + 'px'});
                   } else {
                       App.InskinControl.removeShadow();
                       App.InskinControl.CssFunction = tmpfunc;
                   }
               }
            },
            Resize : function (){
                bannerContainerWidth = $('.page-content').width() + 40;
                leftpos = (($(window).width() - Math.max($('#' + App.InskinControl.divId + ' div iframe').width(), bannerContainerWidth))/2) - 5;
                if ($(window).width() < 800) leftpos = 0;
                if ($(window).width() < 980) leftpos = Math.max(leftpos, 0);
                $('#' + App.InskinControl.divId).css('width', 'auto').css('cssText', $('#' + App.InskinControl.divId).attr('style')  + '; margin-bottom:0; box-shadow: rgba(0, 0, 0, 0.13) 0 10px 5px -5px;  width: ' + bannerContainerWidth + 'px !important;left: ' + leftpos +'px');
                
                if (App.InskinControl.hasTemplateAndSuperbanner > 1) {
                     //$('#superbanner').css({height:0, margin:0});
                     $('#' + App.InskinControl.divId).css({lineHeight:0});
                }
            },
            SplitTheBackground : function(){
            },
            addShadow : function(){
                //$('.headerShell').addClass('shadow');
                //$('#maincontainer').addClass('shadow');
            },
            removeShadow : function(){
                //$('.headerShell').removeClass('shadow');
                //$('#maincontainer').removeClass('shadow');
            },
            checkForTwoAdverts : function(whichTemplate){
                if ($('#div-gpt-ad--1 div iframe').width() == 0 || !$('#superbanner').is(':visible')) {
                    App.InskinControl.hasTemplateAndSuperbanner = 1;
                    App.InskinControl.removeShadow();
                }
            },
            SetTheBackground : function(){
            },
            StartTheClock : function(){
                if (App.InskinControl.timeSinceWindowLoad === 0) {
                    App.InskinControl.startTime =  Date.now();
                    App.InskinControl.advertDelayCounter = setInterval(function(){
                            App.InskinControl.UpdateSeconds();
                        }, 100);
                }
            },
            RefreshTheClock : function(){
                this.timeSinceWindowLoad = 1;
            },
            UpdateSeconds : function(){
                /*
                if ($('.ism-frame').length) {
                    $('#superbanner').css({height:0});
                }
                */
                if (!App.InskinControl.hasInskinJoinedUs) {

                }
                if ($(window).scrollTop() > App.InskinControl.inskinTop) {
                    deltaTime = Date.now() - App.InskinControl.startTime;
                    App.InskinControl.deltaDiff = deltaTime - App.InskinControl.deltaTime;
                    App.InskinControl.deltaTime = deltaTime;
                	this.timeSinceWindowLoad += App.InskinControl.deltaDiff;
                	this.actualTimeSinceWindowLoad += App.InskinControl.deltaDiff;
                }
                if (this.timeSinceWindowLoad > App.InskinControl.inskin_delay && App.InskinControl.hasInskinJoinedUs == true) {
                    App.InskinControl.PutAdvertBack();
                }
            },
            PutAdvertBack : function (){
                window.clearInterval(App.InskinControl.CssFunction);
                window.clearTimeout(App.InskinControl.backgroundJob);
                if (App.InskinControl.hasTemplateAndSuperbanner > 1) {
                    window.clearInterval(App.InskinControl.SecondayCssFunction);
                }
                App.InskinControl.shouldDelayScroll = false;
                window.clearInterval(App.InskinControl.advertDelayCounter);
                switch (App.InskinControl.advertType) {
                    case 'superbanner':
                        var thediv = App.InskinControl.divId;
                        maxanimation = -1 * $('#' + thediv).height();
                        if (($(window).scrollTop() - $('#superbanner').offset().top) < $('#' + thediv).height()) maxanimation = -1 * ($(window).scrollTop() - $('#superbanner').offset().top);
                        $('#' + thediv).animate({top : maxanimation + 'px'}, 1000, function(){
                           $('#' + thediv).css({zIndex: 500, position: 'static', padding: '10px 0', background: 'transparent', width: 'auto !important', minWidth: '1px', boxShadow: 'none'});
                        });
                                                     // send message to the sticky player to set height as 0
                             if ($.fn.stickyPlayer) {
                                 window.ns_video_player_topPosition = 0;
                             }
                        
                    break;
                }
                App.InskinControl.SecondaryDivId = null;
            }
        }
    };

    $.extend(App, InskinControls);
    $(window).load(function(){
        App.InskinControl.StartTheClock();
    });
    $(function(){
        setTimeout(function(){
            App.InskinControl.StartTheClock();
        }, 2000);
    });
</script>
