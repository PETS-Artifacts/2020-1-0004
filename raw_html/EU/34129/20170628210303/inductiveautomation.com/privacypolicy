<script>
    if (document.referrer.match(/google\.com/gi) && document.referrer.match(/cd/gi)) {
        var myString = document.referrer;
        var r = myString.match(/cd=(.*?)&/);
        var rank = parseInt(r[1]);
        var kw = myString.match(/q=(.*?)&/);

        if (kw[1].length > 0) {
            var keyWord = decodeURI(kw[1]);
        } else {
            keyWord = "(not provided)";
        }

        var p = document.location.pathname;
        _gaq.push(['_trackEvent', 'RankTracker', keyWord, p, rank, true]);
    }
</script>

<script type="text/javascript">

    function splitCookie(c_name) {
        var c_value = document.cookie;
        var c_start = c_value.indexOf(" " + c_name + "=");
        if (c_start == -1) {
            c_start = c_value.indexOf(c_name + "=");
        }
        if (c_start == -1) {
            c_value = null;
        }
        else {
            c_start = c_value.indexOf("=", c_start) + 1;
            var c_end = c_value.indexOf(";", c_start);
            if (c_end == -1) {
                c_end = c_value.length;
            }
            c_value = unescape(c_value.substring(c_start, c_end));
        }

        var mkto_id = c_value.substring(c_value.indexOf("id:") + 3, c_value.indexOf("&"));
        var mkto_token = c_value.substring(c_value.indexOf("token:") + 6, c_value.length);

        document.cookie = "_mkto_id=" + mkto_id;
        document.cookie = "_mkto_token=" + mkto_token;
    }

    Munchkin.init('966-TUX-261');
    $(window).load(function () {
        splitCookie("_mkto_trk");
    });

</script>



