    <script type="text/javascript">
        $(document).ready(function () {

            $('a.pr-submit').click(function () {
                var form = $(this).closest('#pr-form');

                var valid = validateForm(form);
                
                var mailParent = $('#pr-email-parent', form);
                showValidStatus(mailParent, true);
                if (!isEmail($('#pr-email', form).attr('value'))) {
                    valid = false;
                    showValidStatus(mailParent, false);
                }

                var phoneParent = $('#pr-phone-parent', form);
                showValidStatus(phoneParent, true);
                var phone = $('#pr-phone', form).val();
                if (phone.length > 0) {
                    if (!isPhone(phone)) {
                        valid = false;
                        showValidStatus(phoneParent, false);
                    }
                }

                $('#errorMsgCheckInGreaterThanCheckOutProposalReq').hide();
                if ($("#pr_checkin").val().length > 0 && $("#pr_checkout").val().length) {
                    var checkoutParent = $('#pr-date-time-checkout', form);
                    showValidStatus(checkoutParent, true);
                    var checkinDT = $("#pr_checkinDP").datepicker('getDate');
                    var checkoutDT = $("#pr_checkoutDP").datepicker('getDate');
                    if (checkinDT > checkoutDT) {
                        valid = false;
                        showValidStatus(checkoutParent, false);
                        $('#errorMsgCheckInGreaterThanCheckOutProposalReq').show();
                    }
                }
                            
                if (!valid) {
                    $('#pr-required-fields', form).css('color', '#FF3900');
                    $('#pr-required-fields', form).addClass('invalid');
                    return false;
                }
                $('#pr-required-fields', form).css('color', '');
                $('#pr-required-fields', form).removeClass('invalid');
                var data = getFormData(form);

                data += "||SpecialOffers~~";
                data += ($('#chb_Promo', form).attr('checked') == 'checked') ? '&#x2611;' : '&#x2610;';
              
                submitForm('REQUEST_FOR_PROPOSAL', data, $('#pr-email', form).attr('value'), function (result) {
                    $('#pr-entry', form).hide();
                    $('#pr-success', form).show();

                    if (result == true) {
                        //var date = $('#pr_select_date', form).attr('value');
                        //var time = $('#pr_select_time', form).attr('value');
                        //$('#pr-success-text', form).html($('#pr-success-text', form).html().replace('{date}', date).replace('{time}', time));
                        $('#pr-success-text', form).show();
                        $('#pr-error-text', form).hide();
                        //$(".contactus-back").click(function () {
                        //    $(this).closest(".contact-popup").find(".contact-slide-1").hide();
                        //    $(this).closest(".contact-popup").find(".contact-slide-2").hide();
                        //    $(this).closest(".contact-popup").find(".contact-slide-2-pr").show();
                        //    return false;
                        //});
                    }
                    else {
                        $('#pr-success-text', form).hide();
                        $('#pr-error-text', form).show();
                    }
                });
                return false;
            });
        });
</script>

</div>


