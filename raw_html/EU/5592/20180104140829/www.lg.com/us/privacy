	<script type="text/javascript">
var referrerUrl = document.referrer;
var cookieUtid = getUtidForCookie(); //cookie 에서 utid 가져오기
var urlUtid = getUtidForUrl(); //url 에서 utid 가져오기
var utidValue = 'direct';
var utidList = 'SVIPs_HA_S1,VIPs_HE_S4,xOWN_HE_S4,REHR_HE_S4,TWVIP,TWOWN,HR_HA_S1,SVIPs_HA_S1,VIPs_HA_S1,OWN_HA_S1,xOWN_HA_S1,REHR_HA_S1,HR_HA_S1,SVIPs_HA_S1,VIPs_HA_S1,OWN_HA_S1,xOWN_HA_S1,REHR_HA_S1,HR_HA_S1,SVIPs_HA_S1,VIPs_HA_S1,OWN_HA_S1,xOWN_HA_S1,REHR_HA_S1,grm01a,grm01b,DIG01,DIG02,DIG03,DIG04,DIG05,DIG06,DIG07,DIG08,DIG09,DIG10,DIG11,DIG12,DIG13,DIG14,DIG15,DIG16,DIG17,DIG18,DIG19,DIG20,DIG21,DIG22,DIG23,DIG24,DIG25,DIG26,DIG27,DIG28,DIG29,DIG30,DIG31,DIG32,DIG33,DIG34,DIG35,DIG36,DIG37,DIG38,DIG39,DIG40,DIG41,DIG42,DIG43,DIG44,DIG45,DIG46,DIG47,DIG48,DIG49,DIG50';
var serverUtidUrl = 'http://www.lg.com/us';
var serverUtidUrlSSL = 'https://www.lg.com/us';

var isInternalUrl = false;
var isUtidCookie = false;
var isUrlUtid = false;
var existsUtid = false;

if(referrerUrl != null && '' != referrerUrl){
	if(referrerUrl.indexOf(serverUtidUrl) > -1 || referrerUrl.indexOf(serverUtidUrlSSL) >-1){
		isInternalUrl = true;
	}
}

if(cookieUtid != null && '' != cookieUtid){
	isUtidCookie = true;
}

if(urlUtid != null && '' != urlUtid){
	isUrlUtid = true;
}
if(!isUtidCookie || isUrlUtid || (!isInternalUrl && referrerUrl != null && '' != referrerUrl)){
	if(referrerUrl != null && '' != referrerUrl){
		utidValue = referrerUrl;
	}
	
	if(isUrlUtid){
		if(null!=urlUtid && ''!=urlUtid){
  			utidValue = urlUtid;
		}else{
  			utidValue = 'direct';
		}
		//LGEUS-9077 START
		/* var utidList1 = utidList.split(",");
  		for(var i=0;i<utidList1.length;i++){
  			if(utidList1[i]==urlUtid){
  				existsUtid = true;
  				break;
  			}
  		}
  		if(existsUtid){
  			utidValue = urlUtid;
  		}else{
  			utidValue = 'direct';
  		} */
		//LGEUS-9077 END
	}
	document.cookie = 'UTID=' + utidValue + '; path=/';
}

function getUtidForCookie() {
	var val = "";
	var allcookies = document.cookie;  
    var cookies = allcookies.split("; ");
    for (var i = 0; i < cookies.length; i++) {
        var keyValues = cookies[i].split("=");
        if (keyValues[0] == "UTID") {
            val = unescape(keyValues[1]);
            break;
        }
    }
    return val;
}

function getUtidForUrl() {
    var args = '';
    var query = location.search.substring(1);
    var pairs = query.split('&');
    var utidList2 = 'SVIPs_HA_S1,VIPs_HE_S4,xOWN_HE_S4,REHR_HE_S4,TWVIP,TWOWN,HR_HA_S1,SVIPs_HA_S1,VIPs_HA_S1,OWN_HA_S1,xOWN_HA_S1,REHR_HA_S1,HR_HA_S1,SVIPs_HA_S1,VIPs_HA_S1,OWN_HA_S1,xOWN_HA_S1,REHR_HA_S1,HR_HA_S1,SVIPs_HA_S1,VIPs_HA_S1,OWN_HA_S1,xOWN_HA_S1,REHR_HA_S1,grm01a,grm01b,DIG01,DIG02,DIG03,DIG04,DIG05,DIG06,DIG07,DIG08,DIG09,DIG10,DIG11,DIG12,DIG13,DIG14,DIG15,DIG16,DIG17,DIG18,DIG19,DIG20,DIG21,DIG22,DIG23,DIG24,DIG25,DIG26,DIG27,DIG28,DIG29,DIG30,DIG31,DIG32,DIG33,DIG34,DIG35,DIG36,DIG37,DIG38,DIG39,DIG40,DIG41,DIG42,DIG43,DIG44,DIG45,DIG46,DIG47,DIG48,DIG49,DIG50';
    var args1 = '';
    for (var i = 0; i < pairs.length; i++) {
       var pos = pairs[i].indexOf('=');
       if (pos == -1) continue;
       var argname = pairs[i].substring(0, pos);
       if (argname=='utid'){
    	   args1 = decodeURIComponent(pairs[i].substring(pos+1));
    	   break;
       }
    }
  	//LGEUS-9077 START
    if(args1 != ''){
    	if(args1.match(/CRM(\d{1,3}$)/)||args1.match(/CRM(\d{1,4}$)/)){
			args = args1;
    	}else{
		    var utidList1 = utidList2.split(',');
			for(var j=0;j<utidList1.length;j++){
				if(utidList1[j]==args1){
					args = args1;
					break;
				}
			}
    	}
		if(''==args){
			args = 'direct';
		}
    }
  	//LGEUS-9077 END
    return args;
}
</script>
