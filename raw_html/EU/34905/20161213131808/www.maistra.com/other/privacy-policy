function daysInMonth(month,year) {
    return new Date(year, month, 0).getDate();
}

$('#w1').change(function() {
  var drugi = $('.datepicker2').val();
  var arrivalDate = $('#w1').val();

  if( drugi == arrivalDate ) {

      var dateParts = arrivalDate.split('.');
      var y = parseInt(dateParts[2], 10);
      var m = parseInt(dateParts[1], 10);
      var d = parseInt(dateParts[0], 10);
      console.log(daysInMonth(m,y));
      if(daysInMonth(m,y) == d){
      var MyDate = new Date(y, m+1, 1);
      }else{
      var MyDate = new Date(y, m, d+1);
      }

      var datum = ('0' + MyDate.getDate()).slice(-2) + '.'
             + ('0' + (MyDate.getMonth())).slice(-2) + '.'
             + MyDate.getFullYear();
      $('.datepicker2').val(datum);
    }
});

