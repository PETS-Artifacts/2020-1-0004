$('#w1').change(function() { // DATUM
  var date_range = $(this).val().split(' → ');  
  var href = $('#book-now').attr('href');
  $('#book-now').attr('disabled', true); 
  $('#book-now').html('<div class="loader"></div>');
    
    $.ajax({
            url: '/promjenasession/datumsession',
            type: 'POST',
            dataType: 'json',
             data: {check_in: date_range[0], check_out: date_range[1]},
             success: function(data) {
                //console.log('dodan check:' + data);
                $('#book-now').removeAttr('disabled');
                $('#book-now').html('Search');
  
             },
             error: function(xhr){
                
                //console.log("An error occured: " + xhr.status + " " + xhr.statusText);
                $('#book-now').removeAttr('disabled');
                $('#book-now').html('Search');
            }
       });
}); //#datum.change() END

function changeDateTo (min_date) {

  min_date.setDate(min_date.getDate() + 1);
  var month = min_date.getMonth() + 1; //months from 1-12
  if (month<10) {
    month = '0'.concat(month);
  }
  var day = min_date.getDate();
  if (day<10) {
    day = '0'.concat(day);
  }
  var year = min_date.getFullYear();

  min_date = year + "-" + month + "-" + day;
  
  if(min_date!='NaN-NaN-NaN'){
    $( "input[name='check-out-mobile']" ).attr('min', min_date); 
  }  
  
  if (min_date > $( "input[name='check-out-mobile']" ).val()) {
    $( "input[name='check-out-mobile']" ).val(min_date); 
  }
  

}

changeDateTo(new Date($( "input[name='check-in-mobile']" ).val()));


$( "input[name='check-in-mobile']" ).change(function() {
   changeDateTo(new Date($( "input[name='check-in-mobile']" ).val()));
   date_range = $( "input[name='check-in-mobile']" ).val();
   date_range2 = $( "input[name='check-out-mobile']" ).val();
   $.ajax({
            url: '/promjenasession/datumsessionin',
            type: 'POST',
            dataType: 'json',
             data: {check_in: date_range, check_out: date_range2},
             success: function(data) {
                //console.log('dodan check:' + data);
             },
             error: function(xhr){
                //console.log("An error occured: " + xhr.status + " " + xhr.statusText);
            }
       });
});


$( "input[name='check-out-mobile']" ).change(function() {
   date_range = $( "input[name='check-out-mobile']" ).val();
   $.ajax({
            url: '/promjenasession/datumsessionout',
            type: 'POST',
            dataType: 'json',
             data: {check_out: date_range},
             success: function(data) {
                //console.log('dodan check:' + data);
             },
             error: function(xhr){
                //console.log("An error occured: " + xhr.status + " " + xhr.statusText);
            }
       });
});


$( "input[name='promo']" ).change(function() {
   $('#book-now').attr('disabled', true); 
   $('#book-now').html('<div class="loader"></div>');
   var promo = $( "input[name='promo']" ).val();
  
   $.ajax({
            url: '/promjenasession/promo',
            type: 'POST',
            dataType: 'json',
             data: {promo: promo},
             success: function(data) {
                $('#book-now').removeAttr('disabled');
                $('#book-now').html('Search');
                //console.log('dodan promo:' + data);
             },
             error: function(xhr){
                $('#book-now').removeAttr('disabled');
                $('#book-now').html('Search');
                //console.log("An error occured: " + xhr.status + " " + xhr.statusText);
            }
       });
});


