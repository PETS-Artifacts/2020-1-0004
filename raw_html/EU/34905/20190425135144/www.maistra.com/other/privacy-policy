$('.navlnk').click(function(){
var slug = $(this).attr( "title" );
var txt = $(this).html();
if(txt.length > 34)
{
    var txtshort = txt.slice(0,31);
    txt = txtshort + '...';
}

console.log(slug);

if(slug == '/accommodation' || slug == '/accommodation')
{
//var dodatak = '';
var link = slug;
} else {

var link ='//'+slug;
var dodatak = '/accommodation';
link+=dodatak;

link = link.replace('//', '/');
}

$("#book-now").attr('href', link);
$('#objekti').html(txt + '<img src="/images/arrow-grey3.png" class="arrow-menu" alt="arrow" />');
$.ajax({
            url: '/promjenasession/kampsession',
            type: 'POST',
            dataType: 'json',
             data: {id: slug},
             success: function(data) {
                console.log('dodan smjestaj:' + data);
             },
             error: function(xhr){
                console.log("An error occured: " + xhr.status + " " + xhr.statusText);
            }
       });
});

$('#objekti2').change(function() {
  var slug = $(this).val();
  if(slug == 'accommodation' || slug == 'accommodation')
    {
    //var dodatak = '';
    var link ='//'+slug;
    link = link.replace('//', '/');
    } else {
    
    var link ='//'+slug;
    var dodatak = '/accommodation';
    link+=dodatak;
    link = link.replace('//', '/');
    }
  $("#book-now2").attr('href', link);
});

 $('#w1').attr("autocomplete", "off");


 

$(document).ready(function(){

    display_cookie_bar = true;  
    
    function openNav() {
        document.getElementById('mySidenav').style.width = '350px';
        document.getElementById('dark-overlay').style.display = 'block'; 
    }
    
    $('.open-sidebar').click(function(e){
        e.preventDefault();
        $('#cookie_directive_container').hide();      
        openNav();
    });
    
    $('.close-sidebar').click(function(){
        closeNav();
    });
        
    $('#dark-overlay').click(function(){
        closeNav();
    });
    
    $('#cookies-checkbox').change(function(){
        display_cookie_bar = false;
        
        var is_checked = $('#cookies-checkbox').prop('checked');
        
        if (is_checked)
        {
            setCookieDa();
        } else 
        {
            setCookieNe();
        }
              
    });
        
    function closeNav() {
      document.getElementById('mySidenav').style.width = '0';
        document.getElementById('dark-overlay').style.display = 'none'; 
      if(display_cookie_bar)
        {
            $('#cookie_directive_container').show();
        }
    }    
    
    $('.cookies').click(function(){
        closeNav();
        setCookieDa();
        $('#cookies-checkbox').prop('checked', true);
    });
        
    
    function setCookieDa()
    {
        display_cookie_bar = false; 
        var data_slanje = 1;        
        dataLayer.push({'cookie_consent': 'true', 'event': 'consent_given_maistra'});
        $.ajax({
                    url: '/promjenasession/cookies',
                    type: 'POST',
                    dataType: 'json',
                     data: data_slanje,
                     success: function(data) {
                        console.log('cookies:' + data);
                        $('#cookie_directive_container').hide();
                     },
                     error: function(xhr){
                        console.log('An error occured: ' + xhr.status + ' ' + xhr.statusText);
                    }
        });
    
    }
    
    
    function setCookieNe()
    {
        display_cookie_bar = false; 
        var data_slanje = 1;
        dataLayer.push({
                    'event': 'MaistraGAEvent',
                    'eventCategory': 'Cookies',
                    'eventAction': 'Decline',
        });
        $.ajax({
                    url: '/promjenasession/cookiesne',
                    type: 'POST',
                    dataType: 'json',
                     data: data_slanje,
                     success: function(data) {
                        $('#cookie_directive_container').hide();
                     },
                     error: function(xhr){
                        console.log('An error occured: ' + xhr.status + ' ' + xhr.statusText);
                    }
        });
        
    }

});


});</script></body>
</html>
