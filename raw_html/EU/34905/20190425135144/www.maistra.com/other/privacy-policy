<script>jQuery(function ($) {
jQuery('#w0').carousel();
jQuery("#w1").off('change.kvdrp').on('change.kvdrp', function() {
    var drp = jQuery("#w1").closest('.input-group').data('daterangepicker'), fm, to;
    if ($(this).val() || !drp) {
        return;
    }
    fm = moment().startOf('day').format('DD.MM.YYYY') || '';
    to = moment().format('DD.MM.YYYY') || '';
    drp.setStartDate(fm);
    drp.setEndDate(to);
    
});
if (jQuery('#w1').data('daterangepicker')) { jQuery('#w1').daterangepicker('destroy'); }
jQuery("#w1").closest('.input-group').daterangepicker(daterangepicker_9c3be6eb, function(start,end,label){var val=start.format('DD.MM.YYYY') + ' → ' + end.format('DD.MM.YYYY');jQuery("#w1").val(val).trigger('change');});
jQuery("#w1").closest('.input-group').on('hide.daterangepicker', function(ev, picker) {
        function daysInMonth(month,year) {
            return new Date(year, month, 0).getDate();
        }
        var drugi = picker.endDate.format(picker.locale.format);
        var arrivalDate = picker.startDate.format(picker.locale.format);

        if( drugi == arrivalDate ) {
        var drp = $('#w1').data('daterangepicker');

            var dateParts = arrivalDate.split('.');
            var y = parseInt(dateParts[2], 10);
            var m = parseInt(dateParts[1], 10);
            var d = parseInt(dateParts[0], 10);
            console.log(d);
            console.log(m);
            console.log(y);
            if(daysInMonth(m,y) == d){
                var MyDate = new Date(y, m+1, 1);
                var datum = ('0' + MyDate.getDate()).slice(-2) + '.'
                    + ('0' + (MyDate.getMonth())).slice(-2) + '.'
                    + MyDate.getFullYear();
            }else{
                if(m==12){  // JS bug fix, mjesec prikaze kao 00
                    var novi = d+1;
                    if(novi<10){
                        novi = '0' + novi;
                    }
                    if(m<10){
                        m = '0' + m;
                    }

                    var datum = novi + '.' + m + '.' + y;


                    console.log(datum);
                }else{
                    var MyDate = new Date(y, m, d+1);
                    var datum = ('0' + MyDate.getDate()).slice(-2) + '.'
                        + ('0' + (MyDate.getMonth())).slice(-2) + '.'
                        + MyDate.getFullYear();
                    console.log(datum);    
                }
            }
            picker.setEndDate(datum);
        }

});
jQuery("#w1").closest('.input-group').on('cancel.daterangepicker', function(ev, picker) {
$('#w1').val('');
$('#book-now').attr('disabled', true); 
$('#book-now').html('<div class="loader"></div>');
$.ajax({
            url: '/promjenasession/obrisidatum',
            type: 'POST',
            dataType: 'json',
             data: {id: 1},
             success: function(data) {
                console.log('obrisan datum:' + data);
                $('#book-now').removeAttr('disabled');
                $('#book-now').html('Search');
             },
             error: function(xhr){
                console.log("An error occured: " + xhr.status + " " + xhr.statusText);
                $('#book-now').removeAttr('disabled');
                $('#book-now').html('Search');
            }
       }); 
});


