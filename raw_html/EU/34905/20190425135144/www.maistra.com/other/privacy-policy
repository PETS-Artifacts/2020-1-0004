  if($(window).scrollTop()>100) { 
     $('.back-to-top-btn-main').fadeIn(0);
  }
   
   
  $(window).scroll(function() {
  
      if($(window).scrollTop()>200) { 
         $('.back-to-top-btn-main').fadeIn(500);
      } else {
         $('.back-to-top-btn-main').fadeOut(200);
      }
      
  }); 
  
  $(".back-to-top-btn-main").click(function() {
    $("html, body").animate({ scrollTop: 0 }, "slow");
    return false;
  });
    
    
  

 

